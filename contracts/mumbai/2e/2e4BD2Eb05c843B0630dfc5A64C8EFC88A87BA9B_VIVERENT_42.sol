import "ERC20.sol";
import "Ownable.sol";
import "ECDSA.sol";
import "ReentrancyGuard.sol";

    error SoldOut();
    error ValueTooLow();
    error NotAuth();
    error NonceTooLow();
    error RoundSoldOut();
    error SaleNotStarted();

/// @custom:security-contact
contract VIVERENT_42 is ERC20, Ownable, ReentrancyGuard {
    using ECDSA for bytes32;

    uint public maxSupply = 101000;

    mapping(address => uint) public nonces;

    mapping(address => bool) approvedReceiver;
    bool tradingEnabled = false;

    struct MintPhase {
        string name;
        bool phase_start;
        uint max;
        uint sold;
        address mintAddress;
        uint price;
    }

    address private payoutAddress = 0x20c18F334486C68C70439e3F2723B489003CA947;
    address public pooledAddress = 0x20c18F334486C68C70439e3F2723B489003CA947;

    mapping(string => address) tokenAddresses;

    mapping(string => MintPhase) public mint_phases;

    event MINT_WITH_ETH(string phase, address indexed wallet, uint amount, uint payout);
    event MINT_WITH_TOKEN(string phase, address indexed wallet, uint amount, uint payout, string token);
    event MINT_WITHOUT_ETH(string phase, address indexed wallet, uint amount, uint uid);

    constructor() ERC20("VIVERENT_42", "PRB1") {
        

        
        mint_phases["privada"].name = "privada";
        mint_phases["privada"].phase_start = true;
        mint_phases["privada"].max = 100000;
        mint_phases["privada"].sold = 0;
        mint_phases["privada"].mintAddress = 0x8293C31a21d5F55e3CB855fC277df810e3C5d249;
        
        mint_phases["privada"].price = 0;
        
        
        mint_phases["publica"].name = "publica";
        mint_phases["publica"].phase_start = true;
        mint_phases["publica"].max = 1000;
        mint_phases["publica"].sold = 0;
        mint_phases["publica"].mintAddress = 0x88433C9bE72fCBA4E502b02F8F509d784182599c;
        
        mint_phases["publica"].price = 0;
        
        

        

        approvedReceiver[msg.sender] = true;
    }

    function decimals() public view virtual override returns (uint8) {
        return 0;
    }

    /* MINTING */
    function mint(address to, uint256 amount) public onlyOwner {
        _mint(to, amount);
    }


    // END MINTING


    // TRANSFER
    //Override the transfer function
    function transfer(address to, uint256 amount) public override returns (bool)
    {
        require(approvedReceiver[msg.sender] || tradingEnabled, "Trading is not live");
        return super.transfer(to, amount);

    }


    function transferFrom(address from, address to, uint256 amount)  public override returns (bool) {
        require(approvedReceiver[from] || tradingEnabled, "Trading is not live");
        return super.transferFrom(from, to, amount);
    }

    // END TRANSFER


    function withdraw() external onlyOwner {
        uint256 contractBalance = address(this).balance;
        (bool os,) = payable(owner()).call{value : contractBalance}("");
        require(os);

        
    }

    // SETTERS

    function setPayoutAddress(address _newAddress) external onlyOwner {
        require(_newAddress != address(0), "CAN'T PUT 0 ADDRESS");
        payoutAddress = _newAddress;
    }

    function setPooledAddress(address _newAddress) external onlyOwner {
        require(_newAddress != address(0), "CAN'T PUT 0 ADDRESS");
        pooledAddress = _newAddress;
    }

    function setMaxSupply(uint amount) external onlyOwner {
        require(amount > 0, "CAN'T PUT 0 MAX");
        maxSupply = amount;
    }

    function setReceiverStatus(address receiver, bool status) public onlyOwner {
        require(receiver != address(0), "CAN'T PUT 0 ADDRESS");
        approvedReceiver[receiver] = status;
    }

    function setTradingEnabled(bool status) external onlyOwner {
        tradingEnabled = status;
    }

    function setPrice(string calldata phase, uint64 _newPrice) external onlyOwner {
        mint_phases[phase].price = _newPrice;
    }


    function setMintAddress(string calldata phase, address _newAddress) external onlyOwner {
        require(_newAddress != address(0), "CAN'T PUT 0 ADDRESS");
        mint_phases[phase].mintAddress = _newAddress;
    }

    function setPhaseStart(string calldata phase, bool _newStatus) external onlyOwner {
        mint_phases[phase].phase_start = _newStatus;
    }

    function setMax(string calldata phase, uint _newMax) external onlyOwner {
        require(_newMax > 0, "CAN'T PUT 0 MAX");
        require(_newMax <= maxSupply, "Cant Increase Size Of Collection");
        mint_phases[phase].max = _newMax;
    }

    


    // END SETTERS

    //SIGNATURE VERIFICATION

    /*@dev helper function for WL sale
            returns true if reference address and signature match
            false otherwise
            Read more about ECDSA @openzeppelin https://docs.openzeppelin.com/contracts/2.x/utilities
        */
    function verifyAddressSigner(address referenceAddress,bytes32 messageHash,bytes memory signature) internal pure returns (bool) {
        return referenceAddress == messageHash.toEthSignedMessageHash().recover(signature);
    }


    // @dev, helper hash function for WL Mint
    function hashMessage(uint number, uint nonce, address sender) private pure returns (bytes32)
    {
        return keccak256(abi.encodePacked(number, nonce, sender));
    }

    function hashMessageToken(uint number, uint price, uint nonce, address sender) private pure  returns (bytes32)
    {
        return keccak256(abi.encodePacked(number, price, nonce, sender));
    }

    //END SIGNATURE VERIFICATION


    // PHASES


    function mintWithEth(string calldata phase, uint amount, uint nonce, bytes memory signature) external payable {

        if (!mint_phases[phase].phase_start) revert SaleNotStarted();
        if (nonce < nonces[msg.sender] + 1) revert NonceTooLow();
        if (totalSupply() + amount > maxSupply) revert SoldOut();
        if (mint_phases[phase].sold + amount > mint_phases[phase].max) revert RoundSoldOut();
        if (!verifyAddressSigner(mint_phases[phase].mintAddress, hashMessage(amount, nonce, msg.sender), signature)) revert NotAuth();
        if (msg.value < amount * mint_phases[phase].price) revert ValueTooLow();

        _mint(msg.sender, amount);

        nonces[msg.sender] = nonce;
        mint_phases[phase].sold += amount;

        uint payout = amount * mint_phases[phase].price;
        (bool os,) = payable(payoutAddress).call{value : payout}("");

        emit MINT_WITH_ETH(phase, msg.sender, amount, payout);

    }


    //@dev minting pay offchain
    function mintWithoutEth(string calldata phase, uint amount, uint nonce, bytes memory signature, uint uid) external {
        if (!mint_phases[phase].phase_start) revert SaleNotStarted();
        if (nonce < nonces[msg.sender] + 1) revert NonceTooLow();
        if (mint_phases[phase].sold + amount > mint_phases[phase].max) revert RoundSoldOut();
        if (!verifyAddressSigner(mint_phases[phase].mintAddress, hashMessage(amount, nonce, msg.sender), signature)) revert NotAuth();

        _mint(pooledAddress, amount);

        nonces[msg.sender] = nonce;
        mint_phases[phase].sold += amount;

        emit MINT_WITHOUT_ETH( phase, msg.sender,  amount,  uid);
    }

    






}

