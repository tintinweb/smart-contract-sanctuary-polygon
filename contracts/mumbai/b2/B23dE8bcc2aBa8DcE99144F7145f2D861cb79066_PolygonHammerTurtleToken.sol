     * @dev override for EIP-2771
     * @return calldata the calldata of called function
     */
    function _msgData()
        internal
        view
        virtual
        override(Context, EIP2771Recipient)
        returns (bytes calldata)
    {
        return EIP2771Recipient._msgData();
    }
}

