            bool res = ouibildVault.depositToVault(who, collectionID, amount);
            if(res){
                ouibildToken.safeTransferFrom(who, address(ouibildVault), collectionID, amount, "");
            }
            else {
                revert("Error during deposit into vault");
            }
        }
        ouibildPair.computeNewSpotPrice(amount, collectionID);
        emit TokenBought(amount, collectionID, who);
    }


    function claimRewardsForLockedToken() public onlyOwner {
        /// TODO : send funds to ouibildWallet
        rentPayment.claimAllRent();
    }
}