    constructor(
        address _ouibildToken,
        address _ouibildVault,
        address _rentPayment,
        address _stable1,
        address _stable2
    ) {
        ouibildPair = IOuibildPair(_ouibildToken);
        ouibildToken = IOuibild(_ouibildVault);
        rentPayment = IRentPayment(_rentPayment);
        USDC = IERC20(_stable1);
        USDT = IERC20(_stable2);
