contract OuibildRessel is Ownable, Pausable {

    IOuibildPair public ouibildPair;
    /// @notice reference to the OUIBILD erc1155 token
    IOuibild public ouibildToken;
    /// 
    IOuibildVault public ouibildVault;
    ///
    IRentPayment public rentPayment;
    IERC20 public USDT;
    IERC20 public USDC;
    /// @notice wallet were fund will be transfered
