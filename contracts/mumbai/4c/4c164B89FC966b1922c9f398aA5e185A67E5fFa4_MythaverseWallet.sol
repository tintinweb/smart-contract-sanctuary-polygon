pragma solidity ^0.8.0;

import "./AccessControlCenter.sol";

import "@openzeppelin/contracts/utils/StorageSlot.sol";


contract MythaverseAccessControlled {   
    string constant ACCESS_DENIED_MSG = "Access Denied!"; 
    
    bytes32 constant DEFAULT_ADMIN_ROLE = 0;
    bytes32 constant MIDDLEWARE_ROLE = keccak256("MIDDLEWARE_ROLE");
    bytes32 constant NFT_ROLE = keccak256("NFT_ROLE");

    bytes32 constant CONTROLCENTER_STORAGE_SLOT = keccak256("MythaverseAccessControlled.controlCenter");


    function controlCenter() public view returns(AccessControlCenter) {
        return AccessControlCenter(
            payable(StorageSlot.getAddressSlot(CONTROLCENTER_STORAGE_SLOT).value)
        );
    }
    
    function _setControlCenter(address _controlCenter) internal {
        require(_controlCenter != address(0));

        StorageSlot.getAddressSlot(CONTROLCENTER_STORAGE_SLOT).value = _controlCenter;      
    }

    function setControlCenter(address _controlCenter) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _setControlCenter(_controlCenter);
    }

    function _hasRole(bytes32 role, address account) internal view returns(bool){
        return controlCenter().hasRole(role, account);
    }


    modifier onlyRole(bytes32 role) {
        require(_hasRole(role, msg.sender),
                ACCESS_DENIED_MSG);
        _;
    }

}

