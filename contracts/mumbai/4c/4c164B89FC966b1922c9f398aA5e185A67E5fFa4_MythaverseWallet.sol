pragma solidity ^0.8.0;

import "./MythaverseAccessControlled.sol";

import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";

import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/StringsUpgradeable.sol";

import "@openzeppelin/contracts/utils/StorageSlot.sol";

import "@openzeppelin/contracts-upgradeable/token/ERC1155/utils/ERC1155ReceiverUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

import "./interfaces/IERC1155Purchasable.sol";
import "./interfaces/IERC721Purchasable.sol";

import "./interfaces/IWalletFactory.sol";
import "./interfaces/IAxelarGateway.sol";

contract MythaverseWallet is Initializable, ERC1155ReceiverUpgradeable, MythaverseAccessControlled{
    using SafeERC20Upgradeable for IERC20Upgradeable;
    
    IERC20Upgradeable public immutable pof;
    uint256 public constant withdrawFeePOF = 1 ether; //TODO

    bytes32 constant OWNER_STORAGE_SLOT = keccak256("MythaverseWallet.owner");
    bytes32 constant FACTORY_STORAGE_SLOT = keccak256("MythaverseWallet.factory");

    uint256 public constant withdrawFee = 0.01 ether; //TODO
    
    address public immutable axelarGateWay;
    string constant pofSymbolAxelar = "POF"; //TODO symbol used in the axelar gateway
    
    constructor(
        address _pof,
        address _axelarGateWay
    ) {
        _disableInitializers();
        pof = IERC20Upgradeable(_pof);
        axelarGateWay = _axelarGateWay;
    }

    function initialize(
        IWalletFactory _factory,
        address _controlCenter
    ) external initializer {
        _setControlCenter(_controlCenter);
        __ERC1155Receiver_init();
        StorageSlot.getAddressSlot(FACTORY_STORAGE_SLOT).value = address(_factory);
    }

    function owner() public view returns(address) {
        return StorageSlot.getAddressSlot(OWNER_STORAGE_SLOT).value;
    }

    function factory() public view returns(IWalletFactory) {
        return IWalletFactory(StorageSlot.getAddressSlot(FACTORY_STORAGE_SLOT).value);
    }

    function _setOwner(address owner_) internal {
        StorageSlot.getAddressSlot(OWNER_STORAGE_SLOT).value = owner_;
    }

    function setOwner(address owner_) external {
        if(owner() == address(0)) {
            // set binding at the first time
            require(_hasRole(MIDDLEWARE_ROLE, msg.sender));
        } else {
            require(owner() == msg.sender);
        }
        _setOwner(owner_);
    }

    // TODO remove this function?
    // OR using some higher priviledge role;
    function overwriteOwner(address owner_) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _setOwner(owner_);
    }

    function withdrawERC721(IERC721 token, uint256 id) external onlyRole(MIDDLEWARE_ROLE) {
        require(owner() != address(0));
        token.transferFrom(address(this), owner(), id);
    }

    function withdrawERC1155(IERC1155 token, uint256 id) external onlyRole(MIDDLEWARE_ROLE) {
        require(owner() != address(0));
        token.safeTransferFrom(address(this), owner(), id, 1, "");
    }

 
    function buy1155(address nft, uint256[] calldata ids, uint256[] calldata amounts, uint256 value) external onlyRole(MIDDLEWARE_ROLE) {
        require(_hasRole(NFT_ROLE, nft)); // whitelisted NFT
        IERC1155Purchasable(nft).buy{value: value}(ids, amounts);
    }

    function buy721(address nft, uint256 value) external onlyRole(MIDDLEWARE_ROLE) {
        require(_hasRole(NFT_ROLE, nft)); // whitelisted NFT
        IERC721Purchasable(nft).buy{value: value}();
    }

    function buy1155withPOF(address nft, uint256[] calldata ids, uint256[] calldata amounts, uint256 value) external onlyRole(MIDDLEWARE_ROLE) {
        pof.approve(nft, value);
        IERC1155Purchasable(nft).buyWithPOF(ids, amounts);
    }

    function buy721withPOF(address nft, uint256 value) external onlyRole(MIDDLEWARE_ROLE) {
        require(_hasRole(NFT_ROLE, nft)); // whitelisted NFT
        pof.approve(nft, value);
        IERC721Purchasable(nft);
    }

    function withdrawMatic(uint256 amount) external onlyRole(MIDDLEWARE_ROLE)  {
        require(owner() != address(0));
        require(amount > withdrawFee);
        payable(controlCenter()).transfer(withdrawFee);
        payable(owner()).transfer(amount - withdrawFee);
    }

    function withdrawPOF(uint256 amount) external onlyRole(MIDDLEWARE_ROLE)  {
        require(owner() != address(0));
        require(amount > withdrawFeePOF);
        pof.safeTransfer(address(controlCenter()), withdrawFeePOF);
        pof.safeTransfer(owner(), amount - withdrawFeePOF);
    }

    function chargeMatic(uint256 amount) external onlyRole(MIDDLEWARE_ROLE)  {
        payable(controlCenter()).transfer(amount);
    }

    function chargePOF(uint256 amount) external onlyRole(MIDDLEWARE_ROLE)  {
        pof.safeTransfer(address(controlCenter()), amount);
    }

    /// @dev Allowed the wallet to receive ether
    receive() external payable {

    }


    // allow receiving ERC1155
    function onERC1155Received(
        address operator,
        address from,
        uint256 id,
        uint256 value,
        bytes calldata data
    ) external override pure returns (bytes4) {
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address operator,
        address from,
        uint256[] calldata ids,
        uint256[] calldata values,
        bytes calldata data
    ) external override pure returns (bytes4) {
        return this.onERC1155BatchReceived.selector;
    }

    function settle(uint256 to, uint256 amount) external onlyRole(MIDDLEWARE_ROLE) {
        // sanity check on the amount
        pof.safeTransfer(factory().getWalletAddress(to), amount);
    }

    function settleCrossChain(uint256 to, uint256 amount, string calldata destinationChain) external onlyRole(MIDDLEWARE_ROLE) {
        //TODO if axelar network doesnt
        pof.approve(axelarGateWay, amount);

        //TODO need to verify if the axelar uses checksum address
        //TODO if using uuid => address, it is important that factory are deployed at the same address (CREATE2).
        IAxelarGateway(axelarGateWay).sendToken(
            destinationChain,
            StringsUpgradeable.toHexString(
                factory().getWalletAddress(to)
            ),
            pofSymbolAxelar,
            amount
        );

        pof.approve(axelarGateWay, 0);
    }
}

