contract AccessControlCenter is AccessControlEnumerable { 
    constructor() {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    function setRoleAdmin(bytes32 role, bytes32 adminRole) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(role != DEFAULT_ADMIN_ROLE, 
            "Cannot change the adminRole of DEFAULT_ADMIN_ROLE!");
        _setRoleAdmin(role, adminRole);
    }

    receive() external payable {

    }

    function withdrawMatic(uint256 amount) external onlyRole(DEFAULT_ADMIN_ROLE) {
        payable(msg.sender).transfer(amount);
    }

    function withdrawERC20(IERC20 token, uint256 amount) external onlyRole(DEFAULT_ADMIN_ROLE) {
        token.transfer(msg.sender, amount);
    }
}

