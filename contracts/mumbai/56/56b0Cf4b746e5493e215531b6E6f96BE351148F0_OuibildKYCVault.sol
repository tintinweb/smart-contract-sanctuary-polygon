import "./interfaces/IRentPayment.sol";

contract OuibildKYCVault is Ownable, Pausable {

    /// @notice reference to the OUIBILD erc1155 token
    IOuibild public ouibildToken;
    /// @notice reference to rent contract payment 
    IRentPayment public rentPayment; 

    mapping(address => bool) private vaultController;
    mapping(address => mapping(uint32 => uint256)) private tokenHolderByID;

    /** EVENT **/

    event AddedToVault(address to, uint256 amount, uint32 propertyID);
    event TokenWithdrawed(address to, uint256 amount, uint32 propertyID);

    /** ERROR **/

    error UserNotKYC();
    error Unauthorised();
    error WrongAmount();
    error ClaimError();

    constructor(
        address _ouibildToken,
        address _rentPayment
    ){
        ouibildToken = IOuibild(_ouibildToken);
        rentPayment = IRentPayment(_rentPayment);
    }

    modifier onlyForController(){
        require(vaultController[msg.sender], "Only controller authorized");
        _;
    }

    /** DEPOSIT / WITHDRAW LOGIC **/

    function depositToVault (
        address who, 
        uint256 amount, 
        uint32 propertyID
    ) public onlyForController{
        tokenHolderByID[who][propertyID] += amount;
        
        emit AddedToVault(who, amount, propertyID);
    }

    function withdrawToWallet(uint32 propertyID, address who) public {
        /// safety check, only owner or holder can withdraw his token
        if(msg.sender != owner() && msg.sender != who) revert Unauthorised();
        /// safety check, if the property don't exist, revert. 
        if(tokenHolderByID[who][propertyID] == 0) revert ClaimError();
        /// user must be KYC to withdraw token
        if (!ouibildToken.checkIsKYC(who)) revert UserNotKYC();
        /// we get the amount of token for the holder
        uint256 amountToWithdraw = checkHolderAmount(msg.sender, propertyID);
        /// remove token from the vault mapping
        tokenHolderByID[who][propertyID] -= amountToWithdraw;
        /// we claim all pending rewards for locked tokens
        claimRewardsForLockedToken();
        /// send token the recipient 
        ouibildToken.safeTransferFrom(address(this), who, propertyID, amountToWithdraw, "");
        
        emit TokenWithdrawed(who, amountToWithdraw, propertyID);
    }


    /** VIEWS **/

    function checkHolderAmount(address who, uint32 propertyID) public view returns(uint256) {
        return tokenHolderByID[who][propertyID];
    } 

    /** ONLY OWNER **/

    function addController(address _controller) public onlyOwner {
        vaultController[_controller] = true;
    }

    function claimRewardsForLockedToken() public onlyOwner {
        /// TODO : send funds to ouibildWallet
        rentPayment.claimAllRent();
    }
}