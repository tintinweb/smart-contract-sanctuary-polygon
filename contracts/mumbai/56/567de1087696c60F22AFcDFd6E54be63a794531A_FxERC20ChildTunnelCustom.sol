    event Warning(address indexed to, uint256 amount);
    event SyncDeposit(address msgSender, address rootToken, address depositor, address to, uint256 amount, bytes depositData, uint256 depositNonce);

    // event for token mapping
    event TokenMapped(address indexed rootToken, address indexed childToken);
    event FxChildWithdrawERC20(address msgSender, address rootToken, address childToken, address receiver, uint256 amount);

    // root to child token
    mapping(address => address) public rootToChildTokenCustom;

    uint256 public taxRateBP = 0; // 0.00% interval
    address public taxTo;
    address public chainFeeTo;
    uint256 public chainFee;
    IVerification verification; // Neopin Verification


    modifier onlyOperator {
        require(hasRole(OPERATOR_ROLE, msg.sender), '!op');
        _;
    }

    constructor(address _fxChild ) FxBaseChildTunnel(_fxChild) {
    }

    function pause() onlyOperator public {
        _pause();
    }

    function unpause() onlyOperator public {
        _unpause();
    }

//    function setUp(uint256 _chainFee, address _chainFeeTo, uint256 _taxRateBP, address _taxTo, IVerification _verification) external onlyOwner {
//        setTax(_taxRateBP, _taxTo);
//        setChainFee(_chainFee, _chainFeeTo);
//        verification = _verification;
//    }
//
//    function setChainFee(uint256 _chainFee, address _chainFeeTo) public onlyOwner {
//        chainFee = _chainFee;
//        chainFeeTo = _chainFeeTo;
//    }
//
//    function setTax(uint256 _taxRateBP, address _taxTo) public onlyOwner {
//        require(_taxRateBP < 10000, '_taxRateBP');
//        require(_taxTo != address(0), '_taxTo');
//        taxRateBP = _taxRateBP;
//        taxTo = _taxTo;
//    }

    function setVerification(IVerification _verification) external onlyOwner {
        verification = _verification;
    }

    function setChainFeeAndTax(uint256 _chainFee, address _chainFeeTo, uint256 _taxRateBP, address _taxTo) public onlyOwner {
        require(_taxTo != address(0), '_taxTo');
        taxRateBP = _taxRateBP;
        taxTo = _taxTo;

        chainFee = _chainFee;
        chainFeeTo = _chainFeeTo;
    }
    //
    // Internal methods
    //

    function _processMessageFromRoot(
        uint256, /* stateId */
        address sender,
        bytes memory data
    ) internal override validateSender(sender) {
        // decode incoming data
        (bytes32 syncType, bytes memory syncData) = abi.decode(data, (bytes32, bytes));

        if (syncType == DEPOSIT) {
            _syncDeposit(syncData);
//        } else if (syncType == MAP_TOKEN) {
//            _mapToken(syncData);
        } else {
            revert("SYNC_TYPE");
        }
    }

    function mapTokenCustom(address rootToken, address childToken) external onlyOwner {
        // check if token is already mapped
        require(rootToChildTokenCustom[rootToken] == address(0x0), "MAPPED");
        // TODO:comment out for testing
        // map the token
        rootToChildTokenCustom[rootToken] = childToken;
        emit TokenMapped(rootToken, childToken);
    }

    //map fxToken
//  function  _mapToken() removed

    function _syncDeposit(bytes memory syncData) internal {

        (address rootToken, address depositor, address to, uint256 amount, bytes memory depositData, uint256 depositNonce) = abi.decode(
            syncData,
            (address, address, address, uint256, bytes, uint256)
        );

        emit SyncDeposit(msg.sender, rootToken, depositor, to, amount, depositData, depositNonce);

        address childToken = rootToChildTokenCustom[rootToken];
        if (childToken != address(0x0)) {
            IMintableERC20 childTokenContract = IMintableERC20(childToken);
            childTokenContract.mint(to, amount);
        }

        // ERC-677
        // call onTokenTransfer() on `to` with limit and ignore error
        if (_isContract(to)) {
            uint256 txGas = 2000000;
            bool success = false;
            bytes memory data = abi.encodeWithSignature(
                "onTokenTransfer(address,address,address,address,uint256,bytes)",
                rootToken,
                childToken,
                depositor,
                to,
                amount,
                depositData
            );
            // solium-disable-next-line security/no-inline-assembly
            assembly {
                success := call(txGas, to, 0, add(data, 0x20), mload(data), 0, 0)
            }
        }
    }

    function withdraw(address rootToken, address childToken, uint256 amount, bytes memory _proof) public payable whenNotPaused nonReentrant {
        verifyProof(msg.sender, _proof);
        require(msg.value >= getChainFee(), "fee");
        _payChainFee(msg.value);
        _withdraw(rootToken, childToken, msg.sender, amount);
    }

    function withdrawTo(
        address rootToken,
        address childToken,
        address receiver,
        uint256 amount,
        bytes memory _proof
    ) public payable {
        verifyProof(msg.sender, _proof);
        require(msg.value >= getChainFee(), "fee");
        _payChainFee(msg.value);
        _withdraw(rootToken, childToken, receiver, amount);
    }

    function _withdraw(
        address rootToken,
        address childToken,
        address receiver,
        uint256 amount
    ) internal whenNotPaused {
        //        IFxERC20 childTokenContract = IFxERC20(childToken);
        // child token contract will have root token
        //        address rootToken = childTokenContract.connectedToken();

        IMintableERC20 childTokenContract = IMintableERC20(childToken);
        // validate root and child token mapping
        require(
            (childToken != address(0x0) && rootToken != address(0x0) &&  childToken == rootToChildTokenCustom[rootToken]),
            "NO_MAPPED"
        );


        childTokenContract.transferFrom(msg.sender, address(this), amount);
        if (msg.sender != taxTo && taxRateBP > 0 && taxTo != address(0)) {
            uint256 tax = _payTax(childToken, amount);
            amount = amount - tax;
        }

        emit FxChildWithdrawERC20(msg.sender, rootToken, childToken, receiver, amount);
        // withdraw tokens
        childTokenContract.burn(address(this), amount);

        // send message to root regarding token burn
        _sendMessageToRoot(abi.encode(rootToken, childToken, receiver, amount));
    }

    // check if address is contract
    function _isContract(address _addr) private view returns (bool) {
        uint32 size;
        assembly {
            size := extcodesize(_addr)
        }
        return (size > 0);
    }

    function getChainFee() public view returns (uint256) {
        return chainFee;
    }

    function _payChainFee(uint256 _chainFee) private {
        require(chainFeeTo != address(0), 'chainFeeTo');
        chainFeeTo.safeTransferETH(_chainFee);
    }

    function _payTax(address childTokenAddr, uint256 _amount) private returns (uint256 _tax) {
        _tax = _amount * taxRateBP / 10000;
        if (_tax > 0) {
            childTokenAddr.safeTransfer(taxTo, _tax);
        }
    }

    function verifyProof(address _user, bytes memory _proof) internal view {
        if (address(verification) != address(0)) {
            (bool isVerified, string memory errMsg) = verification.isVerified(_user, _proof);
            require(isVerified, errMsg);
        }
    }

    fallback() payable external {
        revert("fallback!");
    }

    receive() payable external {
        revert("receive!");
    }
}

