      uint256[] memory randomNumber = new uint256[](records[_poolId].winnerAddress.length);

      for(uint256 i=0;i<records[poolId].winnerAddress.length;i++)
      {
        randomNumber[i] = addressLinkLotteryNumber[(records[_poolId].winnerAddress[i])];
      }     

      return randomNumber;
    }

    function get(uint256 _poolId)
      external
      view
      returns(
        address
    )
    {
      
      for(uint256 i=0;i<records[poolId].winnerAddress.length;i++)
      {
        return records[_poolId].winnerAddress[i];
      }     
      
    }
    
    //winning user address and nft ids
