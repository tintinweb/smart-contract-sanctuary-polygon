    event UnStaked(address indexed user, uint256 amount);
    event Claimed(address winnerAddress,uint256 poolId,uint256[] tokenIdsWon,uint256[] tokenIdsWonQty);
    event Win(address winnerAddress,uint256 poolId,uint256 tokenId);
    
    
    constructor(
        address _token,
        address _erc1155Token,
        uint256 _startTime,
        uint256 _timePeriod,
        uint256 _emissionRate,
        uint256 _minStake
    )
    {
        require(_timePeriod > 0, "_timePeriod cannot be zero");
        require(
            _erc1155Token != address(0),
            "_erc1155Token cannot be zero address"
        );
        require(
            _token != address(0),
            "ORareToken cannot be zero address"
        );

        ERC1155Token = IERC1155(_erc1155Token);
        ORareToken = IERC20(_token);

        
        uint256 currTime = block.timestamp;
        if (_startTime == 0) _startTime = currTime;
        
        require(_startTime >= currTime, "_startTime should be in future");
        startTime = _startTime;
        timePeriod = _timePeriod;
        minStake = _minStake;
        poolId=1;
        
        emissionRate=_emissionRate;
    }

    // set NFT tokens ids for distribution
    function setNftTokensArray(uint256[] memory _arr)
      external 
      onlyOwner 
    {
        nftsToDistribute = _arr;
    }

    // add NFT tokens ids for distribution
    function addNftTokensArray(uint256[] memory _arr) 
      external 
      onlyOwner 
    {
        for (uint256 i = 0; i < _arr.length; i++) {
            nftsToDistribute.push(_arr[i]);
        }
    }

    // set Min stake Limit
    function setMinStakeLimit(uint256 _limit) 
      external 
      onlyOwner 
    {
        minStake = _limit;
    }

    // set time Period for cycle
    function setCopyOfTimePeriod(uint256 _timePeriod) 
      external 
      onlyOwner
    {
        copyOfTimePeriod = _timePeriod;
        updation = true;
    }

    // set emission rate for distribution
    function setEmissionRate(uint256 _rate) 
      external 
      onlyOwner 
    {
        emissionRate = _rate;
    }

    function setAdminAddress(address _address) 
      external
      onlyOwner
    {
       setAdmin[_address].approval = true;
       setAdmin[_address].index =  admins.length;
       admins.push(_address);
    }

    function removeAdminAddress(address _address)
      external
      onlyOwner
    {
        setAdmin[_address].approval = false;
        delete admins[(setAdmin[_address].index )];
    }
 
    function recoverETH(uint256 amount) 
      external 
      onlyOwner 
    {
        (bool success,) = msg.sender.call{value:amount}("");
        require(success,"refund failed"); 
    }

    function recoverERC1155(IERC1155 token,uint256 tokenId,uint256 amount) 
      external 
      onlyOwner 
    {
        token.safeTransferFrom(
            address(this),
            msg.sender,
            tokenId,
            amount,
            "0x"
        );
    }

    //keeper function for time interval check
    function checkUpkeep(bytes calldata /* checkData */) 
        external 
        override 
        returns ( 
          bool upkeepNeeded,
          bytes memory /* performData */
        ) 
    {
        upkeepNeeded = (block.timestamp.sub(startTime).div(timePeriod) > poolId.sub(1));   
    }
     
    
    function performUpkeep(bytes calldata /* performData */) 
      external 
      override 
    {
        require(
            (block.timestamp.sub(startTime).div(timePeriod) > poolId.sub(1)),
            "time cycle not passed not available/called"
        );
        
        uint256 randomness = uint256(54545454045454512154484848401215454151518445401518484155).mul((stakedAddress.length));
        generaterandomness(randomness);
    }
    
    //stake tokens for rewards 
    function stake(uint256 _amount) 
      external 
    {
        require(_amount>=(minStake.mul(decimal)),"amount should be greater than minStake");
        require(ORareToken.allowance(msg.sender,address(this)) >= _amount,"allowance is not enough");

        ORareToken.safeTransferFrom(_msgSender(), address(this), _amount);
        stakedAmount[msg.sender] = stakedAmount[msg.sender].add(_amount);
        
        if(participantStakedAddress[msg.sender] == 0)
        {
            stakedAddressIndex[msg.sender] = stakedAddress.length;
            stakedAddress.push(msg.sender);
            participantStakedAddress[msg.sender]=1;
            _lotteryNumberGenerate(msg.sender);
        }
        
        emit Staked(msg.sender,_amount);
    }

