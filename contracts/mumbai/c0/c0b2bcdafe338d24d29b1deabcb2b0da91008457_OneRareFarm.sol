    {    
        for(uint256 i=1;i<=emissionRate;i++)
        {
           uint256 randomNumber = randomness.mod(i).add(1);
           uint256 rand = uint(keccak256(abi.encodePacked(randomNumber,i,block.number,block.timestamp))).mod(totalLotteryNumber).add(1);
