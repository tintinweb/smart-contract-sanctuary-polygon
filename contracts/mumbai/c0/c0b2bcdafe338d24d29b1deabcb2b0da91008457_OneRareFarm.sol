      external
    {
        require(stakedAmount[msg.sender]!=0,"staked amount is zero");
        ORareToken.safeTransfer(msg.sender,stakedAmount[msg.sender]);
     
        address shiftAddress = stakedAddress[(stakedAddress.length.sub(1))];
        stakedAddressIndex[shiftAddress] = stakedAddressIndex[msg.sender];
        stakedAddress[(stakedAddressIndex[msg.sender])] = shiftAddress;
        participantStakedAddress[msg.sender]=0;
        stakedAddress.pop();
       
        stakedAmount[msg.sender] = 0;

        _removelotteryNumber(msg.sender); 
        emit UnStaked(msg.sender,stakedAmount[msg.sender]);
    }

    function claimForNfts(uint256 _poolId)
      external
    {
      require(isAddressWinning(msg.sender,_poolId)>0,"you don't have nft to claim in this cycle");

      uint256[] memory nftId = new uint256[](isAddressWinning(msg.sender,_poolId));

      for(uint256 i=0;i<isAddressWinning(msg.sender,_poolId);i++)
      {
          nftId[i] = _getRandomId();    
      }

      claimWinning(_poolId,nftId);
    }

