contract CeremonyOfFate  is Ownable, VRFConsumerBaseV2, KeeperCompatible {
    enum LOTTERY_STATE {
        OPEN,
        CLOSED,
        CALCULATING_WINNER
    }
    VRFCoordinatorV2Interface COORDINATOR;
    uint64 s_subscriptionId;
    address vrfCoordinator = 0x7a1BaC17Ccc5b313516C5E16fb24f7659aA5ebed;
    bytes32 keyHash = 0x4b09e658ed251bcafeebbc69400383d49f344ace09b9576fe248bb02c003fe9f;
    uint32 callbackGasLimit = 2500000;
    uint16 requestConfirmations = 3;
    uint32 numWords =  1;
    uint256[] public s_randomWords;
    uint256 public s_requestId;
   
    
    LOTTERY_STATE public lottery_state;
    uint256 public lotteryId;
    address payable[] public players;
    address public DAOTreasury = 0xEfdBEAAefaD285Bc36CB0b406D05330D51546b34;
    uint256 public winnerNFT;
    address payable public lotteryWinner;
    uint256[] public registered;
    uint256[] public tokenIds =
        IAlkhemist(0xa670B3FDB2A18167873eB4c5450E850dA16ac56A).walletOfOwner(
            msg.sender
        );
    uint256 public duration = 86400;
    uint256 public lastTimeStamp;
    Elixir ELXR;

    constructor(uint64 subscriptionId, Elixir _ELXR)
        VRFConsumerBaseV2(vrfCoordinator)
    {
        COORDINATOR = VRFCoordinatorV2Interface(vrfCoordinator);
       
        s_subscriptionId = subscriptionId;
        
        lottery_state = LOTTERY_STATE.CLOSED;
        lotteryId = 1;
        ELXR = _ELXR;
    }

    receive() external payable {}

    function startLottery() external onlyOwner {
        require(
            lottery_state == LOTTERY_STATE.CLOSED,
            "can't start a new lottery yet"
        );
        if (ELXR.balanceOf(address(this)) > 0) {
            lottery_state = LOTTERY_STATE.OPEN;
            lastTimeStamp = block.timestamp;
        }
        lottery_state == LOTTERY_STATE.CLOSED;
    }
    

    function register(uint256 _tokenID) public {
        require(
            lottery_state == LOTTERY_STATE.OPEN,
            "The lottery hasn't even started!"
        );
        require(
            IAlkhemist(0xa670B3FDB2A18167873eB4c5450E850dA16ac56A).ownerOf(
                _tokenID
            ) == msg.sender,
            "You Are Not The Token Owner!"
        );
        uint256[] memory registered_ = registered;
        for (uint256 i = 0; i < registered_.length; i++) {
            if (registered_[i] == _tokenID) {
                revert("TokenID already registered!");
            }
        }
        registered.push(_tokenID);
        players.push(payable(msg.sender));
    }

    function checkUpkeep(bytes calldata checkData)
        external
        view
        override
        returns (bool upkeepNeeded, bytes memory performData)
    {
        require(
            lottery_state == LOTTERY_STATE.OPEN,
            "The lottery hasn't even started!"
        );
        require(
            registered.length > 0,
            "Zero token ids registered, can't start the lottery yet!"
            );
        upkeepNeeded = (block.timestamp - lastTimeStamp) > duration;
        performData = checkData;
    }

    function performUpkeep(bytes calldata performData) external override {
        require(
            lottery_state == LOTTERY_STATE.OPEN,
            "The lottery hasn't even started!"
        );
        if ((block.timestamp - lastTimeStamp) > duration) {
            lottery_state = LOTTERY_STATE.CALCULATING_WINNER;
            requestRandomWords();
            performData;
        }
    }
    function requestRandomWords() internal {
            require(
            lottery_state == LOTTERY_STATE.CALCULATING_WINNER,
            "You aren't at that stage yet!"
            );
        s_requestId = COORDINATOR.requestRandomWords(keyHash, s_subscriptionId, requestConfirmations, callbackGasLimit, numWords);
        
  }
    

    function fulfillRandomWords(uint256, /* requestId */ uint256[] memory randomWords) internal override {
        require(lottery_state == LOTTERY_STATE.CALCULATING_WINNER, "You aren't at that stage yet!");
        require(randomWords[0] > 0, "random-not-found");
            s_randomWords = randomWords;
            uint256[] memory _registered = registered;
            uint256[] memory _randomWords = s_randomWords;
            uint256 index = _randomWords[0] % _registered.length;
            winnerNFT = _registered[index];
            lotteryWinner = payable(IAlkhemist(0xa670B3FDB2A18167873eB4c5450E850dA16ac56A).ownerOf(winnerNFT));
            require(ELXR.transfer(lotteryWinner, ELXR.balanceOf(address(this)) * 90 / 100), "Transfer failed");
            require(ELXR.transfer(DAOTreasury, ELXR.balanceOf(address(this))), "Transfer failed");
            players = new address payable[](0);
            registered = new uint256[](0);
            lottery_state = LOTTERY_STATE.CLOSED;
            lotteryId++;
    }

     function getELXRBalance() public view returns (uint256) {
        return ELXR.balanceOf(address(this));
    }


    function getLotteryID() public view returns (uint256){
        return lotteryId;
    }

    function getStatus() public view returns (LOTTERY_STATE) {
        return lottery_state;
    }

    function resetLotto() public onlyOwner {
        players = new address payable[](0);
        registered = new uint256[](0);
        lottery_state = LOTTERY_STATE.CLOSED;
    }

    function changeDurration (uint256 _durration) public onlyOwner {
        duration = _durration;
    }


    function getSubscriptionId() external view returns (uint64) {
        return s_subscriptionId;
    }


    function currentRandomWord() external view returns (uint256[] memory) {
        return s_randomWords;
    }


    function getTokenIDs() public view returns (uint256[] memory) {
        return
            IAlkhemist(0xa670B3FDB2A18167873eB4c5450E850dA16ac56A).walletOfOwner(
                msg.sender
            );
    }

    function getPlayers() public view returns (address payable[] memory) {
        return players;
    }

    function registryCount() public view returns (uint256) {
        return registered.length;
    }

    function withdrawELXR() external onlyOwner {
        ELXR.transfer(msg.sender, ELXR.balanceOf(address(this)));  
    }

    function updateTreasuryTimelock (address _newDAOTreasury) external onlyOwner {
        DAOTreasury = _newDAOTreasury;
    }

 
}