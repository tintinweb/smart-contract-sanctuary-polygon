pragma solidity 0.8.3;

import "IERC20.sol";
import "MerkleProof.sol";
import "AccessControl.sol";
import "Pausable.sol";
import "IMerkleDistributor.sol";
import "Fund.sol";

contract MerkleDrop is IMerkleDistributor, AccessControl, Pausable {
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");
    bytes32 public constant WITHDRAW_ROLE = keccak256("WITHDRAW_ROLE");

    /// @dev consider 12 seconds as block producing duration.
    uint256 private constant BLOCKS_PER_DAY = 300 * 24;
    uint256 private constant BLOCKS_PER_YEAR = 300 * 24 * 365;

    address public immutable override token;
    bytes32 public override merkleRoot;

    uint64 public immutable startBlock;

    mapping(address => bool) public initialized;
    mapping(address => AccountState) private accounts;

    struct AccountState {
        Fund.EvenVestFund[] evenVestFunds;
        uint256 available;
    }

    constructor(
        address _token,
        bytes32 _merkleRoot,
        uint64 _startBlock
    ) public {
        token = _token;
        merkleRoot = _merkleRoot;
        startBlock = _startBlock;

        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    function setMerkleRoot(bytes32 _merkleRoot) public onlyRole(OPERATOR_ROLE) {
        merkleRoot = _merkleRoot;
    }

    function isInitialized(
        address recipient
    ) public view override returns (bool) {
        return initialized[recipient];
    }

    function initAndClaim(
        uint256 amount,
        bytes32[] calldata proof
    ) external override whenNotPaused {
        address account = msg.sender;
        require(!initialized[account], "already initialized");

        // Verify the merkle proof.
        bytes32 leaf = keccak256(abi.encodePacked(account, amount));
        require(MerkleProof.verify(proof, merkleRoot, leaf), "Invalid proof");

        initialized[account] = true;

        uint256 claiming = (amount * 10) / 100;
        uint256 remains = amount - claiming;

        uint256 deadline = startBlock + BLOCKS_PER_YEAR;
        AccountState storage state = accounts[account];
        _mintEvenVestFund(state, remains, startBlock, deadline, BLOCKS_PER_DAY);

        AccountState storage accountState = accounts[account];
        _updateAccountState(accountState);
        uint256 pending = accountState.available;
        uint256 total = claiming + pending;

        IERC20(token).transferFrom(address(this), account, total);

        accountState.available = 0;

        emit Claimed(account, total);
    }

    function claimableAmount(
        address _owner
    ) external view override returns (uint256) {
        require(initialized[_owner], "need initialized");

        AccountState storage state = accounts[_owner];
        uint256 balance = 0;

        for (uint256 i = 0; i < state.evenVestFunds.length; i++) {
            Fund.EvenVestFund storage fund = state.evenVestFunds[i];
            if (fund.active) {
                (uint256 vesting, , ) = Fund.getEvenVestFund(
                    fund,
                    block.number
                );
                balance = balance + vesting;
            }
        }

        return balance;
    }

    function claim() external override whenNotPaused {
        address account = msg.sender;
        require(initialized[account], "need initialized");

        AccountState storage accountState = accounts[account];
        _updateAccountState(accountState);
        uint256 amount = accountState.available;

        IERC20(token).transferFrom(address(this), account, amount);

        accountState.available = 0;

        emit Claimed(account, amount);
    }

    ///////////////////////////// Role Methods /////////////////////////////
    function transferAdmin(address to) public {
        grantRole(DEFAULT_ADMIN_ROLE, to);
        renounceRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    function grantOperatorRole(address to) public {
        grantRole(OPERATOR_ROLE, to);
    }

    function reovkeMinterRole(address to) public {
        revokeRole(OPERATOR_ROLE, to);
    }

    function grantWithdrawRole(address to) public {
        grantRole(WITHDRAW_ROLE, to);
    }

    function reovkeWithdrawRole(address to) public {
        revokeRole(WITHDRAW_ROLE, to);
    }

    ///////////////////////////// withdraw Methods /////////////////////////////
    function withdrawETH(uint _amount) public onlyRole(WITHDRAW_ROLE) {
        payable(msg.sender).transfer(_amount);
    }

    function withdrawToken(
        address _token,
        uint256 _amount
    ) public onlyRole(WITHDRAW_ROLE) {
        IERC20(_token).transferFrom(address(this), msg.sender, _amount);
    }

    ///////////////////////////// pause Methods /////////////////////////////
    function pause() external onlyRole(OPERATOR_ROLE) {
        _pause();
    }

    function unpause() external onlyRole(OPERATOR_ROLE) {
        _unpause();
    }

    ///////////////////////////// Internal Methods /////////////////////////////
    function _mintEvenVestFund(
        AccountState storage state,
        uint256 amount,
        uint256 start,
        uint256 end,
        uint256 duration
    ) internal {
        state.evenVestFunds.push(
            Fund.EvenVestFund({
                active: true,
                amount: amount,
                start: uint64(start),
                end: uint64(end),
                duration: uint64(duration)
            })
        );
    }

    function _updateAccountState(AccountState storage state) internal {
        for (uint256 i = 0; i < state.evenVestFunds.length; i++) {
            Fund.EvenVestFund storage fund = state.evenVestFunds[i];
            if (fund.active) {
                (uint256 vesting, uint256 released, uint64 elapsed) = Fund
                    .getEvenVestFund(fund, block.number);
                if (released > 0) {
                    state.available = state.available + released;
                }
                fund.amount = vesting;
                if (vesting > 0) {
                    fund.start = fund.start + fund.duration * elapsed;
                } else {
                    fund.active = false;
                }
            }
        }
    }
}

