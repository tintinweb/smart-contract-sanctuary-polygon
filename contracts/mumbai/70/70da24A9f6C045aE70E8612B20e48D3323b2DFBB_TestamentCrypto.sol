        for (uint256 i = 0; i < voting.guardians.length; ) {
            if (
                msg.sender == voting.guardians[i] &&
                voting.approvedVotes & (1 << i) == 0
            ) {
                voting.approvedVotes |= (1 << i);
            }
            i++;
