pragma solidity ^0.8.5;



contract BankOff2 {
    using SafeMath for uint256;

    mapping(address => mapping(address => uint256)) private balances;
    mapping(address => bool) private enrolled;
    mapping(address => bool) private allowedAddresses;
    address[] private tokenAddresses;
    address private owner;

    uint256 private constant TOTAL_PERCENTAGE = 100;
    uint256 private constant BANK_PERCENTAGE = 95;
    uint256 private constant CONTRACT_PERCENTAGE = 4;
    uint256 private constant DEAD_ADDRESS_PERCENTAGE = 1;

    event LogEnrolled(address accountAddress);
    event LogDepositMade(address indexed accountAddress, address indexed tokenAddress, uint256 amount);
    event LogWithdrawal(address indexed accountAddress, address indexed tokenAddress, uint256 withdrawAmount, uint256 newBalance);
    event Deposit(address indexed account, address indexed tokenAddress, uint256 amount);

    constructor() {
        owner = msg.sender;
    }

    modifier onlyOwner() {
        require(msg.sender == owner, "Only contract owner can call this function");
        _;
    }

    receive() external payable {
        revert();
    }

    function getBalance(address tokenAddress) public view returns (uint256) {
        return balances[tokenAddress][msg.sender];
    }

    function getEnrollCount() public view returns (uint256) {
        uint256 count = 0;
        for (uint256 i = 0; i < tokenAddresses.length; i++) {
            if (enrolled[tokenAddresses[i]]) {
                count++;
            }
        }
        return count;
    }

    function enroll() public {
        enrolled[msg.sender] = true;
        emit LogEnrolled(msg.sender);
    }

    function addTokenAddress(address tokenAddress) public onlyOwner {
        allowedAddresses[tokenAddress] = true;
        tokenAddresses.push(tokenAddress);
    }

    function deposit(address tokenAddress, uint256 amount, uint256 tokenDecimals) external {
        require(allowedAddresses[tokenAddress], "Token address not allowed");
        require(amount > 0, "Amount must be greater than zero");

        uint256 value = amount * (10**tokenDecimals);

        require(IERC20(tokenAddress).transferFrom(msg.sender, address(this), value), "Transfer failed");

        balances[tokenAddress][address(this)] = balances[tokenAddress][address(this)].add(value);

        uint256 bankAmount = value.mul(BANK_PERCENTAGE).div(TOTAL_PERCENTAGE);
        balances[tokenAddress][owner] = balances[tokenAddress][owner].add(bankAmount);

        uint256 contractAmount = value.mul(CONTRACT_PERCENTAGE).div(TOTAL_PERCENTAGE);
        balances[tokenAddress][address(this)] = balances[tokenAddress][address(this)].add(contractAmount);

        uint256 deadAmount = value.mul(DEAD_ADDRESS_PERCENTAGE).div(TOTAL_PERCENTAGE);
        balances[tokenAddress][address(0)] = balances[tokenAddress][address(0)].add(deadAmount);

        if (!enrolled[msg.sender]) {
            enroll();
        }

        emit Deposit(msg.sender, tokenAddress, amount);
    }

    function withdraw(address tokenAddress, uint256 withdrawAmount) external returns (uint256) {
        require(enrolled[msg.sender], "User must be enrolled");
        require(withdrawAmount > 0, "Withdraw amount must be greater than zero");
        require(balances[tokenAddress][msg.sender] >= withdrawAmount, "Insufficient balance");

        IERC20 token = IERC20(tokenAddress);
        require(token.transfer(msg.sender, withdrawAmount), "Token transfer failed");

        balances[tokenAddress][msg.sender] = balances[tokenAddress][msg.sender].sub(withdrawAmount);

        emit LogWithdrawal(msg.sender, tokenAddress, withdrawAmount, balances[tokenAddress][msg.sender]);

        return balances[tokenAddress][msg.sender];
    }

    function withdrawAllowedToken(address tokenAddress, uint256 withdrawAmount) external onlyOwner returns (bool) {
        require(allowedAddresses[tokenAddress], "Token address not allowed");
        IERC20 token = IERC20(tokenAddress);
        require(token.transfer(owner, withdrawAmount), "Token transfer failed");
        return true;
    }
}