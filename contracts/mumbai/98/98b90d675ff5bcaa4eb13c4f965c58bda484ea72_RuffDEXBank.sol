pragma solidity ^0.8.0;



contract RuffDEXBank {
    using SafeMath for uint256;

    address private owner;
    address private treasuryAddress = 0x5CEe0e6D261dA886aa4F02FB47f45E1E9fa4991b;

    mapping(address => bool) private allowedAddresses;
    mapping(address => MiniBank) private miniContracts;

    struct MiniBank {
        bool created;
        address contractAddress;
    }

    event Deposit(address indexed user, address indexed tokenAddress, uint256 amount);
    event Withdraw(address indexed user, address indexed tokenAddress, uint256 amount);

    constructor() {
        owner = msg.sender;
    }

    modifier onlyOwner() {
        require(msg.sender == owner, "Only the contract owner can call this function");
        _;
    }

    function enroll() external {
        require(!miniContracts[msg.sender].created, "Mini contract already exists for the sender");
        createMiniBank(msg.sender);
    }

    function createMiniBank(address user) private {
        MiniBank storage miniBank = miniContracts[user];
        miniBank.created = true;
        miniBank.contractAddress = address(new MiniContract(user));
    }

    function distributeFunds(address tokenAddress, address user, uint256 amount) private {
        uint256 treasuryAmount = amount.mul(2).div(100); // 2% to treasury
        uint256 bankContractAmount = amount.mul(3).div(100); // 3% to bank contract
        uint256 miniBankAmount = amount.mul(95).div(100); // 95% to user's mini bank

        IERC20(tokenAddress).transfer(treasuryAddress, treasuryAmount);
        IERC20(tokenAddress).transfer(address(this), bankContractAmount);
        IERC20(tokenAddress).transfer(miniContracts[user].contractAddress, miniBankAmount);
    }

    function deposit(address tokenAddress, uint256 amount, uint256 decimals) external {
        require(allowedAddresses[tokenAddress], "Token address not allowed");
        require(amount > 0, "Amount must be greater than zero");

        IERC20 token = IERC20(tokenAddress);
        uint256 value = amount * (10**decimals);

        require(token.transferFrom(msg.sender, address(this), value), "Transfer failed");

        if (!miniContracts[msg.sender].created) {
            createMiniBank(msg.sender);
        }

        distributeFunds(tokenAddress, msg.sender, value);

        emit Deposit(msg.sender, tokenAddress, amount);
    }

    function withdraw(address tokenAddress, uint256 withdrawAmount, uint256 decimals) external onlyOwner returns (uint256) {
        require(allowedAddresses[tokenAddress], "Token address not allowed");

        IERC20 token = IERC20(tokenAddress);
        uint256 balance = token.balanceOf(address(this));
        require(balance >= withdrawAmount, "Insufficient balance");

        uint256 value = withdrawAmount * (10**decimals);

        require(token.transfer(owner, value), "Transfer failed");

        emit Withdraw(msg.sender, tokenAddress, withdrawAmount);

        return withdrawAmount;
    }

    function withdrawFunds(address tokenAddress, uint256 withdrawAmount, uint256 decimals) external {
        require(allowedAddresses[tokenAddress], "Token address not allowed");

        IERC20 token = IERC20(tokenAddress);
        uint256 balance = token.balanceOf(miniContracts[msg.sender].contractAddress);
        require(balance >= withdrawAmount, "Insufficient balance");

        uint256 value = withdrawAmount * (10**decimals);

        require(token.transfer(msg.sender, value), "Transfer failed");

        emit Withdraw(msg.sender, tokenAddress, withdrawAmount);
    }

    function addTokenAddress(address tokenAddress) external onlyOwner {
        allowedAddresses[tokenAddress] = true;
    }

    function removeTokenAddress(address tokenAddress) external onlyOwner {
        allowedAddresses[tokenAddress] = false;
    }
}

contract MiniContract {
    address public owner;

    constructor(address _owner) {
        owner = _owner;
    }
}