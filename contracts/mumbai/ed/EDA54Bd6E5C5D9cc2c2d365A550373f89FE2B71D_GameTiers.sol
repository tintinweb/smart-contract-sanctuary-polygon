import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract GameTiers is IGameTiers, AccessController {
    using SafeMath for uint256;
    using Counters for Counters.Counter;

    IGames public games;

    Counters.Counter private gameTiersCounter;
    mapping(uint256 => GameTier) private gameTiers;

    constructor(address _settings) AccessController(Settings(_settings)) {}

    function setGames(address _games) external override onlyPolicy {
        require(_games != address(0), INVALID_ADDRESS);
        games = IGames(_games);
    }

    function addGameTier(GameTier calldata _gameTier) external override onlyGameMaster {
        gameTiersCounter.increment();
        gameTiers[_lastGameTiersIndex()] = _gameTier;
        emit GameTierAdded(_lastGameTiersIndex(), msg.sender);
    }

    function updateGameTier(uint256 _gameTierIdx, GameTier calldata _gameTier) external override onlyGameMaster {
        require(address(games) != address(0), INVALID_ADDRESS);
        require(_gameTierIdx <= _lastGameTiersIndex(), INVALID_GAME_TIER_INDEX);

        IGames.Game[] memory _pendingGames = games.getGames(IGames.GameState.PENDING);
        for (uint256 i = 0; i < _pendingGames.length; i++) {
            if (_pendingGames[i].gameTierIdx == _gameTierIdx) {
                revert(CANNOT_MODIFY_GAME_TIER_IN_USE);
            }
        }

        IGames.Game[] memory _startedGames = games.getGames(IGames.GameState.STARTED);
        for (uint256 i = 0; i < _startedGames.length; i++) {
            if (_startedGames[i].gameTierIdx == _gameTierIdx) {
                revert(CANNOT_MODIFY_GAME_TIER_IN_USE);
            }
        }

        gameTiers[_gameTierIdx] = _gameTier;
    }

    function activateGameTier(uint256 _gameTierIdx) external override onlyGameMaster {
        require(_gameTierIdx <= _lastGameTiersIndex(), INVALID_GAME_TIER_INDEX);
        gameTiers[_gameTierIdx].active = true;
    }

    function deactivateGameTier(uint256 _gameTierIdx) external override onlyGameMaster {
        require(address(games) != address(0), INVALID_ADDRESS);
        require(_gameTierIdx <= _lastGameTiersIndex(), INVALID_GAME_TIER_INDEX);

        IGames.Game[] memory _pendingGames = games.getGames(IGames.GameState.PENDING);
        for (uint256 i = 0; i < _pendingGames.length; i++) {
            if (_pendingGames[i].gameTierIdx == _gameTierIdx) {
                revert(CANNOT_MODIFY_GAME_TIER_IN_USE);
            }
        }

        IGames.Game[] memory _startedGames = games.getGames(IGames.GameState.STARTED);
        for (uint256 i = 0; i < _startedGames.length; i++) {
            if (_startedGames[i].gameTierIdx == _gameTierIdx) {
                revert(CANNOT_MODIFY_GAME_TIER_IN_USE);
            }
        }

        gameTiers[_gameTierIdx].active = false;
    }

    function _lastGameTiersIndex() internal view returns (uint256) {
        return gameTiersCounter.current().sub(1);
    }

    function getGameTiers(GameTierState _state) public view override returns (GameTier[] memory) {
        if (_state == GameTierState.ALL) {
            GameTier[] memory _gameTiers = new GameTier[](_lastGameTiersIndex().add(1));
            for (uint256 i = 0; i < gameTiersCounter.current(); i++) {
                _gameTiers[i] = gameTiers[i];
            }
            return _gameTiers;
        } else if (_state == GameTierState.ACTIVE) {
            uint256 _size = 0;
            for (uint256 i = 0; i < gameTiersCounter.current(); i++) {
                if (gameTiers[i].active) {
                    _size = _size.add(1);
                }
            }

            GameTier[] memory _gameTiers = new GameTier[](_size);
            uint256 _counter = 0;
            for (uint256 i = 0; i < gameTiersCounter.current(); i++) {
                if (gameTiers[i].active) {
                    _gameTiers[_counter] = gameTiers[i];
                    _counter = _counter.add(1);
                }
            }
            return _gameTiers;
        } else {
            uint256 _size = 0;
            for (uint256 i = 0; i < gameTiersCounter.current(); i++) {
                if (!gameTiers[i].active) {
                    _size = _size.add(1);
                }
            }

            GameTier[] memory _gameTiers = new GameTier[](_size);
            uint256 _counter = 0;
            for (uint256 i = 0; i < gameTiersCounter.current(); i++) {
                if (!gameTiers[i].active) {
                    _gameTiers[_counter] = gameTiers[i];
                    _counter = _counter.add(1);
                }
            }
            return _gameTiers;
        }
    }

    function getGameTier(uint256 _gameTierIdx) public view override returns (GameTier memory) {
        require(_gameTierIdx <= _lastGameTiersIndex(), INVALID_GAME_TIER_INDEX);
        return gameTiers[_gameTierIdx];
    }

    function getMiniumumPlayers(uint256 _gameTierIdx) public view override returns (uint256) {
        require(_gameTierIdx <= _lastGameTiersIndex(), INVALID_GAME_TIER_INDEX);
        GameTier memory _gameTier = gameTiers[_gameTierIdx];
        if (_gameTier.entryPrice == 0) return 0;
        return
            (_gameTier.firstPlacePrize.add(_gameTier.secondPlacePrize).add(_gameTier.thirdPlacePrize)).div(
                _gameTier.entryPrice
            );
    }
}

