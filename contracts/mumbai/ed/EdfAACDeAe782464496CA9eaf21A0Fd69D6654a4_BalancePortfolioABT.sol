pragma solidity ^0.8.0;
import "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/ERC721URIStorage.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

interface FactoryVault{
    function getisVal(address) external view returns(bool);
}
contract BalancePortfolioABT is ERC721, Initializable{
    address public tokenAddress;
    string public tokenName;
    address public factoryVault;
    address public adminAddress;
    struct sbt {
       address owner;
       int256 lockedBalance; 
       int256 unlockedBalance; // unlockedBalance = StakedBalance + UnstakedBalance;
       int256 liquidityBalance; 
       int256 StakedBalance;
       int256 UnstakedBalance;
       bool LiquidStakingStatus;
       uint256 TradingLimitApproved;
       int8 ApplicableFeeDiscount;
    }

    uint256 public ABT_ID = 1;
    mapping(uint256 => int256) public lockedBalance;   // sbtId ka corresponding 
    mapping(uint256 => int256) public unlockedBalance;   // sbtId =>tokenId => balanace
    mapping(uint256 => int256) public liquidityBalance;
    // mapping(uint256 => mapping(uint256=>uint256)) public lockedBalance;
    // mapping(uint256 => mapping(uint256=>uint256)) public unlockedBalance;
    mapping(address => uint256) public userSbtId;



    mapping(uint256 => sbt) public sbtInfo;
    event SBT_mint( address receiver, uint256 ABT_ID);
    event SBT_burn(uint256 ABT_ID);
    modifier onlyAdmin() {
    require(msg.sender == adminAddress, "Only the contract owner can perform this action.");
    _;
    } 
    constructor() ERC721("ProfolioBalanceABT", "ABT") {
    
    }
    
    function initialize(address _tokenAddress, string memory _tokenName,address _factoryVault, address _adminAddress) external initializer {
        tokenAddress = _tokenAddress;
        tokenName = _tokenName;
        factoryVault = _factoryVault;
        adminAddress = _adminAddress;
    }

    function mint(address _to, sbt memory _sbt, int256 _lockedBalance, int256 _unlockedBalance) onlyAdmin
        external 
    {
        _mint(_to, ABT_ID);
        userSbtId[_to] = ABT_ID;
        sbtInfo[ABT_ID] = _sbt;
        lockedBalance[ABT_ID] = _lockedBalance;
        unlockedBalance[ABT_ID] = _unlockedBalance;
        liquidityBalance[ABT_ID] = 0;
        emit SBT_mint(_to, ABT_ID);
        ABT_ID++;
    }
    function InclockedAmt(address _user, int256 amt) external {
        FactoryVault factoryVaultInstance = FactoryVault(factoryVault);
        bool isTrue = factoryVaultInstance.getisVal(msg.sender);
        require(isTrue, "not a valid caller");
        uint256 sbtId =  userSbtId[_user];
        lockedBalance[sbtId] += amt;
        sbt memory Sbt = sbtInfo[sbtId];
        Sbt.lockedBalance = lockedBalance[sbtId];
        sbtInfo[sbtId] = Sbt;
    }
    function DeclockedAmt(address _user, int256 amt) external {
        FactoryVault factoryVaultInstance = FactoryVault(factoryVault);
        bool isTrue = factoryVaultInstance.getisVal(msg.sender);
        require(isTrue, "not a valid caller");
        uint256 sbtId =  userSbtId[_user];
        lockedBalance[sbtId] -= amt;
        sbt memory Sbt = sbtInfo[sbtId];
        Sbt.lockedBalance = lockedBalance[sbtId];
        sbtInfo[sbtId] = Sbt;
    }
    function IncunlockedAmt(address _user, int256 amt) external {
        FactoryVault factoryVaultInstance = FactoryVault(factoryVault);
        bool isTrue = factoryVaultInstance.getisVal(msg.sender);
        require(isTrue, "not a valid caller");
        uint256 sbtId =  userSbtId[_user];
        unlockedBalance[sbtId] += amt;
        sbt memory Sbt = sbtInfo[sbtId];
        Sbt.unlockedBalance = unlockedBalance[sbtId];
        sbtInfo[sbtId] = Sbt;
    }
    function DecunlockedAmt(address _user, int256 amt) external {
        FactoryVault factoryVaultInstance = FactoryVault(factoryVault);
        bool isTrue = factoryVaultInstance.getisVal(msg.sender);
        require(isTrue, "not a valid caller");
        uint256 sbtId =  userSbtId[_user];
        unlockedBalance[sbtId] -= amt;
        sbt memory Sbt = sbtInfo[sbtId];
        Sbt.unlockedBalance = unlockedBalance[sbtId];
        sbtInfo[sbtId] = Sbt;
    }
    function getLockedBalance(address _user) external view returns(int256){
        uint256 stbId = userSbtId[_user];
        return lockedBalance[stbId]; 
    } 
    function getUnlockedBalance(address _user) external view returns(int256){
        uint256 stbId = userSbtId[_user];
        return unlockedBalance[stbId]; 
    } 

    function IncliquidityBalance(address _user, int256 amt) external {
        FactoryVault factoryVaultInstance = FactoryVault(factoryVault);
        bool isTrue = factoryVaultInstance.getisVal(msg.sender);
        require(isTrue, "not a valid caller");
        uint256 sbtId =  userSbtId[_user];
        liquidityBalance[sbtId] += amt;
        sbt memory Sbt = sbtInfo[sbtId];
        Sbt.liquidityBalance = liquidityBalance[sbtId];
        sbtInfo[sbtId] = Sbt;
    }
    function DecliquidityBalance(address _user, int256 amt) external {
        FactoryVault factoryVaultInstance = FactoryVault(factoryVault);
        bool isTrue = factoryVaultInstance.getisVal(msg.sender);
        require(isTrue, "not a valid caller");
        uint256 sbtId =  userSbtId[_user];
        liquidityBalance[sbtId] -= amt;
        sbt memory Sbt = sbtInfo[sbtId];
        Sbt.liquidityBalance = liquidityBalance[sbtId];
        sbtInfo[sbtId] = Sbt;
    }
    function getliquidityBalance(address _user) external view returns(int256){
        uint256 stbId = userSbtId[_user];
        return liquidityBalance[stbId]; 
    }

    function getAbtId(address user) external view returns(uint256){
        return userSbtId[user];
    }
    function _transfer(
        address from,
        address to,
        uint256 _sbtId
    ) internal override {
        require(false, "NON-transferable");
        super._transfer(from, to, _sbtId);
    }
}

