pragma solidity ^0.8.9;

import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "./interface/IGameNFT.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";

contract GameRMarketplace is
    Initializable,
    PausableUpgradeable,
    AccessControlUpgradeable
{
    bytes32 public constant PAUSER_ROLE = keccak256("PAUSER_ROLE");
    bytes32 public constant UPGRADER_ROLE = keccak256("UPGRADER_ROLE");

    IGameNFT GameNFT;

    struct Sale {
        IERC20Upgradeable currency;
        uint256 tokenId;
        uint256 price;
        address owner;
        bool onSale;
    }

    struct Auction {
        Seller seller;
        IERC20Upgradeable currency;
        uint256 startingPrice;
        uint256 currentPrice;
        uint256 duration;
        uint256 startedAt;
        bool onAuction;
        address highestBidder;
        mapping(address => Bidder) bidders;
        mapping(uint256 => address) bidderIndex;
        uint256 bidderSize;
        bool isBidderRedeemed;
    }

    struct Seller {
        address seller;
        uint256 tokenId;
        bool claimedCuts;
    }

    struct Bidder {
        address bidder;
        uint256 bidAmount;
        uint256 tokenId;
    }

    mapping(uint256 => Sale) private _sales;
    mapping(uint256 => Auction) private _auctions;

    event SetGameRNFT(IGameNFT gameNFT);
    event ListedToSale(
        uint256 tokenId,
        address owner,
        IERC20Upgradeable currency,
        uint256 price
    );
    event ListedToAuction(
        uint256 tokenId,
        IERC20Upgradeable currency,
        uint256 startingPrice,
        uint256 duration,
        uint256 auctionCreatedAt,
        bool onAuction
    );
    event BuyToken(uint256 tokenId, IERC20Upgradeable currency, uint256 amount);
    event Bid(
        address indexed bidder,
        IERC20Upgradeable currency,
        uint256 tokenId,
        uint256 amount
    );
    event AuctionCancelled(uint256 tokenId);
    event EndAuction(uint256 tokenId);
    event UnlistedFromSale(uint256 tokenId);
    event IssueFund(
        address from,
        address to,
        IERC20Upgradeable currency,
        uint256 amount
    );

    function initialize(IGameNFT _gameNFT) public initializer {
        __Pausable_init();
        __AccessControl_init();

        GameNFT = _gameNFT;

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(PAUSER_ROLE, msg.sender);
        _grantRole(UPGRADER_ROLE, msg.sender);

        emit SetGameRNFT(_gameNFT);
    }

    function pause() public onlyRole(PAUSER_ROLE) {
        _pause();
    }

    function unpause() public onlyRole(PAUSER_ROLE) {
        _unpause();
    }

    function supportsInterface(
        bytes4 interfaceId
    ) public view override(AccessControlUpgradeable) returns (bool) {
        return super.supportsInterface(interfaceId);
    }

    function setGameNFT(IGameNFT _gameNFT) public onlyRole(DEFAULT_ADMIN_ROLE) {
        GameNFT = _gameNFT;

        emit SetGameRNFT(_gameNFT);
    }

    function _isOwnerOf(
        address owner,
        uint256 tokenId
    ) internal view returns (bool) {
        return (GameNFT.ownerOf(tokenId) == owner);
    }

    function _hasAuctionCreated(
        Auction storage auction
    ) internal view returns (bool) {
        return (auction.startedAt != 0);
    }

    function _isAuctionActive(
        Auction storage auction
    ) internal view returns (bool) {
        return (auction.startedAt + auction.duration >= block.timestamp);
    }

    function listToSale(
        uint256 tokenId,
        IERC20Upgradeable currency,
        uint256 price
    ) public {
        require(
            !_auctions[tokenId].onAuction,
            "GameR Market: Token is on auction"
        );
        require(
            _isOwnerOf(msg.sender, tokenId),
            "GameR Market: Invalid token owner"
        );
        require(
            GameNFT.getApproved(tokenId) == address(this),
            "GameR Market: Token not approved"
        );

        Sale storage sale = _sales[tokenId];
        sale.tokenId = tokenId;
        sale.price = price;
        sale.currency = currency;
        sale.owner = msg.sender;
        sale.onSale = true;

        emit ListedToSale(tokenId, msg.sender, currency, price);
    }

    function listToAuction(
        uint256 tokenId,
        IERC20Upgradeable currency,
        uint256 startingPrice,
        uint256 startTime,
        uint256 endTimeDuration,
        address seller
    ) public {
        require(
            _isOwnerOf(msg.sender, tokenId),
            "GameR Market: Invalid token owner"
        );
        require(_sales[tokenId].onSale, "GameR Market: Token is on sale");
        require(
            GameNFT.getApproved(tokenId) == address(this),
            "GameR Market: Token not approved"
        );

        Auction storage auction = _auctions[tokenId];
        require(!_hasAuctionCreated(auction), "GameR Market: Auction exists");

        uint256 auctionStartTime;
        if (startTime == 0) {
            auctionStartTime = block.timestamp;
        } else {
            auctionStartTime = startTime;
        }

        Seller memory tokenSeller = Seller(seller, tokenId, false);

        auction.currency = currency;
        auction.seller = tokenSeller;
        auction.startingPrice = startingPrice;
        auction.currentPrice = startingPrice;
        auction.duration = endTimeDuration;
        auction.startedAt = auctionStartTime;
        auction.onAuction = true;

        emit ListedToAuction(
            tokenId,
            currency,
            startingPrice,
            endTimeDuration,
            auctionStartTime,
            true
        );
    }

    function buy(
        uint256 tokenId,
        IERC20Upgradeable currency,
        uint256 price
    ) public {
        Sale storage sale = _sales[tokenId];

        require(sale.onSale, "GameR Market: Token is not listed to sale");
        require(sale.currency == currency, "GameR Market: Invalid currency");
        require(sale.price == price, "GameR Market: Price value mismatched");
        require(
            currency.balanceOf(msg.sender) <= sale.price,
            "GameR Market: Insufficient Balance"
        );
        require(
            _isOwnerOf(sale.owner, tokenId),
            "GameR Market:  Invalid token owner"
        );

        currency.transferFrom(msg.sender, sale.owner, price);

        GameNFT.transferFrom(sale.owner, msg.sender, tokenId);

        delete _sales[tokenId];

        emit BuyToken(tokenId, currency, price);
    }

    function bid(
        uint256 tokenId,
        IERC20Upgradeable currency,
        uint256 bidAmount
    ) public {
        Auction storage auction = _auctions[tokenId];

        require(
            _hasAuctionCreated(auction),
            "GameR Market: Auction has not created"
        );
        require(
            _isAuctionActive(auction),
            "GameR Market: The auction has ended"
        );
        require(
            msg.sender != auction.seller.seller,
            "GameR Market: Auction owner cannot bid"
        );
        require(
            auction.currency == currency,
            "GameR Market: Currency is not acceptable"
        );

        Bidder memory exisitingBidder = _auctions[tokenId].bidders[msg.sender];
        bidAmount += exisitingBidder.bidAmount;

        require(
            auction.currentPrice < bidAmount,
            "GameR Market: Bid Amount should be more than current price"
        );
        require(
            currency.allowance(msg.sender, address(this)) >= bidAmount,
            "GameR Market: Insufficient allowance"
        );

        Bidder memory bidder = Bidder(msg.sender, bidAmount, tokenId);
        auction.bidders[msg.sender] = bidder;

        if (exisitingBidder.bidder == address(0)) {
            auction.bidderIndex[auction.bidderSize] = msg.sender;
            auction.bidderSize++;
        }

        //setting up the highest bidder
        auction.currentPrice = bidAmount;
        auction.highestBidder = msg.sender;

        emit Bid(bidder.bidder, currency, tokenId, bidAmount);
    }

    function _removeAuction(uint256 tokenId) internal {
        delete _auctions[tokenId];
    }

    function _cancelAuction(uint256 tokenId) internal {
        _removeAuction(tokenId);

        emit AuctionCancelled(tokenId);
    }

    function _cancelSale(uint256 tokenId) internal {
        delete _sales[tokenId];
        emit UnlistedFromSale(tokenId);
    }

    function getListedSaleToken(
        uint256 tokenId
    ) public view returns (Sale memory sale) {
        return _sales[tokenId];
    }

    function getListedAuctionToken(
        uint256 tokenId
    )
        public
        view
        returns (
            IERC20Upgradeable,
            address,
            uint256,
            uint256,
            address,
            bool,
            uint256,
            uint256,
            uint256
        )
    {
        Auction storage auction = _auctions[tokenId];
        return (
            auction.currency,
            auction.seller.seller,
            auction.startingPrice,
            auction.currentPrice,
            auction.highestBidder,
            auction.onAuction,
            auction.bidderSize,
            auction.startedAt,
            auction.duration
        );
    }

    function cancelAuction(uint256 tokenId) external {
        Auction storage auction = _auctions[tokenId];

        require(
            _hasAuctionCreated(auction),
            "GameR Market: auction does not exist"
        );

        require(
            msg.sender == auction.seller.seller,
            "GameR Market: Only auction creator can cancel the auction"
        );

        _cancelAuction(tokenId);
    }

    function cancelAuctionWhenPaused(
        uint256 tokenId
    ) external whenPaused onlyRole(DEFAULT_ADMIN_ROLE) {
        Auction storage auction = _auctions[tokenId];

        require(
            _hasAuctionCreated(auction),
            "GameR Market: auction does not exist"
        );
        _cancelAuction(tokenId);
    }

    function endAuction(uint256 tokenId) public {
        Auction storage auction = _auctions[tokenId];

        require(
            _hasAuctionCreated(auction),
            "GameR Market: Auction has not been created yet"
        );
        require(
            !_isAuctionActive(auction),
            "GameR Market: The auction is not ended yet"
        );

        if (auction.highestBidder != address(0)) {
            if (
                auction.currentPrice <=
                auction.currency.balanceOf(auction.highestBidder)
            ) {
                _transferFund(tokenId);
                if (!_isOwnerOf(auction.highestBidder, tokenId)) {
                    if (auction.highestBidder != address(0)) {
                        GameNFT.safeTransferFrom(
                            auction.seller.seller,
                            auction.highestBidder,
                            tokenId
                        );
                    }
                }
            }
        }

        _removeAuction(tokenId);

        emit EndAuction(tokenId);
    }

    function unlistFromSale(uint256 tokenId) public {
        require(
            msg.sender == _sales[tokenId].owner,
            "GameR Market: Invalid user"
        );

        _cancelSale(tokenId);
    }

    function _transferFund(uint256 tokenId) private {
        Auction storage auction = _auctions[tokenId];
        require(
            !auction.seller.claimedCuts,
            "GameR Market: Already claimed cut"
        );
        require(
            auction.currentPrice <=
                auction.currency.balanceOf(auction.highestBidder),
            "GameR Market: Insufficient balance"
        );

        // transfer fund to contract
        auction.currency.transferFrom(
            auction.highestBidder,
            auction.seller.seller,
            auction.currentPrice
        );
        auction.seller.claimedCuts = true;

        emit IssueFund(
            auction.highestBidder,
            auction.seller.seller,
            auction.currency,
            auction.currentPrice
        );
    }
}

