    event SupportedTokenSet(address indexed token, uint256 gameId);
    event SupportedTokenRemoved(address indexed token, uint256 gameId);
    event OperatorSet(address indexed account);
    event OperatorRemoved(address indexed account);
    event CommissionTokenSet(address indexed token, uint256 commission);
    event VerifierChanged(
        address indexed _oldVerifier,
        address indexed _newVerifier
    );
    event SupportedTokenItemSet(address indexed token, uint256 gameId);
    event SupportedTokenItemRemoved(address indexed token, uint256 gameId);

