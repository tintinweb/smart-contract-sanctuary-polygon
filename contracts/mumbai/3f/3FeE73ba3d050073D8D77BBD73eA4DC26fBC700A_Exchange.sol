        IERC20Upgradeable(token).transfer(receiver, actualAmount);

        feeBalances[token] += amount - actualAmount;
        
        emit Unlocked(receiver, token, amount, actualAmount, gameId);
    }

    /* ========== MUTATIVE FUNCTIONS ========== */
    /**
     * @dev function for user to deposit onchain token and get game item offchain
     *
     * Emits {Deposited} event indicating amount and user who deposited
     */
    function exchangeItem(
        ExchangeItem memory dataExchange, 
        uint256 nonce,
        string memory version, 
        bytes memory signature
    ) external whenNotPaused {
        require(supportedTokenItems[dataExchange.token].contains(dataExchange.gameId), "Token not supported");

        require(
                verifyMessage(
                    dataExchange,
                    nonce,
                    version,
                    signature
                ),
                "exchangeItem: Data invalid"
        );

        IERC20Upgradeable(dataExchange.token).transferFrom(
            msg.sender,
            address(this),
            dataExchange.amount
        );

        emit exchangeItemSuccess(msg.sender, dataExchange.token, dataExchange.amount, dataExchange.gameId, dataExchange.itemId, dataExchange.itemAmount, dataExchange.itemPrice, version);
    }

    /* ========== HELPER FUNCTIONS ========== */

    function verifyMessage(
        ExchangeItem memory dataExchange,
        uint256 nonce,
        string memory version,
        bytes memory signature
    ) public view returns (bool) {
        if (signature.length == 0) return false;
        bytes32 dataHash = encodeData(
            dataExchange,
            nonce,
            version
        );
        bytes32 signHash = ECDSAUpgradeable.toEthSignedMessageHash(dataHash);
        address recovered = ECDSAUpgradeable.recover(signHash, signature);
        return recovered == verifier;
    }

    function encodeData(
        ExchangeItem memory dataExchange,
        uint256 nonce,
        string memory version
    ) public view returns (bytes32) {
        uint256 id;
        assembly {
            id := chainid()
        }
        return
            keccak256(
                abi.encode(
                    dataExchange,
                    nonce,
                    version
                )
            );
    }

    /* ========== PRIVATE FUNCTIONS ========== */
    function _grantOperatorRole(address account) internal {
        if (!_operators.contains(account)) {
            _operators.add(account);
            emit OperatorSet(account);
        }
    }

    function _revokeOperatorRole(address account) internal {
        if (_operators.contains(account)) {
            _operators.remove(account);
            emit OperatorRemoved(account);
        }
    }
