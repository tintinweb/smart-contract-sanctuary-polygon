        require(isOperator(msg.sender), "Caller is not a operator");
        _;
    }

    /* ========== VIEW ========== */

    /**
     * @dev function to check if an address is Operator
     * @param operator address to get
     */
    function isOperator(address operator) public view returns (bool) {
        return _operators.contains(operator);
    }

    /**
     * @dev function to get Operator addresses
     */
    function getOperators() public view returns (address[] memory) {
        return _operators.values();
    }

    /**
     * 
     * @dev function to get gameid supported by a token address
     */
    function getSupportedGameIdsByToken(address token) public view returns(uint256[] memory){
        return supportedTokens[token].values();
    }

    /**
     * 
     * @dev function to get gameid supported by a token item address
     */
    function getSupportedGameIdsByTokenItem(address token) public view returns(uint256[] memory){
        return supportedTokenItems[token].values();
    }

