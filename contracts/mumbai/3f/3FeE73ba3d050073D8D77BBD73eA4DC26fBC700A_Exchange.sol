        address token,
        address receiver
    ) external onlyOwner {
        require((supportedTokens[token].length() == 0), "Use withdraw instead");
        uint256 balance = 0;

        if (token == address(0)) {
            balance = address(this).balance;
            payable(receiver).sendValue(balance);
        } else {
            balance = IERC20Upgradeable(token).balanceOf(address(this));
            IERC20Upgradeable(token).transfer(receiver, balance);
        }

        emit Withdrawal(receiver, token, balance);
    }

