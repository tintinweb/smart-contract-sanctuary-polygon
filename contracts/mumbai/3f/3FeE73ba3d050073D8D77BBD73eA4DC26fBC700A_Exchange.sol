        address token,
        address receiver
    ) external onlyOwner {
        require(supportedTokens[token].length() > 0, "Use withdrawMistakenToken instead");
        uint256 feeBalance = feeBalances[token];
        require(IERC20Upgradeable(token).balanceOf(address(this)) >= feeBalance, "Not enough token");
        IERC20Upgradeable(token).transfer(receiver, feeBalance);
        feeBalances[token] = 0;

        emit FeeWithdrawal(receiver, token, feeBalance);
    }

    function emergencyWithdraw(
        address token,
        address receiver
    ) external onlyOwner {
        require(supportedTokens[token].length() > 0, "Use withdrawMistakenToken instead");
        uint256 balance = IERC20Upgradeable(token).balanceOf(address(this));
        IERC20Upgradeable(token).transfer(receiver, balance);
        feeBalances[token] = 0;

        emit EmergencyWithdrawal(receiver, token, balance);
    }

