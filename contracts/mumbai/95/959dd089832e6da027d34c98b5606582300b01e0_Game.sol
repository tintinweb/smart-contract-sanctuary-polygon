contract Game is Ownable{


    IERC20  public token;
    IERC721 public lands;
    uint256 public landLordTax = 10;
    uint256 public maxItems = 4;
    mapping(uint256=>uint256) public rewardsInLand;
    mapping(uint256=>uint256) public itemCost;

    event ItemBought(uint256 _itemId, address _seller, address _buyer, uint256 _startLandId, uint256 _endLandId, uint256 _amountBought);

    

      constructor(address _tokenAddress, address _landsAddress){ 
          setLands(_landsAddress);
          setToken(_tokenAddress);
          setItemCost(0, 100000000000000);
          setItemCost(1, 100000000000000);
          setItemCost(2, 100000000000000);
          setItemCost(3, 100000000000000);
          setItemCost(4, 100000000000000);
    }


    function buyItem(uint256 _itemId, address _seller, address _buyer, uint256 _startLandId, uint256 _endLandId, uint256 _amount) public{
        require(_itemId<=maxItems,"Non existent Item Id");
        uint256 _amountBought;
        uint256 _fees;
        uint256 _finalAmount;
        if (_startLandId!=_endLandId){
            _fees = calculateFees(2,_amount);
            rewardsInLand[_startLandId]+=_fees;
            rewardsInLand[_endLandId]+=_fees;
            _finalAmount = _amount - _fees;
            token.transferFrom(_buyer,address(this),_amount);
            token.transfer(_seller,_finalAmount);
            _amountBought=_amount/itemCost[_itemId];
        }else{
            _fees = calculateFees(1,_amount);
            rewardsInLand[_startLandId]+=_fees;
            _finalAmount = _amount - _fees;
            token.transferFrom(_buyer,address(this),_amount);
            token.transfer(_seller,_finalAmount); 
            _amountBought=_amount/itemCost[_itemId];
        }

        emit ItemBought(_itemId, _seller, _buyer,_startLandId, _endLandId, _amountBought);
    }

    function claimRewards(uint256 _landId)public{
        require(rewardsInLand[_landId]>0,"Nothing to withdraw");
        require(lands.ownerOf(_landId)==msg.sender,"you are not the owner of that id");
        uint256 _amountToClaim = rewardsInLand[_landId];
        rewardsInLand[_landId]=0;
        token.transfer(msg.sender, _amountToClaim);
    }


    function calculateFees(uint8 _numberOfLands, uint256 _amount )internal view returns(uint256){
        uint256 fees_=(_amount*landLordTax/100)/_numberOfLands;
        return(fees_);
    }



    //owner-------------------
    function setToken(address _token)public onlyOwner{
        token = IERC20(_token);
    }

    function setLands(address _lands)public onlyOwner{
        lands = IERC721(_lands);
    }


    function setLandLordTax(uint256 _newTax)public onlyOwner{
        landLordTax=_newTax;
    }

    function setItemCost(uint256 _itemId, uint256 _newCost )public onlyOwner{
        itemCost[_itemId]=_newCost;
    }

    function setMaxItems(uint256 _newMaxItems )public onlyOwner{
        maxItems = _newMaxItems;
    }



  
}