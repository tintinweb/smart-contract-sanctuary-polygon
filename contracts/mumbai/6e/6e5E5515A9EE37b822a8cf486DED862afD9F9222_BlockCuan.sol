import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

// SPDX-License-Identifier: UNLICENSED

pragma solidity ^0.8.9;

contract BlockCuan is Ownable, ReentrancyGuard {
    using Address for address payable;
    using Counters for Counters.Counter;
    using Strings for uint256;

    event BoughtTicket(
        address indexed user,
        uint256 indexed periodid,
        uint256 amountPayment,
        string[] listTicket
    );
    event ClaimedReward(
        uint256 indexed periodId,
        string winNumber,
        uint256 amountWin
    );
    event CreatedPeriod(uint256 periodId);
    event ForceSuffled(uint256 indexed periodId);
    event MovedReward(
        uint256 indexed moveFromId,
        uint256 indexed moveToId,
        uint256 amount
    );
    event UpdatedConfig(LotteryConfig config);

    mapping(uint256 => bytes32) private _blockRandomizer;

    mapping(uint256 => uint256) public totalTicketSold;
    mapping(uint256 => LotteryPeriod) public lotteryPeriod;
    mapping(uint256 => mapping(string => uint256)) public totalTicketOwner;
    mapping(uint256 => mapping(address => string[])) public userTicketLists;
    mapping(uint256 => mapping(address => mapping(string => bool)))
        public userBuyTicket;
    mapping(uint256 => mapping(address => mapping(string => bool)))
        public userClaimTicket;

    Counters.Counter private _currentPeriod;

    LotteryConfig public lotteryConfig;

    struct LotteryConfig {
        uint256 winFeeArg1;
        uint256 winFeeArg2;
        uint256 rangeTime;
        uint256 ticketPrice;
    }
    struct LotteryPeriod {
        uint256 timeEnd;
        uint256 timeLimitClaim;
        uint256 totalPool;
        uint256 totalClaimedPool;
    }

    constructor(LotteryConfig memory _config) {
        uint256 test = _percentageCalculator(
            10 ** 18,
            _config.winFeeArg1,
            _config.winFeeArg2
        );

        require(
            test <= (10 ** 18) && _config.rangeTime >= 259200,
            "BlockCuan : Invalid config"
        );

        lotteryConfig = _config;

        _shake();
    }

    function updateConfig(
        LotteryConfig memory config
    ) external onlyOwner nonReentrant {
        uint256 test = _percentageCalculator(
            10 ** 18,
            config.winFeeArg1,
            config.winFeeArg2
        );

        require(
            test <= (10 ** 18) && config.rangeTime >= 259200,
            "BlockCuan : Invalid config"
        );

        lotteryConfig = config;

        emit UpdatedConfig(config);
    }

    function buyTicket(string[] memory listBuy) external payable nonReentrant {
        uint256 periodId = currentPeriod();

        if (lotteryPeriod[periodId].timeEnd < block.timestamp) {
            _currentPeriod.increment();
            periodId = currentPeriod();
            lotteryPeriod[periodId].timeEnd =
                block.timestamp +
                lotteryConfig.rangeTime;
            lotteryPeriod[periodId].timeLimitClaim =
                lotteryPeriod[periodId].timeEnd +
                259200;

            emit CreatedPeriod(periodId);
        }

        require(
            msg.value == (listBuy.length * lotteryConfig.ticketPrice),
            "BlockCuan : Insufficient payment amount"
        );

        lotteryPeriod[periodId].totalPool += msg.value;
        _shake();

        for (uint256 a; a < listBuy.length; a++) {
            require(
                _validation(listBuy[a]) == true &&
                    userBuyTicket[periodId][_msgSender()][listBuy[a]] == false,
                "BlockCuan : Invalid buy action"
            );

            totalTicketSold[periodId] += 1;
            totalTicketOwner[periodId][listBuy[a]] += 1;
            userBuyTicket[periodId][_msgSender()][listBuy[a]] = true;
            userTicketLists[periodId][_msgSender()].push(listBuy[a]);
        }

        emit BoughtTicket(_msgSender(), periodId, msg.value, listBuy);
    }

    function claimReward(
        uint256 id,
        string memory ticket
    ) external nonReentrant {
        (bool status, uint8 typeWin) = checkTicketIsWin(id, ticket);

        require(
            lotteryPeriod[id].timeEnd < block.timestamp &&
                lotteryPeriod[id].timeLimitClaim > block.timestamp &&
                status == true &&
                totalTicketOwner[id][ticket] > 0 &&
                userBuyTicket[id][_msgSender()][ticket] == true &&
                userClaimTicket[id][_msgSender()][ticket] == false,
            "BlockCuan : Invalid claim action"
        );

        userClaimTicket[id][_msgSender()][ticket] = true;

        (
            uint256 digit4,
            uint256 digit3,
            uint256 digit2,
            uint256 digit1
        ) = poolSplit(id);
        uint256 valueWd;

        if (typeWin == 4) valueWd = digit4 / totalTicketOwner[id][ticket];
        if (typeWin == 3) valueWd = digit3 / totalTicketOwner[id][ticket];
        if (typeWin == 2) valueWd = digit2 / totalTicketOwner[id][ticket];
        if (typeWin == 1) valueWd = digit1 / totalTicketOwner[id][ticket];

        uint256 fee = _percentageCalculator(
            valueWd,
            lotteryConfig.winFeeArg1,
            lotteryConfig.winFeeArg2
        );

        payable(_msgSender()).sendValue(valueWd - fee);
        payable(owner()).sendValue(fee);

        emit ClaimedReward(id, ticket, valueWd);
    }

    function forceShake() external nonReentrant {
        uint256 id = currentPeriod();

        if (lotteryPeriod[id].timeEnd < block.timestamp) {
            _currentPeriod.increment();
            id = currentPeriod();
            lotteryPeriod[id].timeEnd =
                block.timestamp +
                lotteryConfig.rangeTime;
            lotteryPeriod[id].timeLimitClaim =
                lotteryPeriod[id].timeEnd +
                259200;

            emit CreatedPeriod(id);
        }

        _shake();
    }

    function moveRewardToCurrentPeriod(uint256 id) external nonReentrant {
        uint256 index = currentPeriod();
        require(
            id < index &&
                lotteryPeriod[id].timeLimitClaim < block.timestamp &&
                lotteryPeriod[id].totalPool >
                lotteryPeriod[id].totalClaimedPool,
            "BlockCuan : Invalid move reward action"
        );

        uint256 willMove = lotteryPeriod[id].totalPool -
            lotteryPeriod[id].totalClaimedPool;
        lotteryPeriod[id].totalClaimedPool += willMove;
        lotteryPeriod[index].totalPool += willMove;

        emit MovedReward(id, index, willMove);
    }

    function currentPeriod() public view returns (uint256) {
        return _currentPeriod.current();
    }

    function checkTicketIsWin(
        uint256 id,
        string memory ticket
    ) public view returns (bool, uint8) {
        require(id <= currentPeriod(), "BlockCuan : Invalid period");

        (
            string memory winner4,
            string memory winner3,
            string memory winner2,
            string memory winner1
        ) = winnerTicket(id);

        if (
            keccak256(abi.encodePacked(ticket)) ==
            keccak256(abi.encodePacked(winner4))
        ) return (true, 4);
        if (
            keccak256(abi.encodePacked(ticket)) ==
            keccak256(abi.encodePacked(winner3))
        ) return (true, 3);
        if (
            keccak256(abi.encodePacked(ticket)) ==
            keccak256(abi.encodePacked(winner2))
        ) return (true, 2);
        if (
            keccak256(abi.encodePacked(ticket)) ==
            keccak256(abi.encodePacked(winner1))
        ) return (true, 1);
        return (false, 0);
    }

    function poolSplit(
        uint256 id
    )
        public
        view
        returns (uint256 digit4, uint256 digit3, uint256 digit2, uint256 digit1)
    {
        unchecked {
            digit4 = _percentageCalculator(lotteryPeriod[id].totalPool, 40, 1);
            digit3 = _percentageCalculator(lotteryPeriod[id].totalPool, 30, 1);
            digit2 = _percentageCalculator(lotteryPeriod[id].totalPool, 20, 1);
            digit1 = _percentageCalculator(lotteryPeriod[id].totalPool, 10, 1);
        }
    }

    function totalUserBuy(
        uint256 id,
        address user
    ) public view returns (uint256) {
        return userTicketLists[id][user].length;
    }

    function winnerTicket(
        uint256 id
    )
        public
        view
        returns (string memory, string memory, string memory, string memory)
    {
        string memory win = (id <= currentPeriod() &&
            lotteryPeriod[id].timeEnd < block.timestamp)
            ? _winnerPicker(_blockRandomizer[id])
            : "0000";

        return (
            win,
            string(abi.encodePacked("0", _sliceStr(1, 3, win))),
            string(abi.encodePacked("00", _sliceStr(1, 2, win))),
            string(abi.encodePacked("000", _sliceStr(1, 1, win)))
        );
    }

    function _shake() private {
        uint256 id = currentPeriod();
        _blockRandomizer[id] = blockhash(block.number - 1);

        emit ForceSuffled(id);
    }

    function _winnerPicker(
        bytes32 randomizedHash
    ) private view returns (string memory) {
        unchecked {
            uint256 generatedNumber = uint256(randomizedHash);
            uint256 currentWin = (generatedNumber * block.chainid) % 9999;

            if (currentWin <= 9)
                return string(abi.encodePacked("000", currentWin.toString()));
            if (currentWin <= 99)
                return string(abi.encodePacked("00", currentWin.toString()));
            if (currentWin <= 999)
                return string(abi.encodePacked("0", currentWin.toString()));
            return currentWin.toString();
        }
    }

    function _sliceStr(
        uint256 begin,
        uint256 end,
        string memory text
    ) private pure returns (string memory) {
        bytes memory a = new bytes(end - begin + 1);

        for (uint256 i = 0; i <= end - begin; i++) {
            a[i] = bytes(text)[i + begin - 1];
        }

        return string(a);
    }

    function _percentageCalculator(
        uint256 amount,
        uint256 percentageArg1,
        uint256 percentageArg2
    ) private pure returns (uint256 calc) {
        unchecked {
            calc = ((amount * percentageArg1) / percentageArg2) / 100;
        }
    }

    function _validation(string memory str) private pure returns (bool) {
        bytes memory b = bytes(str);
        if (b.length != 4) return false;

        for (uint256 i; i < b.length; i++) {
            bytes1 char = b[i];

            if (!(char >= 0x30 && char <= 0x39)) return false;
        }

        return true;
    }
}