    /// @notice Fulfills the Chainlink VRF request and mints a random spray can NFT based on the randomWords provided
    /// @param requestId The Chainlink VRF request ID
    /// @param randomWords An array of random words generated by Chainlink VRF
    function fulfillRandomWords(uint256 requestId, uint256[] memory randomWords)
        internal
        override
    {
        uint256 randomNumber = randomWords[0];

        // Use the dropRates array stored in the s_request_dropRates mapping
        uint256[] memory dropRates = s_request_dropRates[requestId];
        uint256 tokenId = getRandomSprayCan(randomNumber, dropRates);

        address minter = s_rollers[requestId];

        _mint(minter, tokenId, 1, "");

        s_results[minter][s_results[minter].length - 1] = tokenId;
        emit Minted(requestId, minter, tokenId);
    }

