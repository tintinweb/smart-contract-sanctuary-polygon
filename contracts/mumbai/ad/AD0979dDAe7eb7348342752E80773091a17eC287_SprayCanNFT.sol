    /// @notice Burns a specified amount of the provided spray can NFT
    /// @param tokenId The spray can token ID to burn
    /// @param amount The amount of tokens to burn
    function burn(uint256 tokenId, uint256 amount) public {
        require(balanceOf(msg.sender, tokenId) >= amount, "Not enough to burn");
        
        _burn(msg.sender, tokenId, amount);
        // Emit the Burned event when a token is burned
        emit Burned(tokenId, msg.sender, amount);
    }

    /// @notice Burns specified amounts of the provided token IDs
    /// @param tokenIds An array of token IDs to burn
    /// @param amounts An array of amounts to burn for each token ID
    function batchBurn(uint256[] memory tokenIds, uint256[] memory amounts) public {
        // Ensure the tokenIds and amounts arrays have the same length
        require(tokenIds.length == amounts.length, "TokenIds and amounts length mismatch");

        // Check if the caller has enough tokens to burn for each token ID
        // and emit the Burned event if the required tokens are available
        for (uint256 i = 0; i < tokenIds.length; i++) {
            require(balanceOf(msg.sender, tokenIds[i]) >= amounts[i], "Not enough tokens to burn for one of the token IDs");
            emit Burned(tokenIds[i], msg.sender, amounts[i]);
        }

        // Burn the specified amounts of tokens for each token ID
        _burnBatch(msg.sender, tokenIds, amounts);
    }
