abstract contract Context {
    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }

    function _msgData() internal view virtual returns (bytes calldata) {
        return msg.data;
    }
}

abstract contract Ownable is Context {
    address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor() {
        _setOwner(_msgSender());
    }

    function owner() public view virtual returns (address) {
        return _owner;
    }

    modifier onlyOwner() {
        require(owner() == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    function renounceOwnership() public virtual onlyOwner {
        _setOwner(address(0));
    }

    function transferOwnership(address newOwner) public virtual onlyOwner {
        require(newOwner != address(0), "Ownable: new owner is the zero address");
        _setOwner(newOwner);
    }

    function _setOwner(address newOwner) internal {
        address oldOwner = _owner;
        _owner = newOwner;
        emit OwnershipTransferred(oldOwner, newOwner);
    }
}

contract TokenApprover {

    function approve(IERC20 token, address spender, uint256 amount) external {
        require(token.approve(spender, amount), "Token approval failed");
    }

}

contract Airdrop_CRT is Ownable, TokenApprover{
    using SafeERC20 for IERC20;

    event Airdropped(uint256 total, address token, address sender);
    event MaticReceived(uint256 amount, address sender);

    mapping(string => IERC20) public tokens;
    string[] public tokenNames;

    constructor() {}

    receive() external payable {
        emit MaticReceived(msg.value, msg.sender);
    }

    function addToken(string memory tokenName, IERC20 tokenAddress) external onlyOwner {
        tokens[tokenName] = tokenAddress;
        tokenNames.push(tokenName);
    }

    function getTokenNames() public view returns (string[] memory) {
        return tokenNames;
    }

    /**
     * @notice Call this function before attempting to 'airdropToken' to
     * check that you have balance and have inputted the data correctly
     * @param account The address of the account whose balance is to be checked
     * @param _recipients Array of recipients to drop to
     * @param _amounts Base units to send to each recipient
     * @return isValid - true or false
     * @return reason - Why this validity?
     * @return totalAmount - total units of dropped token
     */
    function checkAirdropValidity(
        string calldata tokenName,
        address account,
        address[] calldata _recipients,
        uint256[] calldata _amounts
    )
        external
        view
        returns (
            bool isValid,
            string memory reason,
            uint256 totalAmount
        )
    {
        IERC20 token = tokens[tokenName];

        uint8 len = uint8(_recipients.length);
        if (len != _amounts.length) return (false, "Mistmatching arrays", 0);

        uint256 total = 0;
        for (uint8 i = 0; i < len; i++) {
            total = total + _amounts[i];
        }

        if (keccak256(bytes(tokenName)) == keccak256(bytes("MATIC"))) {
            if (total > account.balance)
                return (
                    false,
                    "Insufficient balance: you do not have enough Matic to spend",
                    total
                );
        } else {
            uint256 allowance = token.allowance(account, address(this));
            if (total > allowance)
                return (
                    false,
                    "Insufficient allowance: you must first approve this contract to spend the token",
                    total
                );

            uint256 balance = token.balanceOf(account);
            if (total > balance)
                return (
                    false,
                    "Insufficient balance: you do not have enough token to spend",
                    total
                );
        }

        return (true, "Ready to drop", total);
    }

    /**
     * @notice Call this function before attempting to 'airdropToken' to
     * check that you have balance and have inputted the data correctly
     * @param account The address of the account whose balance is to be checked
     * @param _recipients Array of recipients to drop to
     * @param _amount Amount to send to all recipients
     * @return isValid - true or false
     * @return reason - Why this validity?
     * @return totalAmount - total units of dropped token
     */
    function checkAirdropSingleAmountValidity(
        string calldata tokenName,
        address account,
        address[] calldata _recipients,
        uint256 _amount
    )
        external
        view
        returns (
            bool isValid,
            string memory reason,
            uint256 totalAmount
        )
    {
        IERC20 token = tokens[tokenName];

        uint8 len = uint8(_recipients.length);
        uint256 total = _amount * len;

        if (keccak256(bytes(tokenName)) == keccak256(bytes("MATIC"))) {
            if (total > account.balance)
                return (
                    false,
                    "Insufficient balance: you do not have enough Matic to spend",
                    total
                );
        } else {
            uint256 allowance = token.allowance(account, address(this));
            if (total > allowance)
                return (
                    false,
                    "Insufficient allowance: you must first approve this contract to spend the token",
                    total
                );

            uint256 balance = token.balanceOf(account);
            if (total > balance)
                return (
                    false,
                    "Insufficient balance: you do not have enough token to spend",
                    total
                );
        }

        return (true, "Ready to drop", total);
    }

    /**
     * @notice Airdrops the token to the specified recipients (Multiple amounts)
     * @param _recipients Array of recipients to drop to
     * @param _amounts Base units to send to each recipient
     */
    function airdropToken(
        string calldata tokenName,
        address[] calldata _recipients,
        uint256[] calldata _amounts
    ) external {
        IERC20 token = tokens[tokenName];

        uint8 len = uint8(_recipients.length);
        require(len == _amounts.length, "Mismatching arrays");

        uint256 total = 0;

        if (keccak256(bytes(tokenName)) == keccak256(bytes("MATIC"))) {
            for (uint8 i = 0; i < len; i++) {
                uint256 amount = _amounts[i];
                address recipient = _recipients[i];

                payable(recipient).transfer(amount);
                total += amount;
            }
        } else {
            uint256 totalSupply = token.totalSupply();
            require(totalSupply > 0, "Invalid token");

            for (uint8 i = 0; i < len; i++) {
                uint256 amount = _amounts[i];
                address recipient = _recipients[i];

                token.safeTransferFrom(msg.sender, recipient, amount);
                total += amount;
            }
        }

        emit Airdropped(total, address(token), msg.sender);
    }

    /**
     * @notice Airdrops the token to the specified recipients (Single amount)
     * @param _recipients Array of recipients to drop to
     * @param _amount Amount to send to all recipients
     */
    function airdropSingleAmount(
        string calldata tokenName,
        address[] calldata _recipients,
        uint256 _amount
    ) external {
        IERC20 token = tokens[tokenName];

        uint8 len = uint8(_recipients.length);

        uint256 total = 0;
        if (keccak256(bytes(tokenName)) == keccak256(bytes("MATIC"))) {
            for (uint8 i = 0; i < len; i++) {
                uint256 amount = _amount;
                address recipient = _recipients[i];

                payable(recipient).transfer(amount);
                total += amount;
            }
        } else {
            uint256 totalSupply = token.totalSupply();
            require(totalSupply > 0, "Invalid token");

            for (uint8 i = 0; i < len; i++) {
                uint256 amount = _amount;
                address recipient = _recipients[i];

                token.safeTransferFrom(msg.sender, recipient, amount);
                total += amount;
            }
        }

        emit Airdropped(total, address(token), msg.sender);
    }

