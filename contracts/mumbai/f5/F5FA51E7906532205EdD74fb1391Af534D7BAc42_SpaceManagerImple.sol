        address account
    ) public view returns (bool) {
        Space memory space = spaces[spaceId];
        return account == space.spaceOwner;
    }

    function getCollection(
        address collection
    ) external view returns (SpaceLibrary.Collection memory) {
        return collections[collection];
    }

    function getCollectionOwner(
        address collection
    ) external view returns (address) {
        address owner = spaces[collections[collection].spaceId].spaceOwner;
        if (owner != address(0)) {
            return owner;
        }
        return OwnableUpgradeable(collection).owner();
    }

    function getUserSpaces(
        address spaceOwner
    ) public view returns (uint256[] memory createdSpaces) {
        createdSpaces = userSpaces[spaceOwner];
    }

    /** ========== main functions ========== */
    /**
     * @notice one valid user can register multiple spaces
     */
    function registerNewSpace(string memory metadata) external {
        uint256 currentSpaceId = ++totalSpaces;
        Space memory space;
        space.spaceOwner = msg.sender;
        space.details = metadata;
        space.verified = !auditOn ? true : false;
        spaces[currentSpaceId] = space;
        userSpaces[msg.sender].push(currentSpaceId);

        emit NewSpaceRegistered(currentSpaceId, msg.sender, metadata);
    }

    function updateSpace(uint256 spaceId, string memory newDetail) external {
        Space storage space = spaces[spaceId];
        if (space.spaceOwner != msg.sender) revert ErrNoPermission();

        space.details = newDetail;

        emit UpdatedSpace(spaceId, newDetail);
    }

