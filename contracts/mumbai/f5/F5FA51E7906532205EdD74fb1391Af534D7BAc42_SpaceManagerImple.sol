    // metadataURI is collection's metadata url
    function addOriginalCollection(
        address collection,
        uint256 spaceId,
        string memory metadataURI,
        bool verified,
        CBE.LicenseVersion cbeLicense,
        uint256 chainId
    ) external {
        if (collections[collection].verified == true)
            revert ErrCollectionAlreadyAdded();

        Space memory space = spaces[spaceId];
        if (space.spaceOwner == address(0)) revert ErrInvalidSpace();
        if (spaceId != 1) {
            if (msg.sender != owner() && msg.sender != space.spaceOwner) {
                revert ErrNoPermission();
            }
        }

        // check if the msg.sender is token holder or collection owner
        if (verified) {
            // check if it's erc721
            // IERC721Metadata(collection).name();
            // IERC721Metadata(collection).symbol();
            // IERC721Enumerable(collection).totalSupply();
            if (
                msg.sender != owner() &&
                msg.sender != OwnableUpgradeable(collection).owner()
            ) revert ErrNoPermission();
        }
        if (chainId == 0) {
            chainId = block.chainid;
        }
        collections[collection] = SpaceLibrary.Collection({
            spaceId: spaceId,
            metadataURI: metadataURI,
            verified: verified,
            isOriginal: true,
            isImported: true,
            cbeLicense: cbeLicense,
            chainId: chainId
        });

        emit CollectionAdded(
            spaceId,
            OwnableUpgradeable(collection).owner(),
            collection
        );
    }

    function addDerivativeCollection(
        address collection,
        uint256 spaceId,
        address collectionOwner,
        string memory _metadataURI,
        CBE.LicenseVersion _cbeLicense
    ) external {
        if (spaces[spaceId].spaceOwner == address(0)) revert ErrInvalidSpace();
        if (msg.sender != licenseManager) revert ErrOnlyInternalCall();

        collections[collection] = SpaceLibrary.Collection({
            spaceId: spaceId,
            metadataURI: _metadataURI,
            verified: true,
            isOriginal: false,
            isImported: false,
            cbeLicense: _cbeLicense,
            chainId: block.chainid
        });

        emit CollectionAdded(spaceId, collectionOwner, collection);
    }

    function verifyCollection(address _collection) external {
        uint256 spaceId = collections[_collection].spaceId;
        if (spaceId > 1) revert ErrInvalidCollection();
        if (
            msg.sender != owner() &&
            msg.sender == OwnableUpgradeable(_collection).owner()
        ) revert ErrNoPermission();

        collections[_collection].verified = true;
        emit CollectionVerified(_collection);
    }

    // _metadataURI is collection's metadata url
    // _metadataURI is ipfs url
    // json format:
    // {
    // "name": "collecion name",
    // "image": "File | Blob",
    //  "description": "collection descr",
    //  "cbe_license": 0,// 0: PUBLIC,1: EXCLUSIVE,2: COMMERCIAL,3: COMMERCIAL_NO_HATE, 4: PERSONAL 5:PERSONAL_NO_HATE,
    //  "category":"art"
    //  }
    function createOriginalCollection(
        Collection.InitParams memory _params,
        uint256 _spaceId,
        string memory _metadataURI
    ) external returns (address collection) {
        Space memory space = spaces[_spaceId];
        if (space.spaceOwner == address(0)) revert ErrInvalidSpace();
        if (msg.sender != space.spaceOwner) revert ErrNoPermission();

        // initialize a new proxy collection
        BeaconProxy proxy = new BeaconProxy(collectionBeacon, "");
        _params.spaceManager = address(this);
        _params.licenseManger = licenseManager;

        // reset recipient that owner need to claim reward from original collection
        _params.paymentRecipient = address(0);
        if (_params.owner == address(0)) {
            _params.owner = msg.sender;
        }

        // initialize the new collection
        ICollection(address(proxy)).initialize(_params);

        // update global data
        collections[address(proxy)] = SpaceLibrary.Collection({
            spaceId: _spaceId,
            metadataURI: _metadataURI,
            verified: true,
            isOriginal: true,
            isImported: false,
            cbeLicense: _params.cbeLicense,
            chainId: block.chainid
        });

        collection = address(proxy);

        emit CollectionAdded(_spaceId, _params.owner, address(proxy));
    }

    /** ========== admin functions =========== */
    function auditSwitch() external onlyOwner {
        auditOn = !auditOn;
    }

    // optional: utilize chainlink oracle to verify space provider's web2 authentication(i.e. twitter)
    function approveNewSpace(uint256 spaceId) external onlyOwner {
        if (!_isExistSpace(spaceId)) revert ErrSpaceNotExist();
        if (spaces[spaceId].verified == true) revert ErrSpaceApproved();

        spaces[spaceId].verified = true;

        emit SpaceApproved(spaceId);
    }

    function updateNewCollectionBeacon(address newBeacon) external onlyOwner {
        collectionBeacon = newBeacon;

        emit CollectionBeaconUpdated(newBeacon);
    }

    /** ========== internal view functions ========== */

    function _isExistSpace(
        uint256 _spaceId
    ) internal view returns (bool _existed) {
        Space memory space = spaces[_spaceId];

        if (space.spaceOwner != address(0)) {
            _existed = true;
        }
    }

