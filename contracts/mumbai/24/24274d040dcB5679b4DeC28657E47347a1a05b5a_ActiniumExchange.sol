        uint256 _amount,
        address tokenAddress
    ) public onlyOwner {
        require(_amount > 0, "Invalid withdraw amount");
        IERC20(tokenAddress).transferFrom(address(this), owner(), _amount);
    }

    function setThorium(address _thorium) external onlyOwner {
        thorium = _thorium;
    }
}

