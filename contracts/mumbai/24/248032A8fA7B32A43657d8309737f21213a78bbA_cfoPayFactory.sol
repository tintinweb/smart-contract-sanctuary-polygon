pragma solidity ^0.8.0;

import {cfoPay} from "./cfoPay.sol";


contract cfoPayFactory {
    bytes32 constant INIT_CODEHASH = keccak256(type(cfoPay).creationCode);

    address public parameter;
    uint256 public getcfoPayContractCount;
    address[1000000000] public getcfoPayContractByIndex; // 1 billion indices

    event cfoPayCreated(address token, address cfoPay);

    /**
        @notice Create a new cfo Pay Streaming instance for `_token`
        @dev Instances are created deterministically via CREATE2 and duplicate
            instances will cause a revert
        @param _token The ERC20 token address for which a cfo Pay contract should be deployed
        @return cfoPayContract The address of the newly created cfo Pay contract
      */
    function createcfoPayContract(address _token) external returns (address cfoPayContract) {
        // set the parameter storage slot so the contract can query it
        parameter = _token;
        // use CREATE2 so we can get a deterministic address based on the token
        cfoPayContract = address(new cfoPay{salt: bytes32(uint256(uint160(_token)))}());
        // CREATE2 can return address(0), add a check to verify this isn't the case
        // See: https://eips.ethereum.org/EIPS/eip-1014
        require(cfoPayContract != address(0));

        // Append the new contract address to the array of deployed contracts
        uint256 index = getcfoPayContractCount;
        getcfoPayContractByIndex[index] = cfoPayContract;
        unchecked{
            getcfoPayContractCount = index + 1;
        }

        emit cfoPayCreated(_token, cfoPayContract);
    }

    /**
      @notice Query the address of the cfo Pay contract for `_token` and whether it is deployed
      @param _token An ERC20 token address
      @return predictedAddress The deterministic address where the cfo pay contract will be deployed for `_token`
      @return isDeployed Boolean denoting whether the contract is currently deployed
      */
    function getcfoPayContractByToken(address _token) external view returns(address predictedAddress, bool isDeployed){
        predictedAddress = address(uint160(uint256(keccak256(abi.encodePacked(
            bytes1(0xff),
            address(this),
            bytes32(uint256(uint160(_token))),
            INIT_CODEHASH
        )))));
        isDeployed = predictedAddress.code.length != 0;
    }
}

