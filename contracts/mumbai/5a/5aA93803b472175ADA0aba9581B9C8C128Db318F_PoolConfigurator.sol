 * @author Aave
 * @notice Implementation of the interest bearing token for the Aave protocol
 */
contract PToken is VersionedInitializable, IPToken {
  using WadRayMath for uint256;
  using SafeCast for uint256;
  using GPv2SafeERC20 for IERC20;

  uint256 public constant PTOKEN_REVISION = 0x1;

  address private _treasury;
  address private _supplyingAsset;
  address private _borrowingAsset;
  uint8 private _supplyingAssetDecimals;
  uint8 private _borrowingAssetDecimals;
  address private _underlyingAsset;
  
  struct UserState {
    uint256 supplyBalance;
    uint256 borrowBalance;
    uint40 lastUpdateTimestamp;
    uint256 supplyInterestRate; // in Wad
    uint256 borrowInterestRate; // in Wad
  }
  mapping(address => UserState) private _userState;

  uint256 private _supplyTotalBalance;
  uint256 private _supplyTotalInterestAmount;
  uint256 private _borrowTotalBalance;
  uint256 private _borrowTotalInterestAmount;
  uint40 private _lastUpdateTimestamp;
  string private _name;
  string private _symbol;
  uint8 private _decimals;
  IPoolAddressesProvider internal immutable  _addressesProvider;
  IPool public immutable POOL;

  /**
   * @dev Constructor.
   * @param pool The address of the Pool contract
   */
  constructor(IPool pool) {
    POOL = pool;
    _addressesProvider = pool.ADDRESSES_PROVIDER();
  }

  /// @inheritdoc VersionedInitializable
  function getRevision() internal pure virtual override returns (uint256) {
    return PTOKEN_REVISION;
  }

  /// @inheritdoc IInitializablePToken
  function initialize(
    IPool initializingPool,
    address treasury,
    address supplyingAsset,
    address borrowingAsset,
    uint8 pTokenDecimals,
    string calldata pTokenName,
    string calldata pTokenSymbol,
    bytes calldata params
  ) external initializer {
    require(initializingPool == POOL, Errors.POOL_ADDRESSES_DO_NOT_MATCH);
    _name = pTokenName;
    _symbol = pTokenSymbol;
    _decimals = pTokenDecimals;

    _treasury = treasury;
    _supplyingAsset = supplyingAsset;
    _borrowingAsset = borrowingAsset;
    _supplyingAssetDecimals = IERC20Detailed(supplyingAsset).decimals();
    _borrowingAssetDecimals = IERC20Detailed(borrowingAsset).decimals();
    _underlyingAsset = supplyingAsset;

    emit Initialized(
      supplyingAsset,
      borrowingAsset,
      address(POOL),
      treasury,
      pTokenDecimals,
      pTokenName,
      pTokenSymbol,
      params
    );
  }

  /**
   * @dev Only pool can call functions marked by this modifier.
   **/
  modifier onlyPool() {
    require(msg.sender == address(POOL), Errors.CALLER_MUST_BE_POOL);
    _;
  }

  /// @inheritdoc IERC20Detailed
  function name() public view override returns (string memory) {
    return _name;
  }

  /// @inheritdoc IERC20Detailed
  function symbol() external view override returns (string memory) {
    return _symbol;
  }

  /// @inheritdoc IERC20Detailed
  function decimals() external view override returns (uint8) {
    return _decimals;
  }

  /// @inheritdoc IERC20
  function balanceOf(address user) external view returns (uint256) {
    if(_userState[user].supplyBalance == 0) return 0;

    uint256 dt = block.timestamp - uint256(_userState[user].lastUpdateTimestamp);
    uint256 curSupplyBalance = _userState[user].supplyBalance + _userState[user].supplyBalance.wadMul(_userState[user].supplyInterestRate) * dt;

    if(_userState[user].borrowBalance > 0) {
      uint256 borrowInterestAmount = _userState[user].borrowBalance.wadMul(_userState[user].borrowInterestRate) * dt;
      if(curSupplyBalance < borrowInterestAmount) return 0;
      curSupplyBalance -= borrowInterestAmount;
    }

    return curSupplyBalance / WadRayMath.WAD;
  }

  /// @inheritdoc IERC20
  function totalSupply() external view returns (uint256) {
    if(_supplyTotalBalance == 0) return 0;

    uint256 dt = block.timestamp - uint256(_lastUpdateTimestamp);
    uint256 curSupplyTotal = _supplyTotalBalance + _supplyTotalInterestAmount * dt;

     if(_borrowTotalBalance > 0) {
        uint256 borrowTotalInterest = _borrowTotalInterestAmount * dt;
        if(curSupplyTotal < borrowTotalInterest) return 0;
        curSupplyTotal -= borrowTotalInterest;
      } 
    return curSupplyTotal / WadRayMath.WAD;
  }

  /// @inheritdoc IPToken
  function borrowBalanceOf(address user) external view returns (uint256) {
    return _userState[user].borrowBalance / WadRayMath.WAD;
  }

  /// @inheritdoc IPToken
  function totalBorrow() external view returns (uint256) {
    return _borrowTotalBalance / WadRayMath.WAD;
  }

  /// @inheritdoc IPToken
  function supply(address user, uint256 amount) external virtual override onlyPool {
    _updateState(user);

    if (_userState[user].supplyBalance == 0) {
      _userState[user].supplyInterestRate = POOL.getSupplyInterestRate(_underlyingAsset);
      _userState[user].supplyBalance = 0;
      _userState[user].borrowBalance = 0;
    }

    uint256 scaledAmount = amount * WadRayMath.WAD;
    _userState[user].supplyBalance += scaledAmount;
    _supplyTotalBalance += scaledAmount;

    _supplyTotalInterestAmount += scaledAmount.wadMul(_userState[user].supplyInterestRate);
    _userState[user].lastUpdateTimestamp = _lastUpdateTimestamp = uint40(block.timestamp);
  }

  /// @inheritdoc IPToken
  function borrow(address user, uint256 amount) external virtual override onlyPool {
    _updateState(user);

    if (_userState[user].borrowBalance == 0) {
      _userState[user].borrowInterestRate = POOL.getBorrowInterestRate(_underlyingAsset);
    }

    uint256 scaledAmount = amount * WadRayMath.WAD;
    _userState[user].borrowBalance += scaledAmount;
    _borrowTotalBalance += scaledAmount;

    _borrowTotalInterestAmount += scaledAmount.wadMul(_userState[user].borrowInterestRate);
    _userState[user].lastUpdateTimestamp = _lastUpdateTimestamp = uint40(block.timestamp);
  }

  /// @inheritdoc IPToken
  function withdraw(address user, uint256 amount) external virtual override onlyPool {
    _updateState(user);

    uint256 scaledAmount = amount * WadRayMath.WAD;
    require (_userState[user].supplyBalance >= scaledAmount, Errors.INSUFFICIENT_SUPPLY_BALANCE);

    _userState[user].supplyBalance -= scaledAmount;
    _supplyTotalBalance -= scaledAmount;

    _supplyTotalInterestAmount -= scaledAmount.wadMul(_userState[user].supplyInterestRate);
    _userState[user].lastUpdateTimestamp = _lastUpdateTimestamp = uint40(block.timestamp);
    IERC20(_underlyingAsset).safeTransfer(user, amount);
  }

  /// @inheritdoc IPToken
  function repay(address user, uint256 amount) external virtual override onlyPool {
    _updateState(user);

    uint256 scaledAmount = amount * WadRayMath.WAD;
    require (_userState[user].borrowBalance >= scaledAmount, Errors.INSUFFICIENT_BORROW_BALANCE);

    _userState[user].borrowBalance -= scaledAmount;
    _borrowTotalBalance -= scaledAmount;

    _borrowTotalInterestAmount -= scaledAmount.wadMul(_userState[user].borrowInterestRate);
    _userState[user].lastUpdateTimestamp = _lastUpdateTimestamp = uint40(block.timestamp);
  }

  /// @inheritdoc IPToken
  function liquidate(address user) external virtual override onlyPool {
    _updateState(user);
    uint256 supplyAmount = _userState[user].supplyBalance;
    _supplyTotalBalance -= supplyAmount;
    _supplyTotalInterestAmount -= supplyAmount.wadMul(_userState[user].supplyInterestRate);
    uint256 borrowAmount = _userState[user].borrowBalance;
    _borrowTotalBalance -= borrowAmount;
    _borrowTotalInterestAmount -= borrowAmount.wadMul(_userState[user].borrowInterestRate);
    delete _userState[user];
  }

  function _updateState(address user) internal {
    if(_supplyTotalBalance > 0) {
      uint256 dt = block.timestamp - uint256(_lastUpdateTimestamp);
      uint256 nextTotalSupplyBalance = _supplyTotalBalance + _supplyTotalInterestAmount * dt;

      if(_borrowTotalBalance > 0) {
        uint256 borrowTotalInterest = _borrowTotalInterestAmount * dt;
        require(nextTotalSupplyBalance >= borrowTotalInterest, Errors.INVALID_TOTAL_BALANCE);
        nextTotalSupplyBalance -= borrowTotalInterest;
      }

      _supplyTotalBalance = nextTotalSupplyBalance;
    }

    if(_userState[user].supplyBalance > 0) {
      uint256 dt = block.timestamp - uint256(_userState[user].lastUpdateTimestamp);
      uint256 prevSupplyBalance = _userState[user].supplyBalance;
      uint256 nextSupplyBalance = _userState[user].supplyBalance + _userState[user].supplyBalance.wadMul(_userState[user].supplyInterestRate) * dt;

      if(_userState[user].borrowBalance > 0) {
        uint256 borrowInterestAmount = _userState[user].borrowBalance.wadMul(_userState[user].borrowInterestRate) * dt;
        require(nextSupplyBalance >= borrowInterestAmount, Errors.INVALID_BALANCE);
        nextSupplyBalance -= borrowInterestAmount;
      }
      _userState[user].supplyBalance = nextSupplyBalance;

      uint256 dSupply;
      if(prevSupplyBalance < nextSupplyBalance) {
        dSupply = nextSupplyBalance - prevSupplyBalance;
        _supplyTotalInterestAmount += dSupply.wadMul(_userState[user].supplyInterestRate);
      } else {
        dSupply = prevSupplyBalance - nextSupplyBalance;
        _supplyTotalInterestAmount -= dSupply.wadMul(_userState[user].supplyInterestRate);
      }
    }
  }

  /// @inheritdoc IPToken
  function lastUpdateTimestampOf(address user) external view returns (uint40) {
    return _userState[user].lastUpdateTimestamp;
  }
  

  function lastUpdateTimestamp() external view returns (uint40) {
    return _lastUpdateTimestamp;
  }

  function transfer(address, uint256) external virtual override returns (bool) {
    revert(Errors.OPERATION_NOT_SUPPORTED);
  }

  function allowance(address, address) external view returns (uint256) {
    revert(Errors.OPERATION_NOT_SUPPORTED);
  }

  function approve(address, uint256) external virtual returns (bool) {
    revert(Errors.OPERATION_NOT_SUPPORTED);
  }

  function transferFrom(
    address,
    address,
    uint256
  ) external returns (bool) {
    revert(Errors.OPERATION_NOT_SUPPORTED);
  }

  function increaseAllowance(address, uint256) external returns (bool) {
    revert(Errors.OPERATION_NOT_SUPPORTED);
  }

  function decreaseAllowance(address, uint256) external returns (bool) {
    revert(Errors.OPERATION_NOT_SUPPORTED);
  }

  function UNDERLYING_ASSET_ADDRESS() external view virtual override returns (address) {
    return _underlyingAsset;
  }

  /// @inheritdoc IPToken
  function RESERVE_TREASURY_ADDRESS() external view override returns (address) {
    return _treasury;
  }

  /// @inheritdoc IPToken
  function transferUnderlyingTo(address target, uint256 amount) external virtual override onlyPool {
    IERC20(_underlyingAsset).safeTransfer(target, amount);
  }

  /// @inheritdoc IPToken
  function supplyDecimals() external view override returns (uint8) {
    return _supplyingAssetDecimals;
  }

  /// @inheritdoc IPToken
  function borrowDecimals() external view override returns (uint8) {
    return _borrowingAssetDecimals;
  }
}

