pragma solidity 0.8.15;

import "../base/Factory.sol";
import "./LpLocker.sol";

contract LpLockerFactory is Factory {

    constructor(ISaleManager manager) Factory(manager) { }

    function createLpLocker(address projectOwner, address campaign) external {
        if (_manager.getRoles().isDeployer(msg.sender)) {

            // Is valid campaign?
            require(_manager.isCampaignActive(campaign), "Not valid campaign");

            bytes32 salt = keccak256(abi.encodePacked(_autoIndex++, projectOwner, msg.sender));
            new LpLocker{salt: salt}(_manager.getRoles(), projectOwner, campaign);
        }
    }
}