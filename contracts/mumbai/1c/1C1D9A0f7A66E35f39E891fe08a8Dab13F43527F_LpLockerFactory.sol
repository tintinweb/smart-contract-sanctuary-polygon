import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "../interfaces/ILpLocker.sol";
import "../../base/Accessable.sol";
import "../../base/Controllable.sol";
import "../../base/TokenHelper.sol";
import "../interfaces/IUniswapV2Router01.sol";
import "../interfaces/IUniswapV2Factory.sol";
import "../interfaces/INonfungiblePositionManager.sol";

contract LpLocker is ILpLocker, Controllable, TokenHelper, Accessable, ERC721Holder {
    
    address public projectOwner;
    ILpLocker.LpParam public lpParams;
    ILpLocker.LpCreation public lp;

    event CreatedLp(uint lpTokenAmt);
    event CreatedLpV3(uint tokenId);
    event MultiSigWithdrawToken(address token, uint amount, address to);

    constructor(IRoles roles, address teamAddress, address campaignAddress) Accessable(roles) {
        changeController(campaignAddress);
        projectOwner = teamAddress;
    }


    // Can only be called by campaign. Campaign will send the USDC here to create the LP
    function createLp(ILpLocker.LpParam memory param, address token, address currency, uint currencyDpValue) external override onlyController {
        
        lpParams = param;
        lp.token = token;
        lp.currency = currency;
        lp.tokenQty = (param.rate * param.reservedUsdc) / currencyDpValue; // rate is amt of token per 1 USDC ($1)
        lp.currencyQty = param.reservedUsdc;

        require(ERC20(token).approve(param.router, lp.tokenQty), "Approve failed");
        require(ERC20(currency).approve(param.router, lp.currencyQty), "Approve failed");
        // Create LP
        uint lpTokenAmt;
        if (param.version == 3){
            INonfungiblePositionManager nonfungiblePositionManager = INonfungiblePositionManager(param.router);
            uint amount0ToMint =  lp.tokenQty;
            uint amount1ToMint = lp.currencyQty;
            (address tokenA, address tokenB) = _sortedTokens(token, currency);
            if (tokenA != currency) {
                amount0ToMint = lp.currencyQty;
                amount1ToMint = lp.tokenQty;
            }
            nonfungiblePositionManager.createAndInitializePoolIfNecessary(tokenA, tokenB, param.v3.poolFee, param.v3.poolPrice);
            INonfungiblePositionManager.MintParams memory params = INonfungiblePositionManager.MintParams({
                token0: tokenA,
                token1: tokenB,
                fee: param.v3.poolFee,
                tickLower: param.v3.minTick,
                tickUpper: param.v3.maxTick,
                amount0Desired: amount0ToMint,
                amount1Desired: amount1ToMint,
                amount0Min: 0,
                amount1Min: 0,
                recipient: address(this),
                deadline: block.timestamp + 100000000});
            (uint tokenId,,,) = nonfungiblePositionManager.mint(params);
            lp.tokenId = tokenId;
            emit CreatedLpV3(tokenId);
        } else {
            IUniswapV2Router01 iRouter = IUniswapV2Router01(param.router);
            (, , lpTokenAmt) = iRouter.addLiquidity(token, currency, lp.tokenQty, lp.currencyQty, 0, 0, address(this), block.timestamp + 100000000);
            IUniswapV2Factory factory = IUniswapV2Factory(iRouter.factory());
            lp.lpToken = factory.getPair(token, currency);
            emit CreatedLp(lpTokenAmt);
        }
        lp.created = true;
        lp.unlockTime = block.timestamp + param.lockDuration;
    }

    function claimUnusedTokens() external {
        if (lp.created && !lp.claimedUnusedTokens) {
            lp.claimedUnusedTokens = true;

            // Send balance of tokens to campaign owner
            uint amount = IERC20(lp.token).balanceOf(address(this));
            _transferTokenOut(lp.token, amount, projectOwner);

            // Send balance of USDC to campaign Owner
            amount = IERC20(lp.currency).balanceOf(address(this));
            _transferTokenOut(lp.currency, amount, projectOwner);
        }
    }

    function claimUnlockedLp() external {
        require(lp.created && block.timestamp >= lp.unlockTime, "Not yet unlock");
        if (lpParams.version == 3) {
            // Send NFT to campaign owner
            INonfungiblePositionManager nonfungiblePositionManager = INonfungiblePositionManager(lpParams.router);
            nonfungiblePositionManager.safeTransferFrom(address(this), projectOwner, lp.tokenId);
        } else {
            // Send all LP Tokens to campaign owner
            uint amount = IERC20(lp.lpToken).balanceOf(address(this));
            _transferTokenOut(lp.lpToken, amount, projectOwner);
        }
    }

    function daoMultiSigEmergencyWithdraw(address token, address to, uint amount) external onlyDaoAdmin {
        _transferTokenOut(token, amount, to);
        emit MultiSigWithdrawToken(token, amount, to);
    }

    function daoMultiSigEmergencyWithdrawNFT(address token, address to, uint nftId) external onlyDaoAdmin {
        require(to != address(0), "Invalid address");
        IERC721(token).transferFrom(address(this), to, nftId);
        emit MultiSigWithdrawToken(token, 1, to);
    }

    function _sortedTokens(address token0, address token1) private pure returns (address, address) {
        if (token0 < token1) {
            return (token0, token1);
        }
        return (token1, token0);
    }
}

