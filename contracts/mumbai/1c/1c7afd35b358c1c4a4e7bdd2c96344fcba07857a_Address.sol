pragma solidity ^0.8.0;




contract NFTMarket {
    using Address for address;

    IERC721 public nftToken;
    IERC20 public erc20Token;

    struct Offer {
        bool isForSale;
        uint256 nftId;
        address seller;
        uint256 price;
    }

    mapping(uint256 => Offer) public offers;

    constructor(address _nftToken, address _erc20Token) {
        nftToken = IERC721(_nftToken);
        erc20Token = IERC20(_erc20Token);
    }

    function setOffer(uint256 nftId, uint256 price) public {
        require(nftToken.ownerOf(nftId) == msg.sender, "Only the owner can offer the NFT");
        offers[nftId] = Offer(true, nftId, msg.sender, price);
    }

    function removeOffer(uint256 nftId) public {
        require(offers[nftId].seller == msg.sender, "Only the seller can remove the offer");
        offers[nftId].isForSale = false;
    }

    function buyNFT(uint256 nftId, uint256 erc20Amount) public {
        Offer storage offer = offers[nftId];
        require(offer.isForSale, "NFT is not for sale");
        require(erc20Token.balanceOf(msg.sender) >= erc20Amount, "Buyer does not have enough ERC20 tokens");
        require(erc20Amount >= offer.price, "ERC20 token amount does not meet the required price");

        nftToken.safeTransferFrom(offer.seller, msg.sender, nftId);
        erc20Token.transferFrom(msg.sender, offer.seller, erc20Amount);

        offer.isForSale = false;
    }
}