contract Crit0602 is VRFV2WrapperConsumerBase, Ownable{


    string public constant PYTHON_CODE = "import random; random.seed(SEED); winners = random.sample(range(NUM_PARTICIPANTS), NUM_WINNERS); multipliers = [random.randint(MIN_MULTIPLIER, MAX_MULTIPLIER) for _ in range(NUM_WINNERS)]";

    event RequestSent(uint256 requestId, uint32 numWords);
    event RequestFulfilled(
        uint256 requestId,
        uint256[] randomWords,
        uint256 payment
    );

    struct RequestStatus {
        uint256 paid; // amount paid in link
        bool fulfilled; // whether the request has been successfully fulfilled
        uint256[] randomWords;
    }
    mapping(uint256 => RequestStatus)
    public s_requests; /* requestId --> requestStatus */

    // past requests Id.
    uint256[] public requestIds;
    uint256 public lastRequestId;

    uint32 callbackGasLimit = 300000;

    // The default is 3, but you can set this higher.
    uint16 requestConfirmations = 3;

    // For this example, retrieve 2 random values in one request.
    // Cannot exceed VRFV2Wrapper.getConfig().maxNumWords.
    uint32 numWords = 1;

    // // Address LINK - hardcoded for polygon
    // address linkAddress = 0xb0897686c545045aFc77CF20eC7A532E3120E0F1;

    // // address WRAPPER - hardcoded for polygon
    // address wrapperAddress = 0x4e42f0adEB69203ef7AaA4B7c414e5b1331c14dc;

    // Address LINK - hardcoded for MUMBAI
    address linkAddress = 0x326C977E6efc84E512bB9C30f76E30c160eD06FB;

    // address WRAPPER - hardcoded for MUMBAI
    address wrapperAddress = 0x99aFAf084eBA697E584501b8Ed2c0B37Dd136693;

    // --------------------------------------------------------------------------------- 

    enum PrizeType { TIPSY, MERRY, DRUNK, WASTED, HAMMERRED}
    enum CritStage { NOT_STARTED, STARTED, SEED_SET, WINNERS_SET, FINISHED }
    enum TransferStatus {Pending, Completed}

    struct CritRound {
        uint256[] participatingTokenIds;
        uint256 randomSeed;
        CritStage stage;
    }

    struct CritResult {
        uint round;
        PrizeType prizeType;
        uint256 multiplier;
        uint256 prizeAmount;
        TransferStatus transferStatus;
    }

    struct holder {
        address holderAddress;
        uint256 mintPrice;
    }

    IERC20 public usdt;

    mapping(uint256 => CritResult[]) public records;
    mapping(uint => CritRound) public critRounds;
    mapping(uint256 => holder) public holderInfo;

    uint256 public currentRound = 0;


    event PrizeTransferred(
        uint256 indexed tokenId,
        address indexed recipient,
        uint256 indexed round,
        PrizeType prizeType,
        uint256 prizeAmount,
        uint256 timestamp,
        string transactionLink
    );


    constructor()
        VRFV2WrapperConsumerBase(linkAddress, wrapperAddress)
    {
        usdt = IERC20(0xE097d6B3100777DC31B34dC2c58fB524C2e76921); //mumbai usdc
        // usdt = IERC20(0xc2132D05D31c914a87C6611C10748AEb04B58e8F);
    }


    function requestRandomWords() external onlyOwner returns (uint256 requestId)
    {
        // require(!weightsGenerated, "Weights have already been generated");

        requestId = requestRandomness(
            callbackGasLimit,
            requestConfirmations,
            numWords
        );
        s_requests[requestId] = RequestStatus({
            paid: VRF_V2_WRAPPER.calculateRequestPrice(callbackGasLimit),
            randomWords: new uint256[](0),
            fulfilled: false
        });
        requestIds.push(requestId);
        lastRequestId = requestId;
        emit RequestSent(requestId, numWords);
        return requestId;
    }

    function fulfillRandomWords(uint256 _requestId, uint256[] memory _randomWords) internal override {
        require(s_requests[_requestId].paid > 0, "request not found");
        s_requests[_requestId].fulfilled = true;
        s_requests[_requestId].randomWords = _randomWords;
        setSeed(_randomWords[0]);

        emit RequestFulfilled(
            _requestId,
            _randomWords,
            s_requests[_requestId].paid
        );
    }

    function getRequestStatus(
        uint256 _requestId
    )
        external
        view
        returns (uint256 paid, bool fulfilled, uint256[] memory randomWords)
    {
        require(s_requests[_requestId].paid > 0, "request not found");
        RequestStatus memory request = s_requests[_requestId];
        return (request.paid, request.fulfilled, request.randomWords);
    }

    /**
     * Allow withdraw of Link tokens from the contract
     */
    function withdrawLink() public onlyOwner {
        LinkTokenInterface link = LinkTokenInterface(linkAddress);
        require(
            link.transfer(msg.sender, link.balanceOf(address(this))),
            "Unable to transfer"
        );
    }

    // --------------------------------------------------------------------------------- 

    function setHIM(uint16[] memory tokenIds, address[] memory holderAddress, uint256[] memory mintPrices) external onlyOwner {
        require(tokenIds.length == holderAddress.length, "Invalid inputs");
        require(tokenIds.length == mintPrices.length, "Invalid inputs");
     
        for (uint16 i = 0; i < tokenIds.length; i++) {
            holderInfo[tokenIds[i]] = holder(holderAddress[i], mintPrices[i]);
        }
    }
    
    function initializeCritRound(uint8 _currentRound, uint256[] calldata _participatingTokenIds) onlyOwner public {
        currentRound = _currentRound;
        require(critRounds[currentRound].stage == CritStage.NOT_STARTED, "Current round is already started.");
        critRounds[currentRound].participatingTokenIds = _participatingTokenIds;
        critRounds[currentRound].stage = CritStage.STARTED;
    }

    function setSeed(uint256 _randomSeed) onlyOwner public {
        require(critRounds[currentRound].stage == CritStage.STARTED, "Current round is not started.");
        critRounds[currentRound].randomSeed = _randomSeed;
        critRounds[currentRound].stage = CritStage.SEED_SET;
    }

    function saveWinners(uint256[] memory tokenIds, PrizeType[] memory prizeTypes, uint256[] memory multipliers) onlyOwner public {
        require(critRounds[currentRound].stage == CritStage.SEED_SET, "Random seed is not set for current round.");
        require(tokenIds.length == prizeTypes.length && tokenIds.length == multipliers.length, "Invalid input");
        
        uint256 tokenid;
        address holderAddress;
        uint256 mintPrice;
        uint256 prizeAmount;

        for (uint256 i = 0; i < tokenIds.length; i++) {
            tokenid = tokenIds[i];
            holderAddress = holderInfo[tokenid].holderAddress;
            mintPrice = holderInfo[tokenid].mintPrice;
            prizeAmount = mintPrice*multipliers[i]/100;

            records[tokenid].push(CritResult(
                currentRound,
                prizeTypes[i],
                multipliers[i],
                prizeAmount,
                TransferStatus.Pending
            ));
        }
    }

    function transferPrizeAmount(uint256[] memory tokenIds) onlyOwner public  {
        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            address payable recipient = payable(holderInfo[tokenId].holderAddress);

            for (uint256 j = 0; j < records[tokenId].length; j++) {
                if (records[tokenId][j].round == currentRound && records[tokenId][j].prizeAmount > 0 && records[tokenId][j].transferStatus == TransferStatus.Pending) {

                    uint256 prizeAmount = records[tokenId][j].prizeAmount;
                    records[tokenId][j].transferStatus = TransferStatus.Completed;

                    if (records[tokenId][j].transferStatus == TransferStatus.Completed) {
                        continue;
                    }

                    usdt.transfer(recipient, prizeAmount);

                    emit PrizeTransferred(
                        tokenId,
                        recipient,
                        records[tokenId][j].round,
                        records[tokenId][j].prizeType,
                        prizeAmount,           
                        block.timestamp,
                        ""
                    );
                }
            }
        }
    }

    function getCritResultCount(uint256 _tokenId) public view returns (uint) {
        return records[_tokenId].length;
    }

    function getCritResult(uint256 _tokenId, uint index) public view returns (uint, PrizeType, uint, uint256) {
        CritResult memory record = records[_tokenId][index];
        return (record.round, record.prizeType, record.multiplier, record.prizeAmount);
    }
    

}