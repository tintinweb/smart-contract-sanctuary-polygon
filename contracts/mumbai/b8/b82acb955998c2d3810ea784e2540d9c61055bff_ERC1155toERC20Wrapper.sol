pragma solidity ^0.8.4;





contract ERC1155toERC20Wrapper is ERC20, ReentrancyGuard, ERC1155Receiver {
    IERC1155 public immutable erc1155Token;
    uint256 public immutable minTokenId;
    uint256 public immutable maxTokenId;
    uint256 public conversionRate;

    mapping (uint256 => uint256) private tokenBalances;

    constructor(
        IERC1155 _erc1155Token,
        uint256 _minTokenId,
        uint256 _maxTokenId,
        uint256 _conversionRate,
        string memory name,
        string memory symbol
    ) ERC20(name, symbol) {
        erc1155Token = _erc1155Token;
        minTokenId = _minTokenId;
        maxTokenId = _maxTokenId;
        conversionRate = _conversionRate;
    }

    function deposit(uint256 tokenId, uint256 amount) external nonReentrant {
        require(
            tokenId >= minTokenId && tokenId <= maxTokenId,
            "TokenId is not in range"
        );
        erc1155Token.safeTransferFrom(msg.sender, address(this), tokenId, amount, "");
        uint256 erc20Amount = amount * conversionRate;
        _mint(msg.sender, erc20Amount);
        tokenBalances[tokenId] += amount;

    }

    function withdraw(uint256 erc20Amount) external nonReentrant {
        require(balanceOf(msg.sender) >= erc20Amount, "Insufficient balance");

        uint256 remainingERC20Amount = erc20Amount % conversionRate;
        uint256 adjustedERC20Amount = erc20Amount - remainingERC20Amount;
        uint256 remaining = adjustedERC20Amount / conversionRate;

        _burn(msg.sender, adjustedERC20Amount);

        // Iterate over all possible token IDs
        for (uint256 tokenId = minTokenId; tokenId <= maxTokenId; tokenId++) {
            if (tokenBalances[tokenId] > 0) {
                // If this token has a balance, calculate how much we can withdraw
                uint256 amount = remaining > tokenBalances[tokenId] ? tokenBalances[tokenId] : remaining;
                erc1155Token.safeTransferFrom(address(this), msg.sender, tokenId, amount, "");
                tokenBalances[tokenId] -= amount;
                remaining -= amount;

                if (remaining == 0) {
                    break;
                }
            }
        }

        require(remaining == 0, "Insufficient tokens in contract for withdrawal");

        // If there's any 'excess' amount of ERC20 tokens, return them to the user
        if (remainingERC20Amount > 0) {
            _mint(msg.sender, remainingERC20Amount);
        }
    }

    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes calldata
    ) public override returns (bytes4) {
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address,
        address,
        uint256[] calldata,
        uint256[] calldata,
        bytes calldata
    ) public override returns (bytes4) {
        return this.onERC1155BatchReceived.selector;
    }
}