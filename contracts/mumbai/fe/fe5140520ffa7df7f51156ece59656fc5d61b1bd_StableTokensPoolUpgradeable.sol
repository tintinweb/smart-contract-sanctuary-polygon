        require(tokenA.balanceOf(address(this)) >= amountA, "StableTokensPool: INSUFFICIENT_AMOUNT_A");
        require(tokenB.balanceOf(address(this)) >= amountB, "StableTokensPool: INSUFFICIENT_AMOUNT_B");

        // transfer tokens to user's wallet
        tokenA.safeTransfer(to, amountA);
        tokenB.safeTransfer(to, amountB);

        emit LiquidityRemoved(msg.sender, to, address(tokenA), amountA, address(tokenB), amountB);
    }

    function swap(
        uint256 amountIn,
        address tokenIn,
        address to,
        uint256 currentExchangeRate
    ) external whenNotPaused returns (uint256 amountOut, address tokenOut) {
        (amountOut, tokenOut, ) = _swap(amountIn, tokenIn, to, currentExchangeRate);
    }

    function swapWithPermit(
        uint256 amountIn,
        address tokenIn,
        address to,
        uint256 currentExchangeRate,
        uint256 deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external whenNotPaused returns (uint256 amountOut, address tokenOut) {
        IERC20PermitUpgradeable(tokenIn).permit(
            msg.sender,
            address(this),
            amountIn,
            deadline,
            v,
            r,
            s
        );

        (amountOut, tokenOut, ) = _swap(amountIn, tokenIn, to, currentExchangeRate);
    }

    function swapExactOutput(
        uint256 amountOut,
        address tokenOut,
        address to,
        uint256 currentExchangeRate
    ) external whenNotPaused returns (uint256 amountInWithFee, address tokenIn) {
        (amountInWithFee, tokenIn, ) = _swapExactOutput(amountOut, tokenOut, to, currentExchangeRate);
    }

    function swapWithAuthorization(
        uint256[] calldata amountIns,
        address[] calldata tokenIns,
        address[] calldata senders,
        address[] calldata recipients
    ) external whenNotPaused onlyTrustedForwarder {
        SwapVariable memory swapVariable;

        uint256 _txFee = txFee;
        IERC20Upgradeable _tokenA = tokenA;
        IERC20Upgradeable _tokenB = tokenB;
        uint256 _exchangeRate = exchangeRate;

        uint256 len = senders.length;
        uint256 tokenADecimal = getTokenADecimal();
        for (uint256 i = 0; i < len; ) {
            swapVariable.amountIn = amountIns[i];
            swapVariable.totalFee = (swapVariable.amountIn * _txFee) / 10000;
            swapVariable.amountInWithFee = swapVariable.amountIn - swapVariable.totalFee;

            if (IERC20Upgradeable(tokenIns[i]) == _tokenA) {
                swapVariable.amountOut = swapVariable.amountInWithFee * _exchangeRate / 10 ** tokenADecimal;
                swapVariable.erc20TokenIn = _tokenA;
                swapVariable.erc20TokenOut = _tokenB;
            } else {
                swapVariable.amountOut = (swapVariable.amountInWithFee * 10 ** tokenADecimal) / _exchangeRate;
                swapVariable.erc20TokenIn = _tokenB;
                swapVariable.erc20TokenOut = _tokenA;
            }
            // swap
            ERC20Upgradeable erc20TokenIn = ERC20Upgradeable(
                address(swapVariable.erc20TokenIn)
            );
            ERC20Upgradeable erc20TokenOut = ERC20Upgradeable(
                address(swapVariable.erc20TokenOut)
            );
            try
                erc20TokenIn.transferFrom(
                    senders[i],
                    address(this),
                    swapVariable.amountIn
                )
            {
                try
                    erc20TokenOut.transfer(
                        recipients[i],
                        swapVariable.amountOut
                    )
                {} catch {}
            } catch {}

            unchecked {
                ++i;
            }
        }

        emit ExchangeRateWithFee(_exchangeRate, txFee);
    }

