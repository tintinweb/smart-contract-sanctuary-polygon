        exchangeRate = _exchangeRate;
    }

    function setTxFee(uint256 _txFee) external onlyMultiSigOwner {
        txFee = _txFee;
    }

    function pause() external {
        require(isMultiSigOwner(msg.sender) || emergencyOperator == _msgSender(), "Not governance or emergency operator");
        _pause();
    }

    function unpause() external onlyMultiSig {
        require(isMultiSig(msg.sender) || emergencyOperator == _msgSender(), "Not governance or emergency operator");
        _unpause();
    }

    function reserves() external view returns (uint256 amountA, uint256 amountB) {
        amountA = tokenA.balanceOf(address(this));
        amountB = tokenB.balanceOf(address(this));
    }

    function getAmountOut(
        uint256 amountIn,
        address tokenIn
    ) external view returns (uint256 amountOut, address tokenOut, uint256 totalFee) {
        return _getAmountOut(amountIn, IERC20Upgradeable(tokenIn), exchangeRate);
    }

    function getAmountIn(
        uint256 amountOut,
        address tokenOut
    ) external view returns (uint256 amountInWithFee, address tokenIn, uint256 totalFee) {
        return _getAmountIn(amountOut, tokenOut);
    }

    // *** PRIVATE FUNCTIONS *** //

    function _swap(
        uint256 amountIn,
        address tokenIn,
        address to,
        uint256 currentExchangeRate
    ) private ensureExchangeRate(currentExchangeRate) returns (uint256 amountOut, address tokenOut, uint256 totalFee) {
        IERC20Upgradeable erc20TokenIn = IERC20Upgradeable(tokenIn);
        (amountOut, tokenOut, totalFee) = _getAmountOut(amountIn, erc20TokenIn, exchangeRate);

        erc20TokenIn.transferFrom(msg.sender, address(this), amountIn);
        IERC20Upgradeable(tokenOut).transfer(to, amountOut);

        emit TokenSwapped(
            msg.sender,
            tokenIn,
            amountIn,
            to,
            tokenOut,
            amountOut,
            txFee
        );
    }

    function _getAmountOut(
        uint256 amountIn,
        IERC20Upgradeable erc20TokenIn,
        uint256 _exchangeRate
    ) private view returns (uint256 amountOut, address tokenOut, uint256 totalFee) {
        uint256 tokenADecimal = getTokenADecimal();
        require(erc20TokenIn == tokenA || erc20TokenIn == tokenB, "StableTokensPool: INVALID_TOKEN");

        totalFee = (amountIn * txFee) / 10000;
        uint256 amountInWithFee = amountIn - totalFee;

        if (erc20TokenIn == tokenA) {
            amountOut = (amountInWithFee * _exchangeRate) / (10 ** tokenADecimal);
            tokenOut = address(tokenB);
        } else {
            amountOut = (amountInWithFee * 10 ** tokenADecimal) / _exchangeRate;
            tokenOut = address(tokenA);
        }
