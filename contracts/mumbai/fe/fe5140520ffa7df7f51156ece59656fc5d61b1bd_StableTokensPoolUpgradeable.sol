    }

    function _getAmountIn(
        uint256 amountOut,
        address tokenOut
    ) private view returns (uint256 amountInWithFee, address tokenIn, uint256 totalFee) {
        IERC20Upgradeable erc20TokenOut = IERC20Upgradeable(tokenOut);
        uint256 tokenADecimal = getTokenADecimal();
        require(amountOut > 0, "StableTokensPool: INSUFFICIENT_AMOUNT_OUT");
        require(erc20TokenOut == tokenA || erc20TokenOut == tokenB, "StableTokensPool: INVALID_TOKEN");
        require(
            IERC20Upgradeable(tokenOut).balanceOf(address(this)) >= amountOut,
