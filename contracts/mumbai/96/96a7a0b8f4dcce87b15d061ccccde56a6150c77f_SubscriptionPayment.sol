        require(plan.merchant != address(0), 'this plan does not exist');

        uint txCommission = commission.mul(plan.amount).div(100);

        token.transferFrom(msg.sender, plan.merchant, plan.amount.sub(txCommission));  
        token.transferFrom(msg.sender, owner(), txCommission);  
       
        emit PaymentSent(
          msg.sender, 
          plan.merchant, 
          plan.amount, 
          planId, 
          block.timestamp
        );

        subscriptions[msg.sender][planId] = Subscription(
          msg.sender, 
          block.timestamp, 
          block.timestamp + plan.frequency,
          plan.amount
        );
        emit SubscriptionCreated(msg.sender, planId, block.timestamp);
    }

    function unsubscribe(uint planId) external {
        Subscription storage subscription = subscriptions[msg.sender][planId];
        Plan storage plan = plans[planId];
        IERC20 token = IERC20(plan.token);
        require(
        subscription.subscriber != address(0), 
        'this subscription does not exist'
        );

        if(lockedBalances[msg.sender] > 0 ) {
            require(token.transfer(msg.sender, lockedBalances[msg.sender]), "LockedFunds transfer failed");
            //Should add the logic to refund after cancellation fee is deducted
        }

        delete subscriptions[msg.sender][planId]; 
        emit SubscriptionCancelled(msg.sender, planId, block.timestamp);
    }

    function pay(address subscriber, uint planId) external {

        Subscription storage subscription = subscriptions[subscriber][planId];
        Plan storage plan = plans[planId];
        IERC20 token = IERC20(plan.token);
        require( subscription.subscriber != address(0), 'this subscription does not exist');
        require( block.timestamp > subscription.nextPayment, 'not due yet');

        if (lockedBalances[subscriber] > 0) {
            uint amount = subscription.nextPayAmount;
            uint txCommission = commission.mul(amount).div(100);
            token.transferFrom(address(this), plan.merchant, amount.sub(txCommission));  
            token.transferFrom(address(this), owner(), txCommission);

            lockedBalances[msg.sender] -= amount;

            emit PaymentSent(
            subscriber,
            plan.merchant, 
            amount, 
            planId, 
            block.timestamp
            );

        } else {
            uint txCommission = commission.mul(plan.amount).div(100);

            token.transferFrom(msg.sender, plan.merchant, plan.amount.sub(txCommission));  
            token.transferFrom(msg.sender, owner(), txCommission);

            emit PaymentSent(
            subscriber,
            plan.merchant, 
            plan.amount, 
            planId, 
            block.timestamp
        );
        }
        
        subscription.nextPayment = subscription.nextPayment + plan.frequency;
    }

    function getSubscription(address subscriber, uint planId) public view returns (SubscriptionResponse memory) {
        
        Subscription storage subscription = subscriptions[subscriber][planId];
        Plan storage plan = plans[planId];
        require( subscription.subscriber != address(0), 'this subscription does not exist');

        SubscriptionResponse memory subscribeResponse;

        subscribeResponse.subscribion = subscription;
        subscribeResponse.plan = plan;

        subscribeResponse.isActive = (subscription.start < block.timestamp) &&  (block.timestamp < subscription.nextPayment);

        return subscribeResponse;

    }

    function setCommission(uint _commission) public onlyOwner {
        commission = _commission;
    }

    function subscribeInAdvance(uint planId, uint noOfEpochs) external {
        IERC20 token = IERC20(plans[planId].token);
        
        Plan storage plan = plans[planId];
        require(plan.merchant != address(0), 'this plan does not exist');
        require(token.balanceOf(msg.sender) >= plan.amount.mul(noOfEpochs), "Insufficient balance");

        uint256 discountedPrice = plan.amount.mul(noOfEpochs).div(100).mul(100 - noOfEpochs);
        uint256 discountedMonthlyFee = discountedPrice.div(noOfEpochs);

        require(token.transferFrom(msg.sender, address(this), discountedPrice), "TokenLocking failed");
        lockedBalances[msg.sender] += discountedPrice;
        uint txCommission = commission.mul(discountedMonthlyFee).div(100);

        token.transferFrom(address(this), plan.merchant, discountedMonthlyFee.sub(txCommission));  
        token.transferFrom(address(this), owner(), txCommission);  

        lockedBalances[msg.sender] -= discountedMonthlyFee;
       
        emit PaymentSent(
          address(this), 
          plan.merchant, 
          discountedMonthlyFee, 
          planId, 
          block.timestamp
        );

        subscriptions[msg.sender][planId] = Subscription(
          msg.sender, 
          block.timestamp, 
          block.timestamp + plan.frequency,
          discountedMonthlyFee
        );
        emit SubscriptionCreated(msg.sender, planId, block.timestamp);
    }

    function getLockedBalance(address user) external view returns (uint256) {
        return lockedBalances[user];
    }

    function withdrawTokens(address tokenAddress, address to, uint256 amount) external onlyOwner {
        require(amount > 0, "Amount must be greater than 0");

        IERC20 token = IERC20(tokenAddress);
        require(token.balanceOf(address(this)) >= amount, "Insufficient token balance");

        require(token.transfer(to, amount), "Token transfer failed");
        emit TokensWithdraw(tokenAddress, to);
    }

