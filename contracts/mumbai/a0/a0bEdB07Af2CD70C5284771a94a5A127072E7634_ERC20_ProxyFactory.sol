import "@openzeppelin/contracts/proxy/Clones.sol";
import "./IERC20_Main.sol";//We dont have to import the inteface here beacuse we dont want to inherit 
//all of the defined(not implemented) function in this contract , we only want the initialize funtion to be used.
import "@openzeppelin/contracts/access/Ownable.sol";

contract ERC20_ProxyFactory is Ownable{ // DO NOT inherit the Interface.

    address public masterCopy;
    address public proxy;
    event newProxyDeployed(address proxy);

    constructor(address masterCopy_){
        masterCopy = masterCopy_;
    }

    function createNewProxy(string memory name, string memory symbol, uint256 totalsupply) public onlyOwner returns(address){

        address Proxy = Clones.clone(masterCopy);
        //We dont have to inherit the interface contract as we dont intend to implement it, just import and use like done below.
        proxy = Proxy;
        IERC20_Main(proxy).initialize(name,symbol,totalsupply);
        
        emit newProxyDeployed(proxy);
        return proxy;

    }

    function getProxy() public view returns(address){
        return proxy;
    }

}

