    uint256 public tokenPrice;
    uint256 public tokenSold;
    bool public preSale;

    event Buy(address _buyer, uint256 _amount);
    event Sell(address presaleAddress, uint256 _amount);

    constructor(IBEP20 _tokenContract, IBEP20 _busdContract, uint256 _tokenPrice) {
        preSale = true;
        tokenContract = _tokenContract;
        busdContract = _busdContract;
        tokenPrice = _tokenPrice; // 6353000000000000000
    }

    function buyTokens(uint256 _numberOfToken) public nonReentrant {
        require(preSale == true, "PreSale is End");
        require(_numberOfToken >= 1 * 10**16, "Minimum price 0.01");
        uint256 busdAmount = (tokenPrice * _numberOfToken) / 1000000000000000000;
        require(busdContract.balanceOf(msg.sender) >= busdAmount, "You have not enought BUSD");
        require(busdContract.transferFrom(msg.sender, address(this), busdAmount), "Insufficiant Allowance");
        require(tokenContract.transfer(msg.sender, _numberOfToken), "Not send Number of token to user");

        tokenSold += _numberOfToken;

        emit Buy(msg.sender, _numberOfToken);
        emit Sell(address(this), busdAmount);
    }

    function endSale() public nonReentrant {
        require(msg.sender == _owner, "Ownable: caller is not the owner");
        require(tokenContract.transfer(_owner, tokenContract.balanceOf(address(this))));
        require(busdContract.transfer(_owner, busdContract.balanceOf(address(this))));

        preSale = false;

        payable(_owner).transfer(address(this).balance);
    }
}