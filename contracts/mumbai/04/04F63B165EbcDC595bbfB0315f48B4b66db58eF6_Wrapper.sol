pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import {AddressToString} from "@axelar-network/axelar-gmp-sdk-solidity/contracts/utils/AddressString.sol";
import {IAxelarFacet} from "./interfaces/IAxelarFacet.sol";

contract Wrapper is Ownable, ReentrancyGuard {
    using AddressToString for address;

    mapping(uint32 => address) public chainIDToDiamondContract;
    mapping(uint32 => string) public chainIDToAxelarChainName;

    error NotEnoughValueForGas();

    function doCCTrx(
        uint32 _bridgeSelector,
        uint32 _srcChainID,
        uint32 _destChainID,
        bytes calldata _payload,
        uint256 _bridgeFee
    ) external payable {
        if (msg.value == 0) revert NotEnoughValueForGas();
        require(
            msg.value == _bridgeFee,
            "Wrapper: Must send gas equal to the specified bridge fee"
        );

        IAxelarFacet(chainIDToDiamondContract[_srcChainID]).useAxelar{value: _bridgeFee}(
            chainIDToAxelarChainName[_destChainID],
            chainIDToDiamondContract[_destChainID].toString(),
            _payload
        );
    }

    function upsertChainIDToDiamondContract(
        uint32[] memory _chainIDs,
        address[] memory _diamondContractAddresses
    ) external onlyOwner {
        require(
            _chainIDs.length == _diamondContractAddresses.length,
            "Wrapper: Input arrays length mismatch"
        );
        for (uint256 i = 0; i < _chainIDs.length; i++) {
            require(_diamondContractAddresses[i] != address(0), "Wrapper: No zero address");
            chainIDToDiamondContract[_chainIDs[i]] = _diamondContractAddresses[i];
        }
    }

    function upsertChainIDToChainNameAxelar(
        uint32[] memory _chainIDs,
        string[] memory _axelarChainNames
    ) external onlyOwner {
        require(
            _chainIDs.length == _axelarChainNames.length,
            "Wrapper: Input arrays length mismatch"
        );
        for (uint256 i = 0; i < _chainIDs.length; i++) {
            chainIDToAxelarChainName[_chainIDs[i]] = _axelarChainNames[i];
        }
    }
}