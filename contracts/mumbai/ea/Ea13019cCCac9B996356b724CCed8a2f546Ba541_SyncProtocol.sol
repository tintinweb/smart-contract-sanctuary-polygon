pragma solidity ^0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "./Validator.sol";
import "./interfaces/ISyncProtocol.sol";
import "./PairControl.sol";

contract SyncProtocol is ISyncProtocol, PairControl, Validator, Pausable {
    using SafeERC20 for IERC20;

    uint256 public feeMessage;

    bytes32 public immutable DOMAIN_SEPARATOR;

    uint256 public generateNonce;
    mapping(uint256 => bool) public revertNonce;

    event StringFailure(string stringFailure, bytes payload);
    event BytesFailure(bytes bytesFailure);
    event SyncSuccess(bytes payload);
    event RevertedSuccess(bytes payload);

    constructor() {
        DOMAIN_SEPARATOR = keccak256(
            abi.encode(
                0x8b73c3c69bb8fe3d512ecc4cf759cc79239f7b179b0ffacaa9a75d522b39400f, // keccak256("EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)")
                0x1f693a8e290f89fafcee7b999f918a8d87c138faacda1944c04a239f36af24bc, // keccak256("SyncProtocol")
                0xc89efdaa54c0f20c7adf612882df0950f5a951637e0307cdcb4c672f298b8bc6, // keccak256(bytes("1")) for versionId = 1
                block.chainid,
                address(this)
            )
        );
    }

    fallback() external payable {}

    receive() external payable {}

    // ===================== Setter Impl ========================
    function setFee(
        address sender,
        uint256 newFee,
        uint8[] memory sigV,
        bytes32[] memory sigR,
        bytes32[] memory sigS
    ) external validatorPrecheck(sigV, sigR, sigS) {
        require(sender == msg.sender, "Invalid sender");

        bytes32 inputHash = keccak256(
            abi.encode(DOMAIN_SEPARATOR, generateNonce, newFee, sender)
        );

        _checkSignatures(sigV, sigR, sigS, inputHash);
        _setMessageFee(newFee);
        generateNonce++;
    }

    function _setMessageFee(uint256 newFee) private {
        feeMessage = newFee;
    }

    // ===================== SyncProtocol Impl ========================

    // Publish a message to be attested by the SyncProtocol network
    // TODO: nonce?
    function pushData(bytes memory payload) public payable override {
        require(msg.value == feeMessage, "Invalid fee");

        // chainId -> address -> generateNonce ->payload
        bytes memory payloadWithNonce = abi.encode(
            block.chainid,
            msg.sender,
            generateNonce,
            payload
        );

        generateNonce++;

        emit MessagePublished(msg.sender, payloadWithNonce);
    }

    function revertedData(
        bytes memory _payload,
        uint8[] memory sigV,
        bytes32[] memory sigR,
        bytes32[] memory sigS,
        address _collateralToken
    ) external payable override validatorPrecheck(sigV, sigR, sigS) {
        (
            uint256 _fromChainId,
            address _fromContract,
            uint256 _usingNonce,
            bytes memory _payloadForMasterPoint
        ) = abi.decode(_payload, (uint256, address, uint256, bytes));

        require(block.chainid == _fromChainId, "chainId not correct");
        require(!revertNonce[_usingNonce], "nonce already used");
        revertNonce[_usingNonce] = true;

        bytes32 inputHash = keccak256(abi.encode(DOMAIN_SEPARATOR, _payload));
        _checkSignatures(sigV, sigR, sigS, inputHash);

        IToContract(_fromContract).handleRevertData(
            _payloadForMasterPoint,
            _collateralToken
        );

        emit RevertedSuccess(_payload);
    }

    function syncData(
        bytes memory _payload,
        uint8[] memory sigV,
        bytes32[] memory sigR,
        bytes32[] memory sigS
    ) external payable override validatorPrecheck(sigV, sigR, sigS) {
        (
            uint256 _fromChainId,
            address _fromContract,
            uint256 _usingNonce,
            bytes memory _payloadForMasterPoint
        ) = abi.decode(_payload, (uint256, address, uint256, bytes));
        require(
            !usedNonce[_fromChainId][_fromContract][_usingNonce],
            "Invalid nonce"
        );

        usedNonce[_fromChainId][_fromContract][_usingNonce] = true;

        bytes32 inputHash = keccak256(abi.encode(DOMAIN_SEPARATOR, _payload));
        _checkSignatures(sigV, sigR, sigS, inputHash);

        try
            IToContract(pairs[_fromChainId][_fromContract].toContract)
                .handleSyncData(_payloadForMasterPoint)
        {
            emit SyncSuccess(_payload);
        } catch Error(string memory _err) {
            emit StringFailure(_err, _payload);
        } catch (bytes memory _err) {
            emit BytesFailure(_err);
        }
    }

    function addValidator(
        address[] calldata _validators,
        uint8[] memory sigV,
        bytes32[] memory sigR,
        bytes32[] memory sigS
    ) external {
        bytes32 inputHash = keccak256(
            abi.encode(DOMAIN_SEPARATOR, generateNonce, _validators)
        );
        _addValidator(_validators, inputHash, sigV, sigR, sigS);
        generateNonce++;
    }

    function removeValidator(
        address[] calldata _validators,
        uint8[] memory sigV,
        bytes32[] memory sigR,
        bytes32[] memory sigS
    ) external {
        bytes32 inputHash = keccak256(
            abi.encode(DOMAIN_SEPARATOR, generateNonce, _validators)
        );
        _removeValidator(_validators, inputHash, sigV, sigR, sigS);
        generateNonce++;
    }
}

