pragma solidity ^0.8.4;

import "./interfaces/IPairControl.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract PairControl is Ownable, IPairControl {
    // TODO: get all pairs
    // TODO: Is really need removerPair func?

    //from chainId -> from contract -> nonce -> isUsed
    mapping(uint256 => mapping(address => mapping(uint256 => bool)))
        public usedNonce;

 

    mapping(uint256 => mapping(address => Pair)) public pairs;

    // ========================= external methods ========================= //
    function addPair(
        uint256 fromChainId,
        address fromContract,
        address toContract,
        address owner
    ) external override onlyOwner {
        require(
            pairs[fromChainId][fromContract].owner == address(0),
            "Pair already exists"
        );
        pairs[fromChainId][fromContract] = Pair({
            toContract: toContract,
            owner: owner
        });

        emit AddPair(msg.sender, fromChainId, fromContract, toContract, owner);
    }

    function removePair(
        uint256 fromChainId,
        address fromContract
    ) external override onlyOwner {
        Pair storage pair = pairs[fromChainId][fromContract];
        require(msg.sender == pair.owner, "Only Owner");

        pair.toContract = address(0);
        pair.owner = address(0);

        emit RemovePair(msg.sender, fromChainId, fromContract);
    }

    function updatePair(
        uint256 fromChainId,
        address fromContract,
        address toContract,
        address owner
    ) external override onlyOwner {
        Pair storage pair = pairs[fromChainId][fromContract];
        require(msg.sender == pair.owner, "Only Owner");

        pair.toContract = toContract;
        pair.owner = owner;

        emit UpdatePair(
            msg.sender,
            fromChainId,
            fromContract,
            toContract,
            owner
        );
    }
}

