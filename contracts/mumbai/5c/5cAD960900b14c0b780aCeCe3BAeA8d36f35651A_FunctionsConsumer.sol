pragma solidity ^0.8.7;

import "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";
import {Functions, FunctionsClient} from "./dev/functions/FunctionsClient.sol";
import {ConfirmedOwner} from "@chainlink/contracts/src/v0.8/ConfirmedOwner.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract FunctionsConsumer is FunctionsClient, ConfirmedOwner, ERC1155, ReentrancyGuard {
  using Functions for Functions.Request;

  uint256 public tokenCounter;

  event OCRResponse(bytes32 indexed id, bytes result, bytes err);

  mapping(bytes32 => address) private requestIdToRequester;

  constructor(
    address oracle
  ) FunctionsClient(oracle) ConfirmedOwner(msg.sender) ERC1155("https://example.com/api/item/{id}.json") {
    tokenCounter = 0;
  }

  struct NFTData {
    string prompt;
    string completion;
  }

  NFTData[] public nftDataArray;

  function executeRequest(
    string calldata source,
    bytes calldata secrets,
    string[] calldata args,
    uint64 subscriptionId,
    uint32 gasLimit
  ) public onlyOwner nonReentrant returns (bytes32) {
    require(bytes(source).length > 0, "Source cannot be empty");
    Functions.Request memory req;
    req.initializeRequest(Functions.Location.Inline, Functions.CodeLanguage.JavaScript, source);
    if (secrets.length > 0) {
      req.addRemoteSecrets(secrets);
    }
    if (args.length > 0) req.addArgs(args);

    bytes32 id = sendRequest(req, subscriptionId, gasLimit);
    requestIdToRequester[id] = msg.sender;
    return id;
  }

  function fulfillRequest(bytes32 id, bytes memory _response, bytes memory _error) internal override {
    emit OCRResponse(id, _response, _error);
    if (_error.length == 0 && requestIdToRequester[id] != address(0)) {
      address requester = requestIdToRequester[id];
      string memory prompt = "test";
      string memory completion = string(_response);
      mintNFT(prompt, completion, requester);
    }
  }

  function updateOracleAddress(address oracle) public onlyOwner {
    setOracle(oracle);
  }

  function mintNFT(string memory prompt, string memory completion, address requester) private {
    require(requester != address(0), "Invalid requester address");
    uint256 newTokenId = tokenCounter;
    _mint(requester, newTokenId, 1, "");
    nftDataArray.push(NFTData(prompt, completion));
    tokenCounter++;
  }

  function getTokenData(uint256 tokenId) public view returns (NFTData memory) {
    require(tokenId < tokenCounter, "Invalid tokenId");
    return nftDataArray[tokenId];
  }

  function addSimulatedRequestId(address oracleAddress, bytes32 id) public onlyOwner {
    addExternalRequest(oracleAddress, id);
  }
}