import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract Escrow is ERC721Holder, Ownable {
    //    mapping(uint256 => address) private tokenEscrow;
    //    mapping(address => bool) private operators;

    //    mapping(address => bool) public operators;

    mapping(address => bool) public operatorAddresses;

    address public nftAddress;
    IERC721 nft;

    struct TokenItem {
        uint tokenId;
        address sender;
    }

    mapping(uint => TokenItem) public tokens;

    event CreateEscrow(uint256 tokenId, address sender);
    event ReturnToOwner(uint256 tokenId, address ownerAddress);
    event TransferToUserCC(uint256 tokenId, address userAddress);

    constructor() {
        operatorAddresses[0x6df2b7aD74541741e473d1B83698E29257c6D3FD] = true;
    }

    modifier onlyOperator() {
        require(operatorAddresses[msg.sender] || owner() == msg.sender, "Error: Caller is not an Operator");
        _;
    }

    function addOperator(address _address) external onlyOwner {
        operatorAddresses[_address] = true;
    }

    function removeOperator(address _address) external onlyOwner {
        operatorAddresses[_address] = false;
    }

    function setNftAddress(address _nftAddress) public onlyOwner{
        require(_nftAddress != address(0), "Error: NFT address cannot be 0x0");
        nftAddress = _nftAddress;
        nft = IERC721(nftAddress);
    }

    function createEscrow(uint tokenId, address sender) public onlyOwner returns (bool){
        require(sender != address(0), "Error: Sender address cannot be 0x0");

        tokens[tokenId] = TokenItem(tokenId, sender);

        emit CreateEscrow(tokenId, sender);
        return true;
    }

    function transferToUserCC(uint tokenId, address userAddress) external onlyOwner {
        require(userAddress != address(0), "Error: User address cannot be 0x0");
        // require(nft.ownerOf(tokenId), "Error: Query for nonexistent token");

        // require(nft.safeTransferFrom(address(this), userAddress, tokenId), "Error: Invalid transferFrom");
        nft.safeTransferFrom(address(this), userAddress, tokenId);

        emit TransferToUserCC(tokenId, userAddress);
    }

    function returnToTheWalletOwner(uint256 tokenId) public onlyOperator {
        TokenItem memory returnToken = tokens[tokenId];
        // require(nft.safeTransferFrom(address(this), returnToken.sender, tokenId), "Error: Invalid transferFrom");
        require(nft.ownerOf(tokenId)==owner(), "Error: Query for nonexistent token");
        nft.safeTransferFrom(address(this), returnToken.sender, returnToken.tokenId);

        delete tokens[tokenId];

        emit ReturnToOwner(returnToken.tokenId, returnToken.sender);
    }

    function withdraw() external {
        // Here you would implement the withdrawal logic to send funds to the wallet owner's address
        // Only the wallet owner can call this function
    }
}