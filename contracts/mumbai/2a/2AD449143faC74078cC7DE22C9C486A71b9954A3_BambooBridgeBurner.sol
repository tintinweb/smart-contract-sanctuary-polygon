import "./interfaces/IBambooToken.sol";
import "./interfaces/IOraclePrices.sol";

/**
  @title Bamboo bridge burn BSCVLX
  @author NexxyoLabs - BambooDeFi
  @notice This contract is used for burning the exact amount of tokens 
  that have been transfered to the other chain
 */
contract BambooBridgeBurner is 
    Initializable,
    OwnableUpgradeable,
    PausableUpgradeable,
    NonblockingLzAppUpgradeable 
{
    using SafeERC20Upgradeable for IERC20Upgradeable;

    // ============== VARIABLES ==============

    /// @notice Variable to store the fee recipient address
    address public feeRecipient;

    /// @notice Variable to store the crafting fee
    uint256 public transferFee;

    /// @notice Variable to store the nonce
    uint256 public nonce;

    /// @notice Mapping to store the available amount of tokens to be minted by address and chain
    /// User => ChainId => Amount
    mapping(address => mapping(uint256 => uint256)) public userAvailableTokens;

    /// @notice Mapping to store the LayerZero chainIds
    /// Real chainId => LayerZero chainIds
    mapping(uint256 => uint16) public lzChainIds;

    /// @notice Variable to store the bamboo token
    IBambooToken public bambooToken;

    /// @notice Variable to store the oracle prices reference
    IOraclePrices public oracle;

    enum Step {
        Burn,
        Mint
    }

    // ============== EVENTS ==============

    /// @notice Event emitted when an amount of tokens are burned and sent to another chain
    /// @param from The address of the wallet that transfer the tokens
    /// @param to The address of the destiny wallet
    /// @param amount The amount of tokens burned/transferred
    /// @param date The date when the tokens are burned
    /// @param chainId The id of the origin chain
    /// @param destinyChainId The id of the destiny chain
    /// @param nonce The nonce used to identify the transfer
    /// @param step The type of operation (Burn/Mint)
    event Transferred(
        address from,
        address to,
        uint256 amount,
        uint256 date,
        uint256 chainId,
        uint256 destinyChainId,
        uint256 nonce,
        Step indexed step
    );

    /// @notice Event emitted when the fee recipient address is changed
    /// @param sender The address of the user that changes the fee recipient address (only Owner)
    /// @param feeRecipient The new recipient fee address
    event RecipientFeeChanged(
        address sender,
        address feeRecipient
    );

    /// @notice Event emitted when the transfer fee is changed
    /// @param sender The address of the user that changes the transfer fee (only Owner)
    /// @param transferFee The new tranfer fee
    event TransferFeeChanged(
        address sender,
        uint256 transferFee
    );

    /// @notice Event emitted when the bamboo token address is changed
    /// @param sender The address of the user that changes the bamboo token address (only Owner)
    /// @param bambooToken The new bamboo token address
    event BambooTokenChanged(
        address sender,
        address bambooToken
    );

    /// @notice Event emitted when the LayerZero chainId assigned to a real chainId is changed
    /// @param sender The address of the user that changes the LayerZero chainId (only Owner)
    /// @param chainId The real chainId
    /// @param lzChainId The LayerZero chain id
    event LzChainIdChanged(
        address sender,
        uint256 chainId,
        uint16 lzChainId
    );

    /// @notice Event emitted when a message from the LayerZero protocol is received
    /// @param srcChainId The chainId of the source blockchain
    /// @param srcAddress The source address
    /// @param dstChainId The chainId of the destiny blockchain
    /// @param dstAddress The destiny address
    /// @param amount The amount of transfered tokens
    event LzMessageReceived(
        uint16 srcChainId, 
        bytes srcAddress, 
        uint16 dstChainId, 
        address dstAddress, 
        uint256 amount
    );

    // ============== CONSTRUCTOR ==============

    // constructor() {
    //     _disableInitializers();
    // }
    //TODO descomentar

    // ============== INITIALIZE ==============

    /// @param _feeRecipient The address where the transfering fees will be transfered
    /// @param _transferFee Defines the transfer fee
    /// @param _bambooToken The address of token which will be transferred (Bamboo in this case)
    /// @param _lzEndpoint The LayerZero Omnichain endpoint address
    function initialize(
        address _feeRecipient,
        uint256 _transferFee,
        address _bambooToken,
        address _lzEndpoint
    )
        external
        initializer
    {
        __Ownable_init();
        __Pausable_init();
        __NonblockingLzAppUpgradeable_init(_lzEndpoint);

        feeRecipient = _feeRecipient;
        transferFee = _transferFee;
        bambooToken = IBambooToken(_bambooToken);
    }

    /// @notice Function that pauses the contract
    function pause() external onlyOwner {
        _pause();
    }

    /// @notice Function that unpauses the contract
    function unpause() external onlyOwner {
        _unpause();
    }
    
    /// @notice Function that sets the fee recipient address
    /// @param _feeRecipient New fee recipient address
    function setFeeRecipient(
        address _feeRecipient
    ) 
        external 
        onlyOwner 
    {
        require(_feeRecipient != address(0), "Fee recipient address can't be the zero address");
        feeRecipient = _feeRecipient;

        emit RecipientFeeChanged(msg.sender, feeRecipient);
    }

    /// @notice Function that sets the transfer fee
    /// @param _transferFee New transfer fee
    function setTransferFee(
        uint256 _transferFee
    ) 
        external 
        onlyOwner 
    {
        transferFee = _transferFee;

        emit TransferFeeChanged(msg.sender, transferFee);
    }

    /// @notice Function that sets the bamboo token address
    /// @param _bambooToken New bamboo token address
    function setBambooToken(
        address _bambooToken
    ) 
        external 
        onlyOwner 
    {
        bambooToken = IBambooToken(_bambooToken);

        emit BambooTokenChanged(msg.sender, _bambooToken);
    }

    function setLzChainId(
        uint256 chainId,
        uint16 lzChainId
    )
        external   
        onlyOwner
    {
        lzChainIds[chainId] = lzChainId;

        emit LzChainIdChanged(msg.sender, chainId, lzChainId);
    }

    /// @notice Function that gets the id of the source chain
    function getChainId() 
        external 
        view 
        returns(uint256)
    {
        uint16 chainIdAssembly;
        assembly {
            chainIdAssembly:= chainid()
        }

        return chainIdAssembly;
    }

    /// @notice Function that burns the amount of tokens which will be transfered to the other chain
    /// @param to Address that will receive the minted tokens
    /// @param amount Amount of tokens that will be transfered
    /// @param destinyChainId ID of the destiny chain where the mint will be done
    function burn(
        address to,
        uint256 amount,
        uint256 destinyChainId
    ) 
        external 
        payable 
        whenNotPaused
    {
        uint256 totalFee = 2;
        //uint256 totalFee = oracle.getBNBAmountByUSD(1e18);
        require(
            msg.value >= totalFee,
            "Bridge burner: Not paid"
        );

        (bool success, ) = payable(feeRecipient).call{value: totalFee/100}("");
        require(success, "Bridge burner: Error sending bnb");

        //bambooToken.transferFrom(msg.sender, address(this), amount);
        //bambooToken.burn(amount);
        
        uint256 chainId = this.getChainId();
        
        // LayerZero Omnichain
        userAvailableTokens[to][destinyChainId] += amount;
        _nonblockingLzSend(
            lzChainIds[destinyChainId],
            abi.encode(to, destinyChainId, amount, nonce),
            payable(msg.sender),
            address(0),
            bytes("")
        );

        emit Transferred(
            msg.sender,
            to,
            amount,
            block.timestamp,
            chainId,
            destinyChainId,
            nonce,
            Step.Burn
        );
        nonce++;
    }

    /// NonblockingLzAppUpgradeable
    function _nonblockingLzReceive(
        uint16 _srcChainId, 
        bytes memory _srcAddress, 
        uint64 _nonce, 
        bytes memory _payload
    ) 
        internal 
        override 
    {
        // Whenever we receive a message through LayerZero, we must update the userAvailableTokens
        (address dstAddress, uint16 dstChainId, uint256 amount) = abi.decode(_payload, (address, uint16, uint256));

        userAvailableTokens[dstAddress][dstChainId] += amount;

        emit LzMessageReceived(_srcChainId, _srcAddress, dstChainId, dstAddress, amount);
    }

    /// @notice Function sends a LayerZero message to another chain (trusted remote)
    /// @param _dstChainId Destiny chain id
    /// @param _payload Payload with the encoded data (user, chainId, amount)
    /// @param _refundAddress Refund address
    /// @param _zroPaymentAddress Zero payment address
    /// @param _adapterParams Adapter params
    function _nonblockingLzSend(
        uint16 _dstChainId, 
        bytes memory _payload, 
        address payable _refundAddress, 
        address _zroPaymentAddress, 
        bytes memory _adapterParams
    ) 
        internal 
    {
        (uint nativeFee, ) = lzEndpoint.estimateFees(_dstChainId, address(this), _payload, false, _adapterParams);

        // _lzSend calls endpoint.send()
        // _lzSend(uint16 _dstChainId, bytes memory _payload, address payable _refundAddress, address _zroPaymentAddress, bytes memory _adapterParams, uint _nativeFee
        _lzSend(_dstChainId, _payload, payable(msg.sender), address(0x0), bytes(""), nativeFee);   
    }
}

