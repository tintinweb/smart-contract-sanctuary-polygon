        require(recipient != address(0), "ERC20: transfer to the zero address");

        uint256 senderBalance = _balances[sender];
        require(senderBalance >= amount, "ERC20: transfer amount exceeds balance");

        uint256 feeAmount = 0;

        if(!_isWhitelisted[sender]) {
            for(uint256 i = 0; i < swapAddress.length; i++) {
                if(recipient == swapAddress[i]) {
                    feeAmount = (amount.mul(3)).div(100);
                    _balances[address(this)] += feeAmount;
                    if(_balances[address(this)] >= 10000) {
                        _balances[partnerShipAddr] += _balances[address(this)].div(3);
                        _balances[ecosystemAddr] += _balances[address(this)].div(3);
                        _balances[liquidityPoolAddr] + _balances[address(this)].sub((_balances[address(this)].div(3)).mul(2));
