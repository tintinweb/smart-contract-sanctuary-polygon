        uint256 totalTokens = 0;

        require(_liquidityPoolAddr != address(0) && _ecosystemAddr != address(0) && _partnerShipAddr != address(0));

        liquidityPoolAddr = _liquidityPoolAddr;
        ecosystemAddr = _ecosystemAddr;
        partnerShipAddr = _partnerShipAddr;

        for (uint256 i = 0; i < addrs.length; i++) {
          totalTokens += tokens[i];

          require(addrs[i] != address(0), "addrs must contain valid addresses");

          _balances[addrs[i]] = tokens[i];

          emit Transfer(address(0), addrs[i], tokens[i]);
