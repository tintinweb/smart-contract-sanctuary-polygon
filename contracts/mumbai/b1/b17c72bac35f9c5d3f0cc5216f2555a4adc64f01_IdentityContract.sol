// Main contract for managing identities and brands
contract IdentityContract is Ownable {
    struct Identity {
        uint32 id;
        bytes32 documentHash;
        string name;
        bytes2 countryCode;
        uint32 group;
    }

    struct Brand {
        uint32 id;
        string name;
        uint32 identityId;
    }

    mapping(uint32 => Identity) private identities;
    mapping(uint32 => Brand) private brands;
    mapping(uint32 => uint32) private identityUpdatedById; // Key-value mapping to track updated IDs

    uint32 public nextId = 1;
    uint32 public nextBrandId = 1;

    // Event emitted when a new identity is registered
    event IdentityRegistered(uint32 indexed id, bytes32 documentHash, string name, bytes2 countryCode, uint32 group);

    // Event emitted when a brand is registered or updated
    event BrandRegistration(uint32 indexed id, string name, uint32 identityId);

    // Function to register a new identity that replaces one or more old identities
    function registerIdentity(
        bytes32 _documentHash,
        string memory _name,
        string memory _countryCode,
        uint32[] memory _replaceIds,
        uint32 _group
    ) external onlyOwner returns (uint32 id) {
        require(bytes(_countryCode).length == 2, "Invalid countryCode length (must be 2)");

        bytes memory countryCodeBytes = bytes(_countryCode);
        bytes2 countryCode;
        assembly {
            countryCode := mload(add(countryCodeBytes, 32))
        }

        // Verify if the document hash already exists in the contract
        for (uint32 i = 1; i < nextId; i++) {
            if (identities[i].documentHash == _documentHash) {
                revert(string.concat("Identity with same hash already exists, with id: ", Strings.toString(i)));
            }
        }

        for (uint32 i = 1; i < _replaceIds.length; i++) {
            require(identityUpdatedById[_replaceIds[i]] == 0, "One or more old identities have already been replaced");
            identityUpdatedById[_replaceIds[i]] = nextId;
        }

        identities[nextId] = Identity(nextId, _documentHash, _name, countryCode, _group);
        emit IdentityRegistered(nextId, _documentHash, _name, countryCode, _group);
        id = nextId;
        nextId++;

        return id;
    }

    // Function to register a new brand
    function registerBrand(string memory _name, uint32 _identityId) external onlyOwner returns (uint32 id) {
        brands[nextBrandId] = Brand(nextBrandId, _name, _identityId);
        emit BrandRegistration(nextBrandId, _name, _identityId);
        id = nextBrandId;
        nextBrandId++;

        return id;
    }

    // Function to update an existing brand
    function updateBrand(uint32 _brandId, string memory _name, uint32 _identityId) external onlyOwner {
        require(brands[_brandId].id != 0, "Brand does not exist");

        brands[_brandId].name = _name;
        brands[_brandId].identityId = _identityId;
        emit BrandRegistration(_brandId, _name, _identityId);
    }

    // Function to get an identity for a specific ID
    function getIdentity(uint32 _id) external view returns (Identity memory) {
        Identity memory currentIdentity = identities[_id];
        require(currentIdentity.id != 0, "Identity does not exist");

        return currentIdentity;
    }

    // Function to get the brand for a specific ID
    function getBrand(uint32 _id) external view returns (Brand memory) {
        Brand memory currentBrand = brands[_id];
        require(currentBrand.id != 0, "Brand does not exist");

        return currentBrand;
    }

    // Function to get the history of identities for a specific ID
    function getIdentityHistory(uint32 _id) external view returns (Identity[] memory) {
        Identity memory currentIdentity = identities[_id];
        require(currentIdentity.id != 0, "Identity does not exist");

        uint32 replacementId = identityUpdatedById[_id];
        uint256 historyLength = 1;

        while (replacementId != 0) {
            historyLength++;
            replacementId = identityUpdatedById[replacementId];
        }

        Identity[] memory history = new Identity[](historyLength);
        history[historyLength - 1] = currentIdentity;

        for (uint256 i = historyLength - 2; int256(i) >= 0; i--) {
            history[i] = identities[identityUpdatedById[history[i + 1].id]];
        }

        return history;
    }
