        uint256 _qx,
        uint256 _qy,
        uint256 _sharedSecret
    ) public pure returns (uint256, uint256) {
        (uint256 _qsx, uint256 _qsy) = commitmentFromSecret(_sharedSecret);
        return ECCUtils.ecadd(_qx, _qy, _qsx, _qsy);
