pragma solidity 0.8.14;

import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";

import "@layerzerolabs/solidity-examples/contracts/contracts-upgradable/lzApp/NonblockingLzAppUpgradeable.sol";

import "./interfaces/IZooKeeper.sol";

/**
  @title Bamboo bridge minter
  @author NexxyoLabs - BambooDeFi
  @notice This contract is used for minting the exact amount of tokens that have been burned
  on the other blockchain when user makes a transfer.
*/
contract BambooBridgeMinter is 
    Initializable,
    OwnableUpgradeable,
    PausableUpgradeable, 
    AccessControlUpgradeable,
    NonblockingLzAppUpgradeable    
{
    using SafeERC20Upgradeable for IERC20Upgradeable;

    // ============== VARIABLES ==============

    /// @notice Variable to store the ZooKeeper address
    IZooKeeper public zooKeeper;
    
    /// @notice Mapping to store the processed burn transactions
    mapping(uint256 => mapping(uint256 => bool)) public processedNonces;

    /// @notice Mapping to store the available amount of tokens to be minted by address and chain
    /// User => ChainId => Amount
    mapping(address => mapping(uint256 => uint256)) public userAvailableTokens;

    /// @notice Mapping to store the LayerZero chainIds
    /// Real chainId => LayerZero chainIds
    mapping(uint256 => uint16) public lzChainIds;

    /// @notice Constant to store the MINTER_ROLE
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");

    enum Step {
        Burn,
        Mint
    }

    // ============== EVENTS ==============

    /// @notice Event emitted when an amount of tokens are minted
    /// @param from The address of the wallet that transfer the tokens
    /// @param to The address of the destiny wallet
    /// @param amount The amount of tokens burned/transferred
    /// @param date The date when the tokens are minted
    /// @param chainId The id of the origin chain
    /// @param nonce The nonce used to identify the transfer
    /// @param step The type of operation (Burn/Mint)
    event Transfer(
        address from,
        address to,
        uint amount,
        uint date,
        uint chainId,
        uint nonce,
        Step indexed step
    );

    /// @notice Event emitted when the ZooKeeper contract address is changed
    /// @param sender The address of the user that changes the ZooKeeper contract address (only Owner)
    /// @param zooKeeper The new ZooKeeper contract address
    event ZooKeeperChanged(
        address sender,
        address zooKeeper
    );

    /// @notice Event emitted when the LayerZero chainId assigned to a real chainId is changed
    /// @param sender The address of the user that changes the LayerZero chainId (only Owner)
    /// @param chainId The real chainId
    /// @param lzChainId The LayerZero chain id
    event LzChainIdChanged(
        address sender,
        uint256 chainId,
        uint16 lzChainId
    );

    event LzMessageReceived(
        uint16 srcChainId, 
        bytes srcAddress, 
        uint16 dstChainId, 
        address dstAddress, 
        uint256 amount, 
        uint256 txNonce
    );

    // ============== CONSTRUCTOR ==============

    // constructor() {
    //     _disableInitializers();
    // }
    //TODO descomentar

    // ============== INITIALIZE ==============

    /// @param _zooKeeper The ZooKeeper contract address
    /// @param _lzEndpoint The LayerZero Omnichain endpoint address
    function initialize(
        address _zooKeeper,
        address _lzEndpoint
    )
        external
        initializer
    {
        __Ownable_init();
        __Pausable_init();
        __AccessControl_init();
        __NonblockingLzAppUpgradeable_init(_lzEndpoint);
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(MINTER_ROLE, msg.sender);

        zooKeeper = IZooKeeper(_zooKeeper);
    }

    /// @notice Function that pauses the contract
    function pause() external onlyOwner {
        _pause();
    }

    /// @notice Function that unpauses the contract
    function unpause() external onlyOwner {
        _unpause();
    }

    /// @notice Function that sets the ZooKeeper contract address
    /// @param _zooKeeper New ZooKeeper contract address
    function setZooKeeper(
        address _zooKeeper
    ) 
        external 
        onlyOwner 
    {
        require(_zooKeeper != address(0), "ZooKeeper contract address can't be the zero address");
        zooKeeper = IZooKeeper(_zooKeeper);

        emit ZooKeeperChanged(msg.sender, _zooKeeper);
    }

    function setLzChainId(
        uint256 chainId,
        uint16 lzChainId
    )
        external   
        onlyOwner
    {
        lzChainIds[chainId] = lzChainId;

        emit LzChainIdChanged(msg.sender, chainId, lzChainId);
    }

    /// @notice Function that gets the id of the source chain
    function getChainId() 
        external 
        view 
        returns(uint256)
    {
        uint16 chainIdAssembly;
        assembly {
            chainIdAssembly:= chainid()
        }

        return chainIdAssembly;
    }

    /// @notice Function that mints the amount of tokens after getting burned in another chain
    /// @param to The address where amount will go
    /// @param amount The amount to transfer
    /// @param chainId The id of the origin chain
    /// @param otherChainNonce The nonce of the other blockchain
    function mint(
        address to,
        uint amount,
        uint16 chainId,
        uint256 otherChainNonce
    ) 
        external 
        whenNotPaused
        onlyRole(MINTER_ROLE)
    {
        require(
            !processedNonces[chainId][otherChainNonce],
            "Bridge minter: Transfer already processed"
        );
        processedNonces[chainId][otherChainNonce] = true;
        
        require(
            userAvailableTokens[to][this.getChainId()] > amount,
            "Bridge minter: Not enough tokens available to mint"
        );
        
        zooKeeper.bridgeTransfer(to, amount);
        
        // LayerZero Omnichain
        userAvailableTokens[to][chainId] = amount;
        _nonblockingLzSend(
            lzChainIds[chainId],
            abi.encode(to, chainId, amount),
            payable(msg.sender),
            address(0),
            bytes("")
        );

        emit Transfer(
            msg.sender,
            to,
            amount,
            block.timestamp,
            chainId,
            otherChainNonce,
            Step.Mint
        );
    }

    /// NonblockingLzAppUpgradeable
    function _nonblockingLzReceive(
        uint16 _srcChainId, 
        bytes memory _srcAddress, 
        uint64 _nonce, 
        bytes memory _payload
    ) 
        internal 
        override 
    {
        // Whenever we receive a message through LayerZero, we must update the userAvailableTokens
        (address dstAddress, uint16 dstChainId, uint256 amount, uint256 txNonce) = abi.decode(_payload, (address, uint16, uint256, uint16));

        userAvailableTokens[dstAddress][dstChainId] += amount;
        //this.mint(dstAddress, amount, dstChainId, txNonce);

        emit LzMessageReceived(_srcChainId, _srcAddress, dstChainId, dstAddress, amount, txNonce);
    }

    /// @notice Function sends a LayerZero message to another chain (trusted remote)
    /// @param _dstChainId Destiny chain id
    /// @param _payload Payload with the encoded data (user, chainId, amount)
    /// @param _refundAddress Refund address
    /// @param _zroPaymentAddress Zero payment address
    /// @param _adapterParams Adapter params
    function _nonblockingLzSend(
        uint16 _dstChainId, 
        bytes memory _payload, 
        address payable _refundAddress, 
        address _zroPaymentAddress, 
        bytes memory _adapterParams
    ) 
        internal 
    {
        (uint nativeFee, ) = lzEndpoint.estimateFees(_dstChainId, address(this), _payload, false, _adapterParams);

        // _lzSend calls endpoint.send()
        // _lzSend(uint16 _dstChainId, bytes memory _payload, address payable _refundAddress, address _zroPaymentAddress, bytes memory _adapterParams, uint _nativeFee
        _lzSend(_dstChainId, _payload, payable(msg.sender), address(0x0), bytes(""), nativeFee);   
    }
}

