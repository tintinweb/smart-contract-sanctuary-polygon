pragma solidity ^0.8.13;

import "@maticnetwork/fx-portal/contracts/tunnel/FxBaseChildTunnel.sol";
import "../Bridge.sol";

contract PolygonChildBridge is FxBaseChildTunnel, Bridge {
    uint64 public constant POLYGON_CHAIN_ID = 137;

    constructor(address fxChild) FxBaseChildTunnel(fxChild) {}

    function _processMessageFromRoot(
        uint256,
        address rootMessageSender,
        bytes memory message
    ) internal override validateSender(rootMessageSender) {
        (address sender, address receiver, bytes memory _calldata) = abi.decode(
            message,
            (address, address, bytes)
        );
        _call(POLYGON_CHAIN_ID, sender, receiver, _calldata);
    }

    function sendCall(
        uint64,
        address receiver,
        bytes memory _calldata
    ) external override {
        _sendMessageToRoot(abi.encode(msg.sender, receiver, _calldata));
    }
}