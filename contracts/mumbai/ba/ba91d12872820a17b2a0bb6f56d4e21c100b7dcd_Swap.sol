pragma solidity ^0.8.18;

import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

contract Swap is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    using Counters for Counters.Counter;

    // =============================================================
    //                            STORAGE
    // =============================================================
    address public NATURATOKEN;
    address public USDTTOKEN;
    address private _ownerWallet;
    Counters.Counter private _OrdersCount;
    address public burnWallet = 0xFa7F857ce1f1F64C6F9f5776562AC540f9141B2E;

    struct TokenOrder {
        address owner;
        address tokenA;
        uint256 amountA;
        uint256 price;
        string orderType;
        uint8 status; // 0 = cancel or delete 1 = enable or active
    }

    TokenOrder[] public orderBook;

    mapping(address => uint256) public buyerFeeCollected;
    mapping(address => uint256) public sellerFeeCollected;
    mapping(address => uint256[]) public userOrders; 

    event OrderCreated(
        address indexed _ordOwner,
        address indexed _tokenA,
        uint256 _amountA,
        uint256 price
    );

    event BuyFeeEvent(address indexed _buyer, uint256 _feeAmount);
    event SellFeeEvent(address indexed _seller, uint256 _feeAmount);

    event NATURA_Burnt(
        address indexed _ordOwner,
        address indexed _buyer,
        uint256 _amountBurn
    );
    event SwapSuccess(
        address indexed _ordOwner,
        address indexed _tokenA,
        uint256 _amountA,
        uint256 price
    );

    // =============================================================
    //                            Modifiers
    // =============================================================

    modifier checkValues(
        address owner,
        address tokenA,
        uint256 amountA,
        uint256 price,
        string memory orderType
    ) {
        require(msg.sender != address(0), "NullValuesError");
        require(tokenA != address(0), "NullValuesError");
        require(price > uint256(0), "NullValuesError");
        require(amountA > 0, "Amounts must be greater than zero");
        require(keccak256(abi.encodePacked(orderType)) == keccak256("buy") || keccak256(abi.encodePacked(orderType)) == keccak256("sell")  ,  "Please give valid listing type: buy or sell");

        _;
    }

    // =============================================================
    //                            Constructor
    // =============================================================

    constructor(address _tokenN, address _tokenU, address _owner) {
        NATURATOKEN = _tokenN;
        USDTTOKEN = _tokenU;
        _ownerWallet = (_owner);
    }

    /**
     * ******************************
     * @dev Create Order Function
     * ******************************
     */

    function createOrder(
        address _tokenA,
        uint256 _amountA,
        uint256 _price,
        string memory _orderType
    ) external  checkValues(msg.sender, _tokenA, _amountA, _price, _orderType) {
        //    check whether owner has enough amount to create the order
        require(
            IERC20(_tokenA).balanceOf(msg.sender) >= _amountA,
            "Insufficient Token balance"
        );

        IERC20(_tokenA).safeTransferFrom(msg.sender, address(this), _amountA);

        address tokenOwner = msg.sender;
        TokenOrder memory newOrder = TokenOrder(
            tokenOwner,
            _tokenA,
            _amountA,
            _price,
            _orderType, 
            1
        );
        orderBook.push(newOrder);
        userOrders[tokenOwner].push(orderBook.length - 1);
        _OrdersCount.increment();
        emit OrderCreated(tokenOwner, _tokenA, _amountA, _price);
    }

    /**
     * ******************************
     * @dev Create Swap Function
     * ******************************
     */

    //*** Important ***
    function swap(uint256 _orderId) public nonReentrant{
        require(_orderId < orderBook.length, "Invalid order Id");
        TokenOrder storage order = orderBook[_orderId];
        // check whether user has enough amount to swap/give to order owner
        require(IERC20(order.tokenA).balanceOf(address(this)) >= order.amountA, "Insufficient User balance");

        if(keccak256(abi.encodePacked(order.orderType)) == keccak256(abi.encodePacked("sell"))) {
            if (NATURATOKEN == order.tokenA) {
                sellNatura(order);
            } else {
                sellUSDT(order);
            }
        } else {
            if (NATURATOKEN == order.tokenA) {
                buyUSDT(order);
            } else {
                buyNatura(order);
            }
        }

        orderBook[_orderId].status = 0;

        emit SwapSuccess(order.owner, order.tokenA, order.amountA, order.price);
    }

    function sellNatura(TokenOrder storage order) internal {
        address  tokenB = USDTTOKEN;
        uint256 amountToSwap = order.price.mul(order.amountA.div(10**18));
        // check whether contract has enough amount to swap/give msg.sender
        require(IERC20(tokenB).balanceOf(msg.sender) >= amountToSwap,"Insufficient Token balance");
        amountToSwap = deductFeeFrom(amountToSwap,tokenB,msg.sender,msg.sender,order.owner);
        // Calculate the amount of NATURA to be burned
        uint256 amountToBurnN = calculateBurnFee(order.amountA); // 4% of the value // burn NATURA Tokens
        // burn token
        _burnToken(address(this), amountToBurnN);
        // emit event FeePaid
        emit NATURA_Burnt(order.owner,msg.sender,amountToBurnN);
        // Transfer to the the order owner
        IERC20(tokenB).safeTransferFrom(msg.sender,order.owner,amountToSwap);
        uint256 amountToBuyer = order.amountA - amountToBurnN;
        // Transfer to Caller
        IERC20(order.tokenA).safeTransfer(msg.sender, amountToBuyer);
    }

    function sellUSDT(TokenOrder storage order) internal {
        address  tokenB = NATURATOKEN;
        uint256 amountToSwap = order.price.mul(order.amountA.div(10**6)); 
        require(IERC20(tokenB).balanceOf(msg.sender) >= amountToSwap,"Insufficient Token balance");
        // Calculate the amount of NATURA to be burned
        uint256 amountToBurnN = calculateBurnFee(amountToSwap); // 4% of the value // burn NATURA Tokens
        // Subtract the burn from the original amount to be swapped
        uint256 amountToOrderOwner = amountToSwap - amountToBurnN;
        // burn token
        _burnToken(msg.sender, amountToBurnN);
        // emit event FeePaid
        emit NATURA_Burnt(order.owner,msg.sender,amountToBurnN);
        uint256 amountToBuyer = deductFee(order.amountA,order.tokenA,msg.sender,order.owner);
        // Transfer to the the order owner
        IERC20(tokenB).safeTransferFrom(msg.sender,order.owner,amountToOrderOwner);
        // Transfer to Caller
        IERC20(order.tokenA).safeTransfer(msg.sender, amountToBuyer);
    }

    function buyNatura(TokenOrder storage order) internal {
        address  tokenB = NATURATOKEN;
        uint256 amountToSwap = order.price.mul(order.amountA.div(10**6));
        require(IERC20(tokenB).balanceOf(msg.sender) >= amountToSwap,"Insufficient Token balance");
        uint256 amountToBurnN = calculateBurnFee(amountToSwap); // 4% of the value // burn NATURA Tokens
        // Subtract the burn from the original amount to be swapped
        uint256 amountToOrderOwner = amountToSwap - amountToBurnN;
        // burn token
        _burnToken(msg.sender, amountToBurnN);
        // emit event FeePaid
        emit NATURA_Burnt(order.owner,msg.sender,amountToBurnN);

        uint256 amountToBuyer = deductFee(order.amountA,order.tokenA,msg.sender,order.owner);
        // Transfer to the the order owner
        IERC20(tokenB).safeTransferFrom(msg.sender,order.owner,amountToOrderOwner);
        // Transfer to Caller
        IERC20(order.tokenA).safeTransfer(msg.sender, amountToBuyer);

    }

    function buyUSDT(TokenOrder storage order) internal {
        address  tokenB = USDTTOKEN;
        uint256 amountToSwap = order.price.mul(order.amountA.div(10**18)); 
        require(IERC20(tokenB).balanceOf(msg.sender) >= amountToSwap,"Insufficient Token balance");

        amountToSwap = deductFeeFrom(amountToSwap,tokenB,msg.sender,msg.sender,order.owner);
        // Calculate the amount of NATURA to be burned
        uint256 amountToBurnN = calculateBurnFee(order.amountA); // 4% of the value // burn NATURA Tokens
        // burn token
        _burnToken(address(this), amountToBurnN);
        // emit event FeePaid
        emit NATURA_Burnt(order.owner,msg.sender,amountToBurnN);
        // Transfer to the the order owner
        IERC20(tokenB).safeTransferFrom(msg.sender,order.owner,amountToSwap);
        uint256 amountToBuyer = order.amountA - amountToBurnN;
        // Transfer to Caller
        IERC20(order.tokenA).safeTransfer(msg.sender, amountToBuyer);
    }

    /**
     * ******************************
     * @dev Update Order Function
     * ******************************
     */

    function updateOrder(
        uint256 _orderId,
        uint256 _amount,
        uint256 _price
    ) external {
        require(_orderId < orderBook.length, "Invalid order Id");

        TokenOrder storage order = orderBook[_orderId];

        //  check whether owner has initiated cancel order
        require(msg.sender == order.owner, "Unauthorised");
        order.amountA = _amount;
        order.price = _price;
    }

    // /**
    //  * ******************************
    //  * @dev Cancel Order Function
    //  * ******************************
    //  */

    function cancelOrder(uint256 _orderId) external nonReentrant {
        require(_orderId < orderBook.length, "Invalid order Id");

        TokenOrder storage order = orderBook[_orderId];

        //  check whether owner has initiated cancel order
        require(msg.sender == order.owner, "Unauthorised");

        IERC20(order.tokenA).safeTransfer(msg.sender, order.amountA);

        orderBook[_orderId].status = 0;
    }

    /**
     * ******************************
     * @dev Owner Withdraw Function
     * ******************************
     */

    //  function withdraw(){}

    /**
     * ******************************
     * @dev Helper Function
     * ******************************
     */

    function _burnToken(address _from, uint256 _amount) internal {
        if (_from == address(this)) {
            IERC20(NATURATOKEN).safeTransfer(burnWallet, _amount);
        } else {
            IERC20(NATURATOKEN).safeTransferFrom(_from, burnWallet, _amount);
        }

    }

    function deductFee(
        uint256 _amountToSwap,
        address _token,
        address _buyer,
        address _seller
    ) internal returns (uint256) {
        // Calculate the amount of USDT to be transferred to this contract owner
        uint256 buyerFee = calculateBuyerFee(_amountToSwap); // 4% of the value
        uint256 sellerFee = calculateSellerFee(_amountToSwap); // 1% of the value
        // Subtract the 4%fee from the original usdt amount to be swapped
        // Transfer the 4% fee to the owner of the contract
        uint256 amount = _amountToSwap - sellerFee - buyerFee;
        uint256 totalFee = buyerFee.add(sellerFee);

        // IERC20(_token).safeTransfer(ownerWallet(), buyerFee);
        // Transfer the 1% fee to the owner of the contract
        // IERC20(_token).safeTransfer(ownerWallet(), sellerFee);

        IERC20(_token).safeTransfer(ownerWallet(), totalFee);

        sellerFeeCollected[_seller] = sellerFee;
        buyerFeeCollected[_buyer] = buyerFee;
        emit BuyFeeEvent(_buyer, buyerFee);
        emit SellFeeEvent(_seller, sellerFee);
        return amount;
    }

    function deductFeeFrom(
        uint256 _amountToSwap,
        address _token,
        address _from,
        address _buyer,
        address _seller
    ) internal returns (uint256) {
        // Calculate the amount of USDT to be transferred to this contract owner
        uint256 buyerFee = calculateBuyerFee(_amountToSwap); // 4% of the value
        uint256 sellerFee = calculateSellerFee(_amountToSwap); // 1% of the value
        // Subtract the 4%fee from the original usdt amount to be swapped
        // Transfer the 4% fee to the owner of the contract
        uint256 amount = _amountToSwap - sellerFee - buyerFee;
        uint256 totalFee = buyerFee.add(sellerFee);

        IERC20(_token).safeTransferFrom(_from, ownerWallet(), totalFee);

        sellerFeeCollected[_seller] = sellerFee;
        buyerFeeCollected[_buyer] = buyerFee;
        emit BuyFeeEvent(_buyer, buyerFee);
        emit SellFeeEvent(_seller, sellerFee);
        return amount;
    }

    function calculateBuyerFee(uint256 amount) internal pure returns (uint256) {
        uint mulAmt = amount.mul(400);
        return mulAmt.div(10000);
    }

    function calculateSellerFee(
        uint256 amount
    ) internal pure returns (uint256) {
        uint mulAmt = amount.mul(100);
        return mulAmt.div(10000);
    }

    function calculateBurnFee(uint256 amount) internal pure returns (uint256) {
        uint mulAmt = amount.mul(400);
        return mulAmt.div(10000);
    }

    // =============================================================
    //                           Getters
    // =============================================================

    function ownerWallet() public view returns (address) {
        return _ownerWallet;
    }

    function ordersCount() public view returns (Counters.Counter memory) {
        return _OrdersCount;
    }

    function getOrderById(uint256 _id) public view returns (TokenOrder memory) {
        return orderBook[_id];
    }

    function getBurnWallet() public view returns (address) {
        return burnWallet;
    }

    function getOrders() public view returns (TokenOrder[] memory) {
        return orderBook;
    }

    function getOrderByUser(address _user)
        public
        view
        returns (TokenOrder[] memory)
    {
        TokenOrder[] memory orders = new TokenOrder[](
            _OrdersCount.current()
        );
        uint256 count = 0;
        for (uint256 i = 0; i < orderBook.length; i++) {
            if (orderBook[i].owner == _user) {
                orders[count] = orderBook[i];
                count++;
            }
        }
        return orders;
    }

    // =============================================================
    //                           Setter
    // =============================================================

    function setBurnWallet(
        address _burnWallet
    ) public onlyOwner returns (address) {
        burnWallet = _burnWallet;
        return burnWallet;
    }

    receive() external payable {} 
}

