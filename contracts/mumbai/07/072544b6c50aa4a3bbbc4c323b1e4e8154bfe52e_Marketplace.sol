pragma solidity 0.8.13;

import "@openzeppelin/contracts/access/Ownable.sol";
import "ERC721A/contracts/IERC721A.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

struct SellOrderParams {
    uint256 nonce;
    address collection;
    uint256 assetId;
    uint256 price;
    address seller;
}

struct BuyOrderParams {
    uint256 salt;
    address collection;
    uint256 assetId;
    uint256 price;
    address buyer;
}

/**
 * @title Marketplace
 *
 * @notice
 *  A contract used for trading ERC-721 assets for ERC-20 (buy orders) and native tokens (sell orders).
 *  Trades can happen via one of two orders:
 *      1. sell order - placed by the owner of ERC-721 asset, fulfilled by the owner of declared amount of native tokens.
 *      2. buy order - placed by the owner of ERC-20, fulfilled by the owner of declared ERC-721 asset.
 *  Orders are formed and signed off-chain and meet the contract only in the moment of fulfillment or cancellation.
 */

contract Marketplace is Ownable, ReentrancyGuard {
    event SellOrderFulfilled(
        address indexed buyer, address indexed seller, address indexed collection, uint256 assetId, uint256 price
    );
    event BuyOrderFulfilled(
        address indexed buyer, address indexed seller, address indexed collection, uint256 assetId, uint256 price
    );

    IERC20 public immutable token;
    mapping(address => mapping(uint256 => uint256)) public assetNonce;
    mapping(bytes32 => bool) public buyOrdersFulfilled;

    // royalty percentage expressed as n/1000, or n/10 %, e.g. royalty = 75 corresponds to 75/1000 = 0.075 = 75/10 % = 7.5 %
    uint256 public royaltyPctg;
    uint256 public constant ROYALTY_DENOMINATOR = 1000;
    // address which will receive the platform royalties
    address public royaltyCollector;
    // interval saying how often should the royalties be withdrawn from the platform, e.g. every 100 transactions
    uint256 public royaltyWithdrawalInterval;

    uint256 private _counter;

    constructor(address token_, uint256 royalty_, uint256 royaltyWithdrawalInterval_) {
        token = IERC20(token_);
        royaltyPctg = royalty_;
        royaltyWithdrawalInterval = royaltyWithdrawalInterval_;
    }

    /**
     * @notice
     *   A function used to fulfill a sell order. Should be called by the buyer. A sell order is a structure formed and signed by the owner of a ERC-721 asset which they are willing to sell.
     *   It contains parameters identifying the asset: `{collectionAddress, assetId}` and the selling `price`.
     *   In order for ticket fulfillment Marketplace contract must be approved to the ERC-721 asset, and the appropriate msg.value must be set.
     *   @param orderParams parameters of the sell order, including the identification of the asset, nonce and price.
     *   @param signature represents a ticket and should contain an ECDSA signature. The signed message should be a keccak hash of serialized SellOrderParams. `assetNonce` should be read from contract mapping at the moment of order creation.
     */
    function fulfillSellOrder(SellOrderParams calldata orderParams, bytes calldata signature)
        external
        payable
        nonReentrant
    {
        IERC721A collection = IERC721A(orderParams.collection);
        require(
            collection.getApproved(orderParams.assetId) == address(this),
            "Marketplace: contract must be approved to transfer this asset"
        );
        require(collection.ownerOf(orderParams.assetId) == orderParams.seller, "Marketplace: asset ownership changed");
        require(msg.value == orderParams.price, "Marketplace: wrong amount");
        require(
            orderParams.nonce == assetNonce[orderParams.collection][orderParams.assetId],
            "Marketplace: invalid sell order nonce"
        );
        require(_verifySellOrderSignature(orderParams, signature), "Marketplace: invalid sell order signature");

        ++assetNonce[orderParams.collection][orderParams.assetId];
        uint256 royalty = _calcRoyalty(orderParams.price);

        collection.transferFrom(orderParams.seller, msg.sender, orderParams.assetId);

        (bool transferSucceeded,) = payable(orderParams.seller).call{value: orderParams.price - royalty}("");
        require(transferSucceeded, "Marketplace: transaction unsuccessful");

        _transferRoyaltiesOnInterval();

        emit SellOrderFulfilled(
            msg.sender, orderParams.seller, orderParams.collection, orderParams.assetId, orderParams.price
            );
    }

    /**
     * @notice
     *   Cancel a sell order. Callable only by the owner of the asset.
     *   @param orderParams parameters of the sell order, including the identification of the asset, nonce and price.
     *   @param signature represents a ticket and should contain an ECDSA signature. The signed message should be a keccak hash of serialized SellOrderParams.
     */
    function cancelSellOrder(SellOrderParams calldata orderParams, bytes calldata signature) external {
        require(
            IERC721A(orderParams.collection).ownerOf(orderParams.assetId) == msg.sender,
            "Marketplace: only the asset owner can cancel the order"
        );
        require(
            orderParams.nonce == assetNonce[orderParams.collection][orderParams.assetId],
            "Marketplace: invalid sell order nonce"
        );
        require(_verifySellOrderSignature(orderParams, signature), "Marketplace: invalid sell order signature,");

        ++assetNonce[orderParams.collection][orderParams.assetId];
    }

    /**
     * @notice
     *   A function used to fulfill a buy order. Should be called by the seller. A buy order is a structure formed and signed by the owner of ERC-20 tokens and targets a specific ERC-721 asset.
     *   It contains parameters identifying the asset: `{collectionAddress, assetId}`, the buying `price`, a random number `salt` and the address of the `buyer`.
     *   In order for ticket fulfillment Marketplace contract must be approved to the ERC-721 asset and ERC-20 tokens.
     *   @param orderParams parameters of the buy order, containing asset identification, price, salt and buyer.
     *   @param signature represents a ticket and should contain an ECDSA signature. The signed message should be a keccak hash of serialized BuyOrderParams.
     */
    function fulfillBuyOrder(BuyOrderParams calldata orderParams, bytes calldata signature) external {
        IERC721A collection = IERC721A(orderParams.collection);
        require(
            collection.getApproved(orderParams.assetId) == address(this),
            "Marketplace: contract must be approved to transfer this asset"
        );
        require(
            token.allowance(orderParams.buyer, address(this)) >= orderParams.price,
            "Marketplace: token allowance too small to fulfill the order"
        );
        bytes32 buyOrderHash = _buyOrderToHash(orderParams);
        require(!buyOrdersFulfilled[buyOrderHash], "Marketplace: buy order already fulfilled");
        require(_verifyBuyOrderSignature(orderParams, signature), "Marketplace: invalid buy order");

        uint256 royalty = _calcRoyalty(orderParams.price);

        buyOrdersFulfilled[buyOrderHash] = true;

        collection.transferFrom(msg.sender, orderParams.buyer, orderParams.assetId);
        token.transferFrom(orderParams.buyer, msg.sender, orderParams.price - royalty);

        _transferRoyaltiesOnInterval();

        emit BuyOrderFulfilled(
            orderParams.buyer, msg.sender, orderParams.collection, orderParams.assetId, orderParams.price
            );
    }

    /**
     * @notice
     *   Cancel a buy order. Callable only by the issuer of the order.
     *   @param orderParams parameters of the buy order, containing asset identification, price, salt and buyer.
     *   @param signature represents a ticket and should contain an ECDSA signature. The signed message should be a keccak hash of serialized BuyOrderParams.
     */
    function cancelBuyOrder(BuyOrderParams calldata orderParams, bytes calldata signature) external {
        require(orderParams.buyer == msg.sender, "Marketplace: only the issuer can cancel the order");
        require(_verifyBuyOrderSignature(orderParams, signature), "Marketplace: invalid buy order");
        bytes32 buyOrderHash = _buyOrderToHash(orderParams);
        buyOrdersFulfilled[buyOrderHash] = true;
    }

    function _verifySellOrderSignature(SellOrderParams calldata orderParams, bytes calldata signature)
        internal
        view
        returns (bool)
    {
        bytes32 msgHash = _sellOrderToHash(orderParams);
        return _verifySignature(msgHash, signature, IERC721A(orderParams.collection).ownerOf(orderParams.assetId));
    }

    function _verifyBuyOrderSignature(BuyOrderParams calldata orderParams, bytes calldata signature)
        internal
        pure
        returns (bool)
    {
        bytes32 msgHash = _buyOrderToHash(orderParams);
        return _verifySignature(msgHash, signature, orderParams.buyer);
    }

    function _verifySignature(bytes32 msgHash, bytes calldata signature, address signer_)
        internal
        pure
        returns (bool)
    {
        address signer = ECDSA.recover(msgHash, signature);
        return signer == signer_;
    }

    function _buyOrderToHash(BuyOrderParams calldata orderParams) internal pure returns (bytes32) {
        bytes memory message = abi.encode(orderParams);
        return keccak256(message);
    }

    function _sellOrderToHash(SellOrderParams calldata orderParams) internal pure returns (bytes32) {
        bytes memory message = abi.encode(orderParams);
        return keccak256(message);
    }

    function _calcRoyalty(uint256 amount) internal view returns (uint256) {
        return amount * royaltyPctg / ROYALTY_DENOMINATOR;
    }

    function setRoyaltyPctg(uint256 royaltyPctg_) external onlyOwner {
        royaltyPctg = royaltyPctg_;
    }

    function setRoyaltyWithdrawalInterval(uint256 royaltyWithdrawalInterval_) external onlyOwner {
        royaltyWithdrawalInterval = royaltyWithdrawalInterval_;
    }

    function setRoyaltyCollector(address royaltyCollector_) external onlyOwner {
        royaltyCollector = royaltyCollector_;
    }

    function _transferRoyaltiesOnInterval() internal {
        if (++_counter % royaltyWithdrawalInterval == 0) {
            withdrawRoyalties();
        }
    }

    function withdrawRoyalties() public {
        address me = address(this);
        uint256 nativeTokenBalance = me.balance;
        uint256 erc20Balance = token.balanceOf(me);
        if (nativeTokenBalance > 0) {
            (bool transferSucceeded,) = payable(royaltyCollector).call{value: nativeTokenBalance}("");
            require(transferSucceeded, "Transaction unsuccessful");
        }
        if (erc20Balance > 0) {
            token.transferFrom(me, royaltyCollector, erc20Balance);
        }
    }
}