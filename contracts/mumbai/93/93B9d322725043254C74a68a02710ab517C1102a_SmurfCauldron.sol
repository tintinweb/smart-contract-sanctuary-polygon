import "@openzeppelin/contracts-upgradeable/token/ERC1155/extensions/ERC1155SupplyUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/common/ERC2981Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol";
import {Constants} from "./libraries/Constants.sol";

contract SmurfStatue is Initializable, ERC1155Upgradeable, AccessControlUpgradeable, PausableUpgradeable, ERC1155BurnableUpgradeable, ERC1155SupplyUpgradeable, ERC2981Upgradeable {
    using SafeMathUpgradeable for uint256;
    using CountersUpgradeable for CountersUpgradeable.Counter;

    // Roles
    bytes32 constant public URI_SETTER_ROLE         = keccak256("URI_SETTER_ROLE");
    bytes32 constant public PAUSER_ROLE             = keccak256("PAUSER_ROLE");
    bytes32 constant public MINTER_ROLE             = keccak256("MINTER_ROLE");

    // Contract variables
    string public       __contractUri;                      // The contract URI json link
    uint96 public       __maxSmurfPerHolder;                // Maximum number of smurfs per holder
    uint96 public       __maxSmurfSupply;                   // Maximum number of smurfs tokens
    uint256 public      __pricePerSmurf;                    // The price per smurf

    // Main addresses
    address internal    __walletWithdraw;                   // The address used to withdraw all funds

    // New variable
    uint256 public      __currentBatch;                     // Index of the current batch

    struct Statue {
        uint tokenId;
        uint quantity;
    }

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize(uint96 _maxSmurfPerHolder, uint96 _maxSmurfSupply, uint256 _pricePerSmurf, address _royaltyAddress, uint96 _royaltyValue, address _walletWithdraw) initializer public {
        __ERC1155_init("");
        __AccessControl_init();
        __Pausable_init();
        __ERC1155Burnable_init();
        __ERC1155Supply_init();

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(URI_SETTER_ROLE, msg.sender);
        _grantRole(PAUSER_ROLE, msg.sender);
        _grantRole(MINTER_ROLE, msg.sender);

        // Collection configs
        __maxSmurfPerHolder = _maxSmurfPerHolder;
        __maxSmurfSupply = _maxSmurfSupply;
        __pricePerSmurf = _pricePerSmurf;

        // Internal configs
        _setDefaultRoyalty(_royaltyAddress, _royaltyValue);
        __walletWithdraw = _walletWithdraw;
    }

    function balanceOfStatues(address to) view external returns (Statue[] memory) {
        Statue[] memory statueBalances = new Statue[](__currentBatch+1);

        for (uint8 i=0;i<=__currentBatch;i++) {
            statueBalances[i] = Statue(i,balanceOf(to, Constants.SMURF + i));
        }

        return statueBalances;
    }

    function balanceOfStatue(address to) internal view returns (uint) {
        uint statueBalances = 0;

        for (uint8 i=0;i<=__currentBatch;i++) {
            statueBalances = statueBalances + balanceOf(to, Constants.SMURF + i);
        }

        return statueBalances;
    }

    function hasSmurf(address to) view external returns (bool) {
        bool playerHasSmurf=false;

        for (uint8 i=0;i<=__currentBatch;i++) {
            playerHasSmurf = playerHasSmurf || balanceOf(to, Constants.SMURF + i) > 0;
        }

        return playerHasSmurf;
    }

    function requireSmurf(address to) view external {
        require(this.hasSmurf(to), "Smurf: you need a statuette to be able to test a recipe");
    }

    function mintSmurf(uint quantity) external payable whenNotPaused {
        require(quantity>0, "Smurf: quantity must be greater than 0");
        require((balanceOfStatue(msg.sender) + quantity) <= __maxSmurfPerHolder, "Smurf: total quantity exceeds limit allowed");
        require(msg.value >= SafeMathUpgradeable.mul(__pricePerSmurf, quantity), "Smurf: insufficient funds for selected quantity");
        require((quantity + totalSupply(Constants.SMURF + __currentBatch)) <= __maxSmurfSupply, "Smurf: selected quantity exceeds remaining supply");

        _mint(msg.sender, Constants.SMURF + __currentBatch, quantity, "");
    }

    function dropSmurf(address _to) external onlyRole(MINTER_ROLE) whenNotPaused {
        require((balanceOfStatue(_to) + 1) <= __maxSmurfPerHolder, "Smurf: total quantity exceeds limit allowed");
        require((totalSupply(Constants.SMURF + __currentBatch) + 1) <= __maxSmurfSupply, "Smurf: selected quantity exceeds remaining supply");

        _mint(_to, Constants.SMURF + __currentBatch, 1, "");
    }

    // Setters
    function _nextBatch() external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        __currentBatch = __currentBatch + 1;
    }

    function _setMaxSmurfPerHolder(uint96 _maxSmurfPerHolder) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        __maxSmurfPerHolder = _maxSmurfPerHolder;
    }

    function _setMaxSmurfSupply(uint96 _maxSmurfSupply) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        __maxSmurfSupply = _maxSmurfSupply;
    }

    function _setPricePerSmurf(uint256 _pricePerSmurf) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        __pricePerSmurf = _pricePerSmurf;
    }

    function setRoyalties(address _royaltyAddress, uint96 _royaltyValue) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        require(_royaltyAddress != address(0), "Smurf: address zero is not a valid wallet royalties");

        _setDefaultRoyalty(_royaltyAddress, _royaltyValue);
    }

    function setContractUri(string memory _contractUri) external onlyRole(URI_SETTER_ROLE) whenNotPaused {
        __contractUri = _contractUri;
    }

    function setURI(string memory newuri) external onlyRole(URI_SETTER_ROLE) whenNotPaused {
        _setURI(newuri);
    }

    function _setWalletWithdraw(address _walletWithdraw) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        require(_walletWithdraw != address(0), "Smurf: address zero is not a valid wallet withdraw");

        __walletWithdraw = _walletWithdraw;
    }

    // Getters
    function uri(uint256 id) override public view returns (string memory) {
        string memory tokenUri = super.uri(id);
        return string(abi.encodePacked(tokenUri, StringsUpgradeable.toString(id)));
    }

    function contractURI() external view returns (string memory) {
        return __contractUri;
    }

    // Internals
    function pause() external onlyRole(PAUSER_ROLE) {
        _pause();
    }

    function unpause() external onlyRole(PAUSER_ROLE) {
        _unpause();
    }

    function _beforeTokenTransfer(address operator, address from, address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data)
    internal
    whenNotPaused
    override(ERC1155Upgradeable, ERC1155SupplyUpgradeable)
    {
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
    }

    function supportsInterface(bytes4 interfaceId)
    public
    view
    override(ERC1155Upgradeable, AccessControlUpgradeable, ERC2981Upgradeable)
    returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }

    function withdraw() external payable onlyRole(DEFAULT_ADMIN_ROLE) returns (bool success) {
        (success,) = payable(__walletWithdraw).call{value: address(this).balance}("");
    }
}

