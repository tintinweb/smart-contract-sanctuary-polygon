    string public                       __contractUri;                      // The contract URI json link
    uint96 public                       __maxTicketPerHolder;               // Maximum number of smurfs per holder
    uint96 public                       __maxTicketSupply;                  // Maximum number of smurfs tokens
    string public 	                    __tokenUriBase;                     // Domain & api root

    // Internal mapping
    mapping(address => uint[]) public 	__mintedTokens;                     // User minted tokens
    mapping(uint => uint) public 	    __givenTickets;                     // Recipe minted tokens
    mapping(uint => uint) public	    __recipeIdToIndex;                  // Mapping to retrieve the discovered rank of the recipe
    mapping(uint => uint) public        __indexToRecipe;                    // Mapping to retrieve the recipe from index

    mapping(uint => address[]) public 	__recipeCrafters; 					// Addresses that minted the recipe in the 72h following its discovery
    mapping(uint => uint) public 		__discoveryTime;
    mapping(uint => mapping(address => bool)) public __hasCrafted;
    mapping(uint => uint) public        __recipeIdToRequestId;
    mapping(uint => bool) public        __recipeWinnersAssigned;
    mapping(uint => mapping(address => bool)) __isWinnerOfRecipe;

    SmurfRaffle private                 __smurfRaffle;

	bool public 						__rewardSwitch;

    // Events
    event Mint_Ticket_Success(address indexed _from, uint _recipeId);

    struct Ticket {
        uint recipeId;
        uint rank;
        uint tokenId;
    }

    event Burn_Ticket_Success(address indexed _owner, uint _token);
    event Mint_Ticket_Successes(address indexed _owner, uint _token, uint quantity);

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize(uint96 _maxTicketPerHolder, uint96 _maxTicketSupply, address _royaltyAddress, uint96 _royaltyValue) initializer public {
        __ERC721_init("SmurfTickets", "TSST");
        __ERC721Enumerable_init();
        __Pausable_init();
        __AccessControl_init();
        __ERC721Burnable_init();

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(URI_SETTER_ROLE, msg.sender);
        _grantRole(PAUSER_ROLE, msg.sender);
        _grantRole(MINTER_ROLE, msg.sender);

        // Collection configs
        __maxTicketPerHolder = _maxTicketPerHolder;
        __maxTicketSupply = _maxTicketSupply;

        // Internal configs
        _setDefaultRoyalty(_royaltyAddress, _royaltyValue);
    }

    function dropBatch(address _to, uint _recipeId) external onlyRole(MINTER_ROLE) whenNotPaused {
        uint _remainingTickets = __maxTicketSupply - __givenTickets[_recipeId];

        require(_remainingTickets > 0, "Smurf: no tickets remaining for this recipe");
        require(_remainingTickets<__maxTicketSupply, "Smurf: no tickets were dropped for this recipe");

        for (uint i=0; i<_remainingTickets; i++) {
            uint ticketId = __recipeIdToIndex[_recipeId]*__maxTicketSupply + __givenTickets[_recipeId];

            __givenTickets[_recipeId] += 1;

            _safeMint(_to, ticketId);
        }

        emit Mint_Ticket_Successes(_to, _recipeId, _remainingTickets);
    }

    function dropTicket(address _to, uint _recipeId, bool _isRecipeNew, uint _index) external onlyRole(MINTER_ROLE) whenNotPaused {
        if (_isRecipeNew) {
            __recipeIdToIndex[_recipeId] = _index - 1;
            __indexToRecipe[_index - 1] = _recipeId;
            __discoveryTime[_recipeId] = block.timestamp;
        }

        if (__givenTickets[_recipeId] == 0) {
            if (isAllowed(_recipeId, _to)) {
                mintTicketForUser(_recipeId, _to);
            }
        } else {
            if (!__hasCrafted[_recipeId][_to]) {
                if (block.timestamp - __discoveryTime[_recipeId] < 72 hours) {
                    __recipeCrafters[_recipeId].push(_to);
                    __hasCrafted[_recipeId][_to] = true;
                }
            }
        }
    }

    function burnTickets(address _owner, uint[] memory _tokens, bytes memory _signature, bytes memory _hash) external onlyRole(MINTER_ROLE) whenNotPaused {
        bytes32 prefixedHashMessage = bytesToBytes32(_hash);

        address signer = ECDSAUpgradeable.recover(prefixedHashMessage, _signature);
        require(signer == _owner, "Smurf: The signature address does not match the provided address");

        for (uint i=0; i<_tokens.length;i++) {
            address verifiedOwner = ERC721Upgradeable.ownerOf(_tokens[i]);
            require(verifiedOwner == _owner, "Smurf: caller is not token owner");
        }

        for (uint i=0; i<_tokens.length;i++) {
            burn(_tokens[i]);

            emit Burn_Ticket_Success(_owner, _tokens[i]);
        }
    }

    function burn(
        uint256 tokenId
    ) public virtual override(ERC721BurnableUpgradeable) {
        require(_isApprovedOrOwner(_msgSender(), tokenId) || hasRole(MINTER_ROLE, _msgSender()), "ERC721: caller is not token owner or approved");

        _burn(tokenId);
    }

    function bytesToBytes32(bytes memory source) private pure returns (bytes32 result) {
        if (source.length == 0) {
            return 0x0;
        }
        assembly {
            result := mload(add(source, 32))
        }
    }

    function mintTicketForUser(uint _recipeId, address _to) internal {
        uint ticketId = __recipeIdToIndex[_recipeId]*__maxTicketSupply + __givenTickets[_recipeId];

        __givenTickets[_recipeId] += 1;
        __mintedTokens[_to].push(_recipeId);

        _safeMint(_to, ticketId);

        emit Mint_Ticket_Success(_to, _recipeId);
    }

    function triggerRewardFlowStart(uint _recipeId) external onlyRole(RAFFLE_ROLE) whenNotPaused {
		require(!__recipeWinnersAssigned[_recipeId], "Smurf: Winners already assigned for this recipeId");
		require(!__rewardSwitch, "Smurf: A reward flow is active");
		require(__givenTickets[_recipeId] == 1, "Smurf: No ticket attached or tickets already distributed");
		require(__discoveryTime[_recipeId] != 0, "Smurf: Recipe not discovered");

		__rewardSwitch = true;
        uint256 requestId = __smurfRaffle.requestRandomWords();

        __recipeIdToRequestId[_recipeId] = requestId;
    }

	function checkRequestStatus(uint _recipeId) external view whenNotPaused returns (bool) {
        uint requestId = __recipeIdToRequestId[_recipeId];

        (bool fulfilled, uint256[] memory randomWords) = __smurfRaffle.getRequestStatus(requestId);

		return fulfilled;
	}

    function triggerRewardFlowStop(uint _recipeId) external onlyRole(RAFFLE_ROLE) whenNotPaused {
        require(!__recipeWinnersAssigned[_recipeId], "Smurf: Winners already assigned for this recipeId");
		require(__rewardSwitch, "Smurf: No reward flow is active");
		require(__discoveryTime[_recipeId] != 0, "Smurf: Recipe not discovered");
		require(__givenTickets[_recipeId] > 0, "Smurf: No ticket attached to recipe");

		__rewardSwitch = false;
        uint256 requestId = __recipeIdToRequestId[_recipeId];

        require(requestId != 0, "Smurf: Missing request for recipe id");

        (bool fulfilled, uint256[] memory randomWords) = __smurfRaffle.getRequestStatus(requestId);

        require(fulfilled, "Smurf: Random words request incomplete");
        require(randomWords.length == __maxTicketSupply - 1, "Smurf: Missing words");

        rewardWinners(_recipeId, randomWords);
        
		__recipeWinnersAssigned[_recipeId] = true;
    }

    function rewardWinners(uint _recipeId, uint[] memory _words) internal {

        address[] memory winnersList = getWinnersList(_recipeId, _words);

        for (uint i=0; i < winnersList.length; ++i) {
            if (winnersList[i] != address(0)) mintTicketForUser(_recipeId, winnersList[i]);
        }
    }

    function getWinnersList(uint _recipeId, uint[] memory _words) internal returns (address[] memory) {
        address[] memory _participants = __recipeCrafters[_recipeId];

        uint winnersCount = MathUpgradeable.min(_participants.length, __maxTicketSupply - 1);

        address[] memory winners = new address[](winnersCount);

        for (uint i=0; i<winnersCount; i++) {
            uint word = _words[i];
            uint startingIndex = word % _participants.length;
            bool eligible = false;
            uint k = 0;
            address newWinner;
            while (!eligible && k < _participants.length) {
                uint j = (startingIndex + k)  % _participants.length; // Keeps j in range
                newWinner = _participants[j];
                eligible = isAllowed(_recipeId, newWinner) && !__isWinnerOfRecipe[_recipeId][newWinner];
                k++;
            }
            if (eligible) {
                __isWinnerOfRecipe[_recipeId][newWinner] = true;
                winners[i] = newWinner;
            }
        }

        return winners;
    }

    function isAllowed(uint _recipeId, address _user) internal view returns (bool) {
        bool _hasId = false;

        bool _hasSpace = __mintedTokens[_user].length < __maxTicketPerHolder;

        for (uint i=0; i<__mintedTokens[_user].length;i++) {
            if (__mintedTokens[_user][i] == _recipeId) {
                _hasId = true;
            }
        }

        return _hasSpace && !_hasId;
    }

    // Setters
    function _setMaxTicketPerHolder(uint96 _maxTicketPerHolder) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        __maxTicketPerHolder = _maxTicketPerHolder;
    }

    function setRoyalties(address _royaltyAddress, uint96 _royaltyValue) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        require(_royaltyAddress != address(0), "Smurf: address zero is not a valid wallet royalties");

        _setDefaultRoyalty(_royaltyAddress, _royaltyValue);
    }

    function setTokenUriBase(string memory _tokenUriBase) external onlyRole(URI_SETTER_ROLE) whenNotPaused {
        __tokenUriBase = _tokenUriBase;
    }

    function setContractUri(string memory _contractUri) external onlyRole(URI_SETTER_ROLE) whenNotPaused {
        __contractUri = _contractUri;
    }

    function setSmurfRaffle(address _smurfRaffle) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        require(_smurfRaffle != address(0), "Smurf: Raffle contract address must be different than 0");

        __smurfRaffle = SmurfRaffle(_smurfRaffle);
    }

    function balanceOfTickets(address _to) external view returns (Ticket[] memory) {
        uint arrayLength = balanceOf(_to);

        Ticket[] memory ticketBalances = new Ticket[](arrayLength);

        for (uint i=0; i<arrayLength; i++) {
            uint tokenId = tokenOfOwnerByIndex(_to, i);
            uint recipeId = __indexToRecipe[tokenId/__maxTicketSupply];
            uint tokenPosition = tokenId % __maxTicketSupply;

            ticketBalances[i] = Ticket(recipeId, tokenPosition, tokenId);
        }

        return ticketBalances;
    }

    function exists(uint256[] memory _tokenIds) external view returns (bool) {
        bool allTokensExist = true;

        for (uint i; i < _tokenIds.length; i++) {
            uint tokenId = _tokenIds[i];
            if (!_exists(tokenId)) {
                allTokensExist = false;
                break;
            }
        }

        return allTokensExist;
    }

    // Getters
    function tokenURI(uint256 tokenId)
    public
    view
    override(ERC721Upgradeable)
    returns (string memory)
    {
        uint recipeId = __indexToRecipe[tokenId/__maxTicketSupply];
        uint tokenPosition = tokenId % __maxTicketSupply;
        return string.concat(__tokenUriBase, StringsUpgradeable.toString(recipeId), "/", StringsUpgradeable.toString(tokenPosition));
    }

    function contractURI() external view returns (string memory) {
        return __contractUri;
    }

    // Internals
    function pause() external onlyRole(PAUSER_ROLE) {
        _pause();
    }

    function unpause() external onlyRole(PAUSER_ROLE) {
        _unpause();
    }

    function _beforeTokenTransfer(address from, address to, uint256 tokenId, uint256 batchSize)
    internal
    whenNotPaused
    override(ERC721Upgradeable, ERC721EnumerableUpgradeable)
    {
        super._beforeTokenTransfer(from, to, tokenId, batchSize);
    }

    function supportsInterface(bytes4 interfaceId)
    public
    view
    override(ERC721Upgradeable, ERC721EnumerableUpgradeable, AccessControlUpgradeable, ERC2981Upgradeable)
    returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }
}