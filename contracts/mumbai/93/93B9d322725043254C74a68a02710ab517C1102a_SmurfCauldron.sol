import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/utils/StringsUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/SignatureCheckerUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/EIP712Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";
import {Constants} from "./libraries/Constants.sol";
import "./libraries/ProofVerifier.sol";
import "./SmurfStatue.sol";
import "./SmurfTicket.sol";

contract SmurfCauldron is Initializable, ERC1155Upgradeable, AccessControlUpgradeable, PausableUpgradeable, ERC1155BurnableUpgradeable, ERC1155SupplyUpgradeable, ERC2981Upgradeable, EIP712Upgradeable, ProofCommon {
    using SafeMathUpgradeable for uint256;
    // Roles
    bytes32 constant public URI_SETTER_ROLE         = keccak256("URI_SETTER_ROLE");
    bytes32 constant public PAUSER_ROLE             = keccak256("PAUSER_ROLE");
    bytes32 constant public MINTER_ROLE             = keccak256("MINTER_ROLE");

    // Contract variables
    string public               	__contractUri;                  // The contract URI json link
    address internal             	__walletSignature;              // The address used to sign the Proofs
    uint[] public		            __discoveredRecipes;
    bytes32 private                 __proposalTypeHash;

    // External contracts
    ProofVerifier  internal		    __proofVerifier;
    SmurfStatue  internal       	__smurfStatue;
    SmurfTicket  internal       	__smurfTicket;

    struct Ingredient {
        uint tokenId;
        uint quantity;
    }

    // Events
    event Mint_Recipe_Success(address indexed _from, uint _recipe_id, bytes _signature, uint[] _ingredients);
    event New_Recipe_Discovered(address indexed _from, uint _recipe_id);
    event Mint_Recipe_Failed(address indexed _from, uint[] _ingredients);

    struct Proposal {
        uint deadline;
        uint ingredient_1;
        uint ingredient_2;
        uint ingredient_3;
    }

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize(address _walletSignature, address _proofVerifier, address _smurfStatue, address _smurfTicket, address _royaltyAddress, uint96 _royaltyValue) initializer public {
        __ERC1155_init("");
        __AccessControl_init();
        __Pausable_init();
        __ERC1155Burnable_init();
        __ERC1155Supply_init();
        __EIP712_init("SmurfSociety", "1");

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(URI_SETTER_ROLE, msg.sender);
        _grantRole(PAUSER_ROLE, msg.sender);
        _grantRole(MINTER_ROLE, msg.sender);

        // Internal configs
        _setDefaultRoyalty(_royaltyAddress, _royaltyValue);
        __walletSignature = _walletSignature;
        __proofVerifier = ProofVerifier(_proofVerifier);
        __smurfStatue = SmurfStatue(_smurfStatue);
        __smurfTicket = SmurfTicket(_smurfTicket);
        __proposalTypeHash = keccak256(
                "Proposal(uint deadline,uint ingredient_1,uint ingredient_2,uint ingredient_3)"
            );
    }

    function hasIngredients(address to, uint[] memory _ingredients) view internal {
        require(balanceOf(to, Constants.INDEX_INGREDIENT_START) > 0, "Smurf: you need blue clay to be able to test a recipe");

        for(uint256 i=0; i < _ingredients.length; i++){
            require(balanceOf(to,_ingredients[i]) > 0, "Smurf: you are missing an ingredient to test the recipe");
        }
    }

    function checkIfRecipeExists(uint _recipeId) public view returns (bool) {
        return !checkIfRecipeIsNew(_recipeId);
    }

    function checkIfRecipeIsNew(uint _recipeId) internal view returns (bool) {
        bool recipeIsNew = true;

        for (uint i = 0; i<__discoveredRecipes.length;i++) {
            if (_recipeId == __discoveredRecipes[i]) {
                recipeIsNew = false;
            }
        }

        return recipeIsNew;
    }

    function mintRecipe(Proof memory _proof, uint[1] memory _input, uint[] memory _ingredients, bytes memory _signatureProof, bytes memory _signatureProposal) external whenNotPaused {
        bool isRecipeNew = false;

        require(_ingredients.length == 3, "Smurf: Missing ingredients");

        // Ingredients
        hasIngredients(msg.sender, _ingredients);
        __smurfStatue.requireSmurf(msg.sender);

        // Signature & Proof
        bool signatureProofCheck = checkSignatureProof(__walletSignature, msg.sender, _proof, _signatureProof);
        bool signatureProposalCheck = checkSignatureProposal(__walletSignature, msg.sender, _ingredients, _signatureProposal);
        bool proofCheck = __proofVerifier.verifyTx(_proof, _input);

        if (proofCheck && signatureProposalCheck) {
            if (checkIfRecipeIsNew(_input[0])) {
                isRecipeNew = true;
                __discoveredRecipes.push(_input[0]);

                emit New_Recipe_Discovered(msg.sender, _input[0]);
            }	

            burnBatch(msg.sender, getTokensToBurnForRecipe(_ingredients), getQuantitiesToBurnForRecipe(_ingredients));

            _mint(msg.sender, _input[0], 1, "");

            if (signatureProofCheck) __smurfTicket.dropTicket(msg.sender, _input[0],isRecipeNew, __discoveredRecipes.length);

            emit Mint_Recipe_Success(msg.sender, _input[0], _signatureProof, _ingredients);
        } else {
            burn(msg.sender, Constants.INDEX_INGREDIENT_START, 1);

            emit Mint_Recipe_Failed(msg.sender, _ingredients);
        }
    }

    function burn(
        address account,
        uint256 id,
        uint256 value
    ) public virtual override(ERC1155BurnableUpgradeable) {
        if (id == 0) {
            require(
                account == _msgSender() || hasRole(MINTER_ROLE, _msgSender()) || isApprovedForAll(account, _msgSender()),
                "ERC1155: caller is not token owner or approved"
            );
        } else {
            require(
                account == _msgSender() || isApprovedForAll(account, _msgSender()),
                "ERC1155: caller is not token owner or approved"
            );
        }

        _burn(account, id, value);
    }

    function burnClay(address _from, Proposal memory _proposal, bytes memory _signature) external onlyRole(MINTER_ROLE) whenNotPaused {
        uint[] memory ingredients = new uint[](3);

        require(block.timestamp <= _proposal.deadline, "Smurf: expired deadline");

        bytes32 structHash = keccak256(
            abi.encode(
                __proposalTypeHash,
                _proposal.deadline,
                _proposal.ingredient_1,
                _proposal.ingredient_2,
                _proposal.ingredient_3
            )
        );

        bytes32 hash = _hashTypedDataV4(structHash);

        address recoveredAddress = ECDSAUpgradeable.recover(hash, _signature);

        require(recoveredAddress == _from, "Smurf: The signature address does not match the provided address");

        burn(_from, Constants.INDEX_INGREDIENT_START, 1);

        ingredients[0] = _proposal.ingredient_1;
        ingredients[1] = _proposal.ingredient_2;
        ingredients[2] = _proposal.ingredient_3;

        emit Mint_Recipe_Failed(msg.sender, ingredients);
    }

    function dropIngredient(address _to, uint96 _ingredient, uint8 quantity) external onlyRole(MINTER_ROLE) whenNotPaused {
        require(_ingredient >= Constants.INDEX_INGREDIENT_START && _ingredient <= Constants.INDEX_INGREDIENT_STOP, "Smurf: ingredient ID must fall within the accepted bounds");

        _mint(_to, _ingredient, quantity, "");
    }

    function dropBox(address _to, uint[] memory _ingredients, uint[] memory _quantities) external onlyRole(MINTER_ROLE) whenNotPaused {
        require(_ingredients.length == _quantities.length, "Smurf: ids and amounts length mismatch");

        for(uint256 i=0; i < _ingredients.length; i++){
            require(_ingredients[i] >= Constants.INDEX_INGREDIENT_START && _ingredients[i] <= Constants.INDEX_INGREDIENT_STOP, "Smurf: ingredient ID must fall within the accepted bounds");
        }

        _mintBatch(_to, _ingredients, _quantities, "");
    }

    function balanceOfIngredients(address wallet) external view returns (Ingredient[] memory) {
        Ingredient[] memory ingredientBalances = new Ingredient[](Constants.INDEX_INGREDIENT_STOP+1);

        for(uint256 i=Constants.INDEX_INGREDIENT_START; i <= Constants.INDEX_INGREDIENT_STOP; i++){
            ingredientBalances[i] = Ingredient(i,balanceOf(wallet, i));
        }

        return ingredientBalances;
    }

    function balanceOfRecipes(address wallet) external view returns (Ingredient[] memory) {
    	Ingredient[] memory recipeBalances = new Ingredient[](__discoveredRecipes.length);

        for (uint i=0; i<__discoveredRecipes.length;i++) {
            recipeBalances[i] = Ingredient(__discoveredRecipes[i],balanceOf(wallet,__discoveredRecipes[i]));
        }

        return recipeBalances;
    }

    function getTokensToBurnForRecipe(uint[] memory _ingredients) internal pure returns(uint[] memory) {
        uint[] memory tokensToBurn = new uint[](_ingredients.length + 1);

        tokensToBurn[0]=Constants.INDEX_INGREDIENT_START;

        for(uint256 ingredient=0; ingredient < _ingredients.length; ingredient++){
            tokensToBurn[1+ingredient] = _ingredients[ingredient];
        }

        return tokensToBurn;
    }

    function getQuantitiesToBurnForRecipe(uint[] memory _ingredients) internal pure returns(uint[] memory) {
        uint[] memory quantitiesToBurn = new uint[](_ingredients.length + 1);

        quantitiesToBurn[0]=1;

        for(uint256 ingredient=0; ingredient < _ingredients.length; ingredient++){
            quantitiesToBurn[1+ingredient] = 1;
        }

        return quantitiesToBurn;
    }

    function checkSignatureProof( address _walletSignature, address _sender, Proof memory _proof, bytes memory _signature) internal view returns (bool) {
        bytes32 hash = keccak256(abi.encodePacked(_sender, _proof.a.X, _proof.a.Y, _proof.b.X, _proof.b.Y, _proof.c.X, _proof.c.Y));

        return SignatureCheckerUpgradeable.isValidSignatureNow(_walletSignature, hash, _signature);
    }

    function checkSignatureProposal( address _walletSignature, address _sender, uint[] memory _ingredients, bytes memory _signature) internal view returns (bool) {
        bytes32 hash = keccak256(
            abi.encode(
                _sender,
                _ingredients[0],
                _ingredients[1],
                _ingredients[2]
            )
        );

        return SignatureCheckerUpgradeable.isValidSignatureNow(_walletSignature, hash, _signature);
    }

    function _setWalletSignature(address _walletSignature) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        require(_walletSignature != address(0), "Smurf: address zero is not a valid wallet signature");

        __walletSignature = _walletSignature;
    }

    function _setProofVerifier(address _proofVerifier) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        require(_proofVerifier != address(0), "Smurf: address zero is not a proof verifier contract");

        __proofVerifier = ProofVerifier(_proofVerifier);
    }

    function _setSmurfStatue(address _smurfStatue) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        require(_smurfStatue != address(0), "Smurf: address zero is not a valid wallet signature");

        __smurfStatue = SmurfStatue(_smurfStatue);
    }

    function _setSmurfTicket(address _smurfTicket) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        require(_smurfTicket != address(0), "Smurf: address zero is not a valid smurf ticket");

        __smurfTicket = SmurfTicket(_smurfTicket);
    }

    function setRoyalties(address _royaltyAddress, uint96 _royaltyValue) external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        require(_royaltyAddress != address(0), "Smurf: address zero is not a valid wallet royalties");

        _setDefaultRoyalty(_royaltyAddress, _royaltyValue);
    }

    function setURI(string memory newuri) external onlyRole(URI_SETTER_ROLE) whenNotPaused {
        _setURI(newuri);
    }

    function setContractUri(string memory _contractUri) external onlyRole(URI_SETTER_ROLE) whenNotPaused {
        __contractUri = _contractUri;
    }

    // Getters
    function uri(uint256 id) override public view returns (string memory) {
        string memory tokenUri = super.uri(id);

        return string(abi.encodePacked(tokenUri, StringsUpgradeable.toString(id)));
    }

    function contractURI() external view returns (string memory) {
        return __contractUri;
    }

    // Internals
    function pause() external onlyRole(PAUSER_ROLE) {
        _pause();
    }

    function unpause() external onlyRole(PAUSER_ROLE) {
        _unpause();
    }

    function _beforeTokenTransfer(address operator, address from, address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data)
    internal
    whenNotPaused
    override(ERC1155Upgradeable, ERC1155SupplyUpgradeable)
    {
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
    }

    function supportsInterface(bytes4 interfaceId)
    public
    view
    override(ERC1155Upgradeable, AccessControlUpgradeable, ERC2981Upgradeable)
    returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }
}

