import "@chainlink/contracts/src/v0.8/interfaces/VRFCoordinatorV2Interface.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBaseV2.sol";
import "@chainlink/contracts/src/v0.8/ConfirmedOwner.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";

contract SmurfRaffle is VRFConsumerBaseV2, ConfirmedOwner, AccessControlUpgradeable {
    bytes32 constant public RANDOMIZER_ROLE             = keccak256("RANDOMIZER_ROLE");

    struct RequestStatus {
        bool fulfilled; // whether the request has been successfully fulfilled
        bool exists; // whether a requestId exists
        uint256[] randomWords;
    }

    bytes32 public __keyHash;
    uint32 public __callbackGasLimit;
    uint16 public __requestConfirmations;
    uint32 public __numWords;
    uint64 public __subscriptionId;

    mapping(uint256 => RequestStatus) public __requests; /* requestId --> requestStatus */

    VRFCoordinatorV2Interface private __chainlinkCoordinator;

    constructor(
        bytes32 _keyHash,
        uint32 _callbackGasLimit,
        uint16 _requestConfirmations,
        uint64 _subscriptionId,
        uint32 _numWords,
        address _chainLinkAddress
    )
    VRFConsumerBaseV2(_chainLinkAddress)
    ConfirmedOwner(msg.sender)
    {
        __keyHash = _keyHash;
        __callbackGasLimit = _callbackGasLimit;
        __requestConfirmations = _requestConfirmations;
        __subscriptionId = _subscriptionId;
        __numWords = _numWords;

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(RANDOMIZER_ROLE, msg.sender);

        __chainlinkCoordinator = VRFCoordinatorV2Interface(_chainLinkAddress);

        __subscriptionId = _subscriptionId;
    }

    // Assumes the subscription is funded sufficiently.
    function requestRandomWords() external onlyRole(RANDOMIZER_ROLE) returns (uint256 requestId) {
        requestId = __chainlinkCoordinator.requestRandomWords(
            __keyHash,
            __subscriptionId,
            __requestConfirmations,
            __callbackGasLimit,
            __numWords
        );

        __requests[requestId] = RequestStatus({randomWords: new uint256[](0), exists: true, fulfilled: false});

        return requestId;
    }

    function fulfillRandomWords(uint256 _requestId, uint256[] memory _randomWords) internal override {
        require(__requests[_requestId].exists, "Smurf: Request not found");

        __requests[_requestId].fulfilled = true;
        __requests[_requestId].randomWords = _randomWords;
    }

    function getRequestStatus(uint256 _requestId) external onlyRole(RANDOMIZER_ROLE) view returns (bool fulfilled, uint256[] memory randomWords) {
        RequestStatus memory request = __requests[_requestId];

        require(request.exists, "Smurf: Request not found");

        return (request.fulfilled, request.randomWords);
    }
}

