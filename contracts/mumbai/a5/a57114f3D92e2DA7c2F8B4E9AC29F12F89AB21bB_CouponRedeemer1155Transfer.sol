    if (mintWindowEnd < mintWindowStart) {
      revert InvalidMintWindow();
    }

    _tokenDetails[tokenId] = TokenDetails(mintWindowStart, mintWindowEnd);

    emit MintWindowSet(tokenId, mintWindowStart, mintWindowEnd);
