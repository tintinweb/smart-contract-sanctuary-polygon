  // Mapping to only allow a merkle proof array to be used once.
  // Store the keccak256 hash of the coupon to keep the coupon secret
  mapping(bytes32 => bool) public _redeemed;

  error AlreadyRedeemed();
  error MintWindowNotStarted();
  error MintWindowEnded();
  error OnlyEOA();
  error InvalidMintWindow();
  error InvalidSignature();
  error InsufficientBalance(uint256 tokenId);

  event MintWindowSet(uint256 tokenId, uint256 mintWindowStart, uint256 mintWindowEnd);
  event Redeemed(address indexed account, bytes32 indexed couponHash, uint256 indexed mintedId);
  event SystemAddressSet(address systemAddress);
  event TokenContractAddressSet(address tokenContract);

  constructor(
    address tokenContract,
    address systemAddress,
    address trustedForwarder
  ) ERC2771Context(trustedForwarder) {
    _tokenContract = ICoolERC1155(tokenContract);

    setSystemAddress(systemAddress);

    _pause();
  }

  /// @notice Modifier to check if the mint window is open for a given token id, otherwise revert
  modifier withinMintWindow(uint256 tokenId) {
    if (block.timestamp < _tokenDetails[tokenId]._mintWindowStart) {
      revert MintWindowNotStarted();
    }

    if (block.timestamp > _tokenDetails[tokenId]._mintWindowEnd) {
      revert MintWindowEnded();
    }

    _;
  }

  /// @notice Use a coupon to mint a token
  /// @param couponHash The hash of the coupon
  /// @param signature The signature of the coupon with the sender address
  function redeem(
    uint256 tokenId,
    bytes32 couponHash,
    bytes calldata signature
  ) external payable whenNotPaused withinMintWindow(tokenId) {
    address redeemer = _msgSender();

    if (!isTrustedForwarder(msg.sender) && redeemer != tx.origin) revert OnlyEOA();

    if (
      !_isValidSignature(
        keccak256(abi.encodePacked(redeemer, couponHash, tokenId, address(this))),
        signature
      )
    ) revert InvalidSignature();

    _checkRedemption(couponHash);
    _handleTransfer(tokenId);

    emit Redeemed(redeemer, couponHash, tokenId);
  }

