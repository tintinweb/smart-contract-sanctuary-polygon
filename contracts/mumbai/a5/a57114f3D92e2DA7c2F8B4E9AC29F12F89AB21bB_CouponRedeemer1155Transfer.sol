/// @title CouponRedeemer1155Transfer
/// @author Adam Goodman
/// @notice This contract allows for transferring pre-minted 1155 tokens with backend signature verification
contract CouponRedeemer1155Transfer is ERC2771Context, ERC1155Holder, Ownable, Pausable {
  using ECDSA for bytes32;

  ICoolERC1155 public _tokenContract;

  /// @dev address for message signature verification
  address public _systemAddress;

  struct TokenDetails {
    uint256 _mintWindowStart;
    uint256 _mintWindowEnd;
  }

  // Mapping of token ID to mint window
