pragma solidity ^0.8.4;




interface IERC20Burnable is IERC20 {
    function burn(uint256 amount) external;
}

contract VendingMachine is ReentrancyGuard {
    using SafeMath for uint256;

    IERC20Burnable public token;
    address payable public owner;
    uint256 public loadTimestamp;

    uint256 private constant rate1 = 1 * (10**18);  // 0.01 Matic per BOOM
    uint256 private constant rate2 = 2 * (10**18);  // Adjust these rates as necessary
    uint256 private constant rate3 = 4 * (10**18);  // Adjust these rates as necessary

    uint256 public totalTokensForSale;
    uint256 public salesStage = 1;

    bool public loaded = false; 

    constructor(IERC20Burnable _token) {
        token = _token;
        owner = payable(msg.sender);
    }

    function approveAndLoad(uint256 amount) external {
        require(msg.sender == owner, "Only the owner can approve and load");
        token.approve(address(this), amount);

        uint256 tokensForSale = amount.mul(13).div(100);
        totalTokensForSale = tokensForSale;
        token.transferFrom(msg.sender, address(this), tokensForSale);
        loadTimestamp = block.timestamp;
        loaded = true;
    }

    function buyTokens() external nonReentrant payable {
        uint256 currentRate;
        if (salesStage == 1) {
            currentRate = rate1;
        } else if (salesStage == 2) {
            currentRate = rate2;
        } else {
            currentRate = rate3;
        }

        uint256 matics = msg.value.div(1e16); // Convert wei to 1e16 Mwei units
        uint256 tokens = matics.mul(currentRate);  // Calculate the amount of BOOM
        require(token.balanceOf(address(this)) >= tokens, "Not enough tokens in reserve");

        // Update the sales stage based on the amount of tokens sold
        uint256 remainingTokens = totalTokensForSale.sub(tokens);
        if (remainingTokens <= totalTokensForSale.mul(2).div(3)) {
            salesStage = 2;
        }
        if (remainingTokens <= totalTokensForSale.div(3)) {
            salesStage = 3;
        }

        token.transfer(msg.sender, tokens);
        owner.transfer(msg.value);
    }

    function burnTokens() external {
        require(msg.sender == owner, "Only the owner can burn tokens");
        require(loaded, "Contract is not loaded yet");
        require(block.timestamp >= loadTimestamp + 7 days, "7 days have not passed since loading");

        uint256 tokensToBurn = token.balanceOf(address(this));
        token.burn(tokensToBurn);

        loaded = false;
    }

    function write() external {
        require(msg.sender == owner, "Only the owner can write");

        uint256 tokensToBurn = token.balanceOf(address(this)).mul(1).div(100);
        token.burn(tokensToBurn);
    }

    receive() external payable {
        revert("Cannot receive BNB directly");
    }
}