    /**
     @notice Cancel a listed item in marketplace
     @param assetContract  NFT adrress of the contract(ERC 721 / ERC 1155)
     @param tokenId Id of the NFT Item
     */
    function withdrawSale(
        address assetContract,
        uint256 tokenId
    ) external nonReentrant onlyRoleTokenOwner(assetContract, tokenId) {
        // Only if item listed in marketplce
        DirectListing storage listedItem = _directListings[assetContract][
            tokenId
        ];
        require(listedItem.quantity > 0, "item not listed");
        delete (_directListings[assetContract][tokenId]);
        _onSale--;
        isOnSell[assetContract][tokenId] = false;
        emit ItemCanceledonSale(msg.sender, assetContract, tokenId);
    }

    /**
     @notice Method for updating price of a listed NFT
     @param assetContract  NFT adrress of the contract(ERC 721 / ERC 1155)
     @param tokenId Id of the NFT Item
     @param payToken Payment token
     @param newPrice New sale price for each item
     */
    function updateBuyNowPriceOfSale(
        address assetContract,
        uint256 tokenId,
        address payToken,
        uint256 newPrice
    )
        external
        nonReentrant
        onlyRoleTokenOwner(assetContract, tokenId)
        onlyEnabledToken(payToken)
    {
        DirectListing storage listedItem = _directListings[assetContract][
            tokenId
        ];

        //Only if listed in marketplace and new price is valid
        require(listedItem.quantity > 0, "listed not listed");
        require(newPrice > 0, "New price cannot be zero");

        listedItem.payToken = payToken;
        listedItem.buyNowPricePerItem = newPrice;
        emit ItemUpdatedForSale(
            msg.sender,
            assetContract,
            tokenId,
            payToken,
            newPrice
        );
    }

    /**
     @notice for updating platform fee/commission fee
     @dev Only admin (Auction contract owner)
     @param platformFeePercent uint256 the platform fee to set
     */
    function updatePlatformFeePercent(
        uint256 platformFeePercent
    ) external onlyOwner {
        _platformFeePercent = platformFeePercent;
        emit PlatformFeePercentUpdated(platformFeePercent);
    }

    /**
     @notice Method for updating platform fee address
     @dev Only admin
     @param platformFeeRecipient payable address the address to sends the funds to
     */
    function updatePlatformFeeRecipient(
        address payable platformFeeRecipient
    ) external onlyOwner {
        _platformFeeRecipient = platformFeeRecipient;
        emit PlatformFeeRecipientUpdated(platformFeeRecipient);
    }

