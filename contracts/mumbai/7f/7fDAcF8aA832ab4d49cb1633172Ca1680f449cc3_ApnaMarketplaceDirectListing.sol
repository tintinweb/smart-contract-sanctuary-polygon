    /// @notice Contract initializer
    /// @dev comment initializer and uncomment constructor if non-upgradeable DirectListing contract

    function init(
        address payable platformFeeRecipient,
        uint256 platformFeePercent
    ) public initializer {
        require(platformFeeRecipient != address(0), "Zero address");
        require(platformFeePercent >= 0, "platform fee less than 0");

        _platformFeeRecipient = platformFeeRecipient;
        _platformFeePercent = platformFeePercent;

        emit ApnaDirectListMarketplaceContractDeployed(
            platformFeeRecipient,
            platformFeePercent
        );

        __Ownable_init();
        __ReentrancyGuard_init();
    }

    /**
     @notice Lists a item for sale in marketplace
     @param assetContract  The contract address of the NFTs(ERC 721/ERC 1155) being listed for sale.
     @param tokenId  The token ID on the 'assetContract' of the NFTs to list for sale.
     @param quantity The amount of NFTs of the given 'assetContract' and 'tokenId' to list for sale. For ERC721 NFTs, this is always 1. (needed for ERC-1155 NFTs, set as 1 for ERC-721)  
     @dev support ERC1155 later
     @param payToken 0x0 if native coin, otherwise if token then it is address of ERC20/BEP20 token contract 
     @param buyNowPricePerItem Buy Now price of each item.The price per unit of NFT listed for sale.
     @param startTimestamp scheduled time for a future sale.The unix timestamp after which NFTs can be bought from the listing.
     @param endTimestamp time(unix timestamp) after which listing cannot be bought. 
     @dev todo: endtime -check it is greater than starttime
    */
    function createSale(
        address assetContract,
        uint256 tokenId,
        uint256 quantity,
        address payToken,
        uint256 buyNowPricePerItem,
        uint256 startTimestamp,
        uint256 endTimestamp
    ) external {
        /// @dev Stack too deep issue- so changed from modifier to internal function call
        _onlyNFT(assetContract, tokenId, quantity);

        // Only tokenowner allowed to call
        /// @dev Stack too deep issue- so changed from modifier to internal function call
        _onlyRoleTokenOwner(assetContract, tokenId);

        // Only if NFT tokens are preapproved by owner to allow the marketplace to transfer
        /// @dev Stack too deep issue- so changed from modifier to internal function call
        _onlyApproved(assetContract);

        // Only if item not alreeady listed in direct list marketplace for sale
        DirectListing storage listing = _directListings[assetContract][tokenId];
        require(listing.quantity == 0, "already already listed for sale");

        // Only if item not listed in auction market

        require(
            !IAuction(_addressRegistry.auction()).inAuction(
                assetContract,
                tokenId
            ),
            "item already listed in auction"
        );

        // Only if the paying Token belongs to tokens whitelisted
        require(
            payToken == address(0) ||
                (_addressRegistry.tokenRegistry() != address(0) &&
                    ITokenRegistry(_addressRegistry.tokenRegistry()).mapped(
                        payToken
                    )),
            "pay token invalid or not enabled"
        );

        require(
            (
                ITokenRegistry(_addressRegistry.tokenRegistry()).isWhiteListed(
                    assetContract
                )
            ),
            "NFT contract invalid or not enabled"
        );

        // Only if sale price > 0
        require(buyNowPricePerItem > 0, "price cannot be zero");

        //Only if start time is valid, ie in future
        require(startTimestamp > block.timestamp, "invalid start time");
        require(
            endTimestamp >= startTimestamp + 300,
            "ending time must be greater than start (by margin(default=5) minutes)"
        );

        _directListings[assetContract][tokenId] = DirectListing(
            msg.sender,
            quantity,
            payToken,
            buyNowPricePerItem,
            startTimestamp,
            endTimestamp
        );
        _onSale++;
        isOnSell[assetContract][tokenId] = true;
        emit ItemDirectListedForSale(
            msg.sender,
            assetContract,
            tokenId,
            quantity,
            payToken,
            buyNowPricePerItem,
            startTimestamp,
            endTimestamp
        );
    }

    // /**
    //  @notice Buy a listed item in marketplace at BuyNow Price
    //  @param assetContract  NFT adrress of the contract(ERC 721 / ERC 1155)
    //  @param tokenId Id of the NFT Item
    //  @param payToken 0x0 if native coin otherwise if token then it is address of ERC20/BEP20 token contract
    //  @param quantity Now Keep 0. The quantity of NFTs being bought from the listing. For ERC721 NFTs, this is always 1.
    //  @param amount Buy Now price: The total price to pay for the NFTs being bought
    //  @param owner address of the owner of the NFT item
    //  @param buyFor The recipient of the NFTs being bought.
    // */
    function buyNow(
        address assetContract,
        uint256 tokenId,
        address payToken,
        uint256 amount,
        address owner
    )
        external
        payable
        nonReentrant
        onlyRoleNotContracts
        onlyRoleNotSeller(assetContract, tokenId)
    {
        DirectListing storage listedItem = _directListings[assetContract][
            tokenId
        ];
        require(listedItem.quantity > 0, "item is not listed");

        _onlyNFT(assetContract, tokenId, listedItem.quantity);

        //Can buy only after scheduled time begins
        require(block.timestamp >= listedItem.startingTime, "Item not buyable");

        // check coin or payToken used to buy
        require(
            listedItem.payToken == payToken,
            "payToken used to buy different from token set in listing"
        );
        require(
            (payToken == address(0) && msg.value == amount) ||
                (payToken != address(0) && msg.value == 0),
            "mismatch in payment mode usage in bidding"
        );

        uint256 price = listedItem.buyNowPricePerItem.mul(listedItem.quantity);
        require(amount == price, "Price not met for instant sale");

        _exchange(assetContract, tokenId, owner, msg.sender, price, payToken);

        // decrease total sale number
        _onSale--;
        _sold++;
        isOnSell[assetContract][tokenId] = false;

        emit ItemSoldonSale(
            owner,
            msg.sender,
            assetContract,
            tokenId,
            listedItem.quantity,
            payToken,
            price.div(listedItem.quantity)
        );

        delete _directListings[assetContract][tokenId];
    }

