    event PlatformFeePercentUpdated(uint256 platformFeePercent);
    event PlatformFeeRecipientUpdated(address payable platformFeeRecipient);

    /// @notice details in Direct Listing
    // Can be bought at any moment by providing this price
    // if payToken is 0x0 then buyNowPricePerItem is in native coin else in payToken
    struct DirectListing {
        address seller;
        uint256 quantity;
        address payToken;
        uint256 buyNowPricePerItem;
        uint256 startingTime;
        uint256 endingTime;
    }

    bytes4 private constant INTERFACE_ID_ERC721 = 0x80ac58cd;
    bytes4 private constant INTERFACE_ID_ERC1155 = 0xd9b67a26;

    /// @notice assetContract -> Token ID -> Owner -> Listing item
    mapping(address => mapping(uint256 => DirectListing))
        public _directListings;
    mapping(address => mapping(uint256 => bool)) public isOnSell;

    /// @notice Platform fee and beneficiary
    uint256 public _platformFeePercent;
    address payable public _platformFeeRecipient;

