     */
    function symbol() external view returns (string memory);

    /**
     * @dev Returns the Uniform Resource Identifier (URI) for `tokenId` token.
     */
    function tokenURI(uint256 tokenId) external view returns (string memory);
}

    /**
     * LIPAMarketEventLogger is a marketplace contract designed specifically for LIPA holders
     * to purchase and sell both DIGITAL and NONDIGITAL items. Digital items are required to
     * adhere to ERC721 or ERC1155 standards in order to be transferrable. All other forms of
     * Digital items would be classified as NONDIGITAL for purposes of allowing participants to
     * transact without any issues. 
     */


contract LIPAMarketEventLogger is  
ERC1155, 
ERC1155Burnable, 
ERC1155Supply, 
IERC721Receiver, 
IERC1155Receiver {
    using SafeMath for uint256;
    using Strings for uint256;

    IERC20 public lipa;
    //The "fiat" token here is presumably a stablecoin such as USDC/USDT/DAI, etc. 
    IERC20 public fiat;

    //This is the IPFS hash for the ERC1155 standard membership NFT. Both members and
    //vendors must have one in order to create listings, buy or sell LIPA.
    string baseURI = "";

    //Only approved addresses that pass KYC and are added to a list stored on the backend
    //will be able to mint the corresponding membership (MEMBER or VENDOR) 
    bytes32 private merkleRootMember;
    bytes32 private merkleRootVendor;

    //Discount in %. Can be changed with the set function.
    uint256 public discount = 10;

     uint256 public count = 0;
    //Keeps track of the number of items sold on the marketplace
    uint256 public itemsSold = 0;
    //owner is the contract address that created the smart contract
    address payable owner;
    //The fee charged by the marketplace to be allowed to list an NFT. Can be changed with the set function.
    uint256 public listingFee = 5 * 10**17; //0.5 LIPA 

    //The structure to store info about a listed token
    struct ListedToken {
        bytes32 listId;
        uint256 tokenId;
        address nft;
        address seller;
        uint256 currentPrice;
        uint256 quantity;
        PROD_TYPE nftType;
        bool currentlyListed;
    }

    //Classes of products that can be listed on the marketplace.
    enum PROD_TYPE {
        NONDIGITAL,
        ERC721,
        ERC1155
    }

    mapping(uint256 => ListedToken) private idToListedToken;
    mapping(bytes32 => ListedToken) public listIds;
    bytes32[] public activeList;

    

    uint256 private constant MEMBER = 1;
    uint256 private constant VENDOR = 2;


    
    

    event BuyLipa(address indexed buyer, uint256 amountSent, uint256 amountReceived, uint256 timeAt);
    event Sale(address indexed buyer, address indexed seller, uint256  amountSent, uint256 indexed timeAt);
    event Refund(address indexed seller, address indexed buyer, uint256 amountSent, uint256 indexed timeAt);
    event LipaSent(address indexed seller, address indexed recipient, uint256 indexed amount, uint256 timeAt);
    event SellLipa(address indexed seller, uint256 indexed amountSent, uint256 indexed amountReceived, uint256 timeAt);
    event NFTPurchase(address indexed buyer, address indexed seller, uint256 amountSent, uint256 indexed timeAt);
    event TokenListedSuccess (bytes32 indexed digitalId, address indexed seller, uint256 price);



    
    constructor(address _lipa, address _fiat, string memory _uri) ERC1155(""){
        baseURI = _uri;
        lipa = IERC20(_lipa);
        fiat = IERC20(_fiat);
        owner = payable(msg.sender);
        

    } 


    receive() external payable {}



     /*///////////////////////////////////////////////////////////////
                        ERC 165 / 721 / 1155 logic
    //////////////////////////////////////////////////////////////*/

    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes memory
    ) public virtual override returns (bytes4) {
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address,
        address,
        uint256[] memory,
        uint256[] memory,
        bytes memory
    ) public virtual override returns (bytes4) {
        return this.onERC1155BatchReceived.selector;
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) external pure override returns (bytes4) {
        return this.onERC721Received.selector;
    }

    function supportsInterface(
        bytes4 interfaceId
    )
        public
        view
        virtual
        override (ERC1155, IERC165)
        returns (bool)
    {
        return
            interfaceId == type(IERC1155Receiver).interfaceId ||
            interfaceId == type(IERC721Receiver).interfaceId ||
            interfaceId == type(IERC1155).interfaceId ||
            interfaceId == type(IERC1155MetadataURI).interfaceId ||
            super.supportsInterface(interfaceId);
    }


    function setURI(string memory newuri) public {
        require (msg.sender == owner, "Not authorized");
        baseURI = newuri;
    }

     function uri(uint256 tokenId) public view override returns (string memory) {
        return (
            string(
                abi.encodePacked(baseURI, Strings.toString(tokenId), ".json")
            )
        );
    }


    // The following functions are overrides required by Solidity.

    function _beforeTokenTransfer(address operator, address from, address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data)
        internal
        override(ERC1155, ERC1155Supply)
    {
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
    }



     function getOwner() external view returns (address) {
        return owner;
    }

    function getTotalListed() public view returns (uint256) {
        return count - itemsSold;
    }

    function getMerkleRoots() private view returns (bytes32, bytes32) {
        return (merkleRootMember, merkleRootVendor);
    }


    function getActiveListIds() public view returns (bytes32[] memory) {
        uint256 nftCount = getTotalListed();
        bytes32[] memory tokens = new bytes32[](nftCount);
        uint256 currentIndex = 0;

        for(uint8 i = 0; i < activeList.length; i++) {
            if(activeList[i] != 0){
                tokens[currentIndex] = activeList[i];
                currentIndex++;
            }
        }
        return tokens;
    }
    
    

    function getTrueTokenID(bytes32 digitalId) public view returns (uint256){
        return listIds[digitalId].tokenId;
    }

    function getContract(bytes32 digitalId) public view returns (address){
        return listIds[digitalId].nft;
    }

    function getERC1155Quantity(bytes32 digitalId) public view returns (uint256){
        return listIds[digitalId].quantity;
    }

    function isCurrentlyListed(bytes32 digitalId) public view returns (bool){
        return listIds[digitalId].currentlyListed;
    }

    function createMemberPass(bytes32[] calldata merkleproof) external {
        require(
            isValidMember(merkleproof, keccak256(abi.encodePacked(msg.sender))), "Not approved. Contact support."
        );

        _mint(msg.sender, MEMBER, 1, "");


    }

    function createVendorPass(bytes32[] calldata merkleproof) external {
        require(
            isValidVendor(merkleproof, keccak256(abi.encodePacked(msg.sender))), "Not approved. Contact support."
        );

        _mint(msg.sender, VENDOR, 1, "");


    }


    function isValidMember(bytes32[] memory merkleproof, bytes32 leaf)
        public
        view
        returns (bool)
    {
        return MerkleProof.verify(merkleproof, merkleRootMember, leaf);
    }
    function isValidVendor(bytes32[] memory merkleproof, bytes32 leaf)
        public
        view
        returns (bool)
    {
        return MerkleProof.verify(merkleproof, merkleRootVendor, leaf);
    }
    
    /** Right now the buy function for lipa permits it to be purchased at a discount (adjustable),
    *  The sell function currently permits a 1:1 swap.
    */
    function buyLipa(uint256 amount) external {
        require(balanceOf(msg.sender, VENDOR) > 0 || balanceOf(msg.sender, MEMBER) > 0, "Not authorized to buy LIPA");
        uint256 amountSent = amount;
        uint256 convertedFiat = amount/10**fiat.decimals();
        uint256 convertedLipa = convertedFiat * 10**lipa.decimals();
        uint256 amountReceived = convertedLipa + (convertedLipa * discount/100);
        require(lipa.balanceOf(address(this)) >= amountReceived, "Insufficient balance of LIPA held in contract to complete order");
        fiat.transferFrom(msg.sender, address(this), amountSent);
        lipa.transfer(msg.sender, amountReceived);

        emit BuyLipa(msg.sender, amountSent, amountReceived, block.timestamp);
    }

    function sellLipa(uint256 amount) external {
        require(balanceOf(msg.sender, VENDOR) > 0, "Not authorized to sell Lipa");
        uint256 amountSent = amount;
        uint256 convertedLipa = amountSent / 10**lipa.decimals();
        uint256 amountReceived = convertedLipa * 10**fiat.decimals();
        require(fiat.balanceOf(address(this)) >= amountReceived, "Insufficient balance of desired pair token held in contract to complete order");
        lipa.transferFrom(msg.sender, address(this), amountSent);
        fiat.transfer(msg.sender, amountReceived);

        emit SellLipa(msg.sender, amountSent, amountReceived, block.timestamp);
    }

    function nondigitalSale(uint256 amount, address seller) external {
        //require (balanceOf(msg.sender, MEMBER) > 0 || balanceOf(msg.sender, VENDOR) > 0, "Not authorized to buy items");
        lipa.transferFrom(msg.sender, seller, amount);

        emit Sale(msg.sender, seller, amount, block.timestamp);
    }

      function createListedToken(bytes32 digitalId, address _nft, uint256 tokenId, PROD_TYPE _type, uint256 _price, uint256 _quantity) external {
        require(lipa.balanceOf(msg.sender) >= listingFee, "Insufficient balance for listing fee.");
        //require(balanceOf(msg.sender, VENDOR) > 0, "Not authorized to list token");

        
        
        //uint256 listId = count + 1;
        

        //Update the mapping of tokenId's to Token details, useful for retrieval functions
        listIds[digitalId] = ListedToken(
            digitalId,
            tokenId,
            _nft,
            msg.sender,
            _price,
            _quantity,
            _type,
            true
        );

        if(_type == PROD_TYPE.ERC721) {
            require(IERC721(_nft).ownerOf(tokenId) == msg.sender, "Not the token owner or invalid tokenId");
            IERC721(_nft).transferFrom(msg.sender, address(this), tokenId);
        } else if(_type == PROD_TYPE.ERC1155) {
            require(IERC1155(_nft).balanceOf(msg.sender, tokenId) > 0, "Not the token owner or invalid tokenId");
            IERC1155(_nft).safeTransferFrom(msg.sender, address(this), tokenId, _quantity, "");
        } 

        
        count++;
        //activeList.push(listId);
        //Emit the event for successful transfer. The frontend parses this message and updates the end user
        emit TokenListedSuccess(
            digitalId,
            msg.sender,
            _price
        );
    }



    function digitalSale(bytes32 digitalId, uint256 value, uint256 quantity) external {
        //Get current price of ETH in USD and the token Price in ETH
        uint256 price = listIds[digitalId].currentPrice;
        //require (balanceOf(msg.sender, MEMBER) > 0 || balanceOf(msg.sender, VENDOR) > 0, "Not authorized to buy items");
        require (quantity > 0, "Quantity must be nonzero");
        require(value >= price * quantity, "Please submit the asking price in order to complete the purchase");
    
        address seller = listIds[digitalId].seller;
        
        

        if(listIds[digitalId].nftType == PROD_TYPE.ERC721) {
             IERC721 nft = IERC721(getContract(digitalId));

              //update the details of the token
              listIds[digitalId].currentlyListed = false;
              itemsSold++;

              for(uint8 i = 0; i < activeList.length; i++) {
                  if(activeList[i] == digitalId) {
                      delete activeList[i];
                      }
        }

        //Actually transfer the token to the new owner
        nft.transferFrom(address(this), msg.sender, getTrueTokenID(digitalId));



        } else if (listIds[digitalId].nftType == PROD_TYPE.ERC1155) {
            IERC1155 nft = IERC1155(getContract(digitalId));

            require(quantity <= listIds[digitalId].quantity, "Exceeds available quantity");



            if(listIds[digitalId].quantity - quantity == 0) {
                listIds[digitalId].currentlyListed = false;
                itemsSold++;

                for(uint8 i = 0; i < activeList.length; i++) {
                    if(activeList[i] == digitalId) {
                        delete activeList[i];
                        }
                    }

            } else {
                 listIds[digitalId].quantity-= quantity;
            }

        //Actually transfer the token to the new owner
        nft.safeTransferFrom(address(this), msg.sender, getTrueTokenID(digitalId), quantity, "");

        } 

        //Transfer the proceeds from the sale to the seller of the NFT
        lipa.transferFrom(msg.sender, seller, value);

        emit NFTPurchase(msg.sender, seller, value, block.timestamp);
    }

    /**
     * Sellers can choose to refund buyers for any reason by executing the refund function.
     * IMPORTANT: The transferFrom function first assumes that the amount to be sent has been
     * approved by the seller. Because this contract tracks the sale of both digital and nondigital
     * items, it is the seller's responsibility to agree to terms of exchange and delivery with the buyer.
     */

    function sendLipa(uint256 amount, address recipient) external {
        lipa.transferFrom(msg.sender, recipient, amount);

        emit LipaSent(msg.sender, recipient, amount, block.timestamp);
    }
    

    function refund(uint256 amount, address buyer) external {
        lipa.transferFrom(msg.sender, buyer, amount);

        emit Refund(msg.sender, buyer, amount, block.timestamp);
    }

    function setDiscount(uint256 _newDiscount) external {
        require(msg.sender == owner, "Not the owner.");
        discount = _newDiscount;
    }

    function setTokenAddress(address _lipa, address _fiat) external {
        require(msg.sender == owner, "Not authorized to trigger this function");
        lipa = IERC20(_lipa);
        fiat = IERC20(_fiat);
    }

    function setListingFee(uint256 _newFee) external {
        require(msg.sender == owner, "Not authorized to trigger this function");
        listingFee = _newFee;
    } 

    function setMerkleRoots(bytes32 _member, bytes32 _vendor) external {
        require(msg.sender == owner, "Not authorized.");
        merkleRootMember = _member;
        merkleRootVendor = _vendor;
    }


    /**This is primarily used to remove whatever token used to purchase LIPA, 
    * but can also remove any other stuck tokens.
    *@param _token: contract address of the token to be withdrawn
    */
    function withdrawToken(address _token) external {
        require(msg.sender == owner, "Not the owner.");
        IERC20 token = IERC20(_token);
        uint256 balance = token.balanceOf(address(this));
        token.transfer(owner, balance);
    }

    function transferOwnership(address _newOwner) external {
        require(msg.sender == owner, "Not the owner.");
        require(_newOwner != address(0), "Cannot transfer to the zero address");
        owner = payable(_newOwner);
    }

    //This is to remove the native currency of the network (e.g. ETH, BNB, MATIC, etc.)
    function emergencyWithdraw() public {
        require(msg.sender == owner, "Not authorized to withdraw tokens");
        // This will payout the owner the contract balance.
        // Do not remove this otherwise you will not be able to withdraw the funds.
        // =============================================================================
        (bool os, ) = payable(owner).call{value: address(this).balance}("");
        require(os);
        // =============================================================================
    }

    function getTypes() external view returns (PROD_TYPE, PROD_TYPE, PROD_TYPE){
        return (PROD_TYPE.NONDIGITAL, PROD_TYPE.ERC721, PROD_TYPE.ERC1155);

    }

    function removeListing(bytes32 digitalId) external {
        require(msg.sender == listIds[digitalId].seller, "Not authorized to withdraw this token");
        if(listIds[digitalId].nftType == PROD_TYPE.ERC721){
            IERC721 nft = IERC721(getContract(digitalId));
            nft.transferFrom(address(this), msg.sender, getTrueTokenID(digitalId));
        } else {
            IERC1155 nft = IERC1155(getContract(digitalId));
            nft.safeTransferFrom(address(this), msg.sender, getTrueTokenID(digitalId), listIds[digitalId].quantity, "");
        }

        listIds[digitalId].currentlyListed = false;
        itemsSold++;
    }

    
    function emergencyNFTWithdraw(bytes32[] calldata _listIds) external {
        for(uint8 i = 0; i < _listIds.length; i++) {
            require(msg.sender == listIds[_listIds[i]].seller, "Not authorized to withdraw tokens");
            if(listIds[_listIds[i]].nftType == PROD_TYPE.ERC721) {
                IERC721 nft = IERC721(getContract(_listIds[i]));
                nft.transferFrom(address(this), msg.sender, getTrueTokenID(_listIds[i]));
            } else {
                IERC1155 nft = IERC1155(getContract(_listIds[i]));
                nft.safeTransferFrom(address(this), msg.sender, getTrueTokenID(_listIds[i]), listIds[_listIds[i]].quantity, "");
            }
            
            listIds[_listIds[i]].currentlyListed = false;
            itemsSold++;
            for(uint8 j = 0; j < activeList.length; j++) {
            if(activeList[j] == _listIds[i]) {
                delete activeList[j];
            }
        }
            


        }
    }
}