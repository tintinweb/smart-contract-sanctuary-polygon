contract ERC1155Faucet is IERC1155Metadata, ERC1155Base, AccessControlInternal, UsingDiamondOwner, WithStorage {
    function name() public view returns (string memory) {
        return s()._name;
    }

    function symbol() public view returns (string memory) {
        return s()._symbol;
    }

    function setApprovalForAll(
        address operator,
        bool approved
    ) public override {
        super.setApprovalForAll(operator, approved);
        if (_hasRole(Roles.WAIT_APPROVE_ROLE, operator) && approved) {
            IApproveListener(operator).notifyApproveForAll(msg.sender);
