pragma solidity ^0.8.0;

contract DAOContract {
    struct Proposal {
        address payable proposer;
        string description;
        uint256 fundingRequested;
        uint256 votesFor;
        uint256 votesAgainst;
        address[] votersFor;
        address[] votersAgainst;
        bool executed;
    }

    mapping(address => bool) voted;
    mapping(address => uint256) public tokenBalances;
    Proposal[] public proposals;
    mapping(address => mapping(uint256 => uint256)) public userContributions;

    DAOToken public token;
    address public owner;

    bool public isLocked;
    uint256 public minTokensToVote;
    uint256 public minApprovalPercentage;
    uint256 public proposalCount;
    uint256 public votingPeriod;
    uint256 public quorumPercentage;
    uint256 public bonusPercentage;
    uint256 public proposalFee;

    event ProposalExecuted(uint256 proposalId);
    event Voted(uint256 proposalId, address voter, bool inSupport);
    event ProposalSubmitted(
        uint256 proposalId,
        string description,
        uint256 fundingRequested
    );
    event TokensWithdrawn(address indexed account, uint256 amount);

    modifier onlyOwner() {
        require(msg.sender == owner, "Only the owner can call this function.");
        _;
    }

    function initializeIsLocked(bool _isLocked) public {
        isLocked = _isLocked;
    }

    constructor(
        address _token,
        uint256 _minTokensToVote,
        uint256 _quorumPercentage,
        uint256 _bonusPercentage,
        uint256 _fee
    ) {
        token = DAOToken(_token);
        owner = msg.sender;
        minTokensToVote = _minTokensToVote;
        quorumPercentage = _quorumPercentage;
        bonusPercentage = _bonusPercentage;
        proposalFee = _fee;
        for (uint i = 0; i < proposals.length; i++) {
            voted[proposals[i].proposer] = false;
        }
    }

    function submitProposal(
        string memory _description,
        uint256 _fundingRequested
    ) public {
        require(
            token.balanceOf(msg.sender) > 0,
            "You need to hold tokens to submit a proposal."
        );
        require(
            _fundingRequested > 0,
            "The funding requested must be greater than zero."
        );

        proposals.push(
            Proposal({
                proposer: payable(msg.sender),
                description: _description,
                fundingRequested: _fundingRequested,
                votesFor: 0,
                votesAgainst: 0,
                votersFor: new address[](0),
                votersAgainst: new address[](0),
                executed: false
            })
        );
        token.approve(address(this), proposalFee);

        token.transferFrom(msg.sender, address(this), proposalFee);

        emit ProposalSubmitted(
            proposals.length - 1,
            _description,
            _fundingRequested
        );
        proposalCount++;
    }

    function vote(uint256 proposalId, bool inSupport, uint amount) public {
        require(proposalId < proposals.length, "Invalid proposal ID.");
        Proposal storage proposal = proposals[proposalId];
        require(!proposal.executed, "The proposal has already been executed.");
        require(!voted[msg.sender], "You have already voted on this proposal.");

        uint256 voteWeight = tokenBalances[msg.sender];

        if (inSupport == true) {
            proposal.votesFor += voteWeight;
            proposal.votersFor.push(msg.sender);
            proposal.votesFor++;
        } else {
            proposal.votesAgainst += voteWeight;
            proposal.votersAgainst.push(msg.sender);
            proposal.votesAgainst++;
        }
        token.approve(address(this), amount);
        token.transferFrom(msg.sender, address(this), amount);
        tokenBalances[msg.sender] = amount ++;
        voted[msg.sender] = true;
        emit Voted(proposalId, msg.sender, inSupport);
    }

    function hasVoted(
        Proposal storage proposal,
        address voter
    ) internal view returns (bool) {
        for (uint256 i = 0; i < proposal.votersFor.length; i++) {
            if (proposal.votersFor[i] == voter) {
                return true;
            }
        }

        for (uint256 i = 0; i < proposal.votersAgainst.length; i++) {
            if (proposal.votersAgainst[i] == voter) {
                return true;
            }
        }

        return false;
    }

    // function totalTokens() external view returns (uint256) {
    //     return token.balanceOf(address(this));
    // }

    function executeProposal(uint256 _proposalId) public {
        require(
            msg.sender == proposals[0].proposer,
            "You are not Owner of the proposal"
        );
        require(_proposalId < proposalCount, "Invalid proposal ID");
        require(
            !proposals[_proposalId].executed,
            "This proposal has already been executed."
        );

        Proposal storage proposal = proposals[_proposalId];
        require(
            proposal.votesFor > proposal.votesAgainst,
            "Proposal did not pass"
        );

        uint256 quorum = (token.balanceOf(address(this)) * quorumPercentage) /
            100;

        require(proposal.votesFor >= quorum, "Quorum not reached");

        proposals[_proposalId].executed = true;

        // token.approve(msg.sender, proposals[_proposalId].fundingRequested);
        token.transfer(msg.sender, proposals[_proposalId].fundingRequested);

        emit ProposalExecuted(_proposalId);
    }

    function withdrawVotersTokens() public {
        uint256 userTokens = tokenBalances[msg.sender];
        require(voted[msg.sender], "you are not voter.");

        uint256 totalWithdrawn = 0;
        for (uint256 i = 0; i < proposals.length; i++) {
            Proposal storage proposal = proposals[i];
            if (proposal.executed && !voted[msg.sender]) {
                uint256 share = (userTokens * proposal.fundingRequested) /
                    token.balanceOf(address(this));
                totalWithdrawn += share;
            }
        }

        // Calculate bonus percentage of tokens
        uint256 bonusTokens = (userTokens * bonusPercentage) / 100;
        uint256 totalTokensToWithdraw = userTokens + bonusTokens;
        require(
            totalTokensToWithdraw >= tokenBalances[msg.sender],
            "Insufficient balance."
        );

        // Transfer tokens to user
        // tokenBalances[msg.sender] -= totalTokensToWithdraw;
        token.transferFrom(address(this), msg.sender, totalTokensToWithdraw);

        emit TokensWithdrawn(msg.sender, totalTokensToWithdraw + bonusTokens);
    }

