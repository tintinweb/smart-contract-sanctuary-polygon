import "./EIP712MetaTransaction.sol";

contract TestContract is EIP712MetaTransaction("TestContract", "1") {
    string public quote;
    address public owner;
    mapping(string => address) public allQuotes;

    event SetQuote(address indexed owner, string quote);

    function setQuote(string memory newQuote) public {
        require(allQuotes[newQuote] == address(0), "you already set quote");
        allQuotes[newQuote] = msgSender();
        owner = msgSender();
        quote = newQuote;
    }

    function getQuote()
        public
        view
        returns (string memory currentQuote, address currentOwner)
    {
        currentQuote = quote;
        currentOwner = owner;
    }
}