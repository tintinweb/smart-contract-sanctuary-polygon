pragma solidity ^0.8.9;

import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract ClaimFrogy {
    bytes32 public merkleRoot; // The Merkle root hash used for verification
    address public immutable froggyAddress; // The address of the Froggy token contract
    uint256 public totalTokenClaimed; // Total tokens claimed by all addresses
    mapping(address => uint256) public addressValues; // Stores the verified values for each address
    mapping(address => bool) public tokenClaimed; // Tracks whether an address has claimed tokens or not

    constructor(bytes32 _merkleRoot, address _froggyAddress) {
        merkleRoot = _merkleRoot;
        froggyAddress = _froggyAddress;
    }

    function setMerkleRoot(bytes32 _root) external {
        merkleRoot = _root; // Allows updating the Merkle root by the contract owner
    }

    function verifyValue(address _addr, uint256 _value, bytes32[] calldata _proof) external returns (bool) {
        require(tokenClaimed[msg.sender] == false, "already Claimed"); // Ensures the caller hasn't already claimed tokens
        bytes32 leaf = keccak256(bytes.concat(keccak256(abi.encode(_addr, _value)))); // Calculates the leaf hash for the address and value
        require(MerkleProof.verify(_proof, merkleRoot, leaf), "Invalid proof"); // Verifies the Merkle proof using the provided leaf hash and Merkle root
        addressValues[_addr] = _value; // Store the value associated with the verified address
        return true; // Returns true to indicate successful verification
    }

    function getStoredValue(address _addr) external view returns(uint256){
        return addressValues[_addr]; // Retrieves the stored value associated with the given address
    }

    function claimToken() external returns(uint256){
        require(tokenClaimed[msg.sender] == false, "already Claimed"); // Ensures the caller hasn't already claimed tokens
        require(addressValues[msg.sender] > 0, "verify Your address First!"); // Requires the caller to have a verified value
        require(IERC20(froggyAddress).transfer(msg.sender, addressValues[msg.sender]*10**18), "transfer Failed"); // Transfers tokens from the contract to the caller
        tokenClaimed[msg.sender] = true; // Marks the caller's tokens as claimed
        return addressValues[msg.sender]; // Returns the claimed token value
    }
}