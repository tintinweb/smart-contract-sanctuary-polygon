import "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/cryptography/draft-EIP712.sol";
import "@openzeppelin/contracts/token/common/ERC2981.sol";

//https://www.youtube.com/watch?v=DmFKqi__YGE
//https://gist.github.com/shobhitic/9c281505002a50d95e55b4c261e3d477

contract KeySpaceERC1155Lazy is ERC1155, Ownable, EIP712, ERC2981 {
    string private constant SIGNING_DOMAIN = "KeySpace NFT Marketplace";
    string private constant SIGNATURE_VERSION = "1";

    address public signer;
    string private baseURI;
    uint256 internal collectionSize;
    string internal collectionId;
    uint256 internal maxMintablePerTransaction;
    uint256[] internal supplyDistribution;
    uint256 internal mintStartDateTime;
    string public contractUri;
    string public name;
    string public symbol;

    mapping(uint256 => uint256) public tokenSupply;

    constructor(
        address _signer, //KeySpace marketplace master wallet?
        string memory _collectionId,
        string[] memory _meta,
        // string memory _symbol,
        // string memory _baseUri,
        uint256[] memory _supply,
        uint256 _collectionSize,
        uint256 _maxMintablePerTransaction,
        uint256 _mintStartDateTime,
        // string memory _contractUri
        uint96 _royaltyFeeInBips,
        address _royaltyReceiver
    ) ERC1155(_meta[2]) EIP712(SIGNING_DOMAIN, SIGNATURE_VERSION) {
        _setURI(_meta[2]);
        signer = _signer;
        baseURI = _meta[2];
        collectionSize = _collectionSize;
        collectionId = _collectionId;
        supplyDistribution = _supply;
        maxMintablePerTransaction = _maxMintablePerTransaction;
        mintStartDateTime = _mintStartDateTime;
        name = _meta[0];
        symbol = _meta[1];
        contractUri = _meta[3];
        generateSupplyMapping();
        setRoyaltyInfo(_royaltyReceiver, _royaltyFeeInBips);
    }

    function setRoyaltyInfo(address _receiver, uint96 _royaltyFeesInBips)
        public
        onlyOwner
    {
        _setDefaultRoyalty(_receiver, _royaltyFeesInBips);
    }

    function getMintingBegun() public view returns (bool) {
        return block.timestamp >= mintStartDateTime;
    }

    function getMaxMintablePerTransaction() public view returns (uint256) {
        return maxMintablePerTransaction;
    }

    function getTokenIdInStock( uint256 tokenId) public view returns (bool) {
        return tokenSupply[tokenId] > 0;
    }

    function getNFTsEligibleForListing() public view returns (string[] memory) {
        require(
            block.timestamp >= mintStartDateTime,
            "Minting has not yet started"
        );
        uint256 count = 0;
        for (uint256 i = 0; i < collectionSize; i++) {
            if (tokenSupply[i] > 0) {
                count++;
            }
        }

        string[] memory eligibleTokenIds = new string[](count);
        uint256 count2 = 0;
        for (uint256 i = 0; i < collectionSize; i++) {
            if (tokenSupply[i] > 0) {
                eligibleTokenIds[count2] = Strings.toString(i);
                count2++;
            }
        }
        return eligibleTokenIds;
    }

    function getCollectionSize() public view returns (uint256) {
        require(
            block.timestamp >= mintStartDateTime,
            "Minting has not yet started"
        );
        return collectionSize;
    }

    struct LazyNFTVoucher {
        uint256 tokenId;
        uint256 price;
        uint256 quantity;
        string uri;
        address buyer;
        bytes signature;
    }

    function generateSupplyMapping() internal onlyOwner {
        require(collectionSize == supplyDistribution.length);
        for (uint256 i = 0; i < collectionSize; i++) {
            tokenSupply[i] = supplyDistribution[i];
        }
    }

    function recover(LazyNFTVoucher calldata voucher)
        public
        view
        returns (address)
    {
        require(
            block.timestamp >= mintStartDateTime,
            "Minting has not yet started"
        );
        bytes32 digest = _hashTypedDataV4(
            keccak256(
                abi.encode(
                    keccak256(
                        "LazyNFTVoucher(uint256 tokenId,uint256 price,uint256 quantity,string uri,address buyer)"
                    ),
                    voucher.tokenId,
                    voucher.price,
                    voucher.quantity,
                    keccak256(bytes(voucher.uri)),
                    voucher.buyer
                )
            )
        );
        address signer = ECDSA.recover(digest, voucher.signature);
        return signer;
    }

    function uri(uint256 _tokenId)
        public
        view
        override
        returns (string memory)
    {
        require(
            block.timestamp >= mintStartDateTime,
            "Minting has not yet started"
        );
        return string(abi.encodePacked(baseURI, Strings.toString(_tokenId)));
    }

    function contractURI() public view returns (string memory) {
        require(
            block.timestamp >= mintStartDateTime,
            "Minting has not yet started"
        );
        return contractUri;
    }

    function setContractURI(string calldata _contractUri) public onlyOwner {
        contractUri = _contractUri;
    }

    /**
     * @dev Returns the total quantity for a token ID
     * @param _id uint256 ID of the token to query
     * @return amount of token in existence
     */
    function totalSupply(uint256 _id) public view returns (uint256) {
        require(
            block.timestamp >= mintStartDateTime,
            "Minting has not yet started"
        );
        return tokenSupply[_id];
    }

    function withdraw() external payable onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }

    function _ownerOf(uint256 tokenId) public view returns (bool) {
        require(
            block.timestamp >= mintStartDateTime,
            "Minting has not yet started"
        );
        return balanceOf(msg.sender, tokenId) != 0;
    }

    function getVoucherURI() public view returns (string memory) {
        require(
            block.timestamp >= mintStartDateTime,
            "Minting has not yet started"
        );
        return baseURI;
    }

    function safeMint(LazyNFTVoucher calldata voucher) public payable {
        require(
            block.timestamp >= mintStartDateTime,
            "Minting has not yet started"
        );
        require(
            msg.sender == voucher.buyer,
            "Voucher must be sent by the buyer"
        );
        require(
            voucher.tokenId < collectionSize,
            "No such tokenId in collection."
        );
        require(signer == recover(voucher), "Invalid voucher signature.");
        require(msg.value >= voucher.price, "Insufficient funds sent.");
        require(voucher.quantity > 0, "Must mint at least 1 NFT.");
        require(
            voucher.quantity <= maxMintablePerTransaction,
            "Exceeded maximum mint amount in a single transaction"
        );
        require(
            voucher.quantity <= tokenSupply[voucher.tokenId],
            "Insufficient supply."
        );
        _mint(voucher.buyer, voucher.tokenId, voucher.quantity, "");
        tokenSupply[voucher.tokenId] =
            tokenSupply[voucher.tokenId] -
            voucher.quantity;
    }

    function burn(uint256 id, uint256 amount) public {
        require(amount > 0, "Burn amount must be greater than 0.");
        require(id < collectionSize, "Token id does not exist.");
        require(
            _ownerOf(id) == true,
            "Only the owner of NFT can transfer or burn it"
        );
        require(
            balanceOf(msg.sender, id) >= amount,
            "Must own at least amount of tokens attempting to burn"
        );
        _burn(msg.sender, id, amount);
    }

    // The following functions are overrides required by Solidity.
    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC1155, ERC2981)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }
}