import {PriceFeedConversionLib} from "./libs/PriceFeedConversionLib.sol";
import {IPriceFeedTokenToToken, IPriceFeedTokenToUSD} from "./interfaces/IPriceFeed.sol";
import {IPriceFeedRegistry} from "./interfaces/IPriceFeedRegistry.sol";

/// @title Registry interface for price feeds
/// @author urlaubaitos
/// @notice Intended as a singleton, that allows for dynamic accounting of price feeds.
///         Useful for multi interaction between feeds, swapping of feed implementations, or different address registration per chain
contract PriceFeedRegistry is IPriceFeedRegistry, Owned {
    using SafeCast for int256;
    using FixedPointMathLib for uint256;

    mapping(address => mapping(address => IPriceFeedTokenToToken)) private tokenToTokenFeeds;
    mapping(address => IPriceFeedTokenToUSD) private tokenToUSDFeeds;

    /// @notice the variance of a token is reported as variance / (1 << 128)
    /// @dev variance is used with the record deltas to determine that amount of credit
    /// needed as credit > debt + (variance * deltas)
    mapping(address => uint256) _variance;
    uint256 public defaultVariance = (1 << 128) / 2;
    uint256 public immutable varianceDenom = 1 << 128;

    event RegisteredPriceFeed(address indexed feed);
    event UnregisteredPriceFeed(address indexed feed);

    constructor() Owned(msg.sender) {}

    /// @notice Registers token-to-token feed. Replacing existing feed if token token pair was previously registered.
    function registerTokenToTokenFeed(IPriceFeedTokenToToken feed) external onlyOwner {
        (address base, address quote) = (address(feed.baseToken()), address(feed.quoteToken()));
        if (base > quote) {
            (base, quote) = (quote, base);
        }

        tokenToTokenFeeds[base][quote] = feed;
        emit RegisteredPriceFeed(address(feed));
    }

    /// @notice Forgets previously registered feed. Nothing happens if passed feed was not registered prior.
    function unregisterTokenToTokenFeed(IPriceFeedTokenToToken feed) external onlyOwner {
        (address base, address quote) = (address(feed.baseToken()), address(feed.quoteToken()));
        if (base > quote) {
            (base, quote) = (quote, base);
        }

        delete tokenToTokenFeeds[base][quote];
        emit UnregisteredPriceFeed(address(feed));
    }

    /// @notice Registers token-to-usd feed. Replacing existing feed if token usd pair was previously registered.
    function registerTokenToUSDFeed(IPriceFeedTokenToUSD feed) external onlyOwner {
        tokenToUSDFeeds[address(feed.baseToken())] = feed;
        emit RegisteredPriceFeed(address(feed));
    }

    /// @notice Forgets previously registered feed. Nothing happens if passed feed was not registered prior.
    function unregisterTokenToUSDFeed(IPriceFeedTokenToUSD feed) external onlyOwner {
        delete tokenToUSDFeeds[address(feed.baseToken())];
        emit UnregisteredPriceFeed(address(feed));
    }

    /// @notice Returns the current onchain price of the pair. The price is returned as a range, where it is likely the true price lies. Each term is given with 18 significant digits.
    function price(ERC20 baseToken, ERC20 quoteToken) external returns (uint256 low, uint256 mid, uint256 high) {
        (address base, address quote) = (address(baseToken), address(quoteToken));
        if (base > quote) {
            (base, quote) = (quote, base);
            return PriceFeedConversionLib.reciprocalPrice(tokenToTokenFeeds[base][quote]);
        }

        return tokenToTokenFeeds[base][quote].price();
    }

    /// @notice Returns the current onchain price of the token in USD. The price is returned as a range, where it is likely the true price lies. Each term is given with 18 significant digits.
    function priceInUSD(ERC20 token) public returns (uint256 low, uint256 mid, uint256 high) {
        return tokenToUSDFeeds[address(token)].priceInUSD();
    }

    /// @notice returns the current onchain price of the token in USD. Alternative to the above method to avoid conversion between ERC20 and address.
    function priceUSD(address token) public returns (uint256 low, uint256 mid, uint256 high) {
        return tokenToUSDFeeds[token].priceInUSD();
    }

    /// @notice A custom getter, that is more convienent than that generated by the compiler.
    /// @dev Given storage can flip the ordering of the passed token addresses.
    function tokenToTokenFeed(ERC20 _base, ERC20 _quote) external view returns (IPriceFeedTokenToToken) {
        (address base, address quote) = (address(_base), address(_quote));
        if (base > quote) {
            (base, quote) = (quote, base);
        }

        return tokenToTokenFeeds[base][quote];
    }

    function tokenToUSDFeed(ERC20 _token) external view returns (IPriceFeedTokenToUSD) {
        return tokenToUSDFeeds[address(_token)];
    }

    /**
     * Position Manger Helpers
     */

    /**
     * @notice used to determine if a token within the protocol is classified as
     * a core token or a tail token. Core tokens are those that have a registered
     * price feed, while tail tokens do not.
     * @param token token to check
     * @return hasFeed true if the token has a registered feed, false otherwise
     */
    function hasFeed(address token) public view returns (bool) {
        return address(tokenToUSDFeeds[token]) != address(0);
    }

    /// @notice returns the stored variance for the token or the default rate
    function getVariance(address token) external view returns (uint256) {
        return _variance[token] == 0 ? defaultVariance : _variance[token];
    }

    /// @notice stores the variance for the token
    function setVariance(address token, uint256 variance) external onlyOwner {
        _variance[token] = variance;
    }

    /// @notice sets the default variance for the unregistered tokens
    function setDefaultVariance(uint256 variance) external onlyOwner {
        defaultVariance = variance;
    }

    function obligation(address[] memory tokens, int256[] memory amounts, uint256[] memory deltas)
        external
        returns (uint256 obligationUSD, uint256[] memory obligations)
    {
        uint256 length = tokens.length;
        obligations = new uint256[](length);
        for (uint256 i = 0; i < length; i++) {
            address token = tokens[i];
            uint256 variance = _variance[token] == 0 ? defaultVariance : _variance[token];
            uint256 sizeObligation = variance.mulDivUp(deltas[i], varianceDenom);
            uint256 debt = amounts[i] < 0 ? uint256(-amounts[i]) : 0;
            obligations[i] = sizeObligation + debt;

            if (hasFeed(token)) {
                obligationUSD += valueInUSD(ERC20(token), obligations[i]);
            }
        }

        return (obligationUSD, obligations);
    }

    /**
     * @notice this is the main mechanism for the position manager to value
     * the positions held within its portfolios
     * @dev note any tokens passed that do not have a registered feed will revert
     * @param tokens tokens given by a record
     * @param amounts amounts of the tokens, should always be of equal length
     * @return credit USD credit and debt values for all of the tokens that contain a token
     * address to USD feed.
     */
    function valueUSD(address[] memory tokens, int256[] memory amounts)
        external
        returns (uint256 credit, uint256 debt)
    {
        uint256 length = tokens.length;
        for (uint256 i = 0; i < length; i++) {
            int256 amount = amounts[i];
            if (amount > 0) {
                credit += valueInUSD(ERC20(tokens[i]), amount.toUint256());
            } else {
                debt += valueInUSD(ERC20(tokens[i]), (-amount).toUint256());
            }
        }

        return (credit, debt);
    }

    /**
     * @notice helper function for the position manager to send in a record and get the parsed result
     * where registered tokens are valued, but unregistered tokens are ignored.
     * @dev includes a more expensive check to token feeds, so it should only be used in conjunction
     * @dev with singular records.
     * @param tokens tokens given by a record
     * @param amounts amounts of the tokens, should always be of equal length
     * @return credit USD credit values for all of the tokens that contain a token
     * address to USD feed.
     * @return debt USD debt values for all of the tokens that contain a token
     * address to USD feed.
     */
    function parseValueUSD(address[] memory tokens, int256[] memory amounts)
        external
        returns (uint256 credit, uint256 debt, bool hasAllFeeds)
    {
        uint256 length = tokens.length;
        hasAllFeeds = true;
        for (uint256 i = 0; i < length; i++) {
            if (hasFeed(tokens[i])) {
                int256 amount = amounts[i];
                if (amount > 0) {
                    credit += valueInUSD(ERC20(tokens[i]), amount.toUint256());
                } else {
                    debt += valueInUSD(ERC20(tokens[i]), (-amount).toUint256());
                }
            } else {
                hasAllFeeds = false;
            }
        }
    }

    /**
     * @notice this is the main mechanism for the position manager to determine the collateralization requirements of a
     * position in addition to the debts that are held within the position.
     * @dev note any tokens without registered variance will default to the `defaultVariance`.
     * @param tokens tokens given by a record
     * @param deltas deltas of the tokens, should always be of equal length
     * @return requirements token collateral requirements for each token.
     * @return requirement total collateral requirement for the position in USD.
     */
    function collateralRequirementUSD(address[] memory tokens, uint256[] memory deltas)
        public
        returns (uint256[] memory requirements, uint256 requirement)
    {
        requirements = _collateralRequirement(tokens, deltas);

        uint256 length = requirements.length;
        for (uint256 i = 0; i < length; i++) {
            if (hasFeed(tokens[i])) {
                requirement += valueInUSD(ERC20(tokens[i]), requirements[i]);
            }
        }

        return (requirements, requirement);
    }

    /**
     * @notice simplified form for the collateral requirement calculation since tail tokens do not have
     * USD value, so we skip that calculation.
     * @param tokens tokens given by a record
     * @param deltas deltas of the tokens, should always be of equal length
     * @return requirements token collateral requirements for each token.
     */
    function collateralRequirementTail(address[] memory tokens, uint256[] memory deltas)
        public
        view
        returns (uint256[] memory requirements)
    {
        return _collateralRequirement(tokens, deltas);
    }

    function _collateralRequirement(address[] memory tokens, uint256[] memory deltas)
        internal
        view
        returns (uint256[] memory requirements)
    {
        uint256 length = tokens.length;
        requirements = new uint256[](length);

        for (uint256 i = 0; i < length; i++) {
            address token = tokens[i];
            uint256 variance = _variance[token] == 0 ? defaultVariance : _variance[token];

            requirements[i] = variance.mulDivUp(deltas[i], varianceDenom);
        }
    }

    /// @notice Given an amount of tokens, returns the USD value based on oracle pricing.
    function valueInUSD(ERC20 token, uint256 amount) public returns (uint256) {
        (, uint256 mid,) = priceInUSD(token);
        return _value(amount, mid, token.decimals());
    }

    /// @notice Given a USD value, returns the amount of tokens based on oracle pricing.
    function amountFromUSD(ERC20 token, uint256 value) public returns (uint256) {
        (, uint256 mid,) = priceInUSD(token);
        return _amount(value, mid, token.decimals());
    }

    function _value(uint256 amount, uint256 priceInBase, uint256 decimals) internal pure returns (uint256) {
        return (amount * priceInBase) / (10 ** decimals);
    }

    function _amount(uint256 value, uint256 priceInBase, uint256 decimals) internal pure returns (uint256) {
        return (value * (10 ** decimals)) / priceInBase;
    }
}

