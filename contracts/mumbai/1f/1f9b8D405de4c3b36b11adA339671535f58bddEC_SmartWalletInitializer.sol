import "@openzeppelin/contracts/proxy/Proxy.sol";
import "@openzeppelin/contracts/metatx/ERC2771Context.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/interfaces/IERC1271.sol";

// https://github.com/safe-global/safe-contracts/blob/main/contracts/GnosisSafe.sol

contract SmartWalletProxy is Proxy {
    // have to add a save space for every non-constant storage variable in each SmartWalletBase inharited contract
    address payable internal owner;
    address payable internal impl;

    constructor(address payable owner_, address payable impl_) {
        owner = owner_;
        impl = impl_;
    }

    receive() override external payable {}

    function _implementation() internal view override returns (address) {
        return impl;
    }
}

contract SmartWalletCore is ERC2771Context, IERC1271 {
    address payable internal owner; // set by proxy
    address payable internal impl; // set by proxy
    // all following variables need to be private and retrived through function calls
    address private immutable smartWalletForwarder;

    modifier onlyOwner() {
        // _msgSender() == address(this) is needed to support metatx requests
        require(_msgSender() == owner || _msgSender() == address(this), "Unauthorized");
        _;
    }

    modifier onlyForwarder() {
        require(msg.sender == smartWalletForwarder, "Unauthorized Forwarder");
        _;
    }

    constructor(
        address trustedForwarder_
    ) ERC2771Context(address(trustedForwarder_)) {
        smartWalletForwarder = trustedForwarder_;
    }

    receive() external payable {}

    function isValidSignature(bytes32 hash, bytes calldata signature)
            external
            view
            returns (bytes4)
    {
            address signer = ECDSA.recover(hash, signature);
            require(signer == owner, "Invalid Signer");
            return this.isValidSignature.selector;
    }

    // Instance referance functions:
    function getOwner() public view returns (address payable) {
        return owner;
    }

    function getImpl() public view returns (address payable) {
        return impl;
    }

    function setImpl(address payable _impl) external {
        impl = _impl;
    }

    function getForwarder() public view returns (address) {
        return smartWalletForwarder;
    }

    function setNewOwner(address payable newOwner) external onlyOwner {
        owner = newOwner;
    }
}

