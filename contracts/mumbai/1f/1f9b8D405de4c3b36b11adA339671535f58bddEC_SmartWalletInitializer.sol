pragma solidity =0.8.9;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/metatx/ERC2771Context.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Address.sol";

import {SmartWalletProxy, SmartWalletCore} from "./SmartWalletCore.sol";

contract SmartWalletInitializer is ERC2771Context, Ownable, ReentrancyGuard { // MetaTx so that we can potentually pay for new wallets proxies to be created
    using Address for address;
    string public constant name = "Smart Wallet Initializer";

    address payable private smartWalletImpl;

    event WalletCreated(address payable indexed owner, address payable indexed smartWallet);
    event SmartWalletImpSet(address payable indexed smartWalletImpl);

    constructor(address trustedForwarder_) ERC2771Context(trustedForwarder_) {}

    // has to be done after SmartWalletImplementation has been deployed
    function setSmartWalletImplementation(address payable smartWalletImpl_) external onlyOwner {
        require(smartWalletImpl == address(0), "Already Set");
        smartWalletImpl = smartWalletImpl_;
        emit SmartWalletImpSet(smartWalletImpl);
    }

    function getSmartWalletImpl() external view returns (address payable) {
        return smartWalletImpl;
    }

    function initWallet(address payable user_) public returns (address payable) {
        SmartWalletProxy proxy = new SmartWalletProxy(user_, smartWalletImpl);
        emit WalletCreated(user_, payable(proxy));
        return payable(proxy);
    }

    function initWalletWithPayment(address payable user_) public payable returns (address payable) {
        SmartWalletProxy proxy = new SmartWalletProxy(user_, smartWalletImpl);
        if (msg.value > 0) {
            (bool success, ) = address(proxy).call{value: msg.value}("");
            require(success, "Transfer to wallet failed");
        }
        emit WalletCreated(user_, payable(proxy));
        return payable(proxy);
    }

    receive() external payable nonReentrant {
        address owner = _msgSender();
        if (owner.isContract()) {
            owner = SmartWalletCore(payable(owner)).getOwner();
        }
        address wallet = initWallet(payable(owner));
        (bool success, ) = wallet.call{value: msg.value}("");
        require(success, "Transfer to wallet failed");
    }

    // MetaTx:
    function _msgSender() internal view virtual override(ERC2771Context, Context) returns (address sender) {
        return ERC2771Context._msgSender();
    }

    function _msgData() internal view virtual override(ERC2771Context, Context) returns (bytes calldata) {
        return ERC2771Context._msgData();
    }
}

