    // }

    /**
     * @notice used to initialize the contract
     * @param _owner address of owner
     * @param _token address of paza token
     * @param _factory address of factory
     **/
    function initialize(
        address _owner,
        address _token,
        address _factory,
        address _bank
    ) public initializer {
        paza = IERC20(_token);
        _setupRole(DEFAULT_ADMIN_ROLE, _owner);
        _setupRole(OPERATOR_ROLE, _msgSender());
        factory = IFactory(_factory);
        bankAddress = _bank;
    }

    /**
     * @notice used to update the user(borrower) details
     * @param _details details of the Loan
     * @param _loanId loanId of the loan
     **/
    function updateUserDetail(
        LoanLib.Loan memory _details,
        uint256 _loanId
    ) public  onlyRole(OPERATOR_ROLE) {
        userDetail[_details.borrower][_loanId] = _details;
        emit UserDetailUpdated(_details, _loanId);
    }

    /**
     * @notice used to read the user(borrower) details
     * @param _borrower address of the borrower
     * @param _loanId loanid of the  borrowerloan
     **/

    function getUserDetails(
        address _borrower,
        uint _loanId
    ) external view returns (LoanLib.Loan memory userDetails) {
        return userDetail[_borrower][_loanId];
    }

    /**
     * @notice used to calculate the claimable amount
     * @param _borrower address of borrower
     * @param _loanId loan id of the loan
     **/
    function claimableAmount(
        address _borrower,
        uint256 _loanId
    ) public view returns (uint256) {
        LoanLib.Loan memory temp = userDetail[_borrower][_loanId];
        if (temp.disbursementInterval == 0) {
            return 0;
        }
        uint256 reward = temp.discount - temp.borrowerShare;
        if((block.timestamp - stakedTime[_borrower][_loanId]) >= TOTAL_TIME){
            return reward;
        }
        uint256 intervals = (block.timestamp - stakedTime[_borrower][_loanId]) /
            temp.disbursementInterval;

        return ((reward * temp.disbursementInterval * intervals) / TOTAL_TIME);
    }

    /**
     * @notice used to update the staked amount of given loanId
     * @param _borrower address of the borrower
     * @param _amount amount of paza token to be staked
     * @param _loanId loan id of the borrower
     **/
    function stake(
        address _borrower,
        uint256 _amount,
        uint256 _loanId
    ) public  onlyRole(OPERATOR_ROLE) {
        require(stakedAmount[_borrower][_loanId] == 0, "loan ID already exist");
        stakedAmount[_borrower][_loanId] = _amount;
        stakedTime[_borrower][_loanId] = block.timestamp;
        totalPrincipalAmount += _amount;
        emit Staked(_borrower, _amount, _loanId);
    }

    /**
     * @notice used for transferring the staked amount from borrower to bank
     * @param _borrower address of borrower
     * @param _loanId loan Id of the loan
     **/

    function transferStakedAmount(
        address _borrower,
        address _bank,
        uint256 _loanId
    ) external onlyRole(OPERATOR_ROLE) {
        uint amountStaked = stakedAmount[_borrower][_loanId];
        if (amountStaked > 0) {
            paza.safeTransfer(_bank, amountStaked);
            totalPrincipalAmount -= amountStaked;
            stakedAmount[_borrower][_loanId] = 0;
            emit StakedAmountTransfeered(
                amountStaked,
                _borrower,
                _bank,
                _loanId
            );
        } else return;
    }

    /**
     * @notice used to transfer Rewards in case of Refinance
     * @param _borrower address of the borrower
     * @param _loanId loan id of the borrower
     **/

    function transferRewards(
        address _borrower,
        uint _loanId
    ) external  onlyRole(OPERATOR_ROLE) {
        require(rewardTransferred[_loanId] == false, "already transferred");
        LoanLib.Loan memory temp = userDetail[_borrower][_loanId];
        uint rewardAmount = temp.discount - temp.borrowerShare;
        if(rewardAmount == 0){
            return;
        }
        require(
            paza.balanceOf(address(this)) >=
                rewardAmount + totalPrincipalAmount,
            "Insufficient Paza Balance"
        );
        rewardTransferred[_loanId] = true;
        paza.safeTransfer(temp.bank, rewardAmount);
        emit RewardsTransferred(_borrower, _loanId, rewardAmount);
    }

