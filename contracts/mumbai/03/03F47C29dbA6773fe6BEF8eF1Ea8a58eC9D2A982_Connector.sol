        // Get addresses of contracts required to execute the function.
        (
            address dai,
            address usdc,
            address usdr,
            address router,
            address liquidity_manager
        ) = abi.decode(
                addressProvider.getAddresses(
                    abi.encode(
                        DAI_ADDRESS,
                        USDC_ADDRESS,
                        USDR_ADDRESS,
                        PEARL_ROUTER_ADDRESS,
                        LIQUIDITY_MANAGER_ADDRESS
                    )
                ),
                (address, address, address, address, address)
            );

        // Transfer the token assets from the LiquidityManager to this contract.
        require(
            IERC20(token).balanceOf(liquidity_manager) > 0,
            "Insufficient token amount in Liquidity Manager"
        );
        ILiquidityManager(liquidity_manager).sweepToken(token);

        // Swap token assets to USDR
        uint256 amount = IERC20(token).balanceOf(address(this));
        uint256 usdr_amount = IRouter(router).swapExactTokensForTokensSimple(
            amount,
            0,
            token,
            usdr,
            true,
            address(this),
            block.timestamp + 10 minutes
        )[0];

        // // Calculate the distribution amounts
        // uint256[] memory distributionAmounts = _calculateDistributionAmounts(
        //     usdr_amount
        // );

        // _addToPool(distributionAmounts[0], router, usdr, usdc);
        // _addToPool(distributionAmounts[1], router, usdr, dai);
    }

    /**
        @notice Deposit certain amount of token assets to the usdr / pair_token pool.
        @param amount Total amount of USDR to deposit to the pool.
        @param router The address of the Pearl Router contract.
        @param usdr The address of USDR token address.
        @param pair_token The address of another token in the pool.
    */
    function _addToPool(
        uint256 amount,
        address router,
        address usdr,
        address pair_token
    ) internal {
        address pair = IRouter(router).pairFor(pair_token, usdr, true);
        (
            uint256 dec0,
            uint256 dec1,
            uint256 r0,
            uint256 r1,
            ,
            address t0,

        ) = IPair(pair).metadata();

        bool isT0Usdr = t0 == usdr;

        PoolData memory poolData;

        poolData.usdr_decimal = isT0Usdr ? dec0 : dec1;
        poolData.usdr_reserve = isT0Usdr ? r0 : r1;
        poolData.pair_token_decimal = isT0Usdr ? dec1 : dec0;
        poolData.pair_token_reserve = isT0Usdr ? r1 : r0;
        poolData.usdr_amount_out = IPair(pair).getAmountOut(
            poolData.pair_token_decimal,
            pair_token
        );

        _handleSwapAndAddLiquidity(amount, router, usdr, pair_token, poolData);
        _stakeLPToken(pair);
    }

    /**
        @notice Calculate the desired amount of both tokens( USDR & Pair Token), convert certain amount of USDR to the Pair Token and deposit to the pool.
        @param amount Total amount of USDR to deposit to the pool.
        @param router The address of the Pearl Router contract.
        @param usdr The address of USDR token address.
        @param pair_token The address of another token in the pool.
        @param poolData The PoolData struct holds the information of USDR / Pair Token pool.
    */
    function _handleSwapAndAddLiquidity(
        uint256 amount,
        address router,
        address usdr,
        address pair_token,
        PoolData memory poolData
    ) internal {
        uint256 usdr_desired_amount = (amount * poolData.usdr_reserve) /
            (poolData.pair_token_reserve *
                poolData.usdr_amount_out +
                poolData.usdr_reserve);

        uint256 pair_token_desired_amount = (amount *
            poolData.pair_token_reserve) /
            (poolData.pair_token_reserve *
                poolData.usdr_amount_out +
                poolData.usdr_reserve);

        // Swap specified amount of USDR to pair_token
        IRouter(router).swapExactTokensForTokensSimple(
            amount - usdr_desired_amount,
            0,
            usdr,
            pair_token,
            true,
            address(this),
            block.timestamp + 10 minutes
        );

        IERC20(usdr).approve(router, usdr_desired_amount);
        IERC20(pair_token).approve(router, pair_token_desired_amount);

        // Add Liquidity
        IRouter(router).addLiquidity(
            pair_token,
            usdr,
            true,
            pair_token_desired_amount,
            usdr_desired_amount,
            0,
            0,
            address(this),
            block.timestamp + 10 minutes
        );
    }

    /**
     * @dev Stake LP token into the Gauge
     * @notice This function is private and is called by the _addToPool() function
     * @notice It checks the balance of LP token and stakes all of it into the Gauge
     */
    function _stakeLPToken(address pair) private {
        address voter = abi.decode(
            addressProvider.getAddresses(abi.encode(VOTER_ADDRESS)),
            (address)
        );
        require(voter != address(0), "Invalid Voter Address");

        address gauge = IVoter(voter).gauges(pair);
        require(gauge != address(0), "Invalid Gauge Address");

        uint256 amount = IPair(pair).balanceOf(address(this)); // Get the current balance of LP tokens held by this contract.
        if (amount > 0) {
            IPair(pair).approve(gauge, amount); // Approve the Gauge to transfer LP tokens.
            IGauge(gauge).depositAll(); // Deposit all available LP tokens into the Booster.
        }
    }

    /**
        @dev Check if _distributionRatio is set.
        @param totalAmount The total amount of token that needs to be distributed to pools.
        @return The amounts of token that needs to be distributed to each pools.
    */
    function _calculateDistributionAmounts(
        uint256 totalAmount
    ) internal view returns (uint256[] memory) {
        require(
            _distributionRatio.length >= 1,
            "Distribution Ratio is not set"
        );

        uint256[] memory distributionAmounts = new uint256[](
            _distributionRatio.length
        );
        for (uint256 i = 0; i < _distributionRatio.length; i++) {
            distributionAmounts[i] =
                (totalAmount * _distributionRatio[i]) /
                100;
        }

        return distributionAmounts;
    }

    function claimFees(address pair) external onlyOwner {
        require(pair != address(0), "Invalid Pair Address");

        address voter = abi.decode(
            addressProvider.getAddresses(abi.encode(VOTER_ADDRESS)),
            (address)
        );
        require(voter != address(0), "Invalid Voter Address");

        address gauge = IVoter(voter).gauges(pair);
        require(gauge != address(0), "Invalid Gauge Address");

        IGauge(gauge).claimFees();
    }

    function sweepToken(address token) external onlyOwner {
        uint256 amount = IERC20(token).balanceOf(address(this));
        if (amount > 0) {
            IERC20(token).transfer(msg.sender, amount);
        }
    }

    function withdrawLPToken(address pair) external onlyOwner {
        require(pair != address(0), "Invalid Pair Address");

        address voter = abi.decode(
            addressProvider.getAddresses(abi.encode(VOTER_ADDRESS)),
            (address)
        );
        require(voter != address(0), "Invalid Voter Address");

        address gauge = IVoter(voter).gauges(pair);
        require(gauge != address(0), "Invalid Gauge Address");

        IGauge(gauge).withdrawAll();
    }
}

