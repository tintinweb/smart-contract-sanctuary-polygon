contract Connector is Ownable, AddressAccessor {
    struct PoolData {
        uint256 usdr_decimal;
        uint256 usdr_reserve;
        uint256 pair_token_decimal;
        uint256 pair_token_reserve;
        uint256 usdr_amount_out;
    }

    uint256[] private _distributionRatio; // Distribution ratio for `USDC / USDR`, `DAI / USDR` pools.

    constructor() {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    /**
        @notice Set the distribution ratio of `USDC / USDR`, `DAI / USDR` pools.
        @dev This function can only be called by the owner.
        @param ratio The distribution ratio represented as an array of uint256. The array length should be 2 and the sum of the array should be equal to 1000.
     */
    function setDistributionRatio(uint256[] memory ratio) public onlyOwner {
        require(
            ratio.length == 2 && ratio[0] + ratio[1] == 1000,
            "Invalid Ratio"
        );

        _distributionRatio = ratio;
    }

    /**
        @notice Increases the liquidity of the Pearl Pool by depositing `amount` of token into the pool.
        @dev This function can only be called by the LiquidityManager contract.
        @param token The address of the pair token of the pool. It should be the address of the DAI or USDC token at this moment.
