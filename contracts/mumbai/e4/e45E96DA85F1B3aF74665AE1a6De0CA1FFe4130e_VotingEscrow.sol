    //////////////////////////////////////////////////////////////*/

    mapping(uint256 => uint256) public attachments;
    mapping(uint256 => bool) public voted;

    function setVoter(address _voter) external {
        require(msg.sender == team);
        ownerToOperators[address(this)][voter] = false;
        voter = _voter;
        ownerToOperators[address(this)][_voter] = true;
    }

    function voting(uint256 _tokenId) external {
        require(msg.sender == voter);
        voted[_tokenId] = true;
    }

    function abstain(uint256 _tokenId) external {
        require(msg.sender == voter);
        voted[_tokenId] = false;
    }

    function attach(uint256 _tokenId) external {
        require(msg.sender == voter);
        attachments[_tokenId] = attachments[_tokenId] + 1;
    }

    function detach(uint256 _tokenId) external {
        require(msg.sender == voter);
        attachments[_tokenId] = attachments[_tokenId] - 1;
    }

    function merge(uint256 _from, uint256 _to) external {
        require(attachments[_from] == 0 && !voted[_from], "attached");
        require(_from != _to);
        require(_isApprovedOrOwner(msg.sender, _from));
        require(_isApprovedOrOwner(msg.sender, _to));

        LockedBalance memory _locked0 = locked[_from];
        LockedBalance memory _locked1 = locked[_to];
        uint256 value0 = uint256(int256(_locked0.amount));
        uint256 end = _locked0.end >= _locked1.end ? _locked0.end : _locked1.end;

        locked[_from] = LockedBalance(0, 0);
        _checkpoint(_from, _locked0, LockedBalance(0, 0));
        if (_hasClaimableRewards(_from) || _hasPendingRewards(_from)) {
            _transferFrom(idToOwner[_from], address(this), _from, msg.sender);
            _attachToken(_to, _from);
        } else {
            _burn(_from);
        }
        _deposit_for(_to, value0, end, _locked1, DepositType.MERGE_TYPE);
    }

    mapping(uint256 => uint256[]) private _attachedTokens;
    mapping(uint256 => uint256) private _attachedTo;

    function getAttachedTokens(uint256 _tokenId) external view returns (uint256[] memory) {
        return _attachedTokens[_tokenId];
    }

    function isAttachedTo(uint256 _tokenId) external view returns (uint256) {
        return _attachedTo[_tokenId];
    }

    function _attachToken(uint256 _parent, uint256 _child) internal {
        require(_attachedTo[_parent] == 0);
        uint256[] storage _childAttachedTokens = _attachedTokens[_child];
        uint256 _numChildAttachedTokens = _childAttachedTokens.length;
        for (uint256 _i = _numChildAttachedTokens; _i != 0; ) {
            unchecked {
                --_i;
            }
            uint256 _tokenId = _childAttachedTokens[_i];
            _attachedTokens[_parent].push(_tokenId);
            _attachedTo[_tokenId] = _parent;
            idToApprovals[_tokenId] = idToOwner[_parent];
            _childAttachedTokens.pop();
        }
        _attachedTokens[_parent].push(_child);
        _attachedTo[_child] = _parent;
        idToApprovals[_child] = idToOwner[_parent];
    }

    function _detachToken(uint256 _parent, uint256 _child) internal {
        uint256[] memory _attached = _attachedTokens[_parent];
        uint256 _numTokens = _attached.length;
        for (uint256 i = 0; i < _numTokens; ) {
            if (_attached[i] == _child) {
                _attachedTokens[_parent][i] = _attached[_numTokens - 1];
                _attachedTokens[_parent].pop();
                break;
            }
            unchecked {
                ++i;
            }
        }
        delete _attachedTo[_child];
    }

    veNFTAPI public api;
    RewardAPI public rewardAPI;

    function setAPI(veNFTAPI _api) external {
        require(msg.sender == team);
        api = _api;
    }

    function setRewardAPI(RewardAPI _rewardAPI) external {
        require(msg.sender == team);
        rewardAPI = _rewardAPI;
    }

    function onRewardsClaimed(uint256 _tokenId, bool _checkClaimable) external {
        require(msg.sender == voter || IVoter(voter).isBribe(msg.sender));
        uint256 _parent = _attachedTo[_tokenId];
        if (_parent != 0) {
            if (!_hasPendingRewards(_tokenId) && (!_checkClaimable || !_hasClaimableRewards(tokenId))) {
                _detachToken(_parent, _tokenId);
                _burn(_tokenId);
            }
        }
    }

    function _hasClaimableRewards(uint256 _tokenId) internal view returns (bool) {
        return api.hasClaimableRewards(_tokenId);
    }

    function _hasPendingRewards(uint256 _tokenId) internal view returns (bool) {
        address[] memory _pools = IVoter(voter).getIncentivizedPools();
        return rewardAPI.hasPendingRewards(_tokenId, _pools);
    }

    /**
     * @notice split NFT into multiple
     * @param amounts   % of split
     * @param _tokenId  NFTs ID
     */
    function split(uint256[] memory amounts, uint256 _tokenId) external {
        // check permission and vote
        require(attachments[_tokenId] == 0 && !voted[_tokenId], "attached");
        require(_isApprovedOrOwner(msg.sender, _tokenId));

        // save old data and totalWeight
        address _to = idToOwner[_tokenId];
        LockedBalance memory _locked = locked[_tokenId];
        uint256 end = _locked.end;
        uint256 value = uint256(int256(_locked.amount));
        require(value > 0); // dev: need non-zero value

        // reset supply, _deposit_for increase it
        supply = supply - value;

        uint256 i;
        uint256 totalWeight = 0;
        for (i = 0; i < amounts.length; ) {
            totalWeight += amounts[i];
            unchecked {
                ++i;
            }
        }

        // remove old data
        locked[_tokenId] = LockedBalance(0, 0);
        _checkpoint(_tokenId, _locked, LockedBalance(0, 0));
        //_burn(_tokenId);

        // save end
        uint256 unlock_time = end;
        require(unlock_time > block.timestamp, "Can only lock until time in the future");
        require(unlock_time <= block.timestamp + MAXTIME, "Voting lock can be 2 years max");

        // mint
        uint256 _value = 0;
        for (i = 0; i < amounts.length; ) {
            if (i != 0) {
                ++tokenId;
                _tokenId = tokenId;
                _mint(_to, _tokenId);
            }
            _value = (value * amounts[i]) / totalWeight;
            _deposit_for(_tokenId, _value, unlock_time, locked[_tokenId], DepositType.SPLIT_TYPE);
            unchecked {
                ++i;
            }
        }
    }

