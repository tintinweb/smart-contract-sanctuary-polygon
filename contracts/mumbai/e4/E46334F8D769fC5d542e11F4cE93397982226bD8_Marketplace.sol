contract Marketplace is ERC721Holder {
    struct Item {
        address payable seller;
        uint256 price;
        address paymentToken;
        bool isForSale;
    }

    mapping(uint256 => Item) public items;
    address public marketplaceOwner;

    uint256 private constant COMMISSION_PERCENTAGE = 1;
    uint256 private constant DECIMALS = 18;

    event ItemListed(uint256 indexed itemId, address indexed seller, uint256 price, address paymentToken);
    event ItemSold(uint256 indexed itemId, address indexed seller, address indexed buyer, uint256 price, address paymentToken);

    modifier onlyMarketplaceOwner() {
        require(msg.sender == marketplaceOwner, "Only marketplace owner can call this function");
        _;
    }

    constructor() {
        marketplaceOwner = msg.sender;
    }

    function listForSale(address nftContract, uint256 itemId, uint256 price, address paymentToken) external {
        require(items[itemId].seller == address(0), "Item already listed");

        IERC721 nft = IERC721(nftContract);
        address owner = nft.ownerOf(itemId);
        require(owner == msg.sender, "You don't own this item");

        nft.safeTransferFrom(msg.sender, address(this), itemId);

        items[itemId] = Item(payable(owner), price, paymentToken, true);
        emit ItemListed(itemId, owner, price, paymentToken);
    }

    function buy(address nftContract, uint256 itemId) external payable {
        Item storage item = items[itemId];
        require(item.isForSale, "Item is not for sale");
        require(item.seller != address(0), "Item does not exist");

        IERC721 nft = IERC721(nftContract);
        require(nft.ownerOf(itemId) == address(this), "Item not held by the marketplace");

        IERC20 paymentToken = IERC20(item.paymentToken);
        uint256 price = item.price;

        // Calculate the commission amount (1% of the price)
        uint256 commission = (price * COMMISSION_PERCENTAGE) / 100;

        // Calculate the remaining amount to be paid to the seller
        uint256 remainingAmount = price - commission;

        // Transfer the payment amount to the seller
        paymentToken.transferFrom(msg.sender, item.seller, remainingAmount);

        // Transfer the commission to the marketplace owner
        paymentToken.transferFrom(msg.sender, marketplaceOwner, commission);

        item.isForSale = false;
        emit ItemSold(itemId, item.seller, msg.sender, price, item.paymentToken);

        nft.safeTransferFrom(address(this), msg.sender, itemId);
    }

    function cancelSale(address nftContract, uint256 itemId) external {
        Item storage item = items[itemId];
        require(item.isForSale, "Item is not for sale");

        IERC721 nft = IERC721(nftContract);
        require(nft.ownerOf(itemId) == address(this), "Item not held by the marketplace");

        nft.safeTransferFrom(address(this), item.seller, itemId);

        delete items[itemId];

        emit ItemListed(itemId, item.seller, 0, address(0));
    }

    function setMarketplaceOwner(address newOwner) external onlyMarketplaceOwner {
        require(newOwner != address(0), "Invalid address");
        marketplaceOwner = newOwner;
    }
}