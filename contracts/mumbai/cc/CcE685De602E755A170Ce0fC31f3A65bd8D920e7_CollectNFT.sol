        ERC721Time.__ERC721_Init(name, symbol);

        emit Events.BaseInitialized(name, symbol, block.timestamp);
    }

     function _initialize_constructor(string memory name, string memory symbol) internal {
        ERC721Time.__ERC721_Init_Constructor(name, symbol);(name, symbol);
        emit Events.BaseInitialized(name, symbol, block.timestamp);
    }

