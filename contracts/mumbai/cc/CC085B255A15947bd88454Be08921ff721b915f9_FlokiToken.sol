pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "./interfaces/IManager.sol";

contract FlokiToken is ERC20 {
    IManager private manager;
    mapping(address => uint256) private unclaimedTokens;

    event ArtistRepeateRewardAccrued(
        address creator,
        address reciever,
        uint256 amount,
        uint256 timestamp
    );

    event ListenerFirstRewardAccrued(
        address creator,
        address reciever,
        uint256 amount,
        uint256 timestamp
    );

    event ListenerRepeateRewardAccrued(
        address creator,
        address reciever,
        uint256 amount,
        uint256 timestamp
    );

    event ExclusiveSongRewardAccrued(
        address creator,
        address reciever,
        uint256 amount,
        uint256 timestamp
    );

    event RewardClaimed(address claimer, uint256 amount, uint256 timestamp);

    constructor(address _manager) ERC20("FlokiToken", "FLT") {
        manager = IManager(_manager);
    }

    function mint(address account, uint256 amount) external isPaused {
        require(manager.isERC20Manager(_msgSender()));
        _mint(account, amount);
    }

    function artistRepeateReward(address artist) external onlyManager {
        uint256 amount = manager.getArtistRepeatReward();
        unclaimedTokens[artist] += amount;

        emit ArtistRepeateRewardAccrued(
            _msgSender(),
            artist,
            amount,
            block.timestamp
        );
    }

    function listenerFirstReward(address listener) external onlyManager {
        uint256 amount = manager.getListenerFirstReward();
        unclaimedTokens[listener] += amount;

        emit ListenerFirstRewardAccrued(
            _msgSender(),
            listener,
            amount,
            block.timestamp
        );
    }

    function listenerRepeateReward(address listener) external onlyManager {
        uint256 amount = manager.getListenerRepeatReward();
        unclaimedTokens[listener] += amount;

        emit ListenerRepeateRewardAccrued(
            _msgSender(),
            listener,
            amount,
            block.timestamp
        );
    }

    function addExclusiveSongReward(address client) external onlyManager {
        uint256 amount = manager.getExclusiveSongReward();
        unclaimedTokens[client] += amount;

        emit ExclusiveSongRewardAccrued(
            _msgSender(),
            client,
            amount,
            block.timestamp
        );
    }

    function claim() external isPaused {
        require(manager.isERC20openForAll());
        uint256 balance = unclaimedTokens[_msgSender()];
        unclaimedTokens[_msgSender()] = 0;
        _mint(_msgSender(), balance);

        emit RewardClaimed(_msgSender(), balance, block.timestamp);
    }

    function getUnclaimedTokensBalance(address user)
        external
        view
        returns (uint256)
    {
        return unclaimedTokens[user];
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal override isPaused {
        if (from != address(0)) {
            require(
                manager.isERC20openForAll() ||
                    manager.isERC20Manager(_msgSender())
            );
        }
    }

    modifier onlyManager() {
        require(manager.isERC20Manager(_msgSender()));
        _;
    }

    modifier isPaused() {
        require(!manager.paused());
        _;
    }
}

