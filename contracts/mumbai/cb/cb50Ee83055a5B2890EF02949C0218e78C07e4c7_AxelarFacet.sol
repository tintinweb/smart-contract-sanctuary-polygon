pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/Address.sol";
import {AxelarExecutable} from "@axelar-network/axelar-gmp-sdk-solidity/contracts/executable/AxelarExecutable.sol";
import {IAxelarGateway} from "@axelar-network/axelar-gmp-sdk-solidity/contracts/interfaces/IAxelarGateway.sol";
import {IAxelarGasService} from "@axelar-network/axelar-gmp-sdk-solidity/contracts/interfaces/IAxelarGasService.sol";
import {StringToAddress, AddressToString} from "@axelar-network/axelar-gmp-sdk-solidity/contracts/utils/AddressString.sol";

contract AxelarFacet is AxelarExecutable {
    using StringToAddress for string;
    using AddressToString for address;
    using Address for address;

    error NotEnoughValueForGas();
    error ContractExecutionFailure();

    event CrossChainCalled(string destChain, bytes payload, bool ack);

    event CrossChainReceived(string sourceChain, bytes payload, bool ack);

    IAxelarGasService public immutable gasService;

    constructor(address _gateway, address _gasReceiver) AxelarExecutable(_gateway) {
        gasService = IAxelarGasService(_gasReceiver);
    }

    function useAxelar(
        string calldata _destinationChain,
        string calldata _destinationAddress,
        bytes calldata _payload
    ) external payable {
        if (msg.value == 0) revert NotEnoughValueForGas();
        gasService.payNativeGasForContractCall{value: msg.value}(
            address(this),
            _destinationChain,
            _destinationAddress,
            _payload,
            msg.sender
        );

        gateway.callContract(_destinationChain, _destinationAddress, _payload);
        emit CrossChainCalled(_destinationChain, _payload, false);
    }

    function _execute(
        string calldata _sourceChain,
        string calldata _sourceAddress,
        bytes calldata _payload
    ) internal override {
        (
            bool ack,
            bytes memory contractCalldata,
            address contractAddress,
            address callbackContractAddress
        ) = abi.decode(_payload, (bool, bytes, address, address));
        emit CrossChainReceived(_sourceChain, _payload, ack);

        if (ack == false) {
            //handle condition if there is no call to be done.
            bytes memory returnData = contractAddress.functionCall(contractCalldata);
            //Send the return data through the payload
            bytes memory modifiedPayload = abi.encode(
                true,
                contractCalldata,
                contractAddress,
                callbackContractAddress,
                returnData
            );
            gateway.callContract(_sourceChain, _sourceAddress, modifiedPayload);

            emit CrossChainCalled(_sourceChain, modifiedPayload, true);
        } else {
            callbackContractAddress.functionCall(
                abi.encodeWithSignature("callbackHandler(bytes)", _payload)
            );
        }
    }
}