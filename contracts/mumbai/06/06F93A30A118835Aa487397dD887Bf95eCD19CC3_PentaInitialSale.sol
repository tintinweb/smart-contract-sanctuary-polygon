import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "../nft/IHeadphoneNFT.sol";

/**
 * @author The Penta Team
 * @title Initail sale
 * @notice the contract for the Initial sale of the HeadphoneNFTs
 */
contract PentaInitialSale is Ownable, ReentrancyGuard, ERC721Holder {
    /// user address => true if the user have already bought a token
    mapping(address => bool) public isClaimed;
    bytes32 public merkleRoot;

    IHeadphoneNFT public immutable headphoneNFT;
    address public immutable treasury;

    uint256 public constant DECIMALS = 1e18;
    /// 1 $ to ASTR
    uint256 public astr;

    bool public isSaleNow;

    event SaleStatusUpdated(bool isSale);
    event MerkleRootUpdated(bytes32 merkleRoot);
    event Sold(uint256 indexed tokenId, address indexed recipient, uint256 price);
    event AstrUpdated(uint256 newPrice);

    constructor(
        address _headphoneNFT,
        address _treasury,
        bytes32 _merkleRoot,
        uint256 _astrPrice
    ) {
        headphoneNFT = IHeadphoneNFT(_headphoneNFT);
        treasury = _treasury;
        merkleRoot = _merkleRoot;
        astr = _astrPrice;

        isSaleNow = true;
    }

    /// @notice users can purchase a token with this function
    /// @dev nfts are already minted and the ownership will be transferred to a user if it will be bought
    /// @param _tokenId that the user want to buy
    /// @param _proof of the Merkle tree to check if the wallet address in the whitelist or not.
    function buy(uint256 _tokenId, bytes32[] calldata _proof) external payable nonReentrant {
        require(block.timestamp >= 1662592467, "THE SALE IS NOT STARTED");
        require(headphoneNFT.ownerOf(_tokenId) == address(this), "THIS TOKEN IS ALREADY SOLD");
        require(!isClaimed[msg.sender], "YOU HAVE ALREADY ONE TOKEN");
        require(isSaleNow, "SALE HAS BEEN SETTLED");

        bytes32 leaf = keccak256(abi.encodePacked(msg.sender));
        bool isValid = MerkleProof.verify(_proof, merkleRoot, leaf);
        require(isValid, "YOU ARE NOT IN THE WHITELIST");

        uint256 tokenPrice = getTokenPrice(_tokenId);
        require(msg.value == tokenPrice, "INVALID PAYMENT");

        isClaimed[msg.sender] = true;
        headphoneNFT.safeTransferFrom(address(this), msg.sender, _tokenId);

        emit Sold(_tokenId, msg.sender, tokenPrice);
    }

    /// @notice view function for the array of the sale token ids and HeadphoneNFTData for them
    /// @return the array of the sale token ids
    /// @return the array of the HeadphoneNFT data corresponding to the token id
    function getHeadphoneNftsData() external view returns (uint256[] memory, IHeadphoneNFT.HeadphoneNFTData[] memory) {
        uint256[] memory saleTokenIds = headphoneNFT.getOwnedTokenIds(address(this));
        uint256 length = saleTokenIds.length;
        IHeadphoneNFT.HeadphoneNFTData[] memory data = new IHeadphoneNFT.HeadphoneNFTData[](length);

        for (uint256 i; i < length; ) {
            data[i] = headphoneNFT.getHeadphoneNftData(saleTokenIds[i]);

            unchecked {
                ++i;
            }
        }

        return (saleTokenIds, data);
    }

    /// @notice The contract owner can start or settle the sale
    /// @param _isSaleNow true to start the sale, false to settle the sale
    function setSale(bool _isSaleNow) external onlyOwner {
        require(isSaleNow != _isSaleNow, "THE SALE HAS BEEN ALREADY STARTED/SETTLED");
        isSaleNow = _isSaleNow;

        emit SaleStatusUpdated(_isSaleNow);
    }

    /// @notice The contract owner can transfer the whole received native token to the treasury
    function transferToTreasury() external onlyOwner {
        (bool success, ) = treasury.call{ value: address(this).balance }("");
        require(success, "FAILED TO SEND ETHER");
    }

    /// @notice The contract owner can set the new merkle root
    /// @param _merkleRoot the merkle root of the whitelist
    function setMerkleRoot(bytes32 _merkleRoot) external onlyOwner {
        require(_merkleRoot != merkleRoot, "THE SAME MERKLEROOT HAS ALREADY BEEN SET");
        merkleRoot = _merkleRoot;

        emit MerkleRootUpdated(_merkleRoot);
    }

    /// @notice the admin will use this function to adjust the unexpected falling price of the ASTR
    /// @param _newPrice new price which will be used in the token price calculation
    function setAstr(uint256 _newPrice) external onlyOwner {
        require(_newPrice != 0, "INVALID PRICE");

        astr = _newPrice;

        emit AstrUpdated(_newPrice);
    }

    /// @notice calculate the token price based on the level, rarity, potential and luck of the headphone NFT
    /// @param _tokenId id of the headphone NFT
    function getTokenPrice(uint256 _tokenId) public view returns (uint256) {
        IHeadphoneNFT.HeadphoneNFTData memory data = headphoneNFT.getHeadphoneNftData(_tokenId);
        uint256 priceInUsd = ((data.level + 5 * (data.rarity**2) + data.potential + data.luck) * 10 * 6000) / 10000;
        return priceInUsd * astr * DECIMALS;
    }
}

