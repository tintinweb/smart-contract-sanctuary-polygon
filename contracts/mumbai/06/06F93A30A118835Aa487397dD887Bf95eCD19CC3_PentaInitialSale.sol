    event LevelUpdated(address indexed tokenOwner, uint256 indexed _tokenId, uint256 totalLevel);

    event StatusUpdated(address indexed tokenOwner, uint256 indexed _tokenId, string status);

    function mintFromTicketNFT(
        bytes calldata _signature,
        bytes32 _nonce,
        address _to,
        HeadphoneNFTParamsData memory headphoneNFTParamsData
    ) external;

    function mintByOwner(
        address _to,
        string memory _title,
        uint256 _experience,
        uint256 _level,
        uint256 _rarity,
        uint256 _potential,
        uint256 _luck,
        string[] memory _genres,
        string memory _category,
        string memory _artworkUrl
    ) external;

    function burnByOwner(uint256 _tokenId) external;

    function pauseMint() external returns (bool);

    function unpauseMint() external returns (bool);

    function setMaxSupply(uint256 _newMaxSupply) external;

    function getOwnedTokenIds(address _owner) external view returns (uint256[] memory);

    function getHeadphoneNftData(uint256 tokenId) external view returns (HeadphoneNFTData memory);

    function setTitle(uint256 _tokenId, string memory _newTitle) external;

    function setRarity(uint256 _tokenId, uint256 _newRarity) external;

    function setPotential(uint256 _tokenId, uint256 _newPotential) external;

    function setLuck(uint256 _tokenId, uint256 _newLuck) external;

    function setArtworkUrl(uint256 _tokenId, string memory _newArtworkUrl) external;

    function setGenres(uint256 _tokenId, string[] memory _newGenres) external;

    function setCategory(uint256 _tokenId, string memory _newCategory) external;

    function setExperience(uint256 _tokenId, uint256 _experience) external;

    function setLevel(uint256 _tokenId, uint256 _level) external;

    function setStatus(uint256 _tokenId, string memory _status) external;
}

