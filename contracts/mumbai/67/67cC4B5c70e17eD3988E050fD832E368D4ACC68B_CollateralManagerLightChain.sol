contract CollateralManagerLightChain is ICollateralManager, Owned, MixinResolver {
    /* ========== CONSTANTS ========== */

    bytes32 private constant sUSD = "sUSD";
    address internal constant NULL_ADDRESS = 0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE;

    // Flexible storage names
    bytes32 public constant CONTRACT_NAME = "CollateralManager";

    /* ========== STATE VARIABLES ========== */

    /* ========== CONSTRUCTOR ========== */
    constructor(address _owner, address _resolver) MixinResolver(_resolver) Owned(_owner) {}

    /* ========== VIEWS ========== */

    /* ---------- State Information ---------- */

    /* ---------- STATE MUTATIONS ---------- */
    function depositeCollateral(
        address _from,
        address _collateralCurrency,
        uint256 _collateralAmount
    ) external payable {
        if (_collateralCurrency != NULL_ADDRESS) {
            TransferHelper.safeTransferFrom(_collateralCurrency, msg.sender, address(this), _collateralAmount);
        } else {
            require(msg.value == _collateralAmount, "Invalid ETH deposit amount");
        }
        emit DepositCollateral(_from, _collateralCurrency, _collateralAmount);
    }

    function withdrawCollateral(
        address _to,
        address _collateralCurrency,
        uint256 _amount
    ) external onlyOwner {
        if (_collateralCurrency == NULL_ADDRESS) {
            require(address(this).balance >= _amount, "Too much ETH withdrawl amount");
            TransferHelper.safeTransferETH(_to, _amount);
        } else {
            require(IERC20(_collateralCurrency).balanceOf(address(this)) >= _amount, "Too much withdrawl amount");
            TransferHelper.safeTransfer(_collateralCurrency, _to, _amount);
        }
        emit WithdrawCollateral(_to, _collateralCurrency, _amount);
    }

    // ========== EVENTS ==========
    event DepositCollateral(address _from, address _collateral, uint256 _amount);
    event WithdrawCollateral(address _to, address _collateral, uint256 _amount);
}

