contract MarketplaceStorage {

  IERC20 public acceptedToken;
  IERC721 public wearable;
//   Infts public nfts; 
    IAddressesValidityCheck public iAddressValidity;


  struct Order {
    // Order ID
    bytes32 id;
    // Owner of the NFT
    address seller;
    // NFT registry address
    address nftAddress;
    // Price (in deod Token) for the published item
    uint256 price;
    // Time when this sale ends
    uint256 expiresAt;
  }

  // From Collection address to assetId to Order (to avoid asset collision)
  mapping (address => mapping(uint256 => Order)) public orderByAssetId;

  uint256 public publicationFeeInDeodToken;



  // EVENTS
  event OrderCreated(
    bytes32 id,
    uint256 indexed assetId,
    address indexed seller,
    address nftAddress,
    uint256 priceInDeodToken,
    uint256 expiresAt
  );

  event OrderSuccessful(
    bytes32 id,
    uint256 indexed assetId,
    address indexed seller,
    address nftAddress,
    uint256 priceInDeodToken,
    address indexed buyer
  );

  event OrderCancelled(
    bytes32 id,
    uint256 indexed assetId,
    address indexed seller,
    address nftAddress
  );

  event ChangedPublicationFee(uint256 publicationFee);
  event ChangedTraansactionFee(uint256 transactionFee);

}



interface IAddressesValidityCheck {
    function verifyPurchase(
        address _ia,
        address _userAddress
    ) external view returns (bool);

    function userHasPurchased(address _userAddress) external view returns (bool);
}

pragma solidity ^0.8.7;

contract Marketplace is Ownable, Pausable, MarketplaceStorage{
    using SafeMath for uint256;
    using Address for address;
    uint256 public transactionFeesinDeod;

    address public Admin;
    mapping (address => address) public referredBy;
    mapping (address => bool) public nftPurchasedorNot;

  constructor (
    address _acceptedToken,
    address _owner,
    address _wearable,
    IAddressesValidityCheck _iAddressValidity
  )  
  {
    require(_owner != address(0), "Invalid owner");
    transferOwnership(_owner);
    acceptedToken = IERC20(_acceptedToken);
    wearable = IERC721(_wearable);
    iAddressValidity = _iAddressValidity;

  }
    


    function checkUserReferralPurchase(address _userAddress) public view returns(bool){
        IAddressesValidityCheck checkRegistry = IAddressesValidityCheck(iAddressValidity);
        bool checkPurchaser = checkRegistry.userHasPurchased(_userAddress);
        return checkPurchaser;
    }

     function setTransactionFee(uint256 _transactionFee) external onlyOwner {
        transactionFeesinDeod = _transactionFee;
        emit ChangedTraansactionFee(transactionFeesinDeod);
    }


    function getNFTpriceWithTxn(address nftAddress,uint256 assetId) public view returns(uint256){
    Order memory order = orderByAssetId[nftAddress][assetId];
        uint256 price = order.price;
        return price + price.mul(transactionFeesinDeod).div(1000);
    }

    function getNftTransactionFees(address nftAddress,uint256 assetId) public view returns(uint256){
    Order memory order = orderByAssetId[nftAddress][assetId];
        uint256 price = order.price;
        return price.mul(transactionFeesinDeod).div(1000);
    }

  function sellNFTs( 
    address nftAddress,
    uint256 assetId,
    uint256 priceInDeodToken,
    uint256 expiresAt
  )
    public 
  { 
      uint256 _assetId = assetId;
    address _nftAddress = nftAddress;
    address sender = _msgSender();
    uint256 _expiresAt = expiresAt;

    
    IERC721 nftRegistry = IERC721(nftAddress);
    address assetOwner = nftRegistry.ownerOf(assetId);
    uint256 priceofNFT = priceInDeodToken;

    require(sender == assetOwner, "Only the owner can create orders");
    require(
      nftRegistry.getApproved(_assetId) == address(this) || nftRegistry.isApprovedForAll(assetOwner, address(this)),
      "The contract is not authorized to manage the asset"
    );
    require(priceInDeodToken > 0, "Price should be bigger than 0");
    require(expiresAt > block.timestamp.add(1 minutes), "Publication should be more than 1 minute in the future");

    bytes32 orderId = keccak256(
      abi.encodePacked(
        block.timestamp,
        assetOwner,
        _assetId,
        nftRegistry,
        priceofNFT
      )
    );

    orderByAssetId[_nftAddress][_assetId] = Order({
      id: orderId,
      seller: assetOwner,
      nftAddress: _nftAddress,
      price: priceofNFT,
      expiresAt: expiresAt
    });

    emit OrderCreated(
      orderId,_assetId,assetOwner,_nftAddress,priceofNFT,_expiresAt);
  }


  function _cancelOrder(address nftAddress, uint256 assetId) public returns (Order memory) {
    address sender = _msgSender();
    Order memory order = orderByAssetId[nftAddress][assetId];

    require(order.id != 0, "Asset not published");
    require(order.seller == sender || sender == owner(), "Unauthorized user");

    bytes32 orderId = order.id;
    address orderSeller = order.seller;
    address orderNftAddress = order.nftAddress;
    delete orderByAssetId[nftAddress][assetId];

    emit OrderCancelled(
      orderId,
      assetId,
      orderSeller,
      orderNftAddress
    );

    return order;
  }


  function buyNFT(
    address nftAddress,
    uint256 assetId,
    uint256 price,
    address _referer
  )
   public  returns (Order memory)
  {


    address sender = _msgSender();
    referredBy[msg.sender]= _referer;
    address _nftAddress = nftAddress;
    uint256 _assetId = assetId; 
    IERC721 nftRegistry = IERC721(nftAddress); //wearable address
    uint256 _price = price;
    uint256 getPrice = getNftTransactionFees(_nftAddress,_assetId);
    uint256 getSellerPrice = _price.sub(getPrice);
    uint256 getAdminPrice = getPrice.mul(90).div(100);
    uint256 getReferralPrice = getPrice.mul(10).div(100);
 
    Order memory order = orderByAssetId[_nftAddress][_assetId];
    address seller = order.seller;

    require(order.id != 0, "Asset not published");
    require(seller != address(0), "Invalid address");
    require(seller != sender, "Unauthorized user");
    require(acceptedToken.balanceOf(sender) >= getNFTpriceWithTxn(_nftAddress,_assetId), "Insufficient buyer balance");
    require(getNFTpriceWithTxn(_nftAddress,_assetId) == _price, "The price is not correct");
    require(block.timestamp < order.expiresAt, "The order expired");
    require(seller == nftRegistry.ownerOf(_assetId), "The seller is no longer the owner");

    bytes32 orderId = order.id;
    delete orderByAssetId[_nftAddress][_assetId];
    uint256 priceofNFT = _price ;

    // Transfer sale amount to seller
    require(
      acceptedToken.transferFrom(sender, seller, getSellerPrice),
      "Transfering the sale amount to the seller failed"
    );
    if (transactionFeesinDeod > 0 && nftPurchasedorNot[referredBy[msg.sender]] == true) {
      require(
        acceptedToken.transferFrom(sender, owner(), getAdminPrice),
        "Transfering the transaction fee to the Marketplace owner failed");
       require(acceptedToken.transferFrom(sender, referredBy[msg.sender], getReferralPrice),
       "Transfering the transaction fee to the referer failed");
    }else if(transactionFeesinDeod > 0 && checkUserReferralPurchase(referredBy[msg.sender]) == true){
      require(
        acceptedToken.transferFrom(sender, owner(), getAdminPrice),
        "Transfering the transaction fee to the Marketplace owner failed");
       require(acceptedToken.transferFrom(sender, referredBy[msg.sender], getReferralPrice),
       "Transfering the transaction fee to the referer failed");
    } 
    else{
       require(
        acceptedToken.transferFrom(sender, owner(), getAdminPrice.add(getReferralPrice)),
        "Transfering the transaction fee to the Marketplace owner failed");

  }
    // Transfer asset owner
    IERC721(nftRegistry).safeTransferFrom(seller,sender,_assetId);
    nftPurchasedorNot[msg.sender] = true;

    emit OrderSuccessful(orderId,_assetId,seller,address(nftRegistry),priceofNFT,sender);
      return order;
  }

    function getBlockStamp() public view returns(uint256) {
      return block.timestamp + 24 hours;
  }


}