pragma solidity ^0.8.17;

import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract MerkleAirdrop is Ownable {
    using SafeERC20 for IERC20;

    bytes32 private merkleRoot;
    address public token;
    uint256 public expiredDay;
    uint256 private amountAirdrop = 500;
    mapping(address => bool) public claimed;

    event Claim(address airDropContract, address claimer);
    event ChangeAmount(address airDropContract, uint256 amount);
    event createAirDrop(
        address airDropContract,
        address token,
        uint256 expiredDay,
        bytes32 merkleRoot
    );
    event ChangeExpiredDay(address airDropContract, uint256 expiredDay);
    modifier isExpiredDay() {
        require(expiredDay < block.timestamp, "Require airdrop is expired");
        _;
    }

    function creatAirDrop(
        address _token,
        uint256 _expiredDay,
        bytes32 _merkleRoot
    ) public onlyOwner {
        token = _token;
        expiredDay = _expiredDay + block.timestamp;
        merkleRoot = _merkleRoot;
        emit createAirDrop(address(this), _token, _expiredDay, _merkleRoot);
    }

    function claim(bytes32[] calldata _merkleProof) public isExpiredDay {
        require(
            canClaim(msg.sender, _merkleProof),
            "MerkleAirdrop: Address is not a candidate for claim"
        );

        claimed[msg.sender] = true;

        IERC20(token).safeTransfer(msg.sender, amountAirdrop);

        emit Claim(address(this), msg.sender);
    }

    function canClaim(
        address _claimer,
        bytes32[] calldata _merkleProof
    ) public view returns (bool) {
        return
            !claimed[_claimer] &&
            MerkleProof.verify(
                _merkleProof,
                merkleRoot,
                keccak256(abi.encodePacked(_claimer))
            );
    }

    function setAmountAirdrop(uint256 _amount) public onlyOwner {
        amountAirdrop = _amount;
        emit ChangeAmount(address(this), _amount);
    }

    function setExpiredDay(uint256 _expiredDay) public onlyOwner {
        expiredDay = _expiredDay + block.timestamp;
        emit ChangeExpiredDay(address(this), _expiredDay);
    }

    function setMerkleRoot(bytes32 _merkleRoot) public onlyOwner {
        merkleRoot = _merkleRoot;
    }
}