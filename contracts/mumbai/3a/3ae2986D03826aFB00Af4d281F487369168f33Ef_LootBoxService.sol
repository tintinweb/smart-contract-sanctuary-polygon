import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBaseV2.sol";
import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";
import "./utils/IVRFCoordinatorV2Interface.sol";
import "./utils/ILootBoxKey.sol";
import "./utils/ILootBoxFund.sol";

/**
 * @dev This contract is designed to provide calculation of verified randomness using customizable rule.
 * Has function for project owner & worker to create boxes.
 * Has function for admin to withdraw fund.
 * Has function for user to deposit & withdraw fund.
 * Has function for user to open NFT1155 boxes.
 * Has function for user view the random item result.
 * @notice Is pausable to prevent malicious behavior.
 * @notice Utilize Chainlink VRF for randomness.
 */
contract LootBoxService is
    Ownable,
    AccessControl,
    ReentrancyGuard,
    Pausable,
    VRFConsumerBaseV2
{
    struct Box {
        uint256 boxId;
        address boxOwner;
        uint256 boxSize;
        mapping(uint256 => BoxItem) boxItemById;
    }
    struct BoxItem {
        string itemName;
        uint256 probability;
    }
    struct BoxItemId {
        uint256 itemId;
        string itemName;
        uint256 probability;
    }
    struct RandomInfo {
        address user;
        uint256 boxId;
        uint256[] randomWords;
    }
    struct Config {
        uint256 processGas;
        uint256 openBoxGas;
        uint256 maxBoxOpenAmount;
        uint256 maxBoxItemName;
        uint256 platformPercentFee;
        uint256 swapPercentFee;
    }
    struct LinkConfig {
        bytes32 keyHash;
        uint64 subscriptionId;
        uint32 callbackGasLimit;
        uint16 requestConfirmations;
    }

    bytes32 public constant WORKER = keccak256("WORKER");
    uint256 public constant MAXPROBABILITY = 1e10; // 0.00000001 as lowest prob

    ILootBoxKey public immutable lootBoxKey;
    ILootBoxFund public immutable lootBoxFund;
    IVRFCoordinatorV2Interface public immutable linkCoordinator;
    AggregatorV3Interface public immutable linkFeed;

    mapping(uint256 => Box) public boxByBoxId;
    mapping(uint256 => RandomInfo) public randomInfoByRequestId;
    mapping(address => uint256) public balanceByAddress;
    uint256 public latestLootBoxId;
    uint256 public totalPlatformFee;
    Config public s_config;
    LinkConfig public l_config;

    event FundDeposited(address indexed userAddress, uint256 amount);
    event FundWithdrawn(address indexed userAddress, uint256 amount);
    event FeeWithdrawn(address indexed userAddress, uint256 amount);
    event BoxCreated(uint256 indexed boxid, address boxOwner, uint256 boxSize);
    event BoxCreatedForBoxOwner(
        uint256 indexed boxid,
        address boxOwner,
        uint256 boxSize,
        uint256 fees
    );
    event BoxMinted(
        uint256 indexed boxid,
        address receiver,
        uint256 amount,
        uint256 fees
    );
    event BoxOpened(
        uint256 indexed requestId,
        address indexed user,
        uint256 boxId,
        uint256 amount,
        uint256 fees
    );
    event RandomFulfilled(uint256 indexed _requestId, uint256[] randomWord);

    error InvalidItem(uint256 boxItem, string reason);

    /**
     * @dev Setup contract params and interface.
     * Setup role for deployer.
     * @param  _lootBoxKey - loot box burnable erc1155.
     * @param  _lootBoxFund - loot box token circulation contract.
     * @param  _linkCoordinator - chainlink vrf coordinator address.
     * @param  _linkFeed - chainlink datafeed address.
     */
    constructor(
        address _lootBoxKey,
        address _lootBoxFund,
        address _linkCoordinator,
        address _linkFeed
    ) VRFConsumerBaseV2(_linkCoordinator) {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(WORKER, msg.sender);

        lootBoxKey = ILootBoxKey(_lootBoxKey);
        lootBoxFund = ILootBoxFund(_lootBoxFund);
        linkCoordinator = IVRFCoordinatorV2Interface(_linkCoordinator);
        linkFeed = AggregatorV3Interface(_linkFeed);
    }

    /**
     * @dev Revert receive and fallback functions.
     */
    receive() external payable {
        revert("[LootBoxService] Revert receive function");
    }

    fallback() external payable {
        revert("[LootBoxService] Revert fallback function");
    }

    /**
     * @dev Set contract into pause state.
     */
    function pauseLootBoxService() external onlyOwner {
        _pause();
    }

    /**
     * @dev Set contract back to normal state.
     */
    function unpauseLootBoxService() external onlyOwner {
        _unpause();
    }

    /**
     * @dev Set chainlink related params.
     */
    function setChainlinkConfig(
        bytes32 _keyHash,
        uint64 _subscriptionId,
        uint32 _callbackGasLimit,
        uint16 _requestConfirmations
    ) external onlyOwner {
        l_config = LinkConfig(
            _keyHash,
            _subscriptionId,
            _callbackGasLimit,
            _requestConfirmations
        );
    }

    /**
     * @dev Set loot box contract params.
     */
    function setLootBoxConfig(
        uint256 _processGas,
        uint256 _openBoxGas,
        uint256 _maxBoxOpenAmount,
        uint256 _maxBoxItemName,
        uint256 _platformPercentFee,
        uint256 _swapPercentFee
    ) external onlyOwner {
        s_config = Config(
            _processGas,
            _openBoxGas,
            _maxBoxOpenAmount,
            _maxBoxItemName,
            _platformPercentFee,
            _swapPercentFee
        );
    }

    /**
     * @dev Get chainlink related params.
     */
    function getChainlinkConfig()
        external
        view
        returns (
            bytes32 keyHash,
            uint64 subscriptionId,
            uint32 callbackGasLimit,
            uint16 requestConfirmations
        )
    {
        keyHash = l_config.keyHash;
        subscriptionId = l_config.subscriptionId;
        callbackGasLimit = l_config.callbackGasLimit;
        requestConfirmations = l_config.requestConfirmations;
    }

    /**
     * @dev Get lootbox related params.
     */
    function getLootBoxConfig()
        external
        view
        returns (
            uint256 processGas,
            uint256 openBoxGas,
            uint256 maxBoxOpenAmount,
            uint256 maxBoxItemName,
            uint256 platformPercentFee,
            uint256 swapPercentFee
        )
    {
        processGas = s_config.processGas;
        openBoxGas = s_config.openBoxGas;
        maxBoxOpenAmount = s_config.maxBoxOpenAmount;
        maxBoxItemName = s_config.maxBoxItemName;
        platformPercentFee = s_config.platformPercentFee;
        swapPercentFee = s_config.swapPercentFee;
    }

    /**
     * @dev Get user balance on contract.
     * @param _userAddress - address of user to check balance.
     */
    function getBalance(address _userAddress) external view returns (uint256) {
        return balanceByAddress[_userAddress];
    }

    /**
     * @dev Deposit amount from users to boxOwner address.
     * @param _address - address to deposit fund.
     */
    function depositFund(address _address) external payable whenNotPaused {
        balanceByAddress[_address] += msg.value;

        emit FundDeposited(_address, msg.value);
    }

    /**
     * @dev  boxOwner withdraw balance from contract.
     * @param _amount - amount to be withdraw.
     */
    function withdrawFund(uint256 _amount) external nonReentrant {
        require(
            balanceByAddress[msg.sender] >= _amount,
            "[LootBoxService.withdrawFund] Invaild withdraw amount"
        );
        balanceByAddress[msg.sender] -= _amount;

        (bool success, ) = payable(msg.sender).call{value: _amount}("");
        require(success, "[LootBoxService.withdrawFund] Failed to send fund");

        emit FundWithdrawn(msg.sender, _amount);
    }

    /**
     * @dev Worker withdraw fees from contract.
     * @param _amount - amount to be withdraw.
     */
    function withdrawFees(uint256 _amount) external onlyRole(WORKER) {
        require(
            totalPlatformFee >= _amount,
            "[LootBoxService.withdrawFees] Invaild withdraw amount"
        );
        totalPlatformFee = 0;

        (bool success, ) = payable(msg.sender).call{value: _amount}("");
        require(success, "[LootBoxService.withdrawFees] Failed to send fees");

        emit FeeWithdrawn(msg.sender, _amount);
    }

    /**
     * @dev Function for user to use loot boxes to get result items.
     * @param _boxId -  box id to be opened.
     * @param _amount -  amount of box to be opened.
     */
    function openBox(uint256 _boxId, uint32 _amount) external nonReentrant {
        address boxOwner = boxByBoxId[_boxId].boxOwner;
        require(
            boxOwner != address(0),
            "[LootBoxService.openBox] Invaild box id"
        );
        require(
            _amount != 0 && _amount <= s_config.maxBoxOpenAmount,
            "[LootBoxService.openBox] Invaild amount"
        );
        require(
            _amount <= lootBoxKey.balanceOf(msg.sender, _boxId),
            "[LootBoxService.openBox] Insufficient loot box key"
        );
        require(
            lootBoxKey.isApprovedForAll(msg.sender, address(this)),
            "[LootBoxService.openBox] Invaild loot box key approval"
        );

        lootBoxKey.burn(msg.sender, _boxId, _amount);

        uint256 requestId = linkCoordinator.requestRandomWords(
            l_config.keyHash,
            l_config.subscriptionId,
            l_config.requestConfirmations,
            l_config.callbackGasLimit,
            _amount
        );

        RandomInfo storage randomInfo = randomInfoByRequestId[requestId];
        randomInfo.user = msg.sender;
        randomInfo.boxId = _boxId;

        uint256 baseFee = _calculateBaseFee();
        uint256 swapFee = (baseFee * s_config.swapPercentFee) / 1e6;
        uint256 platformFee = (baseFee * s_config.platformPercentFee) / 1e6;
        uint256 totalFee = baseFee + swapFee + platformFee;

        require(
            balanceByAddress[boxOwner] >= totalFee,
            "[LootBoxService.openBox] Insufficient balance amount"
        );

        balanceByAddress[boxOwner] -= totalFee;
        totalPlatformFee += platformFee;
        lootBoxFund.swapInAndTopUp{value: baseFee + swapFee}();

        emit BoxOpened(requestId, msg.sender, _boxId, _amount, totalFee);
    }

    /**
     * @dev Function for boxOwner to createBox.
     * @param _boxItems - array of items that will be in the box with items name and probability.
     */
    function createBox(BoxItem[] calldata _boxItems) external whenNotPaused {
       _verifyAndCreateBox(_boxItems, msg.sender);

        emit BoxCreated(latestLootBoxId, msg.sender, _boxItems.length);
    }

    /**
     * @dev Function for worker to createBox for project owner.
     * @param _boxItems - array of items that will be in the box with items name and probability.
     * @param _boxOwner - address of project owner whow will be box owner.
     */
    function createBoxForBoxOwner(
        BoxItem[] calldata _boxItems,
        address _boxOwner
    ) external whenNotPaused onlyRole(WORKER) {
        uint256 startgas = gasleft();
        _verifyAndCreateBox(_boxItems, _boxOwner);

        uint256 cost = ((startgas - gasleft()) + s_config.processGas) *
            tx.gasprice;

        require(
            balanceByAddress[_boxOwner] >= cost,
            "[LootBoxService.createBox] Insufficient balance amount"
        );

        balanceByAddress[_boxOwner] -= cost;
        totalPlatformFee += cost;

        emit BoxCreatedForBoxOwner(latestLootBoxId, msg.sender, _boxItems.length, cost);
    }

    /**
     * @dev Function for boxOwner to mintBoxKey.
     * @param _boxId -  box id to be minted.
     * @param _address -  receiver of the minted box.
     * @param _amount -  amount of box to be minted.
     */
    function mintBoxKey(
        uint256 _boxId,
        address _address,
        uint256 _amount
    ) external whenNotPaused onlyRole(WORKER) {
        uint256 startgas = gasleft();
        address boxOwner = boxByBoxId[_boxId].boxOwner;
        require(
            boxOwner != address(0),
            "[LootBoxService.mintBoxKey] Invaild box id"
        );

        lootBoxKey.mint(_address, _boxId, _amount);

        uint256 cost = (startgas - gasleft() + s_config.processGas) *
            tx.gasprice;
        require(
            balanceByAddress[boxOwner] >= cost,
            "[LootBoxService.mintBoxKey] Insufficient balance amount"
        );

        balanceByAddress[boxOwner] -= cost;
        totalPlatformFee += cost;

        emit BoxMinted(_boxId, _address, _amount, cost);
    }

    /**
     * @dev Function for user to view the result from opening the lootbox.
     * @param _requestId - request id that user get from open box.
     */
    function getLootBoxItemFromRequestId(
        uint256 _requestId
    ) public view returns (uint256 boxId, BoxItemId[] memory itemsList) {
        RandomInfo storage randomInfo = randomInfoByRequestId[_requestId];
        Box storage box = boxByBoxId[randomInfo.boxId];
        itemsList = new BoxItemId[](randomInfo.randomWords.length);
        boxId = randomInfo.boxId;
        for (uint256 i = 0; i < randomInfo.randomWords.length; i++) {
            uint256 currentProb = 0;
            uint256 probability = randomInfo.randomWords[i] %
                (MAXPROBABILITY + 1e8);
            uint256 itemSize = 0;
            for (uint256 j = 0; j < box.boxSize; j++) {
                currentProb += box.boxItemById[j].probability;

                if (itemSize == 0) {
                    if (probability <= currentProb) {
                        itemsList[i].itemId = j;
                        itemsList[i].itemName = box.boxItemById[j].itemName;
                        itemsList[i].probability = box
                            .boxItemById[j]
                            .probability;
                        break;
                    }
                }
            }
        }
    }

    /**
     * @dev Function for user to view the item in the boxs.
     * @param _boxId - box id that get item lists.
     */
    function getLootBoxItemList(
        uint256 _boxId
    ) public view returns (BoxItem[] memory boxItemList) {
        Box storage box = boxByBoxId[_boxId];
        boxItemList = new BoxItem[](box.boxSize);

        for (uint256 i = 0; i < box.boxSize; i++) {
            boxItemList[i] = box.boxItemById[i];
        }
    }

    /**
     * @dev Function for user to view random information.
     * @param _requestId - request id to get randominformation from chainlink.
     */
    function getRandomInfo(
        uint256 _requestId
    ) public view returns (RandomInfo memory randomInfoList) {
        RandomInfo storage randomInfo = randomInfoByRequestId[_requestId];

        randomInfoList.user = randomInfo.user;
        randomInfoList.boxId = randomInfo.boxId;
        randomInfoList.randomWords = randomInfo.randomWords;
    }

    /**
     * @dev Function for contract to get weiPerUnitLink.
     * @param _stalenessSeconds - stalenessSeconds to calculate time passes by.
     */
    function _getFeedData(
        uint32 _stalenessSeconds
    ) internal view returns (int256) {
        bool staleFallback = _stalenessSeconds > 0;
        uint256 timestamp;
        int256 weiPerUnitLink;
        (, weiPerUnitLink, , timestamp, ) = linkFeed.latestRoundData();

        if (staleFallback && _stalenessSeconds < block.timestamp - timestamp) {
            int256 fallbackWeiPerUnitLink = linkCoordinator
                .getFallbackWeiPerUnitLink();
            weiPerUnitLink = fallbackWeiPerUnitLink;
        }
        return weiPerUnitLink;
    }

    /**
     * @dev Function for contract to calculate fees for open box.
     */
    function _calculateBaseFee() internal view returns (uint256) {
        (
            ,
            ,
            uint32 stalenessSeconds,
            uint32 gasAfterPaymentcalculation
        ) = linkCoordinator.getConfig();

        (, uint64 requestCount, , ) = linkCoordinator.getSubscription(
            l_config.subscriptionId
        );
        uint32 chainlinkFeeTier = linkCoordinator.getFeeTier(requestCount);
        int256 weiPerUnitLink = _getFeedData(stalenessSeconds);

        return (((s_config.openBoxGas + gasAfterPaymentcalculation) *
            tx.gasprice) +
            ((chainlinkFeeTier * uint256(weiPerUnitLink))) /
            1e6);
    }

    function _verifyAndCreateBox(BoxItem[] calldata _boxItems, address _boxOwner) internal {
        require(
            _boxItems.length != 0,
            "[LootBoxService.createBox] Invaild box items amount"
        );

        uint256 currentProbability;
        uint256 totalProbability;

        Box storage box = boxByBoxId[++latestLootBoxId];
        uint256 length = _boxItems.length;
        box.boxId = latestLootBoxId;
        box.boxOwner = _boxOwner;

        for (uint256 i = 0; i < length; i++) {
            if (_boxItems[i].probability < currentProbability) {
                revert InvalidItem(i, "Invalid probability");
            }

            if (bytes(_boxItems[i].itemName).length > s_config.maxBoxItemName) {
                revert InvalidItem(i, "Invalid box item name");
            }

            currentProbability = _boxItems[i].probability;
            totalProbability += _boxItems[i].probability;

            box.boxItemById[i].itemName = _boxItems[i].itemName;
            box.boxItemById[i].probability = _boxItems[i].probability;
        }
        require(
            totalProbability == MAXPROBABILITY,
            "[LootBoxService.createBox] Invaild total probability"
        );
        box.boxSize = length;
    }

    /**
     * @dev Calculate random result, update random info, update gachapon index.
     * @param _requestId - random request id.
     * @param _randomWords - random words from chainlink vrf.
     */
    function fulfillRandomWords(
        uint256 _requestId,
        uint256[] memory _randomWords
    ) internal override {
        randomInfoByRequestId[_requestId].randomWords = _randomWords;

        emit RandomFulfilled(_requestId, _randomWords);
    }
}

