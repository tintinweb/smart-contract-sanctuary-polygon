pragma solidity ^0.8.8;

/// -----------------------------------------------------------------------
/// ---------------------------IMPORTS-------------------------------------
/// -----------------------------------------------------------------------


import "@upgradeable/contracts/token/ERC1155/extensions/ERC1155URIStorageUpgradeable.sol";
import "@upgradeable/contracts/access/OwnableUpgradeable.sol";
import "@upgradeable/contracts/security/ReentrancyGuardUpgradeable.sol";
import "@upgradeable/contracts/utils/StringsUpgradeable.sol";

// import "./interface/ISFTRec.sol";

contract SFTInsignia is ERC1155URIStorageUpgradeable, 
OwnableUpgradeable,
ReentrancyGuardUpgradeable{

/// -----------------------------------------------------------------------
/// -----------------------------EVENTS------------------------------------
/// -----------------------------------------------------------------------

event newCTF(address indexed _ctf, uint256 indexed _difficulty);


/// -----------------------------------------------------------------------
/// -----------------------------STORAGE-----------------------------------
/// -----------------------------------------------------------------------


uint256 public currentId;
address _core;

mapping(address => uint256) public userLevel;
mapping(address => mapping(address => bool)) public userCTF;
mapping(address => uint256) public levelDifficulty;



/// -----------------------------------------------------------------------
/// -------------------------CONSTRUCTOR-----------------------------------
/// -----------------------------------------------------------------------

    constructor(){
        _disableInitializers();
    }

/// -----------------------------------------------------------------------
/// --------------------------MODIFIER-------------------------------------
/// -----------------------------------------------------------------------

modifier checkEOA() {
    require(msg.sender == tx.origin, "Insignia SFT : No contract calls here");
    _;
}


/// -----------------------------------------------------------------------
/// --------------------------INITIALIZE-----------------------------------
/// -----------------------------------------------------------------------

    function initialize(
        string memory _collectionName,
        address __core
    )external initializer{
        __ERC1155_init(_collectionName);
        __ReentrancyGuard_init();
        __Ownable_init();
        _core = __core;
    }

/// -----------------------------------------------------------------------
/// ----------------------INSIGNIA FUNCTIONS-------------------------------
/// -----------------------------------------------------------------------

    function CTF(address _ctf) public checkEOA() returns (uint256 _score) {
        require(levelDifficulty[_ctf] > 0, "Insignia SFT : This is not a CTF accepted by this protocol");

        (bool _success, bytes memory _answer) = _ctf.call(abi.encodeWithSignature("checkConclusion(address)", msg.sender));
        require(_success, "Insignia SFT : Check the contract address again, please");

        _score = bytesToUint(_answer);
        if(_score > 0 && !userCTF[msg.sender][_ctf]){
            userLevel[msg.sender] += _score * levelDifficulty[_ctf];
            userCTF[msg.sender][_ctf] = true;
        }
    }



/// -----------------------------------------------------------------------
/// ----------------------OZ UUPS REQUIREMENT------------------------------
/// -----------------------------------------------------------------------

    // function _authorizeUpgrade(address) internal override onlyOwner {}

/// -----------------------------------------------------------------------
/// ------------------------SET BASE FUNCTIONS-----------------------------
/// -----------------------------------------------------------------------

    function setURI(uint _tokenId, string memory _tokenURI) public onlyOwner{
        _setURI(_tokenId, _tokenURI);
    }

    function setBaseUri(string memory _baseURI) public onlyOwner{
        _setBaseURI(_baseURI);
        _setURI(_baseURI);
    }


/// -----------------------------------------------------------------------
/// ---------------------------SET FUNCTIONS-------------------------------
/// -----------------------------------------------------------------------

    function setCTF(address _ctf, uint256 _difficulty) public onlyOwner {
        require(levelDifficulty[_ctf] == 0, "Insignia SFT : CTF already set");

        levelDifficulty[_ctf] = _difficulty;

        emit newCTF(_ctf, _difficulty);
    }

/// -----------------------------------------------------------------------
/// ---------------------------GET FUNCTIONS-------------------------------
/// -----------------------------------------------------------------------

    function getLevel(address _user) public view returns(uint256){
        return userLevel[_user];
    }

    function getDifficulty(address _ctf) public view returns(uint256){
        return levelDifficulty[_ctf];
    }

    function getAlreadyDone(address _user, address _ctf) public view returns(bool){
        return userCTF[_user][_ctf];
    }

/// -----------------------------------------------------------------------
/// ----------------------INTERNAL FUNCTIONS-------------------------------
/// -----------------------------------------------------------------------

function bytesToUint(bytes memory b) internal pure returns (uint256){
        uint256 number;
        for(uint i=0;i<b.length;i++){
            number = number + uint(uint8(b[i]))*(2**(8*(b.length-(i+1))));
        }
        return number;
    }

}

