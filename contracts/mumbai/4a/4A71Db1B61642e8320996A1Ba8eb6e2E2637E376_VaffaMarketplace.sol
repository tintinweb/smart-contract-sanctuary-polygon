        uint256 tokenAmount
    ) external onlyOwner {
        IERC20(tokenAddress).safeTransfer(msg.sender, tokenAmount);
        emit AdminTokenRecovery(tokenAddress, tokenAmount);
    }

    /// @dev Wthdraw wrong token erc-20 from contract
    /// @param nftAddress - address of wrong erc-721 token
    /// @param tokenId - id of NFT in platform

    function recoverWrongNfts(
        address nftAddress,
        uint256 tokenId
    ) external onlyOwner {
        uint256 offerId = nftTokenOfferId[nftAddress][tokenId];
        require(isOfferExist(offerId), "Offer does not exist.");
        delete offers[offerId];
        delete nftTokenOfferId[nftAddress][tokenId];
        IERC721(nftAddress).safeTransferFrom(
            address(this),
            msg.sender,
            tokenId
        );
        emit AdminNftRecovery(nftAddress, tokenId);
    }

    /// @dev Withdraw ETH from contract

    function withdrawNativeToken() public payable nonReentrant onlyOwner {
        uint256 amount = address(this).balance;
        address owner = owner();
        require(amount > 0, "Balance is zero.");
        (bool sent, ) = payable(owner).call{value: amount}("");
        require(sent, "Failed to send Native token.");
        emit AdminWithdraw(owner, amount);
    }

    /// @dev Subtract and transfer percentage from user action
    /// @param tokenAddress - address of the token that will be paid as a fee.
    /// @param value - amount of full price.

    function _topUpFee(address tokenAddress, uint256 value) internal {
        uint256 amount = _calculatePart(value);

        if (address(tokenAddress) != address(0)) {
            IERC20(tokenAddress).safeTransferFrom(
                msg.sender,
                fundsRecipient,
                amount
            );
            totalFundsCollectedToken[tokenAddress] += amount;
        } else {
            (bool sent, ) = payable(fundsRecipient).call{value: amount}("");
            require(sent, "Failed to send Native token.");
            totalFundsCollectedNative += amount;
        }
    }

    /// @dev Calculate the percentage of a fee
    /// @param value - full amount.

    function _calculatePart(uint256 value) internal view returns (uint256) {
        return (value * listingFee) / 10000;
    }

    /// @dev Get fee of listing

    function getListingFee() public view returns (uint16) {
        return listingFee;
    }

    /// @dev Edit fee of listing

    function updateListingFee(uint16 fee) public onlyOwner {
        require(fee <= 10000, "The percentage cannot get over 100%.");
        listingFee = fee;
        emit UpdateFee(listingFee);
    }

    /// @dev Edit address of fee recipient
    /// @param newFundsRecipient -  address of fee recipient

    function updateFundsAddress(address newFundsRecipient) public onlyOwner {
        fundsRecipient = payable(newFundsRecipient);
        emit UpdateRecipient(fundsRecipient);
    }

