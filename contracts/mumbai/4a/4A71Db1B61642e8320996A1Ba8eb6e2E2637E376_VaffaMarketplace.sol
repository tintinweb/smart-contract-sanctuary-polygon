import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

contract VaffaMarketplace is IERC721Receiver, ReentrancyGuard, Ownable {
    using SafeERC20 for IERC20;
    using Counters for Counters.Counter;
    using EnumerableSet for EnumerableSet.AddressSet;

    EnumerableSet.AddressSet private whitelistedTokens; // addresses of supported tokens
    EnumerableSet.AddressSet private whitelistedNFTs; // addresses of supported NFTs platforms

    address payable public fundsRecipient; // address of fee recipient
    Counters.Counter public itemsCounter; // counter of offerid
    Counters.Counter public itemsSold; // counter of sold NFT
    uint256 public totalFundsCollectedNative; // the amount of payments for the purchase of NFT through ETH
    uint16 public listingFee; // 1% = 100;

    struct OfferData {
        uint32 offerTimestamp;
        address nftTokenAddress;
        address saleToken;
        address creator;
        uint256 tokenId;
        uint256 price;
    }

    struct ProposalData {
        uint256 tokenId;
        uint256 price;
        address buyer;
        uint32 time;
        address proposedToken;
    }

    mapping(address => uint256) public totalFundsCollectedToken; // the amount of payments for the purchase of NFT through token ERC20
    mapping(uint256 => OfferData) public offers; // list of information about each offer
    mapping(address => mapping(uint256 => uint256)) public nftTokenOfferId; // list of NFTs that have been offered for sale
    mapping(uint256 => mapping(address => ProposalData)) public proposalsList; // list of proposals for NFT purchases
    mapping(uint256 => address[]) public proposalsForItem; // list of proposals address for each offer id

    event NftListed(
        uint256 indexed offerId,
        uint256 indexed tokenId,
        address indexed nftTokenAddress,
        address saleToken,
        address seller,
        uint256 price,
        uint32 offerTimestamp
    );
    event EditOffer(uint256 offerId, uint256 price, address saleToken);
    event Purchased(
        address indexed buyer,
        uint256 indexed offerId,
        uint256 indexed tokenId,
        uint256 price,
        address seller
    );
    event Proposed(
        address indexed buyer,
        uint256 indexed offerId,
        address indexed proposedToken,
        uint256 price,
        uint32 time
    );
    event AcceptedProposal(
        address indexed buyer,
        uint256 indexed offerId,
        address indexed proposedToken,
        address seller,
        uint256 price
    );
    event OfferCanceled(address seller, uint256 indexed offerId);
    event AddedERC20Token(address tokenAddress);
    event AddedNFTToken(address nftAddress);
    event RemovedERC20Token(address tokenAddress);
    event RemovedNFTToken(address nftAddress);
    event AdminTokenRecovery(address tokenAddress, uint256 tokenAmount);
    event AdminNftRecovery(address nftAddress, uint256 tokenId);
    event AdminWithdraw(address owner, uint256 amount);
    event UpdateFee(uint16 mewFee);
    event UpdateRecipient(address newRecipient);

    /// @dev constructor

    constructor() {
        whitelistedTokens.add(address(0));
    }

    receive() external payable {}

    fallback() external payable {}

    /// @dev list NFTs for sale
    /// @param nftAddress - address of NFT platform
    /// @param tokenId - id of NFT in platform
    /// @param price - price for offer
    /// @param saleToken - payment address NFT

    function list(
        address nftAddress,
        uint256 tokenId,
        uint256 price,
        address saleToken
    ) external {
        require(isSupportNFT(nftAddress), "This token cannot be listed.");
        require(isSupportToken(saleToken), "Cannot be sold for this token.");

        itemsCounter.increment();

        uint256 offerId = itemsCounter.current();

        offers[offerId] = OfferData(
            uint32(block.timestamp),
            nftAddress,
            saleToken,
            msg.sender,
            tokenId,
            price
        );

        nftTokenOfferId[nftAddress][tokenId] = offerId;

        IERC721(nftAddress).safeTransferFrom(
            msg.sender,
            address(this),
            tokenId
        );

        emit NftListed(
            offerId,
            tokenId,
            nftAddress,
            saleToken,
            msg.sender,
            price,
            uint32(block.timestamp)
        );
    }

    /// @dev edit offer function to edit the specified offer
    /// @param offerId - id of the created offer
    /// @param price - new price for offer
    /// @param saleToken - new token address for which will be sold

    function editOffer(
        uint256 offerId,
        uint256 price,
        address saleToken
    ) external {
        require(isOfferExist(offerId), "Offer does not exist.");
        OfferData memory offer = getOfferInfo(offerId);
        require(msg.sender == offer.creator, "Not creator of offer");

        if (offer.price != price) {
            require(price > 0, "Price should be positive");
            offers[offerId].price = price;
        }
        if (offer.saleToken != saleToken) {
            require(
                isSupportToken(saleToken),
                "Cannot be sold for this token."
            );
            offers[offerId].saleToken = saleToken;
        }

        emit EditOffer(offerId, price, saleToken);
    }

    /// @dev purchase created offer
    /// @notice Function for buying a certain offer
    /// @param offerId - id of the offer

    function purchase(uint256 offerId) external payable nonReentrant {
        require(isOfferExist(offerId), "Offer does not exist.");
        OfferData memory offer = getOfferInfo(offerId);
        delete offers[offerId];
        require(offer.creator != msg.sender, "You are owner of the offer.");
        itemsSold.increment();
        delete nftTokenOfferId[offer.nftTokenAddress][offer.tokenId];

        if (offer.saleToken == address(0)) {
            require(offer.price == msg.value, "Value is not equal to price.");
            _topUpFee(offer.saleToken, offer.price);

            (bool sent, ) = payable(offer.creator).call{
                value: msg.value - _calculatePart(offer.price)
            }("");
            require(sent, "Failed to send Ether");
        } else {
            require(msg.value == 0, "Unnecessary transfer of Ether.");

            _topUpFee(offer.saleToken, offer.price);
            IERC20(offer.saleToken).safeTransferFrom(
                msg.sender,
                offer.creator,
                offer.price - _calculatePart(offer.price)
            );
        }

        IERC721(offer.nftTokenAddress).safeTransferFrom(
            address(this),
            msg.sender,
            offer.tokenId,
            bytes("")
        );

        emit Purchased(
            msg.sender,
            offerId,
            offer.tokenId,
            offer.price,
            offer.creator
        );
    }

    /// @dev create a purchase propose
    /// @param offerId - id of the created offer
    /// @param price - price for offer
    /// @param time - proposed duration
    /// @param proposedToken - proposed token for buying

    function proposal(
        uint256 offerId,
        uint256 price,
        uint32 time,
        address proposedToken
    ) external {
        require(isOfferExist(offerId), "Offer does not exist.");
        require(proposedToken != address(0), "Unsupported ETH.");
        require(whitelistedTokens.contains(proposedToken), "Unsupported token.");
        require(
            IERC20(proposedToken).allowance(msg.sender, address(this)) == price,
            "Not enough money."
        );

        proposalsForItem[offerId].push(msg.sender);

        proposalsList[offerId][msg.sender] = ProposalData(
            offerId,
            price,
            msg.sender,
            uint32(block.timestamp) + time,
            proposedToken
        );

        emit Proposed(msg.sender, offerId, proposedToken, price, time);
    }

    /// @dev accept a purchase propose
    /// @param offerId - id of the created offer
    /// @param buyer - buyer's address

    function acceptProposal(uint256 offerId, address buyer) external {
        require(isOfferExist(offerId), "Offer does not exist.");
        OfferData memory offer = getOfferInfo(offerId);
        delete offers[offerId];
        require(msg.sender == offer.creator, "Not creator of offer.");
        ProposalData memory proposalInfo = proposalsList[offerId][buyer];
        require(proposalInfo.time > block.timestamp, "Proposal time is over.");
        itemsSold.increment();
        delete nftTokenOfferId[offer.nftTokenAddress][offer.tokenId];
        delete proposalsForItem[offerId];
        uint256 listingAmount = _calculatePart(proposalInfo.price);

        IERC20(proposalInfo.proposedToken).safeTransferFrom(
            buyer,
            offer.creator,
            proposalInfo.price - listingAmount
        );

        IERC20(proposalInfo.proposedToken).safeTransferFrom(
            buyer,
            fundsRecipient,
            listingAmount
        );

        IERC721(offer.nftTokenAddress).safeTransferFrom(
            address(this),
            proposalInfo.buyer,
            proposalInfo.tokenId,
            bytes("")
        );

        emit AcceptedProposal(buyer, offerId, proposalInfo.proposedToken, msg.sender, proposalInfo.price);
    }

    /// @dev cancel created offer
    /// @param offerId - offer id

    function cancel(uint256 offerId) external {
        require(isOfferExist(offerId), "Offer does not exist.");
        OfferData memory offer = getOfferInfo(offerId);
        require(offer.creator == msg.sender, "You are not owner of the offer.");

        delete offers[offerId];
        delete nftTokenOfferId[offer.nftTokenAddress][offer.tokenId];
        IERC721(offer.nftTokenAddress).safeTransferFrom(
            address(this),
            msg.sender,
            offer.tokenId
        );

        emit OfferCanceled(msg.sender, offerId);
    }

