import {ISwapRouterV3} from "contracts/interfaces/ISwapRouter.sol";

contract CrepeSwap is AccessControl, ReentrancyGuard {
    using SafeERC20 for IERC20;

    event Mint(
        address acceptedToken,
        uint256 amount,
        uint256 amountCrepe,
        uint256 tax
    );
    event IncludeToken(address token);
    event ExcludeToken(address token);
    event FeeChanged(string feeType, uint256 fee);

    address private _trustedForwarder;
    uint256 public constant PRECISION = 1e6;
    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    bytes32 public constant SERVICE_ROLE = keccak256("SERVICE_ROLE");

    address payable public WETH;
    address public immutable CRUS;
    address public immutable CREPE;
    address public immutable USDC;

    uint256 private _feeMint;

    address private _masterWallet; // the address of USDC vault
    address private _operationWallet; // the address to which the commission is sent (USD)

    uint256 public usdcForCrepe;
    mapping(address => uint256) public mapTokenDecimals;

    ISwapRouterV3 internal _uniswapRouter;
    IQuoter internal _uniswapQuoter;
    uint256 _decimalCRUS;
    uint256 _decimalUSDC;

    constructor(
        address usdc,
        address crus,
        address crepe,
        address payable weth,
        uint256 crepeRate,
        uint256 feeMint,
        address[2] memory wallets,
        address uniswapRouter,
        address uniswapQuoter,
        address forwarder
    ) {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(ADMIN_ROLE, msg.sender);
        _setRoleAdmin(SERVICE_ROLE, ADMIN_ROLE);

        mapTokenDecimals[weth] = IERC20Metadata(weth).decimals();
        mapTokenDecimals[crus] = IERC20Metadata(crus).decimals();
        mapTokenDecimals[usdc] = IERC20Metadata(usdc).decimals();
        mapTokenDecimals[crepe] = IERC20Metadata(crus).decimals();

        WETH = weth;
        CRUS = crus;
        USDC = usdc;
        CREPE = crepe;

        _feeMint = feeMint;

        _trustedForwarder = forwarder;
        _masterWallet = wallets[0];
        _operationWallet = wallets[1];
        _uniswapRouter = ISwapRouterV3(uniswapRouter);
        _uniswapQuoter = IQuoter(uniswapQuoter);
        usdcForCrepe = crepeRate;
    }

    /**
     * @dev Is address a used trusted forwarder?
     * @param forwarder address for check
     */
    function isTrustedForwarder(
        address forwarder
    ) public view virtual returns (bool) {
        return forwarder == _trustedForwarder;
    }

    function setCrepeRate(
        uint256 rate
    ) external onlyRole(ADMIN_ROLE) {
        usdcForCrepe = rate;
        // emit IncludeToken(token, fee);
    }

    /**
     * @dev Add token to allowed in swap with USDC (only 1-hop swap)
     * @param token token address
     */
    function includeToken(
        address token
    ) external onlyRole(ADMIN_ROLE) {
        mapTokenDecimals[token] = IERC20Metadata(token).decimals();
        IERC20(token).approve(address(_uniswapRouter), type(uint256).max);
        emit IncludeToken(token);
    }

    /**
     * @dev Remove token from allowed
     * @param token token address
     */
    function excludeToken(address token) external onlyRole(ADMIN_ROLE) {
        mapTokenDecimals[token] = 0;
        emit ExcludeToken(token);
    }

    /**
     * @dev Set fee for mint
     * @param fee fee percentage (with precision decimals)
     */
    function setFeeMint(uint256 fee) external onlyRole(ADMIN_ROLE) {
        _feeMint = fee;
        emit FeeChanged("Mint", fee);
    }

    function buyCrepe(address token, uint256 amount) external {
        require(amount > 0, "ZeroAmount");
        require(mapTokenDecimals[token] > 0, "The token is not included in the whitelist");
        (uint256 amountTransfer, uint256 tax) = _subtractPercentage(
            amount,
            _feeMint
        );
        IERC20(token).safeTransferFrom(_msgSender(), _operationWallet, tax);
        IERC20(token).safeTransferFrom(_msgSender(), _masterWallet, amountTransfer);
        uint256 amountCrepe = amountTransfer * PRECISION * 10**mapTokenDecimals[CREPE] / usdcForCrepe / 10**mapTokenDecimals[token];
        IERC20(CREPE).safeTransferFrom(_masterWallet, _msgSender(), amountCrepe);
    }

    function buyCrepeETH(uint256 minAmount) external payable nonReentrant {
        require(msg.value > 0, "ZeroAmount");
        (uint256 amountTransfer, uint256 tax) = _subtractPercentage(
            msg.value,
            _feeMint
        );
        uint256 amountUSDC = _uniswapQuoter.quoteExactInputSingle(
            WETH,
            USDC,
            500,
            amountTransfer,
            0
        );
        uint256 amountCrepe = amountUSDC * PRECISION * 1e12 / usdcForCrepe;
        require(amountCrepe >= minAmount, "Too little received");
        (bool sent, ) = _masterWallet.call{value: amountTransfer}("");
        require(sent, "Failed to send Ether");
        (sent, ) = _operationWallet.call{value: tax}("");
        require(sent, "Failed to send Ether");
        IERC20(CREPE).transferFrom(_masterWallet, _msgSender(), amountCrepe);
    }

    function getAmountCREPE(
        uint256 amountMatic
    ) external returns (uint256 amountOut) {
        uint256 amountUSDC = _uniswapQuoter.quoteExactInputSingle(
            WETH,
            USDC,
            500,
            amountMatic,
            0
        );
        amountOut = amountUSDC * 1e12;
    }

    function _subtractPercentage(
        uint256 amount,
        uint256 percent
    ) internal pure returns (uint256 remains, uint256 share) {
        share = _calcPercent(amount, percent);
        return (amount - share, share);
    }

    function _calcPercent(
        uint256 amount,
        uint256 percent
    ) internal pure returns (uint256 share) {
        return ((amount * percent) / (PRECISION * 100));
    }

    function _msgSender()
        internal
        view
        virtual
        override
        returns (address sender)
    {
        if (isTrustedForwarder(msg.sender)) {
            // The assembly code is more direct than the Solidity version using `abi.decode`.
            /// @solidity memory-safe-assembly
            assembly {
                sender := shr(96, calldataload(sub(calldatasize(), 20)))
            }
        } else {
            return super._msgSender();
        }
    }

    function _msgData()
        internal
        view
        virtual
        override
        returns (bytes calldata)
    {
        if (isTrustedForwarder(msg.sender)) {
            return msg.data[:msg.data.length - 20];
        } else {
            return super._msgData();
        }
    }
}

