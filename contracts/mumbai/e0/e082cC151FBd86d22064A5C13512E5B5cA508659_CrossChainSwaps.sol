                tradeOfferHash: trade.tradeOfferHash,
                offeringAssets: trade.offeringAssets,
                considerationAssets: trade.considerationAssets,
                seller: trade.seller,
                buyer: trade.buyer,
                status: Status.SUCCESS,
                sellerWithdraw: false,
                buyerWithdraw: false
            });

