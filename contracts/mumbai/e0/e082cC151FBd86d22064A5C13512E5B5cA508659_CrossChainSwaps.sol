        bool _status = getNonce(_offer.owner, _offer.nonce);
        if (_status) {
            revert SwapError(SwapErrorCodes.INVALID_NONCE);
        }

        if (
            _offer.primaryChainId != wormholeChainId ||
            _offer.secondaryChainId != targetChainId
        ) {
            revert SwapError(SwapErrorCodes.INVALID_EMMITER);
        }

        bytes32 tradeOfferHash = Encoder.hashTradeOffer(_offer);

        Trade memory trade = Trade({
            tradeOfferHash: tradeOfferHash,
            offeringAssets: _offer.offeringAssets.primaryChainAssets,
            considerationAssets: _offer.considerationAssets.primaryChainAssets,
            seller: _offer.owner,
            buyer: _msgSender(),
            status: Status.PENDING,
            sellerWithdraw: false,
            buyerWithdraw: false
        });

        // transfer the fees to admin
        if (_offer.fees.amount > 0)
            transferFees(_offer.fees, trade.seller, trade.buyer);

        (
            AssetType[] memory nftTypes,
            AssetType[] memory ftTypes
        ) = getAssetsTypes(trade.offeringAssets);

        // pull primary chain assets from offering assets
        receiveAssets(trade.offeringAssets, trade.seller, nftTypes, ftTypes);

        (nftTypes, ftTypes) = getAssetsTypes(trade.considerationAssets);

        // pull primary chain assets from consideration asstes
        receiveAssets(
            trade.considerationAssets,
            trade.buyer,
            nftTypes,
            ftTypes
        );

        // update nonce
        _setNonce(_offer.owner, _offer.nonce);

        // store trade data to storage corrsoponding to it's hash
        trades[tradeOfferHash] = trade;

        // send wormhole message
        sequence = sendWormholeMessage(
            Encoder.encodeTradeAcceptMessage(
                TradeAcceptMessage({
                    payloadType: PayloadType.PROCESS_TRADE,
                    tradeOfferHash: tradeOfferHash,
                    offeringAssets: _offer.offeringAssets.secondaryChainAssets,
                    considerationAssets: _offer
                        .considerationAssets
                        .secondaryChainAssets,
                    seller: trade.seller,
                    buyer: trade.buyer
                })
            )
        );

        emit TradeInitialized(tradeOfferHash, sequence);
    }

    function doAction(
        bytes memory encodedVm
    ) external whenNotPaused nonReentrant returns (uint64 sequence) {
        // wormhole sanity checks
        IWormhole.VM memory parsed = wormholeValidation(encodedVm);

        // get action type
        PayloadType payloadType = Encoder.getPayloadType(parsed.payload);

        if (payloadType == PayloadType.PROCESS_TRADE) {
            sequence = processTrade(parsed.payload);
        } else {
            sequence = completeTrade(parsed.payload);
        }
