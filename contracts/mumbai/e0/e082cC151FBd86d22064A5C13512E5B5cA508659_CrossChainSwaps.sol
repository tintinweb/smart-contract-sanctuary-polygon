    Assets primaryChainAssets;
    Assets secondaryChainAssets;
}

/// @dev Fees to be sent to admin
struct Fees {
    address to;
    address token;
    uint256 amount;
}

/// @dev Trade offer proposed by one of the user
struct TradeOffer {
    AssetsSet offeringAssets;
    AssetsSet considerationAssets;
    Fees fees;
    address owner;
    uint256 timePeriod;
    uint256 nonce;
    address tradeIntendedFor;
    uint256 primaryChainId; // wormhole chain Id
    uint256 secondaryChainId; // wormhole chain Id
}

/// @dev Actual trade data to be saved on chain
/// TODO - Optimise packing of bytes for lower gas
struct Trade {
    bytes32 tradeOfferHash; // used as uinque id. using hash because impossible to keep id's on multiple chains in sync
    Assets offeringAssets;
    Assets considerationAssets;
    address seller;
    address buyer;
    Status status;
    bool sellerWithdraw;
    bool buyerWithdraw;
}

