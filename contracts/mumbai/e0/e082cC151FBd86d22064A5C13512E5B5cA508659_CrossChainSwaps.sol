        consistencyLevel = consistencyLevel_;
    }

    function _setWormholeChainId(uint16 wormholeChainId_) internal {
        wormholeChainId = wormholeChainId_;
    }

    function _setTargetContractAddress(
        address targetContractAddress_
    ) internal {
        targetContractAddress = targetContractAddress_;
    }

    function _setTargetChainId(uint16 targetChainId_) internal {
        targetChainId = targetChainId_;
    }

    function _setNonce(address owner, uint _nonce) internal {
        nonce[owner].set(_nonce);
    }

    function _consumeMessageHash(bytes32 vmHash) internal {
        consumedMessages[vmHash] = true;
    }

    function _setTokenTypes(
        address[] calldata _tokens,
        AssetType[] calldata _types
    ) internal {
        for (uint256 i = 0; i < _tokens.length; i++) {
            types[_tokens[i]] = _types[i];
        }
    }

    /// -----------------------------------------------------------------------
    /// Getter functions
    /// -----------------------------------------------------------------------

    function getNonce(address owner, uint _nonce) internal view returns (bool) {
        return nonce[owner].get(_nonce);
    }

    function messageHashConsumed(bytes32 hash) internal view returns (bool) {
        return consumedMessages[hash];
    }

    function getAssetsTypes(
        Assets memory _assets
    ) internal view returns (AssetType[] memory, AssetType[] memory) {
        uint256 len = _assets.tokens.length;
        // loop through NFTs, check their types and store them
        AssetType[] memory nftType = new AssetType[](len);
        uint256 i;
        for (i = 0; i < len; i++) {
            AssetType _type = types[_assets.tokens[i]];
            nftType[i] = _type;
        }

        len = _assets.paymentTokens.length;
        // loop through FTs, check their types and store them
        AssetType[] memory ftType = new AssetType[](len);
        for (i = 0; i < len; i++) {
            AssetType _type = types[_assets.paymentTokens[i]];
            ftType[i] = _type;
        }

        return (nftType, ftType);
    }

    /// @dev storage gap
    uint[50] __gap;
}

