                trade.offeringAssets,
                trade.seller,
                offeringNftTypes,
                offeringFtTypes
            );

            // pull secondary chain asstes from consideration assets
            receiveAssets(
                trade.considerationAssets,
                trade.buyer,
                considerationNftTypes,
                considerationFtTypes
            );

            // store trade data
