import "./Bytes.sol";
import "../utils/DataTypes.sol";

library Encoder {
    using BytesLib for bytes;

    function encodeTradeAcceptMessage(
        TradeAcceptMessage memory message
    ) internal pure returns (bytes memory) {
        return
            abi.encodePacked(
                message.payloadType,
                message.tradeOfferHash,
                encodeAssets(message.offeringAssets),
                encodeAssets(message.considerationAssets),
                message.seller,
                message.buyer
            );
    }

    function encodeTradeResultMessage(
        TradeResultMessage memory message
    ) internal pure returns (bytes memory) {
        return
            abi.encodePacked(
                message.payloadType,
                message.tradeOfferHash,
                message.result
            );
    }

    function encodeAssets(
        Assets memory assets
    ) internal pure returns (bytes memory data) {
        bytes memory tokensEncoded = abi.encodePacked(
            assets.tokens.length,
            assets.tokens
        );
        bytes memory tokenIdsEncoded = abi.encodePacked(
            assets.tokenIds.length,
            assets.tokenIds
        );
        bytes memory paymentTokensEncoded = abi.encodePacked(
            assets.paymentTokens.length,
            assets.paymentTokens
        );
        bytes memory amountsEncoded = abi.encodePacked(
            assets.amounts.length,
            assets.amounts
        );
        return
            abi.encodePacked(
                tokensEncoded,
                tokenIdsEncoded,
                paymentTokensEncoded,
                amountsEncoded
            );
    }

    function getPayloadType(
        bytes memory encoded
    ) internal pure returns (PayloadType) {
        uint256 offset = 0;
        uint8 _payloadType = encoded.toUint8(offset);

        return PayloadType(_payloadType);
    }

    function decodeTradeAcceptMessage(
        bytes memory encoded
    ) internal pure returns (TradeAcceptMessage memory) {
        uint256 offset = 0;

        uint8 _paylodType = encoded.toUint8(offset);
        PayloadType payloadType = PayloadType(_paylodType);
        offset += 1;

        bytes32 tradeOfferHash = encoded.toBytes32(offset);

        offset += 32;

        (Assets memory offeringAssets, uint256 _offset) = decodeAssets(
            encoded,
            offset
        );
        offset = _offset;

        (Assets memory considerationAssets, uint256 __offset) = decodeAssets(
            encoded,
            offset
        );

        offset = __offset;
        address seller = encoded.toAddress(offset);
        offset += 20;
        address buyer = encoded.toAddress(offset);
        offset += 20;

        return
            TradeAcceptMessage(
                payloadType,
                tradeOfferHash,
                offeringAssets,
                considerationAssets,
                seller,
                buyer
            );
    }

    function decodeTradeResultMessage(
        bytes memory encoded
    ) internal pure returns (TradeResultMessage memory) {
        uint256 offset = 0;
        uint8 _paylodType = encoded.toUint8(offset);
        PayloadType payloadType = PayloadType(_paylodType);
        offset += 1;
        bytes32 tradeOfferHash = encoded.toBytes32(offset);
        offset += 32;
        uint8 _type = encoded.toUint8(offset);
        Result result = Result(_type);

        return TradeResultMessage(payloadType, tradeOfferHash, result);
    }

    function decodeAssets(
        bytes memory encoded,
        uint256 offset
    ) internal pure returns (Assets memory, uint256 _offset) {
        uint256 numTokens = encoded.toUint256(offset);
        offset += 32;
        address[] memory tokens = new address[](numTokens);
        for (uint256 i = 0; i < numTokens; i++) {
            tokens[i] = encoded.toAddress(offset + 12);
            offset += 32;
        }
        uint256 numTokenIds = encoded.toUint256(offset);
        offset += 32;
        uint256[] memory tokenIds = new uint256[](numTokenIds);
        for (uint256 i = 0; i < numTokenIds; i++) {
            tokenIds[i] = encoded.toUint256(offset);
            offset += 32;
        }

        uint256 numPaymentTokens = encoded.toUint256(offset);
        offset += 32;
        address[] memory paymentTokens = new address[](numPaymentTokens);
        for (uint256 i = 0; i < numPaymentTokens; i++) {
            paymentTokens[i] = encoded.toAddress(offset + 12);
            offset += 32;
        }

        uint256 numAmounts = encoded.toUint256(offset);
        offset += 32;
        uint256[] memory amounts = new uint256[](numAmounts);
        for (uint256 i = 0; i < numAmounts; i++) {
            amounts[i] = encoded.toUint256(offset);
            offset += 32;
        }
        return (Assets(tokens, tokenIds, paymentTokens, amounts), offset);
    }

    function hashTradeOffer(
        TradeOffer memory _offer
    ) internal pure returns (bytes32) {
        bytes32 _hash;

        _hash = hashAssetsSet(_offer.offeringAssets, _hash);
        _hash = hashAssetsSet(_offer.considerationAssets, _hash);
        _hash = keccak256(
            abi.encodePacked(
                _offer.owner,
                _offer.timePeriod,
                _offer.nonce,
                _offer.tradeIntendedFor,
                _offer.primaryChainId,
                _offer.secondaryChainId,
                _hash
            )
        );

        return _hash;
    }

    function hashAssetsSet(
        AssetsSet memory assetsSet,
        bytes32 _hash
    ) internal pure returns (bytes32) {
        _hash = keccak256(
            abi.encodePacked(encodeAssets(assetsSet.primaryChainAssets), _hash)
        );
        _hash = keccak256(
            abi.encodePacked(
                encodeAssets(assetsSet.secondaryChainAssets),
                _hash
            )
        );

        return _hash;
    }
}

