        TradeResultMessage memory message = Encoder.decodeTradeResultMessage(
            payload
        );

        // if success => allow to withdraw swapped else => allow to withdraw original
        trades[message.tradeOfferHash].status = message.result == Result.SUCCESS
            ? Status.SUCCESS
            : Status.FAILED;

        return 0;
    }

    function checkExpiration(uint256 _timePeriod) internal view {
        if (_timePeriod < block.timestamp) {
            revert SwapError(SwapErrorCodes.TRADE_EXPIRED);
        }
    }

    function sendWormholeMessage(
        bytes memory payload
    ) internal returns (uint64 sequence) {
        sequence = IWormhole(wormhole).publishMessage(
            1, // nonce
            payload,
            consistencyLevel
        );
    }

    function verifyEmitter(
        IWormhole.VM memory parsed
    ) internal view returns (bool) {
        return
            address(uint160(uint256(parsed.emitterAddress))) ==
            targetContractAddress &&
            parsed.emitterChainId == targetChainId;
    }

    function wormholeValidation(
        bytes memory encodedVm
    ) internal returns (IWormhole.VM memory) {
        // parse and verify the wormhole complete trade message
        (
            IWormhole.VM memory parsed,
            bool valid,
            string memory reason
        ) = IWormhole(wormhole).parseAndVerifyVM(encodedVm);
        require(valid, reason);

        // verify emitter
        require(verifyEmitter(parsed), "invalid emitter");

        // completed (replay protection), also serves as reentrancy protection
        require(!messageHashConsumed(parsed.hash), "message already consumed");
        _consumeMessageHash(parsed.hash);

        return parsed;
    }
}

