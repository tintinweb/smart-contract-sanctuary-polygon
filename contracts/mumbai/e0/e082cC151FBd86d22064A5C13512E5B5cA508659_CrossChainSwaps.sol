        bytes32 tradeOfferHash
    ) external whenNotPaused nonReentrant {
        // check trade with given offer hash has currect status
        Trade memory trade = trades[tradeOfferHash];
        if (trade.status != Status.SUCCESS && trade.status != Status.FAILED) {
            revert SwapError(SwapErrorCodes.INVALID_TRADE_STATUS);
        }

        // send assets to buyer and seller if not already withdrawn
        if (_msgSender() == trade.buyer) {
            if (trade.buyerWithdraw) {
                revert SwapError(SwapErrorCodes.BUYER_ALREADY_CLAIMED);
            }
            sendAssets(
                trade.status == Status.SUCCESS
                    ? trade.offeringAssets
                    : trade.considerationAssets,
                trade.buyer
            );
            trades[tradeOfferHash].buyerWithdraw = true;
        } else if (_msgSender() == trade.seller) {
            if (trade.sellerWithdraw) {
                revert SwapError(SwapErrorCodes.SELLER_ALREADY_CLAIMED);
            }
            sendAssets(
                trade.status == Status.SUCCESS
                    ? trade.considerationAssets
                    : trade.offeringAssets,
                trade.seller
            );
            trades[tradeOfferHash].sellerWithdraw = true;
        }
    }

