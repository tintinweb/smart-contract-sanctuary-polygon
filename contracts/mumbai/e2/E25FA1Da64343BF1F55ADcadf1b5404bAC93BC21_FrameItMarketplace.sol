pragma solidity 0.8.16;

import "../nfts/IFrameItLootBox.sol";
import "../oracle/IUniswapV3Oracle.sol";
import "../utils/Ownable.sol";
import "../moonpay/IMoonPayWallet.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/cryptography/draft-EIP712.sol";

contract FrameItMarketplace is EIP712, Ownable {
    using SafeERC20 for IERC20;
    using ECDSA for bytes32;

    struct SaleStruct {
        address _owner;
        address _nft;
        address _token;
        uint256 _id;
        uint256 _price;
        uint256 _expirationDate;
    }

    struct OfferData {
        address from;
        address nft;
        uint256 id;
        uint256 price;
        address token;
        uint256 expirationDate;
    }
   
    struct OfferStatus {
        bool _accepted;
        bool _cancelled;
    }

    bytes32 private constant OFFER_DATA_TYPEHASH = keccak256("OfferData(address from,address nft,uint256 id,uint256 price,address token,uint256 expirationDate)");

    address private manager;
    address private rungieToken;
    address private oracle;
    address private moonpayWallet;
    address private defaultSaleToken;
    address private WETH9;
    address[] private allowedTokens;

    uint256 public saleIDCounter;
    mapping(uint256 => SaleStruct) private sales;
    mapping(bytes32 => OfferStatus) private offers;

    event SaleEvent(address indexed _owner, address indexed _nftAddress, uint256 _id, uint256 _price, address _token, uint256 _expirationDate, uint256 _saleID);
    event CancelSaleEvent(uint256 _saleID);
    event BuyEvent(address indexed _seller, address indexed _buyer, address indexed _nftAddress, uint256 _id, uint256 _price, address _token);
    event BuyMoonPayEvent(address indexed _seller, address indexed _buyer, address indexed _nftAddress, uint256 _id, uint256 _price, address _token);
    event BuyFIATEvent(address indexed _seller, address indexed _buyer, address indexed _nftAddress, uint256 _id, uint256 _price, address _token);
    
    event OfferAccepted(address _from, address _to, address _nft, uint256 _id, uint256 _price, address _token);
    event OfferCancelled(bytes32 _signatureHash);

    constructor(address _rungieToken, address _weth9, address _defaultSaleToken, address _oracle, uint256 _saleIDCounter) EIP712("FrameitMarketplace", "1.0.0") {
        saleIDCounter = _saleIDCounter;
        rungieToken = _rungieToken;
        oracle = _oracle;
        defaultSaleToken = _defaultSaleToken;

        allowedTokens.push(_rungieToken);
        allowedTokens.push(_weth9);
        allowedTokens.push(_defaultSaleToken);
    }

    function setOracle(address _oracle) external onlyOwner {
        require(_oracle != address(0), "ZeroAddress");
        oracle = _oracle;
    }

    function setRungieToken(address _rungieToken) external onlyOwner {
        require(_rungieToken != address(0), "ZeroAddress");
        rungieToken = _rungieToken;
    }

    function setDefaultSaleToken(address _defaultSaleToken) external onlyOwner {
        require(_defaultSaleToken != address(0), "ZeroAddress");
        defaultSaleToken = _defaultSaleToken;
    }

    function setMoonPayWallet(address _moonpay) external onlyOwner {
        require(_moonpay != address(0), "ZeroAddress");
        moonpayWallet = _moonpay;
    }

    function setManager(address _manager) external onlyOwner {
        require(_manager != address(0), "ZeroAddress");
        manager = _manager;
    }

    function changeAllowedTokens(address[] memory _allowedTokens) external onlyOwner {
        delete allowedTokens;
        for (uint256 i=0; i<_allowedTokens.length; i++) allowedTokens.push(_allowedTokens[i]);
    }

    function setSale(address _nftAddress, uint256 _id, uint256 _price, address _token, uint256 _expirationDate) external {
        require(IERC721(_nftAddress).ownerOf(_id) == msg.sender, "BadOwner");
        if (_expirationDate > 0 ) require(block.timestamp < _expirationDate, "BadDate");
        require(defaultSaleToken == _token, "BadToken");

        SaleStruct memory sale = SaleStruct({
            _owner: msg.sender,
            _nft: _nftAddress,
            _id: _id,
            _price: _price,
            _token: _token,
            _expirationDate: _expirationDate
        });

        saleIDCounter++;
        sales[saleIDCounter] = sale;

        emit SaleEvent(msg.sender, _nftAddress, _id, _price, _token, _expirationDate, saleIDCounter);
    }

    function cancelSale(uint256 _saleID) external {
        SaleStruct memory sale = sales[_saleID];
        require(sale._owner == msg.sender, "BadSaleOwner");

        delete sales[_saleID];

        emit CancelSaleEvent(_saleID);
    }

    function getSaleData(uint256 _saleID) external view returns(address _owner, address _nftAddress, uint256 _id, uint256 _price, address _token, uint256 _expirationDate) {
        SaleStruct memory sale = sales[_saleID];
        return (sale._owner, sale._nft, sale._id, sale._price, sale._token, sale._expirationDate);
    }

    function buySale(uint256[] calldata _saleIDs) external payable {
        uint256 totalPrice = 0;

        for (uint256 i=0; i<_saleIDs.length; i++) {
            uint256 saleID = _saleIDs[i];
            SaleStruct memory sale = sales[saleID];
            if (sale._token == WETH9) totalPrice += sale._price;
            require(IERC721(sale._nft).ownerOf(sale._id) == sale._owner, "BadNFTOwner");
            if (sale._expirationDate > 0) require(block.timestamp <= sale._expirationDate, "SaleEnded");

            delete sales[saleID];
            IERC721(sale._nft).safeTransferFrom(sale._owner, msg.sender, sale._id);

            if (sale._token == WETH9) {
                (bool success, ) = sale._owner.call{value: sale._price}("");
                require(success == true, "BadTransfer");
            }
            else IERC20(sale._token).safeTransferFrom(msg.sender, sale._owner, sale._price);
            
            emit BuyEvent(sale._owner, msg.sender, sale._nft, sale._id, sale._price, sale._token);
        }

        require(msg.value == totalPrice, "BadAmount");
    }

    function buySaleMoonPay(uint256[] calldata _saleIDs, address _to) external {
        require(msg.sender == manager, "NoAllowed");
        for (uint256 i=0; i<_saleIDs.length; i++) {
            uint256 saleID = _saleIDs[i];
            SaleStruct memory sale = sales[saleID];
            require(IERC721(sale._nft).ownerOf(sale._id) == sale._owner, "BadNFTOwner");
            if (sale._expirationDate > 0) require(block.timestamp <= sale._expirationDate, "SaleEnded");
            
            delete sales[saleID];
            IERC721(sale._nft).safeTransferFrom(sale._owner, msg.sender, sale._id);

            IMoonPayWallet(moonpayWallet).setMoonPayPayment(sale._owner, sale._price);

            emit BuyMoonPayEvent(sale._owner, _to, sale._nft, sale._id, sale._price, sale._token);
        }
    }

    function buySaleFIAT(uint256[] calldata _saleIDs, address _to) external {
        require(msg.sender == manager, "NoAllowed");
        for (uint256 i=0; i<_saleIDs.length; i++) {
            uint256 saleID = _saleIDs[i];
            SaleStruct memory sale = sales[saleID];
            require(IERC721(sale._nft).ownerOf(sale._id) == sale._owner, "BadNFTOwner");
            if (sale._expirationDate > 0) require(block.timestamp <= sale._expirationDate, "SaleEnded");
            
            delete sales[saleID];
            IERC721(sale._nft).safeTransferFrom(sale._owner, msg.sender, sale._id);

            emit BuyFIATEvent(sale._owner, _to, sale._nft, sale._id, sale._price, sale._token);
        }
    }

    function acceptOffer(OfferData calldata offer, bytes calldata signature) external {
        require(_verify(offer, signature) == true, "BadSigner");
        require(IERC721(offer.nft).ownerOf(offer.id) == msg.sender, "NoOwner");
        require(block.timestamp <= offer.expirationDate, "OfferExpired");
        bytes32 signatureHash = keccak256(signature);
        require(offers[signatureHash]._accepted == false && offers[signatureHash]._cancelled == false, "OfferNoAvailable");

        offers[signatureHash]._accepted = true;
        IERC721(offer.nft).safeTransferFrom(msg.sender, offer.from, offer.id);
        IERC20(offer.token).safeTransferFrom(offer.from, msg.sender, offer.price);
        
        emit OfferAccepted(offer.from, msg.sender, offer.nft, offer.id, offer.price, offer.token);
    }

    function cancelOffer(bytes calldata _signature) external payable {
        bytes32 signatureHash = keccak256(_signature);
        offers[signatureHash]._cancelled = true;

        emit OfferCancelled(signatureHash);
    }

    function verify(OfferData calldata offer, bytes calldata signature) external view returns (bool) {
        return _verify(offer, signature);
    }

    function _verify(OfferData calldata offer, bytes calldata signature) internal view returns (bool) {
        address signer = _hashTypedDataV4(
            keccak256(abi.encode(OFFER_DATA_TYPEHASH, offer.from, offer.nft, offer.id, offer.price, offer.token, offer.expirationDate))
        ).recover(signature);

        return offer.from == signer;
    }

    function _isTokenAllowed(address _token) internal view returns (bool) {
        for (uint256 i=0; i<allowedTokens.length; i++) {
            if (allowedTokens[i] == _token) return true;
        }

        return false;
    }
}

