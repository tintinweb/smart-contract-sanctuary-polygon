import "./interfaces/IRegistry.sol";
import "./Governed.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "forge-deploy-proxy/ForgeDeploy_Proxied.sol";

contract Registry is IRegistry, Initializable, Proxied, Governed {
    using EnumerableSet for EnumerableSet.UintSet;

    address public override getControl;
    address public override getLootBoxNFT;
    address public override getStaking;
    address public override getHoldingAwardsPool;

    mapping(address => uint256) public override getNFTGoodsId;
    address[] private _nftGoods;

    mapping(uint256 => EnumerableSet.UintSet) private _connectionsLootBox;
    mapping(uint256 => EnumerableSet.UintSet) private _connectionsNFTGoods;

    address public override root;

    constructor() {}

    function setControl(address control) external override onlyGovernor {
        getControl = control;
    }

    function setLootBoxNFT(address lootBoxNFT) external override onlyGovernor {
        getLootBoxNFT = lootBoxNFT;
    }

    function setStaking(address staking) external override onlyGovernor {
        getStaking = staking;
    }

    function setHoldingAwardsPool(address holdingAwardsPool) external override onlyGovernor {
        getHoldingAwardsPool = holdingAwardsPool;
    }

    function addNFTGoods(address[] memory nftGoods) external override onlyGovernor {
        for (uint256 i; i < nftGoods.length; ) {
            address currentNFTGoods = nftGoods[i];

            if (getNFTGoodsId[currentNFTGoods] != 0) {
                revert RegistryNFTGoodsAlreadyAdded(currentNFTGoods);
            }

            _nftGoods.push(currentNFTGoods);
            getNFTGoodsId[currentNFTGoods] = _nftGoods.length;
            unchecked {
                ++i;
            }
        }
    }

    function changeNFTGoods(uint256 id, address nftGoods) external override onlyGovernor {
        if (id == 0 || id > _nftGoods.length) {
            revert RegistryNonExistentNFTGoodsId();
        }
        if (getNFTGoodsId[nftGoods] != 0) {
            revert RegistryNFTGoodsAlreadyAdded(nftGoods);
        }

        address oldNFTGoodsAddr = _nftGoods[id - 1];
        getNFTGoodsId[oldNFTGoodsAddr] = 0;

        getNFTGoodsId[nftGoods] = id;
        _nftGoods[id - 1] = nftGoods;
    }

    function changeConnectionsLootBox(
        uint256 idCollection,
        uint256[] memory nftGoodsIds,
        bool add
    ) external override onlyGovernor {
        if (add) {
            for (uint256 i; i < nftGoodsIds.length; ) {
                uint256 currentNFTGoodsId = nftGoodsIds[i];
                if (currentNFTGoodsId == 0 || currentNFTGoodsId > _nftGoods.length) {
                    revert RegistryNonExistentNFTGoodsId();
                }

                if (!_connectionsLootBox[idCollection].add(currentNFTGoodsId)) {
                    revert RegistryConnectionAlreadyAdded(idCollection, currentNFTGoodsId);
                }
                _connectionsNFTGoods[currentNFTGoodsId].add(idCollection);

                unchecked {
                    ++i;
                }
            }
        } else {
            for (uint256 i; i < nftGoodsIds.length; ) {
                uint256 currentNFTGoodsId = nftGoodsIds[i];
                if (currentNFTGoodsId == 0 || currentNFTGoodsId > _nftGoods.length) {
                    revert RegistryNonExistentNFTGoodsId();
                }

                if (!_connectionsLootBox[idCollection].remove(currentNFTGoodsId)) {
                    revert RegistryConnectionDoesntExist(idCollection, currentNFTGoodsId);
                }
                _connectionsNFTGoods[currentNFTGoodsId].remove(idCollection);

                unchecked {
                    ++i;
                }
            }
        }
    }

    function setRoot(address newRoot) external override onlyGovernor {
        root = newRoot;
    }

    function getNFTGoodsAddr(uint256 id) external view override returns (address) {
        return _nftGoods[id - 1];
    }

    function getNFTGoodsPage(
        uint256 amountElementsOnPage,
        uint256 pageNumber
    ) external view override returns (address[] memory) {
        uint256 arrIndex = pageNumber * amountElementsOnPage;
        address[] memory nftGoods = new address[](amountElementsOnPage);
        for (uint256 i; i < amountElementsOnPage; ) {
            if (arrIndex >= _nftGoods.length) {
                break;
            }
            nftGoods[i] = _nftGoods[arrIndex];
            unchecked {
                ++i;
                ++arrIndex;
            }
        }
        return nftGoods;
    }

    function getNFTGoodsAmount() external view override returns (uint256) {
        return _nftGoods.length;
    }

    function getConnectionsLootBoxPage(
        uint256 idCollection,
        uint256 amountElementsOnPage,
        uint256 pageNumber
    ) external view override returns (uint256[] memory) {
        uint256 arrIndex = pageNumber * amountElementsOnPage;
        uint256[] memory nftGoodsIds = new uint256[](amountElementsOnPage);
        for (uint256 i; i < amountElementsOnPage; ) {
            if (arrIndex >= _connectionsLootBox[idCollection].length()) {
                break;
            }
            nftGoodsIds[i] = _connectionsLootBox[idCollection].at(arrIndex);
            unchecked {
                ++i;
                ++arrIndex;
            }
        }
        return nftGoodsIds;
    }

    function getConnectionsNFTGoodsPage(
        uint256 nftGoodsId,
        uint256 amountElementsOnPage,
        uint256 pageNumber
    ) external view override returns (uint256[] memory) {
        uint256 arrIndex = pageNumber * amountElementsOnPage;
        uint256[] memory collectionIds = new uint256[](amountElementsOnPage);
        for (uint256 i; i < amountElementsOnPage; ) {
            if (arrIndex >= _connectionsNFTGoods[nftGoodsId].length()) {
                break;
            }
            collectionIds[i] = _connectionsNFTGoods[nftGoodsId].at(arrIndex);
            unchecked {
                ++i;
                ++arrIndex;
            }
        }
        return collectionIds;
    }

    function checkConnection(uint256 idCollection, uint256 nftGoodsId) external view override returns (bool) {
        return _connectionsLootBox[idCollection].contains(nftGoodsId);
    }

    function initialize() public proxied initializer {
        setGovernor(msg.sender);
        root = msg.sender;
    }
}

