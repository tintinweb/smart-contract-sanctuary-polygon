                _addAddressToBlacklist(addressToBlackListBatch[i]);
            }
        }
    }

    /**
     * @notice Removes a list of addresses from the blacklist so it can transfer, received, approve or be approved (to transfer on behalf another account) tokens again
     * @param addressToRemoveFromBlackListBatch address to remove from blacklist
     */
    function removeAddressBatchFromBlacklist(address[] calldata addressToRemoveFromBlackListBatch) external onlyRole(COMPLIANCE_ROLE) {
        uint256 batchSize = addressToRemoveFromBlackListBatch.length;
        unchecked {
            for (uint i = 0; i < batchSize; i += 1) {
                _removeAddressFromBlacklist(
                    addressToRemoveFromBlackListBatch[i]
                );
            }
        }
    }

    /**
   @notice Destroys the funds of an address that is in the blacklist, preventing it from transferring, receiving, or approving tokens
  * @param blackListedUserBatch address to remove funds
  */
    function destroyBlacklistedFundsBatch(address[] calldata blackListedUserBatch) external onlyRole(BLACKLISTED_BURN_ROLE) {
        uint256 batchSize = blackListedUserBatch.length;
        unchecked {
            for (uint256 i = 0; i < batchSize; i += 1) {
                _destroyBlacklistedFunds(blackListedUserBatch[i]);
            }
        }
    }

    /**
     * @notice Check the value of maximum amount to execute mint
     */
    function maxAmountValueForMint() external pure returns (uint256) {
        return MAX_AMOUNT_VALUE_FOR_MINT;
    }

    /**
     * @notice Check the value of maximum amount to execute transfer
     */
    function maxAmountValueForTransfer() external pure returns (uint256) {
        return MAX_AMOUNT_VALUE_FOR_TRANSFER;
    }
