        address account,
        uint256[] memory ids,
        uint256[] memory values
    ) public onlyRole(Roles.BURNER_ROLE) {
        require(
            account == msg.sender || _isApprovedForAll(account, msg.sender),
            "ERC1155: caller is not token owner or approved"
        );
        _burnBatch(account, ids, values);
