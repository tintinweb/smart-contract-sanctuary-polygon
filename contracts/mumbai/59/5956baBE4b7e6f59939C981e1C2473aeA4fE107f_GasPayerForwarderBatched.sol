pragma solidity =0.8.9;

import '@openzeppelin/contracts/utils/cryptography/ECDSA.sol';
import '@openzeppelin/contracts/utils/cryptography/draft-EIP712.sol';
import '@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol';
import '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import '@openzeppelin/contracts/utils/math/Math.sol';
import '@openzeppelin/contracts/utils/cryptography/SignatureChecker.sol';
import '@openzeppelin/contracts/security/ReentrancyGuard.sol';
import '@openzeppelin/contracts/utils/Address.sol';

import './GasPayerWallet.sol';

contract GasPayerForwarderBatched is EIP712, ReentrancyGuard {
    using ECDSA for bytes32;
    using SafeERC20 for IERC20;
    using Address for address;

    struct ForwardRequest {
        address payable from;
        address payable to;
        uint256 value;
        uint256 gas; // how much gas the tx would take
        uint256 nonce;
        uint256 gasPrice; // how much the user is willing to pay for the tx (gas * gasPrice)
        bytes data;
    }

    bytes32 private constant _TYPEHASH =
        keccak256(
            'ForwardRequest(address from,address to,uint256 value,uint256 gas,uint256 nonce,uint256 gasPrice,bytes32 data)'
        );

    mapping(address => uint256) internal _nonces;

    event BatchExecuteWithPayment(address msgSender, uint256 numRequests);

    constructor() EIP712('SmartWalletForwarder', '1.0.0') {}

    receive() external payable {}

    function getNonce(address from) public view returns (uint256) {
        return _nonces[from];
    }

    function verify(ForwardRequest calldata req, bytes calldata signature) public view returns (bool) {
        bytes32 digest = _hashTypedDataV4(
            keccak256(
                abi.encode(
                    _TYPEHASH,
                    req.from,
                    req.to,
                    req.value,
                    req.gas,
                    req.nonce,
                    req.gasPrice,
                    keccak256(req.data)
                )
            )
        );
        address signer = digest.recover(signature);
        bool isValidSigner = signer == req.from ||
            (recoverSigner(req.from, digest, signature) && GasPayerWallet(req.from).getOwner() == signer);
        return _nonces[req.from] == req.nonce && isValidSigner;
    }

    function recoverSigner(address signer, bytes32 digest, bytes memory signature) private view returns (bool) {
        return SignatureChecker.isValidSignatureNow(signer, digest, signature); // supports smart wallets
    }

    function batchExecuteWithPayment(
        ForwardRequest[] calldata req,
        bytes[] calldata signature,
        bool[] calldata waiveGas
    ) public payable nonReentrant returns (bool[] memory success, bytes[] memory returndata) {
        require(req.length == signature.length && req.length == waiveGas.length, 'Wrong input arrays length');

        success = new bool[](req.length);
        returndata = new bytes[](req.length);

        uint256 _len = req.length;
        for (uint256 i = 0; i < _len; ++i) {
            ForwardRequest calldata _req = req[i];

            uint256 _startGas = gasleft();

            require(verify(_req, signature[i]), 'SmartWalletForwarder: signature does not match request');
            _nonces[_req.from] = _req.nonce + 1;

            uint256 _senderAllotment = _req.gas * _req.gasPrice;

            bool _success;
            bytes memory _returndata;

            (_success, _returndata) = _doRequest(_req, _req.gas);

            success[i] = _success;
            returndata[i] = _returndata;

            if (waiveGas[i]) {
                continue;
            }

            uint256 _gasUsed = (_startGas - gasleft() + 64000);
            // Validate that the relayer has sent enough gas for the call.
            // See https://ronan.eth.link/blog/ethereum-gas-dangers/
            if (_gasUsed <= _req.gas / 63) {
                // We explicitly trigger invalid opcode to consume all gas and bubble-up the effects, since
                // neither revert or assert consume all gas since Solidity 0.8.0
                // https://docs.soliditylang.org/en/v0.8.0/control-structures.html#panic-via-assert-and-error-via-require
                assembly {
                    invalid()
                }
            }
            uint256 _ethUsed = _gasUsed * tx.gasprice;
            require(_senderAllotment >= _ethUsed, 'Sender didnt send enough gas');

            if (address(_req.from).isContract()) {
                GasPayerWallet(_req.from).transferETHForForwarder(_ethUsed, payable(msg.sender));
            } else {
                GasPayerWallet(_req.to).transferETHForForwarder(_ethUsed, payable(msg.sender));
            }
        }
        emit BatchExecuteWithPayment(msg.sender, _len);
    }

    // pays for transactions signed by a wallet owner
    function executeWithPayment(
        ForwardRequest calldata req,
        bytes calldata signature,
        bool waiveGas
    ) public payable nonReentrant returns (bool success, bytes memory returndata) {
        uint256 startGas = gasleft();
        require(verify(req, signature), 'SmartWalletForwarder: signature does not match request');
        _nonces[req.from] = req.nonce + 1;

        uint256 senderAllotment = req.gas * req.gasPrice;
        (success, returndata) = _doRequest(req, req.gas);
        if (waiveGas) return (success, returndata);

        uint256 gasUsed = (startGas - gasleft() + 64000);
        // Validate that the relayer has sent enough gas for the call.
        // See https://ronan.eth.link/blog/ethereum-gas-dangers/
        if (gasUsed <= req.gas / 63) {
            // We explicitly trigger invalid opcode to consume all gas and bubble-up the effects, since
            // neither revert or assert consume all gas since Solidity 0.8.0
            // https://docs.soliditylang.org/en/v0.8.0/control-structures.html#panic-via-assert-and-error-via-require
            assembly {
                invalid()
            }
        }
        uint256 ethUsed = gasUsed * tx.gasprice;
        require(senderAllotment >= ethUsed, 'Sender didnt send enough gas');
        if (address(req.from).isContract()) {
            GasPayerWallet(req.from).transferETHForForwarder(ethUsed, payable(msg.sender));
        } else {
            GasPayerWallet(req.to).transferETHForForwarder(ethUsed, payable(msg.sender));
        }
    }

    function _doRequest(ForwardRequest calldata req, uint256 gas) internal returns (bool, bytes memory) {
        (bool success, bytes memory returndata) = req.to.call{gas: gas, value: req.value}(
            abi.encodePacked(req.data, req.from)
        );

        require(success, 'SmartWalletForwarder: tx failed'); // if calling function runs out of gas
        if (returndata.length > 0) {
            require(abi.decode(returndata, (address)) != address(0), 'SmartWalletForwarder: operation did not succeed');
            // require(abi.decode(returndata, (bool)), "SafeERC20: ERC20 operation did not succeed");
        }
        return (success, returndata);
    }
}

