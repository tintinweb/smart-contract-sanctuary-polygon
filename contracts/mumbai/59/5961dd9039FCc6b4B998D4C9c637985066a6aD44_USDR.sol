import "./ILayerZeroEndpointUpgradeable.sol";
import "./ILayerZeroReceiverUpgradeable.sol";
import "./ILayerZeroUserApplicationConfigUpgradeable.sol";

contract OFTUpgradeable is
    OwnableUpgradeable,
    PausableUpgradeable,
    ERC20Upgradeable,
    ILayerZeroReceiverUpgradeable,
    ILayerZeroUserApplicationConfigUpgradeable
{
    uint16 public constant PT_SEND_TOKENS = 0;
    uint16 public constant PT_SEND_MESSAGE = 1;

    ILayerZeroEndpointUpgradeable public endpoint;

    // a map of our connected contracts
    mapping(uint16 => address) public dstContractLookup;

    bool public isMain;

    uint256[50] private __gap;

    event SendToChain(uint16 dstChainId, address to, uint256 qty);
    event ReceiveFromChain(uint16 srcChainId, uint64 nonce, uint256 qty);

    function __OFT_init(address _lzEndpoint, bool _isMainChain)
        internal
        onlyInitializing
    {
        __Ownable_init();
        __Pausable_init();
        isMain = _isMainChain;
        endpoint = ILayerZeroEndpointUpgradeable(_lzEndpoint);
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function setDestination(
        uint16 _dstChainId,
        address _destinationContractAddress
    ) public onlyOwner {
        dstContractLookup[_dstChainId] = _destinationContractAddress;
    }

    function chainId() external view returns (uint16) {
        return endpoint.getChainId();
    }

    function sendTokens(
        uint16 _dstChainId, // send tokens to this chainId
        address _to, // where to deliver the tokens on the destination chain
        uint256 _amount, // how many tokens to send
        address zroPaymentAddress, // ZRO payment address
        bytes calldata adapterParam // txParameters
    ) public payable virtual whenNotPaused {
        // lock if leaving the safe chain, otherwise burn
        if (isMain) {
            _transfer(msg.sender, address(this), _amount);
        } else {
            _burn(msg.sender, _amount);
        }

        // abi.encode() the payload with the values to send
        bytes memory payload = abi.encode(
            PT_SEND_TOKENS,
            abi.encode(_to, _amount)
        );

        // send LayerZero message
        endpoint.send{value: msg.value}(
            _dstChainId,
            abi.encode(dstContractLookup[_dstChainId]),
            payload,
            payable(msg.sender), // refund address (LayerZero will refund any extra gas back to caller of send())
            zroPaymentAddress,
            adapterParam
        );
        emit SendToChain(_dstChainId, _to, _amount);
    }

    function lzReceive(
        uint16 _srcChainId,
        bytes memory _fromAddress,
        uint64 _nonce,
        bytes memory _payload
    ) external override {
        require(msg.sender == address(endpoint), "OFT: invalid sender");
        require(
            _fromAddress.length == 40 &&
                keccak256(_fromAddress) ==
                keccak256(
                    abi.encodePacked(
                        dstContractLookup[_srcChainId],
                        address(this)
                    )
                ),
            "OFT: invalid source sending contract"
        );

        // decode
        (uint16 _packetType, bytes memory _data) = abi.decode(
            _payload,
            (uint16, bytes)
        );

        if (_packetType == PT_SEND_TOKENS) {
            (address _to, uint256 _amount) = abi.decode(
                _data,
                (address, uint256)
            );
            _receiveTokens(_srcChainId, _nonce, _to, _amount);
        } else if (_packetType == PT_SEND_MESSAGE) {
            _receiveMessage(_srcChainId, _nonce, _data);
        } else revert("OFT: unknown packet type");
    }

    function _receiveTokens(
        uint16 _srcChainId,
        uint64 _nonce,
        address _receiver,
        uint256 _amount
    ) internal virtual {
        // mint the tokens back into existence, to the receiving address
        if (isMain) {
            _transfer(address(this), _receiver, _amount);
        } else {
            _mint(_receiver, _amount);
        }

        emit ReceiveFromChain(_srcChainId, _nonce, _amount);
    }

    function _receiveMessage(
        uint16 _srcChainId,
        uint64 _nonce,
        bytes memory _data
    ) internal virtual {}

    function estimateSendTokensFee(
        uint16 _dstChainId,
        bool _useZro,
        bytes calldata txParameters
    ) external view returns (uint256 nativeFee, uint256 zroFee) {
        return
            endpoint.estimateFees(
                _dstChainId,
                address(this),
                bytes(""),
                _useZro,
                txParameters
            );
    }

    // generic config for user Application
    function setConfig(
        uint16 _version,
        uint16 _chainId,
        uint256 _configType,
        bytes calldata _config
    ) external override onlyOwner {
        endpoint.setConfig(_version, _chainId, _configType, _config);
    }

    function setSendVersion(uint16 version) external override onlyOwner {
        endpoint.setSendVersion(version);
    }

    function setReceiveVersion(uint16 version) external override onlyOwner {
        endpoint.setReceiveVersion(version);
    }

    function forceResumeReceive(uint16 _srcChainId) external {
        forceResumeReceive(
            _srcChainId,
            abi.encodePacked(dstContractLookup[_srcChainId], address(this))
        );
    }

    function forceResumeReceive(uint16 _srcChainId, bytes memory _srcAddress)
        public
        override
        onlyOwner
    {
        endpoint.forceResumeReceive(_srcChainId, _srcAddress);
    }

    function renounceOwnership() public override onlyOwner {}
}

