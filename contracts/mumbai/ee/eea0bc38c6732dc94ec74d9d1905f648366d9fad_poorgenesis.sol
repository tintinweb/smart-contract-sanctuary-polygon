contract poorgenesis {

    

     address public nftAddress;
     mapping(address => uint256) public rewardsWithdrawn;
     address public admin;
      address public tokenAddress;
      uint256 public poolBalance;

      
      

    constructor(address _admin)  {
        admin = _admin;
    }

    

    function setTokenAddress(address _tokenAddress) public {
    require(msg.sender == admin, "Only admin can set token address");
    tokenAddress = _tokenAddress;}

    function setnftAddress(address _nftAddress) public {
        nftAddress = _nftAddress;
    }

    function withdraw( uint256 nftId) public {

      IERC20 token = IERC20(tokenAddress);
      IERC1155 nft = IERC1155(nftAddress);
      
      require(nft.balanceOf(msg.sender,nftId)>0,"You do not own the specified NFT"); //== msg.sender, "You do not own the specified NFT");
     
       uint256 availableRewards = getPoolBalance() / 100 - rewardsWithdrawn[msg.sender];
       require(availableRewards > 0, "No rewards available");
       token.transfer(msg.sender, availableRewards);
        rewardsWithdrawn[msg.sender] += availableRewards;
      
  }

     function getPoolBalance() public   view   returns (uint256) {
            
     IERC20 token = IERC20(tokenAddress);

        return  token.balanceOf(address(this));}
    
    
}