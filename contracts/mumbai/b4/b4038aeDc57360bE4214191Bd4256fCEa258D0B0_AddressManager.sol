pragma solidity ^0.8.0;

import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import {IERC165} from "@openzeppelin/contracts/utils/introspection/IERC165.sol";


contract AddressManager is Ownable {
    address public TRANSFER_MANAGER_ERC1155;
    address public TRANSFER_MANAGER_ERC721;
    address public SIMPLE_EXCHANGE;
    address[10] public OTHER_ADDRESS;

    function updateAll(address simpleExchange, address transferManagerERC721, address transferManagerERC1155) external onlyOwner {
        TRANSFER_MANAGER_ERC721 = transferManagerERC721;
        TRANSFER_MANAGER_ERC1155 = transferManagerERC1155;
        SIMPLE_EXCHANGE = simpleExchange;
    }
    
    function getERC1155Address() external view returns(address) {
        return TRANSFER_MANAGER_ERC1155;
    }
    function getERC721Address() external view returns(address) {
        return TRANSFER_MANAGER_ERC721;
    }
    function getExchange() external view returns(address) {
        return SIMPLE_EXCHANGE;
    }
    function getOtherAddress(uint16 _position) external view returns(address) {
        return OTHER_ADDRESS[_position];
    }
    function setERC1155Address(address _eRC1155Address) external onlyOwner {
        TRANSFER_MANAGER_ERC1155 =  _eRC1155Address;
    }
    function setERC721Address(address _eRC721Address) external onlyOwner {
        TRANSFER_MANAGER_ERC721 =  _eRC721Address;
    }
    function setExchange(address _exchange) external onlyOwner {
        SIMPLE_EXCHANGE =  _exchange;
    }
    function addOtherAddress(uint16 _position, address _otherAddress) external onlyOwner {
        OTHER_ADDRESS[_position] = _otherAddress;
    }
}

