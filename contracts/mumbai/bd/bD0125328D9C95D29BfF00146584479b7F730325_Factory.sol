contract Pool is AccessControl {
    bytes32 public constant POOL_ROLE = keccak256("POOL_ROLE");
    address public tokenReward;
    constructor(address _dml, address _tokenReward){
        _setupRole(POOL_ROLE, _dml);  
        tokenReward = _tokenReward;
    }
    event TransferToken(
        address token,
        address receiver,
        uint256 amount,
        uint256 timeStamp
    );
    function transferToken(address _to, uint256 _amount) external onlyRole(POOL_ROLE) {
        uint256 reward = (_amount > IERC20(tokenReward).balanceOf(address(this))) ? IERC20(tokenReward).balanceOf(address(this)) : _amount;
        if(reward > 0){
            IERC20(tokenReward).transfer(_to, reward); 
            emit TransferToken(tokenReward, _to, reward, block.timestamp); 
        } 
    }
}