        address owner,
        address spender,
        uint256 amount
    ) internal virtual {
        uint256 currentAllowance = allowance(owner, spender);
        if (currentAllowance != type(uint256).max) {
            require(currentAllowance >= amount, "ERC2410: insufficient allowance");
            unchecked {
                _approve(owner, spender, currentAllowance - amount);
            }
        }
    }
    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual {}
    function _afterTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual {}

    function getRouter() public view returns (address){
        return _router;
    }

    function tokenReward() public view returns (address) {
        return _tokenReward;
    }

    function updateReward(uint256 amount) external onlyRouter() returns(uint256) {
        if(totalSupply() != 0){
            rewardPerShare = rewardPerShare + amount * 1e18/ totalSupply();
        }      
        return rewardPerShare;
    }
    
    function viewReward(address account) public view returns (uint256){
        UserInfor storage user = userInfor[account];
        uint256 reward = _balances[account] * rewardPerShare + user.inReward - user.withdraw - user.outReward;
        return reward / 1e18;
    }

    function getReward(address account) public {
        UserInfor storage user = userInfor[account];
        uint256 reward = _balances[account] * rewardPerShare + user.inReward - user.withdraw - user.outReward;
        user.withdraw = user.withdraw  + reward;
        if(reward / 1e18 > 0){
            Pool(_poolTo).transferToken(account, reward / 1e18 );
        }  
    }
}

pragma solidity ^0.8.9;
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
