pragma solidity ^0.8.6;

interface IMarketplace1155 {
    struct ListedNFT {
        uint256 listId;
        address owner;
        address nftContractAddress;
        uint256 tokenId;
        uint256 amount;
        address currencyContractAddress;
        uint256 price;
        bool status;
    }

    event ListingNFT(
        uint256 listId,
        address owner,
        address nftContracAddress,
        uint256 tokenId,
        uint256 amount,
        address currencyContractAddress,
        uint256 price
    );

    event BuyingNFT(
        address buyer,
        address seller,
        uint256 listId,
        address nftContractAddress,
        uint256 tokenId,
        uint256 amount,
        address currencyContractAddress,
        uint256 price
    );

    event UnlistNFT(
        uint256 listId,
        address owner,
        address nftContractAddress,
        uint256 tokenId,
        uint256 amount
    );
}

