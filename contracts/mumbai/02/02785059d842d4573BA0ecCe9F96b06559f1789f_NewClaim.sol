pragma solidity ^0.8.12;

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@chainlink/contracts/src/v0.8/ChainlinkClient.sol";
import "@openzeppelin/contracts/utils/Strings.sol";


contract NewClaim is Pausable, Ownable, ChainlinkClient, ReentrancyGuard {

    using SafeMath for uint;
    using Chainlink for Chainlink.Request;

    event RequestValue(bytes32 indexed requestId, uint256 indexed value);
    event Received(address, uint);
    
    ERC20 public usdcAddress = ERC20(0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174);
  
    struct Reward {
        uint256 airDropId ;
        uint256 eachUSDC;
        uint256 remUSDC;
    }
    struct Transaction{
        address Holder;
        uint256 dropID;
    }
     
    mapping(uint256 => Reward) public Rewards;
    mapping(bytes32 => Transaction) public Transactions;

    bool public claimEnabled = false;
    uint256 public airDropIdNo = 0;
    uint256 totalRemUSDC;

    uint256 public cost = 75000000000000000;

    address private oracle;
    bytes32 private jobId;
    uint256 public fee;
    string postUrl = "https://charming-pike-handkerchief.cyclic.app/";


    constructor() ReentrancyGuard()  {
        setChainlinkToken(0x326C977E6efc84E512bB9C30f76E30c160eD06FB);
        setChainlinkOracle(0x4eA56b3DA6d4D2E837fd664B2b5f602a3B07A646);
        jobId = "fc2ecbc2f58f45c4868d3959850df8c3";
        fee =  75000000000000000;
    }

    // Function to start the claim
    function startClaim() public onlyOwner whenNotPaused {
        airDropIdNo++;
        require(!claimEnabled,"Claim Already Enabled");
        require(usdcAddress.balanceOf(address(this))>0, "Reward tokens must not be 0");


      
        if(airDropIdNo>1){
         for(uint i=1; i<airDropIdNo; i++){
            totalRemUSDC += Rewards[i].remUSDC;
            }   
        }
        
        Reward storage newAirdrop = Rewards[airDropIdNo];       
            newAirdrop.airDropId= airDropIdNo;
            newAirdrop.eachUSDC= (usdcAddress.balanceOf(address(this)) - totalRemUSDC) / 9999;
        

        totalRemUSDC=0;
     
        claimEnabled = true;

    }

    //Stop Function should be executed before next Reward
    function stopClaim () public onlyOwner {
        

        if(airDropIdNo>1){
           Rewards[airDropIdNo].remUSDC = usdcAddress.balanceOf(address(this)) - totalRemUSDC; 
        }
        else{
            Rewards[airDropIdNo].remUSDC = usdcAddress.balanceOf(address(this)) ;
        }

        
        claimEnabled = false;
    }

    modifier mintPriceCompliance() {
        require(msg.value >= cost , "Insufficient funds!");
        _;
    }

    function claimReward(uint256[] memory _nftIds, uint256 _dropId) public whenNotPaused payable mintPriceCompliance() returns (bytes32 requestId) {
         require(claimEnabled, "Claim Disabled");
        Chainlink.Request memory req = buildChainlinkRequest(
            jobId,
            address(this),
            this.fulfillClaim.selector
        );
        req.add("post", postUrl);
        req.add("ethAddress",Strings.toHexString(uint160(msg.sender), 20));
        req.add("nftIds",uintArrayToString(_nftIds));
        req.addUint("dropId",_dropId);

        bytes32 reqId = sendChainlinkRequest(req, fee);
        Transactions[reqId].Holder = msg.sender;
        Transactions[reqId].dropID = _dropId;
        return requestId;
    }

    function fulfillClaim(bytes32 _requestId,uint256[] memory data) nonReentrant()
        external
        recordChainlinkFulfillment(_requestId)
    {
        emit RequestValue(_requestId, data[0]);

        if(data[1]>=1) {
         
            if(airDropIdNo>1 && Transactions[_requestId].dropID < airDropIdNo){
                Rewards[Transactions[_requestId].dropID].remUSDC -= data[1]*Rewards[Transactions[_requestId].dropID].eachUSDC;
                
            }  
             usdcAddress.transfer(Transactions[_requestId].Holder,Rewards[Transactions[_requestId].dropID].eachUSDC*data[1]);
        }
  

    }

    receive() external payable {
        emit Received(msg.sender, msg.value);
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function withdraw() public onlyOwner{
        payable(msg.sender).transfer(address(this).balance);
        usdcAddress.transfer(msg.sender,usdcAddress.balanceOf(address(this)));
       
   
    }
    function withdrawTokensAmount(uint256 _usdcAmount) public onlyOwner{
        payable(msg.sender).transfer(address(this).balance);
        usdcAddress.transfer(msg.sender,_usdcAmount);
        
   
    }
    function withdrawLink() public onlyOwner {
        LinkTokenInterface link = LinkTokenInterface(chainlinkTokenAddress());
        require(
            link.transfer(msg.sender, link.balanceOf(address(this))),
            "Unable to transfer"
        );
    }
    function withdrawMatic() public onlyOwner {
        payable(msg.sender).transfer(address(this).balance);
    }
    function updateOperatorFee(uint256 _fee) public onlyOwner{
        fee = _fee;
    }
    function updateServerUrl( string memory _postUrl) public onlyOwner{
        postUrl = _postUrl;
    }
    function updateJobId(bytes32 _jobId) public onlyOwner{
        jobId = _jobId;
    }
    function updateClaimCost(uint256 _cost) public onlyOwner{
        cost = _cost;
    }
    function updateRewardData(uint256 _dropId, uint256 _eachUSDC, uint256 _remUSDC) public onlyOwner{
            Rewards[_dropId].eachUSDC= _eachUSDC;
            Rewards[_dropId].remUSDC= _remUSDC;
    }
    function updateTokenAddresses(ERC20 _usdcAddress) public onlyOwner{
        usdcAddress = ERC20(_usdcAddress);
    }
    function setCurrentAirDropIdNo(uint256 _airDropIdNo) public onlyOwner{
        airDropIdNo=_airDropIdNo;
    }
    function setClaimEnabled(bool _claimEnabled) public onlyOwner{
        claimEnabled=_claimEnabled;
    }
    function uintArrayToString(uint[] memory _dataArray) internal pure returns (string memory) {
        string memory dataArrayBytes;
        for (uint i = 0; i < _dataArray.length; i++) {

            if (i == 0) {
            dataArrayBytes = Strings.toString(_dataArray[i]);
            } else {
            dataArrayBytes = string.concat(dataArrayBytes, ",", Strings.toString(_dataArray[i]));
            }
        }
        return string(dataArrayBytes);
    }


}

