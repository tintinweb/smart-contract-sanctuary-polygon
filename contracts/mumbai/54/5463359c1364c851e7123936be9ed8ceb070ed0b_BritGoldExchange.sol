// File: Brit/Exchange.sol


pragma solidity ^0.8.0;





contract BritGoldExchange is IERC721Receiver {
    using Address for address payable;

    struct Listing {
        address seller;
        uint256 tokenId;
        uint256 price;
        bool isActive;
    }

    IERC721 private _nftContract;
    IERC20 private _tokenContract;
    address private _owner;
    uint256 private _listingCounter;
    mapping(uint256 => Listing) private _listings;

    event ListingCreated(uint256 indexed listingId, address indexed seller, uint256 indexed tokenId, uint256 price);
    event ListingCancelled(uint256 indexed listingId);
    event SaleCompleted(uint256 indexed listingId, address indexed buyer, uint256 indexed tokenId, uint256 price);

    constructor(address nftContract, address tokenContract) {
        _nftContract = IERC721(nftContract);
        _tokenContract = IERC20(tokenContract);
        _owner = msg.sender;
    }

    modifier onlyOwner() {
        require(msg.sender == _owner, "BritGoldExchange: Only the contract owner can call this function");
        _;
    }

    function createListing(uint256 tokenId, uint256 price) external {
        require(price > 0, "BritGoldExchange: Price must be greater than zero");
        require(!_nftContract.isApprovedForAll(msg.sender, address(this)), "BritGoldExchange: Contract must be approved to transfer NFT");
        require(_nftContract.ownerOf(tokenId) == msg.sender, "BritGoldExchange: You do not own this NFT");

        _nftContract.safeTransferFrom(msg.sender, address(this), tokenId);

        _listingCounter++;
        _listings[_listingCounter] = Listing({
            seller: msg.sender,
            tokenId: tokenId,
            price: price,
            isActive: true
        });

        emit ListingCreated(_listingCounter, msg.sender, tokenId, price);
    }

    function cancelListing(uint256 listingId) external {
        Listing storage listing = _listings[listingId];
        require(listing.isActive, "BritGoldExchange: Listing is not active");
        require(listing.seller == msg.sender, "BritGoldExchange: You are not the seller of this listing");

        _nftContract.safeTransferFrom(address(this), msg.sender, listing.tokenId);
        listing.isActive = false;

        emit ListingCancelled(listingId);
    }

    function buyListing(uint256 listingId) external {
        Listing storage listing = _listings[listingId];
        require(listing.isActive, "BritGoldExchange: Listing is not active");
        require(listing.seller != msg.sender, "BritGoldExchange: You cannot buy your own listing");

        uint256 price = listing.price;
        address payable seller = payable(listing.seller);
        require(_tokenContract.allowance(msg.sender, address(this)) >= price, "BritGoldExchange: Insufficient token allowance");
        require(_tokenContract.balanceOf(msg.sender) >= price, "BritGoldExchange: Insufficient token balance");

        _nftContract.safeTransferFrom(address(this), msg.sender, listing.tokenId);
        _tokenContract.transferFrom(msg.sender, seller, price);

        listing.isActive = false;

        emit SaleCompleted(listingId, msg.sender, listing.tokenId, price);
    }

    function onERC721Received(
    address, 
    address, 
    uint256, 
    bytes calldata
    ) external pure returns(bytes4) {
        return bytes4(keccak256("onERC721Received(address,address,uint256,bytes)"));
    } 

}