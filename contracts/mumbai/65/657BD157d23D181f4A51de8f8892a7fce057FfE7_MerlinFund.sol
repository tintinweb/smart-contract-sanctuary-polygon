    function addTokenInFund(InfoTokenAdd memory infoToken) external onlyAdmin{
        noAddressZero(infoToken.tokenAddress, infoToken.aggregator);
        require(infoToken.percentage <= 10000, "value of percentage entered invalid");
        require(percentages[infoToken.tokenAddress] == 0, "token already added");

        //When adding a token, but the sum of the percentage exceeds 100
        if(percentageFill >= 10000){
            infoToken.percentage = 0;
        }

        if(infoToken.percentage > 0){
            require(percentageFill + infoToken.percentage <= 10000, "percentage entered exceeds the quantity still allowed");
            
            percentages[infoToken.tokenAddress] = infoToken.percentage;
            percentageFill = percentageFill + infoToken.percentage;

            tokenInFundCount = tokenInFundCount + 1;

            tokenInFundPosition[infoToken.tokenAddress] = tokenInFundCount;
            tokenInFund[tokenInFundCount] = infoToken.tokenAddress;
            emit FundTokenAdjustment(infoToken.tokenAddress, true);
        }

        aggregators[infoToken.tokenAddress] = infoToken.aggregator;
        routers[infoToken.tokenAddress] = infoToken.router;

        // checkValidPool(infoToken.pool);
        pools[infoToken.tokenAddress] = infoToken.pool;

        emit NewTokenAdded(infoToken.tokenAddress, infoToken.aggregator, infoToken.pool, infoToken.percentage);
    }

