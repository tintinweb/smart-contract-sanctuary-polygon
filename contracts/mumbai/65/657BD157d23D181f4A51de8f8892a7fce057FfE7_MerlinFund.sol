            //         recipient: msg.sender,
            //         deadline: block.timestamp + 300,
            //         amountIn: amountIn,
            //         amountOutMinimum: 0,
            //         sqrtPriceLimitX96: 0
            //     });

            //     // Perform the swap
            //     uint256 amountOut = uniswapV3Router.exactInputSingle(params);
            //     basketChangePercentage += amountOut;                
            // }
            
            percentageFill -= (currentPercentage - percentage);

            //Per test
            if(amountIn != 0){
                uint256 priceDecimals = 8;
                //take price
                address aggregatorAddress = aggregators[tokenAddress];
                AggregatorV3Interface priceFeed = AggregatorV3Interface(aggregatorAddress);

                (, int256 price, , , ) = priceFeed.latestRoundData();
                uint256 tokenDecimals = ERC20(tokenAddress).decimals();
                uint256 amountInUsd = (((uint256(price)*1e6)/(10**priceDecimals))*amountIn)/(10**tokenDecimals);
                // amountIn = (10**tokenDecimals * amountInUsd)/((price*1e6)/(10**priceDecimals));
                
                //Per test
                basketChangePercentage += amountInUsd;
                IERC20(tokenAddress).approve(address(this), amountIn);
                IERC20(tokenAddress).transferFrom(address(this), swapRouter, amountIn);
                IERC20(usdAddress).transferFrom(swapRouter, address(this), amountInUsd);
            }
        }
        else
        {
            require(percentageFill - currentPercentage + percentage <= 10000, "token value of percentage entered invalid");
            uint256 availablePercentage = (10000 - percentageFill) * 1000;
            percentage = percentage * 1000;
            uint256 amountIn = (percentage/availablePercentage)*basketChangePercentage;
            // amountIn = amountIn.div(1000);
            percentage = percentage.div(1000);

            if(amountIn > basketChangePercentage)
            {
                amountIn = basketChangePercentage;
            }

            // if(amountIn != 0){
            //     address poolAddress = pools[tokenAddress];
            //     uint24 fee = IUniswapV3Pool(poolAddress).fee();

            //     ISwapRouter uniswapV3Router = ISwapRouter(swapRouter);

            //     ISwapRouter.ExactInputSingleParams memory params = ISwapRouter.ExactInputSingleParams({
