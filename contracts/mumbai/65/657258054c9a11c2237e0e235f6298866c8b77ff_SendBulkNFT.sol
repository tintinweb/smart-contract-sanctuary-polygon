contract SendBulkNFT {
    
    address private owner;
    IERC721 private nftContract;
    
    constructor(address _nftContractAddress) {
        owner = msg.sender;
        nftContract = IERC721(_nftContractAddress);
    }
    
    function transferNFTs(address[] memory recipients, uint256[] memory tokenIds) public {
        require(msg.sender == owner, "Only contract owner can call this function");
        require(recipients.length == tokenIds.length, "Recipients and token IDs length mismatch");
        
        for(uint i=0; i<recipients.length; i++) {
            address recipient = recipients[i];
            uint256 tokenId = tokenIds[i];
            
            require(nftContract.ownerOf(tokenId) == owner, "Sender does not own NFT");
            require(nftContract.getApproved(tokenId) == address(this), "Contract not approved to transfer NFT");
            
            nftContract.safeTransferFrom(owner, recipient, tokenId);
        }
    }
    
    function withdraw() public {
        require(msg.sender == owner, "Only contract owner can call this function");
        payable(owner).transfer(address(this).balance);
    }
    
    receive() external payable {}
}