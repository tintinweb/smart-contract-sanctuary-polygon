pragma solidity ^0.8.9;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract MXM is ERC20, Ownable, Pausable, ReentrancyGuard {
    struct SubscriptionPackage {
        uint256 price;
        uint256 duration;
        uint256 rewardPerDay;
    }

    SubscriptionPackage[] public packages;
    uint256 public initialSupply = 10000000000 * 10**decimals();
    uint256 public subscriptionRewardPercentage = 25;
    address public usdtTokenAddress = 0x0037fBFBeE85F5311eD1bee4C8Ae643337fEA668;
    uint256 public rewardCycleDuration = 24 hours; // Default reward cycle duration is 24 hours
    uint256 public rewardPerClaim; // Fixed quantity of reward tokens to be paid for each claim

    mapping(address => uint256) public subscriptionBalances;
    mapping(address => uint256) public subscriptionLockingPeriods;
    mapping(address => uint256) public subscriptionRewardsPerDay;
    mapping(address => uint256) public subscriptionStartTimes;
    mapping(address => uint256) public lockedUSDTBalances;

    event Subscription(address indexed account, uint256 packageIndex, uint256 amount, uint256 duration);
    event Withdrawal(address indexed account, uint256 amount);
    event LockedUSDTWithdrawal(address indexed account, uint256 amount);

    constructor() payable ERC20("MXMCOIN", "MXMtst") {
        _mint(msg.sender, initialSupply * 75 / 100); // Mint 75% of initial supply to the deployer's address
        _mint(address(this), initialSupply * 25 / 100); // Mint 25% of initial supply to the contract's self address
        _addPackage(100 * 10**decimals(), 45 days, 10);
        _addPackage(500 * 10**decimals(), 30 days, 15);
        _addPackage(1000 * 10**decimals(), 25 days, 20);
        _addPackage(5000 * 10**decimals(), 20 days, 25);
        _addPackage(10000 * 10**decimals(), 15 days, 30);
    }

    function _addPackage(uint256 price, uint256 duration, uint256 rewardPerDay) private {
        packages.push(SubscriptionPackage(price, duration, rewardPerDay));
    }

    function getPackageCount() external view returns (uint256) {
        return packages.length;
    }

    function subscribe(uint256 packageIndex) external nonReentrant {
        require(packageIndex < packages.length, "Invalid package index");
        SubscriptionPackage storage selectedPackage = packages[packageIndex];

        uint256 price = selectedPackage.price;
        require(price > 0, "Invalid package price");

        // Approve the USDT token transfer from the user to the contract
        approveUSDT(price);

        // Transfer USDT tokens from the user to the contract
        IERC20 usdtToken = IERC20(usdtTokenAddress);
        usdtToken.transferFrom(msg.sender, address(this), price);

        uint256 reward = (price * subscriptionRewardPercentage) / 100;
        uint256 lockingPeriod = selectedPackage.duration;
        uint256 rewardPerDay = selectedPackage.rewardPerDay;

        subscriptionBalances[msg.sender] = price;
        subscriptionLockingPeriods[msg.sender] = block.timestamp + lockingPeriod;
        subscriptionRewardsPerDay[msg.sender] = rewardPerDay;
        subscriptionStartTimes[msg.sender] = block.timestamp;

        // Transfer reward tokens from the contract to the subscriber
        _transfer(address(this), msg.sender, reward);

        emit Subscription(msg.sender, packageIndex, price, lockingPeriod);
    }

    function approveUSDT(uint256 amount) private {
        IERC20 usdtToken = IERC20(usdtTokenAddress);
        uint256 currentAllowance = usdtToken.allowance(msg.sender, address(this));
        if (currentAllowance < amount) {
            if (currentAllowance > 0) {
                usdtToken.approve(address(this), 0); // Clear previous approval
            }
            usdtToken.approve(address(this), amount);
        }
    }

    function claimReward() external nonReentrant {
        require(rewardPerClaim > 0, "Reward per claim not set");

        uint256 reward = rewardPerClaim;
        require(reward > 0, "No available reward");

        subscriptionStartTimes[msg.sender] = block.timestamp;
        _transfer(address(this), msg.sender, reward);

        emit Withdrawal(msg.sender, reward);
    }

    function withdrawLockedUSDT() external nonReentrant {
        uint256 remainingDays = getRemainingSubscriptionDays(msg.sender);
        require(remainingDays == 0, "Subscription is still active");

        uint256 lockedBalance = subscriptionBalances[msg.sender];
        require(lockedBalance > 0, "No locked USDT balance");

        delete subscriptionBalances[msg.sender];
        delete subscriptionLockingPeriods[msg.sender];
        delete subscriptionRewardsPerDay[msg.sender];
        delete subscriptionStartTimes[msg.sender];

        IERC20 usdtToken = IERC20(usdtTokenAddress);
        usdtToken.transfer(msg.sender, lockedBalance);

        emit LockedUSDTWithdrawal(msg.sender, lockedBalance);
    }

    function getRemainingSubscriptionDays(address account) public view returns (uint256) {
        uint256 lockingPeriod = subscriptionLockingPeriods[account];
        uint256 startTime = subscriptionStartTimes[account];

        if (block.timestamp < startTime) {
            return 0;
        }

        if (block.timestamp >= lockingPeriod) {
            return 0;
        }

        uint256 remainingTime = lockingPeriod - startTime;
        uint256 remainingDays = remainingTime / 1 days;
        return remainingDays;
    }

    // Admin functions...

    function setRewardCycleDuration(uint256 durationInSeconds) external onlyOwner {
        rewardCycleDuration = durationInSeconds;
    }

    function setPackagePrice(uint256 packageIndex, uint256 price) external onlyOwner {
        require(packageIndex < packages.length, "Invalid package index");
        packages[packageIndex].price = price;
    }

    function setPackageLockingPeriod(uint256 packageIndex, uint256 lockingPeriod) external onlyOwner {
        require(packageIndex < packages.length, "Invalid package index");
        packages[packageIndex].duration = lockingPeriod;
    }

    function setPackageRewardPerDay(uint256 packageIndex, uint256 rewardPerDay) external onlyOwner {
        require(packageIndex < packages.length, "Invalid package index");
        packages[packageIndex].rewardPerDay = rewardPerDay;
    }

    function setRewardPerClaim(uint256 amount) external onlyOwner {
        rewardPerClaim = amount;
    }

    function _beforeTokenTransfer(address from, address to, uint256 amount)
        internal
        override(ERC20)
        whenNotPaused
    {
        super._beforeTokenTransfer(from, to, amount);
    }
}

