import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract VaultXOrder {

    using SafeMath for uint256;

    address wallet;
    bool isActive;
    uint256 fee = 5000;
    
    event OrderSet(address wallet, address dex, address token, uint256 amount, uint256 price, address fee);

    constructor(address _wallet){
        wallet = _wallet;
    }

    function setOrder(address token, address dex, uint256 amount, uint256 price, address feeTo) external {
        IERC20 _token = IERC20(token);
        _token.approve(address(this), amount);
        uint256 _fee = fee.div(10000);
        uint256 tax = amount.sub(_fee);
        uint256 _amount = amount.sub(tax);
        _token.transferFrom(msg.sender, wallet, tax);
        emit OrderSet(msg.sender, dex, token, _amount, price, feeTo);
    }
}