  /**
   * @dev - We decided to make the restriction on shifts be that there cannot be outstanding shifts to this destination from any other origin tier.
   *        The reason for this is that we don't want to have to do for loops in the user settlement of a single token (ie in the transfer hook for the MIA)
   */
  function shift(
    uint104 amountSyntheticTokensToShift,
    PoolId memory originPoolId,
    PoolId memory destinationPoolId
  ) external {
    require(amountSyntheticTokensToShift > 0, "shift amount == 0");

    _executePoolOutstandingUserShifts(msg.sender, originPoolId.index, originPoolId.poolType);

    ISyntheticToken(pools[originPoolId.poolType][originPoolId.index].token).transferFrom(
      msg.sender,
      address(this),
      amountSyntheticTokensToShift
    );

    uint32 currentEpoch = epochInfo.previousEpochIndex + 1;

    require(
      originPoolId.poolType != destinationPoolId.poolType ||
        originPoolId.index != destinationPoolId.index,
      "shift to same type"
    );

    UserActionShift memory userShiftAmount = user_syntheticToken_ShiftAmountAction[msg.sender][
      destinationPoolId.poolType
    ][destinationPoolId.index];

    /**
     * @dev either the user has NO pending to this destination OR the pending shifts it has to this destination are from the SAME origin.
     *      This also means that trying to do another shift to different destination within EWT will fail.
     *      (if this is an issue, we can hack a workaround)
     */
    require(
      (userShiftAmount.amountOddEpoch == 0 && userShiftAmount.amountEvenEpoch == 0) ||
        (userShiftAmount.originPoolId.poolType == originPoolId.poolType &&
          userShiftAmount.originPoolId.index == originPoolId.index),
      "can't shift to different pools"
    );

    userShiftAmount.originPoolId = originPoolId; // NOTE: might be redundant if already set. An optimization opportunity?

    if (currentEpoch % 2 == 0) {
      userShiftAmount.amountEvenEpoch += amountSyntheticTokensToShift;

      batched_syntheticToken_shiftAmount[originPoolId.poolType][originPoolId.index][
        destinationPoolId.poolType
      ][destinationPoolId.index].amountEvenEpoch += amountSyntheticTokensToShift;
    } else {
      userShiftAmount.amountOddEpoch += amountSyntheticTokensToShift;

      batched_syntheticToken_shiftAmount[originPoolId.poolType][originPoolId.index][
        destinationPoolId.poolType
      ][destinationPoolId.index].amountOddEpoch += amountSyntheticTokensToShift;
    }

    user_syntheticToken_ShiftAmountAction[msg.sender][destinationPoolId.poolType][
      destinationPoolId.index
    ] = userShiftAmount;

    revert("No shifting allowed until after upgrade");
  }

