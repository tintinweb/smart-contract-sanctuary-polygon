pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./interfaces/IKryptoPunks.sol";
import "./interfaces/IKryptoPunksToken.sol";

contract NFTStakingVault is Ownable {
    struct Stake {
        address owner;
        uint256 stakedAt;
    }

    IKryptoPunks public nftToken;
    IKryptoPunksToken public rewardToken;
    uint256 public rewardRate;
    uint256 public totalItemsStaked;

    mapping(uint256 => Stake) public vault;

    event Claimed(address indexed user, uint256 rewardAmount);
    event ItemStaked(uint256 indexed tokenId, address indexed owner, uint256 timestamp);
    event ItemUnstaked(uint256 indexed tokenId, address indexed owner, uint256 timestamp);

    constructor(
        address _nftToken,
        address _rewardToken,
        uint256 _rewardRate
    ) {
        nftToken = IKryptoPunks(_nftToken);
        rewardToken = IKryptoPunksToken(_rewardToken);
        rewardRate = _rewardRate;
    }

        function claimRewards(uint256 tokenId) external {
        Stake storage stake = vault[tokenId];
        address user = msg.sender;

        if (stake.owner != user) {
            revert("NFTStakingVault: Not item owner");
        }

        uint256 _stakedAt = stake.stakedAt;
        uint256 timeStaked = block.timestamp - _stakedAt;
        uint256 rewardEarned = timeStaked * rewardRate;

        rewardToken.transfer(user, rewardEarned);

        stake.stakedAt = block.timestamp;

        emit Claimed(user, rewardEarned);
    }

    function stakeNFT(uint256[] memory tokenIds) external {
        address user = msg.sender;
        uint256 stakedCount = 0;

        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];

            if (vault[tokenId].owner == address(0)) {
                nftToken.transferFrom(user, address(this), tokenId);

                vault[tokenId] = Stake(user, block.timestamp);

                emit ItemStaked(tokenId, user, block.timestamp);

                stakedCount++;
            }
        }

        totalItemsStaked = totalItemsStaked + stakedCount;
    }

    function unstakeNFT(uint256 tokenId) external {
        address user = msg.sender;

        if (vault[tokenId].owner != user) {
            revert("NFTStakingVault: Not item owner");
        }

        uint256 _stakedAt = vault[tokenId].stakedAt;
        uint256 timeStaked = block.timestamp - _stakedAt;
        uint256 rewardEarned = timeStaked * rewardRate;

        rewardToken.transfer(user, rewardEarned);

        vault[tokenId].stakedAt = block.timestamp;

        nftToken.transferFrom(address(this), user, tokenId);

        delete vault[tokenId];

        emit ItemUnstaked(tokenId, user, block.timestamp);

        totalItemsStaked = totalItemsStaked - 1;
    }

    function balanceOf(address user) public view returns (uint256 nftStakedbalance) {
        uint256 supply = nftToken.totalSupply();
        unchecked {
            for (uint256 i; i <= supply; ++i) {
                if (vault[i].owner == user) {
                    nftStakedbalance += 1;
                }
            }
        }
    }

    function tokensOfOwner(address user) public view returns (uint256[] memory tokens) {
        uint256 balance = balanceOf(user);
        uint256 supply = nftToken.totalSupply();
        tokens = new uint256[](balance);

        uint256 counter;

        if (balance == 0) {
            return tokens;
        }

        unchecked {
            for (uint256 i; i <= supply; ++i) {
                if (vault[i].owner == user) {
                    tokens[counter] = i;
                    counter++;
                }
                if (counter == balance) {
                    return tokens;
                }
            }
        }
    }
}

