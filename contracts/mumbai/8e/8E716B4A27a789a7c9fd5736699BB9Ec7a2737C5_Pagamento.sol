pragma solidity ^0.8.0;



contract Pagamento is ReentrancyGuard {
    using SafeMath for uint256;

    address payable public vendedor;
    address payable public carteiraFee;
    mapping(address => uint256) public montantePendente;

    event PagamentoRecebido(address pagador, uint256 valor);

    constructor(address payable _vendedor, address payable _carteiraFee) {
        require(_vendedor != address(0), "Endereco do vendedor invalido");
        require(_carteiraFee != address(0), "Endereco da carteira de fee invalido");
        vendedor = _vendedor;
        carteiraFee = _carteiraFee;
    }

    function pagar() external payable nonReentrant {
        require(msg.value > 0, "O montante do pagamento deve ser maior que zero");
        uint256 fee = msg.value.mul(10).div(100); // Calcula o valor do fee (10%)
        montantePendente[msg.sender] = montantePendente[msg.sender].add(msg.value.sub(fee));
        montantePendente[carteiraFee] = montantePendente[carteiraFee].add(fee);
        emit PagamentoRecebido(msg.sender, msg.value);
    }

    function transferirPagamento() external nonReentrant {
        uint256 montante = montantePendente[msg.sender];
        require(montante > 0, "Nao ha montante pendente para transferir");
        montantePendente[msg.sender] = 0;
        (bool success, ) = vendedor.call{value: montante}("");
        require(success, "Falha na transferencia de pagamento");
    }

    function retirarFundos() external {
        require(msg.sender == vendedor, "Somente o vendedor pode retirar os fundos");
        (bool success, ) = vendedor.call{value: address(this).balance}("");
        require(success, "Falha na retirada de fundos");
    }
}