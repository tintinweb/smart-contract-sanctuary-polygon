import "@chainlink/contracts/src/v0.8/ChainlinkClient.sol";
import "@chainlink/contracts/src/v0.8/ConfirmedOwner.sol";
import "./structs/Common.sol";
import "./structs/Inference.sol";
import "./structs/Services.sol";
import "./tokens/nft/ServicesNFT.sol";

contract ChainML is ChainlinkClient, ConfirmedOwner {
    using Chainlink for Chainlink.Request;

    uint256 private fee;

    ServicesNFT servicesNFT;

    // public for testing and dev
    bytes32 public inferenceJobId;
    bytes32 public servicesJobId;

    mapping(bytes32 => InferenceCallback) private inferenceCallbacks;
    mapping(bytes32 => ServiceCallback) private serviceCallbacks;
    mapping(bytes32 => address) private serviceRegistrars;

    event RequestSentToChainlink(
        bytes32 indexed requestId,
        Chainlink.Request req
    );
    event FulfillmentReceivedFromChainlink(
        bytes32 indexed requestId,
        bytes data
    );
    event CallbackProcessing(bytes32 indexed requestId, address customerDapp);
    event InferenceRequestFulfilled(bytes32 indexed requestId, bool success);
    event ServiceRegistrationFulfilled(
        bytes32 indexed requestId,
        string indexed serviceId,
        uint servicesNFTId
    );

    constructor(
        address chainlinkToken,
        address oracle,
        address nft
    ) ConfirmedOwner(msg.sender) {
        setChainlinkToken(chainlinkToken);

        setChainlinkOracle(oracle);

        servicesNFT = ServicesNFT(nft);

        // 1 JUEL = 0.000000000000000001 LINK
        // 1 LINK = 1000000000000000000 JUELS
        fee = 1; // 1 JUEL
    }

    function executeAsB64Encoded(
        string memory metadata,
        string memory data,
        address callbackContract,
        bytes4 callbackFunctionSelector
    ) public returns (bytes32) {
        Chainlink.Request memory req = buildChainlinkRequest(
            inferenceJobId,
            address(this),
            this.onInferenceResponse.selector
        );
        req.add("metadata", metadata);
        req.add("data", data);
        bytes32 chainlinkReqId = sendChainlinkRequest(req, fee);

        // register callback
        inferenceCallbacks[chainlinkReqId] = InferenceCallback({
            callback: Callback({
                receiver: callbackContract,
                functionSelector: callbackFunctionSelector
            }),
            responseABIFragment: ""
        });
        emit RequestSentToChainlink(chainlinkReqId, req);

        return chainlinkReqId;
    }

    function executeAsABIEncoded(
        InferenceRequest calldata inferenceRequest
    ) public returns (bytes32) {
        Chainlink.Request memory req = buildChainlinkRequest(
            inferenceJobId,
            address(this),
            this.onInferenceResponse.selector
        );

        req.addBytes("metadata", abi.encode(inferenceRequest.metadata));
        req.addBytes("data", inferenceRequest.data);
        req.add("requestABIFragment", inferenceRequest.requestABIFragment);
        req.add(
            "responseABIFragment",
            inferenceRequest.callback.responseABIFragment
        );

        bytes32 chainlinkReqId = sendChainlinkRequest(req, fee);

        // register callback
        inferenceCallbacks[chainlinkReqId] = inferenceRequest.callback;
        emit RequestSentToChainlink(chainlinkReqId, req);

        return chainlinkReqId;
    }

    function onInferenceResponse(
        bytes32 requestId,
        bytes calldata respData
    ) public recordChainlinkFulfillment(requestId) {
        emit FulfillmentReceivedFromChainlink(requestId, respData);
        require(
            inferenceCallbacks[requestId].callback.receiver != address(0),
            "request id has no registered callbacks"
        );

        InferenceCallback memory rcb = inferenceCallbacks[requestId];
        emit CallbackProcessing(requestId, rcb.callback.receiver);
        (bool success, ) = rcb.callback.receiver.call(
            abi.encodeWithSelector(
                rcb.callback.functionSelector,
                requestId,
                respData
            )
        );

        emit InferenceRequestFulfilled(requestId, success);
    }

    function registerService(
        ServiceRequest calldata data,
        Callback calldata callback
    ) public returns (bytes32) {
        Chainlink.Request memory req = buildChainlinkRequest(
            servicesJobId,
            address(this),
            this.onServiceRegistered.selector
        );

        req.add("name", data.name);
        req.add("uri", data.uri);
        req.add("version", data.version);
        req.addUint("port", data.port);
        req.add("shortDescription", data.shortDescription);
        req.add("description", data.description);
        req.add("minSpec", data.minSpec);

        bytes32 chainlinkReqId = sendChainlinkRequest(req, fee);

        serviceRegistrars[chainlinkReqId] = msg.sender;

        if (callback.receiver != address(0)) {
            serviceCallbacks[chainlinkReqId] = ServiceCallback({
                callback: callback,
                registered: true
            });
        }

        emit RequestSentToChainlink(chainlinkReqId, req);

        return chainlinkReqId;
    }

    function onServiceRegistered(
        bytes32 requestId,
        bytes calldata respData
    ) public recordChainlinkFulfillment(requestId) {
        emit FulfillmentReceivedFromChainlink(requestId, respData);

        address recipient = serviceRegistrars[requestId];
        uint servicesNFTId = mintNFT(respData, recipient);

        if (serviceCallbacks[requestId].registered) {
            emit CallbackProcessing(
                requestId,
                serviceCallbacks[requestId].callback.receiver
            );

            (bool success, ) = serviceCallbacks[requestId]
                .callback
                .receiver
                .call(
                    abi.encodeWithSelector(
                        serviceCallbacks[requestId].callback.functionSelector,
                        requestId,
                        respData
                    )
                );
        }

        emit ServiceRegistrationFulfilled(
            requestId,
            string(respData),
            servicesNFTId
        );
    }

    function mintNFT(
        bytes memory serviceId,
        address recipient
    ) private returns (uint) {
        uint copies = 1;

        uint256 tokenId = servicesNFT.mint(recipient, copies, serviceId);
        return tokenId;
    }

    // TODO: test thoroughly
    function stringToBytes32(
        string memory source
    ) private pure returns (bytes32 result) {
        bytes memory tempEmptyStringTest = bytes(source);
        if (tempEmptyStringTest.length == 0) {
            return 0x0;
        }

        assembly {
            // solhint-disable-line no-inline-assembly
            result := mload(add(source, 32))
        }
    }

    function setInferenceJobId(string memory _inferenceJobId) public {
        inferenceJobId = stringToBytes32(_inferenceJobId);
    }

    function setServicesJobId(string memory _servicesJobId) public {
        servicesJobId = stringToBytes32(_servicesJobId);
    }

    function setOracle(address oracleContract) public {
        setChainlinkOracle(oracleContract);
    }

    function setServicesNFT(address nft) public {
        servicesNFT = ServicesNFT(nft);
    }

    function getOracle() public view returns (address) {
        return chainlinkOracleAddress();
    }

    function withdrawLink() public {
        LinkTokenInterface link = LinkTokenInterface(chainlinkTokenAddress());

        require(
            link.transfer(msg.sender, link.balanceOf(address(this))),
            "Unable to transfer"
        );
    }
}

