    if (whiteList.open()) {
      return;
    } else if(whiteList.tsbOnly()){
      require(whiteList.TSBWhiteList(tokenAddress), "TSB not allowed");
    } else if(whiteList.partners()) {
      require(whiteList.PartnerWhiteList(tokenAddress), "Partner not allowed");
    } else {
      revert("not allowed");
    }
  }

  uint256[50] private __gap;
}

