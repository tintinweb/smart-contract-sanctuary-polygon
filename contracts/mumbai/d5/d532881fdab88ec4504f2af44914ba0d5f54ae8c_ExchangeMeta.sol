pragma solidity 0.8.13;

import "@tsb/exchange-interfaces/contracts/ITransferProxy.sol";
import "@tsb/exchange-interfaces/contracts/INftTransferProxy.sol";
import "@tsb/exchange-interfaces/contracts/IERC20TransferProxy.sol";
