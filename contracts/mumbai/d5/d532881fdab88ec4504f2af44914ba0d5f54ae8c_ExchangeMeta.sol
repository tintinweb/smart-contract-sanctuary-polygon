        } else {
          // if maker is not contract then checking ECDSA signature
          if (_hashTypedDataV4(hash).recover(signature) != order.maker) {
            revert("order signature verification error");
          } else {
            require(order.maker != address(0), "no maker");
          }
        }
      }
    }
  }

