/**
 * @title FxERC20TransferChildTunnel
 */
abstract contract FxERC20TransferChildTunnel is FxBaseChildTunnel {
    address public immutable rootToken;
    IFxERC20 public immutable childToken;
    IFxERC20ChildTunnel public immutable fxERC20ChildTunnel;

    constructor(
        address fxChild_,
        address rootToken_,
        address fxERC20ChildTunnel_
    ) FxBaseChildTunnel(fxChild_) {
        rootToken = rootToken_;
        fxERC20ChildTunnel = IFxERC20ChildTunnel(fxERC20ChildTunnel_);

        address childToken_ = fxERC20ChildTunnel.rootToChildToken(rootToken_);
        require(
            childToken_ != address(0),
            "FxERC20TransferChildTunnel:TOKEN_NOT_MAPPED"
        );

        childToken = IFxERC20(childToken_);
    }

    function withdraw(uint256 amount_) public {
        _withdraw(msg.sender, amount_);
    }

    function withdrawTo(address recipient_, uint256 amount_) public {
        _withdraw(recipient_, amount_);
    }

