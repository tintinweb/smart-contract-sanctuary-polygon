import {Reentrancy} from "../Reentrancy.sol";

import {IFxERC4626ChildTunnel} from "../interfaces/child/IFxERC4626ChildTunnel.sol";

contract FxERC4626ChildTunnel is
    IFxERC4626ChildTunnel,
    FxERC20TransferChildTunnel,
    Reentrancy
{
    ERC4626 public vault;

    constructor(
        address fxChild_,
        address rootToken_,
        address fxERC20ChildTunnel_,
        address vault_
    ) FxERC20TransferChildTunnel(fxChild_, rootToken_, fxERC20ChildTunnel_) {
        vault = ERC4626(vault_);
    }

    function bridgeStake(uint256 shares_) external {
        uint256 assets_ = _redeem(msg.sender, shares_);
        withdraw(assets_);
        emit Bridge(msg.sender, assets_);
    }

    function _redeem(
        address account_,
        uint256 shares_
    ) internal _reentrancyGuard returns (uint256 assets_) {
        assets_ = vault.redeem(shares_, address(this), account_);
        emit Withdraw(account_, shares_, assets_);
    }

    function _processMessageFromRoot(
        uint256 /* stateId */,
        address sender_,
        bytes memory data_
    ) internal override validateSender(sender_) {
        (address rootToken_, address recipient_, uint256 amount_) = abi.decode(
            data_,
            (address, address, uint256)
        );

        require(
            rootToken_ == rootToken,
            "FxERC20TransferChildTunnel:INVALID_MAPPING_ON_EXIT"
        );

        // deposit tokens to this contract
        childToken.mint(address(this), amount_);
        // stake for user
        childToken.approve(address(vault), amount_);
        vault.deposit(amount_, recipient_);
    }
}

