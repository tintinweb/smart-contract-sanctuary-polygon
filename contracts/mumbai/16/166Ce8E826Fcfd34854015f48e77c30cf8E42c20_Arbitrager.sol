    function calX(
        uint256 Ares0,
        uint256 Ares1,
        uint256 Bres0,
        uint256 Bres1
    ) internal pure returns (int256) {
        int256 prA = int256(Babylonian.sqrt(Ares0 * Ares1));
        int256 prB = int256(Babylonian.sqrt(Bres0 * Bres1));
        int256 x = ((((int256(Ares1) * 1000 + int256(Bres1) * 997) *
            (prA - prB)) / (prA + prB)) -
            (int256(Ares1) * 1000 - int256(Bres1) * 997)) /
            2 /
