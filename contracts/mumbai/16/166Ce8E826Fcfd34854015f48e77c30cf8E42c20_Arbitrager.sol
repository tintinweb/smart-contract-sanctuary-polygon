    function computeProfitMaximizingTrade(
        uint256 Ares0,
        uint256 Ares1,
        uint256 Bres0,
        uint256 Bres1
    )
        internal
        pure
        returns (
            uint256 x,
            uint256 y,
            uint256 z
        )
