            nftContract: nftContract,
            tokenId: tokenId,
            erc20Token: address(erc20Token),
            tokenPrice: tokenPrice.mul(10**18), // Scale token price by 10^18
            active: true,
            claimed: false
        }));

        listingIdOfToken[nftContract][tokenId] = listingId;
        nextListingId++;

        emit ListingCreated(listingId, msg.sender, nftContract, tokenId, address(erc20Token), tokenPrice);
    }

    function buyNFT(uint256 listingId) external {
        require(listingId > 0 && listingId < nextListingId, "Invalid listing ID");

        Listing storage listing = listings[listingId - 1];
        require(listing.active, "Listing is not active");
        require(!listing.claimed, "NFT has already been claimed");

        uint256 requiredAmount = listing.tokenPrice;

        require(erc20Token.balanceOf(msg.sender) >= requiredAmount, "Insufficient balance");
        require(erc20Token.allowance(msg.sender, address(this)) >= requiredAmount, "Not enough allowance");

        uint256 commissionAmount = requiredAmount.mul(2).div(100); // Calculate 2% commission amount
        uint256 transferAmount = requiredAmount.sub(commissionAmount); // Calculate the amount to be transferred to the seller

        erc20Token.transferFrom(msg.sender, listing.seller, transferAmount);
        erc20Token.transferFrom(msg.sender, address(this), commissionAmount);

        IERC721(listing.nftContract).safeTransferFrom(address(this), msg.sender, listing.tokenId);

        listing.active = false;

        emit ListingSold(listingId, listing.seller, msg.sender, listing.nftContract, listing.tokenId, address(erc20Token), listing.tokenPrice);
    }

    function claimNFT(uint256 listingId) external {
        require(listingId > 0 && listingId < nextListingId, "Invalid listing ID");

        Listing storage listing = listings[listingId - 1];
        require(!listing.active, "Listing is still active");
        require(!listing.claimed, "NFT has already been claimed");
        require(listing.seller == msg.sender, "Only the seller can claim the NFT");

        IERC721(listing.nftContract).safeTransferFrom(address(this), msg.sender, listing.tokenId);

        listing.claimed = true;

        emit NFTClaimed(listingId, msg.sender, listing.nftContract, listing.tokenId);
    }

    function withdrawTokens(uint256 amount) external {
        require(msg.sender == address(this), "Only the contract itself can call this function");

        erc20Token.transfer(msg.sender, amount);
    }

    function onERC721Received(address, address, uint256, bytes calldata) external pure override returns (bytes4) {
        return this.onERC721Received.selector;
    }
}