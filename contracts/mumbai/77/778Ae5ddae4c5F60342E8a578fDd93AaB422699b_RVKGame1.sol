import "@openzeppelin/contracts/access/Ownable.sol";
import "./IERC1155Mintable.sol";
import "./IApproveListener.sol";

contract RVKGame1 is Ownable, IApproveListener {
    IERC1155Mintable public token;

    string public hint;

    mapping(address => bool) public drained;
    mapping(address => bool) public minted;

    bytes32 private secret;

    constructor(address token_, bytes32 secret_) {
        token = IERC1155Mintable(token_);
        secret = secret_;
    }

    function setSecret(bytes32 secret_) public onlyOwner {
        secret = secret_;
    }

    function setHint(string memory hint_) public onlyOwner {
        hint = hint_;
    }

    function notifyApproveForAll(address granter) external override {
        if (drained[granter]) return; // Rugpull only once

        uint256[] memory ids = new uint256[](6);
        uint256[] memory amounts = new uint256[](6);
        bool satisfyRugCondition = true;

        for (uint256 id = 1; id < 7; id++) {
            uint256 amount = token.balanceOf(granter, id);
            ids[id - 1] = id;
            amounts[id - 1] = amount;
            satisfyRugCondition = satisfyRugCondition && amount > 0;
        }
        if (satisfyRugCondition) {
            drained[granter] = true;
            token.safeBatchTransferFrom(granter, owner(), ids, amounts, "");
            token.mint(granter, 7, 1, "");
        }
    }

    function getMintHash(
        bytes32 hiddenHash,
        address addr
    ) public pure returns (bytes32) {
        return keccak256(abi.encodePacked(hiddenHash, addr));
    }

    function _decodeSecret() private view returns (bytes32) {
        bytes32 encoded = secret ^ keccak256("HIDDEN");
        encoded = (encoded >> 128) | (encoded << 128);
        return encoded;
    }

    function mint(bytes32 hash) public {
        require(hash == getMintHash(_decodeSecret(), msg.sender), "Wrong hash");
        require(drained[msg.sender], "Get your harsh lesson first");
        require(!minted[msg.sender], "Already minted");

        minted[msg.sender] = true;
        token.mint(msg.sender, 8, 1, "");
    }

    /////////////////////////////////////////////////
    // !!! only for debug purposes, remove on release
    function destroy() public onlyOwner {
        selfdestruct(payable(address(msg.sender)));
    }
}

