pragma solidity ^0.8.18;

import {Clones} from "@openzeppelin/contracts/proxy/Clones.sol";
import {AccessControl} from "@openzeppelin/contracts/access/AccessControl.sol";

import {IVestingToken, Vesting} from "./interfaces/IVestingToken.sol";

/**
 * @title VestingManager
 * @notice A contract for managing vesting tokens and their associated functionalities.
 * This contract allows for the creation of vesting tokens with specified schedules,
 * as well as the creation and management of burning rounds for specific vesting tokens.
 */
contract VestingManager is AccessControl {
    /// @notice The role that can create vesting token with schedule
    bytes32 public constant VESTING_CREATOR_ROLE = keccak256("VESTING_CREATOR_ROLE");

    /// @notice The role that can create and stop a burning round for specific vesting token
    bytes32 public constant BURNING_CREATOR_ROLE = keccak256("BURNING_CREATOR_ROLE");

    /// @notice The address of the vesting token implementation
    address private s_vestingImplementation;

    /// @notice Array to store vesting token addresses
    address[] internal s_vestingTokens;

    constructor(address implementation, address admin) {
        s_vestingImplementation = implementation;
        _grantRole(DEFAULT_ADMIN_ROLE, admin);

        emit VestingImplementationSet(implementation);
    }

    /// @notice Returns true if the vesting token exists
    mapping(address token => bool isToken) private s_isVestingToken;

    /// @notice When the vesting token does not exist
    error VestingTokenNotExist();

    /// @notice Emitted when a new vesting token is created
    event VestingTokenCreated(address indexed vestingToken);

    /// @notice Emitted when implementation is set
    event VestingImplementationSet(address indexed implementation);

    /// @dev Check if a vesting token exists
    modifier isTokenExist(address vestingToken) {
        if (!s_isVestingToken[vestingToken]) {
            revert VestingTokenNotExist();
        }

        _;
    }

    /**
     * @notice Create a vesting token with a specified vesting schedule
     * @param name The name of the vesting token
     * @param symbol The symbol of the vesting token
     * @param baseToken The address of the token to be locked in the vesting contract
     * @param minter The address that will be able to mint tokens in the vesting contract
     * @param vesting The vesting schedule for the locked tokens
     * @return vestingToken - The address of the created vesting token
     * @dev This function is used by the VESTING_CREATOR_ROLE to create a vesting token
     * for a specific vesting schedule
     */
    function createVesting(
        string calldata name,
        string calldata symbol,
        address baseToken,
        address minter,
        Vesting calldata vesting
    ) external onlyRole(VESTING_CREATOR_ROLE) returns (address vestingToken) {
        vestingToken = _createVestingToken(name, symbol, minter, baseToken);

        IVestingToken(vestingToken).setVestingSchedule(
            vesting.startTime,
            vesting.cliff,
            vesting.schedule
        );
    }

    /**
     * @notice Creates a new vesting token
     * @dev Emits an VestingTokenCreated event to indicate the creation of the vesting token
     * @return vestingToken - The address of the new vesting token
     */
    function _createVestingToken(
        string calldata name,
        string calldata symbol,
        address minter,
        address baseToken
    ) private returns (address vestingToken) {
        // Clone the vesting contract implementation to create a new vesting token
        vestingToken = Clones.clone(s_vestingImplementation);

        s_vestingTokens.push(vestingToken);
        s_isVestingToken[vestingToken] = true;

        // Initialize the vesting token with the provided parameters
        IVestingToken(vestingToken).initialize(name, symbol, minter, baseToken);

        emit VestingTokenCreated(vestingToken);
    }

    /**
     * @notice Creates a burning round for a vesting token
     * @param nft The address of the NFT contract associated with the vesting token
     * @param vestingToken The address of the vesting token contract
     * @param startTime The starting time of the burning round
     * @param endTime The ending time of the burning round
     * @param totalToBurn The total amount of tokens to be burned in the round
     * @param minBurnPerTx The minimum amount of tokens that can be burned per transaction
     * @param maxBurnPerTx The maximum amount of tokens that can be burned per transaction
     * @dev This function is used by the BURNING_CREATOR_ROLE to create a burning round
     * for a specific vesting token
     */
    function createBurningRound(
        address nft,
        address vestingToken,
        uint256 startTime,
        uint256 endTime,
        uint256 totalToBurn,
        uint256 minBurnPerTx,
        uint256 maxBurnPerTx
    ) external onlyRole(BURNING_CREATOR_ROLE) isTokenExist(vestingToken) {
        IVestingToken(vestingToken).createBurningRound(
            nft,
            startTime,
            endTime,
            totalToBurn,
            minBurnPerTx,
            maxBurnPerTx
        );
    }

    /**
     * @notice Stops the currently active burning round for a specific vesting token
     * @param vestingToken The address of the vesting token contract
     * @dev This function is used by the BURNING_CREATOR_ROLE to stop
     * the currently active burning round for the specified vesting token
     */
    function stopBurningRound(
        address vestingToken
    ) external onlyRole(BURNING_CREATOR_ROLE) isTokenExist(vestingToken) {
        IVestingToken(vestingToken).stopBurningRound();
    }

    /**
     * @notice Sets the implementation address for the vesting tokens
     * @param implementation The address of the new vesting token implementation contract
     * @dev This function is used by the accounts with the DEFAULT_ADMIN_ROLE to set
     * the implementation address for the vesting tokens
     */
    function setVestingImplementation(
        address implementation
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        s_vestingImplementation = implementation;

        emit VestingImplementationSet(implementation);
    }

    /// @notice Returns the address of the vesting implementation token contract
    function getVestingImplementation() external view returns (address) {
        return s_vestingImplementation;
    }

    /// @notice Returns the array containing all the vesting token addresses
    function getVestingTokens() external view returns (address[] memory) {
        return s_vestingTokens;
    }
}

