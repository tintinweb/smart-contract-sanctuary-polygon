        lzEndpoint.setConfig(
            lzEndpoint.getSendVersion(address(this)),
            _dstChainId,
            CONFIG_TYPE_ORACLE,
            abi.encode(_sendOracle)
        );
        lzEndpoint.setConfig(
            lzEndpoint.getReceiveVersion(address(this)),
            _dstChainId,
            CONFIG_TYPE_ORACLE,
            abi.encode(_receiveOracle)
        );
    }

