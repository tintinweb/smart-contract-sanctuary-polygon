        bytes memory bytesSendOracle = lzEndpoint.getConfig(
            lzEndpoint.getSendVersion(address(this)),
            _dstChainId,
            address(this),
            CONFIG_TYPE_ORACLE
        );
        assembly {
            _sendOracle := mload(add(bytesSendOracle, 32))
