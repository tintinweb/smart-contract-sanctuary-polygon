        require(numberOfSignatures > 0, "invalid value");
        require(maxClaimEntries > 0, "invalid maxClaimEntries");
        limits = LimitData({numberOfSignatures: numberOfSignatures - 1, maxClaimEntries: maxClaimEntries - 1});
