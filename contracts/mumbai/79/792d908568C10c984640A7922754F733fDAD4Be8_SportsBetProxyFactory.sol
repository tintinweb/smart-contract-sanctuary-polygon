// libs
import "@openzeppelin/contracts/proxy/Clones.sol";

// interfaces
import "./ISportsBetProxy.sol";

// modules
import "./SportsBetProxy.sol";

contract SportsBetProxyFactory {
    //
    // --- Errors
    //

    error SportsBetProxyFactoryImplementationRequired();

    //
    // --- Storage
    //

    address public implementation;

    constructor() {
        implementation = address(new SportsBetProxy());

        if (implementation == address(0)) {
            revert SportsBetProxyFactoryImplementationRequired();
        }
    }

    function deployProxy(
        bytes32 salt,
        string memory _teamHome,
        string memory _teamAway,
        uint256 _matchDay
    ) public returns (address) {
        address clone = Clones.cloneDeterministic(implementation, salt);
        ISportsBetProxy(clone).initialize(
            _teamHome,
            _teamAway,
            _matchDay,
            msg.sender
        );

        return clone;
    }
}

