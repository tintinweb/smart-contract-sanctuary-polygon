// libs
import "@openzeppelin/contracts/utils/structs/EnumerableMap.sol";

// modules
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Address.sol";

// interfaces
import "./ISportsBet.sol";
import "./ISportsBetProxy.sol";

contract SportsBetProxy is
    ISportsBet,
    ISportsBetProxy,
    Ownable,
    ReentrancyGuard,
    Initializable
{
    //
    // --- Variables
    //

    MatchDetails private _matchDetails;
    MatchOutcome private _matchOutcome;

    Bet[] private _bets;
    mapping(address => uint256) private _betAmounts;

    using Address for address;

    // solhint-disable-next-line no-empty-blocks
    constructor() initializer {
        // when the base logic contract is deployed, the initialized flag should get set so its not
        // possible to call `initialize(...)`
    }

    function initialize(
        string memory _teamHome,
        string memory _teamAway,
        uint256 _matchday,
        address _owner
    ) public initializer {
        _transferOwnership(_owner);
        Team memory teamHome = Team(_teamHome, true);
        Team memory teamAway = Team(_teamAway, true);
        _matchDetails = MatchDetails(teamHome, teamAway, _matchday);
    }

    //
    // --- Queries
    //
    function getMatchDetails() public view returns (MatchDetails memory) {
        return _matchDetails;
    }

    function _getTeam(Teams _side) internal view returns (Team storage) {
        if (_side == Teams.TeamHome) {
            return _matchDetails.teamHome;
        } else {
            return _matchDetails.teamAway;
        }
    }

    function getBetAmount(address _addy) public view returns (uint256) {
        return _betAmounts[_addy];
    }

    function getTotalBetAmount(Teams _side)
        public
        view
        returns (uint256)
    {
        uint256 totalBetAmount;
        for (uint256 index = 0; index < _bets.length; index++) {
            Bet memory _bet = _bets[index];

            if (_bet.side == _side) {
                totalBetAmount += _bet.amount;
            }
        }
        return totalBetAmount;
    }

    //
    // --- Logic
    //

    function createBet(Teams _side)
        external
        payable
        nonReentrant
    {
        address _msgSender = _msgSender();
        address _owner = owner();
        require(_msgSender != _owner, "owner can't make a bet");
        require(msg.value > 0.01 ether, "bet more");

        _bets.push(Bet(_msgSender, msg.value, _side));
        _betAmounts[_msgSender] = msg.value;

        Address.sendValue(payable(_owner), msg.value);

        emit NewBet(_msgSender, msg.value, _getTeam(_side));
    }

    function setOutcome(MatchOutcome _outcome) public onlyOwner {
        _matchOutcome = _outcome;
        emit OutcomeChanged(_matchOutcome);
    }

    function _sendValue(address payable receiver, uint256 value) internal {
        // solhint-disable-next-line avoid-low-level-calls
        (bool sent, ) = receiver.call{ value: value }("");
        require(sent, "Failed to send Ether");
    }
}

