pragma solidity ^0.8.19;

import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/AccessControlEnumerable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "./NativeMetaTransaction.sol";

struct TokenData {
    uint256 bonus; // in basis point like 20_00 for 20.00%
    uint256 decimals; // ERC20 decimals
    // if token is BLOOD, it means the amount of BLOOD minted (converted) from this contract
    // if token is not BLOOD, it means the amount of token has been transfered to this contract in conversion process
    uint256 pooled;
    uint256 price; // last price
    uint256 epoch; // last price updated
}

struct ConvertParams {
    address tokenAddress;
    uint256 tokenAmount;
}

// things to keep in mind when interact with this contract:
// - debugging is not prioritized ( but gas-saving instead )
// - supported input tokens should only be added (not removed)

contract BloodConverter is
    Pausable,
    AccessControlEnumerable,
    ContextMixin,
    NativeMetaTransaction
{
    using EnumerableSet for EnumerableSet.AddressSet;

    event ConvertedMulti(
        uint256 epoch,
        ConvertParams[] inputTokens,
        address receiver,
        uint256 outputAmount
    );
    event ConvertedSingle(
        uint256 epoch,
        address inputTokenAddress,
        uint256 inputTokenAmount,
        address receiver,
        uint256 outputAmount
    );
    event BloodRedeemed(
        address indexed account,
        address indexed receiver,
        uint256 amount
    );

    bytes32 public constant OWNER_ROLE = "OWNER_ROLE";
    bytes32 public constant ADMIN_ROLE = "ADMIN_ROLE";
    uint256 private constant USD2BLOOD_RATE = 100;
    uint256 private constant PERCENTAGE_DIVIDER = 1_00_00;

    address public bloodTokenAddress;
    address public payMasterAddress;

    EnumerableSet.AddressSet private inputTokens;
    mapping(address => TokenData) public inputTokenData;
    // epoch timestamp => token address => token price
    mapping(uint256 => mapping(address => uint256)) priceAtEpoch;
    uint256 public quotePriceTTL = 24 hours; // quote price lifetime

    constructor(
        address _payMasterAddress,
        address _bloodTokenAddress,
        address _fearTokenAddress,
        address _usdtTokenAddress
    ) {
        // address _payMasterAddress, address _bloodTokenAddress, address _fearTokenAddress, address _usdtTokenAddress, address _usdcTokenAddress
        address deployer = msg.sender;
        _setRoleAdmin(ADMIN_ROLE, OWNER_ROLE);
        _grantRole(DEFAULT_ADMIN_ROLE, deployer);
        _grantRole(OWNER_ROLE, deployer);
        _grantRole(ADMIN_ROLE, deployer);
        updateBloodTokenAddress(_bloodTokenAddress);
        updatePayMasterAddress(_payMasterAddress);
        setupInputToken(
            _fearTokenAddress,
            TokenData({bonus: 20_00, decimals: 18, pooled: 0, price: 0, epoch: 0})
        );
        setupInputToken(
            _usdtTokenAddress,
            TokenData({bonus: 0, decimals: 6, pooled: 0, price: 1 ether, epoch: 0})
        );
        updateInputTokenPrice(_fearTokenAddress, 0.06 ether);
    }

    modifier onlyOwner() {
        require(hasRole(OWNER_ROLE, _msgSender()), "OWNER_ROLE_REQUIRED");
        _;
    }

    modifier onlyAdmin() {
        require(hasRole(ADMIN_ROLE, _msgSender()), "ADMIN_ROLE_REQUIRED");
        _;
    }

    function enumInputTokens() external view returns (address[] memory) {
        return inputTokens.values();
    }

    function enumRole(bytes32 role) external view returns (address[] memory) {
        uint256 count = getRoleMemberCount(role);
        address[] memory members = new address[](count);
        for (uint256 i = 0; i < count; i++) {
            members[i] = getRoleMember(role, i);
        }
        return members;
    }

    function _msgSender() internal view override returns (address sender) {
        return ContextMixin.msgSender();
    }

    function setupInputToken(
        address tokenAddress,
        TokenData memory params
    ) public onlyAdmin {
        require(!inputTokens.contains(tokenAddress) && tokenAddress != bloodTokenAddress);
        require(
            IERC20(tokenAddress).balanceOf(address(this)) >= params.pooled,
            "INSUFFICIENT_POOLED_BALANCE"
        );
        inputTokens.add(tokenAddress);
        inputTokenData[tokenAddress] = params;
    }

    function updateInputTokenData(
        address tokenAddress,
        uint256 bonus,
        uint256 decimals
    ) public onlyAdmin {
        require(inputTokens.contains(tokenAddress) && tokenAddress != bloodTokenAddress);
        inputTokenData[tokenAddress].bonus = bonus;
        inputTokenData[tokenAddress].decimals = decimals;
    }

    function updateInputTokenPrice(address tokenAddress, uint256 price) public onlyAdmin {
        require(inputTokens.contains(tokenAddress));
        priceAtEpoch[block.timestamp][tokenAddress] = price;
        inputTokenData[tokenAddress].epoch = block.timestamp;
        inputTokenData[tokenAddress].price = price;
    }

    function updateQuotePriceTTL(uint256 ttl) external onlyAdmin {
        quotePriceTTL = ttl;
    }

    function updateBloodTokenAddress(address _address) public onlyAdmin {
        bloodTokenAddress = _address;
    }

    function updatePayMasterAddress(address _address) public onlyAdmin {
        payMasterAddress = _address;
    }

    function pause() public onlyAdmin whenNotPaused {
        _pause();
    }

    function unpause() public onlyAdmin whenPaused {
        _unpause();
    }

    // emergency withdraw BLOOD and any supported tokens hodl in this contract
    // gas cost: ~91,791 wei
    function withdraw() external onlyOwner {
        uint256 length = inputTokens.length();
        for (uint256 i = 0; i < length; i++) {
            address token = inputTokens.at(i);
            IERC20 tokenContract = IERC20(token);
            uint256 balance = tokenContract.balanceOf(address(this));
            if (balance > 0) {
                tokenContract.transfer(_msgSender(), balance);
            }
        }
        uint256 bloodBalance = IERC20(bloodTokenAddress).balanceOf(
            address(this)
        );
        if (bloodBalance > 0) {
            IERC20(bloodTokenAddress).transfer(_msgSender(), bloodBalance);
        }
    }

    // PayMaster address must own spent allownace on user address. If not, use multi call to increase the allowance.
    // gas cost: ~196096 wei first time and ~127696 wei from 2+ time convert FEAR -> BLOOD
    // gas cost: ~156494 wei first time and ~122270 wei from 2+ time convert USDT -> BLOOD
    // this **internal** function will transfer input token to this contract and only **return** amount of BLOOD that's need to be transfered back
    // todo: add destination address
    function convert(
        uint256 epoch,
        address tokenAddress,
        uint256 tokenAmount
    ) internal returns (uint256) {
        require(epoch >= inputTokenData[tokenAddress].epoch || block.timestamp - epoch <= quotePriceTTL, "QUOTE_EXPIRED");
        address account = _msgSender();
        uint256 bloodOutputAmount = getBloodOutputAmount(
            epoch,
            tokenAddress,
            tokenAmount
        );
        if (bloodOutputAmount > 0) {
            // payMasterContract.transferFrom(tokenAddress, account, address(this), tokenAmount);
            (bool success, ) = payMasterAddress.call(
                abi.encodeWithSelector(
                    0x15dacbea, // bytes4(keccak256("transferFrom(address,address,address,uint256)"))
                    tokenAddress,
                    account,
                    address(this),
                    tokenAmount
                )
            );
            if (!success) revert("TOKEN_TRANSFER_IN_ERROR");
            inputTokenData[bloodTokenAddress].pooled += bloodOutputAmount;
            inputTokenData[tokenAddress].pooled += tokenAmount;
        }
        return bloodOutputAmount;
    }

    function getTokenPrice(
        uint256 epoch,
        address tokenAddress
    ) public view returns (uint256) {
        return
            priceAtEpoch[epoch][tokenAddress] > 0
                ? priceAtEpoch[epoch][tokenAddress]
                : inputTokenData[tokenAddress].price;
    }

    function getBloodOutputAmount(
        uint256 epoch,
        address inputTokenAddress,
        uint256 inputTokenAmount
    ) public view returns (uint256) {
        uint256 amount = (USD2BLOOD_RATE *
            inputTokenAmount *
            getTokenPrice(epoch, inputTokenAddress)) /
            10 ** inputTokenData[inputTokenAddress].decimals;
        uint256 bonus = inputTokenData[inputTokenAddress].bonus == 0
            ? 0
            : ((amount * inputTokenData[inputTokenAddress].bonus) /
                PERCENTAGE_DIVIDER);
        return amount + bonus;
    }

    // same as above, but support multiple tokens input to save gas.
    // tokenAddressList[] and tokenAmountList[] must have the same length
    // this function should extends the NativeMetaTransaction contract rather than using own signature method
    // since the sender is user, not backend keys
    function convertSingle(
        uint256 epoch,
        address inputTokenAddress,
        uint256 inputTokenAmount,
        address receiver
    ) public {
        uint256 bloodOutputAmount = convert(
            epoch,
            inputTokenAddress,
            inputTokenAmount
        );
        if (bloodOutputAmount == 0) {
            revert("NO_BLOOD_OUTPUT");
        }
        if (receiver == address(0)) receiver = _msgSender();
        (bool success, ) = bloodTokenAddress.call(
            abi.encodeWithSelector(
                0xa9059cbb, // bytes4(keccak256("transfer(address,uint256)"))
                receiver,
                bloodOutputAmount
            )
        );
        if (!success) revert("BLOOD_TRANSFER_OUT_ERROR");
        emit ConvertedSingle(
            epoch,
            inputTokenAddress,
            inputTokenAmount,
            receiver,
            bloodOutputAmount
        );
    }

    function convertMulti(
        uint256 epoch,
        ConvertParams[] calldata params,
        address receiver
    ) public {
        // TODO: ignore expiration time if epoch is lastest
        // should use the nearest epoch
        // require(block.timestamp - epoch >= 0 && block.timestamp - epoch <= quoteTTL, "QUOTE_EXPIRED");
        uint256 totalBloodOutput = 0;
        for (uint256 i = 0; i < params.length; i++) {
            totalBloodOutput += convert(
                epoch,
                params[i].tokenAddress,
                params[i].tokenAmount
            );
        }
        if (totalBloodOutput == 0) {
            revert("NO_BLOOD_OUTPUT");
        }
        if (receiver == address(0)) receiver = _msgSender();
        (bool success, ) = bloodTokenAddress.call(
            abi.encodeWithSelector(
                0xa9059cbb, // bytes4(keccak256("transfer(address,uint256)"))
                receiver,
                totalBloodOutput
            )
        );
        if (!success) revert("BLOOD_TRANSFER_ERROR");
        emit ConvertedMulti(epoch, params, receiver, totalBloodOutput);
    }

    // redeem BLOOD for tokens
    // the amount of tokens recieved will relative to
    function redeem(
        address account,
        uint256 amount,
        address receiver
    ) public whenNotPaused onlyAdmin {
        require(receiver != address(0), "INVALID_RECEIVER");
        uint256 pooledBlood = inputTokenData[bloodTokenAddress].pooled;
        require(amount > 0 && amount <= pooledBlood, "INVALID_AMOUNT");
        (bool success, ) = payMasterAddress.call(
            abi.encodeWithSelector(
                0x15dacbea, // bytes4(keccak256("transferFrom(address,address,address,uint256)"))
                bloodTokenAddress,
                account,
                address(this),
                amount
            )
        );
        if (!success) revert("BLOOD_TRANSFER_IN_ERROR");
        inputTokenData[bloodTokenAddress].pooled -= amount;
        uint256 length = inputTokens.length();
        for (uint256 i = 0; i < length; i++) {
            address tokenAddress = inputTokens.at(i);
            uint256 tokenAmount = (amount *
                inputTokenData[tokenAddress].pooled) / pooledBlood;
            if (tokenAmount > 0) {
                inputTokenData[tokenAddress].pooled -= tokenAmount;
                (bool _success, ) = address(tokenAddress).call(
                    abi.encodeWithSelector(
                        0xa9059cbb, // bytes4(keccak256("transfer(address,uint256)"))
                        receiver,
                        tokenAmount
                    )
                );
                if (!_success) revert("TOKEN_TRANSFER_OUT_ERROR");
            }
        }
        emit BloodRedeemed(account, receiver, amount);
    }
}

