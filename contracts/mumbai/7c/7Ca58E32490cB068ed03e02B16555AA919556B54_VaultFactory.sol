/// @title RecoveryModule - A module for Gnosis Safe that adds functionality to add recovery mechanism.
contract RecoveryModule is IRecoveryModule, TrueOwnerGetter, SignatureDecoder, ISignatureValidatorConstants {
    struct VaultConfig {
        uint256 nonce;
        mapping(address => bool) recoverers;
    }

    // keccak256(
    //     "EIP712Domain(uint256 chainId,address verifyingContract)"
    // );
    bytes32 public constant DOMAIN_SEPARATOR_TYPEHASH = 0x47e79534a245952e8b16893a336b85a3d9ea9fa8c573f3d803afb92a79469218;
    bytes32 public constant RECOVERY_TYPEHASH = keccak256("Recovery(address vault,address newOwner,uint256 nonce)");

    // Safe address -> VaultConfig
    mapping(address => VaultConfig) public vaultConfigs;

    event VaultInitialized(address vault, address[] recoverers);
    event VaultRecovered(address vault, address newOwner, address recoverer);

    constructor() {}

    // solhint-disable-next-line payable-fallback
    fallback() external {
        // We don't revert on fallback to avoid issues in case of a Safe upgrade
        // E.g. The expected check method might change and then the Safe would be locked.
    }

    /// @dev Returns the chain id used by this contract.
    function getChainId() public view returns (uint256) {
        uint256 id;
        // solhint-disable-next-line no-inline-assembly
        assembly {
            id := chainid()
        }
        return id;
    }

    function domainSeparator() public view returns (bytes32) {
        return keccak256(abi.encode(DOMAIN_SEPARATOR_TYPEHASH, getChainId(), this));
    }

    /// @dev Returns the current recovery nonce for a given vault.
    /// @param vault The address of the vault.
    /// @return The current recovery nonce.
    function getNonce(address vault) public view returns (uint256) {
        return vaultConfigs[vault].nonce;
    }

    /// @dev Initializes a new vault. Only uninitialized vaults can be initialized.
    /// This function sets the recoverers for the vault and must be called from vault
    /// This function emits a VaultInitialized event upon successful execution.
    /// reverts If the vault has already been initialized.
    ///
    /// @param recoverers An array of addresses that will be set as the recoverers for the vault.
    function initializeVault(address[] calldata recoverers) public {
        address vault = msg.sender;
        require(recoverers.length > 0, "EDCC01:1"); // RecoveryModule: can not initialize with 0 recoverers
        require(isInitialized(vault) == false, "EDCC02"); // RecoveryModule: vault already initialized
        require(GnosisSafe(payable(vault)).isModuleEnabled(address(this)), "EDCC03"); // RecoveryModule: module must be enabled
        // increase vault's nonce from 0 to 1 in order to mark vault as initialized
        vaultConfigs[vault].nonce++;
        // adding recoverers to vault
        uint256 i;
