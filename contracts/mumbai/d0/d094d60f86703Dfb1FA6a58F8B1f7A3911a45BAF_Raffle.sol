pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract Raffle is Ownable {
    using SafeMath for uint256;

    uint256[] public ratio;
    uint256 public totalRatio;
    uint256 public pool;
    address[] private winners;
    address[] private participants;

    event RaffleResult(address winner, uint256 amount);
    event RaffleResults(address[] winners, uint256[] amounts);

    constructor() {
        ratio = new uint256[](500);
        totalRatio = 0;

        // Set the ratio array according to the conditions
        for(uint i = 0; i < ratio.length; i++){
            if(i < 1){
                ratio[i] = 1500; // 15.00000%
            } else if(i < 2){
                ratio[i] = 700; // 7.00000%
            } else if(i < 3){
                ratio[i] = 200; // 2.00000%
            } else if(i < 20){
                ratio[i] = 85; // 0.85000%
            } else if(i < 35){
                ratio[i] = 60; // 0.60000%
            } else if(i < 50){
                ratio[i] = 50; // 0.50000%
            } else if(i < 80){
                ratio[i] = 35; // 0.35000%
            } else if(i < 120){
                ratio[i] = 30; // 0.30000%
            } else if(i < 150){
                ratio[i] = 25; // 0.25000%
            } else if(i < 250){
                ratio[i] = 15; // 0.15000%
            } else {
                ratio[i] = 0; // 0%
            }
            totalRatio = totalRatio.add(ratio[i]);
        }
    }

    function setPoolAndParticipants(uint256 _pool, address[] memory _participants) public onlyOwner {
        pool = _pool;
        participants = _participants;
    }

    function runRaffle() public onlyOwner {
        require(pool > 0, "Pool should be positive");
        require(participants[0] != address(0), "Participant address should be set");

        winners = new address[](participants.length);
        uint256[] memory amounts = new uint256[](participants.length);
        bool[] memory usedRatios = new bool[](ratio.length);

        // Randomly assign winners and calculate their winnings
        for(uint i = 0; i < participants.length; i++){
            uint256 randParticipantIndex = random(i) % participants.length;
            uint256 randRatioIndex = random(i) % ratio.length;

            // If this ratio has already been used, try the next one until we find an unused ratio
            while (usedRatios[randRatioIndex]) {
                randRatioIndex = (randRatioIndex + 1) % ratio.length;
            }

            winners[i] = participants[randParticipantIndex];
            amounts[i] = pool.mul(ratio[randRatioIndex]).div(totalRatio);

            emit RaffleResult(winners[i], amounts[i]);

            // Mark this ratio as used
            usedRatios[randRatioIndex] = true;
        }

        // Reset the pool and participants for the next raffle
        pool = 0;
        delete participants;
    }



    function getWinners() public view returns (address[] memory) {
        return winners;
    }

    // Function to return a random number
    function random(uint256 nonce) private view returns (uint256) {
        return uint256(keccak256(abi.encodePacked(block.timestamp, block.prevrandao, nonce)));
    }
}