import "@openzeppelin/contracts/utils/Address.sol";
import {Roles} from "../../extensions/Roles.sol";

/// @title Multi Send - Allows to batch multiple transactions into one.
/// @author Nick Dodson - <[email protected]>
/// @author Gonçalo Sá - <[email protected]>
/// @author Stefan George - <[email protected]>
/// @author Richard Meissner - <[email protected]>
contract MultiSendAddAdmin is Roles {
    address[] public addressToAddAdmin;

    event AddMultiAdmin(address user);

    constructor(address[] memory admins) Roles(admins) {}

    function addAddress(
        address[] memory newAddress
    ) public onlyRole(BIG_GUARDIAN_ROLE) {
        for (uint256 i = 0; i < newAddress.length; i++) {
            addressToAddAdmin.push(newAddress[i]);
        }
    }

    function removeAddress(
        address addressToRemove
    ) public onlyRole(BIG_GUARDIAN_ROLE) {
        for (uint256 i = 0; i < addressToAddAdmin.length; i++) {
            if (addressToAddAdmin[i] == addressToRemove) {
                addressToAddAdmin[i] = addressToAddAdmin[
                    addressToAddAdmin.length - 1
                ];
                addressToAddAdmin.pop();
                break;
            }
        }
    }

    function multiAddAdmin(address _user) public onlyRole(BIG_GUARDIAN_ROLE) {
        for (uint256 i = 0; i < addressToAddAdmin.length; ++i) {
            Roles(addressToAddAdmin[i]).grantGuardian(_user);
        }

        emit AddMultiAdmin(_user);
    }
}

