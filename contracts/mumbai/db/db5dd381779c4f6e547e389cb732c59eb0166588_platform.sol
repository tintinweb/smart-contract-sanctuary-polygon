contract platform is Ownable {
    address public doris;
    address public factory;
    mapping(address => uint256) public lineprice;
    mapping(address => mapping(uint256 => uint256)) public forsaleprice;

    constructor() {
        doris = msg.sender;
    }

    modifier onlyDoris {
        require(msg.sender==doris, "Unauthorised");
        _;
    }
    
    function setFactory(address _factory) onlyDoris public {
        factory = _factory;
    }
    
    function buynewNFT(address _line) public payable {
        require(msg.value == lineprice[_line], "Insufficient value");
        (bool bn, ) = address(_line).call{value: msg.value}(abi.encodeWithSignature("mint(address)", msg.sender));
        require(bn, "Couldn't mint NFT");
    }
    
    function buymultiplenewNFT(uint256 qty, address _line) public payable {
        require(msg.value == (qty*lineprice[_line]), "Insufficient value");
        (bool bmn, ) = address(_line).call{value: msg.value}(abi.encodeWithSignature("mintbulk(uint256,address)", qty, msg.sender));
        require(bmn, "Couldn't batch mint NFT");
    }
    
    function offerforsale(address _line, uint256 tokenid, uint256 price) public payable {
        require(msg.sender == IERC721(_line).ownerOf(tokenid), "Not owner of tokenid");
        require(price>0, "Positive price needed");
        forsaleprice[_line][tokenid] = price;
    }
    
    function buyfromowner(address _line, uint256 tokenid) public payable {
        require(msg.value == forsaleprice[_line][tokenid], "Insufficient value");
        require(forsaleprice[_line][tokenid] != 0, "NFT is not for sale");
        (bool bt, ) = address(_line).call{value: msg.value}(abi.encodeWithSignature("transferFrom(address,address,uint256)", IERC721(_line).ownerOf(tokenid), msg.sender, tokenid));
        require(bt, "Couldn't transfer NFT");
        forsaleprice[_line][tokenid] = 0;
    }
    
    function setPrice(address _line, uint256 price) external onlyDoris {
        lineprice[_line] = price;
    }

    function changeDoris (address newdoris) external onlyDoris {
        doris = newdoris;
    }
}