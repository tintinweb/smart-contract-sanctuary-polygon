import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./interfaces/IUser.sol";

contract EnvisionToken is
    ERC1155,
    Ownable,
    ERC1155Burnable,
    ERC1155Supply,
    ReentrancyGuard
{
    using Counters for Counters.Counter;
    Counters.Counter _tokenIdCounter;
    IUser public userContract;
    string private _baseURI = "https://ipfs.io/ipfs/";
    address public marketplaceContract;

    constructor(address _userContract) ERC1155() {
        userContract = IUser(_userContract);
    }

    mapping(uint256 => address) TokenOwner;
    mapping(address => bool) public MintCopiesAccess;
    mapping(uint256 => mapping(uint256 => string)) private _tokenURIs;

    function updateUserContractAddress(
        address _newContractAddress
    ) public onlyOwner returns (bool) {
        userContract = IUser(_newContractAddress);
        return true;
    }

    function uri(
        uint256 tokenId,
        uint256 _tokenType
    ) public view virtual returns (string memory tokenUri) {
        require(
            _tokenType == 1 || _tokenType == 2,
            "Token type is incorrect enter 1 for exclusive or 2 for license"
        );
        string memory tokenURI = _tokenURIs[tokenId][_tokenType];
        if (bytes(tokenURI).length > 0) {
            return string(abi.encodePacked(_baseURI, tokenURI));
        }
    }

    function _setURI(
        uint256 tokenId,
        uint256 _tokenType,
        string memory tokenURI
    ) internal virtual {
        _tokenURIs[tokenId][_tokenType] = tokenURI;
    }

    function updateMarketplaceAddress(
        address contractAddress
    ) public onlyOwner {
        marketplaceContract = contractAddress;
    }

    function _setBaseURI(string memory baseURI) public onlyOwner {
        _baseURI = baseURI;
    }

    function addMintCopiesAccess(address walletAddress) public onlyOwner {
        MintCopiesAccess[walletAddress] = true;
    }

    function removeMintCopiesAccess(address walletAddress) public onlyOwner {
        MintCopiesAccess[walletAddress] = false;
    }

    function updateTokenOwnerBatch(
        address[] memory _newOwners,
        uint256[] memory _tokenIds
    ) public {
        require(
            MintCopiesAccess[msg.sender],
            "You do have access to call this function"
        );
        for (uint256 i = 0; i < _newOwners.length; i++) {
            TokenOwner[_tokenIds[i]] = _newOwners[i];
        }
    }

    function tokenOwner(uint256 _id) public view returns (address) {
        return TokenOwner[_id];
    }

    function mint(
        string memory _tokenURIForExclusive,
        string memory _tokenURIForLicense
    ) public nonReentrant {
        require(
            !userContract.getUserBlackListStatus(msg.sender),
            "User is blacklisted"
        );
        require(
            userContract.getUserKYCLevel(msg.sender) == 3,
            "User doesn't have access to mint NFT"
        );
        _tokenIdCounter.increment();
        TokenOwner[_tokenIdCounter.current()] = msg.sender;
        _mint(msg.sender, _tokenIdCounter.current(), 1, "");
        _setURI(_tokenIdCounter.current(), 1, _tokenURIForExclusive);
        _setURI(_tokenIdCounter.current(), 2, _tokenURIForLicense);
    }

    function mintBatch(
        uint256 _totalNFT,
        string[2][] memory _tokenURI
    ) public nonReentrant {
        require(
            !userContract.getUserBlackListStatus(msg.sender),
            "User is blacklisted"
        );
        require(
            userContract.getUserKYCLevel(msg.sender) == 3,
            "User doesn't have access to mint NFT"
        );
        require(
            _tokenURI.length == _totalNFT,
            "Need to mention the tokenURI for every NFT"
        );
        uint256[] memory tempIds = new uint256[](_totalNFT);
        uint256[] memory NFTamounts = new uint256[](_totalNFT);
        for (uint256 i = 0; i < _totalNFT; i++) {
            _tokenIdCounter.increment();
            TokenOwner[_tokenIdCounter.current()] = msg.sender;
            tempIds[i] = _tokenIdCounter.current();
            NFTamounts[i] = 1;
        }
        _mintBatch(msg.sender, tempIds, NFTamounts, "");
        for (uint256 i = 0; i < _totalNFT; i++) {
            _setURI(tempIds[i], 1, _tokenURI[i][0]);
            _setURI(tempIds[i], 2, _tokenURI[i][1]);
        }
    }

    function safeTransferFrom(
        address _from,
        address _to,
        uint256 _id,
        uint256 _amount,
        bytes memory _data
    ) public override {
        require(
            _from == _msgSender() || isApprovedForAll(_from, _msgSender()),
            "ERC1155: caller is not token owner or approved"
        );
        require(msg.sender == marketplaceContract);
        TokenOwner[_id] = _to;
        _safeTransferFrom(_from, _to, _id, _amount, _data);
    }

    function safeBatchTransferFrom(
        address _from,
        address _to,
        uint256[] memory _ids,
        uint256[] memory _amounts,
        bytes memory data
    ) public override {
        require(
            _from == _msgSender() || isApprovedForAll(_from, _msgSender()),
            "ERC1155: caller is not token owner or approved"
        );
        require(msg.sender == marketplaceContract);
        for (uint256 i = 0; i < _ids.length; i++) {
            TokenOwner[_ids[i]] = _to;
        }
        _safeBatchTransferFrom(_from, _to, _ids, _amounts, data);
    }

    function mintCopiesBatch(
        uint256[] memory ids,
        uint256[] memory amounts,
        address _buyerAddress
    ) public {
        for (uint256 i = 0; i < ids.length; i++) {
            require(
                ((exists(ids[i])) || (ids[i] == 0)),
                "Token Id doesn't exists!"
            );
        }
        require(
            MintCopiesAccess[msg.sender],
            "Caller doesn't have access to mint copies."
        );
        _mintBatch(_buyerAddress, ids, amounts, "");
    }

    // The following functions are overrides required by Solidity.

    function _beforeTokenTransfer(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) internal override(ERC1155, ERC1155Supply) {
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
    }
