pragma solidity ^0.8.17;


import "./APIConsumer.sol";

import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract OmmniStore is APIConsumer {

    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    IERC20 public usdt;
    IERC20 public omniToken;

    mapping(address => bool) private authorized;

    event TokenPurchase(
        address buyer,
        uint256 amount,
        uint256 price,
        uint256 time
    );

    constructor(
        address _LINK,
        address _oracle,
        IERC20 _usdt
    ) APIConsumer(_LINK, _oracle) 
    {
        usdt = _usdt;
    }

    modifier onlyAuthorized {
        require(authorized[msg.sender], "NOT AUTHORIZED TO BUY");
        _;
    }

    function buyToken(uint256 amount) external onlyAuthorized {
        require(tokenPrice > 0, "ORACLE NOT UPDATED YET");
        require(amount <= omniToken.balanceOf(address(this)), "INSUFFICIENT TOKEN BALANCE");
        require((block.timestamp - lastUpdated) <= 120, "ERR: PRICE NOT UPDATED");
        uint256 totalPrice = tokenPrice.mul(amount).div(1e18);
        usdt.safeTransferFrom(msg.sender, address(this), totalPrice);
        omniToken.safeTransfer(msg.sender, amount);

        emit TokenPurchase(msg.sender, amount, totalPrice, block.timestamp);
    }

    function withdrawFunds(address token, uint256 amount) external onlyOwner {
        IERC20(token).safeTransfer(msg.sender, amount);
    }

    function authorize(address token) external onlyOwner {
        authorized[token] = true;
    }

}