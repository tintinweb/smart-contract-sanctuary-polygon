import './SimpleAccount.sol';
import './interfaces/IAccount.sol';
import './interfaces/IEntryPoint.sol';

contract SimpleAccountFactory {
    IEntryPoint private entryPoint;
    address private master;

    mapping(address=> IAccount) public simpleAccounts;

    event SimpleAccountCreated(address indexed owner, IAccount indexed simpleAccount);

    constructor(IEntryPoint _entryPoint, address _master){
        entryPoint = _entryPoint;
        master = _master;
    }

    modifier onlyMaster(){
        require(msg.sender==master, 'SAF: only master wallet');
        _;
    }

    function createAccount(address owner) external onlyMaster {
        require(owner != address(0), 'SAF: Owner is address zero');
        IAccount simpleAccount = new SimpleAccount(entryPoint, master, owner);
        simpleAccounts[owner] = simpleAccount;
        emit SimpleAccountCreated(owner, simpleAccount);
    }

    function getAccount(address owner) public view returns(IAccount simpleAccount){
        require(owner != address(0), 'SAF: Owner is address zero');
        simpleAccount = simpleAccounts[owner];
    }
}