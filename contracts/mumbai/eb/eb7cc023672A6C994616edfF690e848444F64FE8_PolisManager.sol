pragma solidity 0.8.18;

import "./IAccessControlHolder.sol";
import "./IPolisManager.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";

contract PolisManager is IAccessControlHolder, IPolisManager {
    using ECDSA for bytes32;

    string constant UPGRADE_TYPE =
        "upgrade(uint256 tokenId, uint8 level, bytes signature)";

    bytes32 public constant POLIS_UPGRADE = keccak256("POLIS_UPGRADE");

    IAccessControl public immutable override acl;
    IPolis public immutable polis;
    mapping(address => uint256) public lockedTokens;

    constructor(IAccessControl acl_, IPolis polis_) {
        acl = acl_;
        polis = polis_;
    }

    function upgradeHash(
        uint256 tokenId,
        uint8 level
    ) public view override returns (bytes32) {
        return
            keccak256(
                abi.encodePacked(
                    uint16(0x1901),
                    domainSeperator(),
                    keccak256(abi.encode(UPGRADE_TYPE, tokenId, level))
                )
            );
    }

    function upgradeWithSignature(
        uint256 tokenId,
        uint8 level,
        bytes calldata signature
    ) external override {
        bytes32 messageHash = upgradeHash(tokenId, level);
        address signer = messageHash.toEthSignedMessageHash().recover(
            signature
        );
        _ensureHasUpgradeRole(signer);
        if (polis.lockerOf(tokenId) != address(this)) {
            revert OnlyIfLocked();
        }
        polis.upgrade(tokenId);
    }

    function _ensureHasUpgradeRole(address addr) internal view {
        if (!acl.hasRole(POLIS_UPGRADE, addr)) {
            revert OnlyUpgradeRoleAccess();
        }
    }

    function domainSeperator() internal view returns (bytes32) {
        return
            keccak256(
                abi.encode(
                    keccak256(
                        "EIP712Domain(string name, string version, address verifyingContract, uint256 signedAt)"
                    ),
                    "Sparta",
                    "1",
                    block.chainid,
                    address(this),
                    keccak256(bytes("Sparta"))
                )
            );
    }

    function lock(
        uint256 tokenId
    )
        external
        override
        onlyTokenOwnerAccess(tokenId)
        onlyOneTokenLockedByUser(tokenId)
    {
        polis.lock(tokenId);
        lockedTokens[msg.sender] = tokenId;
    }

    function unlock(
        uint256 tokenId
    ) external override onlyTokenOwnerAccess(tokenId) {
        polis.unlock(tokenId);
        delete lockedTokens[msg.sender];
    }

    modifier onlyTokenOwnerAccess(uint256 tokenId) {
        if (polis.ownerOf(tokenId) != msg.sender) {
            revert OnlyTokenOwnerAccess();
        }
        _;
    }

    modifier onlyOneTokenLockedByUser(uint256 tokenId) {
        if (lockedTokens[msg.sender] != 0) {
            revert OnlyOneTokenLocked();
        }
        _;
    }
}

