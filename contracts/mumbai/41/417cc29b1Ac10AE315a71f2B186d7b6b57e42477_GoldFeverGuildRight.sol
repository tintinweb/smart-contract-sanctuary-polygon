import "./GoldFeverNativeGold.sol";

contract GoldFeverRight is
    Initializable,
    AccessControlMixin,
    ReentrancyGuardUpgradeable,
    BaseRelayRecipient,
    IERC721ReceiverUpgradeable,
    ERC721HolderUpgradeable,
    UUPSUpgradeable
{
    bytes32 public constant AUTOMATION_ROLE = keccak256("AUTOMATION_ROLE");

    bytes32 public constant CREATED = keccak256("CREATED");
    bytes32 public constant STAKED = keccak256("STAKED");
    bytes32 public constant BURNED = keccak256("BURNED");
    bytes32 public constant FINALIZED = keccak256("FINALIZED");

    using CountersUpgradeable for CountersUpgradeable.Counter;
    CountersUpgradeable.Counter private _rightOptionIds;
    CountersUpgradeable.Counter private _rightPurchaseIds;

    uint256 public constant build = 2;

    GoldFeverNativeGold ngl;

    function initialize(address admin, address ngl_) public initializer {
        __GoldFeverRight_init(admin, ngl_);
    }

    function __GoldFeverRight_init(address admin, address ngl_)
        internal
        onlyInitializing
    {
        __ReentrancyGuard_init();
        __GoldFeverRight_init_unchained(admin, ngl_);
        __UUPSUpgradeable_init();
    }

    function __GoldFeverRight_init_unchained(address admin, address ngl_)
        internal
        onlyInitializing
    {
        _setupContractId("GoldFeverRight");
        _setupRole(DEFAULT_ADMIN_ROLE, admin);

        ngl = GoldFeverNativeGold(ngl_);
        versionRecipient = "2.2.5";
    }

    struct RightOption {
        uint256 rightId;
        uint256 rightOptionId;
        uint256 rightType;
        uint256 price;
        uint256 duration;
        uint256 stakeDuration;
        bool enable;
    }
    struct RightPurchase {
        uint256 rightOptionId;
        uint256 rightPurchaseId;
        address buyer;
        bytes32 status;
        uint256 expiry;
        uint256 price;
        uint256 duration;
        uint256 stakeExpiry;
        uint256 stakeDuration;
    }

    mapping(uint256 => RightOption) public idToRightOption;
    mapping(uint256 => mapping(uint256 => RightPurchase))
        public rightIdToRightPurchase;
    mapping(address => mapping(uint256 => uint256)) public addressToRightExpiry;
    mapping(uint256 => mapping(uint256 => mapping(uint256 => mapping(uint256 => bool))))
        public rightIdToRightTypeToDurationToStakeDurationToCreated;

    event RightOptionCreated(
        uint256 indexed rightId,
        uint256 indexed rightOptionId,
        uint256 rightType,
        uint256 price,
        uint256 duration,
        uint256 stakeDuration
    );
    event RightOptionPurchased(
        uint256 indexed rightOptionId,
        uint256 indexed rightPurchaseId,
        address buyer,
        string status,
        uint256 expiry,
        uint256 price,
        uint256 duration,
        uint256 stakeExpiry,
        uint256 stakeDuration
    );
    event RightOptionPurchaseFinished(uint256 indexed rightPurchaseId);
    event ForwarderContractUpdated(address forwarder_);

    event RightOptionStatusUpdated(uint256 indexed rightOptionId, bool status);

    function setForwarderContract(address forwarder_)
        external
        only(DEFAULT_ADMIN_ROLE)
    {
        _setTrustedForwarder(forwarder_);
        emit ForwarderContractUpdated(forwarder_);
    }

    // Both AccessControlMixin and BaseRelayRecipient defined _msgSender() _msgData()
    function _msgSender()
        internal
        view
        override(ContextUpgradeable, BaseRelayRecipient)
        returns (address sender)
    {
        sender = BaseRelayRecipient._msgSender();
    }

    function _msgData()
        internal
        view
        override(ContextUpgradeable, BaseRelayRecipient)
        returns (bytes calldata)
    {
        return BaseRelayRecipient._msgData();
    }

    function createRightOption(
        uint256 rightId,
        uint256 rightType,
        uint256 price,
        uint256 duration,
        uint256 stakeDuration
    ) external only(DEFAULT_ADMIN_ROLE) {
        require(price > 0, "GoldFeverRight: Price must be at least 1 wei");
        uint256 staking = 0;
        if (rightType == 0) {
            require(
                stakeDuration >= duration,
                "GoldFeverRight: Staking duration must be longer than or equal to right duration"
            );
            staking = stakeDuration;
        }

        require(
            !rightIdToRightTypeToDurationToStakeDurationToCreated[rightId][
                rightType
            ][duration][stakeDuration],
            "GoldFeverRight: this right option has been created"
        );
        rightIdToRightTypeToDurationToStakeDurationToCreated[rightId][
            rightType
        ][duration][stakeDuration] = true;
        _rightOptionIds.increment();
        uint256 rightOptionId = _rightOptionIds.current();

        idToRightOption[rightOptionId] = RightOption(
            rightId,
            rightOptionId,
            rightType,
            price,
            duration,
            staking,
            true
        );

        emit RightOptionCreated(
            rightId,
            rightOptionId,
            rightType,
            price,
            duration,
            staking
        );
    }

    function purchaseRight(uint256 rightOptionId, address buyer)
        external
        nonReentrant
    {
        uint256 price = idToRightOption[rightOptionId].price;
        require(price != 0, "GoldFeverRight: Right option id does not exist");

        uint256 rightId = idToRightOption[rightOptionId].rightId;
        uint256 previousExpiry = addressToRightExpiry[buyer][rightId];
        address msgSender = _msgSender();
        if (previousExpiry == 0) {
            require(
                buyer == msgSender,
                "GoldFeverRight: Please use your address to purchase"
            );
        } else {
            require(
                hasRole(AUTOMATION_ROLE, msgSender) || buyer == msgSender,
                "GoldFeverRight: Please use your address to purchase"
            );
            require(
                previousExpiry <= block.timestamp,
                "GoldFeverRight: Your right has not expired"
            );
        }

        uint256 duration = idToRightOption[rightOptionId].duration;
        uint256 rightType = idToRightOption[rightOptionId].rightType;
        uint256 expiry = block.timestamp + duration;
        _rightPurchaseIds.increment();
        uint256 rightPurchaseId = _rightPurchaseIds.current();

        if (rightType == 0) {
            ngl.transferFrom(buyer, address(this), price);

            uint256 stakeDuration = idToRightOption[rightOptionId]
                .stakeDuration;
            uint256 stakeExpiry = block.timestamp + stakeDuration;
            addressToRightExpiry[buyer][rightId] = expiry;
            rightIdToRightPurchase[rightOptionId][
                rightPurchaseId
            ] = RightPurchase(
                rightOptionId,
                rightPurchaseId,
                buyer,
                STAKED,
                expiry,
                price,
                duration,
                stakeExpiry,
                stakeDuration
            );

            emit RightOptionPurchased(
                rightOptionId,
                rightPurchaseId,
                buyer,
                "STAKED",
                expiry,
                price,
                duration,
                stakeExpiry,
                stakeDuration
            );
        } else if (rightType == 1) {
            ngl.burnFrom(buyer, price);

            rightIdToRightPurchase[rightOptionId][
                rightPurchaseId
            ] = RightPurchase(
                rightOptionId,
                rightPurchaseId,
                buyer,
                BURNED,
                expiry,
                price,
                duration,
                0,
                0
            );

            addressToRightExpiry[buyer][rightId] = expiry;

            emit RightOptionPurchased(
                rightOptionId,
                rightPurchaseId,
                buyer,
                "BURNED",
                expiry,
                price,
                duration,
                0,
                0
            );
        }
    }

    function finalizeRightPurchase(
        uint256 rightOptionId,
        uint256 rightPurchaseId
    ) external nonReentrant {
        require(
            rightIdToRightPurchase[rightOptionId][rightPurchaseId].buyer ==
                _msgSender(),
            "GoldFeverRight: Please use your address to finalize"
        );

        require(
            rightIdToRightPurchase[rightOptionId][rightPurchaseId].status ==
                STAKED,
            "GoldFeverRight: You can only finalize Stake option"
        );
        require(
            rightIdToRightPurchase[rightOptionId][rightPurchaseId]
                .stakeExpiry <= block.timestamp,
            "GoldFeverRight: Staking duration has not expired"
        );

        ngl.transfer(
            rightIdToRightPurchase[rightOptionId][rightPurchaseId].buyer,
            rightIdToRightPurchase[rightOptionId][rightPurchaseId].price
        );

        rightIdToRightPurchase[rightOptionId][rightPurchaseId]
            .status = FINALIZED;

        emit RightOptionPurchaseFinished(rightPurchaseId);
    }

    function getRightPurchase(uint256 rightOptionId, uint256 rightPurchaseId)
        external
        view
        returns (
            address buyer,
            string memory status,
            uint256 expiry,
            uint256 stakeExpiry
        )
    {
        RightPurchase memory rightPurchase = rightIdToRightPurchase[
            rightOptionId
        ][rightPurchaseId];
        if (rightPurchase.status == keccak256("STAKED")) {
            status = "STAKED";
        } else if (rightPurchase.status == keccak256("BURNED")) {
            status = "BURNED";
        } else if (rightPurchase.status == keccak256("FINALIZED")) {
            status = "FINALIZED";
        }

        buyer = rightPurchase.buyer;
        expiry = rightPurchase.expiry;
        stakeExpiry = rightPurchase.stakeExpiry;
    }

    function getRightOption(uint256 rightOptionId)
        external
        view
        returns (
            uint256 rightId,
            uint256 rightType,
            uint256 price,
            uint256 duration,
            uint256 stakeDuration
        )
    {
        RightOption memory rightOption = idToRightOption[rightOptionId];
        rightId = rightOption.rightId;
        rightType = rightOption.rightType;
        price = rightOption.price;
        duration = rightOption.duration;
        stakeDuration = rightOption.stakeDuration;
    }

    function updateStatusRightOption(uint256 rightOptionId, bool status)
        public
        only(DEFAULT_ADMIN_ROLE)
    {
        require(
            idToRightOption[rightOptionId].duration != 0,
            "GoldFeverRight: Right option not found"
        );
        idToRightOption[rightOptionId].enable = status;
        emit RightOptionStatusUpdated(rightOptionId, status);
    }

    function _authorizeUpgrade(address newImplementation)
        internal
        override
        only(DEFAULT_ADMIN_ROLE)
    {
        // Do something here.
    }

    string public override versionRecipient;
}

