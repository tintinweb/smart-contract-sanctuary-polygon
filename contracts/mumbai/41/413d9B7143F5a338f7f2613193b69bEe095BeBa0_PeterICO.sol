// SPDX-License-Identifier: MIT
pragma solidity ^0.8.9;
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract PeterICO is Ownable {

    IERC20 MDSE_token;
    uint public startTime;
    uint public endTime;
    uint public tokenEthPrice = 0.000026 ether; //  1 MDSE = 0.05USD
    uint public hardCap;
    uint public ethRaised;
    uint public usdRaised;
    //uint MAX_BPS = 10_000;
//    address[] public allBuyerAddress;
    address deployer;
    IERC20 public USDT = IERC20(0xdAC17F958D2ee523a2206206994597C13D831ec7);
    IERC20 public USDC = IERC20(0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48);

    struct TokenSale{
        uint soldToken;
        uint tokenForSale;
    }
    TokenSale public tokenSale;

    struct Account {
        uint balance;
        uint tokenClaimedAt;
    }

    mapping (address => Account) public accounts;
/*
    struct UserInfo{
        uint MDSE_Token;
        uint investDollar;
    }
    mapping (address=> UserInfo) public userInfo;
*/

    constructor(address _MDSE,uint _startTime,uint _endTime){

        require(_endTime > _startTime,"End Time should be greater than Start Time");
        require(_startTime > block.timestamp,"Start time should be greater than current time");

        MDSE_token = IERC20(_MDSE);
        startTime = _startTime;
        endTime = _endTime;
        deployer = msg.sender;
        tokenSale.tokenForSale = 40000000 * 10**18;
        hardCap = tokenSale.tokenForSale;
    }
    modifier depositRequirements() {
        require(msg.value >= 0.0026 ether, "Minimum 0.0026 ETH");  // minimum 500 MDSE
        _;
    }
    modifier onlyowner() {
        require(owner() == msg.sender || deployer == msg.sender, "Caller is not the owner");
        _;
    }
    //==================================================================================
    function balanceOf(address _address) public view returns (uint) {
        return accounts[_address].balance;
    }
    function getTokenAmount(uint _ethAmount) public view returns (uint) {
        // balance * 1 ether / uint
        return SafeMath.div(SafeMath.mul(_ethAmount, 1 ether), tokenEthPrice);
    }

    function buyWithETH() public payable depositRequirements {
        //uint256 buyToken = getTokenAmount(userInfo[msg.sender].balance);
        uint256 buyToken = getTokenAmount(accounts[msg.sender].balance);

        require(isICOOver()==false,"ICO already end");
        
        require(block.timestamp >= startTime,"Out of time window");

        require(tokenSale.tokenForSale >= buyToken,"No enough token for sale");
      
        accounts[msg.sender].balance += msg.value;
        ethRaised += msg.value;

        tokenSale.tokenForSale -= buyToken;
        tokenSale.soldToken += buyToken;

        MDSE_token.transfer(msg.sender, buyToken);
    }

    function buyWithToken(uint _tokentype, uint _amount) public {
        //USDC, USDT decimal is 6

        require(_amount >= 1 * 10**6, "Minimum 1 USD"); //20 MDSE

        uint256 buyToken = _amount *1e18 * 100 / 5;

        require(isICOOver()==false,"ICO already end");
        
        require(block.timestamp >= startTime,"Out of time window");

        require(tokenSale.tokenForSale >= buyToken,"No enough token for sale");


        tokenSale.tokenForSale -= buyToken;
        tokenSale.soldToken += buyToken;

        if (_tokentype == 1){ //USDT
            USDT.transfer(address(this), _amount ); 
            MDSE_token.transfer(msg.sender, buyToken);
        }
        else { //USDC
            USDC.transfer(address(this), _amount ); 
            MDSE_token.transfer(msg.sender, buyToken);
        }
        usdRaised += _amount;
    }
    //=========================================Admin Functions===========================

    function retrieveStuckedERC20Token( address _tokenAddr, uint256 _amount, address _toWallet ) public onlyowner returns (bool) {
        IERC20(_tokenAddr).transfer(_toWallet, _amount);
        return true;
    }
    function withdraw() public onlyowner {
        require(isICOOver()==false,"It's not time to withdraw");
        payable(msg.sender).transfer(address(this).balance);
    }
    function withdrawStableCoins(address receiver) external onlyowner {
        require(isICOOver()==false,"It's not time to withdraw");
        USDT.transfer(receiver, USDT.balanceOf(address(this)));
        USDC.transfer(receiver, USDC.balanceOf(address(this)));
    }

    function updateTime(uint256 _startTime, uint256 _endTime) public onlyowner returns (bool) {
        require( _startTime < _endTime, "End Time should be greater than start time");
        require( startTime > block.timestamp, "Can not change time after ICO starts" );      
        require(_startTime > block.timestamp,"Start time should be greater than current time" );
        
        startTime = _startTime;
        endTime = _endTime;
        return true;
    }
    function updateStableTokenAddresses (address usdt, address usdc) public onlyowner {
        USDT = IERC20(usdt);
        USDC = IERC20(usdc);
    }
    //==================================================================================

    function isICOOver() public view returns (bool) {
        if (
            block.timestamp > endTime ||
            tokenSale.tokenForSale == 0
        ) {
            return true;
        } else {
            return false;
        }
    }

    function isHardCapReach() public view returns(bool){
        if(hardCap == tokenSale.soldToken){
            return true;
        }else{
            return false;
        }
    }

    //==================================================================================
    
}