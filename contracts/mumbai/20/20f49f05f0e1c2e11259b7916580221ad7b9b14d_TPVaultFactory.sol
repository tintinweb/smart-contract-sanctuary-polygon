pragma solidity 0.8.19;

import {
    SafeERC20Upgradeable,
    IERC20Upgradeable
} from "openzeppelin-contracts-upgradeable/contracts/token/ERC20/utils/SafeERC20Upgradeable.sol";
import {Initializable} from "openzeppelin-contracts-upgradeable/contracts/proxy/utils/Initializable.sol";
import {UUPSUpgradeable} from "openzeppelin-contracts-upgradeable/contracts/proxy/utils/UUPSUpgradeable.sol";
import {Ownable2StepUpgradeable} from "openzeppelin-contracts-upgradeable/contracts/access/Ownable2StepUpgradeable.sol";
import {MerkleProofUpgradeable} from
    "openzeppelin-contracts-upgradeable/contracts/utils/cryptography/MerkleProofUpgradeable.sol";
import {ITPManager} from "src/interfaces/ITPManager.sol";
import {ITPLiquidityManager} from "src/interfaces/ITPLiquidityManager.sol";

contract TPVault is Initializable, Ownable2StepUpgradeable, UUPSUpgradeable {
    using SafeERC20Upgradeable for IERC20Upgradeable;

    ITPManager public manager;
    address public token;
    address public pair;
    uint256 public liquidityUnlockTime;
    uint256 public liquidityMinAmount; //USDT
    bytes32 public merkleRoot;
    string public uri;

    mapping(address => bool) public claimed;

    event CreatePair(address indexed pair);

    modifier onlyManagerOwner() {
        require(msg.sender == manager.owner(), "TPE013");
        _;
    }

    modifier canRemoveLiquidity() {
        //solhint-disable-next-line not-rely-on-time
        require(block.timestamp > liquidityUnlockTime, "TPE014");
        _;
        require(_checkPairMinLiquidity(), "TPE015");
    }

    constructor() {
        _disableInitializers();
    }

    function initialize(
        address _manager,
        address newOwner,
        uint256 unlockTime,
        uint256 minAmount,
        bytes32 _merkleRoot,
        string memory _uri
    ) public initializer {
        __Ownable2Step_init();
        __UUPSUpgradeable_init();
        _transferOwnership(newOwner);
        manager = ITPManager(_manager);
        liquidityUnlockTime = unlockTime;
        liquidityMinAmount = minAmount;
        _updateMerkleRoot(_merkleRoot, _uri);
    }

    // solhint-disable-next-line no-empty-blocks
    function _authorizeUpgrade(address) internal override onlyManagerOwner {}

    function updateMerkleRoot(bytes32 _merkleRoot, string memory _uri) public onlyOwner {
        _updateMerkleRoot(_merkleRoot, _uri);
    }

    function setToken(address _token) public {
        require(token == address(0), "TPE016");
        token = _token;
    }

    function createPair(uint256 tokenAmount, uint256 usdtAmount) public onlyOwner returns (address pair_) {
        uint256 deadline = block.timestamp + 1 hours; //solhint-disable-line not-rely-on-time
        address usdt = manager.usdt();
        address liquidityManager = ITPManager(manager).liquidityManager();
        IERC20Upgradeable(token).safeApprove(liquidityManager, tokenAmount);
        IERC20Upgradeable(usdt).safeApprove(liquidityManager, usdtAmount);
        pair_ = ITPLiquidityManager(liquidityManager).createPair(
            address(this), token, usdt, tokenAmount, usdtAmount, deadline
        );
        pair = pair_;

        emit CreatePair(pair);
    }

    function addLiquidity(
        uint256 tokenAmountDesired,
        uint256 usdtAmountDesired,
        uint256 tokenAmountMin,
        uint256 usdtAmountMin
    ) public onlyOwner {
        uint256 deadline = block.timestamp + 1 hours; //solhint-disable-line not-rely-on-time
        address usdt = manager.usdt();
        address liquidityManager = ITPManager(manager).liquidityManager();
        IERC20Upgradeable(token).safeApprove(liquidityManager, tokenAmountDesired);
        IERC20Upgradeable(usdt).safeApprove(liquidityManager, usdtAmountDesired);
        ITPLiquidityManager(liquidityManager).addLiquidity(
            address(this), token, usdt, tokenAmountDesired, usdtAmountDesired, tokenAmountMin, usdtAmountMin, deadline
        );
    }

    function removeLiquidity(uint256 liquidity, uint256 tokenAmountMin, uint256 usdtAmountMin)
        public
        onlyOwner
        canRemoveLiquidity
    {
        uint256 deadline = block.timestamp + 1 hours; //solhint-disable-line not-rely-on-time
        address usdt = ITPManager(manager).usdt();
        address liquidityManager = ITPManager(manager).liquidityManager();
        IERC20Upgradeable(pair).safeApprove(liquidityManager, liquidity);
        ITPLiquidityManager(liquidityManager).removeLiquidity(
            address(this), token, usdt, liquidity, tokenAmountMin, usdtAmountMin, deadline
        );
    }

    function claim(uint256 index, address account, uint256 amount, bytes32[] calldata merkleProof) public {
        require(!claimed[account], "TPE017");
        bytes32 node = keccak256(abi.encodePacked(index, account, amount));
        require(_verify(merkleProof, merkleRoot, node), "TPE018");
        claimed[account] = true;
        IERC20Upgradeable(token).safeTransfer(account, amount);
    }

    function _verify(bytes32[] calldata proof, bytes32 root, bytes32 leaf) internal pure returns (bool) {
        return MerkleProofUpgradeable.verifyCalldata(proof, root, leaf);
    }

    function _updateMerkleRoot(bytes32 _merkleRoot, string memory _uri) internal {
        merkleRoot = _merkleRoot;
        uri = _uri;
    }

    function _checkPairMinLiquidity() internal view returns (bool) {
        IERC20Upgradeable usdt = IERC20Upgradeable(manager.usdt());
        return usdt.balanceOf(pair) >= liquidityMinAmount;
    }
}

