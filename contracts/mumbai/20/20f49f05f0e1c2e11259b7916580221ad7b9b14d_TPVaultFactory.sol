pragma solidity 0.8.19;

import {Initializable} from "openzeppelin-contracts-upgradeable/contracts/proxy/utils/Initializable.sol";
import {Ownable2StepUpgradeable} from "openzeppelin-contracts-upgradeable/contracts/access/Ownable2StepUpgradeable.sol";
import {UUPSUpgradeable} from "openzeppelin-contracts-upgradeable/contracts/proxy/utils/UUPSUpgradeable.sol";
import {ERC1967Proxy} from "openzeppelin-contracts/contracts/proxy/ERC1967/ERC1967Proxy.sol";
import {TPVault} from "src/TPVault.sol";

contract TPVaultFactory is Initializable, Ownable2StepUpgradeable, UUPSUpgradeable {
    address public implementation;
    address public manager;

    event CreateVault(address indexed vault, uint256 liquidityUnlockTime, uint256 liquidityMinAmount);

    constructor() {
        _disableInitializers();
    }

    function initialize(address newOwner) public initializer {
        __Ownable2Step_init();
        __UUPSUpgradeable_init();
        _transferOwnership(newOwner);

        implementation = address(new TPVault());
    }

    function setManager(address _manager) external {
        require(manager == address(0), "TPE009");
        manager = _manager;
    }

    function createVault(
        address newOwner,
        uint256 liquidityUnlockTime,
        uint256 liquidityMinAmount,
        bytes32 merkleRoot,
        string memory uri
    ) external returns (address) {
        require(msg.sender == manager, "TPE010");
        return _createVault(newOwner, liquidityUnlockTime, liquidityMinAmount, merkleRoot, uri);
    }

    function createVaultFromOwner(
        address newOwner,
        uint256 liquidityUnlockTime,
        uint256 liquidityMinAmount,
        bytes32 merkleRoot,
        string memory uri
    ) external onlyOwner returns (address) {
        return _createVault(newOwner, liquidityUnlockTime, liquidityMinAmount, merkleRoot, uri);
    }

    function _createVault(
        address newOwner,
        uint256 liquidityUnlockTime,
        uint256 liquidityMinAmount,
        bytes32 merkleRoot,
        string memory uri
    ) private returns (address vault) {
        bytes memory initializeCalldata = abi.encodeWithSelector(
            TPVault.initialize.selector, manager, newOwner, liquidityUnlockTime, liquidityMinAmount, merkleRoot, uri
        );
        vault = _createProxy(implementation, initializeCalldata);
        emit CreateVault(vault, liquidityUnlockTime, liquidityMinAmount);
    }

    function _createProxy(address proxyImplementation, bytes memory initializeCalldata)
        private
        returns (address proxyAddress)
    {
        proxyAddress = address(new ERC1967Proxy(proxyImplementation, initializeCalldata));
    }

    // solhint-disable-next-line no-empty-blocks
    function _authorizeUpgrade(address) internal override onlyOwner {}
}

