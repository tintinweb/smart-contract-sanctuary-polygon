import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "./interfaces/IConverterMintableERC721.sol";

// import "hardhat/console.sol";

contract Converter is Initializable, OwnableUpgradeable {
    using EnumerableSet for EnumerableSet.UintSet;

    address public signer;
    address public vaultAddress;

    IConverterMintableERC721 public gfContract;
    IERC721 public kzgContract;
    IERC721 public kubzContract;
    IERC721 public ordKubzContract;

    EnumerableSet.UintSet gfNonceUsed;
    EnumerableSet.UintSet availKzgIds;
    EnumerableSet.UintSet availKubzIds;
    EnumerableSet.UintSet availOrdKubzIds;

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function checkValidity(
        bytes calldata signature,
        string memory action
    ) public view returns (bool) {
        require(
            ECDSA.recover(
                ECDSA.toEthSignedMessageHash(
                    keccak256(abi.encodePacked(msg.sender, action))
                ),
                signature
            ) == signer,
            "invalid signature"
        );
        return true;
    }

    function initialize(
        address _signer,
        address gfAddress,
        address kzgAddress,
        address kubzAddress,
        address ordKubzAddress
    ) public initializer {
        OwnableUpgradeable.__Ownable_init();
        signer = _signer;
        setAddresses(gfAddress, kzgAddress, kubzAddress, ordKubzAddress);
    }

    function setSigner(address _signer) external onlyOwner {
        signer = _signer;
    }

    function setAddresses(
        address gfAddress,
        address kzgAddress,
        address kubzAddress,
        address ordKubzAddress
    ) public onlyOwner {
        gfContract = IConverterMintableERC721(gfAddress);
        kubzContract = IERC721(kubzAddress);
        kzgContract = IERC721(kzgAddress);
        ordKubzContract = IERC721(ordKubzAddress);
    }

    function setupVault(
        address vault,
        uint256[] calldata kzgIds,
        uint256[] calldata kubzIds,
        uint256[] calldata ordKubzIds
    ) external onlyOwner {
        vaultAddress = vault;
        for (uint256 i = 0; i < kzgIds.length; ) {
            availKzgIds.add(kzgIds[i]);
            unchecked {
                i++;
            }
        }
        for (uint256 i = 0; i < kubzIds.length; ) {
            availKubzIds.add(kubzIds[i]);
            unchecked {
                i++;
            }
        }
        for (uint256 i = 0; i < ordKubzIds.length; ) {
            availOrdKubzIds.add(ordKubzIds[i]);
            unchecked {
                i++;
            }
        }
    }

    function removeIds(
        uint256[] calldata kzgIds,
        uint256[] calldata kubzIds,
        uint256[] calldata ordKubzIds
    ) external onlyOwner {
        for (uint256 i = 0; i < kzgIds.length; ) {
            availKzgIds.remove(kzgIds[i]);
            unchecked {
                i++;
            }
        }
        for (uint256 i = 0; i < kubzIds.length; ) {
            availKubzIds.remove(kubzIds[i]);
            unchecked {
                i++;
            }
        }
        for (uint256 i = 0; i < ordKubzIds.length; ) {
            availOrdKubzIds.remove(ordKubzIds[i]);
            unchecked {
                i++;
            }
        }
    }

    function isGFNonceAlreadyUsed(uint256 nonce) external view returns (bool) {
        return gfNonceUsed.contains(nonce);
    }

    function getAvailKzgIds() external view returns (uint256[] memory) {
        return availKzgIds.values();
    }

    function getAvailKubzIds() external view returns (uint256[] memory) {
        return availKubzIds.values();
    }

    function getAvailOrdKubzIds() external view returns (uint256[] memory) {
        return availOrdKubzIds.values();
    }

    function claimGF(
        uint256[] calldata preservedAVYCTokenIds,
        uint256 nonce,
        bytes calldata signature
    ) external {
        require(!gfNonceUsed.contains(nonce), "Nonce used");
        gfNonceUsed.add(nonce);
        string memory action = string.concat(
            "claimGF_",
            Strings.toString(nonce),
            "_",
            join(preservedAVYCTokenIds)
        );
        checkValidity(signature, action);
        gfContract.converterMint(msg.sender, preservedAVYCTokenIds);
        // emit Convert(msg.sender, avycTokenIds.length);
    }

    function join(
        uint256[] calldata tokenIds
    ) internal pure returns (string memory) {
        string memory buffer = "";
        for (uint256 i = 0; i < tokenIds.length; ) {
            buffer = string.concat(
                buffer,
                i > 0 ? "," : "",
                Strings.toString(tokenIds[i])
            );
            unchecked {
                i++;
            }
        }
        return buffer;
    }

    // TODO: vault approve all Collection to Converter's address
    function claimKzg(
        uint256[] calldata kzgTokenIds,
        bytes calldata signature
    ) external {
        string memory action = string.concat("claimKzg_", join(kzgTokenIds));
        checkValidity(signature, action);
        claimToken(kzgTokenIds, availKzgIds, kzgContract);
    }

    function claimKubz(
        uint256[] calldata kubzTokenIds,
        bytes calldata signature
    ) external {
        string memory action = string.concat("claimKubz_", join(kubzTokenIds));
        checkValidity(signature, action);
        claimToken(kubzTokenIds, availKubzIds, kubzContract);
    }

    function claimOrdKubz(
        uint256[] calldata okTokenIds,
        bytes calldata signature
    ) external {
        string memory action = string.concat("claimOrdKubz_", join(okTokenIds));
        checkValidity(signature, action);
        claimToken(okTokenIds, availOrdKubzIds, ordKubzContract);
    }

    function claimToken(
        uint256[] calldata tokenIds,
        EnumerableSet.UintSet storage availTidSet,
        IERC721 collectionContract
    ) private {
        for (uint256 i = 0; i < tokenIds.length; ) {
            uint256 tokenId = tokenIds[i];
            require(
                availTidSet.contains(tokenId),
                "Token already claimed or not available for claim"
            );
            availTidSet.remove(tokenId);
            collectionContract.transferFrom(vaultAddress, msg.sender, tokenId);
            unchecked {
                i++;
            }
        }
    }
}

