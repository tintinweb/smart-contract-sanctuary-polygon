contract Stacking is Ownable {
    using SafeBEP20 for IBEP20;
    using SafeMath for uint256;
    
    uint256 public minimumDepositeAmount;
    uint256 public maximumDepositeAmount;
    uint256 [] public withdrawTime=[15 minutes,30 minutes, 60 minutes,120 minutes,150 minutes];
    IBEP20 public stakedToken;
    struct stack {
        uint256 amount;
        address userAddress;
        uint256 withdrwalTime;
        uint256 depositeTime;
        uint256 stackId;
        bool isWithdrawal;
    }
    // mapping(uint256 => stack) public Stack;
     mapping (address => mapping (uint => stack) ) public Stack;
    uint256 public APY;
    bool hasStart = false;
    uint256 public currentID = 0;

    function toggelStacking(bool _hasStart) public onlyOwner {
        hasStart = _hasStart;
    }

    function setDepositeAmount(uint256 minimumAmount, uint256 maximumAmount)
        public onlyOwner
    {
        maximumDepositeAmount = maximumAmount;
        minimumAmount = minimumAmount;
    }

    function setAPY(uint8 _APY) public onlyOwner {
        APY =_APY;
    }

    function userInfo(uint256 amount, uint256 WTime) internal {
        Stack[msg.sender][currentID].amount = amount;
        Stack[msg.sender][currentID].userAddress = msg.sender;
        Stack[msg.sender][currentID].withdrwalTime = block.timestamp.add(withdrawTime[WTime]);
        Stack[msg.sender][currentID].depositeTime = block.timestamp;
        Stack[msg.sender][currentID].stackId = currentID;
        Stack[msg.sender][currentID].isWithdrawal = false;
        currentID = currentID + 1;
    }

    function deposite(uint256 amount,uint8 withdrwalTime) public {
        require(hasStart, "Stacking is not Start yet");
        require(
            amount >= minimumDepositeAmount.mul(1e18),
            "Amount Must be Gratar than minimum Deposite Amount"
        );
        require(
            amount <= maximumDepositeAmount.mul(1e18),
            "Amount Must be less than maximum Deposite Amount"
        );
        require(
            stakedToken.allowance(msg.sender, address(this)) > amount,
            "please allow fund first"
        );
        stakedToken.safeTransferFrom(
            msg.sender,
            address(this),
            amount
        );
        userInfo(amount,withdrwalTime);
    }
    
    function calclulateReward(uint256 id,address useraddress) public view returns (uint256) {
        if(Stack[useraddress][id].amount>0){
        uint256 depositeTime = Stack[useraddress][id].depositeTime;
        uint256 Time = block.timestamp.sub(depositeTime);
        uint256 reward=Stack[useraddress][id].amount.mul(APY).mul(Time).div(100).div(1 days);
        return (reward);
        }else{
            return uint256(0);
        }
    }

    function withdrawl(uint256 amount) public onlyOwner {
        require(
            stakedToken.balanceOf(address(this)) >= amount,
            "Contract balance is low"
        );
        stakedToken.safeTransfer(msg.sender, amount);
    }

    function claim(uint256 id) public {
        require(hasStart, "Stacking is not Start yet");
        require(Stack[msg.sender][id].isWithdrawal == false, "Amount Already withdrawl");
        require(block.timestamp>Stack[msg.sender][id].withdrwalTime,"Can not withdrwal Amount before Time");
        require(Stack[msg.sender][id].userAddress == msg.sender, "Only Stack owner can claim tokens ");
        uint256 totalAmount = calclulateReward(id,msg.sender);
        require(
            stakedToken.balanceOf(address(this)) >= totalAmount,
            "Insufficent Balance"
        );
        Stack[msg.sender][id].isWithdrawal = true;
        stakedToken.safeTransfer(Stack[msg.sender][id].userAddress, totalAmount);
        stakedToken.safeTransfer(Stack[msg.sender][id].userAddress, (Stack[msg.sender][id].amount));
    }

    constructor(IBEP20 _stakedToken) {
        minimumDepositeAmount = 100;
        maximumDepositeAmount = 1000;
        APY=100;
        stakedToken = IBEP20(_stakedToken);
    }
}