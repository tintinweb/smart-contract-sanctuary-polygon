pragma solidity ^0.8.12;

import {ConsiderationOption} from "./Types.sol";

enum BundleItemType {
    ERC20,
    ERC721,
    ERC1155
}

/**
 * @notice Item of a bundle.
 * @param itemType type of the item: ERC20, ERC721 or ERC1155.
 * @param token address of token contract.
 * @param id token id of the item if it is ERC721 or ERC1155, if the item is ERC20 it must be 0.
 * @param itemAmount amount token in item if the item is ERC1155 or ERC20, if the item is ERC721 it must be 1.
 */
struct BundleItem {
    BundleItemType itemType;
    address token;
    uint256 id;
    uint256 itemAmount;
}

/**
 * @param bundle list of offered items.
 * @param considerations list of consideration items. When fulfilling, fulfiller chooses one of these items to pay for order.
 * @param bundleAmount number of bundlers are offered.
 * @param startTime the time that the order is valid from.
 * @param endTime the time that the order is expired.
 */
struct Sale {
    BundleItem[] bundle;
    ConsiderationOption[] considerations; // Note that to fulfill the whole bundleAmount in sale, you only need to use considerationOption.amount
    uint256 bundleAmount;
    uint256 startTime;
    uint256 endTime;
}

/**
 * @notice An order contains a list of sales and must be signed by offerer to be valid.
 * @param offerer address of the offerer of the order.
 * @param sales list of sales in the order.
 * @param salt random number to make order unique.
 * @param signature signature of the order. Offerer must sign hash of all fields of the order exclude signature field.
 */
struct Order {
    address offerer;
    Sale[] sales;
    uint256 salt;
    bytes signature;
}

library OrderLib {
    /**
     * @dev pack all fields of the order except signature for signing.
     */
    function pack(Order calldata order) internal pure returns (bytes memory ret) {
        return abi.encode(order.offerer, order.sales, order.salt);
    }

    /**
     * @dev hash packed order.
     */
    function hash(Order calldata order) internal pure returns (bytes32) {
        return keccak256(pack(order));
    }
}

