pragma solidity ^0.8.12;

library Utils {
    /**
     * @notice Returns ceil(a / b).
     */
    function ceil(uint256 a, uint256 b) internal pure returns (uint256) {
        uint256 c = a / b;
        if (a % b == 0) {
            return c;
        } else {
            return c + 1;
        }
    }

    bytes4 private constant OWNER_SIG = 0x8da5cb5b; // function signature of owner()

    /**
     * @notice Checks if an address is the owner of a offerer contract.
     * The method does not revert if the call to the owner() method consumes more then 25000 gas.
     * @param offerer The offerer contract
     * @param offerer The owner to verify.
     */
    function isOffererOwner(address offerer, address owner) internal view returns (bool) {
        address offererOwner = address(0);

        // solhint-disable-next-line no-inline-assembly
        assembly {
            let ptr := mload(0x40)
            mstore(ptr, OWNER_SIG)
            let result := staticcall(25000, offerer, ptr, 0x20, ptr, 0x20)
            if eq(result, 1) {
                offererOwner := mload(ptr)
            }
        }
        return offererOwner == owner;
    }

    /**
     * @notice Checks if an address is a contract.
     * @param _addr The address.
     */
    function isContract(address _addr) internal view returns (bool) {
        uint32 size;
        // solhint-disable-next-line no-inline-assembly
        assembly {
            size := extcodesize(_addr)
        }
        return (size > 0);
    }
}