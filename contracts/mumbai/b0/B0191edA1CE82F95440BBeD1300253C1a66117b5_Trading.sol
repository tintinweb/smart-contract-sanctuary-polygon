pragma solidity ^0.8.12;
import "./ITrading.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import {ItemType} from "./Types.sol";
import "./Utils.sol";

/**
 * @title A contract for trading tokens.
 * @notice The trading contract allows sellers to avoid listing their items on a smart contract by instead saving Order off-chain
 * along with a signature and information about the token they want to exchange (called the ConsiderationOption). Buyers can execute an
 * Order by fulfilling and submitting it to the trading contract along with the appropriate amount of tokens to match the order.
 */
contract Trading is ReentrancyGuard, ITrading {
    using ECDSA for bytes32;
    using OrderLib for Order;
    using SafeERC20 for IERC20;

    // order hash => sale index => fulfilled amount
    mapping(bytes32 => mapping(uint256 => uint256)) internal orderStatus;
    mapping(address => mapping(uint256 => bool)) internal buyerNonce;
    error OrderNotActive();
    error InvalidSignature();
    error IndexOutOfBound();
    error InvalidConsiderationOptionReceiver();
    error InvalidConsiderationOptionToken();
    error InvalidConsiderationOptionId();
    error InvalidConsiderationOptionAmount();
    error FailedToTransferNativeToken();
    error InsufficientNativeTokenSupplied();
    error InvalidCanceller();
    error InvalidSaleBundleAmount();
    error SaleCancelledOrFulfilledAll();
    error InvalidFulfillAmount();
    error FulfillAmountOverflow();
    error InvalidSaleConsiderationsNumber();
    error InvalidBundleItemsNumber();
    error InvalidBundleItemAmount();
    error InvalidBundleItemToken();
    error InvalidBundleItemId();
    error ArrayLengthMismatch();
    error InvalidNonce();

    /**
     * @inheritdoc ITrading
     */
    function fulfillSale(
        Order calldata order,
        uint256 saleIndex,
        uint256 considerationIndex,
        uint256 fulfillAmount,
        address recipient,
        uint256 nonce
    ) external payable override nonReentrant {
        bytes32 orderHash = getOrderHash(order);
        verifySignature(orderHash, order.signature, order.offerer);
        validateAndUpdateNonce(msg.sender, nonce);
        uint256 nativeRemaining = msg.value;
        uint256 nativeSpent = internalFulfillSale(
            order,
            saleIndex,
            considerationIndex,
            fulfillAmount,
            recipient,
            orderHash,
            nativeRemaining,
            nonce
        );
        nativeRemaining -= nativeSpent;
        if (nativeRemaining == 0) return;
        refundNativeToken(payable(msg.sender), nativeRemaining);
    }

    /**
     * @inheritdoc ITrading
     */
    function fulfillSales(
        Order calldata order,
        uint256[] calldata saleIndexes,
        uint256[] calldata considerationIndexes,
        uint256[] calldata fulfillAmounts,
        address[] calldata recipients,
        uint256[] calldata nonces
    ) external payable nonReentrant {
        if (
            saleIndexes.length != considerationIndexes.length ||
            saleIndexes.length != fulfillAmounts.length ||
            saleIndexes.length != recipients.length ||
            saleIndexes.length != nonces.length
        ) {
            revert ArrayLengthMismatch();
        }
        bytes32 orderHash = getOrderHash(order);
        verifySignature(orderHash, order.signature, order.offerer);
        uint256 nativeRemaining = msg.value;

        for (uint256 i = 0; i < saleIndexes.length; i++) {
            validateAndUpdateNonce(msg.sender, nonces[i]);
            uint256 nativeSpent = internalFulfillSale(
                order,
                saleIndexes[i],
                considerationIndexes[i],
                fulfillAmounts[i],
                recipients[i],
                orderHash,
                nativeRemaining,
                nonces[i]
            );
            nativeRemaining -= nativeSpent;
        }
        if (nativeRemaining == 0) return;
        refundNativeToken(payable(msg.sender), nativeRemaining);
    }

    /**
     * @inheritdoc ITrading
     */
    function cancelSale(Order calldata order, uint256[] calldata saleIndexes) external {
        if (msg.sender != order.offerer) revert InvalidCanceller();
        bytes32 orderHash = getOrderHash(order);
        for (uint256 i = 0; i < saleIndexes.length; i++) {
            uint256 saleIndex = saleIndexes[i];
            if (orderStatus[orderHash][saleIndex] == order.sales[saleIndex].bundleAmount)
                revert SaleCancelledOrFulfilledAll();
            orderStatus[orderHash][saleIndex] = order.sales[saleIndex].bundleAmount;
        }
        emit SaleCancelled(orderHash, saleIndexes);
    }

    /**
     * @inheritdoc ITrading
     */
    function getOrderHash(Order calldata order) public view override returns (bytes32 hash) {
        return keccak256(abi.encode(order.hash(), address(this), block.chainid));
    }

    /**
     * @inheritdoc ITrading
     */
    function getNonce(address buyer, uint256 nonce_) external view returns (bool) {
        return buyerNonce[buyer][nonce_];
    }

    /**
     * @dev Internal function to fulfill a sale.
     * @param order The order containing the sale.
     * @param saleIndex The index of the sale within the order.
     * @param considerationIndex The index of the consideration item within the sale.
     * @param fulfillAmount The amount to fulfill in the sale.
     * @param recipient The recipient address for the fulfilled sale.
     * @param orderHash The hash of the order.
     * @param nativeRemaining The remaining amount of native tokens.
     * @return The spent amount of native tokens if the consideration item is of type ItemType.NATIVE, otherwise 0.
     */
    function internalFulfillSale(
        Order calldata order,
        uint256 saleIndex,
        uint256 considerationIndex,
        uint256 fulfillAmount,
        address recipient,
        bytes32 orderHash,
        uint256 nativeRemaining,
        uint256 nonce
    ) internal returns (uint256) {
        if (saleIndex >= order.sales.length) revert IndexOutOfBound();

        Sale calldata sale = order.sales[saleIndex];
        validateSale(sale);

        uint256 fulfilledAmount = orderStatus[orderHash][saleIndex];
        if (fulfilledAmount == sale.bundleAmount) revert SaleCancelledOrFulfilledAll();

        if (considerationIndex >= sale.considerations.length) revert IndexOutOfBound();
        ConsiderationOption calldata consideration = sale.considerations[considerationIndex];
        validateConsideration(consideration);

        if (fulfillAmount == 0) revert InvalidFulfillAmount();
        if (fulfillAmount > sale.bundleAmount - fulfilledAmount) revert FulfillAmountOverflow();
        orderStatus[orderHash][saleIndex] += fulfillAmount;
        uint256 spentAmount = Utils.ceil((fulfillAmount * consideration.amount), sale.bundleAmount);
        if (consideration.itemType == ItemType.NATIVE && nativeRemaining < spentAmount) {
            revert InsufficientNativeTokenSupplied();
        }
        transferConsiderationOption(consideration, spentAmount);
        transferBundle(sale.bundle, order.offerer, recipient, fulfillAmount);

        emit SaleFulfilled(orderHash, saleIndex, considerationIndex, fulfillAmount, recipient, msg.sender, nonce);
        if (consideration.itemType == ItemType.NATIVE) {
            return spentAmount;
        }
        return 0;
    }

    /**
     * @dev Transfer items of bundle to recipient.
     */
    function transferBundle(
        BundleItem[] calldata bundle,
        address offerer,
        address recipient,
        uint256 receivedAmount
    ) internal {
        for (uint256 i = 0; i < bundle.length; i++) {
            BundleItem calldata item = bundle[i];
            if (item.itemType == BundleItemType.ERC20) {
                IERC20(item.token).safeTransferFrom(offerer, recipient, receivedAmount * item.itemAmount);
            } else if (item.itemType == BundleItemType.ERC721) {
                IERC721(item.token).safeTransferFrom(offerer, recipient, item.id);
            } else {
                IERC1155(item.token).safeTransferFrom(
                    offerer,
                    recipient,
                    item.id,
                    receivedAmount * item.itemAmount,
                    ""
                );
            }
        }
    }

    /**
     * @dev This function transfers consideration's item to consideration's receiver.
     * @param consideration infos about consideration.
     * @param transferAmount amount item will be transfered to onsideration's receiver.
     */
    function transferConsiderationOption(ConsiderationOption memory consideration, uint256 transferAmount) internal {
        if (consideration.itemType == ItemType.NATIVE) {
            // solhint-disable-next-line avoid-low-level-calls
            (bool success, ) = consideration.receiver.call{value: transferAmount}("");
            if (!success) {
                revert FailedToTransferNativeToken();
            }
            return;
        }
        if (consideration.itemType == ItemType.ERC20) {
            IERC20(consideration.token).safeTransferFrom(msg.sender, consideration.receiver, transferAmount);
            return;
        }
        if (consideration.itemType == ItemType.ERC721) {
            IERC721(consideration.token).safeTransferFrom(msg.sender, consideration.receiver, consideration.id);
            return;
        }
        IERC1155(consideration.token).safeTransferFrom(
            msg.sender,
            consideration.receiver,
            consideration.id,
            transferAmount,
            ""
        );
    }

    /**
     * @dev Internal function to transfer Ether or other native tokens to a
     *      given recipient. Note that this reference implementation deviates
     *      from the primary contract, which "bubbles up" revert data when
     *      present (the reference contract always throws a generic error).
     *
     * @param to     The recipient of the transfer.
     * @param amount The amount to transfer.
     */
    function refundNativeToken(address payable to, uint256 amount) internal {
        // Declare a variable indicating whether the call was successful or not.
        (bool success, ) = to.call{value: amount}("");

        // If the call fails
        if (!success) {
            revert FailedToTransferNativeToken();
        }
    }

    function validateAndUpdateNonce(address buyer, uint256 nonce) internal {
        if (buyerNonce[buyer][nonce]) revert InvalidNonce();
        buyerNonce[buyer][nonce] = true;
    }

    /**
     * @dev This function verifies if the signature provided is valid for the given signed hash and offerer's address.
     * @param orderHash The hash that was signed.
     * @param signature The signature to be verified.
     * @param offerer The address of the offerer.
     */
    function verifySignature(bytes32 orderHash, bytes memory signature, address offerer) internal view {
        bytes32 signedHash = orderHash.toEthSignedMessageHash();
        address recoveredOfferer = signedHash.recover(signature);
        if (recoveredOfferer == offerer) {
            return;
        }
        if (Utils.isContract(offerer) && Utils.isOffererOwner(offerer, recoveredOfferer)) {
            return;
        }
        revert InvalidSignature();
    }

    /**
     * @dev Validate basic info of a sale.
     */
    function validateSale(Sale calldata sale) internal view {
        // solhint-disable-next-line not-rely-on-time
        if (sale.startTime > block.timestamp || sale.endTime < block.timestamp) revert OrderNotActive();
        if (sale.considerations.length == 0) revert InvalidSaleConsiderationsNumber();
        if (sale.bundleAmount == 0) revert InvalidSaleBundleAmount();

        BundleItem[] calldata bundle = sale.bundle;
        if (bundle.length == 0) revert InvalidBundleItemsNumber();
        for (uint256 i = 0; i < bundle.length; i++) {
            if (bundle[i].token == address(0)) revert InvalidBundleItemToken();
            if (
                (bundle[i].itemType == BundleItemType.ERC721 &&
                    !(bundle[i].itemAmount == 1 && sale.bundleAmount == 1)) ||
                ((bundle[i].itemType == BundleItemType.ERC20 || bundle[i].itemType == BundleItemType.ERC1155) &&
                    bundle[i].itemAmount == 0)
            ) revert InvalidBundleItemAmount();
            if (bundle[i].itemType == BundleItemType.ERC20 && bundle[i].id != 0) revert InvalidBundleItemId();
        }
    }

    /**
     * @dev This function validate whether consideration of an order satisfies conditions correspond to each item type.
     * @param consideration order's consideration.
     */
    function validateConsideration(ConsiderationOption memory consideration) internal pure {
        if (consideration.receiver == address(0)) revert InvalidConsiderationOptionReceiver();
        if (consideration.amount == 0) revert InvalidConsiderationOptionAmount();
        if (consideration.itemType == ItemType.NATIVE) {
            if (consideration.token != address(0)) revert InvalidConsiderationOptionToken();
            if (consideration.id != 0) revert InvalidConsiderationOptionId();
            return;
        }
        if (consideration.itemType == ItemType.ERC20) {
            if (consideration.token == address(0)) revert InvalidConsiderationOptionToken();
            if (consideration.id != 0) revert InvalidConsiderationOptionId();
            return;
        }
        if (consideration.itemType == ItemType.ERC721) {
            if (consideration.token == address(0)) revert InvalidConsiderationOptionToken();
            if (consideration.amount != 1) revert InvalidConsiderationOptionAmount();
            return;
        }
        if (consideration.token == address(0)) revert InvalidConsiderationOptionToken();
    }
}

