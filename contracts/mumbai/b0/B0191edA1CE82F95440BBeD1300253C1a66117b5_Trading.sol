pragma solidity ^0.8.12;

enum ItemType {
    // 0: native token (ETH, MATIC...)
    NATIVE,
    // 1: ERC20 items (ERC777 and ERC20 analogues could also technically work)
    ERC20,
    // 2: ERC721 items
    ERC721,
    // 3: ERC1155 items
    ERC1155
}

/**
 * @param itemType type of consideration item, can be native token, erc20, erc721 or erc1155.
 * @param token address of consideration token. With native token, it must be address 0.
 * @param id id of consideration token. With native token and erc20, it must be 0.
 * @param amount Amount of consideration token, use this amount can fill all bundle amount in a sale. With erc721, it must be 1.
 * @param receiver address will receive token when sale fulfilled.
 */
struct ConsiderationOption {
    ItemType itemType;
    address token;
    uint256 id;
    uint256 amount;
    address receiver;
}

