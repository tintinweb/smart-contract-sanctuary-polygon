pragma solidity ^0.8.12;

interface ITrading {
    event SaleFulfilled(
        bytes32 indexed orderHash,
        uint256 indexed saleIndex,
        uint256 considerationIndex,
        uint256 fulfillAmount,
        address recipient,
        address buyer,
        uint256 indexed nonce
    );

    event SaleCancelled(bytes32 indexed orderHash, uint256[] saleIndexes);

    /**
     * @notice Fulfill a specific sale in an order by verifying order, updating sale status and
     * transfering items to recipients.
     * Received bundles amount will be calculated base on consideration and fulfilledAmount.
     * @param order order contains the sale want to fulfill.
     * @param saleIndex index of the sale in the order.
     * @param considerationIndex index of the consideration in the sale.
     * @param fulfillAmount amount on consideration item want to fulfill.
     * @param recipient address will be received sale's bundles.
     * @param nonce Nonce value to ensure uniqueness
     */
    function fulfillSale(
        Order calldata order,
        uint256 saleIndex,
        uint256 considerationIndex,
        uint256 fulfillAmount,
        address recipient,
        uint256 nonce
    ) external payable;

    /**
     * @notice Fulfill multiple sales in an order by verifying order, updating sale status and
     * transfering items to recipients.
     * Received bundles amount will be calculated base on consideration and fulfilledAmount.
     * @param order order contains sales want to fulfill.
     * @param saleIndexes index of sales in the order.
     * @param considerationIndexes index of considerations in the sale.
     * @param fulfillAmounts amount on consideration items want to fulfill.
     * @param recipients addresses will be received sale's bundles.
     * @param nonces Nonces value to ensure uniqueness
     */
    function fulfillSales(
        Order calldata order,
        uint256[] calldata saleIndexes,
        uint256[] calldata considerationIndexes,
        uint256[] calldata fulfillAmounts,
        address[] calldata recipients,
        uint256[] calldata nonces
    ) external payable;

    /**
     * @notice Cancel a sale by set its fulfilled amount to its bundleAmount.
     * @param order order will be cancelled.
     */
    function cancelSale(Order calldata order, uint256[] calldata saleIndexes) external;

    /**
     * @notice Generate an unique identifier for the order.
     * It hashes over the content of the order (except the signature), address of this contract and the chainid.
     */
    function getOrderHash(Order calldata order) external view returns (bytes32 hash);

    /**
     * @notice Return if current nonce is active
     */
    function getNonce(address buyer, uint256 nonce_) external view returns (bool);
}

