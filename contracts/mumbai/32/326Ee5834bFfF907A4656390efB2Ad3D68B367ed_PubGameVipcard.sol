import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@thirdweb-dev/contracts/extension/ContractMetadata.sol";
import "@thirdweb-dev/contracts/extension/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

contract PubGameVipcard is ContractMetadata, Ownable, Pausable {
    address public PGC; //0x35c2b6826b5c94fd2dfede51e7cfd4b94410840a
    address public FOUNDERS; //0x555f489a0b0692e8324cb8077e679556cfc777a0
    address public PUBBERS; //0x1e3dd72a66fab80f5a35cf4639595d7b924630c3

    event PGCSent(address to, uint256 amount, uint256 date);
    event FounderSent(address to, uint256 tokenId, uint256 date);
    event PubberSent(address to, uint256 tokenId, uint256 date);

    constructor(address _pgc, address _founders, address _pubbers) {
        _setupOwner(msg.sender);
    }

    function sendPGC(
        address _to,
        uint256 _amount
    ) external onlyOwner whenNotPaused {
        require(
            IERC20(PGC).balanceOf(owner()) >= _amount,
            "Balance not enough to send, please contact the support"
        );

        IERC20(PGC).transferFrom(owner(), payable(_to), _amount);
        emit PGCSent(_to, _amount, block.timestamp);
    }

    function sendFounder(
        address _to,
        uint256 _tokenId
    ) external onlyOwner whenNotPaused {
        require(
            IERC721(FOUNDERS).ownerOf(_tokenId) == owner(),
            "Current NFT not owned available, please contact the support"
        );

        IERC721(FOUNDERS).safeTransferFrom(owner(), _to, _tokenId);
        emit FounderSent(_to, _tokenId, block.timestamp);
    }

    function sendPubber(
        address _to,
        uint256 _tokenId
    ) external onlyOwner whenNotPaused {
        require(
            IERC721(PUBBERS).ownerOf(_tokenId) == owner(),
            "Current NFT not owned available, please contact the support"
        );

        IERC721(PUBBERS).safeTransferFrom(owner(), _to, _tokenId);
        emit PubberSent(_to, _tokenId, block.timestamp);
    }

    function _canSetContractURI()
        internal
        view
        virtual
        override
        returns (bool)
    {
        return msg.sender == owner();
    }

    function _canSetOwner() internal view virtual override returns (bool) {
        return msg.sender == owner();
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function withdrawToken(address _token, uint256 _amount) external onlyOwner {
        IERC20 tokenContract = IERC20(_token);
        tokenContract.approve(address(this), _amount);
        tokenContract.transfer(payable(owner()), _amount);
    }

    function withdraw() public onlyOwner {
        uint256 amount = address(this).balance;

        (bool success, ) = owner().call{value: amount}("");
        require(success, "Failed to send Matic");
    }
}