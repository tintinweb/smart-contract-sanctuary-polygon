import "@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract NFTExchange is Ownable, IERC1155Receiver, IERC721Receiver {
    enum TokenType {
        ERC721,
        ERC1155
    }

    enum Status {
        InProgress,
        Completed,
        Canceled,
        TimedOut
    }

    struct Offer {
        address offerer;
        address recipient;
        TokenType tokenType;
        address tokenAddress;
        uint256 tokenId;
        uint256 amount;
        uint256 timestamp;
        Status status;
    }

    uint256 public offerTimeout;
    mapping(bytes32 => Offer) public offers;

    event OfferCreated(bytes32 indexed offerId, Offer offer);
    event OfferAccepted(bytes32 indexed offerId);
    event OfferCancelled(bytes32 indexed offerId);

    constructor(uint256 _offerTimeout) {
        offerTimeout = _offerTimeout;
    }

    function createOffer(
        address _recipient,
        TokenType _tokenType,
        address _tokenAddress,
        uint256 _tokenId,
        uint256 _amount
    ) public {
        require(_recipient != address(0), "Invalid recipient address");

        // Check if the user actually holds the NFT they want to trade
        if (_tokenType == TokenType.ERC721) {
            require(
                IERC721(_tokenAddress).ownerOf(_tokenId) == msg.sender,
                "User does not own the ERC721 token"
            );
        } else {
            require(
                IERC1155(_tokenAddress).balanceOf(msg.sender, _tokenId) >=
                    _amount,
                "User does not have enough ERC1155 tokens"
            );
        }

        bytes32 offerId = keccak256(
            abi.encodePacked(
                msg.sender,
                _recipient,
                _tokenType,
                _tokenAddress,
                _tokenId,
                _amount
            )
        );

        require(offers[offerId].offerer == address(0), "Offer already exists");

        offers[offerId] = Offer({
            offerer: msg.sender,
            recipient: _recipient,
            tokenType: _tokenType,
            tokenAddress: _tokenAddress,
            tokenId: _tokenId,
            amount: _amount,
            timestamp: block.timestamp,
            status: Status.InProgress
        });
        emit OfferCreated(offerId, offers[offerId]);
    }

    function acceptOffer(bytes32 _offerId) public {
        Offer storage offer = offers[_offerId];
        require(offer.offerer != address(0), "Offer does not exist");
        require(offer.recipient == msg.sender, "Not the intended recipient");

        // Check if the offers have not expired
        require(
            block.timestamp < offer.timestamp + offerTimeout,
            "Offer has expired"
        );

        if (offer.tokenType == TokenType.ERC721) {
            IERC721(offer.tokenAddress).safeTransferFrom(
                offer.offerer,
                offer.recipient,
                offer.tokenId
            );
        } else {
            IERC1155(offer.tokenAddress).safeTransferFrom(
                offer.offerer,
                offer.recipient,
                offer.tokenId,
                offer.amount,
                ""
            );
        }

        // Update offer status after successful token transfer
        offers[_offerId].status = Status.Completed;

        emit OfferAccepted(_offerId);
    }

    function cancelOffer(bytes32 _offerId) public {
        Offer storage offer = offers[_offerId];
        require(offer.offerer != address(0), "Offer does not exist");
        require(
            offer.offerer == msg.sender || owner() == msg.sender,
            "Not authorized to cancel the offer"
        );

        // Update offer status
        if (
            offer.status == Status.InProgress &&
            block.timestamp >= offer.timestamp + offerTimeout
        ) {
            offers[_offerId].status = Status.TimedOut;
        } else {
            offers[_offerId].status = Status.Canceled;
        }

        emit OfferCancelled(_offerId);
    }

    function getOfferId(
        address _offerer,
        address _recipient,
        TokenType _tokenType,
        address _tokenAddress,
        uint256 _tokenId,
        uint256 _amount
    ) public pure returns (bytes32) {
        return
            keccak256(
                abi.encodePacked(
                    _offerer,
                    _recipient,
                    _tokenType,
                    _tokenAddress,
                    _tokenId,
                    _amount
                )
            );
    }

    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes calldata
    ) external pure override returns (bytes4) {
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address,
        address,
        uint256[] calldata,
        uint256[] calldata,
        bytes calldata
    ) external pure override returns (bytes4) {
        return this.onERC1155BatchReceived.selector;
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) external pure override returns (bytes4) {
        return this.onERC721Received.selector;
    }

    function supportsInterface(
        bytes4 interfaceId
    ) public pure override(IERC165) returns (bool) {
        return
            interfaceId == type(IERC1155Receiver).interfaceId ||
            interfaceId == type(IERC165).interfaceId;
    }

    // Owner-only functions

    function setOfferTimeout(uint256 _newTimeout) external onlyOwner {
        offerTimeout = _newTimeout;
    }
}