pragma solidity ^0.8.0;



contract KlangPool is Ownable {
    using SafeMath for uint256;
    using SafeMath for uint;

    address public tokenAddress;
    IERC20 private token;
    address public klangRewardAddress;

    event PayReward(address, uint);

    modifier onlyAdmin() {
        require(msg.sender == klangRewardAddress || msg.sender == _owner, "Not permitted");
        _;
    }

    constructor(address _token, address _KlangReward) {
        tokenAddress = _token;
        token = IERC20(tokenAddress);

        klangRewardAddress = _KlangReward;
    }

    function payReward(address to, uint256 amount) external onlyAdmin {
        require(amount > 0, "Invalid amount");
        require(amount <= token.balanceOf(address(this)), "Too many token to send");

        token.transfer(to, amount);
        emit PayReward(to, amount);
    }

    function getRewardBalance() public view returns (uint256) {
        return token.balanceOf(address(this));
    }
}