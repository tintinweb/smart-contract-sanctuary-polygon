            // revert funds
            if (currency == WETH) {
                payable(buyer).transfer(price);
            } else {
                IERC20(currency).approve(address(fundManager), price);
                fundManager.processFeesAndFunds(currency, buyer, seller, strategy, price, royaltyInfo, 2);
