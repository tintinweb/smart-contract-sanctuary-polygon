pragma solidity ^0.8.9;

import "./APIOracleRequest.sol";



contract Oracle { 
  using CBOR for CBOR.CBORBuffer;


    struct MyStruct {
        uint256 value1;
        string value2;
    }
    
    function getStruct() public view returns (MyStruct memory) {
        MyStruct memory myStruct = MyStruct(123, "hello");
        return myStruct;
    }



  // the address of the owner of the contract
  address public owner;
  bytes32 public EMPTY = "0x0000000";

  APIOracleRequest public EMPTY_REQUEST = APIOracleRequest({
    callbackFunction: 0x00000000,
    callbackAddress: address(0x0),
    callbackSignature: "",
    url: "",
    requestId: EMPTY,
    requestedBy: address(0x0),
    buffer: CBOR.create(0),
    params: ""
  });



  // the queue of API calls
  APIOracleRequest[] public requests;

  event RequestedAPICall(bytes32 indexed requestId);
  event RespondedToAPICall(bytes32 indexed requestId, bool indexed success);

  constructor() {
    owner = msg.sender;
  }

  /* Allows the owner to transfer ownership to a new address */
  function transferOwnership(address newOwner) public {
    require(msg.sender == owner, "You are not the owner");
    owner = newOwner;
  }

  /* Adds a new API call to the queue */
  function requestApiCall(bytes32 requestId, APIOracleRequest memory request) public {
    request.requestedBy = msg.sender;
    requests.push(request);
    emit RequestedAPICall(requestId);
  }

  /* returns the length of the requests queue */
  function getRequestsLength() public view returns (uint256) {
    return requests.length;
  }

  /* Returns the request ID of the next API call to be made or empty string if none exist */
  function getNextApiCall() public view returns (APIOracleRequest memory) {
    if (requests.length == 0) {
      return EMPTY_REQUEST;
    }
    return requests[0];
  }

  function emptyQueue() public {
    // JUST A TEST METHOD
    // require(msg.sender == owner, "You are not the owner");
    delete requests;
  }

  function findAPIRequest(bytes32 requestId) public view returns (APIOracleRequest memory) {
    int256 posRequest = findIndex(requests, requestId);
    require(posRequest >= 0, "Request not found");
    return requests[uint(posRequest)];
  }

  function getEmptyReqyest() public view returns (APIOracleRequest memory) {
    return EMPTY_REQUEST;
  }

  /* Called by nodes when responding to an API call. Deletes the request from the queue. */
  function respondToApiCall(bytes32 requestId, bytes memory payload) public returns (bool, bytes memory) {
    int256 posRequest = findIndex(requests, requestId);
    require(posRequest >= 0, "Request not found");

    APIOracleRequest memory request = requests[uint(posRequest)];

    (bool success, bytes memory data) = request.callbackAddress.call(payload);

    deleteFromRequests(uint(posRequest));
    emit RespondedToAPICall(requestId, success);

    return (success, data);
  }

  function findIndex(APIOracleRequest[] memory arr, bytes32 target) private pure returns (int256) {
    for (uint256 i = 0; i < arr.length; i++) {
        if (arr[i].requestId == target) {
            return int256(i);
        }
    }
    // Return -1 if the element is not found
    return -1;
  }

  function deleteFromRequests(uint index) private {
    require(index < requests.length, "Index out of bounds");

    // Swap the element to delete with the last element
    requests[index] = requests[requests.length - 1];

    // Remove the last element
    requests.pop();
  }

  function prepareAPICall(bytes32 requestId, string memory url, address callbackAddress, bytes4 callbackFunction, string memory callbackSignature) public view returns (APIOracleRequest memory) {
    APIOracleRequest memory request = APIOracleRequest({
      callbackFunction: callbackFunction,
      callbackAddress: callbackAddress,
      callbackSignature: callbackSignature,
      url: url,
      requestId: requestId,
      requestedBy: msg.sender,
      buffer: CBOR.create(16),
      params: ""
    });

    request.buffer.startMap();    
    return request;
  }

  function addParam(APIOracleRequest memory request, string memory param, string memory paramValue) public pure {
    request.buffer.writeKVString(param, paramValue);
  }

}

