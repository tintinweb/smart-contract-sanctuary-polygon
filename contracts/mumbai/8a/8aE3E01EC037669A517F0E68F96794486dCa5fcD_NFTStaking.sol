pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract NFTStaking is ERC1155Holder, Pausable, Ownable {
    // ERC1155 token being staked
    IERC1155 private _nftToken;

    using SafeMath for uint256;

    // Staking pool structure
    // pool id 0 for silver
    // pool id 1 for gold
    // pool id 2 for diamond
    struct Pool {
        uint256 totalStaked;
        uint256 lastRewardTime;
        uint256 rewardPerToken;
        mapping(address => uint256) stakedBalances;
        uint256 poolBalance;
    }

    struct UserDetails{
        uint256 lastWithdrawan;
        uint256 total_earned;
        uint256 lastStaked;
    }

    mapping(uint256 => mapping(address => UserDetails)) public users;

    mapping(address => bool) public minters;

    uint256 public TIME_STEP = 7 days;

    // Mapping of pool IDs to Pool structures
    mapping(uint256 => Pool) public _pools;

    // Reward distribution interval in seconds (7 days)
    uint256 private constant _rewardInterval = 7 days;

    // Event emitted when a user stakes tokens
    event Staked(address indexed user, uint256 indexed poolId, uint256 amount);

    // Event emitted when a user withdraws tokens
    event Withdrawn(address indexed user, uint256 indexed poolId, uint256 amount);

    // Event emitted when a reward is distributed
    event RewardDistributed(uint256 indexed poolId, uint256 amount);

    constructor(address nftToken,address newOwner) {
        _nftToken = IERC1155(nftToken);
        transferOwnership(newOwner);
    }

    modifier onlyMinter {
        require(minters[msg.sender], "Only minters can call this function");
        _;
    }

    modifier onlyValidPoolId(uint256 poolId) {
        require(poolId > 0 && poolId < 4 , "invalid poolid");
        _;
    }
    
    function addMinter(address newMinter) public onlyOwner {
        require(newMinter != address(0), "Minter address cannot be zero");
        minters[newMinter] = true;
    }
    
    function removeMinter(address minterToRemove) public onlyOwner {
        require(minterToRemove != address(0), "Minter address cannot be zero");
        require(minters[minterToRemove], "Address is not currently a minter");
        minters[minterToRemove] = false;
    }

    // Stakes ERC1155 tokens
    function stake(uint256 poolId, uint256 amount) public whenNotPaused onlyValidPoolId(poolId){
        require(amount > 0, "Cannot stake 0 tokens");
        
        // Transfer tokens from user to contract
        _nftToken.safeTransferFrom(msg.sender, address(this), (poolId), amount, "");

        // Update pool balances
        Pool storage pool = _pools[poolId];
        pool.stakedBalances[msg.sender] += amount;
        pool.totalStaked += amount;
        users[poolId][msg.sender].lastStaked = block.timestamp;

        emit Staked(msg.sender, poolId, amount);
    }

    // Withdraws ERC1155 tokens
    function withdraw(uint256 poolId, uint256 amount) public onlyValidPoolId(poolId){
        require(amount > 0, "Cannot withdraw 0 tokens");
        require(block.timestamp > users[poolId][msg.sender].lastStaked.add(_rewardInterval),"Need to completet 7 days after staking");
        // Update pool balances
        Pool storage pool = _pools[poolId];
        pool.stakedBalances[msg.sender] -= amount;
        pool.totalStaked -= amount;

        // Transfer tokens from contract to user
        _nftToken.safeTransferFrom(address(this), msg.sender, poolId, amount, "");

        emit Withdrawn(msg.sender, poolId, amount);
    }

    function addPoolBalance(uint256 _poolId) external payable onlyMinter onlyValidPoolId(_poolId) {
        require(msg.value>0,"Amount must be greater than zero");
        _pools[_poolId].poolBalance = _pools[0].poolBalance.add(msg.value);
    }

    // Distributes rewards to stakers
    function distributeRewards(uint256 poolId) public onlyOwner onlyValidPoolId(poolId){
        Pool storage pool = _pools[poolId];
        require(block.timestamp > pool.lastRewardTime.add(TIME_STEP),"Allready declare");
        // Calculate the reward amount per token
        uint256 rewardAmount = pool.poolBalance.div(10);
        pool.rewardPerToken = rewardAmount / pool.totalStaked;
        pool.lastRewardTime = block.timestamp;
    }

    function withdrawRewards(uint256 _poolId) external onlyValidPoolId(_poolId)
    {
        Pool storage pool = _pools[_poolId];
        UserDetails storage _user = users[_poolId][msg.sender];
        require(block.timestamp > users[_poolId][msg.sender].lastWithdrawan.add(_rewardInterval),"Allready claim wait for next round");
        _user.total_earned = _user.total_earned.add(pool.rewardPerToken);
        payable(msg.sender).transfer(pool.rewardPerToken);
    }
}

