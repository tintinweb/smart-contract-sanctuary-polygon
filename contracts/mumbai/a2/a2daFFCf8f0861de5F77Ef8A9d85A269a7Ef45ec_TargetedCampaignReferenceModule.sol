    uint256 protocolFee = getProtocolFee(budget);
    uint256 clientFee = getClientFee(budget);
    uint256 budgetPlusFees = budget + protocolFee + clientFee;

    _validateBalanceAndAllowance(account, currency, budgetPlusFees);

