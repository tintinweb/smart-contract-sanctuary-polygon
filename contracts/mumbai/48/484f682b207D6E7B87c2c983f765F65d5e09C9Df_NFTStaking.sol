import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract NFTStaking is IERC721Receiver, ReentrancyGuard, Ownable {
    using Counters for Counters.Counter;

    struct StakingInfo {
        address staker;
        uint256 timestamp;
        bool isStaked;
    }

    uint256 private constant MAX_REWARD = 20000 * (10 ** 18); // 20k SNFTS with 18 decimals
    uint256 private constant FULL_MATURITY_MINUTES = 10;
    uint256 private constant EARLY_UNSTAKING_MINUTES = 5; // Changed from 30 days to 5 minutes
    uint256 private constant REWARD_PERCENTAGE_EVERY_3_DAYS = 1;

    IERC721 private _nftContract;
    mapping(uint256 => StakingInfo) private _stakingInfo;
    Counters.Counter private _tokenIdCounter;

    uint256[] private stakedTokens;

    event Staked(address indexed staker, uint256 indexed tokenId);
    event Unstaked(
        address indexed staker,
        uint256 indexed tokenId,
        uint256 reward
    );
    event RewardPerNFT(uint256 tokenId, uint256 rewards);
    event TotalReward(uint256[] indexed rewards);

    constructor() {
        _nftContract = IERC721(0x6896A57f1614f05c4A344dd360Ea803b9f74c223);
    }

    function stake(uint256[] calldata tokenIds) external nonReentrant {
        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            require(
                _nftContract.ownerOf(tokenId) == msg.sender,
                "Caller must be the owner of the NFT"
            );

            require(
                !_stakingInfo[tokenId].isStaked,
                "Cannot stake twice this NFT"
            );

            _nftContract.safeTransferFrom(msg.sender, address(this), tokenId);
            _stakingInfo[tokenId] = StakingInfo(
                msg.sender,
                block.timestamp,
                true
            );
            stakedTokens.push(tokenId);
            _tokenIdCounter.increment();
            emit Staked(msg.sender, tokenId);
        }
    }

    function unstake(uint256[] calldata tokenIds) external nonReentrant {
        uint256 totalReward = 0;
        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            require(
                _stakingInfo[tokenId].staker == msg.sender,
                "Caller must be the staker of the NFT"
            );

            uint256 stakingMinutes = (block.timestamp -
                _stakingInfo[tokenId].timestamp) / 1 minutes; // Changed from days to minutes
            require(
                stakingMinutes >= EARLY_UNSTAKING_MINUTES,
                "Cannot unstake before 5 minutes"
            );

            uint256 reward = calculateReward(stakingMinutes);
            totalReward += reward;

            _nftContract.safeTransferFrom(address(this), msg.sender, tokenId);
            delete _stakingInfo[tokenId];
            _tokenIdCounter.decrement();

            // Remove tokenId from the stakedTokens array
            for (uint256 j = 0; j < stakedTokens.length; j++) {
                if (stakedTokens[j] == tokenId) {
                    stakedTokens[j] = stakedTokens[stakedTokens.length - 1];
                    stakedTokens.pop();
                    break;
                }
            }

            emit Unstaked(msg.sender, tokenId, reward);
        }
    }

    function wasStaked(uint256 tokenId) public view returns (bool) {
        return _stakingInfo[tokenId].isStaked;
    }

    // function calculateReward(
    //     uint256 stakingMinutes
    // ) public view returns (uint256) {
    //     if (stakingMinutes >= FULL_MATURITY_MINUTES) {
    //         return MAX_REWARD;
    //     } else {
    //         uint256 rewardDays = stakingMinutes / (60 * 24); // Calculate rewards for every 3 days
    //         uint256 rewardPercentage = rewardDays *
    //             REWARD_PERCENTAGE_EVERY_3_DAYS;
    //         uint256 reward = (MAX_REWARD * rewardPercentage) / 100;
    //         return reward;
    //     }
    // }

    function calculateReward(
        uint256 stakingMinutes
    ) public pure returns (uint256) {
        if (stakingMinutes >= FULL_MATURITY_MINUTES) {
            return MAX_REWARD;
        } else {
            uint256 rewardPercentage = stakingMinutes *
                REWARD_PERCENTAGE_EVERY_3_DAYS;
            uint256 reward = (MAX_REWARD * rewardPercentage) / 1000; // Divide by 10,000 to represent 0.01%
            return reward;
        }
    }

    function withdrawRewards(
        uint256[] calldata tokenIds
    ) external nonReentrant {
        uint256 totalReward = 0;
        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            require(
                _stakingInfo[tokenId].staker == msg.sender,
                "Caller must be the staker of the NFT"
            );

            uint256 stakingMinutes = (block.timestamp -
                _stakingInfo[tokenId].timestamp) / 1 minutes;
            require(
                stakingMinutes >= EARLY_UNSTAKING_MINUTES,
                "Cannot withdraw rewards before 30 days"
            );

            uint256 reward = calculateReward(stakingMinutes);
            totalReward += reward;

            _stakingInfo[tokenId].timestamp = block.timestamp;
        }
    }

    function stakingInfo(
        uint256 tokenId
    ) external view returns (StakingInfo memory) {
        return _stakingInfo[tokenId];
    }

    function totalStaked() external view returns (uint256) {
        return _tokenIdCounter.current();
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) external pure override returns (bytes4) {
        return this.onERC721Received.selector;
    }

    function getTotalRewards(address user) external view returns (uint256) {
        uint256 totalReward = 0;
        for (
            uint256 tokenId = 1;
            tokenId <= _tokenIdCounter.current();
            tokenId++
        ) {
            if (_stakingInfo[tokenId].staker == user) {
                uint256 stakingMinutes = (block.timestamp -
                    _stakingInfo[tokenId].timestamp) / 1 minutes;
                uint256 reward = calculateReward(stakingMinutes);
                totalReward += reward;
            }
        }
        return totalReward;
    }

    function getRewardsPerNFT(uint256[] memory tokenIds) external nonReentrant {
        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            StakingInfo memory info = _stakingInfo[tokenId];
            require(info.staker != address(0), "Token is not staked");

            uint256 stakingMinutes = (block.timestamp - info.timestamp) /
                1 minutes;
            uint256 reward = calculateReward(stakingMinutes);
            emit RewardPerNFT(tokenId, reward);
        }
    }

    function getStakedNFTs(
        address user
    ) external view returns (uint256[] memory) {
        uint256 stakedCount = 0;

        for (uint256 i = 0; i < stakedTokens.length; i++) {
            uint256 tokenId = stakedTokens[i];
            if (_stakingInfo[tokenId].staker == user) {
                stakedCount++;
            }
        }

        uint256[] memory stakedNFTs = new uint256[](stakedCount);
        uint256 index = 0;

        for (uint256 i = 0; i < stakedTokens.length; i++) {
            uint256 tokenId = stakedTokens[i];
            if (_stakingInfo[tokenId].staker == user) {
                stakedNFTs[index] = tokenId;
                index++;
            }
        }

        return stakedNFTs;
    }
}