pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Votes.sol";
import {ISyncProtocol} from "../sync-protocol/interfaces/ISyncProtocol.sol";
import {Roles} from "../extensions/Roles.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {SafeERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import {Pausable} from "@openzeppelin/contracts/security/Pausable.sol";

contract MasterPoint is Pausable, Roles {
    using SafeERC20 for IERC20;

    struct Ratio {
        uint128 rate;
        uint128 decimals;
    }

    ISyncProtocol public syncProtocol;

    mapping(address => Ratio) public supportedTokens;
    mapping(address => Ratio) public revertedSupportedTokens;

    event SupportedTokenUpdated(address token, uint128 rate, uint128 decimals);
    event RevertedSupportedTokenUpdated(address token, uint128 rate, uint128 decimals);

    event Deposit(
        address user,
        address token,
        uint collaterals,
        uint convertedPoints
    );
    event Withdraw(
        address user,
        address token,
        uint points,
        uint convertedCollateral
    );

    event Refund(
        address user,
        address token,
        uint amount,
        uint convertedCollateral
    );

    // keccak256("SYNC_ROLE")
    bytes32 public constant SYNC_ROLE =
        0xbb1ef2b79fa8154a13ffa50bd30e5f91ed93ff9b924bd04be671240cbc9d4b71;

    constructor(
        address[] memory _admins,
        address[] memory _tokens,
        Ratio[] memory _rates,
        Ratio[] memory _ratesRevert,
        ISyncProtocol _syncProtocol
    ) Roles(_admins) {
        if (_tokens.length > 0 && _rates.length > 0) {
            require(
                _tokens.length == _rates.length,
                "Point::Invalid rate initialization!"
            );
            require(
                _tokens.length == _ratesRevert.length,
                "Point::Invalid rate reverted initialization!"
            );
            for (uint i = 0; i < _tokens.length; i++) {
                supportedTokens[_tokens[i]] = _rates[i];
                revertedSupportedTokens[_tokens[i]] = _ratesRevert[i];
            }
        }

        syncProtocol = _syncProtocol;

        _setRoleAdmin(SYNC_ROLE, GUARDIAN_ROLE);
        _setupRole(SYNC_ROLE, address(syncProtocol));
    }

    fallback() external {
        revert();
    }

    receive() external payable {
        revert();
    }

    function migrateSyncProtocol(
        ISyncProtocol _syncProtocol
    ) external onlyRole(GUARDIAN_ROLE) {
        require(_syncProtocol != syncProtocol, "Already existed sync protocol");
        syncProtocol = _syncProtocol;
    }

    function handleSyncData(
        bytes memory _callData
    ) external onlyRole(SYNC_ROLE) {
        (address user, uint amount, address collateralToken) = abi.decode(
            _callData,
            (address, uint, address)
        );
        uint convertedCollateral = _unlockCollateral(
            amount,
            user,
            collateralToken
        );
        emit Withdraw(user, collateralToken, amount, convertedCollateral);
    }

    function handleRevertData(
        bytes memory _callData,
        address _collateralToken
    ) external onlyRole(SYNC_ROLE) {
        (address user, uint amount) = abi.decode(_callData, (address, uint));
        uint convertedCollateral = _unlockCollateral(
            amount,
            user,
            _collateralToken
        );
        emit Refund(user, _collateralToken, amount, convertedCollateral);
    }

    function deposit(
        address _collateralToken,
        uint _amount
    ) external whenNotPaused {
        uint convertedPoints = _deliverPoints(
            _amount,
            msg.sender,
            _collateralToken
        );
        _syncDeposit(convertedPoints);
        emit Deposit(msg.sender, _collateralToken, _amount, convertedPoints);
    }

    function depositETH(
        address _collateralToken,
        uint _amount
    ) external payable whenNotPaused {
        require(msg.value >= _amount, "Point::Invalid input amount!");

        // Return the redundant amount to msg.sender
        uint remainingAmount = msg.value - _amount;
        if (remainingAmount > 0) {
            bool success = payable(msg.sender).send(remainingAmount);
            require(success, "Point::Transfer failed!");
        }

        uint convertedPoints = _deliverPoints(
            _amount,
            msg.sender,
            _collateralToken
        );
        _syncDeposit(convertedPoints);
        emit Deposit(msg.sender, _collateralToken, _amount, convertedPoints);
    }

    function pause() public whenNotPaused onlyRole(GUARDIAN_ROLE) {
        _pause();
    }

    function unpause() public whenPaused onlyRole(GUARDIAN_ROLE) {
        _unpause();
    }

    function getCollateralsByToken(
        address _collateral
    ) public view returns (uint) {
        return IERC20(_collateral).balanceOf(address(this));
    }

    function setSupportedToken(
        address _token,
        Ratio memory _ratio
    ) public onlyRole(GUARDIAN_ROLE) {
        // Ratio memory ratio = supportedTokens[_token];
        supportedTokens[_token] = _ratio;
        emit SupportedTokenUpdated(_token, _ratio.rate, _ratio.decimals);
    }

    function setRevertedSupportedToken(
        address _token,
        Ratio memory _ratio
    ) public onlyRole(GUARDIAN_ROLE) {
        // Ratio memory ratio = revert[_token];
        revertedSupportedTokens[_token] = _ratio;
        emit RevertedSupportedTokenUpdated(
            _token,
            _ratio.rate,
            _ratio.decimals
        );
    }

    function _syncDeposit(uint _amount) internal {
        bytes memory callData = abi.encode(_msgSender(), _amount);

        syncProtocol.pushData(callData);
    }

    function _deliverPoints(
        uint _amount,
        address _user,
        address _collateralToken
    ) internal returns (uint) {
        require(
            IERC20(_collateralToken).allowance(_user, address(this)) >= _amount,
            "Point::Allowance is not enough!"
        );
        IERC20(_collateralToken).safeTransferFrom(
            _user,
            address(this),
            _amount
        );

        uint convertedPoints = _calcConvertedPoints(
            _amount,
            _collateralToken,
            true
        );
        require(convertedPoints > 0, "Point::Nothing to deliver to caller!");

        return convertedPoints;
    }

    function _unlockCollateral(
        uint _amount,
        address _user,
        address _collateralToken
    ) internal returns (uint) {
        uint convertedCollateral = _calcConvertedPoints(
            _amount,
            _collateralToken,
            false
        );
        require(
            convertedCollateral > 0,
            "Point::Nothing to deliver to caller!"
        );

        require(
            getCollateralsByToken(_collateralToken) >= convertedCollateral,
            "Point::Balance is not enough!"
        );
        IERC20(_collateralToken).safeTransfer(_user, convertedCollateral);

        return convertedCollateral;
    }

    function _calcConvertedPoints(
        uint _amount,
        address _collateralToken,
        bool _useDeposit
    ) internal view returns (uint256) {
        if (_useDeposit) {
            Ratio memory ratio = supportedTokens[_collateralToken];
            return (_amount * ratio.rate) / (10 ** ratio.decimals);
        } else {
            Ratio memory ratio = revertedSupportedTokens[_collateralToken];

            return (_amount * (10 ** ratio.decimals)) / ratio.rate;
        }
    }
}

