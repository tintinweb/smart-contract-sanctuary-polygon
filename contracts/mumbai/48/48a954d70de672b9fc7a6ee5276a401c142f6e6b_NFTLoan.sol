pragma solidity 0.8.16;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/IERC721Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/IERC721ReceiverUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/AddressUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/draft-EIP712Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";

contract NFTLoan is
    Initializable,
    UUPSUpgradeable,
    EIP712Upgradeable,
    OwnableUpgradeable,
    PausableUpgradeable,
    ReentrancyGuardUpgradeable,
    IERC721ReceiverUpgradeable
{
    using AddressUpgradeable for address;
    using ECDSAUpgradeable for bytes32;
    address lender;
    uint256 oneYearInSeconds;

    struct Loan {
        address borrower;
        address lender;
        address nftAddress;
        uint256 tokenId;
        uint256 startTime;
        uint256 duration; // duration in days
        address loanContract;
        uint256 loanAmount;
        uint256 loanPercentage;
        bool active;
        uint256 nonce;
    }

    mapping(address => mapping(uint256 => Loan)) public loans;

    event LoanCreated(
        address indexed borrower,
        address indexed lender,
        address indexed nftAddress,
        uint256 tokenId,
        uint256 startTime,
        uint256 duration,
        address loanContract,
        uint256 loanAmount
    );

    event LoanRepaid(
        address indexed borrower,
        address indexed lender,
        uint256 indexed tokenId
    );

    event NFTWithdrawn(address indexed borrower, uint256 indexed tokenId);

    function initialize() external initializer {
        oneYearInSeconds = 31536000;
        __Ownable_init_unchained();
        __Pausable_init_unchained();
        __ReentrancyGuard_init_unchained();
    }

    function _authorizeUpgrade(address) internal override onlyOwner {}

    /**
      @dev borrower can lend nft
    */
    function lendNFT(Loan memory loan, bytes calldata signature) external {
        require(loan.duration > 0, "Invalid duration");
        require(loan.loanAmount > 0, "Invalid loan amount");
        require(loan.loanPercentage > 0, "Invalid loan percentage");
        require(
            loan.loanContract != address(0),
            "Loan contract not to be zero"
        );

        IERC721Upgradeable token = IERC721Upgradeable(loan.nftAddress);
        require(
            token.ownerOf(loan.tokenId) == msg.sender,
            "Not the owner of the token"
        );
        require(
            token.getApproved(loan.tokenId) == address(this),
            "Contract not approved for token"
        );

        IERC20Upgradeable loanContract = IERC20Upgradeable(loan.loanContract);

        // verify signature
        bytes32 structHash = genOrderHash(loan);
        bytes32 hashTypedData = _hashTypedDataV4(structHash);
        lender = verifySignature(hashTypedData, signature);
        // require(lender == loan.lender, "Loan: Signature Incorrect");

        loanContract.transferFrom(loan.lender, address(this), loan.loanAmount);

        loanContract.transfer(loan.borrower, loan.loanAmount);

        token.safeTransferFrom(msg.sender, address(this), loan.tokenId);

        loans[loan.nftAddress][loan.tokenId] = loan;

        emit LoanCreated(
            msg.sender,
            loan.lender,
            loan.nftAddress,
            loan.tokenId,
            block.timestamp,
            loan.duration,
            loan.loanContract,
            loan.loanAmount
        );
    }

    /**
     @dev loan duration in seconds, get repaymentWithInterest corresponding to loan duration
     */
    function calculateRepaymentWithInterest(
        address nftAddress,
        uint256 tokenId,
        uint256 loanDurationInDays
    ) public view returns (uint256) {
        Loan memory loan = loans[nftAddress][tokenId];
        uint256 interestAmount = (loan.loanAmount * loan.loanPercentage) / 100;
        uint256 repaymentAmount = loan.loanAmount + interestAmount;
        uint256 repaymentWithInterest = (repaymentAmount * loanDurationInDays) /
            365;
        return repaymentWithInterest;
    }

    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external override returns (bytes4) {
        return this.onERC721Received.selector;
    }

    /**
     * @dev Internal function to verify the signature.
     * @param hash - bytes of signature params.
     * @param signature.
     * @return address - signer address
     */
    function verifySignature(
        bytes32 hash,
        bytes calldata signature
    ) internal pure returns (address) {
        return ECDSAUpgradeable.recover(hash, signature);
    }

    /**
     * @dev Internal function to get order hash.
     *
     * Requirements:
     * - @param loan - object of an order.
     *
     * @return bytes32 - hash value.
     */
    function genOrderHash(Loan memory loan) internal pure returns (bytes32) {
        return
            keccak256(
                abi.encode(
                    loan.borrower,
                    loan.lender,
                    loan.nftAddress,
                    loan.tokenId,
                    loan.startTime,
                    loan.duration,
                    loan.loanContract,
                    loan.loanAmount,
                    loan.loanPercentage,
                    loan.active,
                    loan.nonce
                )
            );
    }

    function getDurationInDays(address nftAddress, uint256 tokenId) public view returns (uint256) {
        Loan storage loan = loans[nftAddress][tokenId];
        uint256 secondsTraveled = block.timestamp - loan.startTime;
        uint256 daysTraveled = secondsTraveled / 1 days;

        return daysTraveled;
    }

    function repayLoan(address nftAddress, uint256 tokenId) external {
        Loan storage loan = loans[nftAddress][tokenId];
        require(loan.active, "Loan is not active");
        require(
            loan.borrower == msg.sender,
            "Only borrower can repay the loan"
        );
        uint256 durationInDays = getDurationInDays(nftAddress, tokenId);

        uint256 repaymentWithInterest = calculateRepaymentWithInterest(
            nftAddress,
            tokenId,
            durationInDays
        );

        IERC20Upgradeable token = IERC20Upgradeable(loan.loanContract);
        token.transferFrom(msg.sender, address(this), repaymentWithInterest);

        loan.active = false;

        emit LoanRepaid(loan.borrower, loan.lender, tokenId);
    }

    function withdrawNFT(
        address tokenContract,
        uint256 tokenId
    ) external whenNotPaused nonReentrant {
        Loan storage loan = loans[tokenContract][tokenId];

        require(loan.active, "Loan is not active");
        require(
            loan.lender == msg.sender,
            "Only lender can withdraw the NFT"
        );

        IERC721Upgradeable token = IERC721Upgradeable(tokenContract);
        token.safeTransferFrom(address(this), loan.lender, tokenId);

        loan.active = false;

        emit NFTWithdrawn(loan.lender, tokenId);
    }
}

