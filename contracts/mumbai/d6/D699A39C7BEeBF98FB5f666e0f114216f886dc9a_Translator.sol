import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

contract Translator is SBTBase, Ownable, ITranslator {
    error PermissionsError();
    error AlreadyHold();

    using Counters for Counters.Counter;
    uint private _tokenSupply;
    Counters.Counter private tokenIdCounter;

    address public metadataAddr;
    mapping(address => bool) public signers;
    mapping(address => uint256) public override translatedCount;

    event Donation(address user, uint value);
    event SetSigner(address signers, bool enabled);
    event Publish(address to);
    event Burn(address to);

    constructor() SBTBase("Upchain Translator", "UTR") {
        signers[msg.sender] = true;
    }

    function setMetadataContract(address _meta) external onlyOwner {
        require(_meta != address(0), "zero address");
        metadataAddr = _meta;
    }

    function setSigner(address _signer, bool enabled) external onlyOwner {
        signers[_signer] = enabled;
        emit SetSigner(_signer, enabled);
    }

    function tokenURI(
        uint256 tokenId
    ) public view virtual override returns (string memory) {
        return IMetadata(metadataAddr).tokenURI(tokenId);
    }

    function publicTranslation(address to) external override {
        if (!signers[msg.sender]) revert PermissionsError();

        if (balanceOf(to) == 0) {
            _createIdentity(to);
        }
        translatedCount[to]++;

        emit Publish(to);
    }

    function burnTranslation(address to) external override {
        if (!signers[msg.sender]) revert PermissionsError();

        if (translatedCount[to] == 0) {
            return;
        }
        translatedCount[to]--;
        emit Burn(to);
    }

    function _createIdentity(address to) internal {
        _tokenSupply += 1;
        tokenIdCounter.increment();
        _mint(to, tokenIdCounter.current());
    }

    function tokenSupply() public view returns (uint256) {
        return _tokenSupply;
    }

    function ownerOf(
        uint256 tokenId
    ) public view override(SBTBase, ITranslator) returns (address) {
        return SBTBase.ownerOf(tokenId);
    }
}