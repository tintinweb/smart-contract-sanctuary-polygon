error WalletFacet__isNotOwner();
error WalletFacet__isNotCompanyMember(address addr);
error WalletFacet__InvalidTokenAddress();
error WalletFacet__InsufficientBalance(uint balance);
error WalletFacet__IsNotTrustForwarder();

contract WalletFacet is ERC2771Context{	// NOTE : THIS CONTRACT IS NOT A FACET OF THE DIAMOND !
	address factoryAddress;
	address payable public owner;
	address payable [] public allowedCompanyMember;
	constructor(address payable _owner, address forwarder) ERC2771Context(forwarder) {
		owner = _owner;
		factoryAddress=msg.sender;
		allowedCompanyMember.push(_owner);
	}

	modifier isOwner() {
		if (msg.sender != owner) revert WalletFacet__isNotOwner();
		_;
	}

	function tempForTest(uint index) external view returns (address payable){
		return allowedCompanyMember[index];
	}

	modifier isCompanyMember(address addr) {
    bool isMember = false;
    uint i = 0;
    do {
        if (allowedCompanyMember[i] == addr) {
            isMember = true;
            break;
        }
        i++;
    } while (i < allowedCompanyMember.length);
    
    if (!isMember) {
        revert WalletFacet__isNotCompanyMember(addr);
    }
    _;
	}
	modifier isValidERC20(address _token) {
		if (_token == address(0)) revert WalletFacet__InvalidTokenAddress();
		_;
	}

	function addCompanyMember(address payable _member) external isOwner {
		allowedCompanyMember.push(_member);
		IWalletFactoryFacet(factoryAddress).addWalletToMapping(_member);
	}
	
	function send (address _token, address payable _to, uint _amount) external isCompanyMember(msg.sender) {
		ERC20Facet token = ERC20Facet(_token);
		token.transfer(_to,_amount);
	}

	function withdrawERC20(address _token, uint _amount) external isCompanyMember(msg.sender) isValidERC20(_token) {
		ERC20Facet token = ERC20Facet(_token);
		token.transfer(msg.sender, _amount);
	}

	function getETHBalance() external view returns (uint) {
		return address(this).balance;
	}

	function getERC20Balance(address _token) external view isValidERC20(_token) returns (uint) {
		ERC20Facet token = ERC20Facet(_token);
		return token.balanceOf(address(this));
	}

	function _burn(address _token, uint _amount) external isCompanyMember(_msgSender()) isValidERC20(_token) returns (bool) {
		if(!isTrustedForwarder(msg.sender)) revert WalletFacet__IsNotTrustForwarder();
		ERC20Facet token = ERC20Facet(_token);
		return token.burn(_msgSender(),_amount);
	}

}

