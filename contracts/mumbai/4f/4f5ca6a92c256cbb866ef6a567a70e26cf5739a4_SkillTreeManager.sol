import "@openzeppelin/contracts-upgradeable/token/ERC1155/IERC1155Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlEnumerableUpgradeable.sol";
import "./utils/Roles.sol";
import "./IUniversusSkillTreeNFT.sol";

interface IERC1155BurnableUpgradeable is IERC1155Upgradeable {
    function burn(
        address account,
        uint256 id,
        uint256 value
    ) external;

    function burnBatch(
        address account,
        uint256[] memory ids,
        uint256[] memory values
    ) external;
}

contract SkillTreeManager is
    Initializable,
    AccessControlEnumerableUpgradeable,
    Roles
{
    uint64 public initialPointsPrice;
    uint64 public progressionFactor;
    IUniversusSkillTreeNFT public nft;
    IERC1155BurnableUpgradeable public resources;
    // token id => skill id => level
    mapping(uint256 => Points) public tokenPoints;
    // rarity name => max level
    mapping(string => uint8) public rarityMaxLevel;

    uint256[] public costByRarity;

    struct Skill {
        uint8 id;
        uint8 level;
        string class;
        string abilityType;
        string name;
    }

    struct Upgrade {
        uint8 id;
        uint256 points;
    }

    struct Points {
        uint256 balance;
        uint256 spent;
        uint8 upgradesMade;
    }

    struct MaxLevel {
        string rarity;
        uint8 maxLevel;
    }

    event Upgraded(
        uint256 indexed tokenId,
        address indexed owner,
        uint256 pointsSpent,
        uint8 startingLevel,
        uint8 endingLevel,
        uint8 skillId
    );

    error InvalidResourceId(uint256 _resourceId);

    modifier senderIsOwner(uint256 _tokenId) {
        require(nft.exists(_tokenId), "SkillTreeManager: no such token");
        require(nft.ownerOf(_tokenId) == msg.sender, "SkillTreeManager: sender is not token owner");
        _;
    }

    function initialize(
      IUniversusSkillTreeNFT _nft,
      IERC1155BurnableUpgradeable _resources,
      uint64 _progressionFactor,
      MaxLevel[] memory _maxLevels,
      address _operator
    )
        initializer
        public
    {
        __AccessControlEnumerable_init();

        require(address(_nft) != address(0), "Invalid nft address");
        require(_progressionFactor > 0, "Invalid progression factor");
        require(_maxLevels.length > 0, "Invalid max levels list");
        require(_operator != address(0), "Invalid operator address");

        for (uint8 i; i < _maxLevels.length; i++) {
            rarityMaxLevel[_maxLevels[i].rarity] = _maxLevels[i].maxLevel;
        }

        initialPointsPrice = 10;
        progressionFactor = _progressionFactor;

        nft = _nft;
        resources = _resources;

        costByRarity = [
            5000,
            2500,
            1000,
            500,
            200,
            100
        ];

        _grantRole(DEFAULT_ADMIN_ROLE, _operator);
    }

    function buyPoints(
        uint256 _tokenId,
        uint256[] calldata _resourceIds,
        uint256[] calldata _amounts
    )
        external
        senderIsOwner(_tokenId)
    {
        require(_resourceIds.length == _amounts.length, "SkillTreeManager: array lengths mismatch");

        (uint256[] memory exactCostPerResource, uint256 totalPoints) = calculatePointsFromResources(_resourceIds, _amounts);

        resources.burnBatch(msg.sender, _resourceIds, exactCostPerResource);

        _addPoints(_tokenId, totalPoints);
    }

    function addPoints(
        uint256 _tokenId,
        uint64 _amount
    )
        public
        onlyRole(OPERATOR_ROLE)
    {
        require(nft.exists(_tokenId), "SkillTreeManager: no such token");
        require(_amount > 0, "SkillTreeManager: points cannot be zero");

        _addPoints(_tokenId, _amount);
    }

    function _addPoints(
        uint256 _tokenId,
        uint256 _amount
    )
        internal
    {
        tokenPoints[_tokenId].balance += _amount;
    }

    function resetPoints(
        uint256 _tokenId
    )
        public
        onlyRole(OPERATOR_ROLE)
    {
        require(nft.exists(_tokenId), "SkillTreeManager: no such token");

        tokenPoints[_tokenId].balance += tokenPoints[_tokenId].spent;
        tokenPoints[_tokenId].spent = 0;
        tokenPoints[_tokenId].upgradesMade = 0;

        for (uint8 i = 0; i < nft.skillTreeSize(); i++) {
            IUniversusSkillTreeNFT.Skill memory skill = nft.getSkill(i+1);

            if (nft.getTokenSkill(_tokenId, skill.id) != 0) nft.setTokenSkill(_tokenId, skill.id, 0);
        }
    }

    function getPoints(
        uint256 _tokenId
    )
        external
        view
        returns (Points memory)
    {
        return tokenPoints[_tokenId];
    }

    function updateFactor(
        uint64 _factor
    )
        public
        onlyRole(ADMIN_ROLE)
    {
        require(_factor > 0, "SkillTreeManager: progression factor cannot be zero");

        progressionFactor = _factor;
    }

    function upgrade(
        uint256 _tokenId,
        Upgrade[] calldata _upgrades
    )
        external
        senderIsOwner(_tokenId)
    {
        string memory rarity = nft.getAttribute(_tokenId, "rarity");

        for (uint8 i = 0; i < _upgrades.length; i++) {
            uint8 skillId = _upgrades[i].id;
            // get required points for next level
            (
                uint8 endingLevel,
                uint256 pointsToSpend
            ) = calculateNextLevel(_tokenId, _upgrades[i]);

            require(
                endingLevel <= rarityMaxLevel[rarity],
                "SkillTreeManager: cannot upgrade beyond item max level"
            );

            uint8 startingLevel = nft.getTokenSkill(_tokenId, skillId);

            _spendPoints(_tokenId, pointsToSpend, endingLevel - startingLevel);

            emit Upgraded({
                tokenId: _tokenId,
                owner: msg.sender,
                pointsSpent: pointsToSpend,
                startingLevel: startingLevel,
                endingLevel: endingLevel,
                skillId: skillId
            });

            // assign level to skill
            nft.setTokenSkill(_tokenId, skillId, endingLevel);
        }
    }

    function _spendPoints(
        uint256 _tokenId,
        uint256 _amount,
        uint8 _levelsAdded
    )
        internal
    {
        require(
            tokenPoints[_tokenId].balance >= _amount,
            "SkillTreeManager: insufficient points"
        );

        tokenPoints[_tokenId].spent += _amount;
        tokenPoints[_tokenId].balance -= _amount;
        tokenPoints[_tokenId].upgradesMade += _levelsAdded;
    }

    function calculatePointsFromResources(
        uint256[] calldata _resourceIds,
        uint256[] calldata _amounts
    )
        public
        view
        returns (uint256[] memory, uint256)
    {

        uint256[] memory exactCostPerResource = new uint256[](_resourceIds.length);
        uint256 totalPoints;

        for (uint256 i; i< _resourceIds.length; ++i) {
            uint256 rarityIndex = _resourceIds[i] % 100;
            if (rarityIndex > 5) revert InvalidResourceId(_resourceIds[i]);

            uint256 points = _amounts[i] / costByRarity[rarityIndex];

            exactCostPerResource[i] = costByRarity[rarityIndex] * points;
            totalPoints += points;
        }

        return (exactCostPerResource, totalPoints);
    }

    function calculateNextLevel(
        uint256 _tokenId,
        Upgrade memory _upgrade
    )
        public
        view
        returns (uint8 level, uint256 pointsToSpend)
    {
        // skill level counter, starts at current level
        level =  nft.getTokenSkill(_tokenId, _upgrade.id);
        // upgrades counter
        uint8 upgradesMade = tokenPoints[_tokenId].upgradesMade;
        // amount of points to be spent upgrading this skill
        uint256 purchasingPoints = _upgrade.points;

        while (purchasingPoints >= _upgradeCost(upgradesMade)) {
            purchasingPoints -= _upgradeCost(upgradesMade);
            upgradesMade++;
            level++;
        }

        pointsToSpend = _upgrade.points - purchasingPoints;
    }

    function upgradeCost(
        uint8 _currentLevel
    )
        external
        view
        returns (uint256)
    {
        return _upgradeCost(_currentLevel);
    }

    function _upgradeCost(
        uint8 _currentLevel
    )
        internal
        view
        returns (uint256)
    {
        if (_currentLevel == 0) return initialPointsPrice;

        uint256 cost = initialPointsPrice;

        for (uint8 i = 1; i <= _currentLevel; i++) {
            cost = (cost * progressionFactor) / 100;
        }

        return cost;
    }

}

