    function deposit(uint256 _pid, uint256 _amount) public notPause {
        PoolInfo storage pool = poolInfo[_pid];
        require(inviteMapping[msg.sender]!= address(0),"The user is not invited");
        depositToken(_pid, _amount, msg.sender);
