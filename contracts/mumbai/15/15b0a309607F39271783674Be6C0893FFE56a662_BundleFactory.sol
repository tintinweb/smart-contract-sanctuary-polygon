/**
 * @title BundleFactory
 * @dev Swarm
 */
contract BundleFactory {
    mapping(address => address) public myBundles;

    /**
     * @dev This will deploy a new Bundle SC.
     * @param  kyaJsonUri string the url to the traits of the bundle.
     * @param  _bundleCurrencyToken address the address of the erc20 smart contract for price determination.
     * @param  info string[] the data of the bundle [name, description].
     * @param   _vetos address[], list of addresses that will be able to veto the auction,
     * @param _auctionType uint8 ,
     * @param  _initialMintedAmount uint256,
     * @return  bundleAddress address The newly created Bundle Contract Address
     */
    function createBundle(
        string memory kyaJsonUri,
        IERC20Metadata _bundleCurrencyToken,
        string[] memory info,
        address[] memory _vetos,
        uint8 _auctionType,
        uint256 _initialMintedAmount
    ) public returns (address bundleAddress) {
        NftBundle newBundle = new NftBundle(
            kyaJsonUri,
            _bundleCurrencyToken,
            info,
            _vetos,
            _auctionType,
            _initialMintedAmount
        );
        myBundles[msg.sender] = address(newBundle);
        return address(newBundle);
    }

