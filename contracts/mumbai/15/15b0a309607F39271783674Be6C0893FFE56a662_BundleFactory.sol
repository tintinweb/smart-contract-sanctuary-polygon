/// @dev Explain to a developer any extra details

/**
 * This contract will generate the Auction smart contract runs the Auction.
 * Bundle has Many Auctions and One Auction has one Escorw
 * Service.
 */
contract NftBundle is ERC721Holder, Ownable, BundleToken, BundleStorage, INFTBundle {
    uint256 public nftId;
    mapping(uint256 => NFTModel) public nfts;

    modifier onlyAuction() {
        require(msg.sender == auctionAddress, "NftBundle: only auction");
        _;
    }

    constructor(
        string memory kyaJsonUri,
        IERC20Metadata _bundleSalesToken,
        string[] memory info,
        address[] memory _vetos,
        uint8 _auctionType,
        uint256 initialMintedAmount_
    ) {
        bundleKYA = kyaJsonUri;
        bundleCurrency = BundleCurrency({
            name: _bundleSalesToken.name(),
            token: _bundleSalesToken,
            symbol: _bundleSalesToken.symbol()
        });
        bundleInfo = BundleInfo(info[0], info[1]);
        _initialMintedAmount = initialMintedAmount_;
        vetos = _vetos;
        require(
            _auctionType <= uint8(PriceDeterminationOptions.CANDLE_AUCTION),
            "NftBundle: auction type out of range"
        );
        priceDetermination = PriceDeterminationOptions(_auctionType);
    }

    function liquidateCurrency(uint256 _amount) public {
        getBundleCurrencyAddress().transferFrom(address(this), msg.sender, _amount);
        uint256 amountToBurn = calculateBurnableSBT(_amount);
        _transfer(msg.sender, address(this), amountToBurn);
        _burn(address(this), amountToBurn);
    }

    function transferBundleShare(address recipient, uint256 amount) public {
        require(msg.sender == auctionAddress, "NftBundle: only auction");
        _transfer(address(this), recipient, amount);
    }

    function updateBundleAsset(
        uint256 bookAmount,
        uint256 _nftId,
        IERC721 _nft
    ) public onlyAuction returns (uint256 nftsNewId) {
        nftId++;
        uint256 currentID = nftId;
        nfts[currentID] = NFTModel({ nftAddress: _nft, bookPrice: bookAmount, nftId: _nftId });
        return currentID;
    }

    function setPrice(uint256 price) external returns (bool) {
        return _setPrice(price);
    }

    function mintBundleShare(uint256 amount) external {
        require(msg.sender == auctionAddress, "NftBundle: only auction");
        _mint(address(this), amount);
    }

    function bundleValue() public view returns (uint256 value) {
        uint256 currentValue = _sbtPrice * totalSupply();
        if (currentValue == 0) {
            value = nfts[1].bookPrice;
        }
        value = currentValue;
    }

    function getBundleCurrencyAddress() public view returns (IERC20 token) {
        token = bundleCurrency.token;
    }

    function bundleIsPublic() public view returns (bool status) {
        if (isOpen == Visibility.Public) {
            status = true;
        }
    }

    function canBidBundle() public view returns (bool status) {
        if (priceDetermination != PriceDeterminationOptions.NO_AUCTION) {
            status = true;
        }
    }

    function calculateBurnableSBT(uint256 _amountOfCurrency) public view returns (uint256 burnAmount) {
        burnAmount = (_amountOfCurrency / _sbtPrice);
    }

    function getBundleNFT(
        uint256 _nftId
    ) public view returns (IERC721 bundleNFTAddress, uint256 bundleBookPrice, uint256 bundleNftId) {
        bundleNFTAddress = nfts[_nftId].nftAddress;
        bundleBookPrice = nfts[_nftId].bookPrice;
        bundleNftId = nfts[_nftId].nftId;
    }

    function isVeto(address _address) public view returns (bool) {
        return _isVeto(_address);
    }

    function vetoList() public view onlyOwner returns (address[] memory allVeto) {
        allVeto = vetos;
    }

    function initialMintedAmount() external view returns (uint256 price) {
        price = _initialMintedAmount;
    }

    function sbtPrice() external view returns (uint256 price) {
        price = _sbtPrice;
    }
}

