pragma solidity ^0.8.19;

import "@openzeppelin/contracts/access/Ownable.sol";

import "../structures/NftBundleStructures.sol";
import "../enums/NftBundleEnums.sol";

contract BundleStorage is Ownable {
    string public bundleKYA;

    BundleCurrency public bundleCurrency;
    BundleInfo public bundleInfo;
    PriceDeterminationOptions public priceDetermination;

    Visibility public isOpen;

    uint256 internal _initialMintedAmount;
    uint256 internal _sbtPrice;
    address[] internal vetos;
    address internal auctionAddress;

    function setBundlePublic() public onlyOwner returns (bool) {
        isOpen = Visibility.Public;
        return true;
    }

    function _setPrice(uint256 _newPrice) internal returns (bool) {
        _sbtPrice = _newPrice;
        return true;
    }

    function setAuctionAddress(address _auctionAddress) public onlyOwner returns (bool) {
        auctionAddress = _auctionAddress;
        return true;
    }

    function addVetos(address vetoAddress) public onlyOwner returns (bool success) {
        require(!_isVeto(vetoAddress), "BundleStorage: veto already exists");
        require(isOpen == Visibility.Private, "BundleStorage: bundle is already public");
        vetos.push(vetoAddress);
        return true;
    }

    function removeVetos(address vetoAddress) public onlyOwner returns (address[] memory filter) {
        for (uint256 i = 0; i < vetos.length; i++) {
            address account = vetos[i];
            if (account != vetoAddress) {
                uint256 index = i;
                for (uint256 d = index; d < vetos.length - 1; d++) {
                    vetos[d] = vetos[d + 1];
                }
                vetos.pop();
                return vetos;
            }
        }
        return vetos;
    }

    function _isVeto(address _address) internal view returns (bool) {
        for (uint256 i = 0; i < vetos.length; i++) {
            address account = vetos[i];
            if (account == _address) {
                return true;
            }
        }
        return false;
    }
}

