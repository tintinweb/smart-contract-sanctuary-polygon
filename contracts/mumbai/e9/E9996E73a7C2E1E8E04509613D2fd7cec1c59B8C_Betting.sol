     * The user also needs to place a bet.
     * @param eventId id of the event on which the dispute is being made
     * @param minAllocation minimum amount of entry into the dispute
     * @param maxAllocation the maximum amount of entry into the dispute
     * @param pool the index of the pool on which the bet is placed
     * @param whiteList list of users
     */
    function createPrivateDisputeEth(
        bytes32 eventId,
        uint256 minAllocation,
        uint256 maxAllocation,
        uint256 pool,
        address[] memory whiteList
    ) external payable nonReentrant whenNotPaused {
        bytes32 disputeId = _createDispute(
            DisputeType.Private,
            eventId,
            ETH,
            minAllocation,
            maxAllocation
        );

        _fillWhiteList(disputeId, whiteList);

        _joinToDispute(disputeId, msg.value, pool);
    }

    /**
     * @notice Creating a private dispute together with an event.
     * Only users included in the white list can take part in the dispute
     * The user also needs to place a bet.
     * @param eventId id of the event on which the dispute is being made
     * @param token the currency used to participate in the dispute
     * @param minAllocation minimum amount of entry into the dispute
     * @param maxAllocation the maximum amount of entry into the dispute
     * @param pool the index of the pool on which the bet is placed
     * @param whiteList list of users
     */
    function createPrivateDispute(
        bytes32 eventId,
        address token,
        uint256 amount,
        uint256 minAllocation,
        uint256 maxAllocation,
        uint256 pool,
        address[] memory whiteList
    ) external whenNotPaused {
        bytes32 disputeId = _createDispute(
            DisputeType.Private,
            eventId,
            token,
            minAllocation,
            maxAllocation
        );

        _fillWhiteList(disputeId, whiteList);

        IERC20(token).safeTransferFrom(msg.sender, address(this), amount);

        _joinToDispute(disputeId, amount, pool);
    }

    // endregion - Private Dispute

    /**
     * @notice take part in a dispute.
     * ETH the token used to participate in the dispute.
     * @param disputeId dispute ID
     * @param pool the index of the pool on which the bet is placed
     */
    function joinToDisputeEth(
        bytes32 disputeId,
        uint256 pool
    ) external payable nonReentrant whenNotPaused {
        _joinToDispute(disputeId, msg.value, pool);
    }

    /**
     * @notice take part in a dispute.
     * @param disputeId dispute ID
     * @param amount bid amount
     * @param pool the index of the pool on which the bet is placed
     */
    function joinToDispute(
        bytes32 disputeId,
        uint256 amount,
        uint256 pool
    ) external whenNotPaused {
        IERC20(disputes[disputeId].token).safeTransferFrom(
            msg.sender,
            address(this),
            amount
        );
        _joinToDispute(disputeId, amount, pool);
    }

    /**
     * @notice to return the funds in case of a failed dispute.
     * The funds are returned if the event did not occur or no one made the opposite bet in the dispute
     * @param disputeId dispute ID
     */
    function refund(bytes32 disputeId) external whenNotPaused {
        Dispute storage dispute = disputes[disputeId];
        UserData storage userData = usersData[msg.sender][disputeId];

        if (
            (dispute.totalAmount !=
                poolsAmount[disputeId][userData.indexPool] ||
                events[dispute.eventId].finishResult != EVENT_CANCELED) &&
            userData.userAmount != 0
        ) {
            revert("Refund is not possible");
        }

        uint256 tax = _calculateCommission(userData.userAmount);
        IERC20(disputes[disputeId].token).safeTransfer(
            msg.sender,
            userData.userAmount - tax
        );
        IERC20(disputes[disputeId].token).safeTransferFrom(
            _treasure,
            msg.sender,
            tax
        );

        emit Refund(msg.sender, disputeId, userData.userAmount);

        userData.userAmount = 0;
    }

    /**
     * @notice collect the winnings, if the selected pool wins
     */
    function claim(bytes32 disputeId) external whenNotPaused {
        require(disputes[disputeId].eventId > 0, "Dispute does not exist");
        require(
            events[disputes[disputeId].eventId].status == Status.Accepted,
            "Dispute unavailable"
        );
        require(
            usersData[msg.sender][disputeId].indexPool ==
                events[disputes[disputeId].eventId].finishResult,
            "Can't get rewarded"
        );
        require(
            usersData[msg.sender][disputeId].reward == 0,
            "Can't get rewarded"
        );

        Dispute memory dispute = disputes[disputeId];
        UserData storage userData = usersData[msg.sender][disputeId];

        uint256 winnerAmount = _calculateReward(
            disputeId,
            userData.userAmount,
            userData.indexPool
        );
        userData.reward = winnerAmount;

        if (dispute.token == ETH) {
            payable(msg.sender).sendValue(winnerAmount);
        } else {
            IERC20(dispute.token).safeTransfer(msg.sender, winnerAmount);
        }

        emit PaymentReleased(
            disputeId,
            msg.sender,
            dispute.token,
            winnerAmount
        );
    }

    /**
     * @notice adding users to a whitelist in a private dispute.
     *  Only the one who created the dispute can call the method
     * @param disputeId disputeId
     * @param whiteList users list
     */
    function addUsersInWhiteList(
        bytes32 disputeId,
        address[] memory whiteList
    ) external whenNotPaused {
        Dispute storage dispute = disputes[disputeId];
        require(dispute.eventId > 0, "Dispute does not exist");
        require(dispute.owner == msg.sender, "Only owner");
        require(
            dispute.disputeType == DisputeType.Private,
            "Not a private dispute"
        );
        require(
            events[dispute.eventId].status == Status.Pending,
            "Dispute unavailable"
        );
        require(block.timestamp <= dispute.endOfAcceptingBets, "Time expired");

        for (uint i = 0; i < whiteList.length; i = _unsafe_inc(i)) {
            whiteListUsers[whiteList[i]][disputeId] = true;
        }

        emit ChangeWhiteList(disputeId, whiteList);
    }

    /**
     * @notice find out the amount of remuneration for the dispute
     * @param disputeId dispute ID
     * @param user user address
     */
    function getPossibleReward(
        bytes32 disputeId,
        address user
    ) external view returns (uint256) {
        UserData memory userData = usersData[user][disputeId];

        if (userData.userAmount == 0 || userData.reward != 0) {
            return 0;
        }

        uint256 possibleReward = _calculateReward(
            disputeId,
            userData.userAmount,
            userData.indexPool
        );

        return possibleReward;
    }

    /**
     * @dev Sending the collected commission to the treasure contract
     */
    function _transferTax(bytes32 eventId) internal {
        uint256 len = _taxes[eventId].length();
        for (uint i = 0; i < len; i++) {
            (address token, uint256 tax) = _taxes[eventId].at(i);
            if (tax != 0) {
                if (token == ETH) _treasure.sendValue(tax);
                else IERC20(token).safeTransfer(_treasure, tax);
            }
            emit ReplenishmentTreasure(token, tax);
        }
    }

    /**
     * @dev decrypts signatures and checks the result for the role of validator
     * @param newEvent event data for which the signature is verified
     */
    function _verify(NewEvent memory newEvent) internal view {
        require(!usedSignatures[newEvent.signature], "Unavailable signature");
        bytes32 hash = keccak256(
            abi.encodePacked(
                // newEvent.endTimestamp,
                newEvent.lengthOfResults,
                newEvent.eventId
            )
        );
        bytes32 message = ECDSA.toEthSignedMessageHash(hash);
        address recovered = ECDSA.recover(message, newEvent.signature);
        require(
            hasRole(VALIDATOR_ROLE, recovered),
            "Signature verification error"
        );
    }

    /**
     * @dev creating an event, saving it to the storage
     */
    function _createEvent(NewEvent memory newEvent) internal {
        _verify(newEvent);
        usedSignatures[newEvent.signature] = true;

        require(
            events[newEvent.eventId].status == Status.NotCreated,
            "Event unavailable"
        );

        Event storage eventData = events[newEvent.eventId];

        eventData.status = Status.Pending;
        eventData.lengthOfResults = newEvent.lengthOfResults;

        emit CreateEvent(newEvent);
    }

    /**
     * @dev adding users to a private dispute
     */
    function _fillWhiteList(
        bytes32 disputeId,
        address[] memory whiteList
    ) internal {
        whiteListUsers[msg.sender][disputeId] = true;
        for (uint i = 0; i < whiteList.length; i = _unsafe_inc(i)) {
            whiteListUsers[whiteList[i]][disputeId] = true;
        }

        emit DisputeWL(disputeId, whiteList);
    }

    /**
     * @dev creating a new event
     * @param disputeType dispute type private/public
     * @param eventId event Id
     * @param token the currency used to participate in the dispute
     * @param minAllocation minimum amount of entry into the dispute
     * @param maxAllocation the maximum amount of entry into the dispute
     */
    function _createDispute(
        DisputeType disputeType,
        bytes32 eventId,
        address token,
        uint256 minAllocation,
        uint256 maxAllocation
    ) internal returns (bytes32 disputeId) {
        require(tokensWL[token], "Token not available");
        require(
            minAllocation <= maxAllocation,
            "Min price greater than max price"
        );

        disputeId = keccak256(
            abi.encode(
                block.timestamp,
                msg.sender,
                eventId,
                token,
                minAllocation,
                maxAllocation
            )
        );
        require(disputes[disputeId].eventId == 0, "Dispute already exists");

        Dispute storage dispute = disputes[disputeId];

        dispute.disputeType = disputeType;
        dispute.eventId = eventId;
        dispute.owner = msg.sender;
        dispute.token = token;
        dispute.minAllocation = minAllocation;
        dispute.maxAllocation = maxAllocation;

        emit NewDispute(
            eventId,
            disputeId,
            disputeType,
            token,
            minAllocation,
            maxAllocation,
            msg.sender
        );
    }

    /**
     * @dev take part in a dispute.
     * @param disputeId dispute ID
     * @param amount bid amount
     * @param pool the index of the pool on which the bet is placed
     */
    function _joinToDispute(
        bytes32 disputeId,
        uint256 amount,
        uint256 pool
    ) internal {
        Dispute storage dispute = disputes[disputeId];
        require(dispute.eventId != 0, "Dispute does not exist");
        require(
            amount >= dispute.minAllocation && amount <= dispute.maxAllocation,
            "Amount does not match"
        );

        require(
            events[dispute.eventId].status == Status.Pending,
            "Dispute unavailable"
        );
        require(block.timestamp <= dispute.endOfAcceptingBets, "Time expired");
        require(
            pool < events[dispute.eventId].lengthOfResults,
            "Selected unknown pool of the dispute"
        );

        if (dispute.disputeType == DisputeType.Private) {
            require(
                whiteListUsers[msg.sender][disputeId],
                "Not in the whiteList"
            );
        }

        _takeFee(amount, dispute.token, dispute.eventId);

        UserData storage userData = usersData[msg.sender][disputeId];

        if (userData.userAmount > 0) {
            require(userData.indexPool == pool, "Pool does not match");
            require(
                userData.userAmount + amount <= dispute.maxAllocation,
                "Exceeding the maximum"
            );
        } else {
            userData.indexPool = pool;
        }

        userData.userAmount += amount;
        dispute.totalAmount += amount;
        poolsAmount[disputeId][pool] += amount;

        emit Join(disputeId, msg.sender, amount, pool);
    }

    /**
     * @dev Called when the user bets on a dispute.
     * Deducts a percentage of his rate as a commission
     * @param amount the amount from which the commission is taken
     * @param disputeToken the address of the token where the commission is charged
     * @param eventId a commission is charged for this event
     */
    function _takeFee(
        uint amount,
        address disputeToken,
        bytes32 eventId
    ) internal {
        uint256 tax = _calculateCommission(amount);
        (, uint256 oldBalance) = _taxes[eventId].tryGet(disputeToken);
        _taxes[eventId].set(disputeToken, oldBalance + tax);
    }

    /// @dev calculates the commission
    function _calculateCommission(
        uint256 amount
    ) internal view returns (uint256) {
        return amount.mulDiv(fee, 100 * 1e6);
    }

    /// @dev calculates the amount minus the commission
    function _calculateWithoutCommission(
        uint256 amount
    ) internal view returns (uint256) {
        return amount.mulDiv(100 * 1e6 - fee, 100 * 1e6);
    }

    /**
     * @dev calculates the amount of the reward
     * @param disputeId dispute ID
     * @param amount user bet
     * @param pool index winners pool
     */
    function _calculateReward(
        bytes32 disputeId,
        uint256 amount,
        uint256 pool
    ) internal view returns (uint256 amountReward) {
        uint256 totalWithoutFee = _calculateWithoutCommission(
            disputes[disputeId].totalAmount
        );
        return (totalWithoutFee * amount) / poolsAmount[disputeId][pool];
    }

    function _unsafe_inc(uint x) private pure returns (uint) {
        unchecked {
            return x + 1;
        }
    }
}