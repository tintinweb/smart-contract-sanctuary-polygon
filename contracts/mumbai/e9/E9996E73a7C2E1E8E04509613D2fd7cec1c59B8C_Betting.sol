pragma solidity 0.8.17;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableMap.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/utils/Address.sol";

contract Betting is AccessControl, ReentrancyGuard, Pausable {
    using EnumerableMap for EnumerableMap.AddressToUintMap;
    using SafeERC20 for IERC20;
    using Address for address payable;
    using Math for uint256;

    address public constant ETH = 0x0000000000000000000000000000000000001010;
    bytes32 public constant VALIDATOR_ROLE = keccak256("VALIDATOR_ROLE");
    bytes32 public constant FINISH_ADMIN_ROLE = keccak256("FINISH_ADMIN_ROLE");
    bytes32 public constant DISPUTE_ADMIN_ROLE =
        keccak256("DISPUTE_ADMIN_ROLE");

    uint8 EVENT_CANCELED = 1;

    uint256 public fee = 5 * 1e6; // fee 5%
    address payable _treasure; // address treasure contract

    enum DisputeType {
        Public,
        Private
    }

    enum Status {
        NotCreated,
        Pending,
        Accepted
    }
    /**
     * @dev Used to initialize a new event
     * @param signature these events are signed by the validator to verify the validity of the data
     * @param lengthOfResults the number of possible outcomes of the dispute
     * @param eventId id events in the database
     */
    struct NewEvent {
        bytes signature;
        uint16 lengthOfResults;
        bytes32 eventId;
    }

    /**
     * @dev used to store information about the event
     * @param status current state of the event
     * @param lengthOfResults the number of possible outcomes of the dispute
     * @param finishResult the result of the event is set by the validator after the end of the event
     */
    struct Event {
        Status status;
        uint16 lengthOfResults;
        uint16 finishResult;
    }

    /**
     * @dev used to store information about the dispute
     * @param disputeType event type public/private
     * @param owner the creator of the dispute
     * @param eventId event ID
     * @param token the currency used to participate in the dispute
     * @param totalAmount total amount of coins in dispute
     * @param minAllocation minimum amount of entry into the dispute
     * @param maxAllocation the maximum amount of entry into the dispute
     * @param endOfAcceptingBets end time for accepting bets
     */
    struct Dispute {
        DisputeType disputeType;
        address owner;
        bytes32 eventId;
        address token;
        uint256 totalAmount;
        uint256 minAllocation;
        uint256 maxAllocation;
        uint256 endOfAcceptingBets; // timestamp
    }

    /**
     * @dev used to store user information
     * @param reward accrued reward
     * @param userAmount bet
     * @param indexPool winning pool
     */
    struct UserData {
        uint256 reward;
        uint256 userAmount;
        uint256 indexPool;
    }
    /// @notice is there a token in the whitelist
    mapping(address => bool) public tokensWL;

    /// @notice get information about the event
    mapping(bytes32 => Event) public events;

    /// @notice get information about the dispute
    mapping(bytes32 => Dispute) public disputes;

    /**
     * @notice get the number of coins in the pool
     * return - amount of pool
     * @dev disputeId => poolId => amount
     */
    mapping(bytes32 => mapping(uint256 => uint256)) public poolsAmount;

    /**
     * @notice is there a user in the whitelist
     * return - user status true/false
     * @dev userAddress => disputeId => bool
     */
    mapping(address => mapping(bytes32 => bool)) public whiteListUsers;

    /**
     * @notice returns information about the user in the dispute
     * @dev userAddress => disputeId => UserData
     */
    mapping(address => mapping(bytes32 => UserData)) public usersData;

    /**
     * @notice returns whether the signature was used or not
     * return - if true the signature was used
     * @dev signature => status
     */
    mapping(bytes => bool) public usedSignatures;

    /**
     * @notice returns the collected commission
     * @dev eventId => tokenAddress => balance
     */
    mapping(bytes32 => EnumerableMap.AddressToUintMap) _taxes; // eventId => tokenAddress => balance

    // region - Events
    event NewDispute(
        bytes32 indexed eventId,
        bytes32 indexed disputeId,
        DisputeType disputeType,
        address token,
        uint256 minAllocation,
        uint256 maxAllocation,
        address creator
    );
    event Join(
        bytes32 indexed disputeId,
        address indexed account,
        uint256 amount,
        uint256 pool
    );
    event FinishEvent(
        bytes32 indexed eventId,
        uint256 result,
        string verificationLink
    );
    event PaymentReleased(
        bytes32 indexed disputeId,
        address winner,
        address token,
        uint256 amount
    );
    event Refund(
        address indexed account,
        bytes32 disputeId,
        uint256 userAmount
    );
    event CreateEvent(NewEvent newEvent);
    event DisputeWL(bytes32 indexed disputeId, address[] whiteList);
    event ChangeWhiteList(bytes32 indexed disputeId, address[] whiteList);
    event ChangeTimestamp(bytes32 indexed uid, uint timestamp);
    event ChangeCommission(uint256 commission);
    event ChangeTreasureAddress(address commission);
    event AddToken(address indexed token);
    event RemoveToken(address indexed token);
    event ReplenishmentTreasure(address indexed token, uint256 tax);

    // endregion - Events

    /**
     * @param adminAddresses admin list
     * @param tokens addresses for the white list
     */
    constructor(address[] memory adminAddresses, address[] memory tokens) {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(VALIDATOR_ROLE, adminAddresses[0]);
        _setupRole(FINISH_ADMIN_ROLE, adminAddresses[1]);
        _setupRole(DISPUTE_ADMIN_ROLE, adminAddresses[2]);

        for (uint i = 0; i < tokens.length; i = _unsafe_inc(i)) {
            tokensWL[tokens[i]] = true;
        }
    }

    // region - AdminPanel

    /**
     * @notice set a commission for participation.
     * Only a user with the DEFAULT_ADMIN_ROLE role can call the function
     * @dev the commission is set with an accuracy of 1e6.
     * Example 5% = 5000000.
     */
    function setCommission(
        uint256 newFee
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(newFee < 100 * 1e6, "Too much commission");
        fee = newFee;

        emit ChangeCommission(newFee);
    }

    /**
     * @notice specify the address to which the entire commission will be transferred
     * @dev Only a user with the DEFAULT_ADMIN_ROLE role can call the function
     */
    function setTreasureAddress(
        address payable treasure
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(treasure != address(0), "Invalid Address");
        _treasure = treasure;

        emit ChangeTreasureAddress(treasure);
    }

    /**
     * @notice blocks function calls
     * @dev Only a user with the DEFAULT_ADMIN_ROLE role can call the function
     */
    function pause() external onlyRole(DEFAULT_ADMIN_ROLE) whenNotPaused {
        _pause();
    }

    /**
     * @notice unblocks function calls
     * @dev Only a user with the DEFAULT_ADMIN_ROLE role can call the function
     */
    function unpause() external onlyRole(DEFAULT_ADMIN_ROLE) whenPaused {
        _unpause();
    }

    /**
     * @notice add a token to a whitelist.
     * Only currencies added to the whitelist can be used to participate in disputes
     * @dev Only a user with the DEFAULT_ADMIN_ROLE role can call the function
     */
    function addToken(address token) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(tokensWL[token] == false, "Address added");
        tokensWL[token] = true;

        emit AddToken(token);
    }

    /**
     * @notice remove a token from a whitelist
     * @dev Only a user with the DEFAULT_ADMIN_ROLE role can call the function
     */
    function removeToken(address token) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(tokensWL[token] == true, "Address deleted");
        tokensWL[token] = false;

        emit RemoveToken(token);
    }

    /**
     * @notice Creating a public dispute together with an event.
     * Called when the event has not been previously created.
     * @dev Only a user with the DISPUTE_ADMIN_ROLE role can call the function
     * @param token  the currency used to participate in the dispute
     * @param minAllocation minimum amount of entry into the dispute
     * @param maxAllocation the maximum amount of entry into the dispute
     * @param newEvent data about a new event
     */
    function createEventPublicDisputeAdmin(
        address token,
        uint256 minAllocation,
        uint256 maxAllocation,
        NewEvent memory newEvent
    ) external onlyRole(DISPUTE_ADMIN_ROLE) {
        _createEvent(newEvent);

        _createDispute(
            DisputeType.Public,
            newEvent.eventId,
            token,
            minAllocation,
            maxAllocation
        );
    }

    /**
     * @notice Creating a public dispute. Сalled when the event is created.
     * @dev Only a user with the DISPUTE_ADMIN_ROLE role can call the function
     * @param eventId id of the event on which the dispute is being made
     * @param token  the currency used to participate in the dispute
     * @param minAllocation minimum amount of entry into the dispute
     * @param maxAllocation the maximum amount of entry into the dispute
     */
    function createPublicDisputeAdmin(
        bytes32 eventId,
        address token,
        uint256 minAllocation,
        uint256 maxAllocation
    ) external onlyRole(DISPUTE_ADMIN_ROLE) {
        require(events[eventId].status == Status.Pending, "Event unavailable");

        _createDispute(
            DisputeType.Public,
            eventId,
            token,
            minAllocation,
            maxAllocation
        );
    }

    /**
     * @notice at the end of the event, sets the result.
     * Also, all the collected commission for the current event is sent to the treasure
     * @dev Only a user with the FINISH_ADMIN_ROLE role can call the function
     * @param eventId event ID
     * @param result index of the winning pool
     * @param verificationLink link to the result
     */
    function finishEvent(
        bytes32 eventId,
        uint16 result,
        string calldata verificationLink
    ) external onlyRole(FINISH_ADMIN_ROLE) {
        require(events[eventId].status == Status.Pending, "Event unavailable");
        require(
            result < events[eventId].lengthOfResults,
            "Selected unknown pool of the dispute"
        );

        events[eventId].status = Status.Accepted;
        events[eventId].finishResult = result;

        _transferTax(eventId);

        emit FinishEvent(eventId, result, verificationLink);
    }

