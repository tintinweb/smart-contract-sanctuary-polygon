import "openzeppelin-contracts/contracts/utils/math/SafeMath.sol";

import "./interfaces/IERC20.sol";

import "./protocols/balancer/IBalancerVault.sol";
import "./protocols/balancer/IFlashLoanRecipient.sol";

contract StrategyLegoV1 is IFlashLoanRecipientBalancer {
    using SafeMath for uint256;

    IBalancerVault private constant vault = IBalancerVault(0xBA12222222228d8Ba445958a75a0704d566BF2C8);

    mapping (string => uint256) internal loaned;

    // struct FlashLoanData {
    //     address user;
    //     address collateralAsset;
    // }

    constructor() {}

    function flashloan(address token, uint256 amount) external {
        // bytes memory userData = abi.encode(
        //     FlashLoanData({
        //         user: user,
        //         collateralAsset: collateralAsset
        //     })
        // );
        bytes memory userData = "";

        IERC20[] memory tokens = new IERC20[](1);
        tokens[0] = IERC20(token);

        uint256[] memory amounts = new uint256[](1);
        amounts[0] = amount;

        vault.flashLoan(
            IFlashLoanRecipientBalancer(address(this)),
            tokens,
            amounts,
            userData
        );
    }

    function receiveFlashLoan(
        IERC20[] memory tokens,
        uint256[] memory amounts,
        uint256[] memory feeAmounts,
        bytes memory userData
    ) external override {
        // FlashLoanData memory decoded = abi.decode(userData, (FlashLoanData));
        IERC20 loanToken = tokens[0];
        uint256 loanAmount = amounts[0];
        // address user = decoded.user;
        // address collateralAsset = decoded.collateralAsset;

        loaned[loanToken.symbol()] = loanAmount;
        
        // payback the loan right away for testing purpose
        loanToken.transfer(address(vault), loanAmount);
    }

    function getLoaned(string memory symbol) external view returns (uint256) {
        return loaned[symbol];
    }
}

