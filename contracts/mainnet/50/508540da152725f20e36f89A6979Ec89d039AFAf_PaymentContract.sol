contract PaymentContract is ReentrancyGuard, Ownable {
    using SafeMath for uint256;
    IERC20 public aidoosToken;
    mapping (address => bool) public isAdmin;

    constructor(address _aidoosToken) {
        aidoosToken = IERC20(_aidoosToken);
    }

    enum PaymentType {
        Project, // 0
        RemoteJob, // 1
        Challenge, // 2
        Incentive // 3
    }

    enum Status {
        PENDING, // 0
        COMPLETED, // 1
        FAILED // 2
    }

    //struct for each market item
    struct PaymentDetails {
        string fromOrgId;
        string toOrgId;
        address fromWalletId;
        address toWalletId;
        PaymentType payment_type;
        string referenceID;
        uint256 amount;
        string currency;
        uint256 tokens;
        string description;
        string payment_date;
        Status status;
    }

    mapping(string => PaymentDetails) public payments;

    event Payment(
        string id, PaymentDetails paymentDetails
    );

    function setAidoosToken(address _aidoosToken) external onlyOwner {
        aidoosToken = IERC20(_aidoosToken);
    }

    function handleAdmin(address admin, bool _isAdmin) external onlyOwner {
        isAdmin[admin] = _isAdmin;
    }

    function Pay(
        string memory paymentId,
        PaymentDetails memory paymentDetails
    ) external  {
        require((isAdmin[msg.sender] == true) || (msg.sender == owner()),"ACCESS DENIED");
        payments[paymentId] = paymentDetails;
        if(paymentDetails.tokens>0)
            aidoosToken.transferFrom(paymentDetails.fromWalletId, paymentDetails.toWalletId, paymentDetails.tokens);
        emit Payment(paymentId, paymentDetails);
    }

    function updateStatus(string memory paymentId, Status status) external onlyOwner{
        payments[paymentId].status = status;
    }
}