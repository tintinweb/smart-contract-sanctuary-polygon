pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "../concatenate.sol";

interface RulesInterface{
    function tokenCheck (uint id, uint valToCheck, address _con) external view returns (bool);
}

interface RacerInterface {
    function tokensOfOwner (address _owner) external view returns (uint[] memory);
    function ownerOf (uint256 tokenId) external view returns (address);
}

interface AccountInterface {
    function getCaptain (address _wallet) external view returns(uint256);
}

interface Engine {
    function addRacers (address _sender, address _contract, uint[] calldata _id, uint[] calldata _event) external;
    function setBoost(address _sender, uint _boost, uint _tokenID) external;
    function returnTokens(uint256[] calldata _tokenID) external;
    function createEvent(uint _id, uint _size, address _conCheck, uint _conValue, uint _matP, uint _nutP) external;
    function nextWeek() external;
}

contract ElegantStaking is Ownable, Concatenate {
    using SafeMath for uint256;

    //Pearls
    address public tokenAddress = address(0xCAf44e62003De4B8bD17c724f2B78CC532550C2F); 
    IERC20 rewardToken = IERC20(tokenAddress);

    //Racers
    address public erc721Contract = address(0x72106Bbe2b447ECB9b52370Ddc63cfa8e553B08C);
    IERC721 stakeableNFT = IERC721(erc721Contract);
    
    //Accounts
    address public accounts = 0x43BBB06C258279b791422Be1B5c66f6EB13D2f25;
    
    //Customs
    address public customAddress = 0x2953399124F0cBB46d2CbACD8A89cF0599974963;
    IERC1155 public customContract = IERC1155(customContract);

    //Engine
    address public engineAddress = address(0);

    struct raceRules{
        uint gridSize;
        address conCheck;
        uint conValue;
        uint matPrice;
        uint prlPrice;     
    }

    struct walletInfo {
        uint wScore;
        uint wAnchor;
        uint wAssistant;
    }

    uint public week;
    bool public paused;

    //walletByWeek[week][walletID].var = val
    mapping(uint => mapping(uint => walletInfo)) public walletByWeek;
    
    mapping(address => uint) public walletToID;
    address[] public walletID;

    mapping(address => bool) public isTeamMember;

    mapping(uint => raceRules) public rulesByRace;

    constructor() {
        isTeamMember[msg.sender] = true;
    }

    // ADMIN //

    function createEvent(uint _id, uint _size, address _conCheck, uint _conValue, uint _matP, uint _nutP) public {
        Engine _engine = Engine(engineAddress);
        raceRules memory _rules;
        _rules.gridSize = _size;
        _rules.conCheck = _conCheck;
        _rules.conValue = _conValue;
        _rules.matPrice = _matP;
        _rules.prlPrice = _nutP;
        rulesByRace[_id] = _rules;
        _engine.createEvent(_id,_size,_conCheck,_conValue,_matP,_nutP);
    }

    function teamUpdate(address to, bool member) public {
        require(isTeamMember[msg.sender] == true, "Caller is not a member of the team.");
        isTeamMember[to] = member;
    }

    function pause(bool _state) public {
        require(isTeamMember[msg.sender] == true, "Caller is not a member of the team.");
        paused = _state;
    }

    function newEngine(address _engine) public onlyOwner {
        engineAddress = _engine;
    }

    function nextWeek() public {
        require(isTeamMember[msg.sender] == true, "Caller is not a member of the team.");
        week = week + 1;
        Engine _engine = Engine(engineAddress);
        _engine.nextWeek();
    }

    function setBoost(uint _boost, uint _tokenID) public {
        Engine _engine = Engine(engineAddress);
        if (walletToID[msg.sender] == 0){
            uint len = walletID.length;
            walletID.push(msg.sender);
            walletToID[msg.sender] = len;
        }
        bool ownership;
        address _own = stakeableNFT.ownerOf(_tokenID);
        ownership = (_own == msg.sender);
        require(ownership == true, "That ain't yours, bruv.");

        uint wID = walletToID[_own];

        uint cpt = AccountInterface(accounts).getCaptain(msg.sender);
        require(cpt != _tokenID, "Your anchor, captain, and vice captain, must have different IDs.");

        uint nutso;
        if (_boost == 1){
            nutso = 250 ether;
            walletByWeek[week][wID].wAnchor = _tokenID;
        } else if (_boost == 2){
            nutso = 100 ether;
            walletByWeek[week][wID].wAssistant = _tokenID;
        }
        
        require(rewardToken.balanceOf(msg.sender) >= nutso, "You don't have enough Pearls for that.");
        require(rewardToken.transferFrom(msg.sender, address(this), nutso), "You need to allow transfer of Pearls.");
        //_engine.setBoost(msg.sender,_boost,_tokenID);
    }

    function addScore(address _wallet, uint _plus) public {
        uint wID = walletToID[_wallet];
        require(isTeamMember[msg.sender] == true, "Caller is not a member of the team.");
        uint sc = walletByWeek[week][wID].wScore;
        walletByWeek[week][wID].wScore = sc + _plus;
    }

    function getBoost(address _wallet, uint _ID) external view returns (uint) {
        uint wID = walletToID[_wallet];

        uint cpt = AccountInterface(accounts).getCaptain(_wallet);
        uint boost;
        if (cpt == _ID){
            boost = 2;
        } else if (_ID == walletByWeek[week][wID].wAssistant){
            boost = 1;
        } else if (_ID == walletByWeek[week][wID].wAnchor){
            boost = 4;
        }
        return boost;
    }

    function getWeek() external view returns(uint) {
        return week;
    }


    function signUp (uint[] calldata _racers, address _con, uint[] calldata _event) public payable {
        Engine _engine = Engine(engineAddress);
        if (walletToID[msg.sender] == 0){
            uint len = walletID.length;
            walletID.push(msg.sender);
            walletToID[msg.sender] = len;
        }

        uint _count = _racers.length;
        uint i;
        uint mTotal;
        uint pTotal;
        for( i; i < _count; i ++) {
            uint money = (rulesByRace[_event[i]].matPrice);
            uint nutso = (rulesByRace[_event[i]].prlPrice);

            mTotal = mTotal + money;
            pTotal = pTotal + nutso;
        }
        
        
        require(msg.value >= mTotal, "Not enough matic to race that many.");
        require(rewardToken.balanceOf(msg.sender) >= pTotal, "You don't have enough Pearls for that.");
        require(rewardToken.transferFrom(msg.sender, address(this), pTotal), "You need to allow transfer of Pearls.");
        _engine.addRacers(msg.sender,_con,_racers,_event);
        
    }

    function returnTokens(uint256[] calldata _tokenID) public {
        Engine _engine = Engine(engineAddress);
        uint[] memory _racers = _tokenID;
        _engine.returnTokens(_racers);
    }

    function withdraw() public onlyOwner {
        (bool success, ) = (engineAddress).call{value: address(this).balance}("");
            require(success, "Transfer failed.");

            uint _nut = rewardToken.balanceOf(address(this));
            require(rewardToken.transfer(engineAddress, _nut));
    }

}

