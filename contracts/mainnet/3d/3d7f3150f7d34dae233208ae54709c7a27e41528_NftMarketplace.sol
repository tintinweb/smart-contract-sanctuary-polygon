pragma solidity ^0.8.7;

contract NftMarketplace is ReentrancyGuard {

    struct Listing {
        address collection;
        uint256 tokenId;
        uint256 price;
        address seller;
        bool active;
    }

   event ItemListed(
        address indexed seller,
        address indexed nftAddress,
        uint256 indexed tokenId,
        uint256 price
    );

    event ItemCanceled(
        address indexed seller,
        address indexed nftAddress,
        uint256 indexed tokenId
    );

    event ItemBought(
        address indexed buyer,
        address indexed nftAddress,
        uint256 indexed tokenId,
        uint256 price
    );

   mapping(uint256 => Listing) public listingsById;
   uint256 public numbersOfListings;
   IERC20 token;

    constructor (address tokenAddress) {
        token = IERC20(tokenAddress);
    }

   modifier notListed(
        address nftAddress,
        uint256 tokenId,
        address owner
   ) {
        for(uint256 i = 0; i < numbersOfListings; i++) {
            if(listingsById[i].collection == nftAddress && listingsById[i].tokenId == tokenId) {
                require(listingsById[i].active == false, "The NFT is already listed.");
            }
        }
        _;
    }

    modifier isOwner(
        address nftAddress,
        uint256 tokenId,
        address spender
    ) {
        IERC721 nft = IERC721(nftAddress);
        address owner = nft.ownerOf(tokenId);
        require(spender == owner, "Not the owner.");
        _;
    }

    modifier isListed(address nftAddress, uint256 tokenId) {
        for(uint256 i = 0; i < numbersOfListings; i++) {
            if(listingsById[i].collection == nftAddress && listingsById[i].tokenId == tokenId) {
                require(listingsById[i].active == true, "The NFT is not Listed.");
            }
        }
        _;
    }

    function listItem(
        address nftAddress,
        uint256 tokenId,
        uint256 price
    )
        external
        notListed(nftAddress, tokenId, msg.sender)
        isOwner(nftAddress, tokenId, msg.sender)
    {
        require(price > 0, "Price below 0.");

        IERC721 nft = IERC721(nftAddress);
        require(nft.getApproved(tokenId) == address(this), "Approve NFT before listing.");
        listingsById[numbersOfListings] = Listing(nftAddress, tokenId, price, msg.sender, true);
        numbersOfListings++;
        emit ItemListed(msg.sender, nftAddress, tokenId, price);
    }

    function cancelListing(address nftAddress, uint256 tokenId)
        external
        isOwner(nftAddress, tokenId, msg.sender)
        isListed(nftAddress, tokenId)
    {
        for(uint256 i = 0; i < numbersOfListings; i++) {
            if(listingsById[i].collection == nftAddress && listingsById[i].tokenId == tokenId) {
                listingsById[i].active = false;
            }
        }
        emit ItemCanceled(msg.sender, nftAddress, tokenId);
    }

    function buyItem(address nftAddress, uint256 tokenId)
        external
        isListed(nftAddress, tokenId)
        nonReentrant
    {
        for(uint256 i = 0; i < numbersOfListings; i++) {
            if(listingsById[i].collection == nftAddress && listingsById[i].tokenId == tokenId) {
                token.transferFrom(msg.sender, listingsById[i].seller, listingsById[i].price);
                IERC721(nftAddress).safeTransferFrom(listingsById[i].seller, msg.sender, tokenId);
                listingsById[i].active = false;
                emit ItemBought(msg.sender, nftAddress, tokenId, listingsById[i].price);
            }
        }
    }


    function updateListing(
        address nftAddress,
        uint256 tokenId,
        uint256 newPrice
    )
        external
        isListed(nftAddress, tokenId)
        nonReentrant
        isOwner(nftAddress, tokenId, msg.sender)
    {
        require(newPrice > 0, "Price must be above 0.");
        for(uint256 i = 0; i < numbersOfListings; i++) {
            if(listingsById[i].collection == nftAddress && listingsById[i].tokenId == tokenId) {
                listingsById[i].price = newPrice;
            }
        }

        emit ItemListed(msg.sender, nftAddress, tokenId, newPrice);
    }

    function getListing(address nftAddress, uint256 tokenId)
        external
        view
        returns (Listing memory)
    {
        for(uint256 i = 0; i < numbersOfListings; i++) {
            if(listingsById[i].collection == nftAddress && listingsById[i].tokenId == tokenId) {
                return listingsById[i];
            }
        }
    }

    function getAllListings() 
        external 
        view 
        returns (Listing[] memory) 
    {
        Listing[] memory allListings = new Listing[](numbersOfListings);
        for(uint256 i = 0; i < numbersOfListings; i++) {
            allListings[i] = listingsById[i];
        }
        return allListings;
    }
}