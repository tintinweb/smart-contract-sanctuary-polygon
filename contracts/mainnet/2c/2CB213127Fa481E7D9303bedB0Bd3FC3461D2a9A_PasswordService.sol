pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "./verifier.sol";

contract PasswordService is Ownable {
    Verifier verifier = new Verifier();

    event SetZKhash(uint indexed zkhash, address indexed user);

    event Verified(bytes32 indexed proofHash, address indexed user);

    mapping(address => uint) public zkhashOf;

    mapping(bytes32 => bool) internal usedProofs;

    uint public fee = 0.1 ether;

    constructor() {}

    function setFee(uint newFee) public onlyOwner {
        fee = newFee;
    }

    function resetPassword(
        uint[8] memory proof1,
        uint expiration1,
        uint allhash1,
        uint[8] memory proof2,
        uint zkhash2,
        uint expiration2,
        uint allhash2
    ) public payable {
        require(
            msg.value >= fee,
            "PasswordService::resetPassword: fee not enough"
        );

        uint zkhash1 = zkhashOf[_msgSender()];

        if (zkhash1 == 0) {
            //init password

            zkhashOf[_msgSender()] = zkhash2;
            verify(_msgSender(), proof2, 0, expiration2, allhash2);
        } else {
            //reset password

            // check old zkhash
            verify(_msgSender(), proof1, 0, expiration1, allhash1);

            // check new zkhash
            zkhashOf[_msgSender()] = zkhash2;
            verify(_msgSender(), proof2, 0, expiration2, allhash2);
        }

        payable(owner()).transfer(msg.value);
        emit SetZKhash(zkhash2, _msgSender());
    }

    function verify(
        address user,
        uint[8] memory proof,
        uint datahash,
        uint expiration,
        uint allhash
    ) public {
        require(
            block.timestamp < expiration,
            "PasswordService::verify: expired"
        );

        bytes32 usedProof = keccak256(
            abi.encodePacked(
                proof[0],
                proof[1],
                proof[2],
                proof[3],
                proof[4],
                proof[5],
                proof[6],
                proof[7]
            )
        );
        require(!usedProofs[usedProof], "PasswordService::verify: proof used");

        uint zkhash = zkhashOf[user];
        require(zkhash != 0, "PasswordService::verify: user not exist");
        require(
            verifyProof(proof, zkhash, datahash, expiration, allhash),
            "PasswordService::verify: verify proof fail"
        );

        usedProofs[usedProof] = true;
        emit Verified(usedProof, _msgSender());
    }

    /////////// util ////////////

    function verifyProof(
        uint[8] memory proof,
        uint zkhash,
        uint datahash,
        uint expiration,
        uint allhash
    ) internal view returns (bool) {
        return
            verifier.verifyProof(
                [proof[0], proof[1]],
                [[proof[2], proof[3]], [proof[4], proof[5]]],
                [proof[6], proof[7]],
                [zkhash, datahash, expiration, block.chainid, allhash]
            );
    }
}

