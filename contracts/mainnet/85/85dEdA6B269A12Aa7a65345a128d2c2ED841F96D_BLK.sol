import "solady/src/tokens/ERC20.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

contract BLK is ERC20, Ownable, Pausable {
    enum Roles {
        None,
        Whitelisted,
        Shop // A shop account counts also as whitelisted
    }

    struct Account {
        uint256 lockedBalance;
        Roles role;
        uint256 conversionRate;
    }

    mapping(address => Account) public accounts;

    event AddedToWhitelist(address indexed account);
    event RemovedFromWhitelist(address indexed account);
    event AddedToShops(address indexed account);
    event RemovedFromShops(address indexed account);
    error NotWhitelisted(address account);
    //error AlreadyWhitelisted(address account);
    //error NotShop(address account);
    //error AlreadyShop(address account);
    error NotEnoughLockedBalance(address account);
    error NotEnoughUnlockedBalance(address account);
    error SelfTransfer(address from, address to);
    error ZeroAddress();
    error ZeroAmount();

    constructor() ERC20() {
        addWhitelisted(0x0000000000000000000000000000000000000000);
        addWhitelisted(msg.sender);
    }

    function _beforeTokenTransfer(
    address from,
    address to,
    uint256 amount
) internal override whenNotPaused {
    if (to == from) revert SelfTransfer(from, to);
    
    Roles fromRole = accounts[from].role;
    Roles toRole = accounts[to].role;
    
    if (fromRole == Roles.None) revert NotWhitelisted(from);
    if (toRole == Roles.None) revert NotWhitelisted(to);

    if (from != address(0) && toRole == Roles.Shop) {
        Account storage toAccount = accounts[to];
        if (toAccount.lockedBalance < amount)
            revert NotEnoughLockedBalance(to);
    }

    super._beforeTokenTransfer(from, to, amount);
}

function _afterTokenTransfer(
    address from,
    address to,
    uint256 amount
) internal override whenNotPaused {
    if (from != address(0) && isShop(to)) {
        Account storage toAccount = accounts[to];
        uint256 unlockedBalance = amount * toAccount.conversionRate;
        uint256 lockedBalance = toAccount.lockedBalance;
        
        if (lockedBalance < unlockedBalance)
            revert NotEnoughLockedBalance(to);
        
        unchecked {
            lockedBalance -= unlockedBalance;
        }
        
        toAccount.lockedBalance = lockedBalance;
        _mint(to, unlockedBalance);
    }

    super._afterTokenTransfer(from, to, amount);
}


    function addWhitelisted(address _addr) public onlyOwner {
        // if(isWhitelisted(_addr)) revert AlreadyWhitelisted(_addr);
        accounts[_addr].role = Roles.Whitelisted;
        emit AddedToWhitelist(_addr);
    }

    function removeWhitelisted(address _addr) public onlyOwner {
        // if(!isWhitelisted(_addr)) revert NotWhitelisted(_addr);
        accounts[_addr].role = Roles.None;
        emit RemovedFromWhitelist(_addr);
    }

    function isWhitelisted(address _addr) public view returns (bool) {
        // An account is whitelisted if it is a shop or a whitelisted account
        return accounts[_addr].role != Roles.None;
    }

    function addShop(address _addr) external onlyOwner {
        // if(!isShop(_addr)) revert alreadyShop(_addr);
        Account storage account = accounts[_addr];
        account.role = Roles.Shop;
        account.conversionRate = 2;
        emit AddedToShops(_addr);
    }

    function removeShop(address _addr) external onlyOwner {
        // if(isShop(_addr)) revert NotShop(_addr);
        accounts[_addr].role = Roles.None;
        accounts[_addr].conversionRate = 1;
        emit RemovedFromShops(_addr);
    }

    function isShop(address _addr) public view returns (bool) {
        return accounts[_addr].role == Roles.Shop;
    }

    function getConversionRate(address _addr) external view returns (uint256) {
        return accounts[_addr].conversionRate;
    }

    function setConversionRate(address _addr, uint256 _rate)
        external
        onlyOwner
        returns (bool)
    {
        accounts[_addr].conversionRate = _rate;
        return true;
    }

    function balanceLockedOf(address _addr) external view returns (uint256) {
        return accounts[_addr].lockedBalance;
    }

    function mintLocked(address _addr, uint256 amount)
        external
        onlyOwner
        returns (bool)
    {
        accounts[_addr].lockedBalance += amount;
        return true;
    }

    function mint(address to, uint256 amount) external onlyOwner {
        _mint(to, amount);
    }

    /* openzeppelin ERC20Burnable */
    function burn(uint256 amount) external virtual {
        _burn(_msgSender(), amount);
    }

    function burnFrom(address account, uint256 amount) external virtual {
        _spendAllowance(account, _msgSender(), amount);
        _burn(account, amount);
    }

    /* admin functions */
    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    

    /* pure functions */
    function decimals() public pure override returns (uint8) {
        return 18;
    }

    function name() public pure override returns (string memory) {
        return "Blockeras";
    }

    function symbol() public pure override returns (string memory) {
        return "BLK";
    }
}

