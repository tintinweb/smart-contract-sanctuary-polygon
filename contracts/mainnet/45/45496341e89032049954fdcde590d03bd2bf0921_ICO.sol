pragma solidity ^0.8.0;




contract ICO is ReentrancyGuard, Ownable {
    IERC20 public token;
    uint256 public rate;
    uint256 public minPurchase;
    uint256 public maxPurchase;

    mapping(address => address) public referrers;
    mapping(address => uint256) public referralsCount;
    mapping(address => uint256) public levelTwoReferralsCount;
    uint256 public levelOneFirstReferralBonus = 25; // 25% bonus for the first four referrals
    uint256 public levelOneSubsequentReferralBonus = 50; // 50% bonus from the fifth referral onwards
    uint256 public levelTwoReferralBonus = 5; // 5% bonus for level two referrals
    uint256 public maxFirstReferrals = 4;

    constructor(
        IERC20 _token,
        uint256 _rate,
        uint256 _minPurchase,
        uint256 _maxPurchase
    ) {
        require(_rate > 0, "ICO: rate is 0");
        require(_minPurchase > 0, "ICO: minPurchase is 0");
        require(_maxPurchase > 0, "ICO: maxPurchase is 0");

        token = _token;
        rate = _rate;
        minPurchase = _minPurchase;
        maxPurchase = _maxPurchase;
    }

    receive() external payable {
        buyTokens(address(0));
    }

    function buyTokens(address referrer) public nonReentrant payable {
        uint256 weiAmount = msg.value;
        _preValidatePurchase(weiAmount);

        uint256 tokens = _getTokenAmount(weiAmount);

        token.transfer(msg.sender, tokens);

        // Level 1 referral reward
        if (referrer != address(0) && referrer != msg.sender && referrers[msg.sender] == address(0)) {
            referrers[msg.sender] = referrer;
            referralsCount[referrer]++;

            uint256 bonus = (weiAmount * getLevelOneReferralBonus(referrer)) / 100;
            payable(referrer).transfer(bonus);

            // Level 2 referral reward
            address levelTwoReferrer = referrers[referrer];
            if (levelTwoReferrer != address(0)) {
                levelTwoReferralsCount[levelTwoReferrer]++;
                bonus = (weiAmount * levelTwoReferralBonus) / 100;
                payable(levelTwoReferrer).transfer(bonus);
            }
        }

        emit TokensPurchased(msg.sender, weiAmount, tokens);
    }

    function _preValidatePurchase(uint256 weiAmount) internal view {
        require(weiAmount >= minPurchase && weiAmount <= maxPurchase, "ICO: amount is not within the range");
    }

    function _getTokenAmount(uint256 weiAmount) internal view returns (uint256) {
        return weiAmount * rate;
    }

    function getLevelOneReferralBonus(address referrer) public view returns (uint256) {
        if (referralsCount[referrer] <= maxFirstReferrals) {
            return levelOneFirstReferralBonus;
        } else {
            return levelOneSubsequentReferralBonus;
        }
    }

    function setRate(uint256 _rate) external onlyOwner {
        rate = _rate;
    }

    function setMinPurchase(uint256 _minPurchase) external onlyOwner {
        minPurchase = _minPurchase;
    }

    function setMaxPurchase(uint256 _maxPurchase) external onlyOwner {
        maxPurchase = _maxPurchase;
    }

    event TokensPurchased(address indexed purchaser, uint256 value, uint256 amount);
}