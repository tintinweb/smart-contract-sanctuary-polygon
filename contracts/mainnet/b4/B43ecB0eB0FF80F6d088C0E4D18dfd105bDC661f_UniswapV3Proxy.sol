interface IWMATIC {
    function withdraw(uint wad) external;
}

interface IERC20Extended is IERC20 {
    function decimals() external view returns (uint8);
}

contract UniswapV3Proxy {
    event TransferTokensIn(address sender, uint256 amount);
    event ApproveProxy(address protocol, uint256 amount);
    event Swap(
        address swapper,
        address fromToken,
        address toToken,
        uint256 amountIn,
        uint256 amountOut
    );
    event WithdrawBaseToken(address baseToken, uint256 amount);
    event ClaimUserJourneyNft(address claimant, uint256 tokenId);
    event Log(string message);

    ISwapRouter public immutable swapRouter;
    IUniswapV3Factory public immutable factory;
    IWMATIC public wmatic;

    struct TokenSlots {
        address token0Address;
        address token1Address;
    }

    constructor(
        ISwapRouter _swapRouter,
        IUniswapV3Factory _factory,
        address _wmaticAddress
    ) {
        swapRouter = _swapRouter;
        factory = _factory;
        wmatic = IWMATIC(_wmaticAddress);
    }

    // todo lend and claim nft
    // todo batch swap brz to usdc and send

    /**
     * @dev Proxy to Uniswap V3's exactInputSingle function, which runs the exchange and withdraws MATIC if requested
     *
     * @param _tokenIn The swap token
     * @param _tokenOut The swapped token
     * @param _collectionAddress The address of the User Journey ERC1155
     * @param _faucetWalletAddress The address of the faucet to send the UJ token
     * @param _amountIn The amount to swap
     * @param _claimableTokenId The token to claim on success
     *
     * @return success whether or not the transaction succeeded
     */
    function swapAndClaimNft(
        address _tokenIn,
        address _tokenOut,
        address _collectionAddress,
        address _faucetWalletAddress,
        uint256 _amountIn,
        uint256 _claimableTokenId
    ) external returns (bool success) {
        // todo max amount correction onchain (if the sent > max, just use max)

        (
            uint16 feeTier,
            uint160 sqrtPriceX96,
            uint256 adjAmountOut
        ) = getSwapMetadata(_tokenIn, _tokenOut, _amountIn);

        // Transfer tokens into contract
        require(
            IERC20(_tokenIn).transferFrom(msg.sender, address(this), _amountIn),
            "Failed to transfer tokens into proxy"
        );
        emit TransferTokensIn(msg.sender, _amountIn);

        // Approve swap router to take tokens from contract
        require(
            IERC20(_tokenIn).approve(address(swapRouter), _amountIn),
            "Failed to approve proxy on SwapRouter"
        );
        emit ApproveProxy(address(swapRouter), _amountIn);

        // Execute swap
        uint256 amountOut = swapRouter.exactInputSingle(
            ISwapRouter.ExactInputSingleParams({
                tokenIn: _tokenIn,
                tokenOut: _tokenOut,
                fee: feeTier,
                recipient: address(this),
                deadline: block.timestamp,
                amountIn: _amountIn,
                amountOutMinimum: adjAmountOut,
                sqrtPriceLimitX96: sqrtPriceX96
            })
        );
        emit Swap(msg.sender, _tokenIn, _tokenOut, _amountIn, amountOut);

        // If you sent MATIC, withdraw the WMATIC that resulted from this transaction
        // Note: event is emitted in called function
        withdraw(_amountIn);

        // Approve ERC20 to transfer back to user
        IERC20(_tokenOut).approve(_tokenOut, amountOut);
        emit ApproveProxy(_tokenOut, amountOut);

        // Transfer received ERC20 back to user
        // Note: ERC20 transfers get emitted, I believe
        IERC20(_tokenOut).transfer(msg.sender, amountOut);

        // If you need to claim a user journey NFT, claim the user journey NFT
        IClaimable collection = IClaimable(_collectionAddress);
        if (collection.availableToClaim(msg.sender, _claimableTokenId)) {
            collection.claim(
                msg.sender,
                _faucetWalletAddress,
                _claimableTokenId
            );
            emit ClaimUserJourneyNft(msg.sender, _claimableTokenId);
        }

        return true;
    }

    function getSwapMetadata(
        address _tokenIn,
        address _tokenOut,
        uint256 _amountIn
    )
        internal
        returns (uint16 feeTier, uint160 sqrtPriceX96, uint256 adjAmountOut)
    {
        // Initialize fee tiers
        uint16[3] memory feeTiers = [100, 500, 3000];
        uint16 feeTier = feeTiers[0];

        // Get pool
        address poolAddress = address(0);
        for (uint256 i = 0; i < feeTiers.length; i++) {
            address tempPoolAddress = factory.getPool(
                _tokenIn,
                _tokenOut,
                feeTiers[i]
            );
            if (tempPoolAddress != address(0)) {
                poolAddress = tempPoolAddress;
                feeTier = feeTiers[i];
                break;
            }
        }

        emit Log("Got fee tier");

        // TODO if this is this case, just do multihop
        require(poolAddress != address(0), "No pool found for this token pair");
        // TODO everything below this should be a separate function, one for
        //  single-hop (with all params), and one for multi-hop (with path)

        IUniswapV3Pool pool = IUniswapV3Pool(poolAddress);

        // Get sqrtPriceX96
        (uint160 sqrtPriceX96, , , , , , ) = pool.slot0();

        emit Log("Got pool");

        TokenSlots memory tokenSlots;

        if (uint160(_tokenIn) > uint160(_tokenOut)) {
            tokenSlots.token0Address = _tokenOut;
            tokenSlots.token1Address = _tokenIn;
        } else {
            tokenSlots.token0Address = _tokenIn;
            tokenSlots.token1Address = _tokenOut;
        }

        emit Log("got token slots");

        uint256 adjPrice = (sqrtPriceX96 * sqrtPriceX96) >> (96 * 2);
        uint256 tokenDivisor = calculateTokenDivisor(
            IERC20Extended(tokenSlots.token0Address).decimals(),
            IERC20Extended(tokenSlots.token1Address).decimals()
        );

        emit Log("calculated divisor");

        uint256 price;
        if (tokenSlots.token0Address == _tokenIn) {
            price = adjPrice / tokenDivisor;
        } else {
            price = tokenDivisor / adjPrice;
        }

        emit Log("calculated price");

        uint256 adjAmountOut = (price * _amountIn * 9) / 10;
        emit Log("calculated adj");
        return (feeTier, sqrtPriceX96, adjAmountOut);
    }

    /**
     * @dev Proxy to Uniswap V3's exactInput function, which runs the exchange and withdraws MATIC if requested
     *
     * @param _path The token swap path
     * @param _recipient The receiver of the swapped tokens
     * @param _amountIn The amount to swap
     * @param _amountOutMinimum The minimum amount of swapped tokens
     */
    function exactInputWithWithdrawal(
        bytes memory _path,
        address _recipient,
        uint256 _amountIn,
        uint256 _amountOutMinimum
    ) external {
        ISwapRouter.ExactInputParams memory params = ISwapRouter
            .ExactInputParams({
                path: _path,
                recipient: _recipient,
                deadline: block.timestamp + 5 minutes, // todo we can change this
                amountIn: _amountIn,
                amountOutMinimum: _amountOutMinimum
            });

        swapRouter.exactInput(params);

        // If you sent MATIC, withdraw the WMATIC that resulted from this transaction
        // withdraw(_amountIn);
        return;
    }

    /**
     * @dev withdraws WMATIC into MATIC for the user
     *
     * @param _amount the amount to withdraw
     */
    function withdraw(uint256 _amount) private {
        if (msg.value > 0) {
            wmatic.withdraw(_amount);
        }
        emit WithdrawBaseToken(msg.sender, _amount);
        return;
    }

    function calculateTokenDivisor(
        uint8 token0Decimals,
        uint8 token1Decimals
    ) private pure returns (uint256) {
        if (token0Decimals > token1Decimals) {
            return 10 ** uint256(token0Decimals - token1Decimals);
        } else {
            return 1 / 10 ** uint256(token1Decimals - token0Decimals);
        }
    }
