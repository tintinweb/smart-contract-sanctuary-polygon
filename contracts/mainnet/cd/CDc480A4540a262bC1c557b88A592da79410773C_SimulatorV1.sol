        (uint reserveIn, uint reserveOut) = UniswapV2Library.getReserves(
            UNISWAP_V2_FACTORY,
            params.tokenIn,
            params.tokenOut
        );
        amountOut = UniswapV2Library.getAmountOut(
            params.amount,
            reserveIn,
            reserveOut
        );
    }

