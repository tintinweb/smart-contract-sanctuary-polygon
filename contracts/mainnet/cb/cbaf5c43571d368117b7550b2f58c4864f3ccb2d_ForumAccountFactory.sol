    {
        uint x1;
        uint y1;
        uint z1;

        uint x2;
        uint y2;
        uint z2;

        (x1, y1, z1) = ScalarBaseMultJacobian(u1);
        (x2, y2, z2) = ScalarMultJacobian(X, Y, u2);

        (x1, y1, z1) = _jAdd(x1, y1, z1, x2, y2, z2);

        return _affineFromJacobian(x1, y1, z1);
