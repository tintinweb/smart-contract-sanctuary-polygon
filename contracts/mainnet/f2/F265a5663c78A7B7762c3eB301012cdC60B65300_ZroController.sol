        if(curOwner != address(0) && curOwner != msg.sender && curExpiry >= block.timestamp){
            revert NameUnavailable(node);
        }

        uint64 expiry = uint64(_data);
        registry.setSubnode(_label, parentNode, msg.sender, _resolver, expiry);
        Address.sendValue(payable(treasury), msg.value);
        emit Register(msg.sender, expiry, _label);
    }

