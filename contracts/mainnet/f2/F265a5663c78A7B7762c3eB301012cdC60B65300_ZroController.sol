        if(!signers[_signer]){
            revert InvalidSigner();
        }

        bytes32 node = _makeNode(parentNode, _label);
        _validateSign(node, _data, r, s, _signer);

        uint64 dataExpiry = uint64(_data >> 160);
        if(block.timestamp > dataExpiry){
            revert DataExpired();
        }

        uint64 expiry = uint64(_data);
        registry.extendSubnode(_label, parentNode, expiry);
        Address.sendValue(payable(treasury), msg.value);
        emit Extend(msg.sender, expiry, _label);
