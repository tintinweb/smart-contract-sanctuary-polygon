  function _revokeMembership(uint256 tokenId) internal {}

  function _activeMembersip(uint256 tokenId) internal view returns (bool) {
    _existsMembership(tokenId);
    // uint16 levelCategory = _levelCategoryFromData(_tokenDetail[tokenId].data);
    require(
      _levelFromData(_tokenDetail[tokenId].data) != 0,
