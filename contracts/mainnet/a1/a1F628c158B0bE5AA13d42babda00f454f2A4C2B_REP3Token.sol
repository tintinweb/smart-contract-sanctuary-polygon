  function issueMembership(
    address account,
    uint256 data,
    string memory tokenUri
  ) public onlyApprover(_msgSender()) {
    uint16 levelCategory = _levelCategoryFromData(data);
    require(
      !_memberTokenId[account][levelCategory],
      "Voucher already claimed by the address"
    );
    uint256 tokenId = totalSupply();

    _tokenDetail[tokenId] = TokenDetail({
      type_: 0,
      ownerTokenId: tokenId,
      data: data
    });

    _memberTokenId[account][levelCategory] = true;

    uint8 level = _levelFromLevelCategory(levelCategory);
    uint8 category = _categoryFromLevelCategory(levelCategory);
    emit Claim(level, category, tokenId);

    _mint(account, tokenId);
    _setTokenURI(tokenId, tokenUri);
  }

  function bulkIssueMembership(
