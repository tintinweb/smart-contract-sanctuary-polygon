  /**
   * @dev checks if address has a membership badge of levelCategory.
   */
  function membershipLevelExists(
    address account,
    uint8 level
  ) public view returns (bool) {
    uint8 category = 1;
    uint16 levelCategory = (uint16(level) << 8) | category;
    return _memberTokenId[account][levelCategory];
  }

  function updateMembership(
    uint256 tokenId,
    uint256 data,
    string memory tokenUri
  ) public onlyApprover(_msgSender()) {
    _existsMembership(tokenId);

    uint16 oldLevelCategory = _levelCategoryFromData(
      _tokenDetail[tokenId].data
    );
    uint16 newLevelCategory = _levelCategoryFromData(data);

    require(
      !_memberTokenId[ownerOf(tokenId)][newLevelCategory],
      "Token already exists of the same level and category"
    );

    if (oldLevelCategory != newLevelCategory) {
      _updateLevelCategory(tokenId, oldLevelCategory, newLevelCategory);
    }
    _tokenDetail[tokenId].data = data;
    _setTokenURI(tokenId, tokenUri);
    uint8 level = _levelFromLevelCategory(newLevelCategory);
    uint8 category = _categoryFromLevelCategory(newLevelCategory);
    emit Upgrade(level, category, tokenId);
  }

  function bulkUpdateMembership(
    uint256[] calldata tokenId,
    uint256[] calldata data,
    string[] memory tokenUri
  ) public onlyApprover(_msgSender()) {
    require(tokenId.length == data.length, "Mismatch in length");
    require(tokenId.length == tokenUri.length, "Mismatch in length");

    for (uint256 i = 0; i < tokenId.length; i++) {
      updateMembership(tokenId[i], data[i], tokenUri[i]);
    }
  }

  function soulTransfer(TransferVoucher calldata voucher) public {
    uint256 tokenId = voucher.tokenId;
    address to = voucher.to;
    _existsMembership(tokenId);
    uint16 levelCategory = _levelCategoryFromData(_tokenDetail[tokenId].data);
    require(_owners[tokenId] == _msgSender(), "Not authorized to to transfer");
    require(
      !_memberTokenId[to][levelCategory],
      "Transfer not allowed. Address holds already holds exact membership"
    );
    address signer = _verify(voucher);
    require(isApprover(signer), "Voucher is not signed by approver.");
    require(
      _isApprovedOrOwner(_msgSender(), tokenId),
      "ERC721: transfer caller is not owner nor approved"
    );

    _memberTokenId[_msgSender()][levelCategory] = false;
    _memberTokenId[to][levelCategory] = true;

    // chaning ownerships of associated Tokens

    for (uint256 i = 0; i < _associatedTokens[tokenId].length; i++) {
      _transfer(_msgSender(), to, _associatedTokens[tokenId][i]);
    }
    _safeTransfer(_msgSender(), to, tokenId, "");
  }

  function revokeMembership(uint256 tokenId) public onlyApprover(_msgSender()) {
