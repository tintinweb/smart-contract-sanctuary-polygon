  /*
   * @dev See {IREP3Token-claimMembership}.
   */
  function claimMembership(
    NFTVoucher calldata voucher,
    uint256 approvedIndex
  ) public {
    require(voucher.data.length > 0, "Invalid voucher");
    require(
      voucher.to.length <= 25,
      "More than 25 addresses can not be approved in a single voucher"
    );
    require(
      voucher.to[approvedIndex] == _msgSender(),
      "Not allowed to mint this token"
    );
    require(voucher.to.length > 0, "Voucher is not valid for any address");

    string[] memory tokenUris = _stringToArray(voucher.tokenUris);
    require(
      voucher.data.length == tokenUris.length,
      "Invalid voucher. Token Uris not provided"
    );

    address signer = _verify(voucher);
    require(isApprover(signer), "Voucher is not signed by approver.");

    uint256 currentEnd = voucher.to.length;
    uint256 currentEndIndex = 0;
    if (voucher.end.length > 0) {
      currentEnd = voucher.end[0];
    }
    uint256 toIndex = approvedIndex;

    while (
      currentEnd <= toIndex && (currentEndIndex + 1) < voucher.end.length
    ) {
      currentEndIndex = currentEndIndex + 1;
      currentEnd = voucher.end[currentEndIndex];
    }
    if (currentEnd <= toIndex) {
      currentEndIndex = voucher.end.length;
    }

    uint16 levelCategory = _levelCategoryFromData(
      voucher.data[currentEndIndex]
    );
    require(
      !_memberTokenId[_msgSender()][levelCategory],
      "Voucher already claimed by the address"
    );

    uint256 tokenId = totalSupply();

    _tokenDetail[tokenId] = TokenDetail({
      type_: 0,
      ownerTokenId: tokenId,
      data: voucher.data[currentEndIndex]
    });

    _memberTokenId[_msgSender()][levelCategory] = true;

    uint8 level = _levelFromLevelCategory(levelCategory);
    uint8 category = _categoryFromLevelCategory(levelCategory);
    emit Claim(level, category, tokenId);

    _mint(_msgSender(), tokenId);
    _setTokenURI(tokenId, tokenUris[currentEndIndex]);
  }

  /**
