import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "./interfaces/IVBoxValidator.sol";
import "./interfaces/IVBoxUnpacker.sol";

/**
 * @dev VBoxUnpacker - Unpack box to NFTs.
 */
contract VBoxUnpacker is Ownable, ERC1155Holder, IVBoxUnpacker {
    address public immutable box;
    uint256 public immutable tokenId;
    address public validator;
    address payable public treasury;
    uint256 public multiplier = 3;
    uint256 public nftPrice = 1000; // todo: NFT price set or remove before prod deployment.
    uint256 public maxTxUnpack = 1;

    event Unpacked(address account, uint256 amount);
    event MultiplierSet(uint256 value);
    event NftPriceUpdated(uint256 price);
    event ValidatorSet(address);
    event TreasurySet(address payable);
    event MaxTxUnpackSet(uint256 value);

    constructor(address _box, uint256 _tokenId, address _validator) {
        box = _box;
        tokenId = _tokenId;
        validator = _validator;
    }

    // Log and send reward to user.
    function unpack(uint256 _amount) external payable {
        require(multiplier > 0 && maxTxUnpack > 0, "Unpacking disabled");
        require(unpackingPrice(_amount) == msg.value, "Incorrect ethers sent");
        require(treasury != address(0), "Treasury not set");

        Address.sendValue(treasury, msg.value);

        IERC1155(box).safeTransferFrom(msg.sender, address(this), tokenId, _amount, "0x");
        IVBoxValidator(validator).log(msg.sender, _amount * multiplier);
        IVBoxValidator(validator).mint(msg.sender, _amount * multiplier);
        emit Unpacked(msg.sender, _amount * multiplier);
    }

    function setMultiplier(uint256 _value) external onlyOwner {
        multiplier = _value;
        emit MultiplierSet(_value);
    }

    function setNftPrice(uint256 _price) external onlyOwner {
        nftPrice = _price;
        emit NftPriceUpdated(_price);
    }

    function setValidator(address _validator) external onlyOwner {
        validator = _validator;
        emit ValidatorSet(_validator);
    }

    function setTreasury(address payable _treasury) external onlyOwner {
        treasury = _treasury;
        emit TreasurySet(_treasury);
    }

    function setMaxTxUnpack(uint256 _value) external onlyOwner {
        maxTxUnpack = _value;
        emit MaxTxUnpackSet(_value);
    }

    // @dev Returns unpacking {price} per {_amount} boxes.
    function unpackingPrice(uint256 _amount) public view returns (uint256 price) {
        price = _amount * multiplier * nftPrice;
    }
}