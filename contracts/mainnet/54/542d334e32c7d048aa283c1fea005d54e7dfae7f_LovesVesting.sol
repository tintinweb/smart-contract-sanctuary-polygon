contract LovesVesting is ReentrancyGuard, Ownable, Pausable  {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    event PauseAccountVesting(address indexed account, bool pause);
    event AddVesting(address indexed account, address _token, uint256 amount, uint256 startTime, uint256 endTime);
    event DeleteVesting(address indexed account);
    event Recovered(address indexed tokenAddress, uint256 tokenAmount);

    struct VestingData {
        bool isPaused;
        address tokenAddress;
        uint256 vested;
        uint256 total;
        uint256 startTime;
        uint256 endTime;
    }

    uint256 public vestTotal = 0;
    uint256 public vestedTotal = 0;
    uint256 public vestingLength = 0;
    mapping(address => VestingData) public vesting;

    function addVestingSchedule(address _account, address _token, uint256 _amount, uint256 _startTime, uint256 _endTime) external onlyOwner {
        // initialize vesting schedule for user (one-time only)
        require(vesting[_account].total == 0 , "Vesting: user already has a vesting schedule");
        require(_startTime < _endTime, "Vesting: _startTime >= _endTime");
        vesting[_account] = VestingData({
            isPaused: false,
            tokenAddress: _token,
            vested: 0,
            total: _amount,
            startTime: _startTime,
            endTime: _endTime
        });
        vestTotal = vestTotal + _amount;
        vestingLength = vestingLength + 1;
        emit AddVesting(_account, _token, _amount, _startTime, _endTime);
    }
    
    function deleteVestingSchedule(address _account, bool _vestForUser) external onlyOwner {
        require(vesting[_account].total > 0, "Vesting: user has no vesting schedule");
        if (_vestForUser) {
            _vest(_account);
        }
        IERC20(vesting[_account].tokenAddress).safeTransfer(owner, vesting[_account].total - vesting[_account].vested);
        vestTotal = vestTotal - (vesting[_account].total - vesting[_account].vested);
        vestingLength = vestingLength - 1;
        delete vesting[_account];
        emit DeleteVesting(_account);
    }

    function setAccountPause(address _account, bool _pause) external onlyOwner {
        require(vesting[_account].isPaused != _pause, "Vesting: pause status must change");
        require(vesting[_account].total > 0, "Vesting: user has no vesting schedule");
        vesting[_account].isPaused = _pause;
        emit PauseAccountVesting(_account, _pause);
    }

    function vest() external nonReentrant notPaused {
        _vest(msg.sender);
    }

    function _vest(address _account) internal {
        VestingData storage userVesting = vesting[_account];
        require(userVesting.total > 0, "Vesting: no vesting schedule!");

        // Now this blocks the owner from deleting the schedule when it's paused,
        // which might also unwanted behavior. That would require shifting some checks.
        require(!userVesting.isPaused, "Vesting: user's vesting is paused!");
        require(block.timestamp > userVesting.startTime, "Vesting: !started");
        uint256 toBeReleased = releasableAmount(_account);
        require(toBeReleased > 0, "Vesting: no tokens to release");

        userVesting.vested = userVesting.vested + toBeReleased;
        vestedTotal = vestedTotal + toBeReleased;
        IERC20(userVesting.tokenAddress).safeTransfer(_account, toBeReleased);
    }

    function releasableAmount(address _addr) public view returns (uint256) {
        return _unlockedAmount(_addr) - vesting[_addr].vested;
    }

    function _unlockedAmount(address _addr) private view returns (uint256) {
        if (block.timestamp <= vesting[_addr].endTime) {
            uint256 duration = vesting[_addr].endTime - vesting[_addr].startTime;
            uint256 timePassed = block.timestamp - vesting[_addr].startTime;
            return (vesting[_addr].total * timePassed) / duration;
        } else {
            return vesting[_addr].total;
        }
    }

    function recoverERC20(address _token, uint256 tokenAmount) external onlyOwner {
        require(_token != address(0), "tokenAddress cannot be 0");
        IERC20(_token).safeTransfer(owner, tokenAmount);
        emit Recovered(_token, tokenAmount);
    }

    function getVestTotal(address _account) public view returns (uint256) {
        return vesting[_account].total;
    }

    function getUnlockedAmount(address _account) public view returns (uint256) {
        return _unlockedAmount(_account);
    }

    function getLockedAmount(address _account) public view returns (uint256) {
        return vesting[_account].total - _unlockedAmount(_account);
    }

    function getClaimableAmount(address _account) public view returns (uint256) {
        return _unlockedAmount(_account) - vesting[_account].vested;
    }

    function getClaimedAmount(address _account) public view returns (uint256) {
        return vesting[_account].vested;
    }

    function getAccountPause(address _account) public view returns (bool) {
        return vesting[_account].isPaused;
    }

    function getAccountStartTime(address _account) public view returns (uint256) {
        return vesting[_account].startTime;
    }

    function getAccountEndTime(address _account) public view returns (uint256) {
        return vesting[_account].endTime;
    }

    function getBlockTimestamp() public view returns (uint256) {
        return block.timestamp;
    }
