import {LERC1155V1} from "../../tokens/LERC1155V1.sol";
import {LibOrders} from "../../shared/libraries/LibOrders.sol"; 

import {
    AppStorage,
    Modifiers,
    AssetStandard,
    AssetVersion
} from "../libraries/LibAppStorage.sol";

/// @title ER1155-related functions.
contract ERC1155V1Facet is Modifiers {
    AppStorage internal s;

    using ECDSA for bytes32;

/// @dev Mints `amount` tokens of token type `id` to `to`.
    function mintERC1155V1(
        LibOrders.MintERC1155Order calldata order,
        uint64 nonce,
        bytes calldata signature
    ) external {

        require(
            s.signers[LibOrders.hashMintERC1155(order, nonce).recover(signature)],
            "invalid signature"
        );

        if (!LERC1155V1(order.token).fixedSupply()) {
            require(s.mintNonce[order.to]++ == nonce, "invalid nonce");
        }

        LERC1155V1(order.token).mint(order.to, order.id, order.amount, order.uri);
    }

/// @dev Batched version of {mintERC1155V1}.
    function mintERC1155V1Batch(
        LibOrders.MintERC1155BatchOrder calldata order,
        uint64 nonce,
        bytes calldata signature
    ) external {

        require(
            s.signers[LibOrders.hashMintERC1155Batch(order, nonce).recover(signature)],
            "invalid signature"
        );

        if (!LERC1155V1(order.token).fixedSupply()) {
            require(s.mintNonce[order.to]++ == nonce, "invalid nonce");
        }

        LERC1155V1(order.token).mintBatch(order.to, order.ids, order.amounts, order.uris);
    }

/// @dev Burns `amount` tokens of token type `id`.
    function burnERC1155V1(
        LibOrders.BurnERC1155Order calldata order,
        uint64 nonce,
        bytes calldata signature
    ) external {

        require(
            s.signers[LibOrders.hashBurnERC1155(order, nonce).recover(signature)],
            "invalid signature"
        );

        require(s.burnNonce[order.from]++ == nonce, "invalid nonce");

        LERC1155V1(order.token).burn(order.from, order.id, order.amount);
    }


/// @dev Batched version of {burnERC1155V1}.
    function burnERC1155V1Batch(
        LibOrders.BurnERC1155BatchOrder calldata order,
        uint64 nonce,
        bytes calldata signature
    ) external {

        require(
            s.signers[LibOrders.hashBurnERC1155Batch(order, nonce).recover(signature)],
            "invalid signature"
        );

        require(s.burnNonce[order.from]++ == nonce, "invalid nonce");

        LERC1155V1(order.token).burnBatch(order.from, order.ids, order.amounts);
    }

/// @dev Transfers `amount` tokens of token type `id` to `to`.
    function transferERC1155V1(
        LibOrders.TransferERC1155Order calldata order,
        uint64 nonce,
        bytes calldata signature
    ) external {

        require(
            s.signers[LibOrders.hashTransferERC1155(order, nonce).recover(signature)],
            "invalid signature"
        );

        require(s.transferNonce[order.to]++ == nonce, "invalid nonce");

        LERC1155V1(order.token).safeTransferFrom(order.from, order.to, order.id, order.amount, "");
    }

/// @dev Batched version of {transferERC1155V1}.
    function transferERC1155Batch(
        LibOrders.TransferERC1155BatchOrder calldata order,
        uint64 nonce,
        bytes calldata signature
    ) external {

        require(
            s.signers[LibOrders.hashTransferERC1155Batch(order, nonce).recover(signature)],
            "invalid signature"
        );

        require(s.transferNonce[order.to]++ == nonce, "invalid nonce");

        LERC1155V1(order.token).safeBatchTransferFrom(order.from, order.to, order.ids, order.amounts, "");
    }

    function mintBurnTransferERC1155V1(
        LibOrders.MintERC1155Order[] calldata mintOrders,
        LibOrders.BurnERC1155Order[] calldata burnOrders,
        LibOrders.TransferERC1155Order[] calldata transferOrders,
        uint64 salt,
        bytes calldata signature
    ) external {

        require(
            s.signers[
                keccak256(
                    abi.encode(
                        mintOrders,
                        burnOrders,
                        transferOrders,
                        block.chainid,
                        salt
                    )
                ).toEthSignedMessageHash().recover(signature)
            ],
            "invalid signature"
        );

        require(!s.salt[salt], "salt is already used");
        s.salt[salt] = true;

        for (uint256 i = 0; i < mintOrders.length; i++) {
            LibOrders.MintERC1155Order calldata order = mintOrders[i];
            LERC1155V1(order.token).mint(order.to, order.id, order.amount, order.uri);
        }

        for (uint256 i = 0; i < burnOrders.length; i++) {
            LibOrders.BurnERC1155Order calldata order = burnOrders[i];
            LERC1155V1(order.token).burn(order.from, order.id, order.amount);
        }

        for (uint256 i = 0; i < transferOrders.length; i++) {
            LibOrders.TransferERC1155Order calldata order = transferOrders[i];
            LERC1155V1(order.token).safeTransferFrom(order.from, order.to, order.id, order.amount, "");
        }        
    }

    function mintBurnTransferERC1155V1Batch(
        LibOrders.MintERC1155BatchOrder[] calldata mintOrders,
        LibOrders.BurnERC1155BatchOrder[] calldata burnOrders,
        LibOrders.TransferERC1155BatchOrder[] calldata transferOrders,
        uint64 salt,
        bytes calldata signature
    ) external {

        require(
            s.signers[
                keccak256(
                    abi.encode(
                        mintOrders,
                        burnOrders,
                        transferOrders,
                        block.chainid,
                        salt
                    )
                ).toEthSignedMessageHash().recover(signature)
            ],
            "invalid signature"
        );

        require(!s.salt[salt], "salt is already used");
        s.salt[salt] = true;

        for (uint256 i = 0; i < mintOrders.length; i++) {
            LibOrders.MintERC1155BatchOrder calldata order = mintOrders[i];
            LERC1155V1(order.token).mintBatch(order.to, order.ids, order.amounts, order.uris);
        }

        for (uint256 i = 0; i < burnOrders.length; i++) {
            LibOrders.BurnERC1155BatchOrder calldata order = burnOrders[i];
            LERC1155V1(order.token).burnBatch(order.from, order.ids, order.amounts);
        }

        for (uint256 i = 0; i < transferOrders.length; i++) {
            LibOrders.TransferERC1155BatchOrder calldata order = transferOrders[i];
            LERC1155V1(order.token).safeBatchTransferFrom(order.from, order.to, order.ids, order.amounts, "");
        }     
    }
}

