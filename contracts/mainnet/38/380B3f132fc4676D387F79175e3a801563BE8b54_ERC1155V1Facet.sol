pragma solidity ^0.8.10;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/utils/introspection/ERC165Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/common/ERC2981Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC1155/IERC1155Upgradeable.sol";
// import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";

import {NFTLib} from "./NFTLib.sol";

contract LERC1155V1 is
    Initializable,
    ERC165Upgradeable,
    IERC1155Upgradeable,
    OwnableUpgradeable,
    ERC2981Upgradeable 
{
    string public name;
    string public symbol; 
    bool public fixedSupply;
    address public controller; 
    string public contractURI;

    mapping(uint256 => mapping(address => uint256)) private _balances;
    mapping(address => mapping(address => bool)) private _operatorApprovals;
    mapping(address => bool) private _controllerDetachments;

    string private _baseURI;
    mapping(uint256 => string) private _tokenURI;
    mapping(uint256 => uint256) public totalSupply;

    bytes4 private constant _INTERFACE_ERC1155 = 0xd9b67a26;
    bytes4 private constant _INTERFACE_ERC1155_METADATA_URI = 0x0e89341c; // bytes4(keccak256('uri(uint256)')) == 0x0e89341c
    bytes4 private constant _INTERFACE_CONTRACT_URI = 0xe8a3d485; // bytes4(keccak256('contractURI()')) == 0xe8a3d485

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize(
        address controller_,
        string memory name_,
        string memory symbol_,
        string memory baseURI_,
        string memory contractURI_,
        bool fixedSupply_
    ) initializer public {
        __Ownable_init();
        __ERC2981_init();
        // __UUPSUpgradeable_init();

        name = name_;
        symbol = symbol_;
        fixedSupply = fixedSupply_;
        controller = controller_;

        _baseURI = baseURI_;

        setContractURI(contractURI_);
    }

    modifier onlyController {
        require(_msgSender() == controller, "not allowed");
        _;
    }

    modifier onlyControllerOrOwner {
        require(_msgSender() == controller || _msgSender() == owner(), "not allowed");
        _;
    }

    // function _authorizeUpgrade(address newImplementation)
    //     internal
    //     onlyOwner
    //     override
    // {}

    function uri(uint256 id) public view virtual returns (string memory) {
        return string(abi.encodePacked(_baseURI, _tokenURI[id]));
    }

    function setContractURI(string memory newuri) public onlyOwner {
        contractURI = newuri;
    }

    function setDefaultRoyalty(address receiver, uint96 feeNumerator) public onlyOwner {
        _setDefaultRoyalty(receiver, feeNumerator);
    }

    function deleteDefaultRoyalty() public onlyOwner {
        _deleteDefaultRoyalty();
    }

    function setTokenRoyalty(uint256 id, address receiver, uint96 feeNumerator) public onlyOwner {
        _setTokenRoyalty(id, receiver, feeNumerator);
    }

    function resetTokenRoyalty(uint256 id) public onlyOwner {
        _resetTokenRoyalty(id);
    }

    function setControllerDetached(bool detached) public onlyOwner {
        _controllerDetachments[_msgSender()] = detached;
    }

    function balanceOf(address account, uint256 id) public view virtual override returns (uint256) {
        require(account != address(0), "address zero is not a valid owner");
        return _balances[id][account];
    }

    function balanceOfBatch(address[] memory accounts, uint256[] memory ids)
        public
        view
        virtual
        override
        returns (uint256[] memory)
    {
        require(accounts.length == ids.length, "accounts and ids length mismatch");

        uint256[] memory batchBalances = new uint256[](accounts.length);

        for (uint256 i = 0; i < accounts.length; ++i) {
            batchBalances[i] = balanceOf(accounts[i], ids[i]);
        }

        return batchBalances;
    }

    function setApprovalForAll(address operator, bool approved) public virtual override {
        _setApprovalForAll(_msgSender(), operator, approved);
    }

    function isApprovedForAll(address account, address operator) public view virtual override returns (bool) {
        return _operatorApprovals[account][operator];
    }

    function _approveController(address account, address operator) internal virtual {
        if (operator == controller && !_operatorApprovals[account][operator] && !_controllerDetachments[account]) {
            _setApprovalForAll(account, operator, true);
        }
    }

    function _setApprovalForAll(
        address owner,
        address operator,
        bool approved
    ) internal virtual {
        require(owner != operator, "setting approval status for self");
        _operatorApprovals[owner][operator] = approved;
        emit ApprovalForAll(owner, operator, approved);
    }

    function mint(
        address to,
        uint256 id,
        uint256 amount,
        string memory tokenURI
    )
        public
        onlyControllerOrOwner
    {
        require(to != address(0), "mint to the zero address");

        bool firstMint = bytes(_tokenURI[id]).length == 0;
        require(!fixedSupply || firstMint, "RC1155: token supply is fixed");

        address operator = _msgSender();

        _balances[id][to] += amount;
        totalSupply[id] += amount;

        if (firstMint) {
            _tokenURI[id] = tokenURI;
        }

        emit TransferSingle(operator, address(0), to, id, amount);

        NFTLib._doSafeTransferAcceptanceCheck(operator, address(0), to, id, amount, "");

        _approveController(to, operator);
    }

    function mintBatch(
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        string[] memory uris
    )
        public
        onlyControllerOrOwner
    {
        require(to != address(0), "mint to the zero address");
        require(ids.length == amounts.length, "ids and amounts length mismatch");
        require(ids.length == uris.length, "ids and uris length mismatch");

        address operator = _msgSender();

        uint256 id;
        uint256 num = ids.length;
        bool firstMint;
        for (uint256 i = 0; i < num; i++) {
            id = ids[i];

            firstMint = bytes(_tokenURI[id]).length == 0;
            require(!fixedSupply || firstMint, "RC1155: token supply is fixed");

            _balances[id][to] += amounts[i];
            totalSupply[id] += amounts[i];

            if (firstMint) {
                _tokenURI[id] = uris[i];
            }
        }

        emit TransferBatch(operator, address(0), to, ids, amounts);

        NFTLib._doSafeBatchTransferAcceptanceCheck(operator, address(0), to, ids, amounts, "");

        _approveController(to, operator);
    }

    function safeTransferFrom(
        address from,
        address to,
        uint256 id,
        uint256 amount,
        bytes memory data
    ) public virtual override {
        require(
            from == _msgSender() || isApprovedForAll(from, _msgSender()),
            "caller is not token owner nor approved"
        );

        require(to != address(0), "transfer to the zero address");

        address operator = _msgSender();

        uint256 fromBalance = _balances[id][from];
        require(fromBalance >= amount, "insufficient balance for transfer");
        unchecked {
            _balances[id][from] = fromBalance - amount;
        }
        _balances[id][to] += amount;

        emit TransferSingle(operator, from, to, id, amount);

        NFTLib._doSafeTransferAcceptanceCheck(operator, from, to, id, amount, data);

        _approveController(to, operator);
    }

    function safeBatchTransferFrom(
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) public virtual override {
        require(
            from == _msgSender() || isApprovedForAll(from, _msgSender()),
            "caller is not token owner nor approved"
        );

        require(ids.length == amounts.length, "ids and amounts length mismatch");
        require(to != address(0), "transfer to the zero address");

        address operator = _msgSender();

        for (uint256 i = 0; i < ids.length; ++i) {
            uint256 id = ids[i];
            uint256 amount = amounts[i];

            uint256 fromBalance = _balances[id][from];
            require(fromBalance >= amount, "insufficient balance for transfer");
            unchecked {
                _balances[id][from] = fromBalance - amount;
            }
            _balances[id][to] += amount;
        }

        emit TransferBatch(operator, from, to, ids, amounts);

        NFTLib._doSafeBatchTransferAcceptanceCheck(operator, from, to, ids, amounts, data);

        _approveController(to, operator);
    }

    function burn(
        address from,
        uint256 id,
        uint256 amount
    ) public virtual {
        require(
            from == _msgSender() || isApprovedForAll(from, _msgSender()),
            "caller is not token owner nor approved"
        );

        require(from != address(0), "burn from the zero address");

        address operator = _msgSender();

        uint256 fromBalance = _balances[id][from];
        require(fromBalance >= amount, "burn amount exceeds balance");
        unchecked {
            _balances[id][from] = fromBalance - amount;
        }
        totalSupply[id] -= amount;

        emit TransferSingle(operator, from, address(0), id, amount);
    }

    function burnBatch(
        address from,
        uint256[] memory ids,
        uint256[] memory amounts
    ) public virtual {
        require(
            from == _msgSender() || isApprovedForAll(from, _msgSender()),
            "caller is not token owner nor approved"
        );

        require(from != address(0), "burn from the zero address");
        require(ids.length == amounts.length, "ids and amounts length mismatch");

        address operator = _msgSender();

