import {AccessControlUpgradeable} from "@openzeppelin-upgradeable/access/AccessControlUpgradeable.sol";
import {Initializable} from "@openzeppelin-upgradeable/proxy/utils/Initializable.sol";
import {UUPSUpgradeable} from "@openzeppelin-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import {IERC721Upgradeable} from "@openzeppelin-upgradeable/token/ERC721/IERC721Upgradeable.sol";
import {ECDSAUpgradeable} from "@openzeppelin-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";

import {MerkleProof} from "./utils/MerkleProof.sol";

import "./interfaces/IAggregator.sol";

contract Aggregator is Initializable, AccessControlUpgradeable, UUPSUpgradeable, IAggregator {
    bytes32 public constant UPGRADER_ROLE = keccak256("UPGRADER_ROLE");
    bytes32 public constant SOURCE_UPDATER_ROLE = keccak256("SOURCE_UPDATER_ROLE");

    /**
     * @dev datasource_id -> datasource
     */
    mapping(uint256 => DataSource) sources;

    /**
     * @dev datasource_id -> account -> sync_data
     */
    mapping(uint256 => mapping(address => Sync)) internal _syncs;

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize() public initializer {
        __AccessControl_init();
        __UUPSUpgradeable_init();

        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(UPGRADER_ROLE, _msgSender());
        _setupRole(SOURCE_UPDATER_ROLE, _msgSender());
    }

    function version() external pure returns (uint256) {
        return 3;
    }

    function addSource(uint256 sourceId, uint40 timestamp, uint32 kind, uint256 payload)
        external
        onlyRole(SOURCE_UPDATER_ROLE)
    {
        if (sources[sourceId].kind != 0) {
            revert DataSourceExists();
        }

        sources[sourceId] = DataSource(kind, timestamp, payload);
        emit SourceAdded(sourceId, timestamp, kind, payload);
    }

    function updateSource(uint256 sourceId, uint40 timestamp, uint32 kind, uint256 payload)
        external
        onlyRole(SOURCE_UPDATER_ROLE)
    {
        _updateSource(sourceId, timestamp, kind, payload);
    }

    function updateSourceAndSyncFor(
        uint256 sourceId,
        uint40 timestamp,
        uint32 kind,
        uint256 payload,
        bytes calldata signature,
        address account,
        uint256 syncPayload,
        bytes32[] calldata merkleProof
    ) external {
        if (sources[sourceId].timestamp < timestamp) {
            bytes32 digestHash =
                ECDSAUpgradeable.toEthSignedMessageHash(keccak256(abi.encodePacked(sourceId, timestamp, kind, payload)));
            address signer = ECDSAUpgradeable.recover(digestHash, signature);

            if (!hasRole(SOURCE_UPDATER_ROLE, signer)) {
                revert SignerNotAuthorized();
            }

            _updateSource(sourceId, timestamp, kind, payload);
        }

        _sync(sourceId, account, syncPayload, merkleProof);
    }

    function sync(uint256 sourceId, address account, uint256 payload, bytes32[] calldata merkleProof) external {
        _sync(sourceId, account, payload, merkleProof);
    }

    function isSynced(uint256 sourceId, address account) external view returns (Sync memory) {
        DataSource memory _source = sources[sourceId];
        if (_source.kind == 0) {
            revert DataSourceUnknown();
        }

        // ERC721 kind
        if (_source.kind == 2) {
            return Sync(
                uint40(block.timestamp),
                IERC721Upgradeable(address(uint160(_source.payload))).balanceOf(account) > 0 ? 1 : 0
            );
        }

        return _syncs[sourceId][account];
    }

    function getImplementation() external view returns (address) {
        return _getImplementation();
    }

    function _authorizeUpgrade(address newImplementation) internal override onlyRole(UPGRADER_ROLE) {}

    function _updateSource(uint256 sourceId, uint40 timestamp, uint32 kind, uint256 payload) internal {
        if (sources[sourceId].kind == 0) {
            revert DataSourceUnknown();
        }

        sources[sourceId].kind = kind;
        sources[sourceId].timestamp = timestamp;
        sources[sourceId].payload = payload;
        emit SourceUpdated(sourceId, timestamp, kind, payload);
    }

    function _sync(uint256 sourceId, address account, uint256 payload, bytes32[] calldata merkleProof) internal {
        DataSource memory _source = sources[sourceId];
        if (_source.kind != 1) {
            revert DataSourceWrongKind();
        }

        bytes32 leaf = keccak256(abi.encodePacked(account, payload));
        (bool valid,) = MerkleProof.verify(merkleProof, bytes32(_source.payload), leaf);
        if (!valid) {
            revert ProofInvalid();
        }

        _syncs[sourceId][account] = Sync(_source.timestamp, payload);
        emit Synced(sourceId, account, _source.timestamp, payload);
    }
}

