contract IsContractBulkChecker {
  /*
        AddressType Mapping:
        WALLET                   = 0
        CONTRACT                 = 1
        CONTRACT_CAN_RECEIVE_NFT = 2
    */
  enum AddressType {
    WALLET,
    CONTRACT,
    CONTRACT_CAN_RECEIVE_NFT
  }

  function isContract(address acc) public view returns (bool) {
    return acc.code.length > 0;
  }

  function canReceiveNft(address acc) public view returns (bool) {
    if (!IERC1155Receiver(acc).supportsInterface(type(IERC1155Receiver).interfaceId)) {
      return false;
    }
    address dummyAddress = 0xFB37c2FCca2F8b61429247844ADEe1BB8f9FF224;
