contract ERC2771ContextFacet {
    function updateTrustedForwarder(address _forwarder, bool _isTrusted) external {
        LibDiamond.enforceIsContractOwner();
        LibERC2771Context.updateTrustedForwarder(_forwarder, _isTrusted);
