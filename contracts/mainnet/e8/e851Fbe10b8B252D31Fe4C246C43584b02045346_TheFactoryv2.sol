        address[] calldata tokenContracts,
        uint256[] calldata tokenIds
    ) external {
        require(
            tokenContracts.length == tokenIds.length,
            "Length of tokenContracts array must match length of tokenIds array"
        );

        uint256 totalAmount = 0;

        for (uint256 i = 0; i < tokenContracts.length; i++) {
            address tokenContract = tokenContracts[i];
            uint256 tokenId = tokenIds[i];

            require(
                _isTokenOwner(tokenContract, tokenId),
                "You are not the owner of the token."
            );

            uint256 tokenValue = valuePerToken[tokenContract];

            IERC721(tokenContract).transferFrom(msg.sender, burnWallet, tokenId);

            totalAmount = totalAmount.add(tokenValue);
        }

        IERC20(erc20Contract).transfer(msg.sender, totalAmount);

        // Rest of the function logic
        // ...
    }

    function countTokenContractOccurrences(address[] memory tokenContracts, address tokenContract)
        internal
        pure
        returns (uint256)
    {
        uint256 count = 0;
        for (uint256 i = 0; i < tokenContracts.length; i++) {
            if (tokenContracts[i] == tokenContract) {
                count++;
            }
        }
        return count;
    }

    function containsAllContracts(address[] memory tokenContracts) internal view returns (bool) {
        bool foundTedsContract = false;
        bool foundTeddiesContract = false;
        bool foundAiTedsContract = false;

        for (uint256 i = 0; i < tokenContracts.length; i++) {
            if (tokenContracts[i] == tedsContract) {
                foundTedsContract = true;
            } else if (tokenContracts[i] == teddiesContract) {
                foundTeddiesContract = true;
            } else if (tokenContracts[i] == aiTedsContract) {
                foundAiTedsContract = true;
            }
        }

        return foundTedsContract && foundTeddiesContract && foundAiTedsContract;
    }
