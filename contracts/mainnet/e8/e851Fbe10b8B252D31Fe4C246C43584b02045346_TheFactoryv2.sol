        startingAmount = _amount;
    }

    function setValuePerToken(address tokenContract, uint256 value) external onlyOwner {
        valuePerToken[tokenContract] = value;
    }

    function _isTokenOwner(address tokenContract, uint256 tokenId) internal view returns (bool) {
        return IERC721(tokenContract).ownerOf(tokenId) == msg.sender;
    }

