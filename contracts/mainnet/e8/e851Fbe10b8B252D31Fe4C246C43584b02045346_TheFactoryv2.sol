        erc20Contract = _erc20Contract;
        burnWallet = _burnWallet;
        contractOwner = msg.sender;
        startingAmount = _startingAmount;

        // Assign the contractTokenCount mapping with initial values
        contractTokenCount[tedsContract] = 0;
        contractTokenCount[teddiesContract] = 0;
        contractTokenCount[aiTedsContract] = 0;
    }

