                _isTokenOwner(tokenContract, tokenId),
                "You are not the owner of the token."
            );

            require(
                (tokenContract == tedsContract) ||
                (tokenContract == teddiesContract) ||
                (tokenContract == aiTedsContract),
                "Invalid token contract address."
            );

            IERC721(tokenContract).transferFrom(msg.sender, burnWallet, tokenId);

            uint256 tokenValue = valuePerToken[tokenContract];
            contractTokenCount[tokenContract] = contractTokenCount[tokenContract].add(1);
            totalAmount = totalAmount.add(tokenValue);
        }

        uint256 finalAmount = startingAmount.sub(totalAmount).mul(DECIMAL_FACTOR);
        IERC20(erc20Contract).transferFrom(msg.sender, burnWallet, finalAmount);

        // Rest of the function logic
        // ...
    }

