pragma solidity ^0.8.0;

import {IMasterfileDrop} from "channels/v1/drops/MasterfileDrop.i.sol";
import {IMysteryBoxModule} from "channels/v1/modules/MysteryBoxModule.i.sol";
import {NativeMetaTransaction} from "channels/v1/utils/NativeMetaTransaction.sol";

import {ModuleManager, Enum} from "@safe-contracts/contracts/base/ModuleManager.sol";
import {AccessControl, Context} from "@openzeppelin/contracts/access/AccessControl.sol";

contract MintModule is AccessControl, NativeMetaTransaction {
    error TransactionFailed();

    address immutable channel;

    constructor(address channel_) NativeMetaTransaction("MINT_MODULE") {
        channel = channel_;
        _setupRole(DEFAULT_ADMIN_ROLE, channel_);
    }

    function mintMasterfile(
        address drop,
        address recipient,
        uint24 editionNumber,
        uint256 quantity
    ) public onlyRole(bytes32("MINTER")) {
        bytes memory data = abi.encodeWithSelector(
            IMasterfileDrop.mint.selector,
            recipient,
            editionNumber,
            quantity
        );
        executeTransaction(drop, data);
    }

    function giftMysteryBox(
        address module,
        address recipient,
        uint256 tokenId,
        uint256 quantity
    ) public onlyRole(bytes32("MINTER")) {
        bytes memory data = abi.encodeWithSelector(
            IMysteryBoxModule.gift.selector,
            recipient,
            tokenId,
            quantity
        );
        executeTransaction(module, data);
    }

    function executeTransaction(address dest, bytes memory data) internal {
        if (
            !ModuleManager(channel).execTransactionFromModule(
                dest,
                0,
                data,
                Enum.Operation.Call
            )
        ) revert TransactionFailed();
    }

    function _msgSender()
        internal
        view
        override(Context, NativeMetaTransaction)
        returns (address)
    {
        return NativeMetaTransaction._msgSender();
    }
}

