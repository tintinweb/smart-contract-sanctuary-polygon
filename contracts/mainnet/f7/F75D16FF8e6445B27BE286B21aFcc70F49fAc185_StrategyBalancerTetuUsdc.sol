  function _investAllUnderlying() internal {
    // this check is needed, because most of the SNX reward pools will revert if
    // you try to stake(0).
    uint uBalance = IERC20(_underlying()).balanceOf(address(this));
    if (uBalance > 0) {
      depositToPool(uBalance);
    }
  }

