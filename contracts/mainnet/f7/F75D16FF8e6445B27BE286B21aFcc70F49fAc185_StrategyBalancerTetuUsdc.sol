  event UpdatedUint256Slot(string name, uint256 oldValue, uint256 newValue);
  /// @notice Boolean value changed the variable with `name`
  event UpdatedBoolSlot(string name, bool oldValue, bool newValue);

  // ******************* SETTERS AND GETTERS **********************

