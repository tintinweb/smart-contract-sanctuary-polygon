contract SignedAttestation is CSSafeVerificationScheme {
    function verify(
        address _sender,
        address _owner,
        address _safe,
        uint256 _safeId,
        address _token,
        uint256 _tokenId,
        bytes memory _payload
    ) external view {
        bytes32 data = keccak256(
            abi.encode(
                address(this),
                block.chainid,
                _sender,
                _safe,
                _safeId,
                _token,
                _tokenId
            )
        );
        require(
            ECDSA.recover(ECDSA.toEthSignedMessageHash(data), _payload) ==
                _owner,
            "invalid signature"
        );
        require(
            IERC721(_token).ownerOf(_tokenId) == _owner,
            "stamps not owned by same owner"
        );
    }
}