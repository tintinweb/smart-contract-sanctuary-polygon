        Resource memory resource = resources[resourceId];

        if (!resource.active) revert InactiveResource();

        address jackpotAddress = token.jackpot();
        uint256 rwdPrice = getPrice(resource.price);
        uint256 rwdFee = resource.fee != 0 && jackpotAddress != address(0)
        ? getPrice(resource.fee)
        : 0;
        uint256 allowed = token.allowance(user, address(this));

        if (allowed < rwdPrice + rwdFee)
