     * @param rewindAddress Address of the RWD token contract
     * @param tetherAddress Address of the Tether token contract
     */
    function initialize(
        IToken rewindAddress,
        IERC20Upgradeable tetherAddress
    ) external initializer {
        if (
            address(tetherAddress) == address(0) ||
            address(rewindAddress) == address(0)
        ) revert ZeroAddress();

        token = rewindAddress;
        tether = tetherAddress;

        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(SERVICE_ROLE, _msgSender());
    }

