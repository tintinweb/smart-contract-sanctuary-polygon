    function withdrawalWithDiscount(
        address operator,
        address user,
        uint256 amount,
        uint256 deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external onlyRole(SERVICE_ROLE) {
        if (discount == 0) revert ZeroDiscount();

        uint256 discountedAmount = (token.calculateWithdrawal(amount) *
        discount) / 100;

        token.permit(user, address(this), amount, deadline, v, r, s);
        token.safeTransferFrom(user, operator, amount);
