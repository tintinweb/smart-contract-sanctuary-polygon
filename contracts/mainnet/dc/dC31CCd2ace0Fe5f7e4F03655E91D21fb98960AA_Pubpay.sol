import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

contract Pubpay is Ownable, Pausable {
    using Counters for Counters.Counter;

    Counters.Counter private _paymentId;
    Counters.Counter public _refCount;

    address payable public admin;
    IERC20 public token;

    uint256 public share;
    address[] public referrers;

    event PaymentDone(
        address payer,
        uint256 amount,
        uint256 paymentId,
        uint256 date
    );

    event NFTTransfered(
        address owner,
        address collection,
        uint256 tokenId,
        address to,
        uint256 date
    );

    struct Payments {
        address payer;
        uint256 amount;
        uint256 date;
        address _collection;
        uint256 tokenId;
        bool payed;
        address ref;
    }

    struct Orders {
        uint256 orderId;
        address payer;
        uint256 amount;
        uint256 date;
        address _collection;
        uint256 tokenId;
        bool payed;
    }

    mapping(uint256 => Payments) public PaymentsList;

    mapping(uint256 => Orders) public OrdersList;

    mapping(address => uint256) public commissions;

    constructor(address _token) payable {
        admin = payable(msg.sender);
        token = IERC20(_token);
        share = 500; // Share inicial de 5%
    }

    function setShare(uint256 _share) public onlyOwner {
        share = _share;
    }

    function setToken(address _token) public onlyOwner {
        token = IERC20(_token);
    }

    function setCommissions(address _ref, uint256 _saldo) public onlyOwner {
        if (commissions[_ref] == 0) {
            _refCount.increment();
            referrers.push(_ref);
        }
        commissions[_ref] = _saldo;
    }

    function setOrder(
        uint256 _orderId,
        address _payer,
        uint256 _amount,
        uint256 _date,
        address _collection,
        uint256 _tokenId
    ) external onlyOwner {
        OrdersList[_orderId] = Orders(
            _orderId,
            _payer,
            _amount,
            _date,
            _collection,
            _tokenId,
            false
        );
    }

    function addCommission(address _ref, uint256 _amount) internal {
        if (commissions[_ref] == 0) {
            _refCount.increment();
            referrers.push(_ref);
        }
        commissions[_ref] += (_amount * share) / 10000;
    }

    function pay(uint256 _amount, address payable _ref)
        public
        payable
        whenNotPaused
    {
        _paymentId.increment();
        token.transferFrom(msg.sender, admin, _amount);
        PaymentsList[_paymentId.current()] = Payments(
            msg.sender,
            _amount,
            block.timestamp,
            address(0),
            0,
            true,
            _ref
        );
        addCommission(_ref, _amount);
        emit PaymentDone(
            msg.sender,
            _amount,
            _paymentId.current(),
            block.timestamp
        );
    }

    function pay(uint256 _amount) public payable whenNotPaused {
        _paymentId.increment();
        token.transferFrom(msg.sender, admin, _amount);
        PaymentsList[_paymentId.current()] = Payments(
            msg.sender,
            _amount,
            block.timestamp,
            address(0),
            0,
            true,
            address(0)
        );
        emit PaymentDone(
            msg.sender,
            _amount,
            _paymentId.current(),
            block.timestamp
        );
    }

    function buyNFT(
        uint256 _amount,
        address _owner,
        address _collection,
        uint256 _tokenId,
        address payable _ref,
        uint256 _orderId
    ) external payable whenNotPaused {
        _paymentId.increment();

        require(_amount == OrdersList[_orderId].amount, "Invalid Order Value");

        token.transferFrom(msg.sender, admin, _amount);
        emit PaymentDone(
            msg.sender,
            _amount,
            _paymentId.current(),
            block.timestamp
        );

        IERC721(_collection).safeTransferFrom(_owner, msg.sender, _tokenId);

        PaymentsList[_paymentId.current()] = Payments(
            msg.sender,
            _amount,
            block.timestamp,
            _collection,
            _tokenId,
            true,
            _ref
        );

        addCommission(_ref, _amount);

        emit NFTTransfered(
            _owner,
            _collection,
            _tokenId,
            msg.sender,
            block.timestamp
        );
    }

    function buyNFT(
        uint256 _amount,
        address _owner,
        address _collection,
        uint256 _tokenId,
        uint256 _orderId
    ) external payable whenNotPaused {
        _paymentId.increment();

        require(_amount == OrdersList[_orderId].amount, "Invalid Order Value");

        token.transferFrom(msg.sender, admin, _amount);

        emit PaymentDone(
            msg.sender,
            _amount,
            _paymentId.current(),
            block.timestamp
        );

        IERC721(_collection).safeTransferFrom(_owner, msg.sender, _tokenId);

        PaymentsList[_paymentId.current()] = Payments(
            msg.sender,
            _amount,
            block.timestamp,
            _collection,
            _tokenId,
            true,
            address(0)
        );

        emit NFTTransfered(
            _owner,
            _collection,
            _tokenId,
            msg.sender,
            block.timestamp
        );
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function withdrawToken(address _token, uint256 _amount) external onlyOwner {
        IERC20 tokenContract = IERC20(_token);
        tokenContract.approve(address(this), _amount);
        tokenContract.transfer(admin, _amount);
    }

    function withdrawNFT(address _collection, uint256 _tokenId)
        external
        onlyOwner
    {
        IERC721(_collection).safeTransferFrom(address(this), admin, _tokenId);
    }

    function withdraw() public onlyOwner {
        uint256 amount = address(this).balance;

        (bool success, ) = admin.call{value: amount}("");
        require(success, "Failed to send Ether");
    }
}