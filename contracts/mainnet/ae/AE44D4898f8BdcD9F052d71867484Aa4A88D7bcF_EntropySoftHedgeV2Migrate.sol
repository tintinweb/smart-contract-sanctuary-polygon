/**
 * @title EntropySoftHedgeV2Migrate Contract for `VESQ`
 * @author Entropyfi
 * @notice V2 Migration smart contract, allow users to move fund to V2
 * - Users can:
 *   # migrate V1 token to V2 token
 */
contract EntropySoftHedgeV2Migrate is ReentrancyGuard, Pausable {
	using SafeERC20 for IERC20;

	uint256 public constant PRECISION = 1E18;

	uint256 public constant hgeInitialIdx = 1024577005800000000;
	uint256 public constant levInitialIdx = 1000000000000000000;
	address public immutable DAO;

	address public immutable v1Core;
	address public immutable v2Core;

	IERC20 public immutable v1HGEToken;
	IERC20 public immutable v1LEVToken;
	IERC20 public immutable v2HGEToken;
	IERC20 public immutable v2LEVToken;

	modifier onlyDAO() {
		require(msg.sender == DAO, "HC:NO ACCESS");
		_;
	}

	constructor(
		address v1Core_,
		address v2Core_,
		address v1HGEToken_,
		address v1LEVToken_,
		address v2HGEToken_,
		address v2LEVToken_,
		address DAO_
	) {
		require(v1Core_ != address(0), "ESM: V1 CORE ZR ADDR");
		require(v2Core_ != address(0), "ESM: V2 CORE ZR ADDR");
		require(IHedgeToken(v1HGEToken_).core() == v1Core_, "ESM: V1 HGE INV");
		require(IHedgeToken(v1LEVToken_).core() == v1Core_, "ESM: V1 LEV INV");
		require(IHedgeToken(v2HGEToken_).core() == v2Core_, "ESM: V2 HGE INV");
		require(IHedgeToken(v2LEVToken_).core() == v2Core_, "ESM: V2 LEV INV");
		require(DAO_ != address(0), "ESM DAO ZR ADDR");

		v1Core = v1Core_;
		v2Core = v2Core_;
		v1HGEToken = IERC20(v1HGEToken_);
		v1LEVToken = IERC20(v1LEVToken_);
		v2HGEToken = IERC20(v2HGEToken_);
		v2LEVToken = IERC20(v2LEVToken_);

		DAO = DAO_;
	}

	/**
	 * @dev migrate v1 token to v2 token
	 * @notice user can call this to deposit v1 token in exchange of v2 token
	 *         will automatically convert user's v1 token in wallet to v2 token
	 */
	function migrate() external nonReentrant whenNotPaused {
		uint256 hgeAmount = v1HGEToken.balanceOf(msg.sender);
		uint256 levAmount = v1LEVToken.balanceOf(msg.sender);

		// transfer v1 token to dead address
		v1HGEToken.safeTransferFrom(msg.sender, 0x000000000000000000000000000000000000dEaD, hgeAmount);
		v1LEVToken.safeTransferFrom(msg.sender, 0x000000000000000000000000000000000000dEaD, levAmount);

		// transfer v2 token to depositor
		uint256 currentV2HgeIndex = IHedgeToken(address(v2HGEToken)).index();
		uint256 currentV2LevIndex = IHedgeToken(address(v2LEVToken)).index();

		uint256 v2hgeAmount = (hgeAmount * PRECISION * currentV2HgeIndex) / hgeInitialIdx / PRECISION;
		uint256 v2levAmount = (levAmount * PRECISION * currentV2LevIndex) / levInitialIdx / PRECISION;
		v2HGEToken.safeTransfer(msg.sender, (v2hgeAmount));
		v2LEVToken.safeTransfer(msg.sender, (v2levAmount));
	}

	/**
	 * @dev rescue leftover tokens
	 * @notice only DAO can call, and will be send back to DAO
	 * @param token_ reserve curreny
	 * @param amount_ amount of reserve token to transfer
	 */
	function rescueTokens(
		bool all_,
		address token_,
		uint256 amount_
	) external onlyDAO {
		if (all_) {
			amount_ = IERC20(token_).balanceOf(address(this));
		}
		IERC20(token_).safeTransfer(msg.sender, amount_);
	}

	function setPause(bool paused_) external onlyDAO {
		if (paused_) {
			_pause();
		} else {
			_unpause();
		}
	}
}

