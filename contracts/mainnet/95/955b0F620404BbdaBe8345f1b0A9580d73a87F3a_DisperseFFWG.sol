contract DisperseFFWG {

    address public nftAddress = 0xbDC91993Cc370eeD38e59cD1c68B6d2f88508Ce2;
    address public rewardTokenAddress = 0x0d500B1d8E8eF31E21C99d1Db9A6444d3ADf1270; // WMATIC
    address private dev;

    uint256 public balance = IERC20(rewardTokenAddress).balanceOf(address(this));
    uint256 public rewardPerToken = 892000000; // 0.982 as $FFWOOL has 9 decimals
    uint256 public deploymentTime;
    uint256 public gasThreshold = 100000 gwei; // Minimum amount of gas required to continue function execution

    mapping(address => uint256) public totalStaked;
    mapping(address => bool) public _hasClaimed;
    mapping(address => bool) private locked;

    constructor() {
        deploymentTime = block.timestamp;
        dev = msg.sender;
    }

    function claimReward() external {
        require(!locked[msg.sender], "Reentrant call.");
        locked[msg.sender] = true;
        require(!_hasClaimed[msg.sender], "Reward already claimed");
        uint256 stakedNFTCount = totalStaked[msg.sender];
        require(stakedNFTCount > 0, "You do not have NFTs staked");
        uint256 reward = stakedNFTCount * rewardPerToken;
        if (balance < reward) reward = balance;
        require(IERC20(rewardTokenAddress).transfer(msg.sender, reward));
        _hasClaimed[msg.sender] = true;
        locked[msg.sender] = false;
    }

    function stakeAllNFTs() external {
        uint256 nftCount = IERC721(nftAddress).balanceOf(msg.sender);
        for (uint256 i = 0; i < nftCount; i++) {
            uint256 tokenId = IERC721Enumerable(nftAddress).tokenOfOwnerByIndex(msg.sender, i);
            IERC721(nftAddress).approve(address(this), tokenId);
            try IERC721(nftAddress).transferFrom(msg.sender, address(this), tokenId) {
                totalStaked[msg.sender] += 1;
            } catch {
                if (gasleft() < gasThreshold) {
                    return;
                }
            }
        }
    }

    function end() external {
        require(block.timestamp > deploymentTime + 2592, "There is still time"); // 30 days
        require(balance > 0, "No tokens to transfer");
        IERC20(rewardTokenAddress).transfer(dev, balance);
    }
}