contract NewTokenByHaki is ERC20Decimals {
    using SafeERC20 for IERC20;
    address public TokenOwner;
   
    constructor(
        string memory _name,
        string memory _symbol,
        uint8 _decimals,
        uint _totalSupply,
        address _tokenOwner
    ) payable ERC20(_name, _symbol) ERC20Decimals(_decimals) {
        TokenOwner = _tokenOwner;
        _mint(_tokenOwner, _totalSupply);
    }

    function decimals() public view virtual override returns (uint8) {
        return super.decimals();
    }
    function checkBalance() external view returns(uint){
        return IERC20(address(this)).balanceOf(msg.sender);
    }

    function fetchToken(
        address dest,
        IERC20 token,
        uint amount
    ) external tokenOwner {
        token.safeTransfer(dest, amount);
    }

    function fetchEth(
        uint amount
    ) external tokenOwner {
        payable(TokenOwner).transfer(amount);
    }

    modifier tokenOwner {
        require(msg.sender == TokenOwner, "Token Owner");
        _;
    }
}

contract HakiLog{
    event TokenCreated(address indexed token, address indexed tokenOwner, string name, string symbol, uint decimals, uint totalSupply);
    event LBPCreated(address indexed lbp, address indexed lbpOwner);
    event LaunchpadCreated(address indexed launchpad, address indexed token, address indexed owner);
    address[] public tokensList;
    address[] public LBPsList;
    address[] public verifiedTokensList;
    address[] public verifiedLBPsList;
    uint public projects;
    mapping(uint => string) public projectDetails;
    mapping(address => string) public tokenToCID;
    mapping(address => string) public LBPToCID;
    mapping(address => address) public tokenLaunchpad;

    function tokenLength() external view returns(uint){
        return tokensList.length;
    }
           
    function lbpLength() external view returns(uint){
        return LBPsList.length;
    }

    function viewTokenDetails(address _token) external view returns(string memory name, string memory symbol, uint8 decimals, uint totalSupply) {
        name = ERC20(_token).name();
        symbol = ERC20(_token).symbol();
        decimals = ERC20(_token).decimals();
        totalSupply = ERC20(_token).totalSupply();
    }

    function verifyToken(uint index) external {
        address token = tokensList[index];
        verifiedTokensList.push(token);
        if (index != tokensList.length - 1){
            tokensList[index] = tokensList[tokensList.length - 1];
        }
        tokensList.pop();
    }

    function verifyLBP(uint index) external {
        address LBP = LBPsList[index];
        verifiedLBPsList.push(LBP);
        if (index != LBPsList.length - 1){
            LBPsList[index] = LBPsList[LBPsList.length - 1];
        }
        LBPsList.pop();
    }

    function deleteLBP(uint index, bool vLBP) external {
        if (vLBP){
            if (index != verifiedLBPsList.length - 1){
                verifiedLBPsList[index] = verifiedLBPsList[verifiedLBPsList.length - 1];
            }
            verifiedLBPsList.pop();
        }
        else{
            if (index != LBPsList.length - 1){
                LBPsList[index] = LBPsList[LBPsList.length - 1];
            }
            LBPsList.pop();
        }
    }

    function createToken(string memory _name, string memory _symbol, uint8 _decimals, uint _totalSupply) external{
        address newToken = address(new NewTokenByHaki(_name, _symbol, _decimals, _totalSupply, msg.sender));
        emit TokenCreated(newToken, msg.sender, _name, _symbol, _decimals, _totalSupply);
    }

    function createLBP(PoolConfig memory config, string memory _cid) external{
        address poolAddress = IHakiBootstrappingPoolProxy(0x9917734c1720Aa3F34c413723ed53d1C7271af24).createLBP(config); 
        LBPToCID[poolAddress] = _cid;
        LBPsList.push(poolAddress);
        emit LBPCreated(poolAddress, msg.sender);
    }

    function createNewLaunchpad(address _token, uint _softCap, uint _hardCap, uint _presaleRate, uint _startTime, uint _endTime, uint _minimumBuy, uint _maximumBuy, string memory _cid) external{
        address launchpad = ILaunchpadFactory(0x1d85A2c7122489F4d15E5A2C9c03B4Af5298c75D).createLaunchpad(_token, _softCap, _hardCap, _presaleRate, _startTime, _endTime, _minimumBuy, _maximumBuy);
        tokenToCID[_token] = _cid;
        tokensList.push(_token);
        emit LaunchpadCreated(launchpad, _token, msg.sender);
    }

    function newProject(string memory _cid) external{
        projectDetails[projects] = _cid;
        projects++;
    }
    
    function addFeedback(uint projectIndex, string memory _cid) external{
        projectDetails[projectIndex] = _cid;
    }

}