    ///@notice Provide liquidity in Pool contract
    ///@param poolAmounts amount in ref and main to provide
    ///@param exchanges exchangeRate of main and ref tokens
    ///@param ticks tick object containing ticks to provide liquidity into
    ///@return interaction Pool interaction that tracks main and ref provided and not provided
    function _provideLiquidity(
        DNMathUV3.Exchanges memory exchanges,
        PoolProvideAmounts memory poolAmounts,
        DNMathUV3.Ticks memory ticks
    ) private returns (PoolInteraction memory interaction) {
        address mPoolStrategy = poolStrategy;
        int256 amountMain$ = _formatAmountToUSD(
            asset(),
            int256(poolAmounts.main),
            exchanges.m
        );
        int256 amountRef$ = _formatAmountToUSD(
            address(refToken),
            int256(poolAmounts.ref),
            exchanges.r
        );
        if (amountMain$ > 1e14 && amountRef$ > 1e14) {
            //Both amounts to provide should be at least > 0.0001$
            mainToken().safeTransfer(mPoolStrategy, poolAmounts.main);
            refToken.safeTransfer(mPoolStrategy, poolAmounts.ref);
            (
                interaction.refProvided,
                interaction.mainProvided,
                interaction.mainNotProvided,
                interaction.refNotProvided
            ) = ILPStrategyUV3(mPoolStrategy).provideLiquidity(
                poolAmounts.main,
                poolAmounts.ref,
                ticks
            );
        } else {
            interaction.refProvided = 0;
            interaction.mainProvided = 0;
        }
    }

    /// @notice remove liquidity from Pool Strategy contract
    /// returns main and ref received from removing liquidity
    function _removeLiquidity()
        private
        returns (uint256 refReceived, uint256 mainReceived)
    {
        (refReceived, mainReceived) = ILPStrategyUV3(poolStrategy)
            .removeLiquidity();
    }

    function _formatAmountToUSD(
        address _token,
        int256 _amount,
        int256 _exchangeRate
    ) private view returns (int256 balanceInUSD) {
        unchecked {
            balanceInUSD =
                (_amount * _exchangeRate) /
                int256(10 ** IERC20(_token).decimals());
        }
    }

    ///@notice depending on whether dPool, dLoan and dColl are < 0 or > 0 supply/borrow collateral, supply/borrow pool liquidity
    /// look on whitepaper for more info
    ///@return mLeftovers leftover balance
    function _handleRebalanceCases(
        DNMathUV3.Deltas memory _deltas,
        DNMathUV3.SwapData memory _swapData,
        DNMathUV3.Exchanges memory _exchanges
    ) private returns (DNMathUV3.Leftovers memory mLeftovers) {
        uint256 mWithdrawalSum = withdrawalSum;
        unchecked {
            mLeftovers = leftovers;
            if (_swapData.refToMain) {
                //TEMPORARY swapAmount here is actually the amount received from the rebalancer
                mLeftovers.main += uint128(uint256((_swapData.value)));
            } else {
                //TEMPORARY swapAmount here is actually the amount received from the rebalancer
                mLeftovers.ref += uint128(uint256((_swapData.value)));
            }
            if (currentRound > 0) {
                (
                    uint256 refReceived,
                    uint256 mainReceived
                ) = _removeLiquidity();
                mLeftovers.ref += uint128(refReceived);
                mLeftovers.main += uint128(mainReceived);
            }
            //1)Put tokens in (Mint collateral or Repay Borrow)
            //2)Pull tokens out (Borrow or Redeem collateral)
            if (_deltas.dLoan > 0) {
                mLeftovers.ref -= uint128(
                    _repayBorrow(
                        _deltas.dLoan,
                        _exchanges.r,
                        mLeftovers.ref,
                        uint256(_swapData.swapAmount),
                        _swapData.refToMain
                    )
                );
            }
            if (_deltas.dColl > 0) {
                mLeftovers.main -= uint128(
                    _supplyCollateral(
                        _deltas.dColl,
                        mLeftovers,
                        _exchanges,
                        uint256(_swapData.swapAmount),
                        _swapData.refToMain,
                        mWithdrawalSum
                    )
                );
            }
            if (_deltas.dColl < 0) {
                mLeftovers.main += uint128(
                    _withdrawCollateral(
                        _deltas.dColl,
                        _exchanges.m,
                        mLeftovers.main,
                        uint256(_swapData.swapAmount),
                        _swapData.refToMain,
                        mWithdrawalSum
                    )
                );
            }
            if (_deltas.dLoan < 0) {
                mLeftovers.ref += uint128(
                    _borrow(
                        _deltas.dLoan,
                        _exchanges.r,
                        mLeftovers.ref,
                        uint256(_swapData.swapAmount),
                        _swapData.refToMain
                    )
                );
            }
        }
        ///@dev Return Money to Rebalancer to repay flashloan
        if (_swapData.refToMain) {
            mLeftovers.ref -= uint128(uint256((_swapData.swapAmount)));
            refToken.safeTransfer(rebalancer, uint256(_swapData.swapAmount));
        } else {
            mLeftovers.main -= uint128(uint256((_swapData.swapAmount)));
            mainToken().safeTransfer(rebalancer, uint256(_swapData.swapAmount));
        }

        ///@dev Provide Liquidity
        PoolInteraction memory poolInteraction = _provideLiquidity(
            _exchanges,
            PoolProvideAmounts(
                uint256(mLeftovers.ref) - (mLeftovers.ref > 1 ? 1 : 0),
                uint256(mLeftovers.main) -
                    mWithdrawalSum -
                    (uint256(mLeftovers.main) - mWithdrawalSum > 1 ? 1 : 0)
            ),
            _swapData.ticks
        );
        mLeftovers.main -= uint128(poolInteraction.mainProvided);
        mLeftovers.ref -= uint128(poolInteraction.refProvided);

        //Update Storage Variables
        //We do need to check for overflow here
        leftovers = DNMathUV3.Leftovers({
            main: mLeftovers.main - uint128(mWithdrawalSum),
            ref: mLeftovers.ref
        });
        unchecked {
            if (mWithdrawalSum != 0) {
                //Reset withdrawal sum if needed
                withdrawalSum = 0;
            }
            //Advance round
            currentRound++;
            if (rebalanceTimer != 0) {
                //Reset rebalanceTimer if needed
                rebalanceTimer = 0;
            }
        }
        IShortStrategy(shortStrategy).updateStoredBalance();
        emit Rebalanced(_swapData.currentMu);
    }

