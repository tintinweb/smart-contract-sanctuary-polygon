    ///@notice K is a variable used by vault math to calculate swap amounts
    ///@dev Assuming equal decimals on main/ref then k = (poolMainReserves/poolRefReserves)/ (refUSDPrice/mainUSDPrice)
    function _getK(
        bool _futureK,
        SwapDataArgs memory _args
    ) internal view returns (int256 k) {
        ILPStrategyUV3.Deposit memory currentDeposit = ILPStrategyUV3(
            _args.strategies.pool
        ).getCurrentDeposit();
        IUniswapV3Pool pool = ILPStrategyUV3(_args.strategies.pool).pool();
        int256 decimalDifference = int256(10e18).pow(
            ((int256(uint256(IERC20(pool.token0()).decimals())) -
                int256(uint256(IERC20(pool.token1()).decimals()))) * 1e18)
        );
        //if vault hasn't been initialized then calculate bounds
        if (currentDeposit.tokenId == 0) {
            //based on current oracle price
            int256 oraclePrice = _getOraclePrice(
                _args.refToken,
                _args.mainToken,
                _args.exchanges
            );
            (int256 tickUpper, int256 tickLower) = _initializeBounds(
                oraclePrice,
                _args.boundParams.upperPercent,
                _args.boundParams.lowerPercent
            );
            currentDeposit.tickLower = convertToTick(
                tickLower.fromInt().div(decimalDifference).toInt(),
                pool
            );

            currentDeposit.tickUpper = convertToTick(
                tickUpper.fromInt().div(decimalDifference).toInt(),
                pool
            );
            //if _futureK then calculate new bounds based on current ones
        } else if (_futureK) {
            IUniswapV3Pool uniswapPool = ILPStrategyUV3(_args.strategies.pool)
                .pool();
            Ticks memory ticks = getTicksInUnitsOfMain(
                uniswapPool,
                _args.refToken,
                _args.mainToken,
                _args.exchanges,
                currentDeposit,
                _args.boundParams
            );

            currentDeposit.tickLower = convertToTick(
                int256(ticks.switchingBounds ? ticks.futureLower : ticks.lower)
                    .fromInt()
                    .div(decimalDifference)
                    .toInt(),
                pool
            );
            currentDeposit.tickUpper = convertToTick(
                int256(ticks.switchingBounds ? ticks.futureUpper : ticks.upper)
                    .fromInt()
                    .div(decimalDifference)
                    .toInt(),
                pool
            );
        }

        //Simulate Ratios at specified ticks
        (
            uint256 refReserves,
            uint256 mainReserves
        ) = _getTokenAmountsInPosition(
                pool.token0(),
                currentDeposit.tickLower,
                currentDeposit.tickUpper,
                1e18,
                pool,
                _args.mainToken
            );

        int256 mainPrice = _args.exchanges.m;
        int256 refPrice = _args.exchanges.r;
        if (mainReserves == 0) {
            mainReserves = 1;
        }
        if (refReserves == 0) {
            refReserves = 1;
        }

        /**
        Assuming equal decimals on main & ref tokens then
        k = (poolMainReserves/poolRefReserves) / (refUSDPrice/mainUSDPrice)
         */

        k = (
            int256(
                mainReserves * 10 ** (18 - IERC20(_args.mainToken).decimals())
            ).fromInt().div(
                    int256(
                        refReserves *
                            10 ** (18 - IERC20(_args.refToken).decimals())
                    ).fromInt()
                )
        ).div(refPrice.fromInt().div(mainPrice.fromInt()));
    }

    ///@notice calculate new bounds given an upper and lower percent multipliers
