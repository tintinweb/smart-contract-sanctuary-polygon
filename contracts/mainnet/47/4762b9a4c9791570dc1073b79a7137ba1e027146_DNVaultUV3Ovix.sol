    function calculateDailyBreakeven(
        SwapDataArgs memory _args
    ) public view returns (int256 dailyBreakeven) {
        if (_args.rP < 1e18) {
            _args.rP = 1e18;
        }
        (
            ,
            ,
            int256 gamma,
            int256 theta,
            int256 mu0,
