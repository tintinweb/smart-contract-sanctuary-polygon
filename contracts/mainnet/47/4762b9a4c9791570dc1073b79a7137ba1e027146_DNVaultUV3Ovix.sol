    ///@notice repay borrow on Hedge Contract
    ///@param _amount amount in ref token to repay
    ///@param _exchangeRate exchangeRate of Ref Token
    ///@param _refAvailable actual ref token available in walleta
    ///@param _swapAmount swap amount on rebalance operation
    ///@param _refToMain whether swapAmount was refToMain or mainToRef
    ///@dev all extra params after exchange rate are passed in order to ensure that we will have enough funds to return to flashloaner
    /// or to give back to users that queued a withdrawal in case of high slippage
    function _repayBorrow(
        int256 _amount,
        int256 _exchangeRate,
        uint256 _refAvailable,
        uint256 _swapAmount,
        bool _refToMain
    ) private returns (uint256 amountToRepay) {
        unchecked {
            IShortStrategy mShortStrategy = IShortStrategy(
                address(shortStrategy)
            );
            uint256 amountInTokens = uint256(
                (abs(_amount) * 1e18) / (_exchangeRate)
            ) / (10 ** (18 - refToken.decimals()));
            amountToRepay = uint256(
                _refAvailable < amountInTokens ? _refAvailable : amountInTokens
            );
            if (_refToMain && _refAvailable - amountToRepay < _swapAmount) {
                ///@dev if too much slippage on swap and not enough funds to return swapAmount then repay a bit less
                amountToRepay -= _swapAmount - (_refAvailable - amountToRepay);
            }
            refToken.safeTransfer(address(mShortStrategy), amountToRepay);
            mShortStrategy.repayBorrow(amountToRepay);
        }
    }

    ///@notice supply collateral on Hedge Contract
    ///@dev Some of this params are passed only to encode a bytes object to flashloan function
    ///@param _amount amount of main token in USD to supply * 1e18
    ///@param _leftovers main and ref tokens available in wallet
    ///@param _exchanges main and ref token usd prices * 1e18
    ///@param _swapAmount swap amount on rebalance operation
    ///@param _refToMain whether swapAmount was refToMain or mainToRef
    ///@param _withdrawalSum sum of all queued withdrawals
    ///@dev all extra params after exchange rate are passed in order to ensure that we will have enough funds to return to flashloaner
    /// or to give back to users that queued a withdrawal in case of high slippage
    function _supplyCollateral(
        int256 _amount,
        DNMathUV3.Leftovers memory _leftovers,
        DNMathUV3.Exchanges memory _exchanges,
        uint256 _swapAmount,
        bool _refToMain,
        uint256 _withdrawalSum
    ) private returns (uint256 amountToSupply) {
        unchecked {
            address mShortStrategy = shortStrategy;
            IERC20 mMainToken = mainToken();
            uint256 amountInTokens = ((uint256(abs(_amount)) * 1e18) /
                uint256(_exchanges.m)) / 10 ** (18 - mMainToken.decimals());
            amountToSupply = uint256(
                (_leftovers.main) < amountInTokens
                    ? (_leftovers.main)
                    : amountInTokens
            );
            uint256 mainToReturn = !_refToMain ? _swapAmount : 0;
            uint256 amountNeededAfterRebal = _withdrawalSum + mainToReturn;
            if (_leftovers.main - amountToSupply < amountNeededAfterRebal) {
                ///@dev if too much slippage on swap and not enough funds to return swapAmount or give back withdrawals then supply a bit less
                amountToSupply -=
                    amountNeededAfterRebal -
                    (_leftovers.main - amountToSupply);
            }

            mMainToken.safeTransfer(mShortStrategy, amountToSupply);
            IShortStrategy(mShortStrategy).supplyCollateral(amountToSupply);
        }
    }

    ///@notice Withdraw collateral from Hedge Contract
    ///@param _amount amount in main token to withdraw
    ///@param _exchangeRate exchangeRate of mainToken
    ///@param _mainLeft current mainToken balance in wallet
    ///@param _swapAmount swap amount on rebalance operation
    ///@param _refToMain whether swapAmount was refToMain or mainToRef
    ///@param _withdrawalSum sum of all queued withdrawals
    ///@dev all extra params after exchange rate are passed in order to ensure that we will have enough funds to return to flashloaner
    /// or to give back to users that queued a withdrawal in case of high slippage
    function _withdrawCollateral(
        int256 _amount,
        int256 _exchangeRate,
        uint256 _mainLeft,
        uint256 _swapAmount,
        bool _refToMain,
        uint256 _withdrawalSum
    ) private returns (uint256 amountInTokens) {
        unchecked {
            uint256 mainToReturn = !_refToMain ? _swapAmount : 0;
            uint256 amountNeededAfterRebal = mainToReturn + _withdrawalSum;
            amountInTokens =
                (uint256(abs(_amount) * 1e18) / uint256(_exchangeRate)) /
                10 ** (18 - mainToken().decimals());
            if (_mainLeft + amountInTokens < amountNeededAfterRebal) {
                ///@dev if too much slippage on swap and not enough funds to return swapAmount or give back withdrawals then withdraw a bit more
                amountInTokens +=
