    /// @notice Convert a price into a tick
    /// @dev we have to round it up/down to the tick spacing
    /// @param _priceInUnits price in units of token1.
    /// @param _pool uniswap pool (to get it's tick spacing)
    /// @return tick tick number
    function convertToTick(
        int256 _priceInUnits,
        IUniswapV3Pool _pool
    ) public view returns (int24 tick) {
        int24 tickSpacing = _pool.tickSpacing();
        //Calculate Tick
        tick = int24(
            int256(_priceInUnits.log10().div(int256(1.0001e18).log10())).toInt()
        );
        //Round up|down depending on pool's tickSpacing
        unchecked {
            int256 remainer = tick % tickSpacing;
            if (remainer != 0) {
                tick = (tick / tickSpacing) * tickSpacing;
                if (remainer > 0 && remainer > tickSpacing / 2) {
                    tick += tickSpacing;
                }
                if (remainer < 0 && remainer < -tickSpacing / 2) {
                    tick -= tickSpacing;
                }
            }
        }
    }

