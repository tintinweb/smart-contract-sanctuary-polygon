    ///@notice Calculate pool APY
    ///@dev all naming is based on white paper's naming
    ///@dev formula can be seen on white paper
    ///@return rP pool APY with 18 decimals
    function calculatePoolRate(
        SwapDataArgs memory _args
    ) external view returns (int256 rP) {
        int256 pi;
        int256 rho;
        int256 piH;
        {
            (uint256 refTotal, uint256 mainTotal) = ILPStrategyUV3(
                _args.strategies.pool
            ).getCurrentPositionBalances();
            int256 currentPoolPrice = _args.refToken < _args.mainToken
                ? _args.ticks.current
                : int256(1e18).div(_args.ticks.current);
            pi =
                int256(
                    mainTotal * 10 ** (18 - IERC20(_args.mainToken).decimals())
                ) +
                ((int256(
                    refTotal * 10 ** (18 - IERC20(_args.refToken).decimals())
                ) * currentPoolPrice) / 1e18);
            piH =
                int256(
                    _args.lastRebal.mainInPool *
                        int256(10 ** (18 - IERC20(_args.mainToken).decimals()))
                ) +
                ((int256(
                    _args.lastRebal.refInPool *
                        int256(10 ** (18 - IERC20(_args.refToken).decimals()))
                ) * currentPoolPrice) / 1e18);
            rho = currentPoolPrice.div(int256(_args.lastRebal.poolPrice));
        }
        (int256 alpha, int256 beta, , , , ) = _calculateHelperVariables(
            _args,
            Scenario.POOL_RATE
        );
        rP = pi
            .div(piH)
            .mul(
                (1e18 - int256(1e18).div(beta)).mul(
                    (rho + ((1e18 - alpha).div(1e18 - int256(1e18).div(beta))))
                        .div(
                            int256(2e18).mul(rho.sqrt()) -
                                alpha -
                                (rho.div(beta))
                        )
                )
            )
            .pow(
                int256(1 days).fromInt().div(
                    (int256(block.timestamp) - _args.lastRebal.timestamp)
                        .fromInt()
                )
            );
    }

    ///@notice Calculate Variables used on HedgeX and Rebalance Threshold Functions
    ///@param _args SwapDataArgs
    ///@param _scenario We use some or all of these variables on depending on which scenario is passed.
    ///@return alpha Variable to be used on Swap Data Calculations
    ///@return beta Variable to be used on Swap Data Calculations
    ///@return gamma Variable to be used on Swap Data Calculations
    ///@return theta Variable to be used on Swap Data Calculations
    ///@return muT Variable to be used on Swap Data Calculations
    ///@return muHT Variable to be used on Swap Data Calculations
    function _calculateHelperVariables(
        SwapDataArgs memory _args,
        Scenario _scenario
    )
        private
        pure
        returns (
            int256 alpha,
            int256 beta,
            int256 gamma,
            int256 theta,
            int256 muT,
            int256 muHT
        )
    {
        /**
         Depending on Scenario. Price will be:
         1. Current Oracle Price
         2. Oracle Price at last Rebal
         3. Pool Price Ref/Main at last Rebal
       */
        int256 price;
        if (_scenario == Scenario.CURRENT) {
            price = _args.exchanges.r.fromInt().div(
                _args.exchanges.m.fromInt()
            );
        }
        if (_scenario == Scenario.LAST_REBAL) {
            price = (_args.lastRebal.poolPrice).div(
                _args.lastRebal.storedMu + 1e18
            );
        }
        if (_scenario == Scenario.POOL_RATE) {
            price = _args.lastRebal.poolPrice;
        }
        // If scenario is Current. Use ticks of new bounds if we are moving to them
        // If we are not moving bounds then ticks.futureUpper will be 0
        if (_scenario == Scenario.CURRENT && _args.ticks.switchingBounds) {
            //Check for token0-token1 and main-ref token
            int256 priceToUse = _args.refToken < _args.mainToken
                ? price
                : int256(1e18).div(price);
            // β from white paper
            beta = _args.ticks.futureUpper.div(priceToUse).sqrt();
            // α from white paper
            alpha = _args.ticks.futureLower.div(priceToUse).sqrt();
        } else {
            //Check for token0-token1 and main-ref token
            int256 priceToUse = _args.refToken < _args.mainToken
                ? price
                : int256(1e18).div(price);
            // β from white paper
            beta = _args.ticks.upper.div(priceToUse).sqrt();
            // α from white paper
            alpha = _args.ticks.lower.div(priceToUse).sqrt();
        }
        // γ from white paper
        gamma = (1e18 + (alpha.mul(beta))).div(beta);
        if (_scenario == Scenario.LAST_REBAL) {
            // µt from white paper
            muT = _args.lastRebal.storedMu;
        } else {
            //Check for token0-token1 and main-ref token
            int256 currentPoolPrice = _args.refToken < _args.mainToken
                ? _args.ticks.current
                : int256(1e18).div(_args.ticks.current);
            muT = currentPoolPrice.div(price) - 1e18;
        }
        // muT will now be ˆµt from white paper
        muHT = (int256(2e18) + (muT)).div((int256(1e18) + (muT)).sqrt());
        // Θ on white paper
        theta = int256(2e18).mul(beta).mul(
            (muHT - gamma).div(beta.mul(muHT) - 2e18)
        );
    }

    ///@notice Calculate Deltas
    ///@return Deltas Containing dPool, dLoan and dColl
    function calculateDeltas(
        int256 totalPortfolio$,
        Balances memory balances,
        Hedges memory hedges,
        int256 e
    ) private pure returns (Deltas memory) {
        unchecked {
            //Delta pool
            int256 dPool = (1e18 - hedges.hedgeX).mul(totalPortfolio$ - e) -
                balances.p;
            //Delta Collateral
            int256 dColl = hedges.hedgeX.mul(totalPortfolio$ - e).div(
                1e18 - hedges.hedgeLTV
            ) - balances.c;
            //Delta Loan
            int256 dLoan = balances.b -
                hedges
                    .hedgeLTV
                    .div(1e18 - hedges.hedgeLTV)
                    .mul(hedges.hedgeX)
                    .mul(totalPortfolio$ - e);

            return Deltas(dPool, dColl, dLoan);
        }
    }

    ///@notice Calculate data needed to perform a rebalance
    ///@dev this is the main function that the Vault will call
    function calculateSwapData(
        SwapDataArgs memory args
    )
        public
        view
        returns (
            SwapData memory swapData,
            Deltas memory deltas,
            Hedges memory,
            int256
        )
    {
        {
            int256 portfolio;
            int256 k;

            (args.hedges.hedgeX, swapData.currentMu) = calculateX(args);
            //wM = main left in Wallet $ (following white paper naming convention)
            int256 wM = _formatAmountToUSD(
                args.mainToken,
                int256(uint256(args.leftovers.main)),
                args.exchanges.m
            );
            ///wR = ref left in Wallet $ (following white paper naming convention)
            int256 wR = _formatAmountToUSD(
                args.refToken,
                int256(uint256(args.leftovers.ref)),
                args.exchanges.r
            );
            //Substract withdrawals
            wM -= _formatAmountToUSD(
                args.mainToken,
                int256(args.withdrawalSum),
                args.exchanges.m
            );
            //Total Portfolio $
            portfolio =
                args.balances.p +
                args.balances.c -
                args.balances.b +
                wM +
                wR;
            ///USE NEW K ON μR and μM and OLD K for all others
            k = _getK(true, args);
            //μR on white paper
            int256 pR = (1e18 - args.hedges.hedgeX).div((1e18 + k)) -
                (args.hedges.hedgeX.mul(args.hedges.hedgeLTV)).div(
                    1e18 - args.hedges.hedgeLTV
                );

            // μM on white paper
            int256 pM = 1e18 - pR;
            k = _getK(false, args);
            // dR = deltaRef.
            int256 dR = wR -
                (args.balances.b +
                    ((pR * portfolio) / 1e18) -
                    (args.balances.p * 1e18) /
                    (1e18 + k));
            // dM = deltaMain

            int256 dM = 0 - dR;
            swapData.refToMain = dR > dM;
            if (dR > dM) {
                swapData.swapAmount =
                    (dR * 1e18) /
                    (1e18 - ((args.fees * pR) / 1000));
                //0,5% max allowed slippage when testing
                swapData.minAmountOut =
                    ((((swapData.swapAmount * 1e36) / args.exchanges.m) /
                        int256(
                            10 ** (36 - IERC20(args.mainToken).decimals())
                        )) * 995) /
                    1000;
                //To avoid stack to deep -> shadowing K which now will be ε from white paper (Net Portfolio Losses)
                k = (args.fees * swapData.swapAmount) / 1000;
                //Convert swapAmount to refTokens
                swapData.swapAmount =
                    ((swapData.swapAmount * 1e36) / args.exchanges.r) /
                    int256(10 ** (36 - IERC20(args.refToken).decimals()));
            } else {
                swapData.swapAmount =
                    (dM * 1e18) /
                    (1e18 - ((args.fees * pM) / 1000));
                //0,5% allowed slippage when testing
                swapData.minAmountOut =
                    ((((swapData.swapAmount * 1e36) / args.exchanges.r) /
                        int256(10 ** (36 - IERC20(args.refToken).decimals()))) *
                        995) /
                    1000;
                //To avoid stack to deep -> shadowing K which now will be ε from white paper (Net Portfolio Losses)
                k = (args.fees * swapData.swapAmount) / 1000;
                //Convert swapAmount to mainTokens
                swapData.swapAmount =
                    ((swapData.swapAmount * 1e36) / args.exchanges.m) /
                    int256(10 ** (36 - IERC20(args.mainToken).decimals()));
            }
            //calculate deltas
            deltas = calculateDeltas(portfolio, args.balances, args.hedges, k);
        }
        swapData.ticks = args.ticks;
        //Calculate dailyBreakeven
        //If args.balances.c == 0 it means we haven't initialized the strategy yet (we can't do anything without collateral)
        int256 dailyBreakeven = args.balances.c > 0 &&
            //If args.lastRebal.poolPrice == 0 it means we haven't rebalanced yet
            args.lastRebal.poolPrice > 0 &&
            //If hedgeLTV == 0 it means we have all our money as so collateral so no need to rebalance
            args.hedges.hedgeLTV > 0 //If all these are met, that means the strategy is running normally, so call calculateDailyBreakeven()
            ? calculateDailyBreakeven(args) //else the strategy is either not started or in panic mode (all portfolio as collateral) //so we won't care about dailyBreakeven
            : int256(0);

        return (swapData, deltas, args.hedges, dailyBreakeven);
    }

