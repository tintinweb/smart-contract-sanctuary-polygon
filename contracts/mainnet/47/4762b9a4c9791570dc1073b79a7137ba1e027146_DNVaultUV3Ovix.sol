    function _initializeBounds(
        int256 oraclePrice,
        int256 upperPercent,
        int256 lowerPercent
    ) internal pure returns (int256 tickUpper, int256 tickLower) {
        tickUpper = (oraclePrice * upperPercent) / 1e18;
