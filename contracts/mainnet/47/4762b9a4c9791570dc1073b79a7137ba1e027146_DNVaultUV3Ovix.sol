    /// @notice Queue a Withdrawal to take into account when Rebalancing
    /// @param _amount amount to queue
    /// @param _userExit boolean to decide if _amount should be all or not
    /// @dev if _userExit = true, then _amount becomes irrelevant. All user's shares will be burnt.
    function queueWithdrawal(
        uint256 _amount,
        bool _userExit
    ) public updateHedgeStoredBalance collectFees {
        Withdrawal memory userWithdrawal = userWithdrawals[msg.sender];
        uint256 sharesToClaim = convertToShares(_amount);
        uint256 userShares = balanceOf(msg.sender);
        if (_userExit) {
            sharesToClaim = userShares;
            _amount = convertToAssets(sharesToClaim);
        }
        if (sharesToClaim > userShares) {
            revert V_CLAIM_AMOUNT_TOO_HIGH();
        }
        if (userWithdrawal.amount > 0 && userWithdrawal.round <= currentRound) {
            revert V_MUST_WITHDRAW_PENDING_AMOUNTS_FIRST();
        }
        if (rebalanceTimer == 0) {
            rebalanceTimer = block.timestamp + 1 days;
        }
        userWithdrawals[msg.sender] = Withdrawal(
            uint128(_amount + userWithdrawal.amount),
            // uint128(currentRound + 1)
            uint128(currentRound)
        );
        withdrawalSum += _amount;
        if (withdrawalSum > (_balance() * 9) / 10) {
            revert V_TOO_MANY_WITHDRAWALS_THIS_ROUND_WAIT_TILL_NEXT_ONE();
        }
        _burn(msg.sender, sharesToClaim);
        emit QueueWithdrawal(msg.sender, _amount);
    }

    /// @notice Retrieve user information and if round has already passed (meaning that a rebalance has happened) then withdraw funds.
    /// @dev Params won't matter. They are place holders to override OZ function, so any uin256 and addresses will work.
    /// @return amountWithdrawn actual amount Withdrawn
    function withdraw(
        uint256,
        address,
        address
    )
        public
        override
        updateHedgeStoredBalance
        returns (uint256 amountWithdrawn)
    {
        Withdrawal memory userWithdrawal = userWithdrawals[msg.sender];
        uint256 claimAmount = userWithdrawal.amount;
        uint256 claimRound = userWithdrawal.round;
        if (claimAmount == 0) revert V_NO_CLAIM_AMOUNT();
        //if (claimRound > currentRound) revert V_CANT_CLAIM_YET();
        delete userWithdrawals[msg.sender];
        withdrawalSum -= claimAmount;
        leftovers.main -= uint128(claimAmount);
        amountWithdrawn = DNBaseVaultUV3Ovix.withdraw(
            claimAmount,
            msg.sender,
            msg.sender
        );
    }

    ///@notice get exchange rates for ref and main token
    ///@return DNMathUV3.Exchanges struct
    function getExchangeRates()
        public
        view
        returns (DNMathUV3.Exchanges memory)
    {
        (uint256 eR, uint256 eM) = IShortStrategy(shortStrategy)
            .getOracleExchangeRates();
        return DNMathUV3.Exchanges(int256(eR), int256(eM));
    }

    ///@notice get current pool's fee
    ///@return poolFee pool fee
    function getPoolFee() public view returns (uint24 poolFee) {
        poolFee = ILPStrategyUV3(poolStrategy).getPoolFee();
    }

    //************ * ฅ^•ﻌ•^ฅ  𝑬𝑿𝑻𝑬𝑹𝑵𝑨𝑳  ฅ^•ﻌ•^ฅ * ************//

    ///@notice increase max amount that can be deposited on vault
    function increaseVaultCap(uint256 _newCap) external onlyOwner {
        if (_newCap < vaultCap) revert V_CAP_CANNOT_BE_DECREASED();
        vaultCap = _newCap;
        emit IncreaseCap(_newCap);
    }

    ///@notice function to get current Total Balance taking into account updated positions on pool + hedge
    ///@return current balance in USD with 18 decimals
    function getCurrentPosition()
        external
        updateHedgeStoredBalance
        returns (uint256)
    {
        DNMathUV3.Exchanges memory exchanges = getExchangeRates();
        uint256 vaultBalance = IShortStrategy(shortStrategy)
            .getCurrentPosition() +
            IBaseStrategy(poolStrategy).denominatedBalance();
        DNMathUV3.Leftovers memory mLeftovers = leftovers;
        return
            vaultBalance +
            uint256(
                _formatAmountToUSD(
                    asset(),
                    int256(uint256(mLeftovers.main)),
                    exchanges.m
                ) +
                    _formatAmountToUSD(
                        address(refToken),
                        int256(uint256(mLeftovers.ref)),
                        exchanges.r
                    )
            );
    }

    //************ * ฅ^•ﻌ•^ฅ  𝑰𝑵𝑻𝑬𝑹𝑵𝑨𝑳  ฅ^•ﻌ•^ฅ * ************//

    ///@notice check for changes on Liquidation LTV and if so, call a rebalance
    ///@return changedHedges boolean signifying if hedgeLTV was changed on any asset
    function _checkHedges() internal returns (bool changedHedges) {
        int256 ltvFromMarket = int256(
            IShortStrategy(shortStrategy).getHedgeLTV()
        );
        if (ltvFromMarket != hedgeLTV) {
            hedgeLTV = ltvFromMarket;
            changedHedges = true;
        }
    }

    ///@notice get Vault's balance in units of Main Token
    ///@dev this WON'T be accurate unless the stored hedge balance is updated before. Therefore we only use this function with functions
    /// that contain the updateHedgeStoredBalance modifier
    function _balance() internal view virtual override returns (uint256) {
        DNMathUV3.Exchanges memory exchanges = getExchangeRates();
        DNMathUV3.Leftovers memory mLeftovers = leftovers;
        uint256 refLeftInVault$ = uint256(
            _formatAmountToUSD(
                address(refToken),
                int256(uint256(mLeftovers.ref)),
                exchanges.r
            )
        );
        uint256 refInUnitsOfMain = (refLeftInVault$ *
            10 ** mainToken().decimals()) / uint256(exchanges.m);
        uint256 vaultBalance = IBaseStrategy(shortStrategy).balance() +
            IBaseStrategy(poolStrategy).balance();

        return vaultBalance + uint256(mLeftovers.main) + refInUnitsOfMain;
    }

    function calculatePoolRate(
        DNMathUV3.Exchanges memory _exchanges,
        DNMathUV3.LastRebalData memory _lastRebalData,
        DNMathUV3.BoundParams memory _boundParams
    ) external returns (int256 poolRate) {
        poolRate = DNMathUV3.calculatePoolRate(
            getSwapDataArgs(_exchanges, _lastRebalData, _boundParams, 0)
        );
    }

    ///@notice check whether a rebalance is needed.
    ///@dev a rebalance can be triggered by: Change in Ref Asset Price, change in Liquidation LTV
    /// or if 24hs have passed without a rebalance and a user has a pending withdrawal.
    ///Call with Static call
    function shouldRebalance(
        DNMathUV3.LastRebalData memory _lastRebalData,
        DNMathUV3.BoundParams memory _boundParams,
        int256 _rP
    )
        external
        returns (
            bool rebalanceNecessary,
            DNMathUV3.SwapData memory swapData,
            DNMathUV3.Deltas memory deltas,
            DNMathUV3.Exchanges memory exchanges,
            DNMathUV3.Hedges memory hedges,
            int256 dailyBreakeven
        )
    {
        exchanges = getExchangeRates();
        (swapData, deltas, hedges, dailyBreakeven) = _calculateSwapData(
            exchanges,
            _lastRebalData,
            _boundParams,
            _rP
        );

        rebalanceNecessary =
            swapData.ticks.switchingBounds ||
            IShortStrategy(shortStrategy).isCloseToLTV() ||
            _checkHedges() ||
            ((rebalanceTimer != 0 && rebalanceTimer <= block.timestamp));
    }

    ///@notice calculate amount to swap to submit to offchain aggregator together with current Deltas.
    ///@param _exchanges Exchanges struct
    ///@param _lastRebalData LastRebalData struct
    ///@param _boundParams Bound params struct
    ///@param _rP Pool daily rate with 18 decimals
    function _calculateSwapData(
        DNMathUV3.Exchanges memory _exchanges,
        DNMathUV3.LastRebalData memory _lastRebalData,
        DNMathUV3.BoundParams memory _boundParams,
        int256 _rP
    )
        internal
        returns (
            DNMathUV3.SwapData memory swapData,
            DNMathUV3.Deltas memory deltas,
            DNMathUV3.Hedges memory,
            int256
        )
    {
        return
            getSwapDataArgs(_exchanges, _lastRebalData, _boundParams, _rP)
                .calculateSwapData();
    }

    ///@notice Get an object to pass for DNMathUV3 functions
    function getSwapDataArgs(
        DNMathUV3.Exchanges memory _exchanges,
        DNMathUV3.LastRebalData memory _lastRebalData,
        DNMathUV3.BoundParams memory _boundParams,
        int256 _rP
    ) public returns (DNMathUV3.SwapDataArgs memory args) {
        DNMathUV3.Hedges memory hedges = DNMathUV3.Hedges(
            0,
            int256(IShortStrategy(shortStrategy).getHedgeLTV())
        );
        DNMathUV3.Balances memory balances = DNMathUV3.Balances(
            int256(IBaseStrategy(poolStrategy).denominatedBalance()),
            int256(IShortStrategy(shortStrategy).getCurrentCollateral()),
            int256(IShortStrategy(shortStrategy).getCurrentBorrow())
        );
        args = DNMathUV3.SwapDataArgs({
            hedges: hedges,
            exchanges: _exchanges,
            balances: balances,
            ticks: DNMathUV3.getTicksInUnitsOfMain(
                ILPStrategyUV3(poolStrategy).pool(),
                address(refToken),
                asset(),
                _exchanges,
                ILPStrategyUV3(poolStrategy).getCurrentDeposit(),
                _boundParams
            ),
            leftovers: leftovers,
            lastRebal: _lastRebalData,
            strategies: DNMathUV3.Strategies({
                pool: poolStrategy,
                hedge: shortStrategy
            }),
            withdrawalSum: withdrawalSum,
            fees: 5,
            mainToken: asset(),
            refToken: address(refToken),
            boundParams: _boundParams,
            rP: _rP
        });
    }

    function _deposit(uint256 _amount) internal override {
        leftovers.main += uint128(_amount);
        if (rebalanceTimer == 0) {
            rebalanceTimer = block.timestamp + 1 days;
        }
    }

    function _exit() internal override {
        IBaseStrategy(poolStrategy).exit();
        // Transfer Ref Balance to Hedge to repay borrow
        IERC20 mMainToken = mainToken();
        IERC20 mRefToken = refToken;
        address mShortStrategy = address(shortStrategy);

        mMainToken.transfer(
            mShortStrategy,
            mMainToken.balanceOf(address(this))
        );
        mRefToken.transfer(mShortStrategy, mRefToken.balanceOf(address(this)));
        IBaseStrategy(mShortStrategy).exit();

        mMainToken.safeTransfer(
            msg.sender,
            mMainToken.balanceOf(address(this))
        );
        mRefToken.safeTransfer(msg.sender, mRefToken.balanceOf(address(this)));
        leftovers = DNMathUV3.Leftovers(0, 0);
    }

    //************ * ฅ^•ﻌ•^ฅ  𝑷𝑹𝑰𝑽𝑨𝑻𝑬  ฅ^•ﻌ•^ฅ * ************//

    function _collectFees() private {
        // Management Fees;
        unchecked {
            Fees memory mFees = fees;
            if (lastTimeMgmtFeesCollected == 0) {
                lastTimeMgmtFeesCollected = block.timestamp;
            }
            uint256 sharesToMint;
            if (mFees.mgmt > 0) {
                int256 rate = (1e18 + int256(mFees.mgmt)).pow(
                    0.000000031709792E18
                );
                sharesToMint = uint256(
                    (rate.pow(
                        int256(block.timestamp - lastTimeMgmtFeesCollected)
                            .fromInt()
                    ) - 1e18).mul(int256(totalSupply()).fromInt()).toInt()
                );
            }
            //Upgrade storage even if mgmt fees are turned off so that once we start collecting them
            //We don't count from day 0, but from the day we turned mgmt fees on
            lastTimeMgmtFeesCollected = block.timestamp;
            //Performance Fees
            //Compare balance of user at the end of their last interaction with
            //their balance at the start of this interaction and take performance fees from that
            if (mFees.performance > 0) {
                uint256 userBalanceNow = convertToAssets(balanceOf(msg.sender));
                uint256 userBalanceLast = userBalanceLastInteraction[
                    msg.sender
                ];
                //If user is not doing its first interaction and their balance went up since last interaction
                if (userBalanceLast < userBalanceNow && userBalanceLast > 0) {
                    int256 amountInMainToMint = ((int256(userBalanceNow) -
                        int256(userBalanceLast)) * int256(mFees.performance)) /
                        100;
                    //If Vault made profit
                    if (amountInMainToMint > 0) {
                        sharesToMint += convertToShares(
                            uint256(amountInMainToMint)
                        );
                    }
                }
            }
            if (sharesToMint > 0) {
                _mint(owner(), sharesToMint);
            }
        }
    }

    ///@notice  borrow on Hedge Contract
    ///@param _amount amount in ref token to borrow
    ///@param _exchangeRate exchangeRate of Ref Token
    ///@param _refLeft actual ref token available in walleta
    ///@param _swapAmount swap amount on rebalance operation
    ///@param _refToMain whether swapAmount was refToMain or mainToRef
    ///@dev all extra params after exchange rate are passed in order to ensure that we will have enough funds to return to flashloaner
    /// or to give back to users that queued a withdrawal in case of high slippage
    function _borrow(
        int256 _amount,
        int256 _exchangeRate,
        uint128 _refLeft,
        uint256 _swapAmount,
