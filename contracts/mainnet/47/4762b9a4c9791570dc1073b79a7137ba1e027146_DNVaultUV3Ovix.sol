        DNMathUV3.Deltas memory _deltas,
        DNMathUV3.Exchanges memory _exchanges,
        uint256 round
    ) public onlyRebalancer {
        if (round != currentRound) revert V_ROUND_ALREADY_PASSED();
        _checkHedges();
        _handleRebalanceCases(_deltas, _swapData, _exchanges);
    }

    ///@notice max amount that can be deposited in vault
    ///@dev this address argument is part of the OZ library contract. We choose to ignore it
    ///This function is called by ERC4626 to check that deposit won't be over vaultCap
    ///This also happens after updateHedgeStoredBalance has been called on deposit()
    /// to get max deposit from offchain, call realMaxDeposit with a static call
    function maxDeposit(
        address
    ) public view virtual override returns (uint256) {
        return vaultCap - _balance();
    }

    ///@notice function used by ERC4626 standard to calculate Share Price based
    /// off of vault Balance. We substract withdrawalSum amount because this amount
    /// is part of the vault until a rebalance operation. But the shares representing that
    /// are already burnt when a user queues a Withdrawal.
    function totalAssets() public view override returns (uint256) {
        return _balance() - withdrawalSum;
    }

    ///@notice convertToAssets with updated balances.
    ///@dev Should be used from offchain with static call.
    function realConvertToAssets(
        uint256 _shares
