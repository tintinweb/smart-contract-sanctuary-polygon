pragma solidity ^0.8.19;

struct ListElement {
    uint data;
    bytes32 pointer;
}

struct SingleLinkedList {
    uint length;
    ListElement head;
    ListElement tail;
    mapping(bytes32 => ListElement) elements;
}

library SingleLinkedListLib {

    bytes32 constant ZERO_POINTER = keccak256(abi.encode(uint(0)));

    function addNode(SingleLinkedList storage self, uint elementData, uint position) internal {

        // don't add that that has keccak256 of bytes32(0)

        bytes32 elementHash = keccak256(abi.encode(elementData));
        ListElement memory e;

        if(position == 0 && self.length == 0) // adding the first element
        {
            e = ListElement({
                data: elementData, 
                pointer: ZERO_POINTER
            });
            self.head = e;
            self.tail = e;
        }
        else if(position == 0) // adding a new head
        {      
            // point new head to old head
            e = ListElement({
                data: elementData, 
                pointer: keccak256(abi.encode(self.head.data))
            });
            // set new head
            self.head = e;
        }
        else if(position >= self.length) // adding a new tail
        {
            // point new tail to ZERO
            e = ListElement({
                data: elementData, 
                pointer: ZERO_POINTER
            });
            
            // point old tail to new tail
            self.elements[keccak256(abi.encode(self.tail.data))].pointer = elementHash;
            // update tail
            self.tail = e;
        } 
        else 
        {
            // traverse list to find entry spot
            ListElement storage pred = self.head;
            uint iterator;
            while(iterator + 1 < position) {
                pred = self.elements[pred.pointer];
                unchecked{ iterator = iterator + 1;}
            }
            e = ListElement({
                data: elementData, 
                pointer: keccak256(abi.encode(pred.data))
            });
            
            // update pointer
            pred.pointer = elementHash;
        }

        self.elements[elementHash] = e;
        self.length = self.length + 1;
    }

    function removeNode(SingleLinkedList storage self, uint elementData) internal {
        (bytes32 pointerToPred, ListElement storage toRemove,) = getNodeByData(self, elementData);
        // set predecessor pointer to skip element that is to be deleted
        self.elements[pointerToPred].pointer = toRemove.pointer;
        self.elements[self.elements[pointerToPred].pointer] = ListElement({data: 0, pointer: bytes32(0)});
        self.length = self.length - 1;
    }

    function getNodeByData(
        SingleLinkedList storage self, 
        uint data
    ) internal view returns(
        bytes32 pointerToPredecessor,
        ListElement storage node,
        uint position
    ){
        pointerToPredecessor = ZERO_POINTER;
        node = self.head;
        uint listLen = self.length;
        while(node.data != data && position < listLen) {
            unchecked{ position = position + 1; }
            pointerToPredecessor = node.pointer;
            node = self.elements[node.pointer];
        }
    }

    function getAllDataEntriesBelow(SingleLinkedList storage self, uint data) internal view returns(uint[] memory) {
        (,ListElement memory e, uint pos) = getNodeByData(self, data);
        uint memoryLen = self.length;
        uint[] memory entriesBelow = new uint[](memoryLen - pos);
        uint iterator;
        while(iterator < memoryLen) {
            entriesBelow[iterator] = e.data;
            e = self.elements[e.pointer];
            unchecked { iterator = iterator + 1; }
        }
        return entriesBelow;
    }
    
