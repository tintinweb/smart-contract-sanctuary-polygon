contract MultiDemo is IStargateReceiver {
    mapping(address => uint256) public depositAmt;
    mapping(address => uint256) public crossDepositAmt;
    address public router;
    address public swapRouter;
    address public weth;

    bytes public payloadData;

    constructor(address router_, address swapRouter_, address weth_) {
        weth = weth_;
        router = router_;
        swapRouter = swapRouter_;
    }

    modifier onlyEOA() {
        require(msg.sender == tx.origin);
        _;
    }

    event sgReceived(uint16, bytes, uint256, address, uint256, bytes);

    function deposit(
        uint16 _dstChainId,
        uint256 _srcPoolId,
        uint256 _dstPoolId,
        address payable _refundAddress,
        uint256 _amountLD,
        uint256 _minAmountLD,
        IStargateRouter.lzTxObj memory _lzTxParams,
        bytes calldata _to,
        bytes calldata _payload,
        address[2] memory _tokenAddress
    ) external payable onlyEOA {
        IERC20(_tokenAddress[0]).transferFrom(msg.sender, address(this), _amountLD);
        IERC20(_tokenAddress[0]).approve(_tokenAddress[1], _amountLD);

        require(msg.value != 0, "Inalid deposit amount");
        depositAmt[msg.sender] = msg.value;

        IStargateRouter(router).swap{value: msg.value}(
            _dstChainId,
            _srcPoolId,
            _dstPoolId,
            _refundAddress,
            _amountLD,
            _minAmountLD,
            _lzTxParams,
            _to,
            _payload
        );
    }

    function sgReceive(
        uint16 _chainId,
        bytes memory _srcAddress,
        uint256 _nonce,
        address _token,
        uint256 amountLD,
        bytes memory payload
    ) external override {
        payloadData = payload;

        address[] memory path = new address[](2);
        path[0] = _token;
        path[1] = weth;

        IERC20(_token).approve(swapRouter, 0);
        IERC20(_token).approve(swapRouter, amountLD);

        IPancakeRouter(swapRouter).swapExactTokensForETHSupportingFeeOnTransferTokens(
            amountLD,
            0,
            path,
            address(this),
            block.timestamp + 2 hours
        );

        emit sgReceived(_chainId, _srcAddress, _nonce, _token, amountLD, payload);
    }

    receive() external payable {}
}

