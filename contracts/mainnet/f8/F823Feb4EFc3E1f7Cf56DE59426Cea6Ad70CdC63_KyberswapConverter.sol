pragma solidity 0.8.15;

import "IERC20.sol";
import "Ownable.sol";
import "SafeERC20.sol";
import "IRouter.sol";
import "IQuoterV2.sol";

contract KyberswapConverter is Ownable {
    using SafeERC20 for IERC20;

    IRouter public router;
    IQuoterV2 public quoter;

    uint24 defaultFee = 1000;

    address public assetConverter;

    mapping(address => bool) internal isApproved;
    mapping(address => mapping(address => bytes)) public paths;

    constructor(address _assetConverter, IRouter _router, IQuoterV2 _quoter) Ownable() {
        require(_assetConverter != address(0), "Zero address provided");
        require(address(_router) != address(0), "Zero address provided");
        require(address(_quoter) != address(0), "Zero address provided");
        assetConverter = _assetConverter;
        router = _router;
        quoter = _quoter;
    }

    struct UpdatePathParams {
        address source;
        address destination;
        bytes path;
    }

    function updatePaths(UpdatePathParams[] memory updates) onlyOwner public {
        for (uint i = 0; i < updates.length; i++) {
            paths[updates[i].source][updates[i].destination] = updates[i].path;
        }
    }

    function _getSwapPath(address source, address destination)
        internal
        view
        returns (bytes memory path)
    {
        path = paths[source][destination];
        if (path.length == 0) {
            path = abi.encodePacked(source, defaultFee, destination);
        }
    }

    function swap(
        address source,
        address destination,
        uint256 value,
        address beneficiary
    ) external returns (uint256) {
        require(msg.sender == assetConverter, "Invalid caller");
        bytes memory path = _getSwapPath(source, destination);
        if (!isApproved[source]) {
            IERC20(source).safeIncreaseAllowance(
                address(router),
                type(uint256).max
            );
            isApproved[source] = true;
        }
        IRouter.ExactInputParams memory params = IRouter
            .ExactInputParams({
                path: path,
                recipient: beneficiary,
                deadline: block.timestamp,
                amountIn: value,
                minAmountOut: 0
            });
        return router.swapExactInput(params);
    }

    function previewSwap(address source, address destination, uint256 value) external returns(uint256 amountOut) {
        bytes memory path = _getSwapPath(source, destination);
        (amountOut, , ,) = quoter.quoteExactInput(path, value);
    }
}

