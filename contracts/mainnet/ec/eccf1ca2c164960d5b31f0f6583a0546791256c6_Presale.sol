pragma solidity ^0.8.0;

contract Presale is Ownable, ReentrancyGuard {
    using SafeMath for uint256;

    IERC20 public token;
    IERC20 public BUSD;
    
    uint256 public rate = 10;
    uint256 public softCap = 10000000000000000000000000000; // Set your soft cap
    uint256 public hardCap = 10000000000000000000000000000000000000; // Set your hard cap
    uint256 public minimumPurchase = 10000000000000000000; // Set minimum purchase
    uint256 public maximumPurchase = 100000000000000000000; // Set maximum purchase
    uint256 public soldTokens = 0;
    uint256 public presaleStart; // Presale start time
    uint256 public presaleEnd;   // Presale end time
    uint256 public cliff = 5 minutes; // Set the cliff time

    struct Purchaser {
        uint256 tokensBought;
        uint256 tokensClaimed;
        uint256 lastClaimDate;
    }
    
    mapping (address => Purchaser) public purchasers;

    constructor(address _token, address _BUSD, uint256 _presaleStart, uint256 _presaleEnd) {
        token = IERC20(_token);
        BUSD = IERC20(_BUSD);
        presaleStart = _presaleStart;
        presaleEnd = _presaleEnd;
    }
    
    function buyTokens(uint256 _BUSDAmount) public nonReentrant {
        require(block.timestamp >= presaleStart && block.timestamp <= presaleEnd, "Presale not active");
        require(BUSD.balanceOf(msg.sender) >= _BUSDAmount, "Not enough BUSD");
        require(_BUSDAmount >= minimumPurchase && _BUSDAmount <= maximumPurchase, "Invalid purchase amount");
        uint256 tokens = _BUSDAmount.mul(rate);
        require(soldTokens.add(tokens) <= hardCap, "Purchase exceeds hard cap");

        BUSD.transferFrom(msg.sender, address(this), _BUSDAmount);
        
        purchasers[msg.sender].tokensBought = purchasers[msg.sender].tokensBought.add(tokens);
        soldTokens = soldTokens.add(tokens);
        
        if(purchasers[msg.sender].lastClaimDate == 0) {
            purchasers[msg.sender].lastClaimDate = presaleEnd.add(cliff);
        }
    }
    
    function claimTokens() public nonReentrant {
    require(block.timestamp >= purchasers[msg.sender].lastClaimDate, "Claim not started");
    require(purchasers[msg.sender].tokensBought > purchasers[msg.sender].tokensClaimed, "No tokens to claim");

    uint256 tokensToClaim = purchasers[msg.sender].tokensBought.mul(10).div(100);

    // If this claim would exceed total bought tokens, limit to what is left
    if (purchasers[msg.sender].tokensClaimed.add(tokensToClaim) > purchasers[msg.sender].tokensBought) {
        tokensToClaim = purchasers[msg.sender].tokensBought.sub(purchasers[msg.sender].tokensClaimed);
    }

    purchasers[msg.sender].tokensClaimed = purchasers[msg.sender].tokensClaimed.add(tokensToClaim);
    purchasers[msg.sender].lastClaimDate = purchasers[msg.sender].lastClaimDate.add(2 minutes);
    token.transfer(msg.sender, tokensToClaim);
}

}