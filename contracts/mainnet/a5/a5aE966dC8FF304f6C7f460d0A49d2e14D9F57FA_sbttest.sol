pragma solidity ^0.8.0;
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Base64.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

contract sbttest is Ownable {
    using Strings for uint256;
    using Strings for string;
    using Counters for Counters.Counter;
    Counters.Counter private _tokenIds;
    event Transfer(
        address indexed _from,
        address indexed _to,
        uint256 indexed _tokenId
    );
    event ContractOwnerChanged(address _newOwner);
    event ValidatorChanged(bytes32 _newValidator);
    struct NFT {
        string name;
        string data;
    }
    mapping (bytes4 => bool)  interfaced;
    mapping (uint256 => string) tokend;
    mapping (uint256 => address) ownerd;
    mapping (uint256 => NFT) nft;
    function setData() public onlyOwner {
        interfaced[(bytes4)(0x01ffc9a7)] = true;
        interfaced[(bytes4)(0x5b5e139f)] = true;
    }
    function contractOwner() public view returns (address) {
        return 0x5f85AAF650E10b2c03177F5FD820d5B68F96f900;
    }
    function mint(string memory name) public {
        _tokenIds.increment();
        uint256 newItemId = _tokenIds.current();
        ownerd[newItemId] = msg.sender;
        emit Transfer(address(0), msg.sender, newItemId);
    }

    function burn(uint256 _tokenId) public onlyOwner payable  {
        require(msg.sender == contractOwner(),"SBT: OnlyOwner");
        address currentOwner = ownerd[_tokenId];
        delete ownerd[_tokenId];
        emit Transfer(currentOwner, address(0), _tokenId);
    }

    function supportsInterface(bytes4 _interfaceID) public view returns (bool)
    {
        return interfaced[_interfaceID];
    }

    function name() public view returns (string memory) {
        return "TESTSBT";
    }

    function symbol() public view returns (string memory) {
        return "TSBT";
    }
    function setData(uint256 _tokenId,string memory title,string memory data) public onlyOwner {
        bytes memory da = abi.encodePacked('{ "title": "', title ,'","data": "', data, '"},');
        nft[_tokenId].data = string(abi.encodePacked(nft[_tokenId].data, string(da)));
    }
    function tokenURI(uint256 _tokenId) public view returns (string memory) {
        bytes memory json = abi.encodePacked('{"name": ', nft[_tokenId].name,', "description": "This SBT is TEST", "data": [' ,nft[_tokenId].data , ']}');
        return string(json);
    }
    function ownerOf(uint256 _tokenId) public view returns (address) {
        return ownerd[_tokenId];
    }
}

