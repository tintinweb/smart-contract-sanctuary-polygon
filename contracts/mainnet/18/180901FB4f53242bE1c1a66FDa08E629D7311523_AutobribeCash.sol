import "@openzeppelin/contracts/access/Ownable.sol";
import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import { SafeERC20 } from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "../interfaces/IGauge.sol";
import "../interfaces/ICash.sol";
import "../interfaces/IBribe.sol";
import "../interfaces/IVault.sol";

contract AutobribeCash is Ownable {

    using SafeERC20 for ICash;

    ICash public cash;
    IVault public vault;
    uint8 public gaugeCount;
    mapping(uint8 => IGauge) public gauges;
    mapping(uint8 => uint256) public owedToBribe;

    constructor (address _cash, address _vault) public {
        cash = ICash(_cash);
        vault = IVault(_vault);
    }

    function addGauge(address _gauge) public onlyOwner {
        gauges[gaugeCount] = IGauge(_gauge);
        gaugeCount++;
    }

    function modifyGaugeCounter(uint8 _new) public onlyOwner {
        gaugeCount = _new;
    }

    function modifyGauge(uint8 _id, address _gauge) public onlyOwner {
        gauges[_id] = IGauge(_gauge);
    }

    function getCashForBribes() public returns(uint256 cashReservedToBribes) {
        uint256 totalValueVault = vault.totalValue();
        uint256 cashTotalSupply = cash.totalSupply();
        uint256 cashOptedOut = cash.nonRebasingSupply();
        uint256 deltaRebase = totalValueVault - cashTotalSupply;
        
        for (uint8 i = 0; i < gaugeCount; i++) {
            uint256 LP_balance = cash.balanceOf(gauges[i].TOKEN());
            uint256 _autoBribe = deltaRebase * LP_balance / cashTotalSupply;
            owedToBribe[i] = _autoBribe;
            cashReservedToBribes += _autoBribe;
        }
    }

    function distributeCashToBribes() public {
        for (uint8 i = 0; i < gaugeCount; i++) {
            IBribe _bribe = IBribe(gauges[i].external_bribe());
            cash.approve(address(_bribe), owedToBribe[i]);
            _bribe.notifyRewardAmount(address(cash), owedToBribe[i]);
            owedToBribe[i] = 0;
        }
    }

}

