    function _setMerkleTreeRoot(bytes32 merkleTreeRoot, uint256 day) internal {
        require(day > 0, 'MuskTokenDistributor: invalid day');
        uint256 today = _getDayFromStart(block.timestamp);
        require(day < today, 'MuskTokenDistributor: cannot add merkle tree after yesterday');
        merkleTreeRoots[day] = merkleTreeRoot;
    }

