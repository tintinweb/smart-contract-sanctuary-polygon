     * @param proof The Merkle Tree Proof
     * @param today The current day from start timestamp
     **/
    function _claim(
        address tokenOwner,
        uint256 timestamp,
        uint256 amount,
        bytes memory signature,
        bytes32[] calldata proof,
        uint256 today
    ) internal {
        require(tokenOwner != address(0), 'MuskTokenDistributor: invalid address');
        require(timestamp >= startTimestamp, 'MuskTokenDistributor: cannot claim before the start');
        uint256 day = _getDayFromStart(timestamp);
        require(day < today, 'MuskTokenDistributor: cannot claim after yesterday');
        require(amount > 0, 'MuskTokenDistributor: invalid amount');
        require(
            tokenClaims[tokenOwner][day] == false,
            'MuskTokenDistributor: tokens already claimed'
        );
        require(merkleTreeRoots[day] != 0, 'MuskTokenDistributor: no merkle tree root found');

        bytes32 hash = _getHash(tokenOwner, day, amount);
        (address recovered, ECDSA.RecoverError error) = hash.toEthSignedMessageHash().tryRecover(
            signature
        );
        require(
            error == ECDSA.RecoverError.NoError && recovered == trustedWallet,
            'MuskTokenDistributor: signer not trusted wallet'
        );
        require(
            MerkleProof.verify(proof, merkleTreeRoots[day], hash),
            'MuskTokenDistributor: invalid proof'
        );

        tokenClaims[tokenOwner][day] = true;
        require(
            muskToken.transferFrom(treasuryAddress, tokenOwner, amount),
            'MuskTokenDistributor: transfer amount failed'
        );
        emit Claim(tokenOwner, day, amount);
    }

    /**
     * @dev Returns a hash based on address + day + amount
     * @param tokenOwner The address where the tokens will be transferred
     * @param day The day from start timestamp
     * @param amount The token amount
     **/
    function _getHash(
        address tokenOwner,
        uint256 day,
        uint256 amount
    ) internal pure returns (bytes32) {
        return
            keccak256(
                abi.encode(
                    keccak256(abi.encode(tokenOwner)),
                    keccak256(abi.encode(day)),
                    keccak256(abi.encode(amount))
                )
            );
    }

    /**
     * @dev Returns the day from start timestamp
     * @param timestamp The timestamp (in seconds)
     **/
    function _getDayFromStart(uint256 timestamp) internal view returns (uint256) {
        uint256 secondsFromStart = timestamp - startTimestamp;
        if (secondsFromStart < 1 days) {
            return 1;
        }

        return secondsFromStart / 1 days + 1;
    }
}

