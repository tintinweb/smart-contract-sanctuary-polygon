     * @param signatures The array of signatures. Each signature is based on address + timestamp + amount
     * @param proofs The array of Merkle Tree Proofs
     **/
    function claim(
        address[] memory addresses,
        uint256[] memory timestamps,
        uint256[] memory amounts,
        bytes[] memory signatures,
        bytes32[][] calldata proofs
    ) external onlyInitialized onlyNotPaused {
        require(addresses.length > 0, 'MuskTokenDistributor: empty addresses array');
        require(
            addresses.length == timestamps.length,
            'MuskTokenDistributor: arrays of different lengths'
        );
        require(
            addresses.length == amounts.length,
            'MuskTokenDistributor: arrays of different lengths'
        );
        require(
            addresses.length == signatures.length,
            'MuskTokenDistributor: arrays of different lengths'
        );
        require(
            addresses.length == proofs.length,
            'MuskTokenDistributor: arrays of different lengths'
        );

        uint256 today = _getDayFromStart(block.timestamp);

        for (uint256 i = 0; i < timestamps.length; i++) {
            _claim(addresses[i], timestamps[i], amounts[i], signatures[i], proofs[i], today);
        }
    }

    /**
     * @dev Claim $MUSK tokens
     * @param tokenOwner The address where the tokens will be transferred
     * @param timestamp The timestamp (in seconds) for the claimed day
     * @param amount The token amount
