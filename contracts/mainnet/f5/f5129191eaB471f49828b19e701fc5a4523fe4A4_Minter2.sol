pragma solidity ^0.8.0;

import "./NanoBase.sol";
import "./NanoMintableI.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";


contract Minter2 is NanoBase, ReentrancyGuard {

    uint256 public packMintLimit;
    uint256 public alreadyMintedPacks;
    bool public isApiMintForExternalProvidersActive;

    event PackPaid(uint256 packId, uint256 valuePaid, address sender);
    event PackPaidExternalProvider(uint256 packId, uint256 valuePaid, address sender, address buyer, uint256 quantity, uint256 mintType);
    event PackPaidErc20(uint256 packId, address paymentToken, uint256 valuePaid, address sender);

    event TokenIssuedFromAlphaPass(address account, uint256 mintType, uint256 quantity, int256 alphaPassId);
    event TokenIssued(address account, uint256 mintType, uint256 quantity);
    event PackMintLimitChanged(uint256 oldValue, uint256 newValue);

    mapping(address => bool) public externalProviderWhitelist;

    modifier onlyExternalProviderWhitelisted() {
        require(externalProviderWhitelist[msg.sender], "Only whitelisted addresses can call this function");
        _;
    }

    modifier onlyActiveApiMintForExternalProviders() {
        require(isApiMintForExternalProvidersActive, "Api mint for external providers is currently inactive");
        _;
    }

    constructor(address _metaNanoData, uint256 _initialPackMintLimit)
    NanoBase(_metaNanoData, "NanoMinter")
    {
        packMintLimit = _initialPackMintLimit;
        isApiMintForExternalProvidersActive = true;
        emit PackMintLimitChanged(0, _initialPackMintLimit);
    }

    /*note this is not possible to do gasless, since it is paid using native currency*/
    function payForPack(uint256 packId)
    external
    payable
    nonReentrant
    {
        require(msg.value > 0, "can not be free");
        alreadyMintedPacks += 1;
        require(alreadyMintedPacks <= packMintLimit, "minting is closed for now");
        address payable beneficiary = payable(metananoData.getAddress("beneficiary"));
        beneficiary.transfer(msg.value);
        emit PackPaid(packId, msg.value, msg.sender);
    }

    function payForPackERC20(uint256 packId, address paymentTokenAddress, uint256 tokenAmount)
    external
    nonReentrant
    {
        alreadyMintedPacks += 1;
        require(alreadyMintedPacks <= packMintLimit, "minting is closed for now");
        address payable beneficiary = payable(metananoData.getAddress("beneficiary"));
        bool success = IERC20(paymentTokenAddress).transferFrom(_msgSender(), beneficiary, tokenAmount);
        require(success, "unable to pay for the mint");
        emit PackPaidErc20(packId, paymentTokenAddress, tokenAmount, _msgSender());
    }


    function apiMintWithAlphaPass(address destination, uint256 quantity, uint256 mintType, int256 alphaPassId) external only("apiNanos") {
        NanoMintableI nft = NanoMintableI(metananoData.getAddress("nft"));
        emit TokenIssuedFromAlphaPass(destination, mintType, quantity, alphaPassId);
        nft.mintFor(destination, quantity);
    }

    function apiMint(address destination, uint256 quantity, uint256 mintType) external only("apiNanos") {
        NanoMintableI nft = NanoMintableI(metananoData.getAddress("nft"));
        emit TokenIssued(destination, mintType, quantity);
        nft.mintFor(destination, quantity);
    }

    function apiMintExternalProvider(address destination, uint256 packId, uint256 quantity, uint256 mintType, int256 alphaPassId)
    external
    payable
    nonReentrant
    onlyExternalProviderWhitelisted
    onlyActiveApiMintForExternalProviders {
        require(msg.value > 0, "can not be free");
        alreadyMintedPacks += 1;
        require(alreadyMintedPacks <= packMintLimit, "minting is closed for now");
        address payable beneficiary = payable(metananoData.getAddress("beneficiary"));
        beneficiary.transfer(msg.value);
        emit PackPaidExternalProvider(packId, msg.value, msg.sender, destination, quantity, mintType);

        NanoMintableI nft = NanoMintableI(metananoData.getAddress("nft"));
        if(alphaPassId >= 0 && alphaPassId < 3500) {
            emit TokenIssuedFromAlphaPass(destination, mintType, quantity, alphaPassId);
        } else {
            emit TokenIssued(destination, mintType, quantity);
        }

        nft.mintFor(destination, quantity);
    }

    function addToExternalProviderWhitelist(address whitelistedAddress) external onlyAdmin {
        externalProviderWhitelist[whitelistedAddress] = true;
    }

    function removeFromExternalProviderWhitelist(address whitelistedAddress) external onlyAdmin {
        externalProviderWhitelist[whitelistedAddress] = false;
    }

    function setIsApiMintForExternalProvidersActive(bool isActive) external onlyAdmin {
        isApiMintForExternalProvidersActive = isActive;
    }

    function setPackMintLimitPublic(uint256 maxMinting) external onlyAdmin {
        emit PackMintLimitChanged(packMintLimit, maxMinting);
        packMintLimit = maxMinting;
    }

}

/*
 * Support for executing meta-transactions, see
 * https://github.com/maticnetwork/pos-portal/blob/master/contracts/common/NativeMetaTransaction.sol
 * Modified to use OpenZeppelin EIP712 functions and re-formatted for consistency.
 */
// SPDX-License-Identifier: MIT

pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/cryptography/EIP712.sol";

abstract contract NativeMetaTransaction is EIP712 {
    string constant public ERC712_VERSION = "1";
    bytes32 private constant META_TRANSACTION_TYPEHASH = keccak256(
        bytes("MetaTransaction(uint256 nonce,address from,bytes functionSignature)")
    );
    event MetaTransactionExecuted(address userAddress, address payable relayerAddress, bytes functionSignature);
    mapping(address => uint256) nonces;

    constructor(string memory name)
    EIP712(name, ERC712_VERSION)
    {
        /* nothing really to do here other than forward construction to EIP712 */
    }

    /*
     * Meta transaction structure.
     * No point of including value field here as if user is doing value transfer then he has the funds to pay for gas
     * He should call the desired function directly in that case.
     */
    struct MetaTransaction {
        uint256 nonce;
        address from;
        bytes functionSignature;
    }

    function executeMetaTransaction(address userAddress, bytes memory functionSignature, bytes32 sigR, bytes32 sigS, uint8 sigV)
    public payable
    returns (bytes memory)
    {
        MetaTransaction memory metaTx = MetaTransaction({
            nonce: nonces[userAddress],
            from: userAddress,
            functionSignature: functionSignature
        });

        require(verify(userAddress, metaTx, sigR, sigS, sigV), "Signer and signature do not match");

        // increase nonce for user (to avoid re-use)
        nonces[userAddress] = nonces[userAddress] + 1;

        emit MetaTransactionExecuted(userAddress, payable(msg.sender), functionSignature);

        // Append userAddress and relayer address at the end to extract it from calling context
        (bool success, bytes memory returnData) = address(this).call(abi.encodePacked(functionSignature, userAddress));
        require(success, "Function call not successful");

        return returnData;
    }

    function hashMetaTransaction(MetaTransaction memory metaTx)
    internal pure
    returns (bytes32)
    {
        return keccak256(abi.encode(META_TRANSACTION_TYPEHASH, metaTx.nonce, metaTx.from, keccak256(metaTx.functionSignature)));
    }

    function getNonce(address user)
    public view
    returns (uint256 nonce)
    {
        nonce = nonces[user];
    }

    function verify(address signer, MetaTransaction memory metaTx, bytes32 sigR, bytes32 sigS, uint8 sigV)
    internal view
    returns (bool)
    {
        require(signer != address(0), "NativeMetaTransaction: INVALID_SIGNER");
        return signer == ecrecover(_hashTypedDataV4(hashMetaTransaction(metaTx)), sigV, sigR, sigS);
    }
}

