interface IRouter {
    function factory() external returns (address);
    function WETH() external returns (address);
}

interface IFactory {
    function createPair(address tokenA, address tokenB) external returns (address pair);
    function getPair(address tokenA, address tokenB) external view returns (address pair);
}

contract PairDeployer is Ownable {
    address public immutable router;
    address public immutable factory;
    address public immutable USDC;

    constructor(address _router, address _usdc) {
        router = _router;
        USDC = _usdc;
        factory = IRouter(router).factory();
    }

    function createPair(address token) public onlyOwner returns (address) {
        return IFactory(factory).createPair(token, USDC);
    }

    function getPair(address token) public view returns (address) {
        return IFactory(factory).getPair(token, USDC);
    }
}