contract LibertiV2VaultAave is LibertiV2Vault {
    using MathUpgradeable for uint256;
    using SafeERC20Upgradeable for IERC20Upgradeable;

    IPool private immutable aavePool;
    IPoolDataProvider private immutable aavePoolDataProvider;
    mapping(address => bool) private isAaveTokens;

    constructor(address _aavePool, address _aavePoolDataProvider) LibertiV2Vault() {
        _disableInitializers(); //FIXME: required?
        aavePool = IPool(_aavePool);
        aavePoolDataProvider = IPoolDataProvider(_aavePoolDataProvider);
    }

    function _afterInitialize(uint256[] calldata _amountsIn) internal override onlyInitializing {
        IPoolDataProvider.TokenData[] memory tokenData = aavePoolDataProvider
            .getAllReservesTokens();
        for (uint256 i = 0; i < tokenData.length; i++) {
            address token = tokenData[i].tokenAddress;
            if (isBoundTokens[token]) isAaveTokens[token] = true;
        }
        for (uint256 i = 0; i < tokens.length; i++) {
            address token = tokens[i];
            if (isAaveTokens[token]) {
                IERC20Upgradeable(token).safeIncreaseAllowance(address(aavePool), _amountsIn[i]);
                aavePool.supply(token, _amountsIn[i], address(this), 0);
            }
        }
    }

    function _afterDeposit(
        uint256, // amountOut
        uint256[] memory amountsIn,
        address
    ) internal override {
        //uint256[] memory amountsIn = getAmountsIn(amountOut);
        for (uint256 i = 0; i < tokens.length; i++) {
            address token = tokens[i];
            if (isAaveTokens[token]) {
                IERC20Upgradeable(token).safeIncreaseAllowance(address(aavePool), amountsIn[i]);
                aavePool.supply(token, amountsIn[i], address(this), 0);
            }
        }
    }

    function _afterRedeem(
        uint256 amountIn,
        address receiver,
        address, // owner_
        uint256 prevSupply,
        uint256[] memory _amountsOut
    ) internal override returns (uint256[] memory) {
        for (uint256 i = 0; i < tokens.length; i++) {
            address token = tokens[i];
            if (isAaveTokens[token]) {
                (uint256 currentATokenBalance, , , , , , , , ) = aavePoolDataProvider
                    .getUserReserveData(token, address(this));
                uint256 amount = currentATokenBalance.mulDiv(
                    amountIn,
                    prevSupply
                    //MathUpgradeable.Rounding.Up
                    // add comment, rounding down!!
                );
                aavePool.withdraw(token, amount, receiver);
                _amountsOut[i] += amount;
            }
        }
        return _amountsOut;
    }

    function _afterGetAmounts(
        uint256 amountIn,
        uint256[] memory amounts,
        MathUpgradeable.Rounding rounding
    ) internal view override returns (uint256[] memory) {
        uint256 supply = totalSupply();
        for (uint256 i = 0; i < tokens.length; i++) {
            address token = tokens[i];
            if (isAaveTokens[token]) {
                (uint256 currentATokenBalance, , , , , , , , ) = aavePoolDataProvider
                    .getUserReserveData(token, address(this));
                uint256 amount = currentATokenBalance.mulDiv(amountIn, supply, rounding);
                amounts[i] += amount;
            }
        }
        return amounts;
    }

    function _beforeRebalance(bytes[] calldata data) internal override onlyOwner {
        for (uint256 i = 0; i < data.length; i++) {
            (, SwapDescription memory desc, ) = abi.decode(
                data[i][4:],
                (address, SwapDescription, bytes)
            );
            uint256 avlBalance = desc.srcToken.balanceOf(address(this));
            if (isAaveTokens[address(desc.srcToken)] && (avlBalance < desc.amount)) {
                aavePool.withdraw(address(desc.srcToken), desc.amount - avlBalance, address(this));
            }
        }
    }

    function _afterRebalance(bytes[] calldata data) internal override onlyOwner {
        for (uint256 i = 0; i < data.length; i++) {
            (, SwapDescription memory desc, ) = abi.decode(
                data[i][4:],
                (address, SwapDescription, bytes)
            );
            uint256 avlBalance = desc.dstToken.balanceOf(address(this));
            if (isAaveTokens[address(desc.dstToken)] && (avlBalance > 0)) {
                desc.dstToken.safeIncreaseAllowance(address(aavePool), avlBalance);
                aavePool.supply(address(desc.dstToken), avlBalance, address(this), 0);
            }
        }
    }

    function _afterGetTotalAmounts(
        uint256[] memory _amounts
    ) internal view override returns (uint256[] memory) {
        for (uint256 i = 0; i < tokens.length; i++) {
            address token = tokens[i];
            if (isAaveTokens[token]) {
                (uint256 currentATokenBalance, , , , , , , , ) = aavePoolDataProvider
                    .getUserReserveData(token, address(this));
                _amounts[i] += currentATokenBalance;
            }
        }
        return _amounts;
    }
