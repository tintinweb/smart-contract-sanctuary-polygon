            IERC20Upgradeable token = IERC20Upgradeable(tokens[i]);
            amounts[i] = token.balanceOf(address(this));
        }
        return _afterGetTotalAmounts(amounts);
    }

    function deposit(
        uint256 amountOut,
        uint256[] calldata maxAmountsIn,
        address receiver
    ) public virtual {
        _beforeDeposit(amountOut, maxAmountsIn, receiver);
        if (SANCTIONS_LIST.isSanctioned(_msgSender())) revert SanctionedError();
        if (0 >= totalSupply()) revert UninitializedVault();
        uint256[] memory amountsIn = getAmountsIn(amountOut); // must deposit rounded up
        for (uint256 i = 0; i < tokens.length; i++) {
            IERC20Upgradeable token = IERC20Upgradeable(tokens[i]);
            //amountsIn[i] = token.balanceOf(address(this)).mulDiv(amountOut, supply);
            if (amountsIn[i] > maxAmountsIn[i]) revert LimitError();
            token.safeTransferFrom(_msgSender(), address(this), amountsIn[i]);
        }
        _mint(receiver, amountOut);
        emit Deposit(_msgSender(), receiver, amountsIn, amountOut); //FIXME: last instruction?
        _afterDeposit(amountOut, amountsIn, receiver);
    }

    function redeem(
        uint256 amountIn,
        address receiver,
        address owner_
    ) public virtual returns (uint256[] memory amountsOut) {
        amountsOut = new uint256[](tokens.length);
        if (0 >= amountIn) revert ZeroRedeem();
        if (_msgSender() != owner_) _spendAllowance(owner_, _msgSender(), amountIn);
        uint256 supply = totalSupply();
        _burn(owner_, amountIn);
        for (uint256 i = 0; i < tokens.length; i++) {
            IERC20Upgradeable token = IERC20Upgradeable(tokens[i]);
            uint256 balance = token.balanceOf(address(this));
            if (0 < balance) {
                uint256 amount = balance.mulDiv(
                    amountIn,
                    supply,
                    MathUpgradeable.Rounding.Down //FIXME: not required but add comment
                    // redeem less than lp value
                );
                token.safeTransfer(receiver, amount);
                amountsOut[i] += amount;
            }
        }
        amountsOut = _afterRedeem(amountIn, receiver, owner_, supply, amountsOut);
        emit Withdraw(_msgSender(), receiver, owner_, amountIn, amountsOut);
    }

    function exit() external returns (uint256[] memory) {
        uint256 amountIn = balanceOf(_msgSender());
        return redeem(amountIn, _msgSender(), _msgSender());
    }

    /// @notice Sanctioned addresses cannot deposit into a vault. Additionally lp tokens
    /// @notice of the vault cannot be transferred to a sanctioned address.
    function _beforeTokenTransfer(address, address to, uint256) internal view override {
        if (SANCTIONS_LIST.isSanctioned(to)) revert SanctionedError();
    }

    //
    // rebalance
    //

    struct SwapDescription {
        IERC20Upgradeable srcToken;
        IERC20Upgradeable dstToken;
        address srcReceiver; // from
        address dstReceiver; // to
        uint256 amount;
        uint256 minReturnAmount;
        uint256 flags;
    }

    address private constant AGGREGATION_ROUTER_V5 = 0x1111111254EEB25477B68fb85Ed929f73A960582;

    error ReceiverError();
    error TokenError();

    function rebalance(
        bytes[] calldata data
    ) external onlyOwner returns (uint256[] memory returnAmounts) {
        _beforeRebalance(data);
        returnAmounts = new uint256[](data.length);
        for (uint256 i = 0; i < data.length; i++) {
            (, SwapDescription memory desc, ) = abi.decode(
                data[i][4:],
                (address, SwapDescription, bytes)
            );
            if (desc.dstReceiver != address(this)) revert ReceiverError();
            // We don't need to check source token as long as destination token is in favor of the vault.
            // Additionally, it enables the rescue of tokens that are not `asset` or `other`, and would be
            // locked in contract otherwise.
            if (!isBoundTokens[address(desc.dstToken)]) revert TokenError();
            desc.srcToken.safeIncreaseAllowance(AGGREGATION_ROUTER_V5, desc.amount);
            // solhint-disable-next-line avoid-low-level-calls
            (bool success, bytes memory returndata) = AGGREGATION_ROUTER_V5.call(data[i]);
            if (!success) {
                // solhint-disable-next-line no-inline-assembly
                assembly {
                    revert(add(returndata, 32), mload(returndata))
                }
            }
            (returnAmounts[i], ) = abi.decode(returndata, (uint256, uint256));
            // emit Rebalance(...);
        }
        _afterRebalance(data);
    }

    function _beforeInitialize() internal virtual onlyInitializing {}

    function _afterInitialize(uint256[] calldata _amountsIn) internal virtual onlyInitializing {}

