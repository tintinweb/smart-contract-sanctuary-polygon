pragma solidity ^0.8.13;

import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";
import "./Math.sol";

contract TestContract is MathFunctions {

  AggregatorV3Interface internal priceFeed;
  address private paymentAddress;
  uint256 slippage;

  constructor(
    address _paymentAddress,
    address _priceFeedAddress
  )
  {
    slippage = 102;
    paymentAddress = _paymentAddress;
    priceFeed = AggregatorV3Interface(_priceFeedAddress);
  }

  function ethToUsd(
    uint256 amount
  )
    public
    view
    returns (uint256)
  {
    return mulDiv(amount, getLatestPrice(), 10**(18));
  }

  function usdToEth(
    uint256 amount
  )
    public
    view
    returns (uint256)
  {
    require(amount > 0, "Amount must be greater than 0");
    uint256 amountWithSlippage = mulDiv(amount, slippage, 100);
    return mulDiv(amountWithSlippage, 10**(18), getLatestPrice());
  }

  /**
    * Returns the latest price and # of decimals to use
    */
  function getLatestPrice() 
    public
    view
    virtual 
    returns (uint256)
  {
    int256 price;
    (, price, , , ) = priceFeed.latestRoundData();
    return uint256(price);
  }

  function test(
    uint256 _price,
    uint256 _quantity
  )
    public
    payable
  {
    uint256 price = _price * _quantity;
    uint256 given = ethToUsd(msg.value);
    if(given < price) {
      revert InsufficientFee(given, price);
    }

    (bool paid, ) = paymentAddress.call{ value: msg.value }("");

    if(!paid) {
      revert UnableCollectFee();
    }
  }

  function setSlippage(
    uint256 _slippage
  )
    external
  {
    slippage = _slippage;
  }

  error InsufficientFee(uint256 given, uint256 price);
  error UnableCollectFee();
}