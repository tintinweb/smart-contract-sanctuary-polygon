contract IsContractBulkChecker {
  /*
        AddressType Mapping:
        WALLET                   = 0
        CONTRACT                 = 1
        CONTRACT_CAN_RECEIVE_NFT = 2
    */
  enum AddressType {
    WALLET,
    CONTRACT,
    CONTRACT_CAN_RECEIVE_NFT
  }

  function isContract(address acc) public view returns (bool) {
    return acc.code.length > 0;
  }

  function getERC1155ReceivedResult(address acc) public view returns (bytes4) {
    address dummyAddress = 0xFB37c2FCca2F8b61429247844ADEe1BB8f9FF224;
    try ProxyERC1155Received(acc).onERC1155Received(dummyAddress, dummyAddress, 1, 1, "") returns (bytes4 result) {
      // true when `bytes4(keccak256("onERC1155Received(address,address,uint256,uint256,bytes)"))`, i.e. 0xf23a6e61
      return result;
    } catch (bytes memory ) {
      return 0x0;
    }
  }

  function canReceiveNft(address _contractAddress) public view returns (bool) {
    address dummyAddress = 0xFB37c2FCca2F8b61429247844ADEe1BB8f9FF224;
    (, bytes memory data) = _contractAddress.staticcall(
      abi.encodeWithSignature(
        "onERC1155Received(address,address,uint256,uint256,bytes)",
        dummyAddress,
        dummyAddress,
        1,
        1,
        ""
      )
    );
    return bytes4(data) == 0xf23a6e61;
  }

  function checkAddresses(address[] calldata addresses) external view returns (AddressType[] memory addressTypes) {
    addressTypes = new AddressType[](addresses.length);
    for (uint i = 0; i < addresses.length; i++) {
      address a = addresses[i];
      if (isContract(a)) {
        addressTypes[i] = canReceiveNft(a) ? AddressType.CONTRACT_CAN_RECEIVE_NFT : AddressType.CONTRACT;
      } else {
        addressTypes[i] = AddressType.WALLET;
      }
    }
    return addressTypes;
  }
}

