contract AztecToken is ERC20, Ownable {
    address public feeAddress;
    uint256 public fee;
    uint256 public stakepool;
    address public stakingAddress;

    mapping(address => bool) private _isExcludedFromFee;

    constructor() ERC20("Aztec Crypto Currency", "RGV") {
        fee = 2; //2% fee
        stakepool = 2; //2% staking
        _mint(msg.sender, 21000000 * (10 ** decimals()));
        feeAddress = 0x0F9f97653Fd711443D55DfF66234936310b7Dfd7;
        _isExcludedFromFee[0x0F9f97653Fd711443D55DfF66234936310b7Dfd7] = true;
        _isExcludedFromFee[msg.sender] = true;
    }

    function transfer(address to, uint256 value) public override returns (bool) {
        if(_isExcludedFromFee[_msgSender()])
            super._transfer(_msgSender(), to, value);
        else
            _transferWithFee(_msgSender(), to, value);
        return true;
    }

    function _transferWithFee(address sender, address recipient, uint256 amount) internal {
        uint256 fee_ = (amount * fee) / 100; // %fee
        uint256 stakepool_ = (amount * stakepool) / 100; // %stakepool
        uint256 transferAmount = amount - fee_ - stakepool_;

        super._transfer(sender, recipient, transferAmount);
        super._transfer(sender, feeAddress, fee_);
        super._transfer(sender, stakingAddress, stakepool_);
    }

    function excludeFromFee(address account) external onlyOwner{
        _isExcludedFromFee[account] = true;
    }

    function includeInFee(address account) external onlyOwner{
        _isExcludedFromFee[account] = false;
    }

    function setFeeAddress(address account) external onlyOwner{
        feeAddress = account;
    }
    
    function setFeePercentage(uint number) external onlyOwner{
        fee = number;
    }
    
    function setStakePoolPercentage(uint number) external onlyOwner{
        stakepool = number;
    }
    
    function setStakingAddress(address account) external onlyOwner{
        stakingAddress = account;
    }
}