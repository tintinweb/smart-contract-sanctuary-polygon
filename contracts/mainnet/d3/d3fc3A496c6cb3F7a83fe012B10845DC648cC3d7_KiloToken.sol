contract StandardTokenWithFees is ERC20, Ownable {

  // Additional variables for use if transaction fees ever became necessary
  uint256 public basisPointsRate = 0;
  uint256 public maximumFee = 0;
  mapping(address => bool) public noFeeAddresses;
  uint256 public MAX_SETTABLE_BASIS_POINTS = 10000; //%100
  uint256 public MAX_SETTABLE_FEE = 99999999999999999999;
  bool public canChangeMaxFee = true;
  address public feeReceiver;

  string public name;
  string public symbol;
  uint8 public decimals;

  uint public constant MAX_UINT = 2**256 - 1;

  function calcFee(uint _value) internal view returns (uint) {
    uint fee = (_value.mul(basisPointsRate)).div(10000);
    if (fee > maximumFee) {
        fee = maximumFee;
    }
    if (noFeeAddresses[msg.sender] == true){
        fee = 0;
    }
    return fee;
  }

  function transfer(address _to, uint _value) public returns (bool) {
    uint fee = calcFee(_value);
    uint sendAmount = _value.sub(fee);

    super.transfer(_to, sendAmount);


    if (fee > 0) {
      super.transfer(feeReceiver, fee);
    }
  }

  function transferFrom(address _from, address _to, uint256 _value) public returns (bool) {
    require(_to != address(0));
    require(_value <= balanceOf(_from));
    require(_value <= allowance(_from, msg.sender));

    uint fee = calcFee(_value);
    uint sendAmount = _value.sub(fee);

    _transfer(_from, _to, sendAmount);
    if (allowance(_from, msg.sender) < MAX_UINT) {
        _approve(_from, msg.sender, allowance(_from, msg.sender).sub(_value));
    }

    if (fee > 0) {
        _transfer(_from, feeReceiver, fee);
    }
    return true;
  }

  function setParams(uint newBasisPoints, uint newMaxFee) public onlyOwner {
      // Ensure transparency by hardcoding limit beyond which fees can never be added
      require(newBasisPoints < MAX_SETTABLE_BASIS_POINTS);
      require(newMaxFee < MAX_SETTABLE_FEE);

      basisPointsRate = newBasisPoints;
      maximumFee = newMaxFee.mul(uint(10)**decimals);

      emit Params(basisPointsRate, maximumFee);
  }

    function enableNoFee(address whitelistAddress) public onlyOwner {
        noFeeAddresses[whitelistAddress] = true;
    }

    function removeNoFee(address whitelistAddress) public onlyOwner {
        noFeeAddresses[whitelistAddress] = false;
    }

    function changeMaxFee(uint256 _MAX_SETTABLE_BASIS_POINTS, uint256 _MAX_SETTABLE_FEE) public onlyOwner {
        require(canChangeMaxFee == true);
        MAX_SETTABLE_BASIS_POINTS = _MAX_SETTABLE_BASIS_POINTS; //%100
        MAX_SETTABLE_FEE = _MAX_SETTABLE_FEE;
    }

    function destroyChangeFee() public onlyOwner {
        canChangeMaxFee = false;
    }
    
    function changeFeeReceiver( address _feeReceiver) public onlyOwner {
        feeReceiver = _feeReceiver;
    }


    function setName( string memory _name) public onlyOwner {
        name = _name;
    }


    function setSymbol(string memory _symbol) public onlyOwner {
        symbol = _symbol;
    }

 


  // Called if contract ever adds fees
  event Params(uint feeBasisPoints, uint maxFee);

}

