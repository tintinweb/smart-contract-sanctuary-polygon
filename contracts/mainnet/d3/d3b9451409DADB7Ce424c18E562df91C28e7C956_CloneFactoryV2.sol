import '@openzeppelin/contracts/utils/introspection/ERC165Checker.sol';
import './interfaces/INFTV2.sol';
import './interfaces/ICloneFactoryV2.sol';

contract CloneFactoryV2 is ICloneFactoryV2, Ownable, ERC165 {
    address public nftImplementationAddress;
    address public marketAddress;

    constructor(address _nftImplementationAddress) {
        _setNftImplementation(_nftImplementationAddress);
    }

    function create(
        address _minter,
        string memory _contractURI
    ) external returns (address) {
        require(
            marketAddress != address(0),
            'CloneFactory: Market has not been set'
        );

        require(
            msg.sender == marketAddress,
            'CloneFactory: only Market is allowed to create new NFTs'
        );

        require(
            _minter != address(0),
            'CloneFactory: minter is the zero address'
        );

        address clone;

        clone = Clones.clone(nftImplementationAddress);

        INFTV2(clone).initialize(_minter, marketAddress, _contractURI);

        emit NftContractCreated(
            clone,
            nftImplementationAddress,
            _minter,
            _contractURI
        );

        return clone;
    }

    function setMarketAddress(address _newMarketAddress) external onlyOwner {
        require(
            _newMarketAddress != address(0),
            'CloneFactory: market address is the zero address'
        );

        address previousMarketAddress = marketAddress;

        marketAddress = _newMarketAddress;

        emit MarketAddressChanged(previousMarketAddress, _newMarketAddress);
    }

    function setNftImplementation(
        address _newNftImplementationAddress
    ) external onlyOwner {
        _setNftImplementation(_newNftImplementationAddress);
    }

    function _setNftImplementation(
        address _newNftImplementationAddress
    ) internal {
        require(
            ERC165Checker.supportsInterface(
                _newNftImplementationAddress,
                type(INFTV2).interfaceId
            ),
            'Interface not supported'
        );

        address previousNftImplementationAddress = nftImplementationAddress;

        nftImplementationAddress = _newNftImplementationAddress;

        emit NftImplementationChanged(
            previousNftImplementationAddress,
            _newNftImplementationAddress
        );
    }

    function supportsInterface(
        bytes4 interfaceId
    ) public view virtual override(ERC165) returns (bool) {
        return
            interfaceId == type(ICloneFactoryV2).interfaceId ||
            super.supportsInterface(interfaceId);
    }
}

