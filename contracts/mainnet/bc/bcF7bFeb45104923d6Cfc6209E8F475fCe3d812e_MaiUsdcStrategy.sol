contract MaiUsdcStrategy is Strategy, BaseSafeModule {
    IERC20 public constant usdcMai =
        IERC20(0x160532D2536175d65C03B97b0630A9802c274daD);
    IERC20 public constant qi =
        IERC20(0x580A84C73811E1839F75d86d75d88cCa0c241fF4);
    IERC20 public constant mai =
        IERC20(0xa3Fa99A148fA48D14Ed51d610c367C61876997F1);
    IUniswapV2Router02 public constant quickSwapRouter =
        IUniswapV2Router02(0xa5E0829CaCEd8fFDD4De3c43696c57F7D7A678ff);
    CurveZapDepositor public constant curveZap =
        CurveZapDepositor(0x5ab5C56B9db92Ba45a0B46a207286cD83C15C939);
    address public constant treasury =
        0x8ce47D56EAa1299d3e06FF3E04637449fFb01C9C;
    address public constant usdcMaiInvestment =
        0x07DB6BFbD71E9DE0AfF3ab3eAe4CBC7B13EEF952;
    address public constant curveMaiFactory =
        0x447646e84498552e62eCF097Cc305eaBFFF09308;
    address public constant WMATIC = 0x0d500B1d8E8eF31E21C99d1Db9A6444d3ADf1270;
    address public constant USDC = 0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174;
    address public constant DAO = 0x929A27c46041196e1a49C7B459d63eC9A20cd879;

    function initialize() public initializer {
        __Strategy_init(
            0xE8c7574f7355920B254a91658D04074e1C0FdeF4, // portfolio manager
            USDC,
            3000 // 30%
        );
        __BaseSafeModule__init(DAO);
    }

    // ===== Strategy ====

    function _claimAndReinvest(address to_)
        internal
        virtual
        override
        returns (uint256 usdcAmount_)
    {
        uint256 qiAmount = qi.balanceOf(address(treasury));
        require(
            manager.execTransactionFromModule(
                treasury,
                0,
                abi.encodeWithSignature(
                    'manage(address,uint256)',
                    address(qi),
                    qiAmount
                ),
                Enum.Operation.Call
            ),
            'Treasury: manage failed'
        );
        transferFromManager(address(qi), address(this), qiAmount);

        uint256 reinvestAmount = (qiAmount * reinvestRate) / 10000;
        uint256 rewardAmount = qiAmount - reinvestAmount;

        if (reinvestAmount > 0) {
            _reinvest(reinvestAmount);
        }

        // swap Qi -> USDC
        address[] memory path = new address[](3);
        path[0] = address(qi);
        path[1] = WMATIC;
        path[2] = USDC;
        qi.approve(address(quickSwapRouter), rewardAmount);
        uint256[] memory amounts = quickSwapRouter.swapExactTokensForTokens(
            rewardAmount,
            0,
            path,
            to_,
            block.timestamp
        );
        emit ClaimReward(amounts[2]);
        return amounts[2];
    }

    /// @notice Reinvest Qi into MAI/USDC
    /// @param amount_ the reinvest amount of Qi
    function _reinvest(uint256 amount_) internal {
        // Swap Qi -> USDC
        qi.approve(address(quickSwapRouter), amount_);
        address[] memory qiUsdcPath = new address[](3);
        qiUsdcPath[0] = address(address(qi));
        qiUsdcPath[1] = WMATIC;
        qiUsdcPath[2] = address(address(usdc));
        qi.approve(address(quickSwapRouter), amount_);
        quickSwapRouter.swapExactTokensForTokens(
            amount_,
            0,
            qiUsdcPath,
            address(this),
            block.timestamp
        );

        // Swap half USDC -> MAI
        uint256 investUsdcAmount = usdc.balanceOf(address(this));
        uint256 halfAmount = investUsdcAmount / 2;
        usdc.approve(address(curveZap), halfAmount);
        curveZap.exchange_underlying(
            curveMaiFactory,
            2, // usdc
            0, // mai
            halfAmount,
            0
        );

        // add USDC/MAI liquidity
        uint256 usdcAmount = usdc.balanceOf(address(this));
        uint256 maiAmount = mai.balanceOf(address(this));
        usdc.approve(address(quickSwapRouter), usdcAmount);
        mai.approve(address(quickSwapRouter), maiAmount);
        (, , uint256 liquidity) = quickSwapRouter.addLiquidity(
            address(usdc),
            address(mai),
            usdcAmount,
            maiAmount,
            1,
            1,
            treasury, // sent to treasury wallet
            block.timestamp
        );

        // Stake USDC/MAI from DAO
        require(
            manager.execTransactionFromModule(
                usdcMaiInvestment,
                0,
                abi.encodeWithSignature('stake(uint256,uint256)', 1, liquidity),
                Enum.Operation.Call
            ),
            'USDC/MAI investment: stake failed'
        );
        emit Invest(investUsdcAmount);
    }

    // ===== Emgerency =====

    function emergencyWithdraw(address token_) external onlyAdmin {
        uint256 balance = IERC20(token_).balanceOf(address(this));
        IERC20(token_).transfer(DAO, balance);
    }
}

