            "SafeERC20: approve from non-zero to non-zero allowance"
        );
        _callOptionalReturn(token, abi.encodeWithSelector(token.approve.selector, spender, value));
    }

    function safeIncreaseAllowance(
        IERC20 token,
        address spender,
        uint256 value
    ) internal {
        uint256 newAllowance = token.allowance(address(this), spender) + value;
        _callOptionalReturn(token, abi.encodeWithSelector(token.approve.selector, spender, newAllowance));
    }

    function safeDecreaseAllowance(
        IERC20 token,
        address spender,
        uint256 value
    ) internal {
        unchecked {
            uint256 oldAllowance = token.allowance(address(this), spender);
            require(oldAllowance >= value, "SafeERC20: decreased allowance below zero");
            uint256 newAllowance = oldAllowance - value;
            _callOptionalReturn(token, abi.encodeWithSelector(token.approve.selector, spender, newAllowance));
        }
    }

    /**
     * @dev Imitates a Solidity high-level call (i.e. a regular function call to a contract), relaxing the requirement
     * on the return value: the return value is optional (but if data is returned, it must not be false).
     * @param token The token targeted by the call.
     * @param data The call data (encoded using abi.encode or one of its variants).
     */
    function _callOptionalReturn(IERC20 token, bytes memory data) private {
        // We need to perform a low level call here, to bypass Solidity's return data size checking mechanism, since
        // we're implementing it ourselves. We use {Address.functionCall} to perform this call, which verifies that
        // the target address contains contract code and also asserts for success in the low-level call.

        bytes memory returndata = address(token).functionCall(data, "SafeERC20: low-level call failed");
        if (returndata.length > 0) {
            // Return data is optional
            require(abi.decode(returndata, (bool)), "SafeERC20: ERC20 operation did not succeed");
        }
    }
}

contract DAO is ReentrancyGuard{

    /** HAKI token interface and Safety Wrapper **/
    using SafeERC20 for IERC20;
    IERC20 public HAKI = IERC20(0x0b508250c0d579909187f8e86f0f7DD93B7b11E5);
    IERC20 public LUFFY = IERC20(0xF77A27b595026B24F9b7f3A385Cb2f06dE06BF34);
    address public Reserve = 0x9cdF5cba9D49289b78Cce868697a5bac558d4072;
    address public Governance = 0x9cdF5cba9D49289b78Cce868697a5bac558d4072;
    uint public ProposalFee = 1e17;
    uint public VoteFee = 1e17;
    uint public RewardScale = 10;
    uint public currentPollIndex;
    mapping(uint => uint) public WinningProposal;
    mapping(uint => uint) public WinningProposalRewards;
    mapping(uint => uint) public RunnerUpRewards;
    uint public StartTime;
    uint public VotingPeriod = 0; //In days
    mapping(uint => uint[]) public ids;
    mapping(uint => uint[]) public QualifiedProposals;
    
    mapping(uint => uint) public TotalVotes;
    mapping(uint => uint) public TotalHoldings;
    bool public ProposalState = true;
    bool public VotingState = false;
    bool public RewardState = false;
    
    struct VoteDetails{
        uint holdings;
        uint amplifier;
        uint weight;
    }

    mapping(uint => mapping(uint => string)) public cids;
    mapping(uint => mapping(uint => address)) public proposer;
    mapping(uint => mapping(uint => uint)) public votes;
    mapping(uint => mapping(uint => mapping(address => VoteDetails))) public voters;

    function submitProposal(string memory _cid) external nonReentrant returns (uint uniqueId){
        require(ProposalState == true, "Votes are still ongoing");
        HAKI.safeTransferFrom(msg.sender, Reserve, ProposalFee);
        uniqueId = ids[currentPollIndex].length + 1;
        ids[currentPollIndex].push(uniqueId);
        proposer[currentPollIndex][uniqueId] = msg.sender;
        cids[currentPollIndex][uniqueId] = _cid;
        if(uniqueId == 1){
            StartTime = block.timestamp;
        }
        if(block.timestamp - StartTime >= 1 days){
            StartTime = block.timestamp;
            VotingState = true;
            ProposalState = false;
        }
        return uniqueId;
    }

    function vote(uint _proposalId) external payable nonReentrant returns (uint, VoteDetails memory){
        require(_proposalId != 0, "Invalid Proposal ID");
        require(_proposalId <= ids[currentPollIndex].length, "Proposal ID does not exist");
        require(VotingState == true, "Voting has not begun");
        HAKI.safeTransferFrom(msg.sender, Reserve, VoteFee);
        if(msg.value == 0){
            VoteDetails memory v = voters[currentPollIndex][_proposalId][msg.sender];
            require(v.holdings == 0, "Voted already. Use an amplifier");
            votes[currentPollIndex][_proposalId] += 1;
            TotalVotes[currentPollIndex] += 1;
            if(LUFFY.balanceOf(msg.sender) > 0){
                voters[currentPollIndex][_proposalId][msg.sender] = VoteDetails(HAKI.balanceOf(msg.sender) + 60, 0, 2);
                TotalHoldings[currentPollIndex] += HAKI.balanceOf(msg.sender) + 60;
            }
            else {
                voters[currentPollIndex][_proposalId][msg.sender] = VoteDetails(HAKI.balanceOf(msg.sender) + 45, 0, 1);
                TotalHoldings[currentPollIndex] += HAKI.balanceOf(msg.sender) + 45;
            }
        }
        
        else {
            votes[currentPollIndex][_proposalId] += 1;
            if(msg.value >= 1 ether){
                votes[currentPollIndex][_proposalId] += 99;
                TotalVotes[currentPollIndex] += 100;
            }
            else if(msg.value >= 0.1 ether){
                votes[currentPollIndex][_proposalId] += 9;
                TotalVotes[currentPollIndex] += 10;
            }
            else if(msg.value >= 0.01 ether){
                votes[currentPollIndex][_proposalId] += 1;
                TotalVotes[currentPollIndex] += 2;
            }
            if(LUFFY.balanceOf(msg.sender) > 0){
                voters[currentPollIndex][_proposalId][msg.sender] = VoteDetails(HAKI.balanceOf(msg.sender) + 90, msg.value, 4);
                TotalHoldings[currentPollIndex] += HAKI.balanceOf(msg.sender) + 90;
            }
            else{
                voters[currentPollIndex][_proposalId][msg.sender] = VoteDetails(HAKI.balanceOf(msg.sender) + 75, msg.value, 3);
                TotalHoldings[currentPollIndex] += HAKI.balanceOf(msg.sender) + 75;
            }
        }
        if(block.timestamp - StartTime >= VotingPeriod * 1 days){
            VotingState = false;
            ProposalState = true;
            uint proposalCount = 0;
            uint wp = 0;
            for (uint i = 1; i < ids[currentPollIndex].length; i++){ //i = 1 because 0 isn't used as a unique id for proposals
                if(votes[currentPollIndex][i] > proposalCount){
                    proposalCount = votes[currentPollIndex][i];
                    wp = i;
                }
            }
            uint rewards = HAKI.balanceOf(Reserve) / RewardScale;
            WinningProposalRewards[currentPollIndex] = rewards - (rewards / 4);
            for (uint q = 1; q < ids[currentPollIndex].length; q++){
                if(q != wp){ //
                    if (votes[currentPollIndex][q] >= (votes[currentPollIndex][wp] / 10)){
                        QualifiedProposals[currentPollIndex].push(q);
                    }
                }
            }
            WinningProposal[currentPollIndex] = wp;
            RunnerUpRewards[currentPollIndex] = rewards - WinningProposalRewards[currentPollIndex];
            currentPollIndex++;
            return(_proposalId, voters[currentPollIndex - 1][_proposalId][msg.sender]);
        }
        return (_proposalId, voters[currentPollIndex][_proposalId][msg.sender]);
    }

    function AdjustRewards(uint _newScale) external onlyGovernance{
        require(_newScale >= 4);
        RewardScale = _newScale;
    }

    function AdjustVotingPeriod(uint _newPeriod) external onlyGovernance{
        require(ProposalState == true, "current voting cycle not finished");
        require(_newPeriod > 0, "new period can't be zero");
        VotingPeriod = _newPeriod;
    }

    function ChangePollState(bool _voteStatus) external onlyGovernance{
        if (_voteStatus == true){
            VotingState = true;
            ProposalState = false;
        }
        else{
            VotingState = false;
            ProposalState = true;
        }
    }
    
    function timeStamp() external view returns(uint){
        return block.timestamp;
    }

    function claimRewards(uint _proposalId, uint _qualifiersId) external nonReentrant {
        uint rewards;
        if (_proposalId == WinningProposal[currentPollIndex]){
            VoteDetails memory v = voters[currentPollIndex][_proposalId][msg.sender];
            rewards = v.holdings * WinningProposalRewards[currentPollIndex] / TotalHoldings[currentPollIndex];
        }
        else{
            require(_proposalId == QualifiedProposals[currentPollIndex][_qualifiersId], "Not qualified");
            VoteDetails memory v = voters[currentPollIndex][_proposalId][msg.sender];
            uint singleProposalReward = RunnerUpRewards[currentPollIndex] / QualifiedProposals[currentPollIndex].length;
            rewards = v.holdings * singleProposalReward / TotalHoldings[currentPollIndex];
        }
        delete voters[currentPollIndex][_proposalId][msg.sender];
        if (rewards > 0){
            HAKI.safeTransferFrom(Reserve, msg.sender, rewards);
        }
    }

    function getIdLength(uint _pollIndex) external view returns(uint){
        return ids[_pollIndex].length;
    }

    /** @notice 
        Remove foreign tokens from the smart contract
    */
    function sweep(
        IERC20 token
    ) external {
        token.safeTransfer(Governance, token.balanceOf(address(this)));
    }
    //sweep ETH
    function moveEth(address _dest, uint _amt) external onlyGovernance{
        payable(_dest).transfer(_amt);
    }
    modifier onlyGovernance {
        require(msg.sender == Governance, "governance");
        _;
    }
}