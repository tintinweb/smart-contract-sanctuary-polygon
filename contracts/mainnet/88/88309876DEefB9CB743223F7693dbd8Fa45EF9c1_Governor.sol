    uint256 due;
    uint256 minimumCOMO;
    CommitData[] votes;
    uint256 totalVotedCOMO;
    uint256 revealedVotes;
    uint256[] votesPerCandidates; // candidate id: vote result
    bool finalized;
  }

  struct CommitData {
    uint256 comoAmount;
    bytes32 hash;
  }

  struct RevealData {
    uint256 votedCandidateId;
    bytes32 salt;
  }

  struct Tally {
    string candidate;
    uint256 votes;
  }

  /** @dev OPERATOR_ROLE can manage polls */
  bytes32 public constant OPERATOR_ROLE = keccak256('OPERATOR_ROLE');

  /** @dev ERC1820 */
  IERC1820RegistryUpgradeable internal constant _ERC1820_REGISTRY =
    IERC1820RegistryUpgradeable(0x1820a4B7618BdE71Dce8cdc73aAB6C95905faD24);
  bytes32 private constant _TOKENS_RECIPIENT_INTERFACE_HASH = keccak256('ERC777TokensRecipient');

  // global variables
  Poll[] public polls;
  address public voteSignerAddress;
  IERC777Upgradeable public comoContract;
  mapping(uint256 => mapping(bytes32 => bool)) public hashes; // pollId => hash => isUsed
  mapping(uint256 => mapping(uint256 => address)) public voters; // pollId => voteIndex => voter address
  mapping(uint256 => mapping(address => uint256[])) public userVoteResults; // pollId => voter => votes[candidateId]
  mapping(uint256 => mapping(uint256 => bool)) public isRevealedVote; // pollId => voteIndex => isRevealed

  // events
  event PollCreated(uint256 pollId);
  event Voted(uint256 indexed pollId, uint256 voteIndex, address voter, uint256 comoAmount, bytes32 hash);
  event Revealed(uint256 indexed pollId, uint256 revealedVotes, uint256 remainingVotes);
  event Finalized(uint256 indexed pollId, uint256 burned);

  modifier afterDue(uint256 pollId) {
    require(block.timestamp > polls[pollId].due, 'Governor: not become due');
    _;
  }

  function initialize(address voteSignerAddress_, address comoAddress_) public initializer {
    require(voteSignerAddress_ != address(0), 'Governor: invalid vote signer address');
    _grantRole(AccessControlUpgradeable.DEFAULT_ADMIN_ROLE, msg.sender);
    _grantRole(OPERATOR_ROLE, msg.sender);
    voteSignerAddress = voteSignerAddress_;
    comoContract = IERC777Upgradeable(comoAddress_);

    // register ERC1820 interface
    _ERC1820_REGISTRY.setInterfaceImplementer(address(this), _TOKENS_RECIPIENT_INTERFACE_HASH, address(this));
  }

  function setVoteSignerAddress(address addr) external onlyRole(OPERATOR_ROLE) {
    require(addr != address(0), 'Governor: invalid vote signer address');
    voteSignerAddress = addr;
  }

  function createPoll(
    string memory title_,
    string[] memory candidates_,
    uint256 startAt_,
    uint256 due_,
    uint256 minimumCOMO_
  ) external onlyRole(OPERATOR_ROLE) {
    require(candidates_.length > 1, 'Governor: need candidates at least more than 1');
    require(startAt_ > block.timestamp, 'Governor: cannot start poll from the past');
    require(due_ > startAt_, 'Governor: cannot end poll before the start');

    polls.push(); // initialize empty array at storage
    uint256 id = polls.length - 1;

    polls[id].title = title_;
    polls[id].candidates = candidates_;
    polls[id].startAt = startAt_;
    polls[id].due = due_;
    polls[id].minimumCOMO = minimumCOMO_;
    polls[id].votesPerCandidates = new uint256[](candidates_.length);

    emit PollCreated(polls.length - 1);
  }

  /** @dev implement IERC777RecipientUpgradeable tokensReceived() */
  function tokensReceived(
    address operator,
    address from,
    address to,
    uint256 amount,
    bytes calldata userData,
    bytes calldata operatorData
  ) external {
    require(msg.sender == address(comoContract), 'Governor: Invalid token');

    (uint256 pollId, bytes32 hash, bytes memory signature) = abi.decode(userData, (uint256, bytes32, bytes));
    _vote(pollId, from, amount, hash, signature);
  }

  function _vote(
    uint256 pollId,
    address voter,
    uint256 comoAmount,
    bytes32 hash,
    bytes memory signature
  ) private {
    // check validity of pollId, poll status
    require(pollId < polls.length, 'Governor: invalid poll id');
    require(isInProgress(pollId), 'Governor: not in progress');

    // check minimum como amount
    require(comoAmount >= polls[pollId].minimumCOMO, 'Governor: cannot vote less than minimum amount');

    // verify operator's signature
    address recovered = hash.toEthSignedMessageHash().recover(signature);
    require(recovered == voteSignerAddress, 'Governor: invalid signature');

    // prevent hash replay
    require(!_isReplay(pollId, hash), 'Governor: hash cannot be replayed');

    // mark hash as used
    hashes[pollId][hash] = true;

    // record vote
    Poll storage poll = polls[pollId];
    CommitData memory commitData = CommitData(comoAmount, hash);
    poll.votes.push(commitData);
    poll.totalVotedCOMO += comoAmount;

    // record voter address
    uint256 voteIndex = poll.votes.length - 1;
    voters[pollId][voteIndex] = voter;

    emit Voted(pollId, voteIndex, voter, comoAmount, hash);
  }

  function reveal(
    uint256 pollId,
    RevealData[] calldata data,
    uint256 offset
  ) external afterDue(pollId) onlyRole(OPERATOR_ROLE) {
    require(pollId < polls.length, 'Governor: invalid poll id');
    require(data.length > 0, 'Governor: data should not be empty');
    require(!polls[pollId].finalized, 'Governor: already finalized');
    require(remainingVotes(pollId) > 0, 'Governor: all votes are already revealed');
    require(offset + data.length <= polls[pollId].votes.length, 'Governor: invalid offset');

    Poll storage poll = polls[pollId];
    uint256[] memory tempResults = poll.votesPerCandidates;
    uint256 revealedVoteCount = 0;

    // verify salted hash vote messages
    for (uint256 i = 0; i < data.length; i++) {
      CommitData storage vote = poll.votes[offset + i];
      // continue if already revealed vote
      if (vote.hash == 0x0 && vote.comoAmount == 0) {
        continue;
      }

      require(
        _verifyHash(vote.hash, data[i]),
        'Governor: reveal data does not match with commit data'
      );
      // aggregate tentative results in memory
      tempResults[data[i].votedCandidateId] += vote.comoAmount;
      
      revealedVoteCount++;
      // delete commit data
      delete poll.votes[offset + i];
    }

    poll.votesPerCandidates = tempResults;
    poll.revealedVotes += revealedVoteCount;

    emit Revealed(pollId, revealedVoteCount, remainingVotes(pollId));
  }

  function finalize(uint256 pollId) external afterDue(pollId) onlyRole(OPERATOR_ROLE) {
    require(pollId < polls.length, 'Governor: invalid poll id');
    require(!polls[pollId].finalized, 'Governor: already finalized');
    require(remainingVotes(pollId) == 0, 'Governor: not revealed yet');
    polls[pollId].finalized = true;

    uint256 comoAmountToBurn = MathUpgradeable.min(polls[pollId].totalVotedCOMO, comoContract.balanceOf(address(this)));
    comoContract.burn(comoAmountToBurn, '');
    emit Finalized(pollId, polls[pollId].totalVotedCOMO);
  }

  function _verifyHash(bytes32 hash, RevealData calldata data) private pure returns (bool) {
    return hash == keccak256(abi.encodePacked(data.votedCandidateId, data.salt));
  }

  function _isReplay(uint256 pollId, bytes32 targetHash) private view returns (bool) {
    return hashes[pollId][targetHash];
  }

  function candidates(uint256 pollId) public view returns (string[] memory) {
    require(pollId < polls.length, 'Governor: invalid poll id');
    return polls[pollId].candidates;
  }

  function votes(uint256 pollId) public view returns (CommitData[] memory) {
    require(pollId < polls.length, 'Governor: invalid poll id');
    return polls[pollId].votes;
  }

  function votesPerCandidates(uint256 pollId) public view returns (uint256[] memory) {
    require(pollId < polls.length, 'Governor: invalid poll id');
    return polls[pollId].votesPerCandidates;
  }

  function isInProgress(uint256 pollId) public view returns (bool) {
    require(pollId < polls.length, 'Governor: invalid poll id');
    return block.timestamp >= polls[pollId].startAt && block.timestamp < polls[pollId].due;
  }

  function totalVotes(uint256 pollId) public view returns (uint256) {
    require(pollId < polls.length, 'Governor: invalid poll id');
    return polls[pollId].votes.length;
  }

  function remainingVotes(uint256 pollId) public view returns (uint256) {
    return totalVotes(pollId) - polls[pollId].revealedVotes;
  }

  function pollResult(uint256 pollId) public view returns (Tally[] memory) {
    require(pollId < polls.length, 'Governor: invalid poll id');
    require(polls[pollId].finalized, 'Governor: not finalized');

    Tally[] memory tally = new Tally[](polls[pollId].candidates.length);

    for (uint256 i = 0; i < polls[pollId].candidates.length; i++) {
      tally[i].candidate = polls[pollId].candidates[i];
      tally[i].votes = polls[pollId].votesPerCandidates[i];
    }
    return tally;
  }

  function reset(
    uint256 pollId,
    uint256 missingOffset,
    CommitData[] memory missingCommitData
  ) external afterDue(pollId) onlyRole(OPERATOR_ROLE) {
    require(pollId < polls.length, 'Governor: invalid poll id');
    require(polls[pollId].finalized, 'Governor: not finalized');

    Poll storage poll = polls[pollId];

    poll.finalized = false;
    poll.votesPerCandidates = new uint256[](poll.candidates.length);
    poll.revealedVotes = 0;

    // provide missing data if it has
    for (uint256 i = 0; i < missingCommitData.length; i++) {
      poll.votes[missingOffset + i] = missingCommitData[i];
    }
  }
}