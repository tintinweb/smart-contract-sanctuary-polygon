/// @title Non-transferable token that represent a guild membership.
/// @notice Requires users to specify a custom name, description and logo.
contract GuildTokenFacet is ERC165Base, ERC721Base, ERC721Metadata {
    AppStorage internal s;

    /// @dev Events emitted by this contract:
    ///      - JoinGuild is emitted when a guild is joined.
    ///      - LeaveGuild is emitted when a member leaves a guild.
    ///      - MintGuildToken is emitted on mints.
    ///      - BurnGuildToken is emitted on burns.
    ///      - MintGuildMemberToken is emitted on mints.
    ///      - BurnGuildMemberToken is emitted on burns.
    event JoinGuild(address indexed member, uint256 tokenId, uint256 guildTokenId);
    event LeaveGuild(address indexed member, uint256 tokenId, uint256 guildTokenId);
    event MintGuildToken(address indexed safe, uint256 tokenId);
    event BurnGuildToken(address indexed safe, uint256 tokenId);
    event MintGuildMemberToken(address indexed owner, uint256 tokenId);
    event BurnGuildMemberToken(address indexed owner, uint256 tokenId);
    event UpdateGuild(uint256 tokenId);

    /// @dev Mints a new GuildToken with the provided name, description, and logo, associating it with the sender's address.
    ///      Each address can only mint one GuildToken.
    ///
    ///      Requirements:
    ///      - The sender must not have minted a GuildToken previously.
    ///      - The provided guild name must be unique and valid (not empty, less than 26 characters, and no invalid characters).
    ///
    /// @param _name The name of the new guild.
    /// @param _description A description of the new guild.
    /// @param _logo The URI for the logo image of the new guild.
    function mintGuildToken(
        string calldata _name,
        string calldata _description,
        string calldata _logo
    ) external returns (uint256 tokenId) {
        require(_balanceOf(msg.sender) == 0, "Limited to one token per account.");

        bytes32 nameKey = LibGuild.getNameKey(_name);
        require(s.guildNames[nameKey] == false, "Name not available.");

        tokenId = s.tokenIdCounter;
        s.tokenIdCounter++;

        _safeMint(msg.sender, tokenId);
        s.totalGuilds++;

        setTokenURI(tokenId, createGuildTokenURI(_name, _description, _logo));

        s.owners[msg.sender] = tokenId;
        s.tokenTypes[tokenId] = TokenType.GUILD;
        s.guilds[tokenId].name = _name;
        s.guilds[tokenId].description = _description;
        s.guilds[tokenId].logo = _logo;
        s.guildNames[nameKey] = true;

        emit MintGuildToken(msg.sender, tokenId);
    }

    /// @notice Joins the caller to a guild by minting a NFT linked to the guild ID.
    ///         If caller already is a member the guild is updated to new guild.
    ///         Requirements:
    ///         - Guild ID is valid.
    ///         - Guild not already set to that ID.
    /// @dev Checks for active flag in case guild id is 0 since it is the default.
    /// @param _guildId Token ID of the guild to join.
    function joinGuild(uint256 _guildId) external {
        require(_exists(_guildId), "Invalid guild ID.");

        uint256 tokenId;

        if (_balanceOf(msg.sender) == 0) {
            // new member
            mintMemberToken();
            tokenId = s.owners[msg.sender];
            addMemberToGuild(tokenId, _guildId);
        } else {
            // already a member
            tokenId = s.owners[msg.sender];
            require(s.tokenTypes[tokenId] == TokenType.MEMBER, "Guilds cannot join a guild.");
            if (_guildId == s.members[tokenId].guild) {
                // reactivation
                require(!s.members[tokenId].active, "Already a member.");
                setActiveMember(tokenId);
            } else {
                // switching guilds
                addMemberToGuild(tokenId, _guildId);
            }
        }

        emit JoinGuild(msg.sender, tokenId, _guildId);
    }

    /// @notice Allows to leave a guild while keeping the NFT
    ///         Requirements:
    ///         - Need to own a token.
    ///         - Token must to be a member token.
    ///         - Member need to be active.
    function leaveGuild() external {
        require(_balanceOf(msg.sender) == 1, "Not an owner.");
        uint256 tokenId = s.owners[msg.sender];
        require(s.tokenTypes[tokenId] == TokenType.MEMBER, "Not a member token.");
        require(s.members[tokenId].active, "Not member of a guild.");

        s.members[tokenId].active = false;

        emit LeaveGuild(msg.sender, tokenId, s.members[tokenId].guild);
    }

    /// @dev Allows to check if a member token has the active flag set.
    ///
    /// @param _tokenId The ID of the token to verify.
    /// @return Return true if member is active.
    function isActiveMember(uint256 _tokenId) external view returns (bool) {
        require(_exists(_tokenId), "Invalid token ID.");

        return s.members[_tokenId].active;
    }

    /// @dev Burn (delete) a token.
    ///
    /// @param _tokenId The token ID to burn.
    function burn(uint256 _tokenId) external {
        require(_ownerOf(_tokenId) == msg.sender, "Not owner of token.");

        _burn(_tokenId);
    }

    /// @dev Retrieves an array containing the names of all existing guilds.
    ///
    ///      This function iterates through all token IDs up to the current token counter,
    ///      and if the token exists, adds the associated guild name to the array.
    ///
    ///      Note: This approach may become inefficient as the number of guilds grows.
    ///
    /// @return An array of strings containing the names of all existing guilds.
    function getAllGuildNames() external view returns (string[] memory) {
        string[] memory allGuildNames = new string[](s.totalGuilds);
