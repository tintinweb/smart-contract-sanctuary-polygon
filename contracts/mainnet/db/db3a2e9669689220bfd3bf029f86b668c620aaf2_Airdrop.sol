import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import { Ownable } from "@openzeppelin/contracts/access/Ownable.sol";
import { MerkleProof } from "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";

contract Airdrop is Ownable {

  bytes32 public immutable merkleRoot;
  address public immutable erc20;

  mapping(address => bool) public hasClaimed;

  error AlreadyClaimed();
  error NotInMerkle();
  error InsufficientBalance();

  constructor(
    address _erc20,
    bytes32 _merkleRoot
  ) {
    erc20 = _erc20;
    merkleRoot = _merkleRoot;
  }

  event Claim(address indexed to, uint256 amount);

  function deposit(uint amount) external onlyOwner {
    IERC20(erc20).transferFrom(msg.sender, address(this), amount);
  }

  function withdraw(uint amount) external onlyOwner {
    IERC20(erc20).transfer(msg.sender, amount);
  }

  function claim(address to, uint256 amount, bytes32[] calldata proof) external {
    if (hasClaimed[to]) revert AlreadyClaimed();
    if (IERC20(erc20).balanceOf(address(this)) < amount) revert InsufficientBalance();

    bytes32 leaf = keccak256(abi.encodePacked(to, amount));
    bool isValidLeaf = MerkleProof.verify(proof, merkleRoot, leaf);
    if (!isValidLeaf) revert NotInMerkle();

    hasClaimed[to] = true;

    IERC20(erc20).transfer(to, amount);

    // Emit claim event
    emit Claim(to, amount);
  }
}

