contract TokenDeployer {
    // 5% tax
    address internal constant TAX_RECIPIENT =
        0xAaa2411A3ac395c7CF65406f08266d2b106deD8c;

    // Deployment
    event NewToken(
        address indexed token,
        uint256 maxSupply,
        uint256 lockedLiquidity,
        uint256 deployerAmount,
        uint256 initialEthLiquidity
    );

    function deploy(
        address _univ2Router, // Uniswapv2 compatible router
        string memory _name, // Token name
        string memory _symbol, // Token symbol
        uint256 _maxSupply, // Max supply of Token (50% will be locked for liquidity)
        uint256 _lockedLiquidity, // Amount of tokens (to be locked into liquidity)
        address[] memory _recipients, // Recipients to receive the tokens (will be streamed)
        uint256[] memory _amounts // Amounts to receive
    ) external payable returns (address) {
        // Sanity checks
        require(_recipients.length == _amounts.length, "!length");
        uint256 sum = 0;
        uint256 i = 0;
        uint256 taxAmount = (_maxSupply * 5) / 100;

        // Ahhh I'm optimizing
        do {
            sum += _amounts[i];
            unchecked {
                ++i;
            }
        } while (i < _amounts.length);
        require(sum + _lockedLiquidity + taxAmount <= _maxSupply, "!math");

        // 1. Create Token, approve to router
        Token t = new Token(_name, _symbol, _maxSupply);
        t.approve(_univ2Router, _lockedLiquidity);

        // 2. Lock up liquidity on Uniswap, and send to address(0) address
        IUniswapV2Router02(_univ2Router).addLiquidityETH{value: msg.value}(
            address(t),
            _lockedLiquidity,
            _lockedLiquidity,
            msg.value,
            address(0x42), // Answer to the universe and everything
            block.timestamp
        );

        // 3. Pay the 5% tax
        t.transfer(TAX_RECIPIENT, taxAmount);

        // 4. Distribute the rest
        i = 0;
        do {
            t.transfer(_recipients[i], _amounts[i]);

            unchecked {
                ++i;
            }
        } while (i < _recipients.length);

        // 5. Deployer keeps the rest
        uint256 deployerAmount = _maxSupply -
            taxAmount -
            _lockedLiquidity -
            sum;
        if (deployerAmount > 0) {
            t.transfer(msg.sender, deployerAmount);
        }

        emit NewToken(
            address(t),
            _maxSupply,
            _lockedLiquidity,
            deployerAmount,
            msg.value
        );

        return address(t);
    }
}