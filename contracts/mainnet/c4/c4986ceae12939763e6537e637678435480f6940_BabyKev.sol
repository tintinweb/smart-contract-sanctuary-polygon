// File: contracts/rewards.sol


pragma solidity ^0.8.0;




contract BabyKev is IERC20, Ownable {
    using SafeMath for uint256;

    string private _name;
    string private _symbol;
    uint8 private _decimals;
    uint256 private _totalSupply;
    mapping(address => uint256) private _balances;

    uint256 public buyFeePercentage;
    uint256 public sellFeePercentage;
    uint256 public rewardPercentage;
    uint256 public charityFeePercentage;
    address private _charityAddress;

    mapping(address => uint256) private _rewardDebt;
    mapping(address => uint256) private _lastRewardClaimTime;
    mapping(address => uint256) private _charityFeeAccumulated;

    uint256 public constant CLAIM_INTERVAL = 24 hours;
    uint256 public constant CHARITY_WITHDRAWAL_PERIOD = 30 days;

    constructor() {
        _name = "BabyKev";
        _symbol = "BBK";
        _decimals = 18;
        _totalSupply = 200000000000000000000000000;

        buyFeePercentage = 2;
        sellFeePercentage = 2;
        rewardPercentage = 2;
        charityFeePercentage = 2;
        _charityAddress = address(0); // Placeholder, replace with actual charity address

        _balances[msg.sender] = _totalSupply;
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function decimals() public view returns (uint8) {
        return _decimals;
    }

    function totalSupply() public view override returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address account) public view override returns (uint256) {
        return _balances[account];
    }

    function transfer(address recipient, uint256 amount) public override returns (bool) {
        _transfer(msg.sender, recipient, amount);
        return true;
    }

    function allowance(address, address) public pure override returns (uint256) {
        return 0;
    }

    function approve(address, uint256) public pure override returns (bool) {
        return false;
    }

    function transferFrom(address, address, uint256) public pure override returns (bool) {
        return false;
    }

    function _transfer(address sender, address recipient, uint256 amount) internal {
        require(sender != address(0), "Transfer from the zero address");
        require(recipient != address(0), "Transfer to the zero address");
        require(amount > 0, "Transfer amount must be greater than zero");

        uint256 fee;
        if (sender == owner()) {
            fee = amount.mul(buyFeePercentage).div(100);
        } else {
            fee = amount.mul(sellFeePercentage).div(100);
        }

        uint256 transferAmount = amount.sub(fee);

        _balances[sender] = _balances[sender].sub(amount);
        _balances[recipient] = _balances[recipient].add(transferAmount);

        emit Transfer(sender, recipient, transferAmount);

        // Accumulate rewards
        uint256 reward = fee.mul(rewardPercentage).div(100);
        _rewardDebt[recipient] = _rewardDebt[recipient].add(reward);

        // Accumulate charity fees
        uint256 charityFee = fee.mul(charityFeePercentage).div(100);
        _charityFeeAccumulated[_charityAddress] = _charityFeeAccumulated[_charityAddress].add(charityFee);
    }

    function claimRewards() public {
        require(_rewardDebt[msg.sender] > 0, "No rewards available");

        uint256 rewards = _rewardDebt[msg.sender];
        _rewardDebt[msg.sender] = 0;
        _lastRewardClaimTime[msg.sender] = block.timestamp;

        // Transfer the rewards to the user
        _balances[msg.sender] = _balances[msg.sender].add(rewards);
        emit Transfer(address(this), msg.sender, rewards);
    }

    function claimCharityFee() public {
        require(msg.sender == _charityAddress, "Only charity address can claim charity fees");
        require(_charityFeeAccumulated[msg.sender] > 0, "No charity fees available");

        uint256 charityFees = _charityFeeAccumulated[msg.sender];
        _charityFeeAccumulated[msg.sender] = 0;

        // Transfer the charity fees to the charity address
        _balances[msg.sender] = _balances[msg.sender].add(charityFees);
        emit Transfer(address(this), msg.sender, charityFees);
    }

    function setCharityAddress(address charityAddress) public onlyOwner {
        _charityAddress = charityAddress;
    }

    function getCharityAddress() private view returns (address) {
        return _charityAddress;
    }

    function canClaimRewards() public view returns (bool) {
        return block.timestamp >= _lastRewardClaimTime[msg.sender].add(CLAIM_INTERVAL);
    }

    function canWithdrawCharityFee() public view returns (bool) {
        return block.timestamp >= _lastRewardClaimTime[_charityAddress].add(CHARITY_WITHDRAWAL_PERIOD);
    }
}