pragma solidity =0.8.4;

import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract Rewards {
    bytes32 public merkleRoot;
    address owner;
    address token;

    mapping(address => uint256) public claimed;

    event Claimed(
        address account,
        address token,
        uint256 claimed,
        uint256 amount
    );

    constructor(address _token, bytes32 _merkleRoot) {
        token = _token;
        owner = msg.sender;
        merkleRoot = _merkleRoot;
    }

    /**
     * @dev Throws if called by any account other than the owner.
     */
    modifier onlyOwner() {
        require(msg.sender == owner, "!owner");
        _;
    }

    function setRoot(bytes32 _merkleRoot) public onlyOwner {
        merkleRoot = _merkleRoot;
    }

    function setOwner(address _owner) public onlyOwner {
        owner = _owner;
    }

    function claim(
        address account,
        uint256 total,
        uint256 withdrawAmount,
        bytes32[] calldata merkleProof
    ) public {
        require(account != address(0), "!address");
        require(total > 0 && withdrawAmount > 0, "!amount");
        // Verify the merkle proof.
        bytes32 node = keccak256(abi.encodePacked(account, total));
        require(
            MerkleProof.verify(merkleProof, merkleRoot, node),
            "Rewards: Invalid proof."
        );
        uint256 claimedAmount = claimed[account];
        require((total - claimedAmount) >= withdrawAmount, "!claimed");

        claimed[account] = claimedAmount + withdrawAmount;
        //Transfer token
        require(
            IERC20(token).transfer(account, withdrawAmount),
            "Rewards: Transfer failed."
        );
        emit Claimed(account, token, claimed[account], withdrawAmount);
    }
}