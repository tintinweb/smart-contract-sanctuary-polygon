pragma solidity 0.8.19;

import {AccessControl} from "@openzeppelin/contracts/access/AccessControl.sol";
import {Address} from "@openzeppelin/contracts/utils/Address.sol";
import {ProxyAdmin} from "./proxy/ProxyAdmin.sol";
import {TransparentUpgradeableProxy} from "./proxy/TransparentUpgradeableProxy.sol";

import {Vault} from "./vault/Vault.sol";
import {EntryPointLogic} from "./vault/logics/EntryPointLogic.sol";

contract VaultFactory is AccessControl {
    // =========================
    // Storage
    // =========================

    bytes32 public immutable FACTORY_OWNER_ROLE =
        keccak256("FACTORY_OWNER_ROLE");

    address[] private _implementations;

    struct VaultStatus {
        address vault;
        bool active;
    }

    address[] private _vaults;

    bool private _initialized;

    // =========================
    // Initializer
    // =========================

    // blocks any actions with the original implementations by setting the owner
    // and the _initialized flag
    constructor() {
        _initialized = true;

        _grantRole(FACTORY_OWNER_ROLE, msg.sender);
        _setRoleAdmin(FACTORY_OWNER_ROLE, FACTORY_OWNER_ROLE);
    }

    // initializing VaultFactory as a proxy
    function initialize() external {
        if (_initialized) {
            revert VaultFactory_AlreadyInitialized();
        }
        _initialized = true;

        _grantRole(FACTORY_OWNER_ROLE, msg.sender);
        _setRoleAdmin(FACTORY_OWNER_ROLE, FACTORY_OWNER_ROLE);
    }

    // =========================
    // Events
    // =========================

    event NewVault(address indexed owner, address vault);

    // =========================
    // Errors
    // =========================

    error VaultFactory_VersionNotExists();
    error VaultFactory_SenderIsNotProxyAdminOwner();
    error VaultFactory_AlreadyInitialized();

    // =========================
    // Proxy implementation logic
    // =========================

    /// @notice Adds logic contract for delegatecalls
    /// @param _newImplemetation: address of a new logic implementation
    function addNewImplementation(
        address _newImplemetation
    ) external onlyRole(FACTORY_OWNER_ROLE) {
        _implementations.push(_newImplemetation);
    }

    /// @notice Returns the address of the current implementation by version
    function implementation(
        uint256 version
    ) external view returns (address impl_) {
        uint256 latestVersion = _implementations.length;
        if (version > latestVersion || latestVersion == 0) {
            revert VaultFactory_VersionNotExists();
        }

        impl_ = _implementations[version - 1];
    }

    /// @notice Returns the current numbers of versions in the factory
    function versions() external view returns (uint256 versions_) {
        versions_ = _implementations.length;
    }

    // =========================
    // Main functions
    // =========================

    /**
     * @notice Deploy the latest version of the vault
     * @param proxyAdmin address of the ProxyAdmin contract to which the new Vault contract will be assigned
     * @param proxyAdminCheck bool value, whether or not to check owner of ProxyAdmin
     */
    function deployLatestVersion(
        ProxyAdmin proxyAdmin,
        bool proxyAdminCheck
    ) external returns (ProxyAdmin, address) {
        uint256 latestVersion = _implementations.length;
        if (latestVersion == 0) {
            revert VaultFactory_VersionNotExists();
        }

        return _deploy(proxyAdmin, proxyAdminCheck, latestVersion - 1);
    }

    /**
     * @notice Deploy Vault by version
     * @param proxyAdmin address of the ProxyAdmin contract to which the new Vault contract will be assigned
     * @param proxyAdminCheck bool value, whether or not to check owner of ProxyAdmin
     * @param version the version of the implementation that the new Vault will delegate
     */
    function deploy(
        ProxyAdmin proxyAdmin,
        bool proxyAdminCheck,
        uint256 version
    ) external returns (ProxyAdmin, address) {
        uint256 latestVersion = _implementations.length;

        if (version > latestVersion || latestVersion == 0) {
            revert VaultFactory_VersionNotExists();
        }

        if (version == 0) {
            version = latestVersion;
        }

        return _deploy(proxyAdmin, proxyAdminCheck, version - 1);
    }

    function _deploy(
        ProxyAdmin proxyAdmin,
        bool proxyAdminCheck,
        uint256 version
    ) private returns (ProxyAdmin, address) {
        if (address(proxyAdmin) == address(0)) {
            proxyAdmin = new ProxyAdmin(this, msg.sender);
        } else if (proxyAdminCheck) {
            if (proxyAdmin.owner() != msg.sender) {
                revert VaultFactory_SenderIsNotProxyAdminOwner();
            }
        }

        address impl = _implementations[version];

        address vault = address(
            new TransparentUpgradeableProxy(
                impl,
                address(proxyAdmin),
                abi.encodeCall(Vault.initialize, (msg.sender))
            )
        );

        _vaults.push(address(vault));

        emit NewVault(msg.sender, vault);

        return (proxyAdmin, vault);
    }

    function getVaults() external view returns (address[] memory) {
        return _vaults;
    }

    function getVaultStatuses() external view returns (VaultStatus[] memory) {
        VaultStatus[] memory vaultStatuses = new VaultStatus[](_vaults.length);
        uint256 vaultNumber = vaultStatuses.length;

        for (uint256 vId; vId < vaultNumber; ) {
            address vault = _vaults[vId];

            bool active = EntryPointLogic(vault).isActive();

            vaultStatuses[vId] = VaultStatus({vault: vault, active: active});

            unchecked {
                ++vId;
            }
        }

        return vaultStatuses;
    }
}

