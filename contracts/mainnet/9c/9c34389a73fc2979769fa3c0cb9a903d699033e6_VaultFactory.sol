pragma solidity 0.8.19;

import {IAutomate} from "@gelato/contracts/integrations/Types.sol";

import {Address} from "@openzeppelin/contracts/utils/Address.sol";
import {IAccessControl} from "@openzeppelin/contracts/access/IAccessControl.sol";
import {EnumerableSet} from "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

import {Constants} from "../libraries/Constants.sol";
import {GelatoLogic} from "./GelatoLogic.sol";
import {AccessControlLib} from "../libraries/AccessControlLib.sol";

contract EntryPointLogic is GelatoLogic {
    using EnumerableSet for EnumerableSet.UintSet;
    using Address for address;

    constructor(IAutomate automate) GelatoLogic(automate) {}

    // =========================
    // Storage
    // =========================

    struct Checker {
        bytes data;
        bytes storageRef;
        bytes initData;
    }

    struct Action {
        bytes data;
        bytes storageRef;
        bytes initData;
    }

    struct Workflow {
        Checker[] checkers;
        Action[] actions;
        address executor;
        bool inactive;
    }

    struct EntryPointStorage {
        mapping(uint256 => Workflow) workflows;
        EnumerableSet.UintSet keys;
        bool inactive;
    }

    bytes32 public immutable ENTRY_POINT_LOGIC_STORAGE_POSITION =
        keccak256("vault.workflow.entrypointlogic.storage");

    function _getLocalStorage()
        internal
        view
        returns (EntryPointStorage storage eps)
    {
        bytes32 position = ENTRY_POINT_LOGIC_STORAGE_POSITION;
        assembly {
            eps.slot := position
        }
    }

    // =========================
    // Events
    // =========================

    event EntryPointRun(address indexed executor);
    event EntryPointRunGelato();
    event EntryPointVaultStatusActivated();
    event EntryPointVaultStatusDeactivated();
    event EntryPointWorkflowStatusActivated();
    event EntryPointWorkflowStatusDeactivated();

    // =========================
    // Errors
    // =========================

    error EntryPoint_AlreadyActive();
    error EntryPoint_AlreadyInactive();
    error EntryPoint_VaultIsInactive();
    error EntryPoint_WorkflowIsInactive();

    error EntryPoint_TriggerVerificationFailed();
    error EntryPoint_ReceiverNotAllowed();

    error EntryPoint_KeyNotExists();
    error EntryPoint_KeyAlreadyExists();

    // =========================
    // Status methods
    // =========================

    /**
     * @notice Activates vault
     * @param callbacks Array of callbacks for this call
     *
     * @dev Callbacks are used to, for example, add workflow or add native balance to vault
     */
    function activateVault(
        bytes[] calldata callbacks
    ) external onlyRole(Constants.OWNER_ROLE) {
        EntryPointStorage storage eps = _getLocalStorage();
        if (!eps.inactive) {
            revert EntryPoint_AlreadyActive();
        }

        eps.inactive = false;
        _callback(callbacks);

        emit EntryPointVaultStatusActivated();
    }

    /**
     * @notice Deactivates vault
     * @param callbacks Array of callback for this call
     *
     * @dev Callbacks are used to, for example, delete workflows or remove native balance from vault
     */
    function deactivateVault(
        bytes[] calldata callbacks
    ) external onlyRole(Constants.OWNER_ROLE) {
        EntryPointStorage storage eps = _getLocalStorage();
        if (eps.inactive) {
            revert EntryPoint_AlreadyInactive();
        }

        eps.inactive = true;
        _callback(callbacks);

        emit EntryPointVaultStatusDeactivated();
    }

    /**
     * @notice Activates workflow
     */
    function activateWorkflow(
        uint256 workflowKey
    ) external onlyRole(Constants.OWNER_ROLE) {
        Workflow storage workflow = _getLocalStorage().workflows[workflowKey];
        if (!workflow.inactive) {
            revert EntryPoint_AlreadyActive();
        }

        workflow.inactive = false;

        emit EntryPointWorkflowStatusActivated();
    }

    /**
     * @notice Deactivates Workflow
     */
    function deactivateWorkflow(
        uint256 workflowKey
    ) external onlyRole(Constants.OWNER_ROLE) {
        Workflow storage workflow = _getLocalStorage().workflows[workflowKey];
        if (workflow.inactive) {
            revert EntryPoint_AlreadyInactive();
        }

        workflow.inactive = true;

        emit EntryPointWorkflowStatusDeactivated();
    }

    // returns status of Vault
    function isActive() external view returns (bool active) {
        return !_getLocalStorage().inactive;
    }

    // =========================
    // Actions with workflows
    // =========================

    /**
     * @notice Adds the workflow to entry point facet
     */
    function addWorkflow(
        Checker[] calldata checkers,
        Action[] calldata actions,
        address executor,
        uint256 key
    ) external onlyRole(Constants.OWNER_ROLE) {
        EntryPointStorage storage eps = _getLocalStorage();

        if (!eps.keys.add(key)) {
            revert EntryPoint_KeyAlreadyExists();
        }

        Workflow storage workflow = eps.workflows[key];

        uint256 length = checkers.length;
        for (uint i; i < length; ) {
            workflow.checkers.push();
            Checker storage checker = workflow.checkers[i];

            _initCall(checkers[i].initData, checkers[i].storageRef);
            checker.data = checkers[i].data;
            if (checkers[i].storageRef.length > 0) {
                checker.storageRef = checkers[i].storageRef;
            }

            unchecked {
                // increment loop counter
                ++i;
            }
        }

        length = actions.length;
        for (uint i; i < length; ) {
            workflow.actions.push();
            Action storage action = workflow.actions[i];

            _initCall(actions[i].initData, actions[i].storageRef);
            action.data = actions[i].data;
            if (actions[i].storageRef.length > 0) {
                action.storageRef = actions[i].storageRef;
            }

            unchecked {
                // increment loop counter
                ++i;
            }
        }

        workflow.executor = executor;

        _grantExecutor(executor);
    }

    /**
     * @notice Deletes the workflow in entry point facet by key
     */
    function deleteWorkflow(
        uint256 key
    ) external onlyRole(Constants.OWNER_ROLE) {
        EntryPointStorage storage eps = _getLocalStorage();

        if (!eps.keys.remove(key)) {
            revert EntryPoint_KeyNotExists();
        }

        delete eps.workflows[key];
    }

    function getWorkflow(uint256 key) external view returns (Workflow memory) {
        return _getLocalStorage().workflows[key];
    }

    // =========================
    // Main Logic
    // =========================

    /**
     * @notice Runs the entry point
     */
    function run(uint256 key) public {
        EntryPointStorage storage eps = _getLocalStorage();
        if (eps.inactive) {
            revert EntryPoint_VaultIsInactive();
        }

        Workflow storage workflow = eps.workflows[key];
        if (workflow.inactive) {
            revert EntryPoint_WorkflowIsInactive();
        }

        uint256 length = workflow.checkers.length;

        for (uint256 checkerId; checkerId < length; ) {
            Checker storage checker = workflow.checkers[checkerId];

            bytes memory data = checker.data;
            if (checker.storageRef.length > 0) {
                data = abi.encodePacked(
                    checker.data,
                    keccak256(checker.storageRef)
                );
            }

            bool sucess = abi.decode(
                // delegatecall from OWNER/ADMIN roles
                Address.functionDelegateCall(
                    address(this),
                    data,
                    string(
                        abi.encode(
                            "EntryPoint: checker call ",
                            checkerId,
                            " failed"
                        )
                    )
                ),
                (bool)
            );

            if (!sucess) {
                revert EntryPoint_TriggerVerificationFailed();
            }

            unchecked {
                // increment loop counter
                ++checkerId;
            }
        }

        length = workflow.actions.length;
        for (uint256 actionId; actionId < length; ) {
            Action storage action = workflow.actions[actionId];
            bytes memory data = action.data;
            if (action.storageRef.length > 0) {
                data = abi.encodePacked(
                    action.data,
                    keccak256(action.storageRef)
                );
            }

            // delegatecall from OWNER/ADMIN roles
            Address.functionDelegateCall(
                address(this),
                data,
                string(
                    abi.encode("EntryPoint: action call ", actionId, " failed")
                )
            );

            unchecked {
                // increment loop counter
                ++actionId;
            }
        }

        emit EntryPointRun(msg.sender);
    }

    /**
     * @param receiver if it is not address(0) - transfer remaining eth balance after launch
     */
    function runGelato(address receiver, uint256 key) external returns (bool) {
        run(key);

        (uint256 fee, address feeToken) = _getFeeDetails();

        _transfer(fee, feeToken);

        if (receiver != address(0)) {
            if (!AccessControlLib.hasRole(Constants.OWNER_ROLE, receiver)) {
                revert EntryPoint_ReceiverNotAllowed();
            }

            (bool success, ) = receiver.call{value: address(this).balance}("");
            if (!success) {
                revert Gelato_TransferFailed();
            }
        }

        emit EntryPointRunGelato();

        return true;
    }

    // =========================
    // Private function
    // =========================

    function _grantExecutor(address executor) private {
        Address.functionDelegateCall(
            address(this),
            abi.encodeCall(
                IAccessControl.grantRole,
                (Constants.ADMIN_ROLE, executor)
            )
        );
    }

    // internal callback function
    function _callback(bytes[] memory datas) private {
        if (datas.length > 0) {
            uint256 datasNumber = datas.length;
            for (uint256 callbackId; callbackId < datasNumber; ) {
                // delegatecall only from OWNER
                address(this).functionDelegateCall(datas[callbackId]);

                unchecked {
                    // increment loop counter
                    ++callbackId;
                }
            }
        }
    }

    function _initCall(bytes memory data, bytes memory storageRef) private {
        if (data.length > 0) {
            if (storageRef.length > 0) {
                data = abi.encodePacked(data, keccak256(storageRef));
            }

            // delegatecall only from OWNER
            address(this).functionDelegateCall(data);
        }
    }
}

