    function mintChamberAndTransfer(
        MintChamberData calldata mintChamberData,
        ITradeIssuerV2.ContractCallInstruction[] memory contractCallInstructions,
        address destination
    ) external;

    function withdrawTokenBalance(address _token) external;
}

