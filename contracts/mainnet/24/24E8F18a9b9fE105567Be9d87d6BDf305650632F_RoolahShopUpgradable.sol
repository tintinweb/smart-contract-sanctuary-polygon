     */
    function initialize(
        address rooTroopNFT,
        address roolah,
        uint256 rooToRoolahRate,
        address etherReceiver,
        address signer
    ) public initializer {
        __Ownable_init();
        _updateDependencies(rooTroopNFT, roolah);
        _setRooToRoolahConversionRate(rooToRoolahRate);
        _setEtherReceiver(etherReceiver);
        _setMessageSigner(signer);
